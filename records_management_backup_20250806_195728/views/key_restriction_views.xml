<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customer Key Restriction Form Enhancement -->
    <record id="view_partner_form_key_restriction" model="ir.ui.view">
        <field name="name">res.partner.form.key.restriction</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page name="key_restrictions" string="Key Restrictions" groups="records_management.group_records_manager">
                    <group>
                        <group name="key_restriction_status">
                            <field name="key_restriction_status" widget="badge" decoration-success="key_restriction_status == 'allowed'" decoration-danger="key_restriction_status == 'restricted'"/>
                            <field name="key_issuance_allowed"/>
                        </group>
                        <group name="key_restriction_details" invisible="key_issuance_allowed">
                            <field name="key_restriction_reason" required="not key_issuance_allowed"/>
                            <field name="key_restriction_date"/>
                            <field name="key_restriction_approved_by"/>
                            <field name="restricted_unlock_count"/>
                        </group>
                    </group>

                    <group name="key_restriction_notes" invisible="key_issuance_allowed">
                        <field name="key_restriction_notes" nolabel="1" placeholder="Additional notes about key restrictions..."/>
                    </group>

                    <div class="oe_button_box" name="key_restriction_buttons" invisible="key_issuance_allowed">
                        <button name="action_view_unlock_services" type="object" class="oe_stat_button" icon="fa-unlock-alt">
                            <field name="restricted_unlock_count" widget="statinfo" string="Unlock Services"/>
                        </button>
                    </div>
                </page>
            </xpath>

            <!-- Add key restriction warning to the top of form -->
            <xpath expr="//sheet" position="before">
                <div class="alert alert-warning" role="alert" invisible="key_issuance_allowed or not id">
                    <strong>Key Restriction Warning:</strong> 
                    This customer is restricted from receiving bin keys. 
                    Use bin unlock service instead.
                    <br/>
                    <strong>Reason:</strong>
                    <field name="key_restriction_reason" readonly="1" nolabel="1"/>
                </div>
            </xpath>

            <!-- Add action buttons to button box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_restrict_key_issuance" type="object" class="oe_stat_button" icon="fa-ban" invisible="not key_issuance_allowed" groups="records_management.group_records_manager">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Restrict</span>
                        <span class="o_stat_text">Keys</span>
                    </div>
                </button>

                <button name="action_allow_key_issuance" type="object" class="oe_stat_button" icon="fa-key" invisible="key_issuance_allowed" groups="records_management.group_records_manager">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Allow</span>
                        <span class="o_stat_text">Keys</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Customer List View Enhancement -->
    <record id="view_partner_tree_key_restriction" model="ir.ui.view">
        <field name="name">res.partner.tree.key.restriction</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                <field name="key_restriction_status" widget="badge" decoration-success="key_restriction_status == 'allowed'" decoration-danger="key_restriction_status == 'restricted'" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Key Restriction Wizard Form -->
    <record id="view_key_restriction_wizard_form" model="ir.ui.view">
        <field name="name">key.restriction.wizard.form</field>
        <field name="model">key.restriction.wizard</field>
        <field name="arch" type="xml">
            <form string="Key Restriction Management">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="action"/>
                    </group>

                    <group name="restriction_details" invisible="action != 'restrict'">
                        <group>
                            <field name="restriction_reason" required="action == 'restrict'"/>
                            <field name="effective_date"/>
                        </group>
                        <group>
                            <field name="restriction_notes" nolabel="1" placeholder="Enter detailed notes about the key restriction..."/>
                        </group>
                    </group>

                    <group name="allow_details" invisible="action != 'allow'">
                        <field name="allow_reason" nolabel="1" placeholder="Enter reason for removing key restriction..."/>
                    </group>
                </sheet>

                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Bin Unlock Service Form Enhancement -->
    <record id="view_bin_unlock_service_form_key_restriction" model="ir.ui.view">
        <field name="name">bin.unlock.service.form.key.restriction</field>
        <field name="model">bin.unlock.service</field>
        <field name="inherit_id" ref="records_management.view_bin_unlock_service_form"/>
        <field name="arch" type="xml">
            <!-- Add key restriction warning -->
            <xpath expr="//sheet" position="before">
                <div class="alert alert-info" role="alert" invisible="not customer_key_restricted">
                    <strong>Key Restricted Customer:</strong> 
                    This customer is not allowed to receive bin keys.
                    <br/>
                    <strong>Restriction Reason:</strong>
                    <field name="key_restriction_reason" readonly="1" nolabel="1"/>
                </div>
            </xpath>

            <!-- Add key restriction fields -->
            <xpath expr="//field[@name='reason']" position="after">
                <field name="unlock_reason_code"/>
                <field name="customer_key_restricted" invisible="1"/>
                <field name="key_restriction_reason" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Bin Unlock Service Tree View Enhancement -->
    <record id="view_bin_unlock_service_tree_key_restriction" model="ir.ui.view">
        <field name="name">bin.unlock.service.tree.key.restriction</field>
        <field name="model">bin.unlock.service</field>
        <field name="inherit_id" ref="records_management.view_bin_unlock_service_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='urgency']" position="after">
                <field name="unlock_reason_code" optional="hide"/>
                <field name="customer_key_restricted" widget="boolean_toggle" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Search view for key-restricted customers -->
    <record id="view_partner_search_key_restriction" model="ir.ui.view">
        <field name="name">res.partner.search.key.restriction</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='supplier']" position="after">
                <separator/>
                <filter name="key_restricted" string="Key Restricted" domain="[('key_issuance_allowed', '=', False)]"/>
                <filter name="key_allowed" string="Key Allowed" domain="[('key_issuance_allowed', '=', True)]"/>
            </xpath>
        </field>
    </record>

    <!-- Search view for bin unlock services -->
    <record id="view_bin_unlock_service_search_key_restriction" model="ir.ui.view">
        <field name="name">bin.unlock.service.search.key.restriction</field>
        <field name="model">bin.unlock.service</field>
        <field name="inherit_id" ref="records_management.view_bin_unlock_service_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_services']" position="after">
                <separator/>
                <filter name="key_restriction" string="Key Restriction Services" domain="[('unlock_reason_code', '=', 'key_restriction')]"/>
                <filter name="key_restricted_customers" string="Key Restricted Customers" domain="[('customer_key_restricted', '=', True)]"/>
            </xpath>
        </field>
    </record>

</odoo>
