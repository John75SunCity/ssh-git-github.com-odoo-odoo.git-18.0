<odoo noupdate="1">
    <data>
        <!-- NAID Security Groups -->
        <record id="group_naid_security_officer" model="res.groups">
            <field name="name">NAID Security Officer</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="comment">NAID Security Officers can review audit logs, verify compliance, and manage security policies.</field>
        </record>

        <record id="group_naid_destruction_operator" model="res.groups">
            <field name="name">NAID Destruction Operator</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="comment">NAID Destruction Operators can perform destruction processes and witness destruction activities.</field>
        </record>

        <record id="group_naid_auditor" model="res.groups">
            <field name="name">NAID Auditor</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="comment">NAID Auditors can access all audit logs and compliance reports for review purposes.</field>
        </record>

        <record id="group_naid_compliance_manager" model="res.groups">
            <field name="name">NAID Compliance Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="comment">NAID Compliance Managers can manage all compliance policies, employee credentials, and audit requirements.</field>
        </record>

        <!-- NAID Access Rules -->
        <record id="access_naid_audit_log_security_officer" model="ir.rule">
            <field name="name">NAID Audit Log: Security Officer</field>
            <field name="model_id" ref="records_management.model_naid_audit_log"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_naid_security_officer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="access_naid_audit_log_auditor" model="ir.rule">
            <field name="name">NAID Audit Log: Auditor Read-Only</field>
            <field name="model_id" ref="records_management.model_naid_audit_log"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_naid_auditor'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="access_naid_compliance_policy_manager" model="ir.rule">
            <field name="name">NAID Compliance Policy: Manager</field>
            <field name="model_id" ref="records_management.model_naid_compliance_policy"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_naid_compliance_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="access_naid_chain_custody_operator" model="ir.rule">
            <field name="name">NAID Chain of Custody: Destruction Operator</field>
            <field name="model_id" ref="records_management.model_naid_chain_custody"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_naid_destruction_operator'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Employee NAID Fields Access Rules -->
        <record id="access_hr_employee_naid_compliance" model="ir.rule">
            <field name="name">HR Employee NAID: Compliance Manager</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_naid_compliance_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="access_hr_employee_naid_security" model="ir.rule">
            <field name="name">HR Employee NAID: Security Officer Read</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_naid_security_officer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Grant base access to Records Management groups -->
        <record id="records_management.group_records_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_naid_security_officer'))]"/>
        </record>

        <record id="records_management.group_records_user" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_naid_destruction_operator'))]"/>
        </record>
    </data>
</odoo>
