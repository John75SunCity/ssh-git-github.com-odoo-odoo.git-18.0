<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_records_service_type" model="ir.actions.report">
        <field name="name">Records Service Type</field>
        <field name="model">records.service.type</field>
        <field name="report_type">qweb-html</field>
        <field name="report_file">addon.report_records_service_type</field>
        <field name="print_report_name">'%s' % (doc.name)</field>
        <field name="binding_type">report</field>

    <template id="report_records_service_type_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Title</h2>
                        <h2 t-out="doc.name"/>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            <tbody>
                                <t t-if="doc.field_ids">
                                    <tr t-foreach="doc.field_ids" t-as="field">
                                        <td>
                                            <span t-out="field.name"/>
                                        </td>
                                        <td>
                                            <span t-out="field.description"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
