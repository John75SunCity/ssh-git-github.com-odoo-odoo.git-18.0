<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Hard Drive Scanner Template -->
    <t t-name="records_management.HardDriveScannerAction">
        <div class="o_hard_drive_scanner d-flex flex-column align-items-center justify-content-center p-4"
             style="min-height: 300px; background-color: #f8f9fa;">
            
            <div class="scanner-status text-center mb-4">
                <h3 class="mb-3">
                    <i class="fa fa-barcode fa-2x text-primary me-2"/>
                    Hard Drive Scanner
                </h3>
                
                <div t-if="state.scanning" class="alert alert-info">
                    <i class="fa fa-spinner fa-spin me-2"/>
                    <span>Scanning in progress... Point camera at barcode</span>
                </div>
                
                <div t-if="state.scannedCount > 0" class="mt-3">
                    <div class="badge bg-success fs-4 p-3">
                        <i class="fa fa-hdd-o me-2"/>
                        <span t-esc="state.scannedCount"/> Drives Scanned
                    </div>
                    <div t-if="state.lastScanned" class="text-muted mt-2">
                        Last: <code t-esc="state.lastScanned"/>
                    </div>
                </div>
            </div>
            
            <div class="scanner-actions mt-4">
                <button t-if="!state.scanning" 
                        class="btn btn-primary btn-lg me-2"
                        t-on-click="startScanning">
                    <i class="fa fa-camera me-2"/>
                    Start Scanning
                </button>
                
                <button class="btn btn-success btn-lg"
                        t-on-click="onFinish">
                    <i class="fa fa-check me-2"/>
                    Done (<t t-esc="state.scannedCount"/> drives)
                </button>
            </div>
            
            <div class="scanner-help text-muted mt-4 text-center">
                <p><i class="fa fa-info-circle me-1"/>
                    Point your camera at each hard drive barcode.
                    <br/>The scanner will automatically add each drive to your list.
                </p>
            </div>
        </div>
    </t>

</templates>
