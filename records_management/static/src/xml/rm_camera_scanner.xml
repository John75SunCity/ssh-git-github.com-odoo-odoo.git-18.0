<?xml version="1.0" encoding="UTF-8"?>
<!--
    Records Management Camera Barcode Scanner Templates
    
    OWL templates for the camera scanner client action.
    The actual scanner UI is provided by Scanbot SDK RTU.
    
    @author Records Management System
    @version 18.0.1.3.0
    @license LGPL-3
-->
<templates xml:space="preserve">

    <!-- Client Action Template - Shows loading state while scanner launches -->
    <t t-name="records_management.CameraScannerAction">
        <div class="rm-scanner-action d-flex align-items-center justify-content-center" 
             style="min-height: 300px; background: #f8f9fa;">
            <div class="text-center">
                <i class="fa fa-camera fa-4x text-primary mb-3 d-block"/>
                <p class="text-muted">
                    <i class="fa fa-spinner fa-spin me-2"/>
                    Launching camera scanner...
                </p>
            </div>
        </div>
    </t>

</templates>
