<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Demo Work Order Records -->
        <!-- 
            Uses actual work order models:
            - work.order.retrieval
            - container.destruction.work.order
            - container.access.work.order
            - work.order.shredding
        -->

        <!-- Demo Departments for Work Orders (must be created first for references) -->
        <record id="demo_department_legal" model="records.department">
            <field name="name">Legal Department</field>
            <field name="partner_id" ref="base.res_partner_1"/>
            <field name="code">LGL1</field>
            <field name="is_active">True</field>
        </record>

        <record id="demo_department_hr" model="records.department">
            <field name="name">Human Resources</field>
            <field name="partner_id" ref="base.res_partner_2"/>
            <field name="code">HRS1</field>
            <field name="is_active">True</field>
        </record>

        <record id="demo_department_finance" model="records.department">
            <field name="name">Finance Department</field>
            <field name="partner_id" ref="base.res_partner_3"/>
            <field name="code">FIN1</field>
            <field name="is_active">True</field>
        </record>

        <!-- Work Order Retrieval -->
        <record id="demo_retrieval_work_order_001" model="work.order.retrieval">
            <field name="name">RWO-2025-001</field>
            <field name="partner_id" ref="base.res_partner_1"/>
            <field name="work_order_type">document_retrieval</field>
            <field name="priority">2</field>
            <field name="state">assigned</field>
            <field name="scheduled_date" eval="(datetime.datetime.now() + datetime.timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="special_instructions">Urgent retrieval of 2023 legal case files for ongoing litigation</field>
            <field name="portal_visible">True</field>
        </record>

        <record id="demo_retrieval_work_order_002" model="work.order.retrieval">
            <field name="name">RWO-2025-002</field>
            <field name="partner_id" ref="base.res_partner_2"/>
            <field name="work_order_type">box_retrieval</field>
            <field name="priority">1</field>
            <field name="state">draft</field>
            <field name="scheduled_date" eval="(datetime.datetime.now() + datetime.timedelta(days=3)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="special_instructions">Standard retrieval of archived HR files</field>
            <field name="portal_visible">True</field>
        </record>

        <!-- Container Destruction Work Order -->
        <record id="demo_destruction_work_order_001" model="container.destruction.work.order">
            <field name="name">DWO-2025-001</field>
            <field name="partner_id" ref="base.res_partner_2"/>
            <field name="priority">1</field>
            <field name="state">scheduled</field>
            <field name="scheduled_destruction_date" eval="(datetime.datetime.now() + datetime.timedelta(days=15)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="destruction_reason">Scheduled destruction of expired employee records per retention policy</field>
            <field name="destruction_method">shredding</field>
            <field name="witness_required">True</field>
            <field name="portal_visible">True</field>
        </record>

        <!-- Container Access Work Order -->
        <record id="demo_access_work_order_001" model="container.access.work.order">
            <field name="name">AWO-2025-001</field>
            <field name="partner_id" ref="base.res_partner_3"/>
            <field name="priority">0</field>
            <field name="state">completed</field>
            <field name="scheduled_access_date" eval="(datetime.datetime.now() - datetime.timedelta(days=5)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="access_purpose">Access request for Q3 financial audit documents</field>
            <field name="access_type">retrieval</field>
            <field name="portal_visible">True</field>
        </record>

        <record id="demo_access_work_order_002" model="container.access.work.order">
            <field name="name">AWO-2025-002</field>
            <field name="partner_id" ref="base.res_partner_1"/>
            <field name="priority">2</field>
            <field name="state">in_progress</field>
            <field name="scheduled_access_date" eval="datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="access_purpose">Emergency access for legal discovery documents</field>
            <field name="access_type">retrieval</field>
            <field name="portal_visible">True</field>
        </record>

        <!-- Shredding Work Orders -->
        <record id="demo_shredding_work_order_001" model="work.order.shredding">
            <field name="name">SWO-2025-001</field>
            <field name="partner_id" ref="base.res_partner_1"/>
            <field name="priority">1</field>
            <field name="state">draft</field>
            <field name="scheduled_date" eval="(datetime.datetime.now() + datetime.timedelta(days=7)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="service_type">onsite</field>
            <field name="material_type">paper</field>
            <field name="special_instructions">On-site shredding of confidential legal documents</field>
            <field name="certificate_required">True</field>
            <field name="portal_visible">True</field>
        </record>

        <record id="demo_shredding_work_order_002" model="work.order.shredding">
            <field name="name">SWO-2025-002</field>
            <field name="partner_id" ref="base.res_partner_2"/>
            <field name="priority">0</field>
            <field name="state">scheduled</field>
            <field name="scheduled_date" eval="(datetime.datetime.now() + datetime.timedelta(days=14)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="service_type">offsite</field>
            <field name="material_type">hard_drive</field>
            <field name="special_instructions">Secure destruction of retired IT equipment</field>
            <field name="certificate_required">True</field>
            <field name="portal_visible">True</field>
        </record>

    </data>
</odoo>
