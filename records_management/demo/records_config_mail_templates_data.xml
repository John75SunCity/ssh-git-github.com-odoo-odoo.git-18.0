<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Test Notification Email Template -->
        <record id="email_template_test_notification" model="mail.template">
            <field name="name">Records Management: Test Notification</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="subject">Records Management Configuration Test</field>
            <field name="email_from">{{ (object.company_id.email or user.email) }}</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p>Hello {{ object.name }},</p>
    <p>
        This is a test notification from the Records Management system configuration.
        If you receive this email, your notification settings are working correctly.
    </p>
    <p>
        <strong>Configuration Details:</strong><br/>
        - Email notifications: Enabled<br/>
        - Test sent at: {{ datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S') }}<br/>
        - System: Records Management Enterprise Edition
    </p>
    <p>
        Best regards,<br/>
        Records Management System
    </p>
</div>
            </field>
        </record>
    </data>
</odoo>
