        <!-- Type 02: Legal/Banker Box for legal documents -->
        <!-- Type 03: Map Box for blueprints and large format documents -->
        <!-- Type 04: Odd Size/Temp Box for irregular items -->
        <!-- Type 05: Archive Box for long-term preservation -->
        <!-- Type 06: Pathology/Media/Emergency boxes for specialized needs -->

        <!-- Demo Containers - Using actual Type 01-06 container classifications -->
        <record id="demo_container_001" model="records.container">
            <field name="name">Container-001</field>
            <field name="barcode">RM001234567890</field>
            <field name="container_type_id" ref="container_type_01_standard"/>
