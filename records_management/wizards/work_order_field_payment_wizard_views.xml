<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Field Payment Collection Wizard Form -->
        <record id="work_order_field_payment_wizard_view_form" model="ir.ui.view">
            <field name="name">work.order.field.payment.wizard.view.form</field>
            <field name="model">work.order.field.payment.wizard</field>
            <field name="arch" type="xml">
                <form string="Collect Payment">
                    <group>
                        <group string="Customer &amp; Amount">
                            <field name="partner_id"/>
                            <field name="outstanding_balance" widget="monetary"/>
                            <field name="amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Payment Details">
                            <field name="payment_method" widget="radio"/>
                            <field name="journal_id" options="{'no_create': True}"/>
                            <field name="check_number" placeholder="Enter check #..." 
                                   invisible="payment_method != 'check'" required="payment_method == 'check'"/>
                            <field name="card_last_four" placeholder="Last 4 digits..." 
                                   invisible="payment_method not in ('credit_card', 'debit_card')"/>
                            <field name="memo" placeholder="Payment reference..."/>
                        </group>
                    </group>
                    
                    <group string="Payment Proof (Photo)">
                        <div class="alert alert-info" role="status">
                            <i class="fa fa-camera"/> Take a photo of check, cash, or receipt for verification
                        </div>
                        <field name="payment_proof" widget="image" class="oe_avatar" 
                               options="{'size': [300, 300]}"/>
                        <field name="payment_proof_filename" invisible="1"/>
                    </group>
                    
                    <group string="Collection Notes">
                        <field name="collection_notes" placeholder="Any notes about this payment collection..." nolabel="1"/>
                    </group>
                    
                    <group invisible="1">
                        <field name="work_order_reference"/>
                        <field name="work_order_model"/>
                        <field name="work_order_id"/>
                    </group>
                    
                    <footer>
                        <button name="action_process_payment" string="ðŸ’³ Process Payment" type="object" class="btn-primary"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action to open the wizard -->
        <record id="action_work_order_field_payment_wizard" model="ir.actions.act_window">
            <field name="name">Collect Payment</field>
            <field name="res_model">work.order.field.payment.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
