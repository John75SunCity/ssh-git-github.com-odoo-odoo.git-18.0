<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Retrieval Scan Wizard Form View -->
        <record id="retrieval_scan_wizard_view_form" model="ir.ui.view">
            <field name="name">retrieval.scan.wizard.form</field>
            <field name="model">retrieval.scan.wizard</field>
            <field name="arch" type="xml">
                <form string="Container Scanner">
                    <sheet>
                        <!-- Header with Work Order Info -->
                        <div class="oe_title">
                            <h1>
                                <field name="work_order_id" readonly="1" options="{'no_open': True}"/>
                            </h1>
                            <h3>
                                <field name="partner_id" readonly="1" options="{'no_open': True}"/>
                            </h3>
                        </div>

                        <!-- Progress Bar -->
                        <group>
                            <field name="progress_percentage" widget="progressbar"/>
                        </group>

                        <!-- Statistics -->
                        <group>
                            <group string="Progress">
                                <field name="total_items" readonly="1"/>
                                <field name="scanned_items" readonly="1"/>
                                <field name="remaining_items" readonly="1"/>
                            </group>
                        </group>

                        <!-- Scan Input -->
                        <group string="Scan Container">
                            <field name="barcode_input" placeholder="Scan barcode here..."/>
                        </group>

                        <!-- Last Scan Result -->
                        <group string="Last Scan Result" invisible="not last_scan_result">
                            <field name="last_scan_result" readonly="1"/>
                            <field name="last_scan_success" invisible="1"/>
                        </group>

                        <!-- Pick List (remaining items) -->
                        <group string="Items to Pick" invisible="remaining_items == 0">
                            <field name="item_ids" nolabel="1" readonly="1">
                                <list decoration-success="retrieved" decoration-muted="retrieved">
                                    <field name="box_id"/>
                                    <field name="item_description"/>
                                    <field name="retrieved" widget="boolean_toggle" readonly="1"/>
                                </list>
                            </field>
                        </group>

                        <!-- All Done Message -->
                        <div class="alert alert-success text-center" invisible="remaining_items != 0">
                            <strong>âœ“ All containers scanned!</strong>
                            <p>Click "Complete Picking" to finish.</p>
                        </div>
                    </sheet>
                    <footer>
                        <button name="action_process_scan" string="Scan" type="object" class="btn-primary"/>
                        <button name="action_complete_picking" string="Complete Picking" type="object" 
                                class="btn-success" invisible="remaining_items != 0"/>
                        <button name="action_mark_all_scanned" string="Mark All Scanned (Override)" type="object" 
                                class="btn-warning" invisible="remaining_items == 0"
                                groups="records_management.group_records_manager"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
