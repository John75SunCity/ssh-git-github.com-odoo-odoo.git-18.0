<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Retrieval Scan Wizard Form View -->
        <record id="retrieval_scan_wizard_view_form" model="ir.ui.view">
            <field name="name">retrieval.scan.wizard.form</field>
            <field name="model">retrieval.scan.wizard</field>
            <field name="arch" type="xml">
                <form string="Container Scanner">
                    <!-- Hidden barcode handler - captures hardware scanner input -->
                    <field name="barcode_input" widget="barcode_handler"/>
                    
                    <sheet>
                        <!-- Header with Work Order Info -->
                        <div class="oe_title">
                            <h1>
                                <field name="work_order_id" readonly="1" options="{'no_open': True}"/>
                            </h1>
                            <h3>
                                <field name="partner_id" readonly="1" options="{'no_open': True}"/>
                            </h3>
                        </div>

                        <!-- Progress Bar - Large for mobile visibility -->
                        <group>
                            <div class="alert alert-info text-center" role="status" style="font-size: 1.2em;">
                                <strong>Scanned: <field name="scanned_items" readonly="1" class="d-inline"/> / <field name="total_items" readonly="1" class="d-inline"/></strong>
                            </div>
                            <field name="progress_percentage" widget="progressbar"/>
                        </group>

                        <!-- Scan Input - Large touch-friendly input -->
                        <group string="Scan Container Barcode">
                            <field name="barcode_input" 
                                   placeholder="Tap here and scan barcode..."
                                   class="o_input_lg"
                                   autocomplete="off"/>
                        </group>

                        <!-- Last Scan Result - Prominent feedback -->
                        <div class="alert alert-success text-center" role="status" style="font-size: 1.1em;" invisible="not last_scan_success">
                            <i class="fa fa-check-circle" title="Success"/> <field name="last_scan_result" readonly="1" class="d-inline"/>
                        </div>
                        <div class="alert alert-danger text-center" role="alert" style="font-size: 1.1em;" invisible="last_scan_success or not last_scan_result">
                            <i class="fa fa-times-circle" title="Error"/> <field name="last_scan_result" readonly="1" class="d-inline"/>
                        </div>

                        <!-- Remaining items count -->
                        <group invisible="remaining_items == 0">
                            <div class="text-center" style="font-size: 1.1em;">
                                <strong><field name="remaining_items" readonly="1" class="d-inline"/> containers remaining</strong>
                            </div>
                        </group>

                        <!-- Pick List (remaining items) - Simplified for mobile -->
                        <group string="ðŸ“¦ Items to Pick" invisible="remaining_items == 0">
                            <field name="item_ids" nolabel="1" readonly="1">
                                <list decoration-success="retrieved" decoration-muted="retrieved">
                                    <field name="box_id"/>
                                    <field name="retrieved" widget="boolean_toggle" readonly="1"/>
                                </list>
                            </field>
                        </group>

                        <!-- All Done Message -->
                        <div class="alert alert-success text-center" role="status" style="font-size: 1.2em; padding: 20px;" invisible="remaining_items != 0">
                            <i class="fa fa-check-circle fa-2x" title="Complete"/>
                            <h3>âœ“ All containers scanned!</h3>
                            <p>Tap "Complete Picking" to finish.</p>
                        </div>
                    </sheet>
                    <footer>
                        <button name="action_process_scan" string="Scan" type="object" class="btn-primary btn-lg" icon="fa-barcode"/>
                        <button name="action_complete_picking" string="âœ“ Complete Picking" type="object" 
                                class="btn-success btn-lg" invisible="remaining_items != 0"/>
                        <button name="action_mark_all_scanned" string="Override: Mark All" type="object" 
                                class="btn-warning" invisible="remaining_items == 0"
                                groups="records_management.group_records_manager"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
