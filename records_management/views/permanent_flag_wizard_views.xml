<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Tree view for PERMANENT -->
    
    <!-- Form view for Wizard -->
    <record id="records_permanent_flag_wizard_view_form" model="ir.ui.view">
        <field name="name">records.permanent.flag.wizard.view.form</field>
        <field name="model">records.permanent.flag.wizard</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <h1>
                        <span t-if="context.get('default_action_type') == 'mark'">
                            üõ°Ô∏è Mark Documents as PERMANENT
                        </span>
                        <span t-if="context.get('default_action_type') == 'unmark'">
                            ‚ö†Ô∏è Remove PERMANENT Flag (Admin Only)
                        </span>
                    </h1>
                </header>
                <sheet>
                    <div class="alert alert-info" role="alert" t-if="context.get('default_action_type') == 'mark'">
                        <strong>üõ°Ô∏è PERMANENT RECORD PROTECTION</strong><br/>
                        Documents marked as permanent will be <strong>excluded from all destruction schedules</strong>
                        and shredding rotations. This action requires password verification for security.
                    </div>
                    
                    <div class="alert alert-warning" role="alert" t-if="context.get('default_action_type') == 'unmark'">
                        <strong>‚ö†Ô∏è ADMINISTRATOR SECURITY WARNING</strong><br/>
                        You are about to <strong>remove permanent protection</strong> from documents.
                        This will allow them to be included in destruction schedules again.
                    </div>
                    
                    <group>
                        <group string="üìÑ Documents to Process">
                            <field name="document_count" string="Number of Documents"/>
                            <field name="action_type" readonly="1"/>
                            <field name="document_ids" widget="many2many_tags" readonly="1" 
                                   options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                        
                        <group string="üîê Security Verification">
                            <div class="alert alert-secondary" role="alert">
                                <i class="fa fa-shield"/> <strong>Password Required:</strong><br/>
                                Enter your user password to confirm this security-sensitive action.
                            </div>
                            <field name="user_password" password="True" placeholder="Enter your password"/>
                        </group>
                    </group>
                    
                    <div class="mt-3">
                        <h4>üìã Selected Documents:</h4>
                        <field name="document_ids" mode="list" nolabel="1">
                            <list decoration-success="permanent_flag == True" 
                                  decoration-muted="permanent_flag == False">
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="box_id"/>
                                <field name="permanent_flag" string="üõ°Ô∏è Currently Permanent" widget="boolean"/>
                                <field name="permanent_flag_set_by" string="Set By" 
                                       invisible="not permanent_flag"/>
                                <field name="permanent_flag_set_date" string="Set Date"
                                       invisible="not permanent_flag"/>
                            </list>
                        </field>
                    </div>
                </sheet>
                <footer>
                    <button name="action_confirm" type="object" string="üõ°Ô∏è Confirm Permanent Flag" 
                            class="btn-primary"
                            invisible="action_type != 'mark'"/>
                    <button name="action_confirm" type="object" string="‚ö†Ô∏è Remove Permanent Flag" 
                            class="btn-warning"
                            invisible="action_type != 'unmark'"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</data>

</odoo>
