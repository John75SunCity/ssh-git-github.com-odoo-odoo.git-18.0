<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
    <!-- ============================================================================
         BILLING PERIOD VIEWS - Monthly Storage Billing
         ============================================================================ -->
    
    <!-- List View -->
    <record id="billing_period_view_tree" model="ir.ui.view">
        <field name="name">billing.period.tree</field>
        <field name="model">billing.period</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="invoice_date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" 
                       decoration-warning="state == 'open'" decoration-success="state == 'invoiced'"
                       decoration-muted="state == 'closed'"/>
                <field name="invoice_count"/>
                <field name="total_invoiced" sum="Total"/>
                <field name="active" optional="hide"/>
            </list>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="billing_period_view_form" model="ir.ui.view">
        <field name="name">billing.period.form</field>
        <field name="model">billing.period</field>
        <field name="arch" type="xml">
            <form string="Billing Period">
                <header>
                    <button name="action_open" string="Open Period" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_generate_invoices" string="Generate Invoices" type="object"
                            class="btn-primary" invisible="state not in ('open', 'processing')"/>
                    <button name="action_close" string="Close Period" type="object"
                            class="btn-secondary" invisible="state != 'invoiced'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,invoiced,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g., November 2025"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Period Dates">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="invoice_date"/>
                        </group>
                        <group string="Billing Statistics">
                            <field name="containers_billed"/>
                            <field name="new_containers"/>
                            <field name="customers_billed"/>
                            <field name="total_invoiced"/>
                        </group>
                    </group>
                    <group>
                        <field name="note" placeholder="Notes about this billing period..."/>
                    </group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="billing_period_view_search" model="ir.ui.view">
        <field name="name">billing.period.search</field>
        <field name="model">billing.period</field>
        <field name="arch" type="xml">
            <search string="Billing Periods">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_open" string="Open" domain="[('state', '=', 'open')]"/>
                <filter name="filter_invoiced" string="Invoiced" domain="[('state', '=', 'invoiced')]"/>
                <separator/>
                <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_year" string="Year" context="{'group_by': 'start_date:year'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="billing_period_action" model="ir.actions.act_window">
        <field name="name">Billing Periods</field>
        <field name="res_model">billing.period</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                <i class="fa fa-calendar"/> Create your first billing period
            </p>
            <p><b>Monthly Storage Billing Workflow:</b></p>
            <ol>
                <li>Create a billing period (e.g., "November 2025")</li>
                <li>Click <b>Open Period</b> when ready to bill</li>
                <li>Click <b>Generate Invoices</b> to create customer invoices</li>
                <li>Review and send invoices from Accounting app</li>
                <li>Click <b>Close Period</b> when complete</li>
            </ol>
            <p><b>Invoice Components:</b><br/>
            • <b>Setup Fees:</b> One-time fee for NEW containers (charged once per container)<br/>
            • <b>Storage Fees:</b> Monthly rate × container count by type<br/>
            • <b>Minimum Charge:</b> Applied when storage fees are below minimum<br/>
            </p>
        </field>
    </record>
    
    </data>
</odoo>
