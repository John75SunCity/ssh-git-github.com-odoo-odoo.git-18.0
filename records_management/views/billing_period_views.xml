<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
<!-- Updated XML ID to follow convention: {model_name}_view_{type} -->
    <record id="billing_period_view_tree" model="ir.ui.view">
        <field name="name">billing.period.tree</field>
        <field name="model">billing.period</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="active"/>
                <!-- Added note field for completeness, matching form view -->
                <field name="note"/>
            </list>
        </field>
    </record>
    <!-- Updated XML ID to follow convention -->
    <record id="billing_period_view_form" model="ir.ui.view">
        <field name="name">billing.period.form</field>
        <field name="model">billing.period</field>
        <field name="arch" type="xml">
            <form string="Billing Period">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="active"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Updated XML ID and changed view_mode to tree,form for consistency -->
    <record id="billing_period_action" model="ir.actions.act_window">
        <field name="name">Billing Periods</field>
        <field name="res_model">billing.period</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                <i class="fa fa-calendar"/> Create your first billing period
            </p>
            <p><b>‚ö†Ô∏è Prerequisites:</b></p>
            <ul>
                <li>‚úì <b>Billing module active</b> - Go to: <i>Records Management &gt; Billing</i></li>
                <li>‚úì <b>Date ranges defined</b> - Determine monthly, quarterly, or annual periods</li>
            </ul>
            <p><b>üìã To create a billing period:</b></p>
            <ol>
                <li>Click <b>New</b> to create a period</li>
                <li>Enter a <b>Period Name</b> (e.g., "January 2024", "Q1 2024")</li>
                <li>Set <b>Start Date</b> (first day of billing period)</li>
                <li>Set <b>End Date</b> (last day of billing period)</li>
                <li>Mark as <b>Active</b> (uncheck to close period)</li>
                <li>Add <b>Notes</b> (special billing instructions or exceptions)</li>
                <li>Click <b>Save</b> to create the billing period</li>
            </ol>
            <p><b>üöÄ Key Features:</b><br/>
            ‚Ä¢ <b>Date range tracking:</b> Define billing start and end dates<br/>
            ‚Ä¢ <b>Active/inactive status:</b> Close completed periods<br/>
            ‚Ä¢ <b>Notes system:</b> Document billing exceptions or adjustments<br/>
            ‚Ä¢ <b>Period naming:</b> Consistent identification (month/quarter/year)<br/>
            </p>
            <p><b>üí° Pro Tips:</b><br/>
            ‚Ä¢ Use consistent naming: "YYYY-MM MonthName" (e.g., "2024-01 January")<br/>
            ‚Ä¢ Create periods in advance (quarterly planning)<br/>
            ‚Ä¢ Mark as inactive after closing to prevent new charges<br/>
            ‚Ä¢ Use notes for holiday schedules or special rates<br/>
            </p>
        </field>
    </record>
    <!-- Updated XML ID to follow convention -->

    <menuitem id="billing_period_menu" name="Billing Periods" parent="records_management.menu_records_billing" action="billing_period_action" sequence="10"/>

    
    </data>
</odoo>
