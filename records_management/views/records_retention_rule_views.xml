<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="records_retention_rule_view_tree" model="ir.ui.view">
            <field name="name">records.retention.rule.view.tree</field>
            <field name="model">records.retention.rule</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                </list>
            </field>
        </record>
        <record id="records_retention_rule_view_form" model="ir.ui.view">
            <field name="name">records.retention.rule.view.form</field>
            <field name="model">records.retention.rule</field>
            <field name="arch" type="xml">
                <form string="Records.Retention.Rule">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Name..." />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="records_retention_rule_view_search" model="ir.ui.view">
            <field name="name">records.retention.rule.view.search</field>
            <field name="model">records.retention.rule</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="1" string="Group By">
                        <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="action_records_retention_rule" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model records.retention.rule has state field - consider using default search filters -->
            <field name="name">Records.Retention.Rule</field>
            <field name="res_model">records.retention.rule</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new records.retention.rule.
            </p>
            </field>
        </record>
    </data>
</odoo>
