<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Portal Error Template -->
    <template id="portal_error" name="Portal Error Page">
        <t t-call="portal.portal_layout">
            <t t-set="additional_title">Error</t>
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="alert alert-danger" role="alert">
                            <h4 class="alert-heading">
                                <i class="fa fa-exclamation-triangle"></i>
                                Error Occurred
                            </h4>
                            <hr/>
                            <p class="mb-0">
                                <strong>Message:</strong>
                                <span t-esc="error_message or 'An unexpected error occurred. Please try again or contact support.'"/>
                            </p>
                            <t t-if="error_details">
                                <hr/>
                                <p class="mb-0 small text-muted">
                                    <strong>Details:</strong>
                                    <span t-esc="error_details"/>
                                </p>
                            </t>
                        </div>
                        <div class="text-center mt-4">
                            <a href="/my/home" class="btn btn-primary">
                                <i class="fa fa-home"></i>
                                Return to Portal Home
                            </a>
                            <a href="javascript:history.back()" class="btn btn-secondary ml-2">
                                <i class="fa fa-arrow-left"></i>
                                Go Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
