<?xml version="1.0" encoding="utf-8"?>
<odoo><!-- List view for retrieval.item.base -->
    <record id="retrieval_item_base_view_tree" model="ir.ui.view">
        <field name="name">retrieval.item.base.view.tree</field>
        <field name="model">retrieval.item.base</field>
        <field name="arch" type="xml">
        <list>
        <field name="name"/>
        </list>
    </field>
    </record>

<!-- Form view for retrieval.item.base -->
    <record id="retrieval_item_base_view_form" model="ir.ui.view">
        <field name="name">retrieval.item.base.view.form</field>
        <field name="model">retrieval.item.base</field>
        <field name="arch" type="xml">
        <form string="Retrieval.Item.Base">
            <sheet>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
        <field name="name" placeholder="Name..."/>
                    </h1>
                </div>
            </sheet>
        </form>
    </field>
    </record>

<!-- Search view for retrieval.item.base -->
    <record id="retrieval_item_base_view_search" model="ir.ui.view">
        <field name="name">retrieval.item.base.view.search</field>
        <field name="model">retrieval.item.base</field>
        <field name="arch" type="xml">
        <search>
            <group expand="1" string="Group By">
                <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
            </group>
        </search>
    </field>
    </record>

<!-- Action for retrieval.item.base -->
    <record id="action_retrieval_item_base" model="ir.actions.act_window">
        <field name="name">Retrieval.Item.Base</field>
        <field name="res_model">retrieval.item.base</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Click to add a new retrieval.item.base.
        </p>
    </field>
    </record>

    </odoo>
