<?xml version="1.0" encoding="utf-8"?>
<odoo><!-- List view for records.container.transfer.line -->
    <record id="records_container_transfer_line_view_tree" model="ir.ui.view">
        <field name="name">records.container.transfer.line.view.list</field>
        <field name="model">records.container.transfer.line</field>
        <field name="arch" type="xml">
        <list>
        <field name="name"/>
        </list>
    </field>
    </record>

<!-- View records.container.transfer.line form -->
    <record id="records_container_transfer_line_view_form" model="ir.ui.view">
        <field name="name">records.container.transfer.line.view.form</field>
        <field name="model">records.container.transfer.line</field>
        <field name="arch" type="xml">
        <form string="Records Container Transfer Line">
            <sheet>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
        <field name="name" placeholder="Name..."/>
                    </h1>
                </div>
            </sheet>
        </form>
    </field>
    </record>

<!-- View records.container.transfer.line search -->
    <record id="records_container_transfer_line_view_search" model="ir.ui.view">
        <field name="name">records.container.transfer.line.view.search</field>
        <field name="model">records.container.transfer.line</field>
        <field name="arch" type="xml">
        <search>
            <group expand="1" string="Group By">
                <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
            </group>
        </search>
    </field>
    </record>

<!-- Action records.container.transfer.line -->
    <record id="records_container_transfer_line_action" model="ir.actions.act_window">
        <field name="name">Records Container Transfer Line</field>
        <field name="res_model">records.container.transfer.line</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            There is no examples click here to add new Records Container Transfer Line.
        </p>
    </field>
    </record>

    </odoo>
