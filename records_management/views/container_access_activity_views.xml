<!--
    Container Access Activity Views

    This XML file defines the Odoo views for the `container.access.activity` model in the Records Management module.
    It includes:
      - Tree view for listing container access activities
      - Form view for detailed activity entry and editing
      - Search view for filtering and searching activities
      - Window action for launching the model views
      - (Commented) menu item for navigation integration

    Fields covered include visitor, container, work order, authorization, timing, location, barcode, description, and issue tracking.
-->
<odoo>
    <data>

        <!-- Tree View -->
        <record id="container_access_activity_view_tree" model="ir.ui.view">
            <field name="name">container.access.activity.view.tree</field>
            <field name="model">container.access.activity</field>
            <field name="type">tree</field>
            <field name="arch_db" type="xml">
                <tree string="Container Access Activity" decoration-info="status == 'in_progress'" decoration-success="status == 'completed'">
                    <field name="name"/>
                    <field name="visitor_id"/>
                    <field name="container_id"/>
                    <field name="partner_id"/>
                    <field name="activity_time"/>
                    <field name="description"/>
                    <field name="status"/>
                    <field name="authorized_by_id"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="container_access_activity_view_form" model="ir.ui.view">
            <field name="name">container.access.activity.view.form</field>
            <field name="model">container.access.activity</field>
            <field name="type">form</field>
            <field name="arch_db" type="xml">
                <form string="Container Access Activity">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group name="basic_info">
                                <field name="name"/>
                                <field name="visitor_id"/>
                                <field name="container_id"/>
                                <field name="work_order_id"/>
                                <field name="status"/>
                            </group>
                            <group name="authorization">
                                <field name="authorized_by_id"/>
                                <field name="supervised_by_id"/>
                                <field name="approved_by_id"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <group name="timing">
                                <field name="activity_time"/>
                                <field name="completion_time"/>
                            </group>
                            <group name="container_details">
                                <field name="location_id"/>
                                <field name="partner_id"/>
                                <field name="container_barcode"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" nolabel="1" placeholder="Describe the activity performed..."/>
                            </page>
                            <page string="Issues" name="issues">
                                <group>
                                    <field name="issues_found"/>
                                    <field name="issue_description" attrs="{'invisible': [('issues_found', '=', False)]}"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="container_access_activity_view_search" model="ir.ui.view">
            <field name="name">container.access.activity.view.search</field>
            <field name="model">container.access.activity</field>
            <field name="type">search</field>
            <field name="arch_db" type="xml">
                <search string="Search Container Access Activity">
                    <!-- Add search fields here -->
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_container_access_activity" model="ir.actions.act_window">
            <field name="name">Container Access Activity</field>
            <field name="res_model">container.access.activity</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <!--
        <menuitem
            id="menu_container_access_activity"
            name="Container Access Activity"
            action="action_container_access_activity"
            parent="REPLACE_WITH_PARENT_MENU_ID"
            sequence="10"/>
        -->

    </data>
</odoo>
