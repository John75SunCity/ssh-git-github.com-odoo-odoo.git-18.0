<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
<!-- View mobile.photo View List -->
    <record id="view_mobile_photo_list" model="ir.ui.view">
        <field name="name">view.mobile.photo.list</field>
        <field name="model">mobile.photo</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View mobile.photo form -->
    <record id="view_mobile_photo_form" model="ir.ui.view">
        <field name="name">view.mobile.photo.form</field>
        <field name="model">mobile.photo</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Mobile Photo">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View mobile.photo search -->
    <record id="view_mobile_photo_search" model="ir.ui.view">
        <field name="name">view.mobile.photo.search</field>
        <field name="model">mobile.photo</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action mobile.photo -->
    <record id="action_mobile_photo" model="ir.actions.act_window">
        <field name="name">Mobile Photo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mobile.photo</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Mobile Photo.
            </p>
        </field>
    </record>
</data>

</odoo>
