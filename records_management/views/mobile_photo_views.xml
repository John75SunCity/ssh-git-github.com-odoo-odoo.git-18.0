<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- View mobile.photo View Tree -->
    <record id="mobile_photo_view_tree" model="ir.ui.view">
        <field name="name">mobile.photo.view.tree</field>
        <field name="model">mobile.photo</field>
        <field name="arch" type="xml">
        <list>
        <field name="name"/>
</list>
    </field>
    </record>

<!-- View mobile.photo form -->
    <record id="mobile_photo_view_form" model="ir.ui.view">
        <field name="name">mobile.photo.view.form</field>
        <field name="model">mobile.photo</field>
        <field name="arch" type="xml">
        <form string="Mobile Photo">
            <sheet>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
                        <field name="name" placeholder="Photo description..."/>
                    </h1>
                </div>
                <group>
                    <group name="photo_info" string="Photo Information">
                        <field name="image_data" widget="image" options="{'size': [300, 300]}"/>
                        <field name="capture_date"/>
                        <field name="file_size" readonly="1"/>
                        <field name="mime_type" readonly="1"/>
                    </group>
                    <group name="location_info" string="Location Information">
                        <field name="gps_latitude"/>
                        <field name="gps_longitude"/>
                        <field name="has_gps" invisible="1"/>
                        <field name="gps_accuracy"/>
                        <field name="location_name"/>
                    </group>
                </group>
                
                <!-- Map Widget for GPS Location -->
                <group string="ðŸ“ Location Map" invisible="not has_gps">
                    <field name="gps_latitude" invisible="1"/>
                    <field name="gps_longitude" invisible="1"/>
                    <div class="row">
                        <div class="col-12">
                            <field name="gps_latitude" widget="map_widget" 
                                   options="{'latitudeField': 'gps_latitude', 'longitudeField': 'gps_longitude'}" 
                                   nolabel="1"/>
                        </div>
                    </div>
                </group>
                
                <group>
                    <group name="device_info" string="Device Information">
                        <field name="device_model"/>
                        <field name="device_os"/>
                        <field name="app_version"/>
                    </group>
                    <group name="metadata" string="Metadata">
                        <field name="uploaded_by"/>
                        <field name="upload_date"/>
                        <field name="related_record_model"/>
                        <field name="related_record_id"/>
                    </group>
                </group>
                
                <notebook>
                    <page string="Notes" name="notes">
                        <field name="notes" placeholder="Additional notes about this photo..."/>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="message_ids"/>
            </div>
        </form>
    </field>
    </record>

<!-- View mobile.photo search -->
    <record id="mobile_photo_view_search" model="ir.ui.view">
        <field name="name">mobile.photo.view.search</field>
        <field name="model">mobile.photo</field>
        <field name="arch" type="xml">
        <search>
            <group expand="1" string="Group By">
                <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
            </group>
        </search>
    </field>
    </record>

<!-- Action mobile.photo -->
    <record id="action_mobile_photo" model="ir.actions.act_window">
        <field name="name">Mobile Photo</field>
        <field name="res_model">mobile.photo</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            There is no examples click here to add new Mobile Photo.
        </p>
    </field>
    </record>
    </data>
</odoo>
