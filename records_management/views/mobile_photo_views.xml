<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- View mobile.photo View Tree -->
    <record id="mobile_photo_view_tree" model="ir.ui.view">
        <field name="name">mobile.photo.view.tree</field>
        <field name="model">mobile.photo</field>
        <field name="arch" type="xml">
            <list string="Mobile Photos" sample="1">
                <field name="name"/>
                <field name="photo_date"/>
                <field name="photo_type"/>
                <field name="fsm_task_id"/>
                <field name="container_id"/>
                <field name="partner_id"/>
                <field name="file_size"/>
                <field name="activity_ids" widget="list_activity" optional="hide"/>
                <field name="company_id" optional="hide" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

<!-- View mobile.photo form -->
    <record id="mobile_photo_view_form" model="ir.ui.view">
        <field name="name">mobile.photo.view.form</field>
        <field name="model">mobile.photo</field>
        <field name="arch" type="xml">
        <form string="Mobile Photo">
            <sheet>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
                        <field name="name" placeholder="Photo description..."/>
                    </h1>
                </div>
                <group>
                    <group name="photo_info" string="Photo Information">
                        <field name="photo_data" widget="image" options="{'size': [300, 300]}"/>
                        <field name="photo_filename"/>
                        <field name="photo_type"/>
                        <field name="photo_date"/>
                    </group>
                    <group name="file_info" string="File Information">
                        <field name="file_size" readonly="1"/>
                        <field name="resolution"/>
                    </group>
                </group>
                
                <group>
                    <group name="location_info" string="Location Information">
                        <field name="gps_latitude"/>
                        <field name="gps_longitude"/>
                        <field name="has_gps" invisible="1"/>
                    </group>
                    <group name="device_info" string="Device Information">
                        <field name="device_info"/>
                    </group>
                </group>
                
                <group>
                    <group name="relationships" string="Related Entities">
                        <field name="fsm_task_id"/>
                        <field name="work_order_reference"/>
                        <field name="container_id"/>
                        <field name="destruction_request_id"/>
                        <field name="pickup_request_id"/>
                        <field name="partner_id"/>
                        <field name="bin_issue_id"/>
                    </group>
                </group>
                
                <group>
                    <group name="compliance" string="Compliance">
                        <field name="is_compliance_photo"/>
                        <field name="compliance_notes"/>
                    </group>
                </group>
                
                <notebook>
                    <page string="Metadata" name="metadata">
                        <group>
                            <field name="wizard_reference" readonly="1"/>
                            <field name="project_id" readonly="1"/>
                            <field name="active"/>
                            <field name="company_id"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="message_ids"/>
                <field name="activity_ids"/>
            </div>
        </form>
    </field>
    </record>

<!-- View mobile.photo search -->
    <record id="mobile_photo_view_search" model="ir.ui.view">
        <field name="name">mobile.photo.view.search</field>
        <field name="model">mobile.photo</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Photo"/>
                <field name="photo_type"/>
                <field name="fsm_task_id"/>
                <field name="container_id"/>
                <field name="partner_id"/>
                <field name="is_compliance_photo"/>
                <separator/>
                <filter string="Compliance Photos" name="compliance" domain="[('is_compliance_photo', '=', True)]"/>
                <filter string="With GPS Data" name="with_gps" domain="[('has_gps', '=', True)]"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter string="Photo Type" name="photo_type" domain="[]" context="{'group_by':'photo_type'}"/>
                    <filter string="FSM Task" name="fsm_task_id" domain="[]" context="{'group_by':'fsm_task_id'}"/>
                    <filter string="Photo Date" name="photo_date" domain="[]" context="{'group_by':'photo_date'}"/>
                    <filter string="Customer" name="partner_id" domain="[]" context="{'group_by':'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

<!-- Action mobile.photo -->
    <record id="action_mobile_photo" model="ir.actions.act_window">
        <field name="name">Mobile Photo</field>
        <field name="res_model">mobile.photo</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            There is no examples click here to add new Mobile Photo.
        </p>
    </field>
    </record>
    </data>
</odoo>
