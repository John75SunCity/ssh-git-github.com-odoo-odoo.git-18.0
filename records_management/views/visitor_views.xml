<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View visitor View List -->
    <record id="view_visitor_list" model="ir.ui.view">
        <field name="name">view.visitor.list</field>
        <field name="model">visitor</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View visitor form -->
    <record id="view_visitor_form" model="ir.ui.view">
        <field name="name">view.visitor.form</field>
        <field name="model">visitor</field>
        <field name="arch" type="xml">
            <form string="Visitor">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View visitor search -->
    <record id="view_visitor_search" model="ir.ui.view">
        <field name="name">view.visitor.search</field>
        <field name="model">visitor</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action visitor -->
    <record id="action_visitor" model="ir.actions.act_window">
        <field name="name">Visitor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">visitor</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Visitor.
            </p>
        </field>
    </record>

</odoo>
