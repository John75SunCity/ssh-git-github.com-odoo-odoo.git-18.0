<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
<!-- List View -->
    <record id="inventory_adjustment_reason_view_tree" model="ir.ui.view">
        <field name="name">inventory.adjustment.reason.view.tree</field>
        <field name="model">inventory.adjustment.reason</field>
    <field name="arch" type="xml">
            <list string="Inventory Adjustment Reason">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="inventory_adjustment_reason_view_form" model="ir.ui.view">
        <field name="name">inventory.adjustment.reason.view.form</field>
        <field name="model">inventory.adjustment.reason</field>
    <field name="arch" type="xml">
            <form string="Inventory Adjustment Reason">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                        <field name="active"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="inventory_adjustment_reason_view_search" model="ir.ui.view">
        <field name="name">inventory.adjustment.reason.view.search</field>
        <field name="model">inventory.adjustment.reason</field>
    <field name="arch" type="xml">
            <search string="Search Inventory Adjustment Reason">
                <field name="name"/>
                <field name="code"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_inventory_adjustment_reason" model="ir.actions.act_window">
        <field name="name">Inventory Adjustment Reason</field>
        <field name="res_model">inventory.adjustment.reason</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_inventory_adjustment_reason"
        name="Adjustment Reasons"
        action="action_inventory_adjustment_reason"
        parent="menu_records_inventory"
        sequence="45"
        groups="records_management.group_records_manager"/>
    
    </data>
</odoo>
