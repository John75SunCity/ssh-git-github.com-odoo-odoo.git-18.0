<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
<!-- Tree view for Document -->

    <!-- Tree view for base.rate -->
<record id="document_retrieval_work_order_view_tree" model="ir.ui.view">
    <field name="name">document.retrieval.work.order.view.tree</field>
        <field name="model">document.retrieval.work.order</field>
        <field name="arch" type="xml">
            <list string="Document Retrieval Work Orders" decoration-info="state=='draft'" decoration-warning="state=='confirmed'" decoration-success="state=='completed'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="priority"/>
                <field name="request_date"/>
                <field name="item_count"/>
                <field name="total_cost" widget="monetary"/>
                <field name="has_custom_rates" widget="boolean_toggle"/>
                <field name="state" widget="badge"/>
                <field name="technician_id"/>
            </list>
        </field>
    </record>

    <!-- Form view for base.rate -->
<record id="document_retrieval_work_order_view_form" model="ir.ui.view">
    <field name="name">document.retrieval.work.order.view.form</field>
        <field name="model">document.retrieval.work.order</field>
        <field name="arch" type="xml">
            <form string="Document Retrieval Work Order">
                <header>
<!-- Converted states="draft" to invisible condition -->
<button name="action_confirm" type="object" string="Confirm" class="oe_highlight" invisible="state != 'draft'" confirm="This will confirm the work order with estimated cost $%(total_cost).2f. Continue?"/>
<!-- Converted states="confirmed" to invisible condition -->
<button name="action_assign_technician" type="object" string="Assign Technician" class="oe_highlight" invisible="state != 'confirmed'"/>
<!-- Converted states="assigned" to invisible condition -->
<button name="action_start_retrieval" type="object" string="Start Retrieval" class="oe_highlight" invisible="state != 'assigned'"/>
<!-- Converted states="in_progress" to invisible condition -->
<button name="action_ready_for_delivery" type="object" string="Ready for Delivery" class="oe_highlight" invisible="state != 'in_progress'"/>
<!-- Converted states="ready_delivery" to invisible condition -->
<button name="action_deliver" type="object" string="Deliver" class="oe_highlight" invisible="state != 'ready_delivery'"/>
<!-- Converted states="delivered" to invisible condition -->
<button name="action_complete" type="object" string="Complete" class="oe_highlight" invisible="state != 'delivered'"/>

                    <button name="action_view_pricing_breakdown" type="object" string="View Pricing" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,assigned,in_progress,ready_delivery,delivered,completed"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_add_items" icon="fa-list">
<field name="item_count" string="Items" widget="statinfo"/>

                        </button>
                    </div>

<widget name="web_ribbon" title="Custom Rates" bg_color="bg-info" invisible="has_custom_rates == False"/>


                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group name="customer_info" string="Customer Information">
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="department_id" options="{'no_create': True}"/>
                            <field name="requested_by" readonly="1"/>
                        </group>
                        <group name="request_info" string="Request Information">
                            <field name="request_date"/>
                            <field name="priority" widget="radio"/>
                            <field name="delivery_date"/>
                            <field name="delivery_time"/>
                        </group>
                    </group>

                    <group>
                        <group name="assignment" string="Assignment">
<field name="technician_id" required="state in ['assigned','in_progress']"/>



                            <field name="driver_id"/>
                        </group>
                        <group name="pricing" string="Pricing Information">
                            <field name="has_custom_rates" readonly="1"/>
<field name="customer_rates_id" readonly="1" invisible="has_custom_rates == False"/>

                        </group>
                    </group>

                    <!-- Tree view for Pricing -->
                    <group string="Cost Breakdown" name="pricing_breakdown">
                        <group>
                            <field name="base_retrieval_cost" widget="monetary" readonly="1"/>
                            <field name="priority_item_cost" widget="monetary" readonly="1"/>
                        </group>
                        <group>
                            <field name="base_delivery_cost" widget="monetary" readonly="1"/>
                            <field name="priority_order_cost" widget="monetary" readonly="1"/>
                        </group>
                        <group>
                            <field name="total_cost" widget="monetary" readonly="1" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>

                    <!-- Tree view for Items -->
                    <notebook>
                        <page string="Items to Retrieve" name="items">
                            <field name="retrieval_item_ids">
                                <list editable="bottom">
                                    <field name="item_type"/>
<field name="box_id" invisible="item_type != 'box'" required="item_type == 'box'"/>



<field name="document_id" invisible="item_type != 'document'" required="item_type == 'document'"/>


<!-- Fixed: Removed extra standalone "/>" that was causing syntax error -->
                                    <field name="barcode"/>
                                    <field name="description"/>
                                    <field name="current_location"/>
                                    <field name="status" widget="badge"/>
                                    <field name="retrieval_notes"/>
                                </list>
                            </field>
                        </page>

                        <page string="Delivery Information" name="delivery">
                            <group>
                                <group string="Delivery Address">
                                    <field name="delivery_address" nolabel="1"/>
                                    <field name="delivery_contact"/>
                                    <field name="delivery_phone"/>
                                </group>
                                <group string="Delivery Status">
                                    <field name="actual_delivery_date" readonly="1"/>
                                    <field name="delivered_by" readonly="1"/>
                                    <field name="customer_signature_date" readonly="1"/>
                                </group>
                            </group>

<group string="Customer Signature" invisible="state not in ['delivered', 'completed']">
                                <field name="customer_signature" widget="image" nolabel="1"/>
                            </group>
                        </page>

                        <page string="Notes" name="notes">
                            <group>
                                <field name="retrieval_notes" nolabel="1" placeholder="Special instructions for retrieval..."/>
                            </group>
                            <group>
                                <field name="delivery_notes" nolabel="1" placeholder="Special instructions for delivery..."/>
                            </group>
                            <group>
                                <field name="internal_notes" nolabel="1" placeholder="Internal notes (not visible to customer)..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban view for Kanban -->
<record id="document_retrieval_work_order_view_kanban" model="ir.ui.view">
        <field name="name">document.retrieval.work.order.view.kanban</field>
        <field name="model">document.retrieval.work.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" quick_create="false">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="priority"/>
                <field name="total_cost"/>
                <field name="item_count"/>
                <field name="has_custom_rates"/>
                <field name="state"/>
                <field name="color"/>

                <templates>
<t t-name="card">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.has_custom_rates.raw_value ? 'oe_kanban_color_' + (record.color.raw_value || 0) : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_right">
                                        <div class="oe_kanban_bottom_right">
                                            <t t-if="record.has_custom_rates.raw_value">
                                                <span class="badge badge-info">Custom Rates</span>
                                            </t>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <field name="partner_id"/>
                                    <br/>
                                    <strong>Priority: </strong>
                                    <field name="priority"/>
                                    <br/>
                                    <strong>Items: </strong>
                                    <field name="item_count"/>
                                    <br/>
                                    <strong>Total: $</strong>
                                    <field name="total_cost"/>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-att-class="'badge badge-' + (record.priority.raw_value === 'emergency_1h' ? 'danger' : record.priority.raw_value.includes('rush') ? 'warning' : 'secondary')">
                                            <t t-esc="record.priority.value"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search view for base.rate -->
<record id="document_retrieval_work_order_view_search" model="ir.ui.view">
    <field name="name">document.retrieval.work.order.view.search</field>
        <field name="model">document.retrieval.work.order</field>
        <field name="arch" type="xml">
            <search string="Document Retrieval Work Orders">
                <field name="name" string="Work Order"/>
                <field name="partner_id" string="Customer"/>
                <field name="technician_id" string="Technician"/>

                <filter string="My Work Orders" name="my_orders" domain="[('technician_id', '=', uid)]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Emergency" name="emergency" domain="[('priority', '=', 'emergency_1h')]"/>
                <filter string="Rush Orders" name="rush" domain="[('priority', 'in', ['rush_eod', 'rush_4h'])]"/>
                <filter string="Custom Rates" name="custom_rates" domain="[('has_custom_rates', '=', True)]"/>

                <separator/>
                <filter string="Today" name="today" domain="[('request_date', '&amp;gt;=', datetime.datetime.combine(context_today, datetime.time(0,0,0)))]"/>
                <filter string="This Week" name="this_week" domain="[('request_date', '&amp;gt;=', (context_today - datetime.timedelta(days=context_today.weekday())).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Technician" name="group_technician" context="{'group_by': 'technician_id'}"/>
                    <filter string="Request Date" name="group_request_date" context="{'group_by': 'request_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree view for Action -->
    <record id="action_document_retrieval_work_order" model="ir.actions.act_window">
        <field name="name">Document Retrieval Work Order</field>
        <field name="res_model">document.retrieval.work.order</field>
        <field name="view_mode">kanban,list,form</field>
<field name="view_id" ref="document_retrieval_work_order_view_kanban"/>
<field name="search_view_id" ref="document_retrieval_work_order_view_search"/>

        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first document retrieval work order!
            </p>
            <p>
                Document retrieval work orders help you manage customer requests
                for retrieving stored documents and files with transparent pricing
                based on priority levels and customer-specific rates.
            </p>
        </field>
    </record>
</data>

</odoo>
