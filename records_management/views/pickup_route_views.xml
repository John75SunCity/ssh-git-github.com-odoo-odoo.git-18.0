<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View pickup.route View List -->
    <record id="view_pickup_route_list" model="ir.ui.view">
        <field name="name">view.pickup.route.list</field>
        <field name="model">pickup.route</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View pickup.route form -->
    <record id="view_pickup_route_form" model="ir.ui.view">
        <field name="name">view.pickup.route.form</field>
        <field name="model">pickup.route</field>
        <field name="arch" type="xml">
            <form string="Pickup Route">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View pickup.route search -->
    <record id="view_pickup_route_search" model="ir.ui.view">
        <field name="name">view.pickup.route.search</field>
        <field name="model">pickup.route</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pickup.route -->
    <record id="action_pickup_route" model="ir.actions.act_window">
        <field name="name">Pickup Route</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pickup.route</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Pickup Route.
            </p>
        </field>
    </record>

</odoo>
