    <!-- üìã Enhanced Tree with Compliance Tracking -->
    <record id="view_records_document_type_tree" model="ir.ui.view">
        <field name="name">records.document.type.list</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <list decoration-success="active == True and approval_required == True" decoration-warning="risk_level in ('high', 'critical')" decoration-info="security_classification in ('confidential', 'secret')">
                <field name="name" string="üìã Document Type"/>
                <field name="security_classification" string="üè∑Ô∏è Security Classification"/>
                <field name="risk_level" string="‚ö†Ô∏è Risk Level"/>
                <field name="security_classification" string="üõ°Ô∏è Security" widget="badge"/>
                <field name="approval_required" string="‚úÖ Approval" widget="boolean_toggle"/>
                <field name="retention_compliance" string="ÔøΩ Retention Compliance" widget="boolean_toggle"/>
                <field name="active" string="üéØ Status" widget="boolean_toggle"/>
                <button name="action_view_type_documents" type="object" string="Documents" icon="fa-file-text-o" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- üìù Enhanced Form with Complete Classification System -->
    <record id="view_records_document_type_form" model="ir.ui.view">
        <field name="name">records.document.type.form</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="active" widget="boolean_button" options="{'terminology': {'string_true': 'üü¢ Active', 'string_false': '‚≠ï Archived'}}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_type_documents" icon="fa-file-text-o">
                            <field string="Documents" name="document_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-shield" invisible="security_classification not in ('confidential', 'secret')">>
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">üõ°Ô∏è</span>
                                <span class="o_stat_text">Confidential</span>
                            </div>
                        </button>
                    </div>

                    <group>
                        <group string="üìã Basic Information">
                            <field name="name" placeholder="e.g., Financial Statements"/>
                            <field name="security_classification"/>
                            <field name="description"/>
                            <field name="active"/>
                        </group>
                        <group string="üõ°Ô∏è Security &amp; Compliance">
                            <field name="security_classification"/>
                            <field name="approval_required"/>
                            <field name="audit_required"/>
                            <field name="regulatory_requirement"/>
                        </group>
                    </group>

                    <group>
                        <group string="‚è∞ Retention Management">
                            <field name="risk_level"/>
                            <field name="compliance_status"/>
                            <field name="retention_compliance"/>
                            <field name="compliance_notes"/>
                        </group>
                        <group string="üìã Processing Rules">
                            <field name="auto_classification_potential"/>
                            <field name="classification_accuracy_score"/>
                            <field name="audit_required"/>
                            <field name="growth_trend_indicator"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="ÔøΩ Analytics" name="analytics">
                            <group>
                                <group string="ÔøΩ Usage Statistics">
                                    <field name="document_count" readonly="1"/>
                                    <field name="document_type_utilization" readonly="1"/>
                                    <field name="growth_trend_indicator" readonly="1"/>
                                    <field name="seasonal_pattern_score" readonly="1"/>
                                </group>
                                <group string="üìÖ Compliance">
                                    <field name="classification_accuracy_score" readonly="1"/>
                                    <field name="auto_classification_potential" readonly="1"/>
                                    <field name="type_complexity_rating" readonly="1"/>
                                    <field name="regulatory_compliance_score" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- üîç Enhanced Search with Classification Filters -->
    <record id="view_records_document_type_search" model="ir.ui.view">
        <field name="name">records.document.type.search</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Document Type"/>
                <field name="security_classification"/>
                <field name="description"/>
                <field name="security_classification"/>

                <filter string="üü¢ Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="‚≠ï Archived" name="archived" domain="[('active', '=', False)]"/>

                <separator/>
                <filter string="‚úÖ Requires Approval" name="approval_required" domain="[('approval_required', '=', True)]"/>
                <filter string="ÔøΩ Audit Required" name="audit_required" domain="[('audit_required', '=', True)]"/>
                <filter string="ÔøΩ Has Regulatory Requirement" name="has_regulation" domain="[('regulatory_requirement', '!=', False)]"/>

                <separator/>
                <filter string="üõ°Ô∏è Confidential" name="confidential" domain="[('security_classification', 'in', ['confidential', 'secret'])]"/>
                <filter string="ÔøΩ Retention Compliance" name="retention_compliance" domain="[('retention_compliance', '=', True)]"/>
                <filter string="ü§ñ Auto Classification Potential" name="auto_classification_potential" domain="[('auto_classification_potential', '>', 0)]"/>

                <separator/>
                <filter string="‚ö†Ô∏è High Risk" name="high_risk" domain="[('risk_level', 'in', ['high', 'critical'])]"/>
                <filter string="üìã Under Review" name="under_review" domain="[('compliance_status', '=', 'under_review')]"/>

                <group expand="0" string="üìä Group By">
                    <filter string="Security Classification" name="group_by_security_classification" context="{'group_by': 'security_classification'}"/>
                    <filter string="Security Classification" name="group_by_security" context="{'group_by': 'security_classification'}"/>
                    <filter string="Risk Level" name="group_by_risk" context="{'group_by': 'risk_level'}"/>
                    <filter string="Approval Required" name="group_by_approval" context="{'group_by': 'approval_required'}"/>
                </group>
            </search>
        </field>
    </record>

