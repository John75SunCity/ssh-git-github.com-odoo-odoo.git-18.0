<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List view for survey.feedback.theme -->
        <record id="survey_feedback_theme_view_tree" model="ir.ui.view">
            <field name="name">survey.feedback.theme.view.tree</field>
            <field name="model">survey.feedback.theme</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="feedback_count" string="Feedback Count"/>
                    <field name="active"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <!-- Form view for survey.feedback.theme -->
        <record id="survey_feedback_theme_view_form" model="ir.ui.view">
            <field name="name">survey.feedback.theme.view.form</field>
            <field name="model">survey.feedback.theme</field>
            <field name="arch" type="xml">
                <form string="Survey Feedback Theme">
                    <header>
                        <button name="action_view_feedback" 
                                type="object" 
                                string="View Feedback" 
                                class="btn-primary"
                                invisible="feedback_count == 0"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_feedback" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-comments">
                                <field name="feedback_count" widget="statinfo" string="Feedback"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" 
                                invisible="active == True"/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Theme Name..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search view for survey.feedback.theme -->
        <record id="survey_feedback_theme_view_search" model="ir.ui.view">
            <field name="name">survey.feedback.theme.view.search</field>
            <field name="model">survey.feedback.theme</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Theme Name" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="description"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Has Feedback" name="has_feedback" domain="[('feedback_count', '>', 0)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                        <filter string="Status" name="status" domain="[]" context="{'group_by': 'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action for survey.feedback.theme -->
        <record id="action_survey_feedback_theme" model="ir.actions.act_window">
            <field name="name">Survey Feedback Themes</field>
            <field name="res_model">survey.feedback.theme</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'default_active': True}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Survey Feedback Theme.
                </p>
                <p>
                    Themes help categorize customer feedback into specific areas 
                    like Service Quality, Billing, or Portal Usability.
                </p>
            </field>
        </record>
    </data>
</odoo>
