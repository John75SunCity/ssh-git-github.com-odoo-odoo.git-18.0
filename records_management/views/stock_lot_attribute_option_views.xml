<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for stock.lot.attribute.option -->
    <record id="view_stock_lot_attribute_option_tree" model="ir.ui.view">
        <field name="name">stock.lot.attribute.option.tree</field>
        <field name="model">stock.lot.attribute.option</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for stock.lot.attribute.option -->
    <record id="view_stock_lot_attribute_option_form" model="ir.ui.view">
        <field name="name">stock.lot.attribute.option.form</field>
        <field name="model">stock.lot.attribute.option</field>
        <field name="arch" type="xml">
            <form string="Stock Lot Attribute Option">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for stock.lot.attribute.option -->
    <record id="view_stock_lot_attribute_option_search" model="ir.ui.view">
        <field name="name">stock.lot.attribute.option.search</field>
        <field name="model">stock.lot.attribute.option</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action stock.lot.attribute.option -->
    <record id="action_stock_lot_attribute_option" model="ir.actions.act_window">
        <field name="name">Stock Lot Attribute Option</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.lot.attribute.option</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Stock Lot Attribute Option.
            </p>
        </field>
    </record>

</odoo>
