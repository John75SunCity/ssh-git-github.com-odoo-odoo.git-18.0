<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Billing Configuration Views -->
    <record id="view_records_billing_config_form" model="ir.ui.view">
        <field name="name">records.billing.config.form</field>
        <field name="model">records.billing.config</field>
        <field name="arch" type="xml">
            <form string="Billing Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Configuration Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Storage Pricing (Monthly)">
                            <field name="storage_rate_per_box"/>
                            <field name="map_box_storage_rate"/>
                            <field name="pallet_storage_rate"/>
                            <field name="specialty_box_storage_rate"/>
                            <field name="monthly_minimum_fee"/>
                        </group>
                        <group string="Basic Info">
                            <field name="company_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Transportation &amp; Delivery">
                            <group>
                                <group string="Base Fees">
                                    <field name="pickup_base_fee"/>
                                    <field name="delivery_base_fee"/>
                                    <field name="trip_charge"/>
                                    <field name="transportation_rate_per_mile"/>
                                </group>
                                <group string="Box Management">
                                    <field name="new_box_fee"/>
                                    <field name="refile_box_fee"/>
                                    <field name="refile_filefolder_fee"/>
                                    <field name="permanent_removal_fee"/>
                                </group>
                            </group>
                        </page>
                        <page string="Destruction Services">
                            <group>
                                <group string="Standard Destruction">
                                    <field name="shredding_per_box_fee"/>
                                    <field name="hard_drive_destruction_fee"/>
                                    <field name="uniform_destruction_fee"/>
                                </group>
                            </group>
                        </page>
                        <page string="Retrieval Services">
                            <group>
                                <group string="Regular Retrieval">
                                    <field name="regular_retrieval_box_fee"/>
                                    <field name="regular_retrieval_file_fee"/>
                                </group>
                                <group string="Rush Retrieval (4hr)">
                                    <field name="rush_retrieval_box_fee"/>
                                    <field name="rush_retrieval_file_fee"/>
                                    <field name="rush_service_4hr_fee"/>
                                </group>
                            </group>
                            <group>
                                <group string="Emergency Retrieval (1hr)">
                                    <field name="emergency_retrieval_box_fee"/>
                                    <field name="emergency_retrieval_file_fee"/>
                                    <field name="emergency_service_1hr_fee"/>
                                    <field name="same_day_service_fee"/>
                                </group>
                            </group>
                        </page>
                        <page string="Shred Services">
                            <group>
                                <group string="Bin Services by Size">
                                    <field name="shred_bin_32_gallon_fee"/>
                                    <field name="shred_bin_64_gallon_fee"/>
                                    <field name="shred_bin_96_gallon_fee"/>
                                    <field name="shred_bin_console_fee"/>
                                    <field name="shred_bin_mobile_fee"/>
                                    <field name="shredinator_23_gallon_fee"/>
                                </group>
                                <group string="Box Services">
                                    <field name="shred_box_standard_fee"/>
                                    <field name="shred_box_double_fee"/>
                                    <field name="shred_box_large_fee"/>
                                </group>
                            </group>
                            <group>
                                <group string="One-Time Services">
                                    <field name="one_time_64g_bin_fee"/>
                                    <field name="one_time_96g_bin_fee"/>
                                </group>
                            </group>
                        </page>
                        <page string="Special Services">
                            <group>
                                <group string="Labor &amp; Processing">
                                    <field name="labor_hourly_rate"/>
                                    <field name="indexing_per_box_fee"/>
                                    <field name="file_not_found_fee"/>
                                </group>
                                <group string="Miscellaneous">
                                    <field name="unlock_shred_bin_fee"/>
                                    <field name="key_delivery_fee"/>
                                    <field name="shred_a_thon_fee"/>
                                    <field name="damaged_property_bin_fee"/>
                                </group>
                            </group>
                        </page>
                        <page string="Product Sales">
                            <group>
                                <group string="Products">
                                    <field name="file_box_10_pack_price"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_records_billing_config_tree" model="ir.ui.view">
        <field name="name">records.billing.config.tree</field>
        <field name="model">records.billing.config</field>
        <field name="arch" type="xml">
            <list string="Billing Configurations">
                <field name="name"/>
                <field name="storage_rate_per_box"/>
                <field name="monthly_minimum_fee"/>
                <field name="company_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Billing Period Views -->
    <record id="view_records_billing_period_form" model="ir.ui.view">
        <field name="name">records.billing.period.form</field>
        <field name="model">records.billing.period</field>
        <field name="arch" type="xml">
            <form string="Billing Period">
                <header>
                    <button name="action_calculate_billing" string="Calculate Billing" 
                            type="object" class="oe_highlight" 
                            invisible="state not in ('draft','ready')"/>
                    <button name="action_generate_invoices" string="Generate Invoices" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'approved'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoices" type="object" 
                                class="oe_stat_button" icon="fa-file-text-o"
                                invisible="invoice_count == 0">
                            <field name="invoice_count" string="Invoices" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Billing Period Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="period_start"/>
                            <field name="period_end"/>
                        </group>
                        <group>
                            <field name="state"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
</odoo>
