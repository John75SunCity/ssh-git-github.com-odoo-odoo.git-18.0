<?xml version="1.0" encoding="utf-8"?>
<odoo><!-- List view for scan.retrieval -->
    <record id="scan_retrieval_view_tree" model="ir.ui.view">
        <field name="name">scan.retrieval.view.tree</field>
        <field name="model">scan.retrieval</field>
        <field name="arch" type="xml">
        <list>
        <field name="name"/>
        </list>
    </field>
    </record>

<!-- Form view for scan.retrieval -->
    <record id="scan_retrieval_view_form" model="ir.ui.view">
        <field name="name">scan.retrieval.view.form</field>
        <field name="model">scan.retrieval</field>
        <field name="arch" type="xml">
        <form string="Scan.Retrieval">
            <sheet>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
        <field name="name" placeholder="Name..."/>
                    </h1>
                </div>
            </sheet>
        </form>
    </field>
    </record>

<!-- Search view for scan.retrieval -->
    <record id="scan_retrieval_view_search" model="ir.ui.view">
        <field name="name">scan.retrieval.view.search</field>
        <field name="model">scan.retrieval</field>
        <field name="arch" type="xml">
        <search>
            <group expand="1" string="Group By">
                <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
            </group>
        </search>
    </field>
    </record>

<!-- Action for scan.retrieval -->
    <record id="action_scan_retrieval" model="ir.actions.act_window">
        <field name="name">Scan.Retrieval</field>
        <field name="res_model">scan.retrieval</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Click to add a new scan.retrieval.
        </p>
    </field>
    </record>

    </odoo>
