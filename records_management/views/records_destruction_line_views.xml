<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="records_destruction_line_view_tree" model="ir.ui.view">
            <field name="name">records.destruction.line.view.tree</field>
            <field name="model">records.destruction.line</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <list string="Records Destruction Line">
                    <field name="job_id"/>
                    <field name="box_id"/>
                    <field name="container_id"/>
                    <field name="destruction_date"/>
                    <field name="state"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="records_destruction_line_view_form" model="ir.ui.view">
            <field name="name">records.destruction.line.view.form</field>
            <field name="model">records.destruction.line</field>
            <field name="type">form</field>
        <field name="arch" type="xml">
                <form string="Records Destruction Line">
                    <sheet>
                        <group>
                            <field name="job_id"/>
                            <field name="box_id"/>
                            <field name="container_id"/>
                            <field name="destruction_date"/>
                            <field name="state"/>
                            <field name="user_id"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="records_destruction_line_view_search" model="ir.ui.view">
            <field name="name">records.destruction.line.view.search</field>
            <field name="model">records.destruction.line</field>
            <field name="type">search</field>
        <field name="arch" type="xml">
                <search string="Search Records Destruction Line">
                    <field name="job_id"/>
                    <field name="box_id"/>
                    <field name="container_id"/>
                    <field name="state"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_records_destruction_line" model="ir.actions.act_window">
            <field name="name">Records Destruction Line</field>
            <field name="res_model">records.destruction.line</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>
