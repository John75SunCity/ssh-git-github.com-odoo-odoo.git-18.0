<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- View shredding.bin.barcode.wizard View List -->
    <record id="shredding_bin_barcode_wizard_view_tree" model="ir.ui.view">
        <field name="name">shredding.bin.barcode.wizard.view.tree</field>
        <field name="model">shredding.bin.barcode.wizard</field>
        <field name="arch" type="xml">
        <list>
        <field name="bin_id"/>
        <field name="current_barcode"/>
        <field name="scan_issue"/>
        <field name="new_barcode"/>

</list>
    </field>
    </record>

<!-- View shredding.bin.barcode.wizard form -->
    <record id="shredding_bin_barcode_wizard_view_form" model="ir.ui.view">
        <field name="name">shredding.bin.barcode.wizard.view.form</field>
        <field name="model">shredding.bin.barcode.wizard</field>
        <field name="arch" type="xml">
        <form string="Fix Shredding Bin Barcode">
            <sheet>
        <group>
        <group>
        <field name="bin_id"/>
        <field name="current_barcode"/>
        <field name="scan_issue"/>
</group>
        <group>
        <field name="use_manual_override"/>
        <field name="manual_bin_size" invisible="[['use_manual_override','=',False]]" required="[['use_manual_override','=',True]]"/>
<!--
The 'new_barcode' field is invisible when 'use_manual_override' is True,
and required when 'use_manual_override' is False.
This ensures users only enter a new barcode when not using manual override.
-->
        <field name="new_barcode" invisible="use_manual_override == True" required="use_manual_override == False"/>



</group>
</group>
<footer>
<button name="action_apply_fix" string="Apply Fix" type="object" class="btn-primary"/>
<button string="Cancel" class="btn-secondary" special="cancel"/>
</footer>
            </sheet>
        </form>
    </field>
    </record>

<!-- View shredding.bin.barcode.wizard search -->
    <record id="shredding_bin_barcode_wizard_view_search" model="ir.ui.view">
        <field name="name">shredding.bin.barcode.wizard.view.search</field>
        <field name="model">shredding.bin.barcode.wizard</field>
        <field name="arch" type="xml">
        <search>
        <field name="bin_id"/>
        <field name="current_barcode"/>
        <field name="scan_issue"/>

            <group expand="1" string="Group By">
<filter string="Bin" name="bin_id" domain="[]" context="{'group_by':'bin_id'}"/>
<filter string="Scan Issue" name="scan_issue" context="{'group_by':'scan_issue'}"/>


            </group>
        </search>
    </field>
    </record>

<!-- Action shredding.bin.barcode.wizard -->
    <record id="shredding_bin_barcode_wizard_action" model="ir.actions.act_window">
        <field name="name">Shredding Bin Barcode Wizard</field>
        <field name="res_model">shredding.bin.barcode.wizard</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                <i class="fa fa-wrench"/> No barcode fix sessions active!
            </p>
            <p>
                <b>‚ö†Ô∏è When to use this wizard:</b>
            </p>
            <ul>
                <li><b>Damaged Barcode Label:</b> Physical label torn, faded, or unreadable</li>
                <li><b>Lost Barcode:</b> Label completely missing from bin</li>
                <li><b>Scan Issues:</b> Barcode won't scan due to dirt, wear, or printing error</li>
                <li><b>Wrong Bin Size:</b> Bin physically changed size but barcode hasn't updated</li>
            </ul>
            <p>
                <b>üìã Barcode Fix Workflow:</b>
            </p>
            <ol>
                <li>Open shredding bin record with problematic barcode</li>
                <li>Click <b>Fix Barcode</b> action button</li>
                <li>Wizard opens showing <b>Current Barcode</b> and detected <b>Scan Issue</b></li>
                <li><b>Option 1: Generate New Barcode (Recommended)</b></li>
                <li>Leave <b>Use Manual Override</b> unchecked</li>
                <li>Enter <b>New Barcode</b> if you have specific number to assign</li>
                <li>Or leave blank - system auto-generates next sequential barcode</li>
                <li>Click <b>Apply Fix</b></li>
                <li>System updates bin record with new barcode</li>
                <li>Print new label and affix to physical bin</li>
                <li><b>Option 2: Manual Size Override (Advanced)</b></li>
                <li>Check <b>Use Manual Override</b> box</li>
                <li>Select correct <b>Manual Bin Size</b> (23G, 32G, 64G, 96G)</li>
                <li>System regenerates barcode with correct size prefix (BIN-23G-XXXXX)</li>
                <li>Click <b>Apply Fix</b></li>
                <li>Print label with correct size designation</li>
                <li><b>Audit Trail:</b> All changes logged with user, timestamp, reason</li>
            </ol>
            <p>
                <b>üîç Common Scan Issues Detected:</b>
            </p>
            <ul>
                <li><b>Damaged Label:</b> Physical wear preventing scanner from reading</li>
                <li><b>Duplicate Barcode:</b> Same number assigned to multiple bins (system error)</li>
                <li><b>Invalid Format:</b> Barcode doesn't match expected pattern (BIN-XXX-XXXXX)</li>
                <li><b>Size Mismatch:</b> Barcode prefix (23G) doesn't match physical bin size (32G)</li>
                <li><b>Missing in Database:</b> Barcode scanned but no bin record found</li>
            </ul>
            <p>
                <b>üöÄ Key Features:</b><br/>
                ‚Ä¢ <b>Auto-Detection:</b> System identifies scan issue type automatically<br/>
                ‚Ä¢ <b>Sequential Generation:</b> New barcodes maintain proper numbering sequence<br/>
                ‚Ä¢ <b>Size Validation:</b> Prevents assigning 23G barcode to 32G bin<br/>
                ‚Ä¢ <b>Audit Logging:</b> Complete history of barcode changes with justification<br/>
                ‚Ä¢ <b>Label Printing:</b> Wizard directly triggers label print after fix<br/>
                ‚Ä¢ <b>Duplicate Prevention:</b> Checks for existing barcode before assignment<br/>
                ‚Ä¢ <b>Manual Override:</b> Allows size correction without creating new bin record<br/>
            </p>
            <p>
                <b>üí° Pro Tips:</b><br/>
                ‚Ä¢ <b>Always print new label immediately</b> after fix (prevents confusion)<br/>
                ‚Ä¢ Use <b>Manual Override</b> only when bin size physically changed<br/>
                ‚Ä¢ For damaged labels, <b>clean bin surface</b> before affixing new label<br/>
                ‚Ä¢ If duplicate detected, <b>investigate</b> - may indicate data migration issue<br/>
                ‚Ä¢ <b>Document reason</b> in notes field for audit trail clarity<br/>
            </p>
        </field>
    </record>

<!-- View shredding.bin.scan.wizard form -->
    <record id="shredding_bin_scan_wizard_view_form" model="ir.ui.view">
        <field name="name">shredding.bin.scan.wizard.form</field>
        <field name="model">shredding.bin.scan.wizard</field>
        <field name="arch" type="xml">
        <form string="Scan Bin Barcode">
            <group>
                <field name="barcode" placeholder="Scan or enter barcode..."/>
            </group>
            <footer>
                <button string="Confirm" type="object" name="action_confirm_scan" class="btn-primary"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
    </record>

<!-- Action shredding.bin.scan.wizard -->
    <record id="action_shredding_bin_scan_wizard" model="ir.actions.act_window">
        <field name="name">Scan Bin</field>
        <field name="res_model">shredding.bin.scan.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    </data>
</odoo>
