<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for report.records_management.report_customer_inventory -->
    <record id="report_records_management_report_customer_inventory_view_tree" model="ir.ui.view">
        <field name="name">report.records_management.report_customer_inventory.view.tree</field>
        <field name="model">report.records_management.report_customer_inventory</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for report.records_management.report_customer_inventory -->
    <record id="report_records_management_report_customer_inventory_view_form" model="ir.ui.view">
        <field name="name">report.records_management.report_customer_inventory.view.form</field>
        <field name="model">report.records_management.report_customer_inventory</field>
        <field name="arch" type="xml">
            <form string="Report.Records Management.Report Customer Inventory">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for report.records_management.report_customer_inventory -->
    <record id="report_records_management_report_customer_inventory_view_search" model="ir.ui.view">
        <field name="name">report.records_management.report_customer_inventory.view.search</field>
        <field name="model">report.records_management.report_customer_inventory</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for report.records_management.report_customer_inventory -->
    <record id="action_report_records_management_report_customer_inventory" model="ir.actions.act_window">
        <field name="name">Report.Records Management.Report Customer Inventory</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.records_management.report_customer_inventory</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new report.records management.report customer inventory.
            </p>
        </field>
    </record>

</odoo>
