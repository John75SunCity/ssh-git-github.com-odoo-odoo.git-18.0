<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="container_access_visitor_view_tree" model="ir.ui.view">
            <field name="name">container.access.visitor.view.tree</field>
            <field name="model">container.access.visitor</field>
            <field name="arch" type="xml">
                <list string="Container Access Visitor">
                    <field name="name" />
                    <field name="visitor_type" />
                    <field name="identification_number" />
                    <field name="contact_phone" />
                    <field name="contact_email" />
                    <field name="visit_date" />
                    <field name="active" />
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="container_access_visitor_view_form" model="ir.ui.view">
            <field name="name">container.access.visitor.view.form</field>
            <field name="model">container.access.visitor</field>
            <field name="arch" type="xml">
                <form string="Container Access Visitor">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <group name="visitor_info" string="Visitor Information">
                                <field name="name" />
                                <field name="visitor_type" />
                                <field name="company_name" />
                                <field name="identification_type" />
                                <field name="identification_number" />
                            </group>
                            <group name="contact_info" string="Contact Information">
                                <field name="contact_phone" />
                                <field name="contact_email" />
                                <field name="company_id" />
                            </group>
                        </group>
                        <notebook>
                            <page name="visit_details" string="Visit Details">
                                <group>
                                    <field name="visit_date" />
                                    <field name="visit_time" />
                                    <field name="departure_time" />
                                    <field name="purpose" />
                                    <field name="authorized_by_id" />
                                    <field name="escort_required" />
                                    <field name="escort_id" />
                                    <field name="access_areas" />
                                </group>
                            </page>
                            <page name="relationships" string="Related Records">
                                <group>
                                    <field name="partner_id" />
                                    <field name="work_order_id" />
                                    <field name="container_ids" />
                                    <field name="access_activity_ids" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="container_access_visitor_view_search" model="ir.ui.view">
            <field name="name">container.access.visitor.view.search</field>
            <field name="model">container.access.visitor</field>
            <field name="arch" type="xml">
                <search string="Search Container Access Visitor">
                    <field name="name" />
                    <field name="visitor_type" />
                    <field name="identification_number" />
                    <field name="contact_phone" />
                    <field name="contact_email" />
                    <field name="visit_date" />

                    <separator />
                    <filter string="Active" name="active" domain="[('active', '=', True)]" />
                    <filter string="Escort Required" name="escort_required" domain="[('escort_required', '=', True)]" />

                    <group expand="1" string="Group By">
                        <filter string="Visitor Type" name="group_visitor_type" context="{'group_by': 'visitor_type'}" />
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" />
                        <filter string="Visit Date" name="group_visit_date" context="{'group_by': 'visit_date'}" />
                    </group>
                </search>
            </field>
        </record>

    <!-- Action -->
    <record id="action_container_access_visitor" model="ir.actions.act_window">
        <field name="name">Container Access Visitor</field>
        <field name="res_model">container.access.visitor</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <!--

    <menuitem
        id="menu_container_access_visitor"
        name="Container Access Visitor"
        action="action_container_access_visitor"
        parent="REPLACE_WITH_PARENT_MENU_ID"
        sequence="10"/>

    -->
    
    </data>
</odoo>
