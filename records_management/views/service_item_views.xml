<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for service.item -->
    <record id="view_service_item_tree" model="ir.ui.view">
        <field name="name">service.item.tree</field>
        <field name="model">service.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for service.item -->
    <record id="view_service_item_form" model="ir.ui.view">
        <field name="name">service.item.form</field>
        <field name="model">service.item</field>
        <field name="arch" type="xml">
            <form string="Service Item">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for service.item -->
    <record id="view_service_item_search" model="ir.ui.view">
        <field name="name">service.item.search</field>
        <field name="model">service.item</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action service.item -->
    <record id="action_service_item" model="ir.actions.act_window">
        <field name="name">Service Item</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">service.item</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Service Item.
            </p>
        </field>
    </record>

</odoo>
