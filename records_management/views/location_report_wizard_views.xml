<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
<!-- Tree view for location.report.wizard -->
    <record id="location_report_wizard_view_tree" model="ir.ui.view">
        <field name="name">location.report.wizard.view.tree</field>
        <field name="model">location.report.wizard</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for location.report.wizard -->
    <record id="location_report_wizard_view_form" model="ir.ui.view">
        <field name="name">location.report.wizard.view.form</field>
        <field name="model">location.report.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Location.Report.Wizard">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for location.report.wizard -->
    <record id="location_report_wizard_view_search" model="ir.ui.view">
        <field name="name">location.report.wizard.view.search</field>
        <field name="model">location.report.wizard</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for location.report.wizard -->
    <record id="action_location_report_wizard" model="ir.actions.act_window">
        <field name="name">Location.Report.Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">location.report.wizard</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new location.report.wizard.
            </p>
        </field>
    </record>
</data>

</odoo>
