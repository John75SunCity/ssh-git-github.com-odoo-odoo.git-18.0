<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- List View -->
        <record id="records_center_location_view_tree" model="ir.ui.view">
            <field name="name">records.center.location.view.tree</field>
            <field name="model">records.center.location</field>
        <field name="arch" type="xml">
                <list string="Records Center Location">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="company_id"/>
                    <field name="active"/>
                    <field name="city"/>
                    <field name="state_id"/>
                    <field name="zip"/>
                    <field name="country_id"/>
                    <field name="manager_id"/>
                    <field name="capacity_cubic_feet"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="records_center_location_view_form" model="ir.ui.view">
            <field name="name">records.center.location.view.form</field>
            <field name="model">records.center.location</field>
        <field name="arch" type="xml">
                <form string="Records Center Location">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="company_id"/>
                            <field name="active"/>
                            <field name="address"/>
                            <field name="city"/>
                            <field name="state_id"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                            <field name="manager_id"/>
                            <field name="capacity_cubic_feet"/>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="records_center_location_view_search" model="ir.ui.view">
            <field name="name">records.center.location.view.search</field>
            <field name="model">records.center.location</field>
        <field name="arch" type="xml">
                <search string="Search Records Center Location">
                    <!-- Add search fields here -->
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_records_center_location" model="ir.actions.act_window">
            <field name="name">Records Center Location</field>
            <field name="res_model">records.center.location</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
