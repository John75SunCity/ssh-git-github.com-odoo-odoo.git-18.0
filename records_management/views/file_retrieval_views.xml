<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- List View -->
    <record id="file_retrieval_view_tree" model="ir.ui.view">
        <field name="name">container.retrieval.view.tree</field>
        <field name="model">container.retrieval</field>
        <field name="arch" type="xml">
            <list string="File Retrieval" decoration-warning="status == 'searching'" decoration-info="status == 'located'" decoration-success="status == 'delivered'">
        <field name="name"/>
        <field name="partner_id"/>
        <field name="status"/>
        <field name="priority"/>
        <field name="user_id"/>
        <field name="retrieval_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="file_retrieval_view_form" model="ir.ui.view">
        <field name="name">container.retrieval.view.form</field>
        <field name="model">container.retrieval</field>
        <field name="arch" type="xml">
            <form string="File Retrieval">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_locate_container" string="Mark Located"
invisible="status != 'pending'"
                                class="oe_stat_button" icon="fa-check"/>
                        <button type="object" name="action_retrieve_container" string="Mark Retrieved"
invisible="status != 'located'"
                                class="oe_stat_button" icon="fa-package"/>
                    </div>
                    <div class="oe_title">
                        <h1>
        <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                    <group name="main_info">
        <field name="name"/>
        <field name="partner_id"/>
        <field name="user_id"/>
        <field name="status"/>
        <field name="priority"/>
                    </group>
                        <group name="details">
        <field name="container_id"/>
        <field name="location_id"/>
        <field name="company_id"/>
        <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Retrieval Details" name="details">
                            <group>
                                <field name="container_id"/>
                                <field name="retrieval_date"/>
                                <field name="retrieved_by_id"/>
                                <field name="estimated_time"/>
                                <field name="actual_time"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="file_retrieval_view_search" model="ir.ui.view">
        <field name="name">container.retrieval.view.search</field>
        <field name="model">container.retrieval</field>
        <field name="arch" type="xml">
            <search string="Search File Retrieval">
        <field name="name"/>
        <field name="partner_id"/>
        <field name="user_id"/>
        <field name="container_id"/>
        <field name="status"/>
        <field name="priority"/>
                <filter string="Pending" name="pending" domain="[('status', '=', 'pending')]"/>
                <filter string="Searching" name="searching" domain="[('status', '=', 'searching')]"/>
                <filter string="Located" name="located" domain="[('status', '=', 'located')]"/>
                <filter string="Not Found" name="not_found" domain="[('status', '=', 'not_found')]"/>
                <separator/>
                <filter string="High Priority" name="high_priority" domain="[('priority', 'in', ['2', '3'])]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" domain="[]" context="{'group_by': 'status'}"/>
                    <filter string="Customer" name="group_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Assigned User" name="group_user" domain="[]" context="{'group_by': 'user_id'}"/>
                    <filter string="Priority" name="group_priority" domain="[]" context="{'group_by': 'priority'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_file_retrieval" model="ir.actions.act_window">
        <field name="name">File Retrieval</field>
        <field name="res_model">container.retrieval</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <!--

    <menuitem
        id="menu_file_retrieval"
        name="File Retrieval"
        action="action_file_retrieval"
        parent="REPLACE_WITH_PARENT_MENU_ID"
        sequence="10"/>

    -->
    
    </data>
</odoo>
