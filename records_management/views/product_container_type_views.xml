<?xml version="1.0" encoding="utf-8"?>
<odoo><!-- List view for product.container.type -->
    <record id="product_container_type_view_tree" model="ir.ui.view">
        <field name="name">product.container.type.view.tree</field>
        <field name="model">product.container.type</field>
        <field name="arch" type="xml">
        <list>
        <field name="name"/>
        </list>
    </field>
    </record>

<!-- Form view for product.container.type -->
    <record id="product_container_type_view_form" model="ir.ui.view">
        <field name="name">product.container.type.view.form</field>
        <field name="model">product.container.type</field>
        <field name="arch" type="xml">
        <form string="Product.Container.Type">
            <sheet>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
        <field name="name" placeholder="Name..."/>
                    </h1>
                </div>
            </sheet>
        </form>
    </field>
    </record>

<!-- Search view for product.container.type -->
    <record id="product_container_type_view_search" model="ir.ui.view">
        <field name="name">product.container.type.view.search</field>
        <field name="model">product.container.type</field>
        <field name="arch" type="xml">
        <search>
            <group expand="1" string="Group By">
                <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
            </group>
        </search>
    </field>
    </record>

<!-- Action for product.container.type -->
    <record id="action_product_container_type" model="ir.actions.act_window">
        <field name="name">Product.Container.Type</field>
        <field name="res_model">product.container.type</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Click to add a new product.container.type.
        </p>
    </field>
    </record>

    </odoo>
