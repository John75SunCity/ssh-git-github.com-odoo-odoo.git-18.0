<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Customer Billing Profile Views -->
        <record id="view_records_customer_billing_profile_tree" model="ir.ui.view">
            <field name="name">records.customer.billing.profile.tree</field>
            <field name="model">records.customer.billing.profile</field>
            <field name="arch" type="xml">
                <tree string="Customer Billing Profiles">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="storage_billing_cycle"/>
                    <field name="service_billing_cycle"/>
                    <field name="storage_bill_in_advance"/>
                    <field name="billing_day"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_records_customer_billing_profile_form" model="ir.ui.view">
            <field name="name">records.customer.billing.profile.form</field>
            <field name="model">records.customer.billing.profile</field>
            <field name="arch" type="xml">
                <form string="Customer Billing Profile">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" string="Archive" fa="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Storage Billing">
                                <group>
                                    <group>
                                        <field name="storage_billing_cycle"/>
                                        <field name="storage_bill_in_advance"/>
                                        <field name="storage_advance_months" attrs="{'invisible': [('storage_bill_in_advance','=',False)]}"/>
                                    </group>
                                    <group>
                                        <field name="billing_day"/>
                                        <field name="auto_generate_storage_invoices"/>
                                    </group>
                                </group>
                                
                                <group string="Prepaid Storage" attrs="{'invisible': [('storage_billing_cycle','!=','prepaid')]}">
                                    <group>
                                        <field name="prepaid_enabled"/>
                                        <field name="prepaid_months" attrs="{'invisible': [('prepaid_enabled','=',False)]}"/>
                                        <field name="prepaid_discount_percent" attrs="{'invisible': [('prepaid_enabled','=',False)]}"/>
                                    </group>
                                    <group>
                                        <field name="prepaid_balance" attrs="{'invisible': [('prepaid_enabled','=',False)]}"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Service Billing">
                                <group>
                                    <group>
                                        <field name="service_billing_cycle"/>
                                        <field name="auto_generate_service_invoices"/>
                                    </group>
                                    <group>
                                        <field name="invoice_due_days"/>
                                        <field name="auto_send_invoices"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Payment Terms">
                                <group>
                                    <field name="payment_term_id"/>
                                </group>
                            </page>
                            
                            <page string="Billing Contacts">
                                <field name="billing_contact_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                        <field name="receive_storage_invoices"/>
                                        <field name="receive_service_invoices"/>
                                        <field name="receive_statements"/>
                                        <field name="primary_contact"/>
                                        <field name="active"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_records_customer_billing_profile" model="ir.actions.act_window">
            <field name="name">Customer Billing Profiles</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">records.customer.billing.profile</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Advanced Billing Period Views -->
        <record id="view_records_advanced_billing_period_tree" model="ir.ui.view">
            <field name="name">records.advanced.billing.period.tree</field>
            <field name="model">records.advanced.billing.period</field>
            <field name="arch" type="xml">
                <tree string="Advanced Billing Periods" decoration-info="state == 'draft'" 
                      decoration-success="state == 'paid'" decoration-warning="state == 'invoiced'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="billing_type"/>
                    <field name="invoice_date"/>
                    <field name="period_start_date"/>
                    <field name="period_end_date"/>
                    <field name="billing_direction"/>
                    <field name="storage_amount"/>
                    <field name="service_amount"/>
                    <field name="total_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_records_advanced_billing_period_form" model="ir.ui.view">
            <field name="name">records.advanced.billing.period.form</field>
            <field name="model">records.advanced.billing.period</field>
            <field name="arch" type="xml">
                <form string="Advanced Billing Period">
                    <header>
                        <button name="action_generate_storage_lines" type="object" string="Generate Storage Lines" 
                                class="oe_highlight" attrs="{'invisible': [('billing_type','not in',['storage','combined']), ('state','!=','draft')]}"/>
                        <button name="action_generate_service_lines" type="object" string="Generate Service Lines" 
                                class="oe_highlight" attrs="{'invisible': [('billing_type', 'not in', ['service', 'combined']), ('state', '!=', 'draft')]}"/>
                        <button name="action_generate_invoice" type="object" string="Generate Invoice" 
                                class="oe_highlight" attrs="{'invisible': [('state','not in',['confirmed'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,invoiced,paid"/>
                    </header>
                    
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="billing_profile_id"/>
                                <field name="partner_id"/>
                                <field name="billing_type"/>
                            </group>
                            <group>
                                <field name="invoice_date"/>
                                <field name="period_start_date"/>
                                <field name="period_end_date"/>
                                <field name="billing_direction"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="storage_amount"/>
                                <field name="service_amount"/>
                                <field name="total_amount"/>
                            </group>
                            <group>
                                <field name="currency_id"/>
                                <field name="invoice_id" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Storage Lines" attrs="{'invisible': [('billing_type','not in',['storage','combined'])]}">
                                <field name="storage_line_ids">
                                    <tree editable="bottom">
                                        <field name="description"/>
                                        <field name="box_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="amount"/>
                                        <field name="period_start_date"/>
                                        <field name="period_end_date"/>
                                        <field name="billing_direction"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Service Lines" attrs="{'invisible': [('billing_type','not in',['service','combined'])]}">
                                <field name="service_line_ids">
                                    <tree editable="bottom">
                                        <field name="description"/>
                                        <field name="retrieval_work_order_id"/>
                                        <field name="shredding_work_order_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="amount"/>
                                        <field name="service_date"/>
                                        <field name="billing_direction"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_records_advanced_billing_period" model="ir.actions.act_window">
            <field name="name">Advanced Billing Periods</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">records.advanced.billing.period</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Billing Service Wizard -->
        <record id="view_records_billing_service_form" model="ir.ui.view">
            <field name="name">records.billing.service.form</field>
            <field name="model">records.billing.service</field>
            <field name="arch" type="xml">
                <form string="Billing Generation Service">
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <h1>Generate Billing</h1>
                                <p>Generate monthly billing for all customers or specific customer billing.</p>
                            </div>
                        </group>
                        
                        <footer>
                            <button name="generate_monthly_billing" type="object" string="Generate Monthly Billing" class="oe_highlight"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_records_billing_service" model="ir.actions.act_window">
            <field name="name">Generate Billing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">records.billing.service</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Menu Items -->
        <!-- Ensure that 'records_management.menu_records_configuration' is defined and loaded before this file -->
        <menuitem id="menu_advanced_billing_root" 
                  name="Advanced Billing" 
                  parent="records_management.menu_records_configuration"
                  sequence="40"/>

        <menuitem id="menu_customer_billing_profiles" 
                  name="Customer Billing Profiles" 
                  parent="menu_advanced_billing_root"
                  action="action_records_customer_billing_profile"
                  sequence="10"/>

        <menuitem id="menu_advanced_billing_periods" 
                  name="Billing Periods" 
                  parent="menu_advanced_billing_root"
                  action="action_records_advanced_billing_period"
                  sequence="20"/>

        <menuitem id="menu_billing_generation" 
                  name="Generate Billing" 
                  parent="menu_advanced_billing_root"
                  action="action_records_billing_service"
                  sequence="30"/>

    </data>
</odoo>
