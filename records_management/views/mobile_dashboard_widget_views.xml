<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mobile_dashboard_widget_view_list" model="ir.ui.view">
        <field name="name">mobile.dashboard.widget.view.list</field>
        <field name="model">mobile.dashboard.widget</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="widget_type"/>
                <field name="category_id"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="mobile_dashboard_widget_view_form" model="ir.ui.view">
        <field name="name">mobile.dashboard.widget.view.form</field>
        <field name="model">mobile.dashboard.widget</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="widget_type"/>
                        <field name="category_id"/>
                        <field name="is_active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mobile_dashboard_widget_view_search" model="ir.ui.view">
        <field name="name">mobile.dashboard.widget.view.search</field>
        <field name="model">mobile.dashboard.widget</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="widget_type"/>
                <field name="category_id"/>
            </search>
        </field>
    </record>

    <record id="mobile_dashboard_widget_view_kanban" model="ir.ui.view">
        <field name="name">mobile.dashboard.widget.view.kanban</field>
        <field name="model">mobile.dashboard.widget</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="widget_type"/>
                <field name="is_active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <h4><field name="name"/></h4>
                                <p><field name="widget_type"/></p>
                                <div t-if="record.is_active.raw_value" class="badge badge-success">Active</div>
                                <div t-else="" class="badge badge-secondary">Inactive</div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
