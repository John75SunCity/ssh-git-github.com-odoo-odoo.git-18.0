<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- List view for naid.compliance.checklist.item -->
    <record id="naid_compliance_checklist_item_view_tree" model="ir.ui.view">
        <field name="name">naid.compliance.checklist.item.view.tree</field>
        <field name="model">naid.compliance.checklist.item</field>
        <field name="arch" type="xml">
        <list>
        <field name="name"/>
        </list>
    </field>
    </record>

<!-- Form view for naid.compliance.checklist.item -->
    <record id="naid_compliance_checklist_item_view_form" model="ir.ui.view">
        <field name="name">naid.compliance.checklist.item.view.form</field>
        <field name="model">naid.compliance.checklist.item</field>
        <field name="arch" type="xml">
        <form>
            <sheet>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
        <field name="name" placeholder="Name..."/>
                    </h1>
                </div>
        <group>
        <field name="equipment_id" invisible="not configurator_toggle" />
        <field name="task_id" invisible="not configurator_toggle" />
        <field name="visitor_id" invisible="not configurator_toggle" />
        <field name="location_id" invisible="not configurator_toggle" />

</group>
            </sheet>
        </form>
    </field>
    </record>

<!-- Search view for naid.compliance.checklist.item -->
    <record id="naid_compliance_checklist_item_view_search" model="ir.ui.view">
        <field name="name">naid.compliance.checklist.item.view.search</field>
        <field name="model">naid.compliance.checklist.item</field>
        <field name="arch" type="xml">
        <search>
            <group expand="1" string="Group By">
                <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
            </group>
        </search>
    </field>
    </record>

<!-- Action for naid.compliance.checklist.item -->
    <record id="action_naid_compliance_checklist_item" model="ir.actions.act_window">
        <field name="name">Naid.Compliance.Checklist.Item</field>
        <field name="res_model">naid.compliance.checklist.item</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Click to add a new naid.compliance.checklist.item.
        </p>
    </field>
    </record>

</odoo>
