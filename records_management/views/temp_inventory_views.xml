<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="temp_inventory_view_tree" model="ir.ui.view">
            <field name="name">temp.inventory.view.tree</field>
            <field name="model">temp.inventory</field>
            <field name="arch" type="xml">
                <list string="Temporary Inventory" decoration-bf="state=='active'" decoration-warning="state=='full'" decoration-danger="state=='archived'">
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="location_id" />
                    <field name="current_count" />
                    <field name="capacity_limit" />
                    <field name="utilization_percent" widget="percentage" />
                    <field name="state" />
                    <field name="priority" />
                    <field name="user_id" />
                    <field name="company_id" groups="base.group_multi_company" />
                </list>
            </field>
        </record>
        <record id="temp_inventory_view_form" model="ir.ui.view">
            <field name="name">temp.inventory.view.form</field>
            <field name="model">temp.inventory</field>
            <field name="arch" type="xml">
                <form string="Temporary Inventory">
                    <header>
                        <button name="action_activate" string="Activate" type="object" class="btn-primary" invisible="state != 'draft'" />
                        <button name="action_deactivate" string="Deactivate" type="object" invisible="state not in ['active','in_use']" />
                        <button name="action_archive" string="Archive" type="object" invisible="state not in ['active','in_use']" />
                        <button name="action_approve" string="Approve" type="object" invisible="state != 'draft'" />
                        <button name="action_check_capacity_status" string="Check Capacity" type="object" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,in_use,full,archived" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_documents" type="object" class="oe_stat_button" icon="fa-file-text-o">
                                <field name="document_count" widget="statinfo" string="Documents" />
                            </button>
                            <button name="action_view_containers" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="container_count" widget="statinfo" string="Containers" />
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Inventory Reference" />
                            </h1>
                        </div>
                        <group>
                            <group string="Basic Information">
                                <field name="partner_id" />
                                <field name="location_id" />
                                <field name="user_id" />
                                <field name="priority" />
                            </group>
                            <group string="Capacity Management">
                                <field name="capacity_limit" />
                                <field name="current_count" />
                                <field name="available_capacity" />
                                <field name="utilization_percent" widget="percentage" />
                            </group>
                        </group>
                        <group>
                            <group string="Dates">
                                <field name="date_created" />
                                <field name="date_activated" />
                            </group>
                            <group string="Retention Management">
                                <field name="retention_period" />
                                <field name="expiry_date" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Documents" invisible="document_count == 0">
                                <field name="document_ids">
                                    <list>
                                        <field name="name" />
                                        <field name="document_type_id" />
                                        <field name="state" />
                                    </list>
                                </field>
                            </page>
                            <page string="Containers" invisible="container_count == 0">
                                <field name="container_ids">
                                    <list>
                                        <field name="name" />
                                        <field name="barcode" />
                                        <field name="container_type_id" />
                                        <field name="location_id" />
                                        <field name="state" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
        <record id="temp_inventory_view_search" model="ir.ui.view">
            <field name="name">temp.inventory.view.search</field>
            <field name="model">temp.inventory</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="location_id" />
                    <field name="user_id" />
                    <filter name="active_inventories" string="Active" domain="[('state', '=', 'active')]" />
                    <filter name="full_inventories" string="Full" domain="[('state', '=', 'full')]" />
                    <filter name="nearly_full" string="Nearly Full" domain="[('utilization_percent', '&gt;=', 90)]" />
                    <separator />
                    <filter name="high_priority" string="High Priority" domain="[('priority', 'in', ['high', 'urgent'])]" />
                    <group expand="0" string="Group By">
                        <filter string="State" name="state" context="{'group_by':'state'}" />
                        <filter string="Location" name="location_id" context="{'group_by':'location_id'}" />
                        <filter string="Responsible User" name="user_id" context="{'group_by':'user_id'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="temp_inventory_movement_view_tree" model="ir.ui.view">
            <field name="name">temp.inventory.movement.view.tree</field>
            <field name="model">temp.inventory.movement</field>
            <field name="arch" type="xml">
                <list string="Inventory Movements" create="false" edit="false">
                    <field name="create_date" />
                    <field name="name" />
                    <field name="product_id" />
                    <field name="container_id" />
                    <field name="quantity" />
                    <field name="location_src_id" />
                    <field name="location_dest_id" />
                    <field name="state" />
                    <field name="user_id" />
                    <field name="company_id" groups="base.group_multi_company" />
                </list>
            </field>
        </record>
        <record id="temp_inventory_movement_view_form" model="ir.ui.view">
            <field name="name">temp.inventory.movement.view.form</field>
            <field name="model">temp.inventory.movement</field>
            <field name="arch" type="xml">
                <form string="Inventory Movement">
                    <sheet>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="state"/>
                            <field name="user_id" />
                        </group>
                        <group>
                            <field name="product_id" />
                            <field name="container_id" />
                            <field name="quantity" />
                            <field name="location_src_id" />
                            <field name="location_dest_id" />
                            <field name="notes" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="temp_inventory_audit_view_tree" model="ir.ui.view">
            <field name="name">temp.inventory.audit.view.tree</field>
            <field name="model">temp.inventory.audit</field>
            <field name="arch" type="xml">
                <list string="Inventory Audit Trail" create="false" edit="false">
                    <field name="date" />
                    <field name="inventory_id" />
                    <field name="event_type" />
                    <field name="user_id" />
                    <field name="details" />
                    <field name="company_id" groups="base.group_multi_company" />
                </list>
            </field>
        </record>
        <record id="action_temp_inventory" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model temp.inventory has state field - consider using default search filters -->
            <field name="name">Temporary Inventory</field>
            <field name="res_model">temp.inventory</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first temporary inventory!
                </p>
                <p>
                    Temporary inventories help you manage staging areas, quarantine zones,
                    and processing queues with complete capacity tracking and audit trails.
                </p>
            </field>
        </record>
        <record id="action_temp_inventory_movement" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model temp.inventory.movement has state field - consider using default search filters -->
            <field name="name">Inventory Movements</field>
            <field name="res_model">temp.inventory.movement</field>
            <field name="view_mode">list,form</field>
        </record>
        <record id="action_temp_inventory_audit" model="ir.actions.act_window">
            <field name="name">Inventory Audit Trail</field>
            <field name="res_model">temp.inventory.audit</field>
            <field name="view_mode">list</field>
        </record>
        <!-- Temporary Inventory moved to Inventory menu -->
        <!-- menu_temp_inventory_root removed - defined in records_management_root_menus.xml -->
        <menuitem id="menu_temp_inventory" name="Inventories" parent="records_management.menu_temp_inventory_root" action="action_temp_inventory" sequence="10" />
        <menuitem id="menu_temp_inventory_movement" name="Movements" parent="records_management.menu_temp_inventory_root" action="action_temp_inventory_movement" sequence="20" />
        <menuitem id="menu_temp_inventory_audit" name="Audit Trail" parent="records_management.menu_temp_inventory_root" action="action_temp_inventory_audit" sequence="30" groups="records_management.group_records_manager,records_management.group_records_admin" />
    </data>
</odoo>
