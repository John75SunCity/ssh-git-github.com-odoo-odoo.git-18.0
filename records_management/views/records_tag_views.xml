<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view for tags -->
    <record id="records_tag_view_tree" model="ir.ui.view">
        <field name="name">records.tag.view.tree</field>
        <field name="model">records.tag</field>
        <field name="arch" type="xml">
            <tree string="Tags" editable="bottom" sample="1">
                <field name="name" required="1"/>
                <field name="color" widget="color" options="{'no_quick_edit': True}"/>
                <field name="description" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Form view for tags -->
    <record id="records_tag_view_form" model="ir.ui.view">
        <field name="name">records.tag.view.form</field>
        <field name="model">records.tag</field>
        <field name="arch" type="xml">
            <form string="Tag">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tag Name..." required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="color" widget="color"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Describe what this tag represents..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action for tags -->
    <record id="action_records_tag" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">records.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_by_color': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first tag
            </p>
            <p>
                Tags help you categorize and organize your records efficiently.
                Use colors to make them visually distinct.
            </p>
        </field>
    </record>

    <!-- Search view for tags -->
    <record id="records_tag_view_search" model="ir.ui.view">
        <field name="name">records.tag.view.search</field>
        <field name="model">records.tag</field>
        <field name="arch" type="xml">
            <search string="Tags">
                <field name="name" string="Tag Name"/>
                <field name="description"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Color" name="group_by_color" context="{'group_by': 'color'}"/>
            </search>
        </field>
    </record>
</odoo>
