<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vehicle Views -->
    
    <!-- Tree View -->
    <record id="view_records_vehicle_tree" model="ir.ui.view">
        <field name="name">records.vehicle.tree</field>
        <field name="model">records.vehicle</field>
        <field name="arch" type="xml">
            <tree string="Vehicles">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="vehicle_type"/>
                <field name="vehicle_capacity_weight"/>
                <field name="vehicle_capacity_volume"/>
                <field name="status"/>
                <field name="driver_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_records_vehicle_form" model="ir.ui.view">
        <field name="name">records.vehicle.form</field>
        <field name="model">records.vehicle</field>
        <field name="arch" type="xml">
            <form string="Vehicle">
                <header>
                    <button name="action_set_available" string="Set Available" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('status', '=', 'available')]}"/>
                    <button name="action_set_in_use" string="Set In Use" type="object" 
                            attrs="{'invisible': [('status', '=', 'in_use')]}"/>
                    <button name="action_set_maintenance" string="Set Maintenance" type="object" 
                            attrs="{'invisible': [('status', '=', 'maintenance')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="available,in_use,maintenance"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Vehicle Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="vehicle_type"/>
                            <field name="license_plate"/>
                            <field name="vin"/>
                            <field name="driver_id"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="user_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Capacity" name="capacity">
                            <group>
                                <group>
                                    <field name="vehicle_capacity_weight"/>
                                    <field name="vehicle_capacity_volume"/>
                                    <field name="max_boxes"/>
                                    <field name="total_capacity"/>
                                </group>
                                <group>
                                    <field name="length"/>
                                    <field name="width"/>
                                    <field name="height"/>
                                </group>
                            </group>
                        </page>
                        <page string="Maintenance" name="maintenance">
                            <group>
                                <field name="last_service_date"/>
                                <field name="next_service_date"/>
                                <field name="driver_contact"/>
                            </group>
                            <field name="service_notes" placeholder="Service notes and maintenance history..."/>
                        </page>
                        <page string="Pickup Routes" name="routes">
                            <field name="pickup_route_ids" mode="list">
                                <tree>
                                    <field name="name"/>
                                    <field name="route_date"/>
                                    <field name="start_time"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_records_vehicle_search" model="ir.ui.view">
        <field name="name">records.vehicle.search</field>
        <field name="model">records.vehicle</field>
        <field name="arch" type="xml">
            <search string="Vehicles">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="driver_id"/>
                <filter string="Available" name="available" domain="[('status', '=', 'available')]"/>
                <filter string="In Use" name="in_use" domain="[('status', '=', 'in_use')]"/>
                <filter string="Maintenance" name="maintenance" domain="[('status', '=', 'maintenance')]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Vehicle Type" name="group_type" context="{'group_by': 'vehicle_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Driver" name="group_driver" context="{'group_by': 'driver_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_records_vehicle" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="res_model">records.vehicle</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_records_vehicle_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first vehicle!
            </p>
            <p>
                Vehicles are used for pickup routes and capacity planning.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_records_vehicle"
              name="Vehicles"
              action="action_records_vehicle"
              parent="records_management.menu_records_management_configuration"
              sequence="50"/>

</odoo>
