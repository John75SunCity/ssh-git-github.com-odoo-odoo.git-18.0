<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Minimal action - let Odoo auto-generate views for visitor.pos.wizard -->
    <record id="action_visitor_pos_wizard" model="ir.actions.act_window">
        <field name="name">Visitor POS Wizard</field>
        <field name="res_model">visitor.pos.wizard</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first record
            </p>
            <p>
                Link visitor check-ins with POS transactions for audit trails.
            </p>
        </field>
    </record>
</odoo>
