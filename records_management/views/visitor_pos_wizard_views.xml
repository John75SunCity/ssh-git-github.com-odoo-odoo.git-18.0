<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_visitor_pos_wizard_form" model="ir.ui.view">
        <field name="name">visitor.pos.wizard.form</field>
        <field name="model">visitor.pos.wizard</field>
        <field name="arch" type="xml">
            <form string="Link Shred Transaction">
                <sheet>
                    <group string="Visitor Details">
                        <field name="visitor_id"/>
                        <field name="partner_id"/>
                    </group>
                    <group string="Transaction Details">
                        <field name="pos_order_id" options="{'no_create': True}" help="Select existing or create new below."/>
                        <field name="service_type" widget="selection" help="Auto-suggested based on notes."/>
                        <field name="notes"/>
                    </group>
                    <footer>
                        <button name="action_confirm" type="object" string="Confirm Link" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
