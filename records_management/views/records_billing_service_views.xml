<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View records.billing.service View List -->
    <record id="view_records_billing_service_list" model="ir.ui.view">
        <field name="name">view.records.billing.service.list</field>
        <field name="model">records.billing.service</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View records.billing.service form -->
    <record id="view_records_billing_service_form" model="ir.ui.view">
        <field name="name">view.records.billing.service.form</field>
        <field name="model">records.billing.service</field>
        <field name="arch" type="xml">
            <form string="Records Billing Service">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View records.billing.service search -->
    <record id="view_records_billing_service_search" model="ir.ui.view">
        <field name="name">view.records.billing.service.search</field>
        <field name="model">records.billing.service</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action records.billing.service -->
    <record id="action_records_billing_service" model="ir.actions.act_window">
        <field name="name">Records Billing Service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.billing.service</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records Billing Service.
            </p>
        </field>
    </record>

</odoo>
