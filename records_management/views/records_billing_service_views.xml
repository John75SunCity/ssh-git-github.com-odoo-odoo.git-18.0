<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Tree View for Records Billing Service -->
    <record id="records_billing_service_view_tree" model="ir.ui.view">
        <field name="name">records.billing.service.view.tree</field>
        <field name="model">records.billing.service</field>
        <field name="arch" type="xml">
<tree string="Billing Services" sample="1" decoration-info="state=='draft'" decoration-success="state=='active'" decoration-muted="state=='inactive'">
                <field name="name"/>
<field name="service_code"/>
<field name="service_type"/>
<field name="billing_frequency"/>
<field name="base_rate" widget="monetary" options="{'currency_field': 'currency_id'}"/>
<field name="unit_of_measure"/>
<field name="partner_id"/>
<field name="state"/>
<field name="active"/>
<field name="currency_id" invisible="1"/>
<field name="company_id" invisible="1"/>

            </tree>
        </field>
    </record>

<!-- Form View for Records Billing Service -->
    <record id="records_billing_service_view_form" model="ir.ui.view">
        <field name="name">records.billing.service.view.form</field>
        <field name="model">records.billing.service</field>
        <field name="arch" type="xml">
            <form string="Records Billing Service">
<header>
    <button name="action_activate_service" type="object" string="Activate" class="oe_highlight" states="draft"/>
    <button name="action_deactivate_service" type="object" string="Deactivate" states="active" confirm="Are you sure you want to deactivate this service?"/>
    <button name="action_archive_service" type="object" string="Archive" states="active,inactive"/>
    <field name="state" widget="statusbar" statusbar_visible="draft,active,inactive"/>
</header>

                <sheet>
<div class="oe_button_box" name="button_box">
    <button name="action_view_billing_history" type="object" class="oe_stat_button" icon="fa-history">
        <div class="o_field_widget o_stat_info">
            <span class="o_stat_value">
                <field name="billing_count"/>
            </span>
            <span class="o_stat_text">Billing Records</span>
        </div>
    </button>
    <button name="action_view_service_requests" type="object" class="oe_stat_button" icon="fa-tasks">
        <div class="o_field_widget o_stat_info">
            <span class="o_stat_value">
                <field name="service_request_count"/>
            </span>
            <span class="o_stat_text">Service Requests</span>
        </div>
    </button>
</div>

<widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>

                    <div class="oe_title">
<label for="name" class="oe_edit_only"/>

                        <h1>
<field name="name" placeholder="Service Name"/>

                        </h1>
<div class="oe_edit_only">
    <label for="service_code"/>
    <field name="service_code" placeholder="SVC-001"/>

</div>
</div>

<group>
<group name="service_details" string="Service Details">
    <field name="service_type"/>
    <field name="service_category"/>
    <field name="description"/>
    <field name="partner_id"/>
    <field name="company_id" groups="base.group_multi_company"/>
</group>
<group name="billing_information" string="Billing Information">
    <field name="billing_frequency"/>
    <field name="base_rate" widget="monetary" options="{'currency_field': 'currency_id'}"/>
    <field name="currency_id"/>
    <field name="unit_of_measure"/>
    <field name="minimum_charge" widget="monetary" options="{'currency_field': 'currency_id'}"/>
    <field name="taxable"/>
</group>
</group>

<notebook>
<page string="Service Configuration" name="configuration">
    <group>
        <group string="Service Settings">
            <field name="requires_approval"/>
            <field name="auto_billing_enabled"/>
            <field name="prorate_billing"/>
            <field name="service_level"/>
        </group>
        <group string="Container Integration">
            <field name="applicable_container_types" widget="many2many_tags"/>
            <field name="volume_based_pricing"/>
            <field name="weight_based_pricing"/>
        </group>
    </group>
</page>

<page string="Rate Structure" name="rates">
    <field name="rate_tier_ids" nolabel="1">
        <tree editable="bottom">
            <field name="tier_name"/>
            <field name="minimum_quantity"/>
            <field name="maximum_quantity"/>
            <field name="tier_rate" widget="monetary"/>
            <field name="effective_date"/>
            <field name="expiry_date"/>
        </tree>
    </field>
</page>

<page string="Terms &amp; Conditions" name="terms">
    <group>
        <field name="service_terms" widget="html"/>
        <field name="cancellation_policy"/>
        <field name="penalty_rate" widget="monetary" options="{'currency_field': 'currency_id'}"/>
    </group>
</page>

<page string="Audit &amp; History" name="audit">
    <group>
        <group string="Tracking Information">
            <field name="create_date" readonly="1"/>
            <field name="write_date" readonly="1"/>
            <field name="create_uid" readonly="1"/>
            <field name="write_uid" readonly="1"/>
        </group>
        <group string="Service Metrics">
            <field name="total_billed_amount" widget="monetary" readonly="1"/>
            <field name="last_billing_date" readonly="1"/>
            <field name="next_billing_date" readonly="1"/>
        </group>
    </group>
</page>
</notebook>
                </sheet>
<div class="oe_chatter">
    <field name="message_follower_ids"/>
    <field name="activity_ids"/>
    <field name="message_ids"/>
</div>
            </form>
        </field>
    </record>

<!-- Kanban View for Records Billing Service -->
<record id="records_billing_service_view_kanban" model="ir.ui.view">
    <field name="name">records.billing.service.view.kanban</field>
    <field name="model">records.billing.service</field>
    <field name="arch" type="xml">
        <kanban default_group_by="service_type" class="o_kanban_small_column" sample="1">
            <field name="name"/>
            <field name="service_code"/>
            <field name="base_rate"/>
            <field name="currency_id"/>
            <field name="state"/>
            <field name="partner_id"/>
            <field name="billing_frequency"/>
            <field name="color"/>
            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                        <div class="ribbon ribbon-top-right" attrs="{'invisible': [('state', '!=', 'inactive')]}">
                            <span class="bg-danger">Inactive</span>
                        </div>

                        <div class="o_kanban_record_top">
                            <div class="o_kanban_record_headings">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <small class="o_kanban_record_subtitle text-muted">
                                    <field name="service_code"/>
                                </small>
                            </div>
                            <div class="o_kanban_manage_button_section">
                                <a class="o_kanban_manage_toggle_button" href="#" tabindex="-1" aria-label="Manage">
                                    <i class="fa fa-ellipsis-v" role="img" aria-label="Selection" title="Selection"/>
                                </a>
                            </div>
                        </div>

                        <div class="o_kanban_record_body">
                            <div class="o_kanban_record_details">
                                <div class="o_kanban_tags_section">
                                    <span class="o_kanban_tag">
                                        <field name="billing_frequency"/>
                                    </span>
                                </div>
                                <ul>
                                    <li t-if="record.partner_id.value">
                                        <strong>Customer: </strong>
                                        <field name="partner_id"/>
                                    </li>
                                    <li>
                                        <strong>Rate: </strong>
                                        <field name="base_rate" widget="monetary"/>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="o_kanban_record_bottom">
                            <div class="oe_kanban_bottom_left">
                                <field name="state" widget="label_selection" options="{'classes': {'draft': 'secondary', 'active': 'success', 'inactive': 'warning'}}"/>
                            </div>
                            <div class="oe_kanban_bottom_right">
                                <field name="activity_ids" widget="kanban_activity"/>
                            </div>
                        </div>

                        <div class="o_kanban_manage_section">
                            <h5>Actions</h5>
                            <div>
                                <a name="action_activate_service" type="object" tabindex="-1">Activate</a>
                            </div>
                            <div>
                                <a name="action_view_billing_history" type="object" tabindex="-1">View Billing History</a>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

<!-- Search View for Records Billing Service -->
    <record id="records_billing_service_view_search" model="ir.ui.view">
        <field name="name">records.billing.service.view.search</field>
        <field name="model">records.billing.service</field>
        <field name="arch" type="xml">
<search string="Billing Services">
    <field name="name" string="Service" filter_domain="['|', ('name', 'ilike', self), ('service_code', 'ilike', self)]"/>
    <field name="service_type"/>
    <field name="partner_id"/>
    <field name="service_category"/>

    <filter string="Active" name="active_services" domain="[('state', '=', 'active')]"/>
    <filter string="Draft" name="draft_services" domain="[('state', '=', 'draft')]"/>
    <filter string="Inactive" name="inactive_services" domain="[('state', '=', 'inactive')]"/>

    <separator/>
    <filter string="Requires Approval" name="requires_approval" domain="[('requires_approval', '=', True)]"/>
    <filter string="Auto Billing Enabled" name="auto_billing" domain="[('auto_billing_enabled', '=', True)]"/>
    <filter string="Taxable" name="taxable" domain="[('taxable', '=', True)]"/>

    <separator/>
    <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                
                <group expand="1" string="Group By">
<filter string="Service Type" name="group_service_type" domain="[]" context="{'group_by': 'service_type'}"/>
<filter string="Service Category" name="group_service_category" domain="[]" context="{'group_by': 'service_category'}"/>
<filter string="Billing Frequency" name="group_billing_frequency" domain="[]" context="{'group_by': 'billing_frequency'}"/>
<filter string="Customer" name="group_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
<filter string="State" name="group_state" domain="[]" context="{'group_by': 'state'}"/>

                </group>
            </search>
        </field>
    </record>

<!-- Action for Records Billing Service -->
    <record id="action_records_billing_service" model="ir.actions.act_window">
<field name="name">Billing Services</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.billing.service</field>
<field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
<field name="context">{'search_default_active_services': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
Click to create a new billing service.
</p>
<p>
                Billing services define the various services offered to customers with their
                associated rates, billing frequencies, and terms. Configure service types,
                pricing tiers, and billing rules to automate your invoicing process.
</p>
<p>
                Services can be linked to containers, pickup requests, destruction services,
                and other business operations for comprehensive billing management.
            </p>
        </field>
    </record>

<!-- Menu Integration -->
<menuitem id="menu_records_billing_service" name="Billing Services" parent="records_management.menu_billing_configuration" action="action_records_billing_service" sequence="10"/>

<data>
        <!-- Tree view for Customer -->
<record id="records_customer_billing_profile_view_tree" model="ir.ui.view">
    <field name="name">customer.billing.profile.view.tree</field>
            <field name="model">customer.billing.profile</field>
            <field name="arch" type="xml">
                <tree string="Customer Billing Profiles">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="storage_billing_cycle"/>
                    <field name="service_billing_cycle"/>
                    <field name="storage_bill_in_advance"/>
                    <field name="billing_day"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

<record id="records_customer_billing_profile_view_form" model="ir.ui.view">
    <field name="name">customer.billing.profile.view.form</field>
            <field name="model">customer.billing.profile</field>
            <field name="arch" type="xml">
                <form string="Customer Billing Profile">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" string="Archive" fa="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Storage Billing">
                                <group>
                                    <group>
                                        <field name="storage_billing_cycle"/>
                                        <field name="storage_bill_in_advance"/>
                                        <field name="storage_advance_months" attrs="{'invisible': [('storage_bill_in_advance','=',False)]}"/>
                                    </group>
                                    <group>
                                        <field name="billing_day"/>
                                        <field name="auto_generate_storage_invoices"/>
                                    </group>
                                </group>
                                
                                <group string="Prepaid Storage" attrs="{'invisible': [('storage_billing_cycle','!=','prepaid')]}">
                                    <group>
                                        <field name="prepaid_enabled"/>
                                        <field name="prepaid_months" attrs="{'invisible': [('prepaid_enabled','=',False)]}"/>
                                        <field name="prepaid_discount_percent" attrs="{'invisible': [('prepaid_enabled','=',False)]}"/>
                                    </group>
                                    <group>
                                        <field name="prepaid_balance" attrs="{'invisible': [('prepaid_enabled','=',False)]}"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Service Billing">
                                <group>
                                    <group>
                                        <field name="service_billing_cycle"/>
                                        <field name="auto_generate_service_invoices"/>
                                    </group>
                                    <group>
                                        <field name="invoice_due_days"/>
                                        <field name="auto_send_invoices"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Payment Terms">
                                <group>
                                    <field name="payment_term_id"/>
                                </group>
                            </page>
                            
                            <page string="Billing Contacts">
                                <field name="billing_contact_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                        <field name="receive_storage_invoices"/>
                                        <field name="receive_service_invoices"/>
                                        <field name="receive_statements"/>
                                        <field name="primary_contact"/>
                                        <field name="active"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_records_customer_billing_profile" model="ir.actions.act_window">
            <field name="name">Customer Billing Profiles</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">customer.billing.profile</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Tree view for Advanced -->
<record id="records_advanced_billing_period_view_tree" model="ir.ui.view">
    <field name="name">records.advanced.billing.period.view.tree</field>
            <field name="model">records.advanced.billing.period</field>
            <field name="arch" type="xml">
                <tree string="Advanced Billing Periods" decoration-info="state == 'draft'" 
                      decoration-success="state == 'paid'" decoration-warning="state == 'invoiced'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="billing_type"/>
                    <field name="invoice_date"/>
                    <field name="period_start_date"/>
                    <field name="period_end_date"/>
                    <field name="billing_direction"/>
                    <field name="storage_amount"/>
                    <field name="service_amount"/>
                    <field name="total_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

<record id="records_advanced_billing_period_view_form" model="ir.ui.view">
    <field name="name">records.advanced.billing.period.view.form</field>
            <field name="model">records.advanced.billing.period</field>
            <field name="arch" type="xml">
                <form string="Advanced Billing Period">
                    <header>
                        <button name="action_generate_storage_lines" type="object" string="Generate Storage Lines" 
                                class="oe_highlight" attrs="{'invisible': [('billing_type','not in',['storage','combined']), ('state','!=','draft')]}"/>
                        <button name="action_generate_service_lines" type="object" string="Generate Service Lines" 
                                class="oe_highlight" attrs="{'invisible': [('billing_type', 'not in', ['service', 'combined']), ('state', '!=', 'draft')]}"/>
                        <button name="action_generate_invoice" type="object" string="Generate Invoice" 
                                class="oe_highlight" attrs="{'invisible': [('state','not in',['confirmed'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,invoiced,paid"/>
                    </header>
                    
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="billing_profile_id"/>
                                <field name="partner_id"/>
                                <field name="billing_type"/>
                            </group>
                            <group>
                                <field name="invoice_date"/>
                                <field name="period_start_date"/>
                                <field name="period_end_date"/>
                                <field name="billing_direction"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="storage_amount"/>
                                <field name="service_amount"/>
                                <field name="total_amount"/>
                            </group>
                            <group>
                                <field name="currency_id"/>
                                <field name="invoice_id" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Storage Lines" attrs="{'invisible': [('billing_type','not in',['storage','combined'])]}">
                                <field name="storage_line_ids">
                                    <tree editable="bottom">
                                        <field name="description"/>
                                        <field name="box_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="amount"/>
                                        <field name="period_start_date"/>
                                        <field name="period_end_date"/>
                                        <field name="billing_direction"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Service Lines" attrs="{'invisible': [('billing_type','not in',['service','combined'])]}">
                                <field name="service_line_ids">
                                    <tree editable="bottom">
                                        <field name="description"/>
                                        <field name="retrieval_work_order_id"/>
                                        <field name="shredding_work_order_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="amount"/>
                                        <field name="service_date"/>
                                        <field name="billing_direction"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_records_advanced_billing_period" model="ir.actions.act_window">
            <field name="name">Advanced Billing Periods</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">records.advanced.billing.period</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Tree view for Billing -->
<record id="records_billing_service_view_form" model="ir.ui.view">
    <field name="name">records.billing.service.view.form</field>
            <field name="model">records.billing.service</field>
            <field name="arch" type="xml">
                <form string="Billing Generation Service">
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <h1>Generate Billing</h1>
                                <p>Generate monthly billing for all customers or specific customer billing.</p>
                            </div>
                        </group>
                        
                        <footer>
                            <button name="generate_monthly_billing" type="object" string="Generate Monthly Billing" class="oe_highlight"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_records_billing_service" model="ir.actions.act_window">
            <field name="name">Generate Billing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">records.billing.service</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Tree view for Menu -->
        <!-- Tree view for Ensure -->
        <menuitem id="menu_advanced_billing_root" 
                  name="Advanced Billing" 
                  parent="records_management.menu_records_configuration"
                  sequence="40"/>

        <menuitem id="menu_customer_billing_profiles" 
                  name="Customer Billing Profiles" 
                  parent="menu_advanced_billing_root"
                  action="action_records_customer_billing_profile"
                  sequence="10"/>

        <menuitem id="menu_advanced_billing_periods" 
                  name="Billing Periods" 
                  parent="menu_advanced_billing_root"
                  action="action_records_advanced_billing_period"
                  sequence="20"/>

        <menuitem id="menu_billing_generation" 
                  name="Generate Billing" 
                  parent="menu_advanced_billing_root"
                  action="action_records_billing_service"
                  sequence="30"/>

    </data>

</odoo>
