<odoo>

<!-- Tree view for records.billing.contact -->
    <record id="records_billing_contact_view_tree" model="ir.ui.view">
        <field name="name">records.billing.contact.view.tree</field>
        <field name="model">records.billing.contact</field>
        <field name="arch" type="xml">
            <tree>
<field name="sequence" widget="handle"/>

                <field name="name"/>
<field name="email"/>
<field name="job_title"/>
<field name="billing_profile_id"/>
<field name="primary_contact"/>
<field name="contact_priority"/>
<field name="receive_storage_invoices"/>
<field name="receive_service_invoices"/>
<field name="active"/>

            </tree>
        </field>
    </record>

<!-- Form view for records.billing.contact -->
    <record id="records_billing_contact_view_form" model="ir.ui.view">
        <field name="name">records.billing.contact.view.form</field>
        <field name="model">records.billing.contact</field>
        <field name="arch" type="xml">
<form string="Billing Contact">
                <sheet>
<div class="oe_button_box" name="button_box">
    <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
        <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
    </button>
</div>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
<field name="name" placeholder="Contact Name..."/>

                        </h1>
                    </div>
<group>
    <group string="Contact Information">
        <field name="billing_profile_id" required="1"/>
        <field name="email"/>
        <field name="phone"/>
        <field name="mobile"/>
        <field name="job_title"/>
        <field name="department"/>
    </group>
    <group string="Contact Settings">
        <field name="sequence"/>
        <field name="primary_contact"/>
        <field name="contact_priority"/>
        <field name="active"/>
    </group>
</group>

<notebook>
    <page string="Invoice Preferences">
        <group>
            <group string="Invoice Types">
                <field name="receive_storage_invoices"/>
                <field name="receive_service_invoices"/>
                <field name="receive_statements"/>
                <field name="receive_overdue_notices"/>
            </group>
            <group string="Delivery Preferences">
                <field name="invoice_delivery_method"/>
                <field name="invoice_format"/>
                <field name="consolidated_invoicing"/>
            </group>
        </group>
    </page>

    <page string="Communication">
        <group>
            <group string="Email Settings">
                <field name="email_notifications"/>
                <field name="notification_frequency"/>
            </group>
            <group string="SMS Settings">
                <field name="sms_notifications"/>
                <field name="urgent_notifications_only"/>
            </group>
        </group>
        <group string="Additional Information">
            <field name="notes" nolabel="1" placeholder="Internal notes about this contact..."/>
        </group>
    </page>

    <page string="Services" attrs="{'invisible': [('billing_service_ids', '=', [])]}">
        <field name="billing_service_ids">
            <tree editable="bottom">
                <field name="name"/>
                <field name="service_type"/>
                <field name="active"/>
            </tree>
        </field>
    </page>
</notebook>
                </sheet>
<div class="oe_chatter">
    <field name="message_follower_ids"/>
    <field name="activity_ids"/>
    <field name="message_ids"/>
</div>
            </form>
        </field>
    </record>

<!-- Search view for records.billing.contact -->
    <record id="records_billing_contact_view_search" model="ir.ui.view">
        <field name="name">records.billing.contact.view.search</field>
        <field name="model">records.billing.contact</field>
        <field name="arch" type="xml">
            <search>
<field name="name"/>
<field name="email"/>
<field name="job_title"/>
<field name="department"/>
<field name="billing_profile_id"/>

<filter name="active" string="Active" domain="[('active','=',True)]"/>
<filter name="inactive" string="Inactive" domain="[('active','=',False)]"/>
<separator/>
<filter name="primary" string="Primary Contacts" domain="[('primary_contact','=',True)]"/>
<filter name="high_priority" string="High Priority" domain="[('contact_priority','=','high')]"/>
<separator/>
<filter name="receive_storage" string="Storage Invoices" domain="[('receive_storage_invoices','=',True)]"/>
<filter name="receive_service" string="Service Invoices" domain="[('receive_service_invoices','=',True)]"/>
<filter name="receive_statements" string="Statements" domain="[('receive_statements','=',True)]"/>
                
                <group expand="1" string="Group By">
<filter string="Billing Profile" name="billing_profile" domain="[]" context="{'group_by':'billing_profile_id'}"/>
<filter string="Priority" name="priority" domain="[]" context="{'group_by':'contact_priority'}"/>
<filter string="Job Title" name="job_title" domain="[]" context="{'group_by':'job_title'}"/>
<filter string="Department" name="department" domain="[]" context="{'group_by':'department'}"/>

                </group>
            </search>
        </field>
    </record>

<!-- Action for records.billing.contact -->
    <record id="action_records_billing_contact" model="ir.actions.act_window">
<field name="name">Billing Contacts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.billing.contact</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
<field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
Click to create a new billing contact.
</p>
<p>
                Billing contacts are used to manage who receives invoices, statements,
                and other billing communications for each customer account.
            </p>
        </field>
    </record>

<!-- Tree view for Customer -->

    <!-- Tree view for base.rate -->
    <record id="records_customer_billing_profile_view_tree" model="ir.ui.view">
        <field name="name">customer.billing.profile.view.tree</field>
        <field name="model">customer.billing.profile</field>
        <field name="arch" type="xml">
            <tree string="Customer Billing Profiles" decoration-success="state=='active'" decoration-muted="state=='suspended'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="storage_billing_cycle"/>
                <field name="service_billing_cycle"/>
                <field name="billing_day"/>
                <field name="auto_generate_storage_invoices"/>
                <field name="auto_generate_service_invoices"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form view for base.rate -->
    <record id="records_customer_billing_profile_view_form" model="ir.ui.view">
        <field name="name">customer.billing.profile.view.form</field>
        <field name="model">customer.billing.profile</field>
        <field name="arch" type="xml">
            <form string="Customer Billing Profile">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" states="draft"/>
                    <button name="action_suspend" string="Suspend" type="object" class="btn-warning" states="active"/>
                    <button name="action_reactivate" string="Reactivate" type="object" class="btn-success" states="suspended"/>
                    <button name="action_terminate" string="Terminate" type="object" class="btn-danger" states="active,suspended"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,suspended,terminated"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Profile Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="contact_count"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Storage Billing" name="storage_billing">
                            <group>
                                <group>
                                    <field name="storage_billing_cycle"/>
                                    <field name="storage_bill_in_advance"/>
                                    <field name="storage_advance_months" attrs="{'invisible': [('storage_bill_in_advance', '=', False)]}"/>
                                </group>
                                <group>
                                    <field name="auto_generate_storage_invoices"/>
                                </group>
                            </group>
                        </page>

                        <page string="Service Billing" name="service_billing">
                            <group>
                                <group>
                                    <field name="service_billing_cycle"/>
                                </group>
                                <group>
                                    <field name="auto_generate_service_invoices"/>
                                </group>
                            </group>
                        </page>

                        <page string="Prepaid Options" name="prepaid">
                            <group>
                                <group>
                                    <field name="prepaid_enabled"/>
                                    <field name="prepaid_months" attrs="{'invisible': [('prepaid_enabled', '=', False)]}"/>
                                </group>
                                <group>
                                    <field name="prepaid_discount_percent" attrs="{'invisible': [('prepaid_enabled', '=', False)]}"/>
                                </group>
                            </group>
                        </page>

                        <page string="Billing Schedule" name="billing_schedule">
                            <group>
                                <group>
                                    <field name="billing_day"/>
                                    <field name="invoice_due_days"/>
                                </group>
                                <group>
                                    <field name="payment_term_id"/>
                                    <field name="next_storage_billing_date"/>
                                </group>
                            </group>
                        </page>

                        <page string="Automation" name="automation">
                            <group>
                                <group>
                                    <field name="auto_send_invoices"/>
                                    <field name="auto_send_statements"/>
                                </group>
                            </group>
                        </page>

                        <page string="Billing Contacts" name="billing_contacts">
                            <field name="billing_contact_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="primary_contact"/>
                                    <field name="receive_storage_invoices"/>
                                    <field name="receive_service_invoices"/>
                                    <field name="receive_statements"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <div class="oe_clear"/>
                    <field name="description" placeholder="Additional notes about this billing profile..."/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view for base.rate -->
    <record id="records_customer_billing_profile_view_search" model="ir.ui.view">
        <field name="name">customer.billing.profile.view.search</field>
        <field name="model">customer.billing.profile</field>
        <field name="arch" type="xml">
            <search string="Search Billing Profiles">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="storage_billing_cycle"/>
                <field name="service_billing_cycle"/>
                <separator/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Suspended" name="suspended" domain="[('state', '=', 'suspended')]"/>
                <separator/>
                <filter string="Monthly Storage" name="monthly_storage" domain="[('storage_billing_cycle', '=', 'monthly')]"/>
                <filter string="Quarterly Storage" name="quarterly_storage" domain="[('storage_billing_cycle', '=', 'quarterly')]"/>
                <filter string="Prepaid" name="prepaid" domain="[('prepaid_enabled', '=', True)]"/>
                <group expand="1" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Storage Billing Cycle" name="group_storage_cycle" context="{'group_by': 'storage_billing_cycle'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

