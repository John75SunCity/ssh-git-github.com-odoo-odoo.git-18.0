<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Tree view for naid.certificate -->
    <record id="naid_certificate_view_tree" model="ir.ui.view">
        <field name="name">naid.certificate.view.tree</field>
        <field name="model">naid.certificate</field>
        <field name="arch" type="xml">
<tree decoration-success="state=='issued'" decoration-muted="state=='cancelled'" decoration-info="state=='draft'">
                <field name="name"/>
<field name="partner_id"/>
<field name="issue_date"/>
<field name="destruction_date"/>
<field name="total_weight" sum="Total Weight"/>
<field name="state" widget="badge" decoration-success="state == 'issued'" decoration-info="state == 'draft'"/>
<field name="company_id" groups="base.group_multi_company"/>

            </tree>
        </field>
    </record>

<!-- Form view for naid.certificate -->
    <record id="naid_certificate_view_form" model="ir.ui.view">
        <field name="name">naid.certificate.view.form</field>
        <field name="model">naid.certificate</field>
        <field name="arch" type="xml">
<form string="NAID Certificate of Destruction">
    <header>
        <button name="action_issue" string="Issue Certificate" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
        <button name="action_send" string="Send by Email" type="object" attrs="{'invisible': [('state', '!=', 'issued')]}"/>
        <button name="action_cancel" string="Cancel" type="object" attrs="{'invisible': [('state', 'not in', ['draft', 'issued'])]}"/>
        <button name="action_draft" string="Set to Draft" type="object" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
        <field name="state" widget="statusbar" statusbar_visible="draft,issued,cancelled"/>
    </header>
                <sheet>
<div class="oe_button_box" name="button_box">
    <button name="action_view_destruction_service" type="object" class="oe_stat_button" icon="fa-cogs" attrs="{'invisible': [('destruction_service_id', '=', False)]}">
        <div class="o_field_widget o_stat_info">
            <span class="o_stat_text">Destruction</span>
            <span class="o_stat_text">Service</span>
        </div>
    </button>
</div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
<field name="name" readonly="1"/>

                        </h1>
                    </div>
<group>
    <group>
        <field name="partner_id" required="1" options="{'no_create': True}"/>
        <field name="destruction_service_id" options="{'no_create': True}"/>
        <field name="company_id" groups="base.group_multi_company"/>
    </group>
    <group>
        <field name="issue_date"/>
        <field name="destruction_date"/>
        <field name="user_id"/>
    </group>
</group>
<notebook>
    <page string="Destroyed Materials" name="destroyed_materials">
        <field name="destruction_item_ids">
            <tree editable="bottom">
                <field name="product_id"/>
                <field name="description"/>
                <field name="weight" sum="Total Weight"/>
                <field name="uom_id"/>
            </tree>
        </field>
        <group class="oe_subtotal_footer oe_right">
            <field name="total_weight" class="oe_subtotal_footer_separator"/>
        </group>
    </page>
    <page string="Compliance Details" name="compliance_details">
        <group>
            <group>
                <field name="custodian_name"/>
                <field name="witness_name"/>
            </group>
            <group>
                <field name="naid_compliance_id"/>
                <field name="chain_of_custody_id"/>
            </group>
        </group>
    </page>
    <page string="Notes" name="notes">
        <field name="notes" placeholder="Internal notes about this certificate..."/>
    </page>
</notebook>
                </sheet>
<div class="oe_chatter">
    <field name="message_follower_ids"/>
    <field name="activity_ids"/>
    <field name="message_ids"/>
</div>
            </form>
        </field>
    </record>

<!-- Search view for naid.certificate -->
    <record id="naid_certificate_view_search" model="ir.ui.view">
        <field name="name">naid.certificate.view.search</field>
        <field name="model">naid.certificate</field>
        <field name="arch" type="xml">
            <search>
<field name="name" string="Certificate Number"/>
<field name="partner_id"/>
<field name="destruction_service_id"/>
<separator/>
<filter string="Draft" name="state_draft" domain="[('state', '=', 'draft')]"/>
<filter string="Issued" name="state_issued" domain="[('state', '=', 'issued')]"/>
<separator/>
<filter string="My Certificates" name="my_certificates" domain="[('user_id', '=', uid)]"/>
<group expand="0" string="Group By">
    <filter string="Customer" name="group_by_partner" context="{'group_by':'partner_id'}"/>
    <filter string="Status" name="group_by_state" context="{'group_by':'state'}"/>
    <filter string="Issue Date" name="group_by_issue_date" context="{'group_by':'issue_date:month'}"/>

                </group>
            </search>
        </field>
    </record>

<!-- Action for naid.certificate -->
    <record id="action_naid_certificate" model="ir.actions.act_window">
<field name="name">ðŸ“œ Certificates of Destruction</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">naid.certificate</field>
        <field name="view_mode">tree,form</field>
<field name="search_view_id" ref="naid_certificate_view_search"/>

        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
<p class="o_view_nocontent_smiling_face">
                No Certificates of Destruction found.
</p>
<p>
                This is where you can create, manage, and issue NAID-compliant
                Certificates of Destruction for your customers.
            </p>
        </field>
    </record>

</odoo>
