<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List view for naid.certificate -->
    <record id="naid_certificate_view_tree" model="ir.ui.view">
        <field name="name">naid.certificate.view.tree</field>
        <field name="model">naid.certificate</field>
        <field name="arch" type="xml">
            <list decoration-success="state=='issued'" decoration-muted="state=='cancelled'" decoration-info="state=='draft'">
                <field name="certificate_number"/>
                <field name="partner_id"/>
                <field name="issue_date"/>
                <field name="destruction_date"/>
                <field name="total_weight" sum="Total Weight"/>
                <field name="state" widget="badge" decoration-success="state == 'issued'" decoration-info="state == 'draft'"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Form view for naid.certificate -->
    <record id="naid_certificate_view_form" model="ir.ui.view">
        <field name="name">naid.certificate.view.form</field>
        <field name="model">naid.certificate</field>
        <field name="arch" type="xml">
            <form string="NAID Certificate of Destruction">
                <header>
                    <button name="action_issue_certificate" string="Issue Certificate" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_send_by_email" string="Send by Email" type="object" class="btn-secondary" invisible="state != 'issued'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ('draft', 'issued')" data-hotkey="z"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state != 'cancelled'" data-hotkey="d"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,issued,sent,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="certificate_number"/>
                        <h1>
                            <field name="certificate_number" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" required="1" options="{'no_create': True}" readonly="1" force_save="1"/>
                            <field name="technician_user_id" readonly="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="issue_date" readonly="1"/>
                            <field name="destruction_date" readonly="state != 'draft'"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Destroyed Items" name="destroyed_items">
                            <field name="destruction_item_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="material_type"/>
                                    <field name="quantity"/>
                                    <field name="weight" sum="Total Weight"/>
                                </list>
                            </field>
                            <separator string="Destroyed Containers"/>
                            <field name="container_ids" widget="many2many_tags" options="{'no_create': True}" placeholder="Add containers..."/>
                            <separator string="Destroyed Boxes"/>
                            <field name="box_ids" widget="many2many_tags" options="{'no_create': True}" placeholder="Add boxes..."/>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_items" class="oe_subtotal_footer_separator"/>
                                <field name="total_weight" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Witness Information" name="witness_info">
                            <group>
                                <field name="witness_name"/>
                                <field name="witness_signature" widget="signature"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view for naid.certificate -->
    <record id="naid_certificate_view_search" model="ir.ui.view">
        <field name="name">naid.certificate.view.search</field>
        <field name="model">naid.certificate</field>
        <field name="arch" type="xml">
            <search>
                <field name="certificate_number" string="Certificate Number"/>
                <field name="partner_id"/>
                <separator/>
                <filter string="Draft" name="state_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Issued" name="state_issued" domain="[('state', '=', 'issued')]"/>
                <filter string="Sent" name="state_sent" domain="[('state', '=', 'sent')]"/>
                <separator/>
                <filter string="My Certificates" name="my_certificates" domain="[('technician_user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_by_partner" context="{'group_by':'partner_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by':'state'}"/>
                    <filter string="Technician" name="group_by_technician" context="{'group_by':'technician_user_id'}"/>
                    <filter string="Issue Date" name="group_by_issue_date" context="{'group_by':'issue_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for naid.certificate -->
    <record id="action_naid_certificate" model="ir.actions.act_window">
        <field name="name">Certificates of Destruction</field>
        <field name="res_model">naid.certificate</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="naid_certificate_view_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Certificates of Destruction found.
            </p>
            <p>
                This is where you can create, manage, and issue NAID-compliant
                Certificates of Destruction for your customers.
            </p>
        </field>
    </record>

</odoo>
