<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View records.department View List -->
    <record id="view_records_department_list" model="ir.ui.view">
        <field name="name">view.records.department.list</field>
        <field name="model">records.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View records.department form -->
    <record id="view_records_department_form" model="ir.ui.view">
        <field name="name">view.records.department.form</field>
        <field name="model">records.department</field>
        <field name="arch" type="xml">
            <form string="Records Department">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View records.department search -->
    <record id="view_records_department_search" model="ir.ui.view">
        <field name="name">view.records.department.search</field>
        <field name="model">records.department</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action records.department -->
    <record id="action_records_department" model="ir.actions.act_window">
        <field name="name">Records Department</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.department</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records Department.
            </p>
        </field>
    </record>

</odoo>
