<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- ============================================================================ -->
    <!-- Tree view for SHRED -->
    <!-- ============================================================================ -->
    <record id="shred_bin_view_tree" model="ir.ui.view">
        <field name="name">shred.bin.view.tree</field>
        <field name="model">shred.bin</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <tree string="Customer Shred Bins" decoration-danger="state=='full'" decoration-warning="current_fill_level &amp;gt;= 75 and state=='in_service'" decoration-success="state=='in_service' and current_fill_level &amp;lt; 75" decoration-info="state=='deployed'" decoration-muted="state=='retired'" decoration-bf="state=='maintenance'" class="o_list_view_shred_bins">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="bin_size"/>
                <field name="customer_location"/>
                <field name="state"/>
                <field name="current_fill_level" widget="progressbar"/>
                <field name="needs_collection" invisible="1"/>
                <field name="last_service_date"/>
                <field name="service_count"/>
                <field name="user_id"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- ============================================================================ -->
    <!-- Tree view for SHRED -->
    <!-- ============================================================================ -->
    <record id="shred_bin_view_tree" model="ir.ui.view">
        <field name="name">shred.bin.view.tree</field>
        <field name="model">shred.bin</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <tree string="My Shred Bins" decoration-danger="needs_collection==True" decoration-warning="current_fill_level &amp;gt;= 75 and needs_collection==False" decoration-success="state=='in_service' and current_fill_level &amp;lt; 75" create="false" delete="false" editable="false">
                <field name="name"/>
                <field name="bin_size"/>
                <field name="customer_location"/>
                <field name="state" string="Status"/>
                <field name="current_fill_level" widget="progressbar" string="Fill Level"/>
                <field name="days_since_last_service" string="Days Since Service"/>
                <field name="current_billing_period_services" string="This Month"/>
                <field name="needs_collection" invisible="1"/>
                <field name="last_service_date"/>
                <field name="active" invisible="1"/>
                <button name="action_customer_mark_full" string="Mark Full" type="object" class="btn-warning" attrs="{'invisible': ['|', ('state', '!=', 'in_service'), ('needs_collection', '=', True)]}" confirm="Are you sure this bin is ready for collection?"/>
            </tree>
        </field>
    </record>

    <!-- ============================================================================ -->
    <!-- Form view for SHRED -->
    <!-- ============================================================================ -->
    <record id="shred_bin_view_form" model="ir.ui.view">
        <field name="name">shred.bin.view.form</field>
        <field name="model">shred.bin</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <form string="My Shred Bin" create="false" edit="false" delete="false">
                <header>
                    <button name="action_customer_mark_full" string="Request Collection" type="object" class="btn-danger" attrs="{'invisible': ['|', ('state', '!=', 'in_service'), ('needs_collection', '=', True)]}" confirm="Are you sure this bin is ready for collection? This will create a pickup request for our team."/>
                    <button name="action_request_upsize" string="Request Larger Bin" type="object" class="btn-info" attrs="{'invisible': [('can_upsize', '=', False)]}" confirm="Request a larger bin size? This will create a service request for our team to upgrade your bin."/>
                    <button name="action_request_downsize" string="Request Smaller Bin" type="object" class="btn-secondary" attrs="{'invisible': [('can_downsize', '=', False)]}" confirm="Request a smaller bin size? This will create a service request for our team to downgrade your bin."/>
                    <button name="action_request_additional_bins" string="Request Additional Bins" type="object" class="btn-success" attrs="{'invisible': [('bin_size', '!=', '96')]}" confirm="Request additional bins for your location? Our sales team will contact you to discuss options."/>
                    <field name="state" widget="statusbar" statusbar_visible="in_service,full,collecting" statusbar_colors='{"full":"red","collecting":"orange","in_service":"green"}'/>
                </header>

                <sheet>
                    <widget name="web_ribbon" title="Collection Requested" bg_color="bg-danger" attrs="{'invisible': [('needs_collection', '=', False)]}"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Bin Information">
                            <field name="bin_size" readonly="1"/>
                            <field name="customer_location" readonly="1"/>
                            <field name="current_fill_level" widget="progressbar"/>
                            <field name="needs_collection" readonly="1"/>
                        </group>

                        <group string="Service Information">
                            <field name="days_since_last_service" readonly="1"/>
                            <field name="current_billing_period_services" readonly="1"/>
                            <field name="last_service_date" readonly="1"/>
                        </group>

                        <group string="Sizing Options" attrs="{'invisible': ['&amp;amp;', ('can_upsize', '=', False), ('can_downsize', '=', False), ('bin_size', '!=', '96')]}">
                            <field name="can_upsize" readonly="1"/>
                            <field name="next_size_up" readonly="1" attrs="{'invisible': [('can_upsize', '=', False)]}"/>
                            <field name="can_downsize" readonly="1"/>
                            <field name="next_size_down" readonly="1" attrs="{'invisible': [('can_downsize', '=', False)]}"/>
                        </group>
                    </group>

                    <div class="alert alert-info" role="alert" attrs="{'invisible': [('current_fill_level', '&amp;lt;', 75)]}">
                        <strong>Collection Notice:</strong> Your bin is getting full. Consider requesting collection when ready.
                    </div>

                    <div class="alert alert-success" role="alert" attrs="{'invisible': [('needs_collection', '=', True)]}">
                        <strong>Service Status:</strong> Your bin is in good service. We'll collect it when you request or when it's full.
                    </div>

                    <notebook>
                        <page string="Service History" attrs="{'invisible': [('current_billing_period_services', '=', 0)]}">
                            <field name="shredding_service_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="service_date"/>
                                    <field name="service_type"/>
                                    <field name="state"/>
                                    <field name="actual_weight" string="Weight Destroyed"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Collection Requests">
                            <field name="pickup_request_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="request_date"/>
                                    <field name="urgency"/>
                                    <field name="state"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="shred_bin_view_form" model="ir.ui.view">
        <field name="name">shred.bin.view.form</field>
        <field name="model">shred.bin</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <form string="Customer Shred Bin">
                <header>
                    <button name="action_deploy" string="Put In Service" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'deployed')]}"/>
                    <button name="action_mark_full" string="Mark as Full" type="object" class="btn-warning" attrs="{'invisible': [('state', '!=', 'in_service')]}"/>
                    <button name="action_start_collection" string="Start Collection" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'full')]}"/>
                    <button name="action_complete_service" string="Complete Service" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'collecting')]}"/>
                    <button name="action_schedule_pickup" string="Schedule Pickup" type="object" class="btn-info"/>
                    <field name="state" widget="statusbar" statusbar_visible="deployed,in_service,full,collecting"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_services" type="object" class="oe_stat_button" icon="fa-scissors">
                            <field name="service_count" widget="statinfo" string="Services"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Full - Needs Collection" bg_color="bg-danger" attrs="{'invisible': [('needs_collection', '=', False)]}"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. SB001"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="bin_size"/>
                            <field name="customer_location" placeholder="e.g. Front Office, Mailroom"/>
                            <field name="barcode"/>
                            <field name="user_id"/>
                            <field name="active"/>
                        </group>

                        <group string="Capacity &amp;amp; Status">
                            <field name="capacity_pounds"/>
                            <field name="current_fill_level" widget="progressbar"/>
                            <field name="estimated_weight"/>
                            <field name="needs_collection" readonly="1"/>
                            <field name="last_service_date" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Security">
                            <field name="is_locked"/>
                            <field name="lock_type"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Service Description">
                            <field name="description" placeholder="Additional service notes and requirements..."/>
                        </page>

                        <page string="Shredding Services" attrs="{'invisible': [('service_count', '=', 0)]}">
                            <field name="shredding_service_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="service_date"/>
                                    <field name="service_type"/>
                                    <field name="state"/>
                                    <field name="total_weight"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Pickup Requests">
                            <field name="pickup_request_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="request_date"/>
                                    <field name="request_type"/>
                                    <field name="urgency"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ============================================================================ -->
    <!-- Search view for SHRED -->
    <!-- ============================================================================ -->
    <record id="shred_bin_view_search" model="ir.ui.view">
        <field name="name">shred.bin.view.search</field>
        <field name="model">shred.bin</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Shred Bins">
                <field name="name" string="Bin Number"/>
                <field name="partner_id" string="Customer"/>
                <field name="customer_location"/>
                <field name="barcode"/>
                <field name="user_id"/>

                <filter name="needs_collection" string="Needs Collection" domain="[('needs_collection', '=', True)]"/>
                <filter name="in_service" string="In Service" domain="[('state', '=', 'in_service')]"/>
                <filter name="full" string="Full" domain="[('state', '=', 'full')]"/>
                <filter name="maintenance" string="Maintenance" domain="[('state', '=', 'maintenance')]"/>

                <separator/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_customer" string="Customer" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_bin_size" string="Bin Size" context="{'group_by': 'bin_size'}"/>
                    <filter name="group_service_rep" string="Service Rep" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================================ -->
    <!-- Kanban view for SHRED -->
    <!-- ============================================================================ -->
    <record id="shred_bin_view_kanban" model="ir.ui.view">
        <field name="name">shred.bin.view.kanban</field>
        <field name="model">shred.bin</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="bin_size"/>
                <field name="current_fill_level"/>
                <field name="needs_collection"/>
                <field name="state"/>
                <field name="service_count"/>
                <field name="customer_location"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.state.raw_value=='full' ? 'border-danger' : record.current_fill_level.raw_value >= 75 ? 'border-warning' : record.state.raw_value=='in_service' ? 'border-success' : record.state.raw_value=='deployed' ? 'border-info' : record.state.raw_value=='maintenance' ? 'border-dark' : 'border-secondary'}">
                            <div class="o_kanban_image">
                                <i t-attf-class="fa fa-trash fa-2x" t-attf-style="color: #{record.state.raw_value=='full' ? '#dc3545' : record.current_fill_level.raw_value >= 75 ? '#ffc107' : record.state.raw_value=='in_service' ? '#28a745' : record.state.raw_value=='deployed' ? '#007bff' : record.state.raw_value=='maintenance' ? '#6f42c1' : record.state.raw_value=='collecting' ? '#fd7e14' : '#6c757d'};"/>
                            </div>

                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="partner_id"/>
 -                                            <field name="customer_location"/>
                                        </small>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <small>
                                                <strong>Size:</strong>
                                                <field name="bin_size"/>
                                            </small>
                                        </div>
                                        <div class="col-6">
                                            <small>
                                                <strong>Fill:</strong>
                                                <field name="current_fill_level"/>
%</small>
                                        </div>
                                    </div>

                                    <div class="progress mb-2" style="height: 8px;">
                                        <div class="progress-bar" role="progressbar" t-attf-style="width: #{record.current_fill_level.raw_value}%;" t-attf-class="#{record.current_fill_level.raw_value >= 90 ? 'bg-danger' : record.current_fill_level.raw_value >= 75 ? 'bg-warning' : record.current_fill_level.raw_value >= 50 ? 'bg-info' : 'bg-success'}"/>
                                    </div>

                                    <div class="row">
                                        <div class="col-12">
                                            <span t-attf-class="badge #{record.state.raw_value=='full' ? 'badge-danger' : record.state.raw_value=='in_service' ? 'badge-success' : record.state.raw_value=='deployed' ? 'badge-info' : record.state.raw_value=='maintenance' ? 'badge-secondary' : record.state.raw_value=='collecting' ? 'badge-warning' : 'badge-light'}">
                                                <field name="state"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <small t-if="record.service_count.raw_value &amp;gt; 0">
                                            <i class="fa fa-scissors text-muted"/>
                                            <field name="service_count"/>
 services
                                        </small>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-if="record.needs_collection.raw_value" class="badge badge-danger">
                                            <i class="fa fa-exclamation-triangle"/>
 Collection Due
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================================================ -->
    <!-- Kanban view for SHRED -->
    <!-- ============================================================================ -->
    <record id="shred_bin_view_kanban" model="ir.ui.view">
        <field name="name">shred.bin.view.kanban</field>
        <field name="model">shred.bin</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile o_kanban_portal" create="false" delete="false">
                <field name="name"/>
                <field name="bin_size"/>
                <field name="current_fill_level"/>
                <field name="needs_collection"/>
                <field name="state"/>
                <field name="service_count"/>
                <field name="customer_location"/>
                <field name="last_service_date"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.needs_collection.raw_value ? 'border-danger' : record.current_fill_level.raw_value >= 75 ? 'border-warning' : 'border-success'}">
                            <div class="o_kanban_image">
                                <i t-attf-class="fa fa-trash fa-3x" t-attf-style="color: #{record.needs_collection.raw_value ? '#dc3545' : record.current_fill_level.raw_value >= 75 ? '#ffc107' : '#28a745'};"/>
                            </div>

                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-3">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title h4">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small class="text-muted">
                                            <i class="fa fa-map-marker"/>
                                            <field name="customer_location"/>
                                        </small>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body mb-3">
                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <strong>Bin Size:</strong>
                                            <br/>
                                            <span class="text-muted">
                                                <field name="bin_size"/>
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <strong>Fill Level:</strong>
                                            <br/>
                                            <span t-attf-class="#{record.current_fill_level.raw_value >= 90 ? 'text-danger' : record.current_fill_level.raw_value >= 75 ? 'text-warning' : 'text-success'}">
                                                <field name="current_fill_level"/>
%
                                            </span>
                                        </div>
                                    </div>

                                    <div class="progress mb-3" style="height: 12px;">
                                        <div class="progress-bar" role="progressbar" t-attf-style="width: #{record.current_fill_level.raw_value}%;" t-attf-class="#{record.current_fill_level.raw_value >= 90 ? 'bg-danger' : record.current_fill_level.raw_value >= 75 ? 'bg-warning' : 'bg-success'}"/>
                                    </div>

                                    <div class="row" t-if="record.last_service_date.raw_value">
                                        <div class="col-12">
                                            <small class="text-muted">
                                                <i class="fa fa-clock-o"/>
 Last Service: <field name="last_service_date"/>
                                            </small>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.needs_collection.raw_value" class="badge badge-danger badge-pill">
                                            <i class="fa fa-exclamation-triangle"/>
 Ready for Collection
                                        </span>
                                        <span t-elif="record.current_fill_level.raw_value >= 75" class="badge badge-warning badge-pill">
                                            <i class="fa fa-clock-o"/>
 Collection Soon
                                        </span>
                                        <span t-else="" class="badge badge-success badge-pill">
                                            <i class="fa fa-check"/>
 In Service
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <small class="text-muted" t-if="record.service_count.raw_value &amp;gt; 0">
                                            <field name="service_count"/>
 services
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================================================ -->
    <!-- Tree view for SHRED -->
    <!-- ============================================================================ -->
    <record id="shred_bin_view_tree" model="ir.ui.view">
        <field name="name">shred.bin.view.tree</field>
        <field name="model">shred.bin</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <map res_partner="partner_id" default_order="partner_id">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="customer_location"/>
                <field name="state"/>
                <field name="current_fill_level"/>
                <field name="needs_collection"/>
                <field name="bin_size"/>
                <field name="service_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_card_header">
                                    <div class="oe_kanban_card_header_title">
                                        <div class="o_kanban_record_title">
                                            <strong>
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="partner_id"/>
 -                                            <field name="customer_location"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="oe_kanban_card_content">
                                    <div class="row">
                                        <div class="col-6">
                                            <div>Size: <field name="bin_size"/>
                                            </div>
                                            <div>Fill: <field name="current_fill_level"/>
%</div>
                                        </div>
                                        <div class="col-6">
                                            <span t-attf-class="badge #{record.state.raw_value=='full' ? 'badge-danger' : record.current_fill_level.raw_value >= 75 ? 'badge-warning' : record.state.raw_value=='in_service' ? 'badge-success' : record.state.raw_value=='deployed' ? 'badge-info' : record.state.raw_value=='maintenance' ? 'badge-secondary' : 'badge-light'}">
                                                <field name="state"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="progress mt-2" style="height: 6px;">
                                        <div class="progress-bar" t-attf-style="width: #{record.current_fill_level.raw_value}%;" t-attf-class="#{record.current_fill_level.raw_value >= 90 ? 'bg-danger' : record.current_fill_level.raw_value >= 75 ? 'bg-warning' : 'bg-success'}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </map>
        </field>
    </record>

    <!-- ============================================================================ -->
    <!-- Tree view for SHRED -->
    <!-- ============================================================================ -->

    <!-- Tree view for Internal -->
    <record id="action_shred_bin" model="ir.actions.act_window">
        <field name="name">Customer Shred Bins</field>
        <field name="res_model">shred.bin</field>
        <field name="view_mode">kanban,list,form,map</field>
        <field name="context">{'search_default_in_service': 1}</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                      (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_shred_bin_kanban')}),
                                      (0, 0, {'view_mode': 'tree', 'view_id': ref('view_shred_bin_tree')}),
                                      (0, 0, {'view_mode': 'form', 'view_id': ref('view_shred_bin_form')}),
                                      (0, 0, {'view_mode': 'map', 'view_id': ref('view_shred_bin_map')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first shred bin!
            </p>
            <p>
                Shred bins are placed at customer locations to collect confidential documents
                for secure destruction. Track fill levels, schedule collections, and manage
                the complete service lifecycle.
            </p>
            <div class="mt-3">
                <h5>Color Coding System:</h5>
                <ul>
                    <li>
                        <span class="badge badge-danger">Red</span> - Full bins (immediate collection needed)</li>
                    <li>
                        <span class="badge badge-warning">Yellow</span> - High fill level (75-90%, collection soon)</li>
                    <li>
                        <span class="badge badge-success">Green</span> - In active service (good status)</li>
                    <li>
                        <span class="badge badge-info">Blue</span> - Accounted for at facility</li>
                    <li>
                        <span class="badge badge-secondary">Purple</span> - Under maintenance</li>
                    <li>
                        <span class="badge badge-light">Grey</span> - Unknown/retired status</li>
                </ul>
            </div>
        </field>
    </record>

    <!-- Tree view for Customer -->
    <record id="action_shred_bin_portal" model="ir.actions.act_window">
        <field name="name">My Shred Bins</field>
        <field name="res_model">shred.bin</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">['&amp;', ('partner_id', '=', user.partner_id.commercial_partner_id.id), '|', ('department_id', '=', False), ('department_id.user_ids', 'in', [user.id])]</field>
        <field name="context">{'create': False, 'delete': False, 'edit': False}</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                      (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_shred_bin_kanban_portal')}),
                                      (0, 0, {'view_mode': 'tree', 'view_id': ref('view_shred_bin_tree_portal')}),
                                      (0, 0, {'view_mode': 'form', 'view_id': ref('view_shred_bin_form_portal')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No shred bins found at your location.
            </p>
            <p>
                Contact your service representative to have shred bins deployed at your location.
                Once deployed, you can monitor fill levels and request collections here.
            </p>
            <div class="mt-3">
                <h5>Status Indicators:</h5>
                <ul>
                    <li>
                        <span class="badge badge-danger">Red</span> - Ready for collection</li>
                    <li>
                        <span class="badge badge-warning">Yellow</span> - Collection needed soon</li>
                    <li>
                        <span class="badge badge-success">Green</span> - In good service</li>
                </ul>
            </div>
        </field>
    </record>

