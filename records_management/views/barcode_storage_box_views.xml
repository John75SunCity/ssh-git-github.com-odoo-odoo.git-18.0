<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View barcode.storage.box View List -->
    <record id="view_barcode_storage_box_list" model="ir.ui.view">
        <field name="name">view.barcode.storage.box.list</field>
        <field name="model">barcode.storage.box</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View barcode.storage.box form -->
    <record id="view_barcode_storage_box_form" model="ir.ui.view">
        <field name="name">view.barcode.storage.box.form</field>
        <field name="model">barcode.storage.box</field>
        <field name="arch" type="xml">
            <form string="Barcode Storage Box">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View barcode.storage.box search -->
    <record id="view_barcode_storage_box_search" model="ir.ui.view">
        <field name="name">view.barcode.storage.box.search</field>
        <field name="model">barcode.storage.box</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action barcode.storage.box -->
    <record id="action_barcode_storage_box" model="ir.actions.act_window">
        <field name="name">Barcode Storage Box</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">barcode.storage.box</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Barcode Storage Box.
            </p>
        </field>
    </record>

</odoo>
