<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- ========================================== -->
<!-- RECORDS FILE VIEWS -->
<!-- ========================================== -->
    <record id="records_file_view_kanban" model="ir.ui.view">
        <field name="name">records.file.view.kanban</field>
        <field name="model">records.file</field>
        <field name="arch" type="xml">
        <kanban default_group_by="state" class="o_kanban_file_dashboard">
        <field name="name"/>
        <field name="display_name"/>
        <field name="partner_id"/>
        <field name="stock_owner_id"/>
        <field name="container_id"/>
        <field name="location_id"/>
        <field name="state"/>
        <field name="create_date"/>
        <field name="file_category"/>
        <field name="document_count"/>
        <field name="temp_barcode"/>
        <field name="barcode"/>
            <templates>
                <t t-name="card">
                    <div class="oe_kanban_card oe_kanban_global_click">
                        <div class="o_kanban_card_header">
                            <div class="o_kanban_card_header_title">
                                <div class="o_primary">
                                    <i class="fa fa-folder-o" title="File Folder" aria-hidden="true"/>
                                    <field name="name"/>
                                </div>
                                <div class="o_secondary">
                                    <i class="fa fa-user" title="Customer" aria-hidden="true"/>
                                    <field name="partner_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_manage_button_section">
                                <a class="o_kanban_manage_toggle_button" href="#">
                                    <i class="fa fa-ellipsis-v" title="More options" role="img" aria-label="More options"/>
                                </a>
                            </div>
                        </div>
                        <div class="o_kanban_card_content" t-att-title="record.display_name.raw_value" t-att-aria-label="record.display_name.raw_value" role="group">
                            <div class="row">
                                <div class="col-8">
                                    <div>
                                        <i class="fa fa-cube" title="Container" aria-label="Container" role="img"/>
                                        <field name="container_id"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-tag" title="Category" aria-label="Category" role="img"/>
                                        <field name="file_category"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-map-marker" title="Location" aria-label="Location" role="img"/>
                                        <field name="location_id"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-calendar" title="Creation Date" aria-label="Creation Date" role="img"/>
                                        <field name="create_date"/>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <span class="badge" t-att-class="record.state.raw_value === 'in' ? 'badge-success' : record.state.raw_value === 'out' ? 'badge-warning' : 'badge-secondary'">
                                        <field name="state"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-6">
                                    <button class="btn btn-primary btn-sm" type="object" name="action_view_documents">
                                        <i class="fa fa-file-pdf-o" title="View Documents" aria-hidden="true"/>
                                        Documents
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-info btn-sm" type="object" name="action_generate_barcode">
                                        <i class="fa fa-barcode" title="Generate Barcode" aria-hidden="true"/>
                                        Barcode
                                    </button>
                                </div>
                            </div>
                            <div class="row mt-1">
                                <div class="col-12">
                                    <button class="btn btn-success btn-sm" type="object" name="action_upload_document">
                                        <i class="fa fa-upload" title="Upload Document" aria-hidden="true"/>
                                        Upload PDF
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                            <a role="menuitem" type="object" name="action_view_documents" class="dropdown-item">
                                <i class="fa fa-file-pdf-o"/> View Documents</a>
                            <a role="menuitem" type="object" name="action_upload_document" class="dropdown-item">
                                <i class="fa fa-upload"/> Upload Document</a>
                            <a role="menuitem" type="object" name="action_add_documents" class="dropdown-item">
                                <i class="fa fa-plus-circle"/> Add Existing Documents</a>
                            <div class="dropdown-divider"/>
                            <a role="menuitem" type="object" name="action_generate_barcode" class="dropdown-item">
                                <i class="fa fa-barcode"/> Generate Barcode</a>
                            <a role="menuitem" type="object" name="action_generate_qr_code" class="dropdown-item">
                                <i class="fa fa-qrcode"/> Generate QR Code</a>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
    </record>

<!-- Tree/List view for File Folders - Styled like records.document -->
    <record id="records_file_view_list" model="ir.ui.view">
        <field name="name">records.file.view.list</field>
        <field name="model">records.file</field>
        <field name="arch" type="xml">
        <list string="File Folders" multi_edit="1" sample="1"
              decoration-success="state == 'in'"
              decoration-warning="state == 'out'">
            <field name="name" string="File Name"/>
            <field name="file_category" string="Category" optional="show"/>
            <field name="partner_id" string="Customer"/>
            <field name="stock_owner_id" string="Stock Owner" optional="show"/>
            <field name="container_id" string="Container"/>
            <field name="document_count" string="Docs"/>
            <field name="state" widget="badge" decoration-success="state == 'in'" decoration-warning="state == 'out'"/>
            <field name="barcode" optional="hide"/>
            <field name="temp_barcode" optional="hide"/>
            <field name="location_id" string="Location" optional="hide"/>
            <field name="date_created" optional="hide"/>
            <!-- Action buttons with Font Awesome 4 icons (fa fa-*) -->
            <button name="action_view_documents" type="object" string="Docs" icon="fa-file-pdf-o" class="btn-link" title="View Documents"/>
            <button name="action_generate_barcode" type="object" string="Barcode" icon="fa-barcode" class="btn-link" title="Generate Barcode"/>
            <button name="action_generate_qr_code" type="object" string="QR" icon="fa-qrcode" class="btn-link" title="Generate QR Code"/>
            <button name="action_upload_document" type="object" string="Upload" icon="fa-upload" class="btn-link" title="Upload Document"/>
        </list>
    </field>
    </record>

<!-- Form view for File Folders - Styled like records.document -->
    <record id="records_file_view_form" model="ir.ui.view">
        <field name="name">records.file.view.form</field>
        <field name="model">records.file</field>
        <field name="arch" type="xml">
        <form>
            <header>
                <!-- Action buttons styled like records.document -->
                <button name="action_view_documents" type="object" string="View Documents" class="btn-primary"/>
                <button name="action_upload_document" type="object" string="Upload Document" class="btn-info"/>
                <button name="action_print_barcode_label" type="object" string="Print Barcode" class="btn-warning"/>
                <button name="action_print_qr_label" type="object" string="Print QR Code" class="btn-success"/>
                <button name="action_retrieve_from_container" type="object" string="Retrieve from Container"
                        class="btn-secondary" invisible="state != 'in' or not container_id"/>
                <button name="action_return_to_container" type="object" string="Return to Container"
                        class="btn-secondary" invisible="state != 'out' or not container_id"/>
                <field name="state" widget="statusbar" statusbar_visible="in,out"/>
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <!-- Document count stat button -->
                    <button class="oe_stat_button" type="object" name="action_view_documents" icon="fa-file-pdf-o">
                        <field name="document_count" string="Documents" widget="statinfo"/>
                    </button>
                    <!-- Container stat button - READ ONLY - users cannot change container assignment -->
                    <button class="oe_stat_button" type="object" name="action_view_container"
                            icon="fa-archive" invisible="not container_id">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Container</span>
                            <span class="o_stat_value" style="font-size: 11px;">
                                <field name="container_id" readonly="1"/>
                            </span>
                        </div>
                    </button>
                    <!-- Movement history stat button -->
                    <button class="oe_stat_button" type="object" name="action_view_movement_history"
                            icon="fa-history">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Movement History</span>
                        </div>
                    </button>
                    <!-- Barcode stat button -->
                    <button class="oe_stat_button" icon="fa-barcode" invisible="not temp_barcode and not barcode">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">File Barcode</span>
                            <span class="o_stat_value" style="font-size: 12px;">
                                <field name="barcode" invisible="not barcode"/>
                                <field name="temp_barcode" invisible="barcode"/>
                            </span>
                        </div>
                    </button>
                </div>

                <group>
                    <group string="File Information">
                        <field name="name"
                               string="File Name"
                               placeholder="e.g., HR-Personnel-Records, Finance-Q4-Invoices"
                               help="Unique name for this file folder"/>
                        <field name="file_category" string="Category"/>
                        <field name="partner_id" string="Customer" readonly="1"
                               help="Customer is inherited from the container and cannot be changed"/>
                        <field name="department_id" string="Department" readonly="1"
                               help="Department is inherited from the container and cannot be changed"/>
                        <field name="container_id" string="Container" readonly="1"
                               help="Container cannot be changed after file creation for security compliance"/>
                    </group>
                    <group string="Barcode">
                        <field name="temp_barcode"
                               string="Temporary Barcode"
                               readonly="1"
                               help="System-generated temporary barcode (auto-assigned)"/>
                        <field name="barcode"
                               string="Physical Barcode"
                               placeholder="Scan or type barcode from pre-printed sheet"
                               help="Physical barcode - scan with camera or laser scanner"
                               widget="barcode"/>
                    </group>
                    <group string="Location &amp; Ownership">
                        <field name="stock_owner_id" string="Stock Owner" readonly="1"/>
                        <field name="current_location_id" string="Current Location" readonly="1"/>
                        <field name="state" string="Status"/>
                        <field name="responsible_person_id"
                               string="Responsible User"
                               context="{'records_with_department': True}"
                               domain="[('active', '=', True), '|', ('department_assignment_ids.department_id', '=', department_id), ('department_assignment_ids', '=', False)]"
                               help="Select the responsible user. Users are shown with their department name in brackets."/>
                    </group>
                    <group string="Dates">
                        <field name="date_created" string="Date Created"/>
                        <field name="received_date" string="Received Date"/>
                    </group>
                </group>

                <!-- Legal Compliance &amp; Record Series (Optional) -->
                <group string="Legal Compliance &amp; Record Series (Optional)" name="legal_compliance" col="2">
                    <group>
                        <field name="record_series_id"
                               string="Record Series"
                               options="{'no_create': True}"
                               help="Select a record series code to automatically apply legal citations and retention policies"/>
                        <field name="disposition_id"
                               string="Disposition Method"
                               options="{'no_create': True}"
                               help="How records should be handled at end of retention period (Shred, Archive, etc.)"/>
                    </group>
                    <group>
                        <field name="legal_citation_ids"
                               string="Legal Citations"
                               widget="many2many_tags"
                               options="{'no_create': True}"
                               help="Legal requirements governing retention of these records (IRS, HIPAA, SOX, etc.)"/>
                    </group>
                </group>

                <notebook>
                    <page string="Documents" name="documents">
                        <div class="alert alert-info mb-2" role="alert">
                            <i class="fa fa-info-circle"/> Documents in this file folder. Use <b>Upload Document</b> to add new files.
                        </div>
                        <field name="document_ids" mode="list" context="{'default_file_id': id, 'default_container_id': container_id}">
                            <list string="Documents" create="1" delete="0">
                                <field name="name"/>
                                <field name="document_type_id" optional="show"/>
                                <field name="barcode" optional="show"/>
                                <field name="is_permanent" widget="boolean"/>
                                <field name="destruction_eligible_date" optional="show"/>
                                <field name="create_date"/>
                            </list>
                        </field>
                    </page>
                    <page string="Description" name="description">
                        <field name="description" placeholder="Detailed description of file contents..."/>
                    </page>
                    <page string="Stock &amp; Tracking" name="stock" groups="records_management.group_records_manager">
                        <group>
                            <group string="Stock Information">
                                <field name="quant_id" readonly="1"/>
                                <field name="owner_id" string="Quant Owner" readonly="1"/>
                                <field name="location_id" string="Stock Location" readonly="1"/>
                            </group>
                            <group string="Portal Info">
                                <field name="created_via_portal" readonly="1"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
        </form>
    </field>
    </record>

<!-- Search view for File Folders -->
    <record id="records_file_view_search" model="ir.ui.view">
        <field name="name">records.file.view.search</field>
        <field name="model">records.file</field>
        <field name="arch" type="xml">
        <search>
            <field name="name" string="File" filter_domain="['|','|', ('name', 'ilike', self), ('barcode', 'ilike', self), ('temp_barcode', 'ilike', self)]"/>
            <field name="partner_id"/>
            <field name="stock_owner_id"/>
            <field name="container_id"/>
            <field name="file_category"/>
            <field name="location_id"/>
            <field name="state"/>

            <filter string="In Storage" name="in_storage" domain="[('state', '=', 'in')]"/>
            <filter string="Out" name="out" domain="[('state', '=', 'out')]"/>

            <separator/>
            <filter string="Has Documents" name="has_documents" domain="[('document_count', '>', 0)]"/>
            <filter string="Empty Files" name="empty_files" domain="[('document_count', '=', 0)]"/>

            <separator/>
            <filter string="This Month" name="this_month" domain="[('date_created', '>=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
            <filter string="This Year" name="this_year" domain="[('date_created', '>=', context_today().strftime('%Y-01-01'))]"/>

            <group expand="0" string="Group By">
                <filter string="Customer" name="customer" context="{'group_by': 'partner_id'}"/>
                <filter string="Stock Owner" name="stock_owner" context="{'group_by': 'stock_owner_id'}"/>
                <filter string="Container" name="container" context="{'group_by': 'container_id'}"/>
                <filter string="Category" name="category" context="{'group_by': 'file_category'}"/>
                <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                <filter string="Location" name="location" context="{'group_by': 'location_id'}"/>
            </group>
        </search>
    </field>
    </record>

<!-- Action for File Folders -->
    <record id="action_records_file" model="ir.actions.act_window">
        <field name="name">File Folders</field>
        <field name="res_model">records.file</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_in_storage': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first file folder!
            </p>
            <p>
                File folders contain individual documents and PDFs.<br/>
                They can be stored in containers or tracked independently.
            </p>
        </field>
    </record>

    </data>
</odoo>
