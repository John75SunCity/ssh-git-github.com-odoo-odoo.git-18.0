<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inventory_item_destruction_view_tree" model="ir.ui.view">
            <field name="name">inventory.item.destruction.view.tree</field>
            <field name="model">inventory.item.destruction</field>
            <field name="arch" type="xml">
                <list string="Inventory Item Destruction">
                    <field name="name" />
                    <field name="date" />
                    <field name="responsible_id" />
                    <field name="state" />
                </list>
            </field>
        </record>
        <record id="inventory_item_destruction_view_form" model="ir.ui.view">
            <field name="name">inventory.item.destruction.view.form</field>
            <field name="model">inventory.item.destruction</field>
            <field name="arch" type="xml">
                <form string="Inventory Item Destruction">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="date" />
                            <field name="responsible_id" />
                            <field name="item_ids" />
                            <field name="state" />
                            <field name="notes" />
                            <field name="active" />
                            <field name="company_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="inventory_item_destruction_view_search" model="ir.ui.view">
            <field name="name">inventory.item.destruction.view.search</field>
            <field name="model">inventory.item.destruction</field>
            <field name="arch" type="xml">
                <search string="Search Inventory Item Destruction">
                    <field name="name" />
                    <field name="state" />
                    <field name="responsible_id" />
                </search>
            </field>
        </record>
        <record id="action_inventory_item_destruction" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model inventory.item.destruction has state field - consider using default search filters -->
            <field name="name">Inventory Item Destruction</field>
            <field name="res_model">inventory.item.destruction</field>
            <field name="view_mode>list,form</field>
        </record>
    </data>
</odoo>
