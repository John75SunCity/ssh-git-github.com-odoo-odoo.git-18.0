<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View approval.history View List -->
    <record id="view_approval_history_list" model="ir.ui.view">
        <field name="name">view.approval.history.list</field>
        <field name="model">approval.history</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View approval.history form -->
    <record id="view_approval_history_form" model="ir.ui.view">
        <field name="name">view.approval.history.form</field>
        <field name="model">approval.history</field>
        <field name="arch" type="xml">
            <form string="Approval History">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View approval.history search -->
    <record id="view_approval_history_search" model="ir.ui.view">
        <field name="name">view.approval.history.search</field>
        <field name="model">approval.history</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action approval.history -->
    <record id="action_approval_history" model="ir.actions.act_window">
        <field name="name">Approval History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">approval.history</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Approval History.
            </p>
        </field>
    </record>

</odoo>
