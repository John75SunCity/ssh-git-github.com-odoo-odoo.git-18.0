<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
<!-- Tree view for base.rate -->
    <record id="records_location_report_wizard_view_tree" model="ir.ui.view">
        <field name="name">records.location.report.wizard.view.tree</field>
        <field name="model">records.location.report.wizard</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form view for base.rate -->
    <record id="records_location_report_wizard_view_form" model="ir.ui.view">
        <field name="name">records.location.report.wizard.view.form</field>
        <field name="model">records.location.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Records Location Report Wizard">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for base.rate -->
    <record id="records_location_report_wizard_view_search" model="ir.ui.view">
        <field name="name">records.location.report.wizard.view.search</field>
        <field name="model">records.location.report.wizard</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree view for Action -->
    <record id="action_records_location_report_wizard" model="ir.actions.act_window">
        <field name="name">Records Location Report Wizard</field>
        <field name="res_model">records.location.report.wizard</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records Location Report Wizard.
            </p>
        </field>
    </record>

<!-- Tree view for LOCATION -->

    <!-- Form view for Wizard -->
    <record id="records_location_report_wizard_view_form" model="ir.ui.view">
        <field name="name">records.location.report.wizard.view.form</field>
        <field name="model">records.location.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <h1>üìä Location Utilization Report</h1>
                </header>
                <sheet>
<div class="alert alert-info" role="status">
                        <strong>üìç Location Analysis</strong><br/>
                        Generate detailed utilization and capacity reports for storage locations.
                    </div>

                    <group>
                        <group string="üìç Location Selection">
                            <field name="location_id" readonly="1"/>
                            <field name="location_name" readonly="1"/>
                            <field name="include_child_locations"/>
                            <field name="report_date"/>
                        </group>

                        <group string="üìä Current Statistics">
                            <field name="total_capacity" readonly="1"/>
                            <field name="current_utilization" readonly="1"/>
                            <field name="utilization_percentage" widget="percentage" readonly="1"/>
                        </group>
                    </group>

                    <div class="mt-3">
                        <h4>üìã Report Options:</h4>
                        <div class="row">
                            <div class="col-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <i class="fa fa-table fa-2x text-primary mb-2"></i>
                                        <h6>Interactive Report</h6>
                                        <p class="text-muted">View detailed location data with filters and grouping</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <i class="fa fa-file-pdf-o fa-2x text-danger mb-2"></i>
                                        <h6>PDF Report</h6>
                                        <p class="text-muted">Print or save a formatted PDF report</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <i class="fa fa-file-excel-o fa-2x text-success mb-2"></i>
                                        <h6>CSV Export</h6>
                                        <p class="text-muted">Export data for analysis in spreadsheet applications</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
                <footer>
<button name="action_generate_report" type="object" string="üìä View Interactive Report"
                            class="btn-primary"/>
<button name="action_print_report" type="object" string="üñ®Ô∏è Print PDF Report"
                            class="btn-secondary"/>
<button name="action_export_csv" type="object" string="üìÅ Export CSV"
                            class="btn-success"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</data>

</odoo>
