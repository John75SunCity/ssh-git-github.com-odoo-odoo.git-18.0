<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree view for records.location.report.wizard -->
        <record id="records_location_report_wizard_view_tree" model="ir.ui.view">
            <field name="name">records.location.report.wizard.view.tree</field>
            <field name="model">records.location.report.wizard</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="report_type"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </list>
            </field>
        </record>

        <!-- Form view for records.location.report.wizard -->
        <record id="records_location_report_wizard_view_form" model="ir.ui.view">
            <field name="name">records.location.report.wizard.view.form</field>
            <field name="model">records.location.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Records Location Report Wizard">
                    <header>
                        <h1>üìä Location Utilization Report</h1>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Report Name..."/>
                            </h1>
                        </div>

                        <div class="alert alert-info" role="status">
                            <strong>üìç Location Analysis</strong><br/>
                            Generate detailed utilization and capacity reports for storage locations.
                        </div>

                        <group>
                            <group string="üìç Location Selection">
                                <field name="location_ids" widget="many2many_tags"/>
                                <field name="report_type"/>
                            </group>

                            <group string="üìÖ Date Range">
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                        </group>

                        <div class="mt-3">
                            <h4>üìã Report Options:</h4>
                            <div class="row">
                                <div class="col-4">
                                    <div class="card">
                                        <div class="card-body text-center">
<i class="fa fa-table fa-2x text-primary mb-2" title="Interactive Report"></i>
                                            <h6>Interactive Report</h6>
                                            <p class="text-muted">View detailed location data with filters and grouping</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="card">
                                        <div class="card-body text-center">
<i class="fa fa-file-pdf-o fa-2x text-danger mb-2" title="PDF Report"></i>
                                            <h6>PDF Report</h6>
                                            <p class="text-muted">Print or save a formatted PDF report</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="card">
                                        <div class="card-body text-center">
<i class="fa fa-file-excel-o fa-2x text-success mb-2" title="CSV Export"></i>
                                            <h6>CSV Export</h6>
                                            <p class="text-muted">Export data for analysis in spreadsheet applications</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </sheet>
                    <footer>
                        <button name="action_generate_report" type="object" string="üìä Generate Report"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Search view for records.location.report.wizard -->
        <record id="records_location_report_wizard_view_search" model="ir.ui.view">
            <field name="name">records.location.report.wizard.view.search</field>
            <field name="model">records.location.report.wizard</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="location_ids"/>
                    <field name="report_type"/>
                    <group expand="1" string="Group By">
                        <filter string="Report Type" name="report_type" domain="[]" context="{'group_by':'report_type'}"/>
                        <filter string="Date From" name="date_from" domain="[]" context="{'group_by':'date_from'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action for records.location.report.wizard -->
        <record id="action_records_location_report_wizard" model="ir.actions.act_window">
            <field name="name">Records Location Report Wizard</field>
            <field name="res_model">records.location.report.wizard</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There are no location reports. Click here to create a new Location Report Wizard.
                </p>
            </field>
        </record>
    </data>
</odoo>
