<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
    <data><record id="certificate_template_data_view_tree" model="ir.ui.view">
        <field name="name">certificate.template.data.view.tree</field>
        <field name="model">certificate.template.data</field>
    <field name="arch" type="xml">
            <list string="Certificate Template Data">
                <field name="name"/>
                <field name="template_type"/>
                <field name="template_format"/>
                <field name="certification_authority"/>
                <field name="company_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="certificate_template_data_view_form" model="ir.ui.view">
        <field name="name">certificate.template.data.view.form</field>
        <field name="model">certificate.template.data</field>
    <field name="arch" type="xml">
            <form string="Certificate Template Data">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="template_type"/>
                            <field name="template_format"/>
                            <field name="certification_authority"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="logo_image" widget="image"/>
                            <field name="company_id"/>
                            <field name="company_address"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Header">
                            <field name="header_text" widget="html"/>
                        </page>
                        <page string="Body Template">
                            <field name="body_template" widget="html"/>
                        </page>
                        <page string="Footer">
                            <field name="footer_text" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_certificate_template_data" model="ir.actions.act_window">
        <field name="name">Certificate Template Data</field>
        <field name="res_model">certificate.template.data</field>
        <field name="view_mode">list,form</field>
    </record>

    </data>
</odoo>
