<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Pickup Location Form View -->
    <record id="pickup_location_view_form" model="ir.ui.view">
        <field name="name">pickup.location.form</field>
        <field name="model">pickup.location</field>
        <field name="arch" type="xml">
            <form string="Pickup Location">
                <header>
                    <field name="active" widget="boolean_toggle" options="{'terminology': 'active'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="address"/>
                            <field name="city"/>
                            <field name="state_id"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Add any special instructions or notes about this location..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Pickup Location Tree View -->
    <record id="pickup_location_view_tree" model="ir.ui.view">
        <field name="name">pickup.location.tree</field>
        <field name="model">pickup.location</field>
        <field name="arch" type="xml">
            <tree string="Pickup Locations">
                <field name="name"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="user_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Pickup Location Search View -->
    <record id="pickup_location_view_search" model="ir.ui.view">
        <field name="name">pickup.location.search</field>
        <field name="model">pickup.location</field>
        <field name="arch" type="xml">
            <search string="Search Pickup Locations">
                <field name="name"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="user_id"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state_id'}"/>
                    <filter string="Country" name="group_country" context="{'group_by': 'country_id'}"/>
                    <filter string="Manager" name="group_manager" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pickup Location Action -->
    <record id="pickup_location_action" model="ir.actions.act_window">
        <field name="name">Pickup Locations</field>
        <field name="res_model">pickup.location</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first pickup location!
            </p>
            <p>
                Pickup locations help organize and manage where documents are collected from.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="pickup_location_menu"
              name="Pickup Locations"
              parent="records_management.menu_records_config"
              action="pickup_location_action"
              sequence="40"/>
</odoo>