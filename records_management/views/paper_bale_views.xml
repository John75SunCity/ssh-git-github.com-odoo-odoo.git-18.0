<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Kanban view for paper.bale -->
        <record id="paper_bale_view_kanban" model="ir.ui.view">
            <field name="name">paper.bale.view.kanban</field>
            <field name="model">paper.bale</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="bale_number"/>
                    <field name="weight"/>
                    <field name="state"/>
                    <field name="source_date"/>
                    <field name="paper_grade"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span class="float-end">
                                            <field name="state" widget="label_selection" options="{'classes': {'draft': 'secondary', 'weighed': 'info', 'in_stock': 'warning', 'shipped': 'success', 'recycled': 'success', 'cancelled': 'danger'}}"/>
                                        </span>
                                    </div>
                                    <span class="o_kanban_record_subtitle text-muted">
                                        Bale #<field name="bale_number"/> â€¢ <field name="weight"/> kg
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="d-flex justify-content-between">
                                                <span>
                                                    <strong>Grade:</strong> <field name="paper_grade"/>
                                                </span>
                                                <span t-if="record.source_date.raw_value">
                                                    <strong>Date:</strong> <field name="source_date"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- List view for paper.bale -->
        <record id="paper_bale_view_tree" model="ir.ui.view">
            <field name="name">paper.bale.view.tree</field>
            <field name="model">paper.bale</field>
            <field name="arch" type="xml">
                <list string="Paper Bales" decoration-success="state=='shipped'" decoration-info="state=='weighed'" decoration-warning="state=='in_stock'" decoration-muted="state=='cancelled'">
                    <field name="name"/>
                    <field name="bale_number"/>
                    <field name="paper_grade"/>
                    <field name="weight" sum="Total Weight (kg)"/>
                    <field name="source_date"/>
                    <field name="state" widget="badge" decoration-success="state == 'shipped'" decoration-info="state == 'weighed'"/>
                </list>
            </field>
        </record>

        <!-- Form view for paper.bale -->
        <record id="paper_bale_view_form" model="ir.ui.view">
            <field name="name">paper.bale.view.form</field>
            <field name="model">paper.bale</field>
            <field name="arch" type="xml">
                <form string="Paper Bale">
                    <header>
                        <button name="action_weigh_bale" string="Weigh Bale" type="object" class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_load_trailer" string="Load Trailer" type="object" class="btn-primary" invisible="state != 'weighed'"/>
                        <button name="action_quality_inspection" string="Quality Check" type="object" class="btn-info" invisible="state == 'draft'"/>
                        <button name="action_view_inspections" string="View Inspections" type="object" class="btn-secondary"/>
                        <button name="action_view_movements" string="View Movements" type="object" class="btn-secondary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,weighed,in_stock,shipped,recycled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                            <div class="o_row">
                                <span class="text-muted">Bale #</span>
                                <field name="bale_number" readonly="1"/>
                            </div>
                        </div>
                        <group>
                            <group name="basic_info" string="Bale Information">
                                <field name="paper_grade"/>
                                <field name="weight"/>
                                <field name="weigh_date"/>
                                <field name="location_id"/>
                            </group>
                            <group name="source_info" string="Source Information">
                                <field name="source_type"/>
                                <field name="source_date"/>
                                <field name="source_notes"/>
                            </group>
                        </group>
                        <group>
                            <group name="shipping_info" string="Shipping Information">
                                <field name="shipment_id" readonly="1"/>
                                <field name="load_id"/>
                            </group>
                            <group name="tracking_info" string="Tracking">
                                <field name="inspection_count" string="Inspections"/>
                                <field name="movement_count" string="Movements"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Inspections" name="inspections">
                                <field name="inspection_ids" nolabel="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="inspection_date"/>
                                        <field name="inspector_id"/>
                                        <field name="inspection_type"/>
                                        <field name="passed"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Movements" name="movements">
                                <field name="movement_ids" nolabel="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="movement_date"/>
                                        <field name="source_location_id"/>
                                        <field name="destination_location_id"/>
                                        <field name="responsible_user_id"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes" nolabel="1"/>
                            </page>
                        </notebook>
                        <group name="system_info" string="System Information">
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search view for paper.bale -->
        <record id="paper_bale_view_search" model="ir.ui.view">
            <field name="name">paper.bale.view.search</field>
            <field name="model">paper.bale</field>
            <field name="arch" type="xml">
                <search string="Paper Bales">
                    <field name="name"/>
                    <field name="bale_number"/>
                    <field name="paper_grade"/>
                    <field name="location_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Weighed" name="weighed" domain="[('state', '=', 'weighed')]"/>
                    <filter string="In Stock" name="in_stock" domain="[('state', '=', 'in_stock')]"/>
                    <filter string="Shipped" name="shipped" domain="[('state', '=', 'shipped')]"/>
                    <filter string="Recycled" name="recycled" domain="[('state', '=', 'recycled')]"/>
                    <separator/>
                    <filter string="WHT Grade" name="wht_grade" domain="[('paper_grade', '=', 'wht')]"/>
                    <filter string="MIX Grade" name="mix_grade" domain="[('paper_grade', '=', 'mix')]"/>
                    <filter string="OCC Grade" name="occ_grade" domain="[('paper_grade', '=', 'occ')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('source_date', '=', context_today)]"/>
                    <filter string="This Week" name="this_week" domain="[('source_date', '&gt;=', (context_today - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <filter string="This Month" name="this_month" domain="[('source_date', '&gt;=', (context_today.replace(day=1)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Paper Grade" name="group_grade" context="{'group_by': 'paper_grade'}"/>
                        <filter string="Source Date" name="group_source_date" context="{'group_by': 'source_date'}"/>
                        <filter string="Location" name="group_location" context="{'group_by': 'location_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action for paper.bale -->
        <record id="action_paper_bale" model="ir.actions.act_window">
            <field name="name">Paper Bales</field>
            <field name="res_model">paper.bale</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="paper_bale_view_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first paper bale!
                </p>
                <p>
                    Track paper bales from creation through the recycling process.
                    Monitor weight, quality, and movements throughout the lifecycle.
                </p>
            </field>
        </record>

    </data>
</odoo>
