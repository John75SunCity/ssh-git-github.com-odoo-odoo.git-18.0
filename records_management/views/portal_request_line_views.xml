<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="portal_request_line_view_tree" model="ir.ui.view">
        <field name="name">portal.request.line.view.tree</field>
        <field name="model">portal.request.line</field>
    <field name="arch" type="xml">
            <tree string="Portal Request Line">
                <field name="request_id"/>
                <field name="item_type"/>
                <field name="description"/>
                <field name="quantity"/>
                <field name="state"/>
                <field name="sequence"/>
                <field name="notes"/>
                <field name="company_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="portal_request_line_view_form" model="ir.ui.view">
        <field name="name">portal.request.line.view.form</field>
        <field name="model">portal.request.line</field>
    <field name="arch" type="xml">
            <form string="Portal Request Line">
                <sheet>
                    <group>
                        <field name="request_id"/>
                        <field name="item_type"/>
                        <field name="description"/>
                        <field name="quantity"/>
                        <field name="state"/>
                        <field name="sequence"/>
                        <field name="notes"/>
                        <field name="company_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="portal_request_line_view_search" model="ir.ui.view">
        <field name="name">portal.request.line.view.search</field>
        <field name="model">portal.request.line</field>
    <field name="arch" type="xml">
            <search string="Search Portal Request Line">
                <field name="description"/>
                <field name="request_id"/>
                <field name="item_type"/>
                <field name="state"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_portal_request_line" model="ir.actions.act_window">
        <field name="name">Portal Request Line</field>
        <field name="res_model">portal.request.line</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
