<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View revenue.forecaster View List -->
    <record id="view_revenue_forecaster_list" model="ir.ui.view">
        <field name="name">view.revenue.forecaster.list</field>
        <field name="model">revenue.forecaster</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View revenue.forecaster form -->
    <record id="view_revenue_forecaster_form" model="ir.ui.view">
        <field name="name">view.revenue.forecaster.form</field>
        <field name="model">revenue.forecaster</field>
        <field name="arch" type="xml">
            <form string="Revenue Forecaster">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View revenue.forecaster search -->
    <record id="view_revenue_forecaster_search" model="ir.ui.view">
        <field name="name">view.revenue.forecaster.search</field>
        <field name="model">revenue.forecaster</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action revenue.forecaster -->
    <record id="action_revenue_forecaster" model="ir.actions.act_window">
        <field name="name">Revenue Forecaster</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">revenue.forecaster</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Revenue Forecaster.
            </p>
        </field>
    </record>

</odoo>
