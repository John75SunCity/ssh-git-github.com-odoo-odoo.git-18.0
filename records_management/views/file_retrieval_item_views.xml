<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
<!-- List view for file.retrieval.item -->
<record id="file_retrieval_item_view_tree" model="ir.ui.view">
        <field name="name">file.retrieval.item.view.list</field>
        <field name="model">file.retrieval.item</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View file.retrieval.item form -->
    <record id="file_retrieval_item_view_form" model="ir.ui.view">
        <field name="name">file.retrieval.item.view.form</field>
        <field name="model">file.retrieval.item</field>
        <field name="arch" type="xml">
            <form string="File Retrieval Item">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View file.retrieval.item search -->
    <record id="file_retrieval_item_view_search" model="ir.ui.view">
        <field name="name">file.retrieval.item.view.search</field>
        <field name="model">file.retrieval.item</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action file.retrieval.item -->
    <record id="action_file_retrieval_item" model="ir.actions.act_window">
        <field name="name">File Retrieval Item</field>
        <field name="res_model">file.retrieval.item</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new File Retrieval Item.
            </p>
        </field>
    </record>
</data>

</odoo>
