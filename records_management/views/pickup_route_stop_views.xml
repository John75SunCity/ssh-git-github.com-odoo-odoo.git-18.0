<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for pickup.route.stop -->
    <record id="view_pickup_route_stop_tree" model="ir.ui.view">
        <field name="name">pickup.route.stop.tree</field>
        <field name="model">pickup.route.stop</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for pickup.route.stop -->
    <record id="view_pickup_route_stop_form" model="ir.ui.view">
        <field name="name">pickup.route.stop.form</field>
        <field name="model">pickup.route.stop</field>
        <field name="arch" type="xml">
            <form string="Pickup Route Stop">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for pickup.route.stop -->
    <record id="view_pickup_route_stop_search" model="ir.ui.view">
        <field name="name">pickup.route.stop.search</field>
        <field name="model">pickup.route.stop</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pickup.route.stop -->
    <record id="action_pickup_route_stop" model="ir.actions.act_window">
        <field name="name">Pickup Route Stop</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pickup.route.stop</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Pickup Route Stop.
            </p>
        </field>
    </record>

</odoo>
