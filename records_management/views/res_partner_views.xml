<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 👥 ENTERPRISE CUSTOMER MANAGEMENT - Advanced CRM Dashboard -->
    
    <!-- 🎨 Customer Kanban Dashboard with Analytics -->
    <record id="view_res_partner_records_kanban" model="ir.ui.view">
        <field name="name">res.partner.records.kanban</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_customer_dashboard" default_group_by="customer_rank">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="is_company"/>
                <field name="customer_rank"/>
                <field name="supplier_rank"/>
                <field name="total_boxes"/>
                <field name="total_documents"/>
                <field name="active_storage_value"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('res.partner', 'avatar_128', record.id.raw_value)" alt="Customer Avatar"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle" t-if="record.email.raw_value">
                                            <i class="fa fa-envelope"/> <field name="email"/>
                                        </div>
                                        <div class="o_kanban_record_subtitle" t-if="record.phone.raw_value">
                                            <i class="fa fa-phone"/> <field name="phone"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <button class="btn btn-primary btn-sm" type="object" name="action_view_customer_boxes">
                                                📦 <field name="total_boxes"/> Boxes
                                            </button>
                                        </div>
                                        <div class="col-6">
                                            <button class="btn btn-info btn-sm" type="object" name="action_view_customer_documents">
                                                📄 <field name="total_documents"/> Docs
                                            </button>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <span class="badge badge-success" t-if="record.active_storage_value.raw_value">
                                                💰 $<field name="active_storage_value"/> Value
                                            </span>
                                            <span class="badge badge-primary" t-if="record.is_company.raw_value">
                                                🏢 Company
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_manage_button_section">
                                <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" title="More options"/></a>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">✏️ Edit Customer</a>
                                <a role="menuitem" type="object" name="action_view_customer_boxes" class="dropdown-item">📦 View Boxes</a>
                                <a role="menuitem" type="object" name="action_view_customer_documents" class="dropdown-item">📄 View Documents</a>
                                <a role="menuitem" type="object" name="action_view_customer_departments" class="dropdown-item">🏢 View Departments</a>
                                <a role="menuitem" type="object" name="action_customer_portal_access" class="dropdown-item">🔑 Portal Access</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="object" name="action_generate_customer_report" class="dropdown-item">📊 Generate Report</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- 📋 Enhanced Tree View for Customer Management -->
    <record id="view_res_partner_records_tree" model="ir.ui.view">
        <field name="name">res.partner.records.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list decoration-primary="is_company == True" 
                  decoration-success="total_boxes &gt; 0"
                  decoration-muted="customer_rank == 0">
                <field name="name" string="👤 Customer Name"/>
                <field name="email" string="📧 Email"/>
                <field name="phone" string="📞 Phone"/>
                <field name="is_company" string="🏢 Is Company"/>
                <field name="total_boxes" string="📦 Boxes" sum="Total Boxes"/>
                <field name="total_documents" string="📄 Documents" sum="Total Documents"/>
                <field name="active_storage_value" string="💰 Storage Value" sum="Total Value"/>
                <field name="department_count" string="🏢 Departments"/>
                <field name="last_activity_date" string="📅 Last Activity"/>
                <button name="action_view_customer_boxes" type="object" string="View Boxes" 
                        icon="fa-cube" class="btn-link"/>
                <button name="action_generate_customer_report" type="object" string="Report" 
                        icon="fa-bar-chart" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- 📝 Enhanced Form View with Records Management Integration -->
    <record id="view_res_partner_records_form" model="ir.ui.view">
        <field name="name">res.partner.records.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_customer_report" type="object" string="📊 Generate Report" class="btn-primary"/>
                    <button name="action_customer_portal_access" type="object" string="🔑 Setup Portal Access" class="btn-secondary"/>
                    <button name="action_create_service_request" type="object" string="🎯 New Service Request" class="btn-info"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_customer_boxes" icon="fa-cube">
                            <field string="Storage Boxes" name="total_boxes" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_customer_documents" icon="fa-file-text-o">
                            <field string="Documents" name="total_documents" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_customer_departments" icon="fa-building">
                            <field string="Departments" name="department_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_service_requests" icon="fa-tasks">
                            <field string="Service Requests" name="service_request_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-dollar">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">$<field name="active_storage_value"/></span>
                                <span class="o_stat_text">Storage Value</span>
                            </div>
                        </button>
                    </div>
                    
                    <field name="avatar_128" widget="image" class="oe_avatar"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Customer Name"/>
                        </h1>
                        <field name="category_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </div>
                    
                    <group>
                        <group string="📧 Contact Information">
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="website" widget="url"/>
                        </group>
                        <group string="🏢 Company Information">
                            <field name="is_company"/>
                            <field name="parent_id" context="{'default_is_company': True}"/>
                            <field name="function" placeholder="e.g., Records Manager"/>
                            <field name="title"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="📍 Address">
                            <field name="street" placeholder="Street Address"/>
                            <field name="street2" placeholder="Street Address 2"/>
                            <div class="o_address_format">
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" placeholder="State" class="o_address_state"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                            </div>
                            <field name="country_id" placeholder="Country"/>
                        </group>
                        <group string="📊 Records Management">
                            <field name="customer_rank"/>
                            <field name="supplier_rank"/>
                            <field name="user_id" string="Account Manager"/>
                            <field name="naid_certified"/>
                            <field name="retention_policy_default"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="📦 Storage Overview" name="storage">
                            <group>
                                <group string="📊 Storage Statistics">
                                    <field name="total_boxes"/>
                                    <field name="total_documents"/>
                                    <field name="active_storage_value"/>
                                    <field name="last_activity_date"/>
                                </group>
                                <group string="📋 Service Information">
                                    <field name="preferred_pickup_time"/>
                                    <field name="special_instructions"/>
                                    <field name="billing_contact_id"/>
                                    <field name="emergency_contact_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="🏢 Departments" name="departments">
                            <field name="department_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="department_head"/>
                                    <field name="box_count"/>
                                    <field name="active"/>
                                    <button name="action_view_department_boxes" type="object" string="View Boxes" icon="fa-cube" class="btn-link"/>
                                </list>
                            </field>
                        </page>
                        <page string="🎯 Service History" name="services">
                            <field name="service_request_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="service_type"/>
                                    <field name="state"/>
                                    <field name="requested_date"/>
                                    <field name="completed_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="💰 Billing &amp; Contracts" name="billing">
                            <group>
                                <group string="💳 Billing Information">
                                    <field name="payment_term_id"/>
                                    <field name="property_account_receivable_id"/>
                                    <field name="credit_limit"/>
                                </group>
                                <group string="📄 Contract Information">
                                    <field name="contract_start_date"/>
                                    <field name="contract_end_date"/>
                                    <field name="auto_renew"/>
                                    <field name="contract_terms"/>
                                </group>
                            </group>
                        </page>
                        <page string="📝 Internal Notes" name="notes">
                            <field name="comment" placeholder="Internal notes about this customer..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- 📈 Graph View for Customer Analytics -->
    <record id="view_res_partner_records_graph" model="ir.ui.view">
        <field name="name">res.partner.records.graph</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <graph string="📊 Customer Analytics">
                <field name="user_id" type="row"/>
                <field name="total_boxes" type="measure"/>
                <field name="active_storage_value" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- 🔍 Enhanced Search for Customer Management -->
    <record id="view_res_partner_records_search" model="ir.ui.view">
        <field name="name">res.partner.records.search</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Customer" 
                       filter_domain="['|', '|', ('name', 'ilike', self), ('email', 'ilike', self), ('phone', 'ilike', self)]"/>
                <field name="category_id"/>
                <field name="user_id"/>
                
                <filter string="🏢 Companies" name="companies" domain="[('is_company', '=', True)]"/>
                <filter string="👤 Contacts" name="contacts" domain="[('is_company', '=', False)]"/>
                <filter string="📦 Active Storage" name="has_boxes" domain="[('total_boxes', '>', 0)]"/>
                <filter string="🆔 NAID Certified" name="naid_certified" domain="[('naid_certified', '=', True)]"/>
                
                <separator/>
                <filter string="💼 High Value Customers" name="high_value" 
                        domain="[('active_storage_value', '&gt;', 10000)]"/>
                <filter string="📊 Medium Value Customers" name="medium_value" 
                        domain="[('active_storage_value', '&gt;', 1000), ('active_storage_value', '&lt;=', 10000)]"/>
                <filter string="🆕 New Customers" name="new_customers" 
                        domain="[('create_date', '&gt;=', (context_today() - relativedelta(months=3)).strftime('%Y-%m-01'))]"/>
                
                <group expand="0" string="📊 Group By">
                    <filter string="Account Manager" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Company Type" name="group_by_company" context="{'group_by': 'is_company'}"/>
                    <filter string="Country" name="group_by_country" context="{'group_by': 'country_id'}"/>
                    <filter string="NAID Certification" name="group_by_naid" context="{'group_by': 'naid_certified'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- 🚀 ENTERPRISE ACTION - Complete Customer Management -->
    <record id="action_res_partner_records" model="ir.actions.act_window">
        <field name="name">👥 Customer Management</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form,graph</field>
        <field name="search_view_id" ref="view_res_partner_records_search"/>
        <field name="domain">[('customer_rank', '>', 0)]</field>
        <field name="context">{
            'default_customer_rank': 1,
            'default_is_company': True,
            'search_default_companies': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                👥 Create your first customer!
            </p>
            <p>
                <b>Enterprise Customer Management:</b><br/>
                • 🎨 Visual customer dashboard with storage analytics<br/>
                • 📦 Integrated box and document tracking<br/>
                • 🏢 Multi-department customer support<br/>
                • 🎯 Service request management and history<br/>
                • 💰 Storage value tracking and billing integration<br/>
                • 🔑 Customer portal access management<br/>
                • 📊 Advanced customer analytics and reporting<br/>
                • 📱 Mobile-optimized customer interface
            </p>
        </field>
    </record>
</odoo>
