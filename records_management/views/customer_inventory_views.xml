<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customer Inventory Report List View with Modern Features -->
    <record id="view_customer_inventory_report_list" model="ir.ui.view">
        <field name="name">customer.inventory.report.list</field>
        <field name="model">customer.inventory.report</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Customer Inventory Reports" 
                  decoration-info="status=='draft'" 
                  decoration-success="status=='confirmed'" 
                  decoration-warning="status=='sent'"
                  decoration-danger="total_boxes > 500">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="report_date"/>
                <field name="total_boxes"/>
                <field name="total_documents"/>
                <field name="active_locations"/>
                <field name="status" widget="badge"/>
                <field name="create_date"/>
                <field name="write_date"/>
            </list>
        </field>
    </record>

    <!-- Enhanced Tree View for Customer Inventory (Alternative) -->
    <record id="view_customer_inventory_tree" model="ir.ui.view">
        <field name="name">customer.inventory.tree</field>
        <field name="model">customer.inventory.report</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Customer Inventory Reports" 
                  decoration-info="status=='draft'" 
                  decoration-success="status=='confirmed'" 
                  decoration-warning="status=='sent'"
                  decoration-danger="total_boxes > 500"
                  editable="top">
                <field name="name" required="1"/>
                <field name="customer_id"/>
                <field name="report_date"/>
                <field name="total_boxes" widget="integer"/>
                <field name="total_documents" widget="integer"/>
                <field name="active_locations"/>
                <field name="status" widget="selection"/>
            </list>
        </field>
    </record>

    <!-- Enhanced Customer Inventory Report Form View -->
    <record id="view_customer_inventory_report_form" model="ir.ui.view">
        <field name="name">customer.inventory.report.form</field>
        <field name="model">customer.inventory.report</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Customer Inventory Report">
                <header>
                    <button name="action_confirm_report" type="object" string="Confirm Report" 
                            class="btn-primary" invisible="status != 'draft'"/>
                    <button name="action_send_to_customer" type="object" string="Send to Customer" 
                            class="btn-primary" invisible="status != 'confirmed'"/>
                    <button name="action_create_destruction_request" type="object" string="Create Destruction Request" 
                            class="btn-danger" invisible="status == 'draft'"
                            confirm="This will create a destruction request for all items in this inventory. Continue?"/>
                    <button name="action_export_to_excel" type="object" string="Export to Excel" 
                            class="btn-success" icon="fa-file-excel-o"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed,sent,archived"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_boxes" icon="fa-archive">
                            <field string="Boxes" name="total_boxes" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_documents" icon="fa-file-text-o">
                            <field string="Documents" name="total_documents" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_locations" icon="fa-map-marker">
                            <field string="Locations" name="active_locations" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Draft" bg_color="bg-info" invisible="status != 'draft'"/>
                    <widget name="web_ribbon" title="Confirmed" bg_color="bg-success" invisible="status != 'confirmed'"/>
                    <widget name="web_ribbon" title="Sent" bg_color="bg-warning" invisible="status != 'sent'"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-secondary" invisible="status != 'archived'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Report Name..." class="o_text_overflow"/>
                        </h1>
                        <div class="o_row" invisible="status == 'draft'">
                            <span class="badge badge-pill badge-info" invisible="total_boxes &lt;= 100">High Volume Inventory</span>
                            <span class="badge badge-pill badge-warning" invisible="total_boxes &lt;= 500">Very High Volume</span>
                            <span class="badge badge-pill badge-danger" invisible="total_boxes &lt;= 1000">Critical Volume</span>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id" options="{'no_create': True}" widget="many2one_avatar"/>
                            <field name="report_date" widget="date"/>
                            <field name="volume_category" readonly="1" widget="badge"/>
                        </group>
                        <group>
                            <field name="total_boxes" readonly="1" 
                                   widget="integer" 
                                   class="o_field_integer"/>
                            <field name="box_count_css_class" invisible="1"/>
                            <field name="total_documents" readonly="1" widget="integer"/>
                            <field name="active_locations" readonly="1" widget="integer"/>
                            <field name="write_date" readonly="1" widget="datetime" string="Last Updated"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Customer Boxes" name="boxes_page">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <button name="action_refresh_boxes" type="object" string="Refresh Box Data" 
                                            class="btn btn-secondary btn-sm" icon="fa-refresh"/>
                                    <button name="action_select_all_boxes" type="button" string="Select All" 
                                            class="btn btn-outline-primary btn-sm ml-2" onclick="selectAllBoxes()"/>
                                </div>
                                <div class="col-md-6 text-right">
                                    <span class="badge badge-info">Total: <field name="total_boxes" readonly="1"/></span>
                                </div>
                            </div>
                            <field name="box_ids" mode="tree" readonly="1" 
                                   context="{'tree_view_ref': 'records_management.view_records_box_inventory_tree'}">
                                <list decoration-success="state=='active'" 
                                      decoration-warning="state=='pending'" 
                                      decoration-danger="state=='destroyed'"
                                      decoration-muted="state=='archived'"
                                      editable="bottom">
                                    <field name="name"/>
                                    <field name="location_id"/>
                                    <field name="state" widget="badge"/>
                                    <field name="create_date" widget="datetime"/>
                                </list>
                            </field>
                        </page>
                        <page string="Customer Documents" name="documents_page">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <button name="action_refresh_documents" type="object" string="Refresh Document Data" 
                                            class="btn btn-secondary btn-sm" icon="fa-refresh"/>
                                    <button name="action_select_all_documents" type="button" string="Select All" 
                                            class="btn btn-outline-primary btn-sm ml-2" onclick="selectAllDocuments()"/>
                                </div>
                                <div class="col-md-6 text-right">
                                    <span class="badge badge-info">Total: <field name="total_documents" readonly="1"/></span>
                                </div>
                            </div>
                            <field name="document_ids" mode="tree" readonly="1">
                                <list decoration-success="state=='active'" 
                                      decoration-warning="state=='pending'" 
                                      decoration-danger="state=='destroyed'"
                                      decoration-muted="state=='archived'">
                                    <field name="name"/>
                                    <field name="box_id"/>
                                    <field name="state" widget="badge"/>
                                    <field name="create_date" widget="datetime"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes &amp; Comments" name="notes_page">
                            <field name="notes" placeholder="Additional notes about this inventory report..." widget="html"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Enhanced Customer Inventory Report Search View -->
    <record id="view_customer_inventory_report_search" model="ir.ui.view">
        <field name="name">customer.inventory.report.search</field>
        <field name="model">customer.inventory.report</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Customer Inventory">
                <field name="name" string="Report Name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="customer_id" string="Customer" filter_domain="[('customer_id', 'child_of', self)]"/>
                <field name="report_date" string="Report Date"/>
                <field name="total_boxes" string="Box Count"/>
                <field name="notes" string="Notes"/>
                <separator/>
                <!-- Status Filters -->
                <filter string="Draft" name="filter_draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Confirmed" name="filter_confirmed" domain="[('status', '=', 'confirmed')]"/>
                <filter string="Sent" name="filter_sent" domain="[('status', '=', 'sent')]"/>
                <filter string="Archived" name="filter_archived" domain="[('status', '=', 'archived')]"/>
                <separator/>
                <!-- Volume-based Filters -->
                <filter string="Small Inventory (â‰¤50 boxes)" name="filter_small" domain="[('total_boxes', '&lt;=', 50)]"/>
                <filter string="Medium Inventory (51-100 boxes)" name="filter_medium" domain="[('total_boxes', '>', 50), ('total_boxes', '&lt;=', 100)]"/>
                <filter string="Large Inventory (101-500 boxes)" name="filter_large" domain="[('total_boxes', '>', 100), ('total_boxes', '&lt;=', 500)]"/>
                <filter string="Very Large Inventory (>500 boxes)" name="filter_very_large" domain="[('total_boxes', '>', 500)]" 
                        help="High volume inventories requiring special attention"/>
                <separator/>
                <!-- Date Filters -->
                <filter string="Today" name="filter_today" 
                        domain="[('report_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="filter_week" 
                        domain="[('report_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="filter_current_month" 
                        domain="[('report_date', '&gt;=', datetime.datetime.now().replace(day=1).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Month" name="filter_last_month" 
                        domain="[('report_date', '&gt;=', (datetime.datetime.now().replace(day=1) - datetime.timedelta(days=1)).replace(day=1).strftime('%Y-%m-%d')), ('report_date', '&lt;', datetime.datetime.now().replace(day=1).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <!-- Special Filters -->
                <filter string="Recent Updates" name="filter_recent" 
                        domain="[('write_date', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=7)).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                <filter string="Needs Action" name="filter_needs_action" 
                        domain="[('status', 'in', ['draft', 'confirmed'])]"/>
                <filter string="High Priority" name="filter_high_priority" 
                        domain="[('total_boxes', '>', 100)]"/>
                <separator/>
                <!-- Grouping Options -->
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by':'customer_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by':'status'}"/>
                    <filter string="Report Date" name="group_date" context="{'group_by':'report_date:month'}"/>
                    <filter string="Volume Category" name="group_volume" context="{'group_by':'volume_category'}"/>
                    <filter string="Creation Date" name="group_create_date" context="{'group_by':'create_date:week'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View for Customer Inventory Reports -->
    <record id="view_customer_inventory_report_kanban" model="ir.ui.view">
        <field name="name">customer.inventory.report.kanban</field>
        <field name="model">customer.inventory.report</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column" quick_create="false" 
                    sample="1">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="total_boxes"/>
                <field name="total_documents"/>
                <field name="status"/>
                <field name="report_date"/>
                <field name="color"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="row">
                                    <div class="col-6">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <span class="badge badge-pill badge-info">
                                            <field name="total_boxes"/> boxes
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <i class="fa fa-user" title="Customer"/> <field name="customer_id"/>
                                    </div>
                                </div>
                                <div class="row mt-1">
                                    <div class="col-6">
                                        <i class="fa fa-calendar" title="Report Date"/> <field name="report_date"/>
                                    </div>
                                    <div class="col-6 text-right">
                                        <i class="fa fa-file-text-o" title="Documents"/> <field name="total_documents"/>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <div class="o_kanban_tags">
                                            <span t-if="record.total_boxes.raw_value > 500" class="badge badge-danger">High Volume</span>
                                            <span t-elif="record.total_boxes.raw_value > 100" class="badge badge-warning">Medium Volume</span>
                                            <span t-else="" class="badge badge-success">Standard</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_kanban_bottom_right">
                                <div class="btn-group" role="group">
                                    <button type="object" name="action_confirm_report" 
                                            class="btn btn-primary btn-sm" t-if="record.status.raw_value == 'draft'" title="Confirm Report">
                                        <i class="fa fa-check" title="Confirm"/>
                                    </button>
                                    <button type="object" name="action_send_to_customer" 
                                            class="btn btn-success btn-sm" t-if="record.status.raw_value == 'confirmed'" title="Send to Customer">
                                        <i class="fa fa-paper-plane" title="Send"/>
                                    </button>
                                    <button type="object" name="action_create_destruction_request" 
                                            class="btn btn-danger btn-sm" title="Create Destruction Request">
                                        <i class="fa fa-trash" title="Destroy"/>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Enhanced Main Customer Inventory Action -->
    <record id="action_customer_inventory_report" model="ir.actions.act_window">
        <field name="name">Customer Inventory Reports</field>
        <field name="res_model">customer.inventory.report</field>
        <field name="view_mode">kanban,list,form,pivot,graph,calendar</field>
        <field name="search_view_id" ref="view_customer_inventory_report_search"/>
        <field name="context">{
            'search_default_filter_current_month': 1,
            'search_default_group_status': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
