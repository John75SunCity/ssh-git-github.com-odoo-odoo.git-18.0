<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- üìä ENTERPRISE CUSTOMER INVENTORY - Advanced Analytics Dashboard -->
    
    <!-- üé® Kanban Dashboard for Customer Inventory Overview -->
    <record id="view_customer_inventory_kanban" model="ir.ui.view">
        <field name="name">customer.inventory.report.kanban</field>
        <field name="model">customer.inventory.report</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_customer_inventory" default_group_by="status">
                <field name="customer_id"/>
                <field name="total_boxes"/>
                <field name="total_documents"/>
                <field name="status"/>
                <field name="report_date"/>
                <field name="volume_category"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong><field name="customer_id"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        üìÖ <field name="report_date"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" title="More options"/></a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-sm" type="object" name="action_view_boxes">
                                            üì¶ <field name="total_boxes"/> Boxes
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-info btn-sm" type="object" name="action_view_documents">
                                            üìÑ <field name="total_documents"/> Docs
                                        </button>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <span class="badge badge-secondary">
                                            <field name="volume_category"/>
                                        </span>
                                        <span class="badge" t-att-class="record.status.raw_value === 'confirmed' ? 'badge-success' : record.status.raw_value === 'sent' ? 'badge-warning' : 'badge-light'">
                                            <field name="status"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Report</a>
                                <a role="menuitem" type="object" name="action_view_boxes" class="dropdown-item">üì¶ View Boxes</a>
                                <a role="menuitem" type="object" name="action_view_documents" class="dropdown-item">üìÑ View Documents</a>
                                <a role="menuitem" type="object" name="action_generate_pdf_report" class="dropdown-item">üìã Generate PDF</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="object" name="action_confirm_report" class="dropdown-item">‚úÖ Confirm Report</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- üìà Advanced Tree View with Analytics -->
    <record id="view_customer_inventory_tree" model="ir.ui.view">
        <field name="name">customer.inventory.report.list</field>
        <field name="model">customer.inventory.report</field>
        <field name="arch" type="xml">
            <list decoration-success="status == 'confirmed'" 
                  decoration-warning="status == 'sent'"
                  decoration-info="status == 'draft'">
                <field name="name" string="üìã Report"/>
                <field name="customer_id" string="üë§ Customer"/>
                <field name="report_date" string="üìÖ Date"/>
                <field name="total_boxes" string="üì¶ Boxes" sum="Total Boxes"/>
                <field name="total_documents" string="üìÑ Documents" sum="Total Documents"/>
                <field name="active_locations" string="üìç Locations"/>
                <field name="volume_category" string="üìä Category"/>
                <field name="status" string="üéØ Status" widget="badge"/>
                <button name="action_view_boxes" type="object" string="View Boxes" 
                        icon="fa-cube" class="btn-link"/>
                <button name="action_generate_pdf_report" type="object" string="PDF" 
                        icon="fa-file-pdf-o" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- üìù Enhanced Form View with Dashboard -->
    <record id="view_customer_inventory_form" model="ir.ui.view">
        <field name="name">customer.inventory.report.form</field>
        <field name="model">customer.inventory.report</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm_report" type="object" string="‚úÖ Confirm Report" 
                            class="btn-primary" invisible="status != 'draft'"/>
                    <button name="action_send_to_customer" type="object" string="üìß Send to Customer" 
                            class="btn-secondary" invisible="status != 'confirmed'"/>
                    <button name="action_generate_pdf_report" type="object" string="üìã Generate PDF" class="btn-info"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed,sent"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_boxes" icon="fa-cube">
                            <field string="Boxes" name="total_boxes" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_documents" icon="fa-file-text-o">
                            <field string="Documents" name="total_documents" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_locations" icon="fa-map-marker">
                            <field string="Locations" name="active_locations" widget="statinfo"/>
                        </button>
                    </div>
                    
                    <group>
                        <group string="üìã Report Information">
                            <field name="name"/>
                            <field name="customer_id"/>
                            <field name="report_date"/>
                            <field name="volume_category"/>
                        </group>
                        <group string="üìä Inventory Summary">
                            <field name="total_boxes"/>
                            <field name="total_documents"/>
                            <field name="active_locations"/>
                            <field name="status"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="üì¶ Boxes Overview" name="boxes">
                            <field name="box_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="location_id"/>
                                    <field name="state"/>
                                    <field name="storage_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìÑ Documents Overview" name="documents">
                            <field name="document_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="document_type_id"/>
                                    <field name="state"/>
                                    <field name="created_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìù Notes &amp; Comments" name="notes">
                            <field name="notes" placeholder="Additional notes and comments for this inventory report..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- üìà Graph View for Analytics -->
    <record id="view_customer_inventory_graph" model="ir.ui.view">
        <field name="name">customer.inventory.report.graph</field>
        <field name="model">customer.inventory.report</field>
        <field name="arch" type="xml">
            <graph string="üìä Inventory Analytics">
                <field name="customer_id" type="row"/>
                <field name="total_boxes" type="measure"/>
                <field name="total_documents" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- üîç Enhanced Search with Smart Filters -->
    <record id="view_customer_inventory_search" model="ir.ui.view">
        <field name="name">customer.inventory.report.search</field>
        <field name="model">customer.inventory.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Report"/>
                <field name="customer_id" string="Customer"/>
                
                <filter string="üìù Draft Reports" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="‚úÖ Confirmed Reports" name="confirmed" domain="[('status', '=', 'confirmed')]"/>
                <filter string="üìß Sent Reports" name="sent" domain="[('status', '=', 'sent')]"/>
                
                <separator/>
                <filter string="üì¶ Small Volume" name="small_volume" domain="[('volume_category', '=', 'small')]"/>
                <filter string="üìä Medium Volume" name="medium_volume" domain="[('volume_category', '=', 'medium')]"/>
                <filter string="üìà Large Volume" name="large_volume" domain="[('volume_category', '=', 'large')]"/>
                <filter string="üöÄ Very Large Volume" name="very_large_volume" domain="[('volume_category', '=', 'very_large')]"/>
                
                <separator/>
                <filter string="üìÖ This Month" name="this_month" 
                        domain="[('report_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter string="üìÜ Last 3 Months" name="last_quarter" 
                        domain="[('report_date', '&gt;=', (context_today() - relativedelta(months=3)).strftime('%Y-%m-01'))]"/>
                
                <group expand="0" string="üìä Group By">
                    <filter string="Customer" name="group_by_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Volume Category" name="group_by_volume" context="{'group_by': 'volume_category'}"/>
                    <filter string="Report Date" name="group_by_date" context="{'group_by': 'report_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- üöÄ ENTERPRISE ACTION - Multi-View with Dashboard -->
    <record id="action_customer_inventory_report" model="ir.actions.act_window">
        <field name="name">üìä Customer Inventory Dashboard</field>
        <field name="res_model">customer.inventory.report</field>
        <field name="view_mode">kanban,list,form,graph</field>
        <field name="search_view_id" ref="view_customer_inventory_search"/>
        <field name="context">{
            'search_default_this_month': 1,
            'search_default_confirmed': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üìä Create your first customer inventory report!
            </p>
            <p>
                <b>Enterprise Inventory Management:</b><br/>
                ‚Ä¢ üìã Automated monthly inventory reports<br/>
                ‚Ä¢ üìä Real-time analytics and dashboards<br/>
                ‚Ä¢ üìß Automated customer notifications<br/>
                ‚Ä¢ üìà Volume category tracking and alerts<br/>
                ‚Ä¢ üîç Smart search and filtering<br/>
                ‚Ä¢ üì± Mobile-optimized interface
            </p>
        </field>
    </record>
</odoo>
