<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_quant_graph_customer" model="ir.ui.view">
        <field name="name">stock.quant.graph.customer</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <graph string="Customer Inventory" type="bar">
                <field name="customer_id" type="row"/>
                <field name="quantity" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="action_customer_inventory_graph" model="ir.actions.act_window">
        <field name="name">Customer Inventory Dashboard</field>
        <field name="res_model">stock.quant</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_stock_quant_graph_customer"/>
        <field name="domain">[('customer_id', '!=', False)]</field>
    </record>
</odoo>
