                ðŸ”´ <span class="text-danger">High Volume (>500 boxes)</span>
            </p>
        </field>
    </record>

    <!-- Pivot View for Analytics -->
    <record id="view_customer_inventory_report_pivot" model="ir.ui.view">
        <field name="name">customer.inventory.report.pivot</field>
        <field name="model">customer.inventory.report</field>
        <field name="type">pivot</field>
        <field name="arch" type="xml">
            <pivot string="Inventory Analytics" sample="1">
                <field name="customer_id" type="row"/>
                <field name="status" type="col"/>
                <field name="total_boxes" type="measure"/>
                <field name="total_documents" type="measure"/>
                <field name="active_locations" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View for Trends -->
    <record id="view_customer_inventory_report_graph" model="ir.ui.view">
        <field name="name">customer.inventory.report.graph</field>
        <field name="model">customer.inventory.report</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Inventory Trends" sample="1" type="line">
                <field name="report_date" type="row" interval="month"/>
                <field name="total_boxes" type="measure"/>
                <field name="total_documents" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Calendar View for Report Scheduling -->
    <record id="view_customer_inventory_report_calendar" model="ir.ui.view">
        <field name="name">customer.inventory.report.calendar</field>
        <field name="model">customer.inventory.report</field>
        <field name="arch" type="xml">
            <calendar string="Inventory Reports Calendar" date_start="report_date" color="customer_id">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="status"/>
            </calendar>
        </field>
    </record>

    <!-- Specialized Actions for Different Views -->
    <record id="action_customer_inventory_high_volume" model="ir.actions.act_window">
        <field name="name">High Volume Inventories</field>
        <field name="res_model">customer.inventory.report</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('total_boxes', '>', 500)]</field>
        <field name="context">{
            'search_default_filter_very_large': 1,
            'default_volume_category': 'very_large'
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No high volume inventories found!
            </p>
            <p>
                This view shows inventories with more than 500 boxes that may require 
                special handling or attention for NAID compliance.
            </p>
        </field>
    </record>

    <record id="action_customer_inventory_pending" model="ir.actions.act_window">
        <field name="name">Pending Inventory Reports</field>
        <field name="res_model">customer.inventory.report</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('status', 'in', ['draft', 'confirmed'])]</field>
        <field name="context">{
            'search_default_filter_needs_action': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                All inventory reports are up to date!
            </p>
            <p>
                This view shows reports that need action - either confirmation or sending to customers.
            </p>
        </field>
    </record>

</odoo>
