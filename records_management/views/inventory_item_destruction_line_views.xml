        <menuitem
            id="menu_inventory_item_destruction_line"
            name="Inventory Item Destruction Line"
            action="action_inventory_item_destruction_line"
            parent="REPLACE_WITH_PARENT_MENU_ID"
            sequence="10"/>
        -->

    </data>
</odoo>
