<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- CRITICAL: Actions MUST be defined before root_menus.xml (which references them)
             BUT cannot reference views yet (views_search_id defined later in chain_of_custody_views.xml)
             Solution: Define actions with minimal config here, enhance with view refs later -->
        <record id="action_chain_of_custody" model="ir.actions.act_window">
            <field name="name">Chain of Custody</field>
            <field name="res_model">chain.of.custody</field>
            <field name="view_mode">list,form</field>
            <!-- search_view_id added later in chain_of_custody_views.xml to avoid forward reference -->
        </record>
        <record id="action_chain_of_custody_customer" model="ir.actions.act_window">
            <field name="name">Chain of Custody</field>
            <field name="res_model">chain.of.custody</field>
            <field name="view_mode">kanban,list,form</field>
            <!-- search_view_id added later in chain_of_custody_views.xml to avoid forward reference -->
        </record>
    </data>
</odoo>
