<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="records_container_content_line_view_tree" model="ir.ui.view">
            <field name="name">records.container.content.line.view.tree</field>
            <field name="model">records.container.content.line</field>
            <field name="arch" type="xml">
                <tree string="Records Container Content Line">
                    <field name="content_id"/>
                    <field name="name"/>
                    <field name="document_type"/>
                    <field name="quantity"/>
                    <field name="sequence"/>
                    <field name="notes"/>
                    <field name="company_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="records_container_content_line_view_form" model="ir.ui.view">
            <field name="name">records.container.content.line.view.form</field>
            <field name="model">records.container.content.line</field>
            <field name="arch" type="xml">
                <form string="Records Container Content Line">
                    <sheet>
                        <group>
                            <field name="content_id"/>
                            <field name="name"/>
                            <field name="document_type"/>
                            <field name="quantity"/>
                            <field name="sequence"/>
                            <field name="notes"/>
                            <field name="company_id"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="records_container_content_line_view_search" model="ir.ui.view">
            <field name="name">records.container.content.line.view.search</field>
            <field name="model">records.container.content.line</field>
            <field name="arch" type="xml">
                <search string="Search Records Container Content Line">
                    <field name="name"/>
                    <field name="content_id"/>
                    <field name="document_type"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_records_container_content_line" model="ir.actions.act_window">
            <field name="name">Records Container Content Line</field>
            <field name="res_model">records.container.content.line</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
