<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree view for Customer -->
        <record id="customer_negotiated_rates_view_tree" model="ir.ui.view">
            <field name="name">customer.negotiated.rate.view.tree</field>
            <field name="model">customer.negotiated.rates</field>
            <field name="type">list</field>
        <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-warning="state == 'negotiating'" decoration-success="state == 'active'" decoration-danger="state == 'expired'" decoration-muted="state == 'cancelled'">
                    <field name="partner_id"/>
                    <field name="name"/>
                    <field name="base_rate_id"/>
                    <field name="container_type"/>
                    <field name="rate_type"/>
                    <field name="effective_date"/>
                    <field name="expiry_date"/>
                    <field name="days_until_expiry"/>
                    <field name="global_discount_percent" widget="percentage"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'negotiating'" decoration-success="state == 'active'" decoration-danger="state == 'expired'" decoration-muted="state == 'cancelled'"/>
                    <field name="contract_reference"/>
                </tree>
            </field>
        </record>

        <record id="customer_negotiated_rates_view_form" model="ir.ui.view">
            <field name="name">customer.negotiated.rate.view.form</field>
            <field name="model">customer.negotiated.rates</field>
            <field name="type">form</field>
        <field name="arch" type="xml">
                <form string="Customer Negotiated Rates">
                    <header>
                        <button name="action_submit_for_negotiation" string="Submit for Negotiation" type="object" class="oe_highlight" states="draft"/>
                        <button name="action_approve_rates" string="Approve Rates" type="object" class="oe_highlight" states="negotiating" groups="records_management.group_records_manager"/>
                        <button name="action_activate_rates" string="Activate Rates" type="object" class="oe_highlight" states="approved"/>
                        <button name="action_expire_rates" string="Expire Rates" type="object" states="active" confirm="Are you sure you want to expire these rates?"/>
                        <button name="action_duplicate_rates" string="Duplicate" type="object" class="btn-secondary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,negotiating,approved,active,expired"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Agreement Name"/>
                            </h1>
                        </div>

                        <group>
                            <group string="Customer Information">
                                <field name="partner_id" options="{'no_create': True}"/>
                                <field name="contract_reference"/>
                                <field name="base_rate_id" options="{'no_create': True}"/>
                            </group>
                            <group string="Agreement Details">
                                <field name="effective_date"/>
                                <field name="expiry_date"/>
                                <field name="negotiation_date"/>
                                <field name="approval_date" readonly="1"/>
                                <field name="days_until_expiry" readonly="1"/>
                                <field name="is_expired" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Container Rates" name="container_rates">
                                <group>
                                    <group string="Container Configuration">
                                        <field name="container_type"/>
                                        <field name="container_type_code"/>
                                        <field name="rate_type"/>
                                    </group>
                                    <group string="Container-Specific Rates">
                                        <field name="container_monthly_rate" widget="monetary"/>
                                        <field name="container_setup_fee" widget="monetary"/>
                                        <field name="container_handling_fee" widget="monetary"/>
                                        <field name="container_destruction_fee" widget="monetary"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Service Rates" name="service_rates">
                                <group>
                                    <group string="External Shredding Services">
                                        <field name="override_external_rates" widget="boolean_toggle"/>
                                        <field name="external_per_bin_rate" widget="monetary" attrs="{'readonly': [('override_external_rates', '=', False)]}"/>
                                        <field name="external_service_call_rate" widget="monetary" attrs="{'readonly': [('override_external_rates', '=', False)]}"/>
                                    </group>
                                    <group string="Managed Document Services">
                                        <field name="override_managed_rates" widget="boolean_toggle"/>
                                        <field name="managed_permanent_removal_rate" widget="monetary" attrs="{'readonly': [('override_managed_rates', '=', False)]}"/>
                                        <field name="managed_retrieval_rate" widget="monetary" attrs="{'readonly': [('override_managed_rates', '=', False)]}"/>
                                        <field name="managed_service_call_rate" widget="monetary" attrs="{'readonly': [('override_managed_rates', '=', False)]}"/>
                                        <field name="managed_shredding_rate" widget="monetary" attrs="{'readonly': [('override_managed_rates', '=', False)]}"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Pickup Services">
                                        <field name="override_pickup_rates" widget="boolean_toggle"/>
                                        <field name="pickup_rate" widget="monetary" attrs="{'readonly': [('override_pickup_rates', '=', False)]}"/>
                                    </group>
                                    <group string="Storage Services">
                                        <field name="override_storage_rates" widget="boolean_toggle"/>
                                        <field name="storage_rate_monthly" widget="monetary" attrs="{'readonly': [('override_storage_rates', '=', False)]}"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Discounts" name="discounts">
                                <group>
                                    <group string="Discount Configuration">
                                        <field name="global_discount_percent" widget="percentage"/>
                                        <field name="volume_discount_threshold"/>
                                        <field name="volume_discount_percent" widget="percentage"/>
                                        <field name="total_discount_percent" widget="percentage" readonly="1"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Documentation" name="documentation">
                                <group string="Agreement Details">
                                    <field name="description" placeholder="Describe this negotiated rate agreement..."/>
                                </group>
                                <group string="Negotiation Notes">
                                    <field name="negotiation_notes" placeholder="Notes from negotiation process..."/>
                                </group>
                                <group string="Approval Notes">
                                    <field name="approval_notes" placeholder="Management approval notes..."/>
                                </group>
                                <group string="Terms &amp;amp; Conditions">
                                    <field name="terms_conditions" placeholder="Special terms and conditions for this agreement..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search view for base.rate -->
        <record id="customer_negotiated_rates_view_search" model="ir.ui.view">
            <field name="name">customer.negotiated.rate.view.search</field>
            <field name="model">customer.negotiated.rates</field>
            <field name="type">search</field>
        <field name="arch" type="xml">
                <search string="Customer Negotiated Rates">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="base_rate_id"/>
                    <field name="contract_reference"/>
                    <field name="container_type"/>
                    <field name="rate_type"/>

                    <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Under Negotiation" name="negotiating" domain="[('state', '=', 'negotiating')]"/>
                    <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>

                    <separator/>
                    <filter string="Expiring Soon" name="expiring_soon" domain="[('days_until_expiry', '&amp;lt;=', 30), ('days_until_expiry', '&gt;', 0)]"/>
                    <filter string="With Global Discount" name="has_global_discount" domain="[('global_discount_percent', '&amp;gt;', 0)]"/>
                    <filter string="Volume Discounts" name="has_volume_discount" domain="[('volume_discount_percent', '&amp;gt;', 0)]"/>

                    <group expand="0" string="Group By">
                        <filter string="Customer" name="group_by_customer" context="{'group_by': 'partner_id'}"/>
                        <filter string="Base Rate Set" name="group_by_base_rate" context="{'group_by': 'base_rate_id'}"/>
                        <filter string="Container Type" name="group_by_container_type" context="{'group_by': 'container_type'}"/>
                        <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="Effective Date" name="group_by_effective_date" context="{'group_by': 'effective_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Tree view for Actions -->
        <record id="action_customer_negotiated_rates" model="ir.actions.act_window">
            <field name="name">Customer Negotiated Rates</field>
            <field name="res_model">customer.negotiated.rates</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_customer_negotiated_rates_search"/>
            <field name="context">{
                'search_default_active': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create customer negotiated rates!
                </p>
                <p>
                    Negotiate special rates for specific customers that override the base rate system.
                    You can set container-specific rates, service-specific rates, and volume discounts.
                </p>
            </field>
        </record>

        <!-- Tree view for Customer -->
        <record id="action_partner_negotiated_rates" model="ir.actions.act_window">
            <field name="name">Negotiated Rates</field>
            <field name="res_model">customer.negotiated.rates</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('partner_id', '=', active_id)]</field>
            <field name="context">{
                'default_partner_id': active_id,
                'search_default_active': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No negotiated rates found for this customer.
                </p>
                <p>
                    Create special negotiated rates that override the standard base rates.
                </p>
            </field>
        </record>

    </data>
</odoo>
