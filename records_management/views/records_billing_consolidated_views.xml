<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="action_billing_contact" model="ir.actions.act_window">
        <field name="name">Billing Contacts</field>
        <field name="res_model">records.billing.contact</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first billing contact!
            </p>
            <p>
                Billing contacts receive invoices, statements, and other billing communications.
            </p>
        </field>
    </record>

<record id="action_customer_billing_profile" model="ir.actions.act_window">
        <field name="name">Customer Billing Profiles</field>
        <field name="res_model">customer.billing.profile</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_customer_billing_profile_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first customer billing profile!
            </p>
            <p>
                Billing profiles define how customers are billed for storage and services.
                You can configure billing cycles, advance billing, prepaid options, and automation settings.
            </p>
        </field>
    </record>

<record id="action_records_advanced_billing_period" model="ir.actions.act_window">
        <field name="name">Records Advanced Billing Period</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.advanced.billing.period</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records Advanced Billing Period.
            </p>
        </field>
    </record>

<record id="action_records_billing_contact" model="ir.actions.act_window">
<field name="name">Billing Contacts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.billing.contact</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
<field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
Click to create a new billing contact.
</p>
<p>
                Billing contacts are used to manage who receives invoices, statements,
                and other billing communications for each customer account.
            </p>
