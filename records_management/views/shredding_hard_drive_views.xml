<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View shredding.hard_drive View List -->
    <record id="view_shredding_hard_drive_list" model="ir.ui.view">
        <field name="name">view.shredding.hard_drive.list</field>
        <field name="model">shredding.hard_drive</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View shredding.hard_drive form -->
    <record id="view_shredding_hard_drive_form" model="ir.ui.view">
        <field name="name">view.shredding.hard_drive.form</field>
        <field name="model">shredding.hard_drive</field>
        <field name="arch" type="xml">
            <form string="Shredding Hard_drive">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View shredding.hard_drive search -->
    <record id="view_shredding_hard_drive_search" model="ir.ui.view">
        <field name="name">view.shredding.hard_drive.search</field>
        <field name="model">shredding.hard_drive</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action shredding.hard_drive -->
    <record id="action_shredding_hard_drive" model="ir.actions.act_window">
        <field name="name">Shredding Hard_drive</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shredding.hard_drive</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Shredding Hard_drive.
            </p>
        </field>
    </record>

</odoo>
