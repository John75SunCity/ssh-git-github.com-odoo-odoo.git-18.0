<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- List view for processing.log.resolution.wizard -->
<record id="processing_log_resolution_wizard_view_tree" model="ir.ui.view">
    <field name="name">processing.log.resolution.wizard.view.tree</field>
    <field name="model">processing.log.resolution.wizard</field>
    <field name="arch" type="xml">
<list>
<field name="log_id"/>
<field name="resolution_notes"/>

</list>
    </field>
</record>

<!-- Form view for processing.log.resolution.wizard -->
<record id="processing_log_resolution_wizard_view_form" model="ir.ui.view">
    <field name="name">processing.log.resolution.wizard.view.form</field>
    <field name="model">processing.log.resolution.wizard</field>
    <field name="arch" type="xml">
<form string="Resolve Processing Log">
            <sheet>
<div class="oe_title">
<label for="log_id"/>

<field name="log_id" readonly="1"/>

</div>
<group>
<field name="resolution_notes" placeholder="Enter resolution notes..."/>
</group>
            </sheet>
<footer>
<button string="Mark as Resolved" name="action_confirm_resolution" type="object" class="btn-primary"/>
<button string="Cancel" class="btn-secondary" special="cancel"/>
</footer>
        </form>
    </field>
</record>

<!-- Search view for processing.log.resolution.wizard -->
<record id="processing_log_resolution_wizard_view_search" model="ir.ui.view">
    <field name="name">processing.log.resolution.wizard.view.search</field>
    <field name="model">processing.log.resolution.wizard</field>
    <field name="arch" type="xml">
        <search>
<field name="log_id"/>
<field name="resolution_notes"/>

            <group expand="1" string="Group By">
<filter string="Log Entry" name="log_id" context="{'group_by':'log_id'}"/>

            </group>
        </search>
    </field>
</record>

<!-- Action for processing.log.resolution.wizard -->
<record id="action_processing_log_resolution_wizard" model="ir.actions.act_window">
<field name="name">Resolve Processing Log</field>
    <field name="res_model">processing.log.resolution.wizard</field>
    <field name="view_mode">list,form</field>
<field name="domain">[]</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
Click to resolve processing logs.
        </p>
    </field>
</record>

</odoo>
