<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <!-- Stock Location Tree View - Add Custom Fields -->
    <record id="stock_location_view_tree_inherit_records" model="ir.ui.view">
        <field name="name">stock.location.view.tree.inherit.records</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_tree2"/>
        <field name="arch" type="xml">
            <!-- Add custom fields to tree view -->
            <xpath expr="//field[@name='usage']" position="after">
                <field name="is_records_location" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='storage_category_id']" position="after">
                <field name="max_capacity" optional="show"/>
                <field name="records_container_count" optional="show"/>
                <field name="records_file_count" optional="show"/>
                <field name="records_document_count" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Stock Location Form View - Add Custom Fields -->
    <record id="stock_location_view_form_inherit_records" model="ir.ui.view">
        <field name="name">stock.location.view.form.inherit.records</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <!-- Add smart buttons at top of form -->
            <xpath expr="//sheet" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_containers"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-archive">
                        <field name="records_container_count" widget="statinfo" string="Containers"/>
                    </button>
                    <button name="action_view_files"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-folder">
                        <field name="records_file_count" widget="statinfo" string="Files"/>
                    </button>
                    <button name="action_view_documents"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-file-text">
                        <field name="records_document_count" widget="statinfo" string="Documents"/>
                    </button>
                </div>
            </xpath>

            <!-- Add hidden fields needed for smart buttons -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="records_container_count" invisible="1"/>
                <field name="records_file_count" invisible="1"/>
                <field name="records_document_count" invisible="1"/>
            </xpath>
        </field>
    </record>
    </data>
</odoo>
