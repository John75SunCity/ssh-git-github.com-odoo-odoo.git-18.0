<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
<!-- ============================================================================ -->
<!-- BIN ISSUE REPORT WIZARD FORM VIEW -->
<!-- ============================================================================ -->
    <record id="bin_issue_report_wizard_view_form" model="ir.ui.view">
        <field name="name">bin.issue.report.wizard.view.form</field>
        <field name="model">bin.issue.report.wizard</field>
        <field name="arch" type="xml">
        <form string="Bin Issue Report">
            <header>
                <button name="action_take_photo" string="Take Photo" type="object"
                        class="btn-primary" icon="fa-camera"
                        invisible="context.get('hide_photo_button', False)"/>
                <button name="action_view_photos" string="View Photos" type="object"
                        class="btn-secondary" icon="fa-images"
                        invisible="photo_count == 0"/>
                <button name="action_submit_report" string="Submit Report" type="object"
                        class="btn-success" icon="fa-check"/>
            </header>

            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_photos" type="object" class="oe_stat_button" icon="fa-camera">
        <field name="photo_count" widget="statinfo" string="Photos"/>
                    </button>
                </div>

                <div class="oe_title">
                    <h1>
        <field name="bin_id" options="{'no_create': True, 'no_edit': True}"/>
                    </h1>
                    <h2>
        <field name="customer_id" readonly="1"/>
                    </h2>
                </div>

                <group>
                    <group name="issue_classification" string="Issue Classification">
        <field name="issue_type" widget="radio" options="{'horizontal': true}"/>
        <field name="issue_severity" widget="badge"/>
        <field name="location_id" options="{'no_create': True}"/>
        <field name="issue_description" placeholder="Describe the issue in detail..."/>
                    </group>

                    <group name="documentation" string="Documentation">
        <!-- Removed always-invisible field 'require_photos'; value still usable in domains -->
        <field name="gps_latitude" groups="base.group_no_one"/>
        <field name="gps_longitude" groups="base.group_no_one"/>
                        <div class="alert alert-warning" role="alert"
                            invisible="not require_photos or photo_count > 0">
                            <strong>Photos Required!</strong> This issue type requires photo documentation.
                        </div>
                    </group>
                </group>

                <notebook>
                    <page string="Fault &amp; Billing" name="fault_billing">
                        <group>
                            <group name="fault_determination" string="Fault Determination">
        <field name="customer_fault_confirmed"/>
        <field name="fault_evidence"
                                        invisible="not customer_fault_confirmed"
                                        placeholder="Document evidence supporting customer fault determination..."/>
                            </group>

                            <group name="billing_info" string="Billing Information">
        <field name="bill_customer" readonly="1"/>
        <field name="billing_rate_id"
                                        invisible="not bill_customer"
                                        options="{'no_create': True}"/>
        <field name="estimated_replacement_cost"
                                        invisible="not bill_customer or billing_rate_id"/>
        <field name="billing_amount" readonly="1"
                                        invisible="not bill_customer"/>
    <!-- Removed always-invisible 'currency_id'; wizard monetary context handles currency -->
                            </group>
                        </group>

        <div class="alert alert-info" role="status" invisible="not bill_customer">
                            <strong>Customer Billing Notice:</strong> This issue will result in charges to the customer.
                            Ensure fault evidence is properly documented and photos are attached.
                        </div>
                    </page>

                    <page string="Work Order" name="work_order">
                        <group>
                            <group name="work_order_details" string="Work Order Details">
        <field name="create_work_order"/>
        <field name="work_order_priority" readonly="1"
                                        invisible="not create_work_order"/>
        <field name="scheduled_date" invisible="not create_work_order"/>
        <field name="assigned_technician_id"
                                        invisible="not create_work_order"
                                        options="{'no_create': True}"/>
                            </group>
                        </group>
                    </page>

                    <page string="Customer Communication" name="customer_comm">
                        <group>
        <field name="notify_customer"/>
        <field name="customer_message"
                                    invisible="not notify_customer"
                                    placeholder="Message to send to customer about this issue..."/>
                        </group>

        <div class="alert alert-info" role="status" invisible="not notify_customer">
                            <strong>Customer Notification:</strong> The customer will be automatically
                            notified via email about this issue.
                        </div>
                    </page>

                    <page string="Photos" name="photos">
        <field name="photo_ids" mode="kanban" readonly="1">
                            <kanban>
        <field name="name"/>
        <field name="photo_data"/>
        <field name="create_date"/>
        <field name="compliance_notes"/>
                                <templates>
<t t-name="card">
        <div class="oe_kanban_global_click" role="article" aria-label="Photo Card">
                                            <div class="oe_kanban_card">
                                                <div class="oe_kanban_image">
<img t-att-src="kanban_image('mobile.photo', 'photo_data', record.id.raw_value)" class="oe_kanban_avatar" alt="Issue Photo"/>

                                                </div>
                                                <div class="oe_kanban_details">
                                                    <strong><field name="name"/></strong>
                                                    <div><field name="create_date" widget="date"/></div>
                                                    <div><field name="compliance_notes"/></div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
                </notebook>
            </sheet>

            <div class="oe_chatter">
        <field name="message_follower_ids"/>
        <field name="activity_ids"/>
        <field name="message_ids"/>
            </div>
        </form>
    </field>
    </record>

<!-- ============================================================================ -->
<!-- BIN ISSUE RECORD VIEWS -->
<!-- ============================================================================ -->

<!-- List View -->
    <record id="bin_issue_record_view_tree" model="ir.ui.view">
        <field name="name">bin.issue.record.view.list</field>
        <field name="model">bin.issue.record</field>
        <field name="arch" type="xml">
        <list string="Bin Issue Records" decoration-danger="resolution_status == 'reported'"
                decoration-warning="resolution_status in ('assigned', 'in_progress')"
                decoration-success="resolution_status == 'resolved'">
        <field name="name"/>
        <field name="bin_id"/>
        <field name="issue_type" widget="badge"/>
        <field name="issue_severity" widget="badge"/>
        <field name="customer_id"/>
        <field name="reported_by_id"/>
        <field name="report_date" widget="datetime"/>
        <field name="resolution_status" widget="badge"/>
        <field name="customer_fault" widget="boolean_toggle"/>
        <field name="billing_amount" sum="Total Billing" widget="monetary"/>
        <field name="billed" widget="boolean_toggle"/>
        <field name="payment_received" widget="boolean_toggle"/>
        </list>
    </field>
    </record>

<!-- Form View -->
    <record id="bin_issue_record_view_form" model="ir.ui.view">
        <field name="name">bin.issue.record.view.form</field>
        <field name="model">bin.issue.record</field>
        <field name="arch" type="xml">
        <form string="Bin Issue Record">
            <header>
                <button name="action_view_bin" string="View Bin" type="object"
                        class="btn-primary" icon="fa-archive"/>
                <button name="action_view_work_order" string="View Work Order" type="object"
                        class="btn-secondary" icon="fa-wrench"
                        invisible="not work_order_id"/>
                <button name="action_mark_resolved" string="Mark Resolved" type="object"
                        class="btn-success" icon="fa-check"
                        invisible="resolution_status == 'resolved'"/>
                <button name="action_mark_billed" string="Mark Billed" type="object"
                        class="btn-warning" icon="fa-dollar"
                        invisible="not customer_fault or billing_amount == 0 or billed"/>
                <button name="action_mark_paid" string="Mark Paid" type="object"
                        class="btn-success" icon="fa-credit-card"
                        invisible="not billed or payment_received"/>
        <field name="resolution_status" widget="statusbar"
                        statusbar_visible="reported,assigned,in_progress,resolved"/>
            </header>

            <sheet>
                <div class="oe_title">
                    <h1>
        <field name="name"/>
                    </h1>
                    <h2>
        <field name="bin_id" readonly="1"/>
                    </h2>
                </div>

                <group>
                    <group name="issue_details" string="Issue Details">
        <field name="issue_type" widget="badge"/>
        <field name="issue_severity" widget="badge"/>
        <field name="customer_id" readonly="1"/>
        <field name="location_id" readonly="1"/>
        <field name="description" readonly="1"/>
                    </group>

                    <group name="tracking" string="Tracking">
        <field name="reported_by_id" readonly="1"/>
        <field name="report_date" readonly="1"/>
        <field name="resolution_date"/>
        <field name="work_order_id" readonly="1"/>
                    </group>
                </group>

                <group>
                    <group name="billing" string="Billing">
        <field name="customer_fault" readonly="1"/>
        <field name="billing_amount" readonly="1" widget="monetary"/>
    <!-- Removed always-invisible 'currency_id'; redundant hidden field -->
        <field name="billed"/>
        <field name="payment_received"/>
                    </group>

                    <group name="location_data" string="Location Data"
                            groups="base.group_no_one">
        <field name="gps_latitude" readonly="1"/>
        <field name="gps_longitude" readonly="1"/>
                    </group>
                </group>

                <notebook>
                    <page string="Photos" name="photos">
        <field name="photo_ids" mode="kanban" readonly="1">
                            <kanban>
        <field name="name"/>
        <field name="photo_data"/>
        <field name="create_date"/>
        <field name="compliance_notes"/>
                                <templates>
<t t-name="card">
        <div class="oe_kanban_global_click" role="article" aria-label="Photo Card">
                                            <div class="oe_kanban_card">
                                                <div class="oe_kanban_image">
<img t-att-src="kanban_image('mobile.photo', 'photo_data', record.id.raw_value)" class="oe_kanban_avatar" alt="Issue Photo"/>

                                                </div>
                                                <div class="oe_kanban_details">
                                                    <strong><field name="name"/></strong>
                                                    <div><field name="create_date" widget="date"/></div>
                                                    <div><field name="compliance_notes"/></div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
                </notebook>
            </sheet>

            <div class="oe_chatter">
        <field name="message_follower_ids"/>
        <field name="activity_ids"/>
        <field name="message_ids"/>
            </div>
        </form>
    </field>
    </record>

<!-- Search View -->
    <record id="bin_issue_record_view_search" model="ir.ui.view">
        <field name="name">bin.issue.record.view.search</field>
        <field name="model">bin.issue.record</field>
        <field name="arch" type="xml">
        <search string="Search Bin Issues">
        <field name="name" string="Issue" filter_domain="[('name', 'ilike', self)]"/>
        <field name="bin_id" string="Bin" filter_domain="[('bin_id.barcode', 'ilike', self)]"/>
        <field name="customer_id" string="Customer"/>
        <field name="issue_type"/>
        <field name="reported_by_id"/>

            <filter name="filter_unresolved" string="Unresolved"
                    domain="[('resolution_status', '!=', 'resolved')]"/>
            <filter name="filter_customer_fault" string="Customer Fault"
                    domain="[('customer_fault', '=', True)]"/>
            <filter name="filter_billing_required" string="Billing Required"
                    domain="[('billing_amount', '>', 0)]"/>
            <filter name="filter_unbilled" string="Unbilled"
                    domain="[('customer_fault', '=', True), ('billing_amount', '>', 0), ('billed', '=', False)]"/>
            <filter name="filter_unpaid" string="Unpaid"
                    domain="[('billed', '=', True), ('payment_received', '=', False)]"/>

            <separator/>
            <filter name="filter_today" string="Today"
                    domain="[('report_date', '!=', False)]"/>
            <filter name="filter_week" string="This Week"
                    domain="[('report_date', '!=', False)]"/>

            <group expand="0" string="Group By">
                <filter name="group_by_issue_type" string="Issue Type" context="{'group_by': 'issue_type'}"/>
                <filter name="group_by_severity" string="Severity" context="{'group_by': 'issue_severity'}"/>
                <filter name="group_by_status" string="Resolution Status" context="{'group_by': 'resolution_status'}"/>
                <filter name="group_by_customer" string="Customer" context="{'group_by': 'customer_id'}"/>
                <filter name="group_by_date" string="Report Date" context="{'group_by': 'report_date:day'}"/>
            </group>
        </search>
    </field>
    </record>

<!-- Kanban View -->
    <record id="bin_issue_record_view_kanban" model="ir.ui.view">
        <field name="name">bin.issue.record.view.kanban</field>
        <field name="model">bin.issue.record</field>
        <field name="arch" type="xml">
        <kanban default_group_by="resolution_status" class="o_kanban_small_column">
        <field name="name"/>
        <field name="bin_id"/>
        <field name="issue_type"/>
        <field name="issue_severity"/>
        <field name="customer_id"/>
        <field name="resolution_status"/>
        <field name="customer_fault"/>
        <field name="billing_amount"/>
        <field name="billed"/>
        <field name="report_date"/>

            <templates>
<t t-name="card">
                    <div class="oe_kanban_card oe_kanban_global_click">
                        <div class="oe_kanban_content">
                            <div class="oe_kanban_header">
                                <strong><field name="name"/></strong>
                                <span class="oe_kanban_list_many2one">
        <field name="bin_id"/>
                                </span>
                            </div>

                            <div class="oe_kanban_body">
                                <div class="oe_kanban_row">
                                    <span class="badge badge-pill"
                                            t-attf-class="badge-#{record.issue_severity.raw_value}">
        <field name="issue_severity"/>
                                    </span>
                                    <span class="badge badge-pill badge-info">
        <field name="issue_type"/>
                                    </span>
                                </div>

                                <div class="oe_kanban_row" t-if="record.customer_id.raw_value">
<i class="fa fa-user" title="Customer" aria-label="Customer"/>
        <field name="customer_id"/>

                                </div>

                                <div class="oe_kanban_row" t-if="record.customer_fault.raw_value and record.billing_amount.raw_value > 0">
<i class="fa fa-dollar" title="Billing Amount" aria-label="Billing Amount"/>

        <field name="billing_amount" widget="monetary"/>
                                    <span t-if="record.billed.raw_value" class="badge badge-success">Billed</span>
                                    <span t-else="" class="badge badge-warning">Unbilled</span>
                                </div>
                            </div>

                            <div class="oe_kanban_footer">
                                <div class="oe_kanban_footer_left">
        <field name="report_date" widget="date"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
    </record>

<!-- ============================================================================ -->
<!-- ACTIONS -->
<!-- ============================================================================ -->

<!-- Bin Issue Records Action -->
    <record id="bin_issue_record_action" model="ir.actions.act_window">
        <field name="name">Bin Issue Records</field>
        <field name="res_model">bin.issue.record</field>
        <field name="view_mode>tree,form</field>
        <field name="context">{
        'search_default_filter_unresolved': 1,
    }</field>
        <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            No bin issues recorded yet!
        </p>
        <p>
            Bin issues are automatically created when technicians report problems
            with shred bins using the mobile issue reporting system.
        </p>
    </field>
    </record>

<!-- Billing Issues Action -->
    <record id="bin_issue_billing_action" model="ir.actions.act_window">
        <field name="name">Bin Issue Billing</field>
        <field name="res_model">bin.issue.record</field>
        <field name="view_mode>tree,form</field>
        <field name="domain">[('customer_fault', '=', True), ('billing_amount', '>', 0)]</field>
        <field name="context">{
        'search_default_filter_unbilled': 1,
    }</field>
        <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            No customer billing required for bin issues!
        </p>
        <p>
            Customer fault bin issues that require billing will appear here.
            This includes damage caused by customer misuse and lost/stolen bins.
        </p>
    </field>
    </record>

<!-- ============================================================================ -->
<!-- MENU ITEMS -->
<!-- ============================================================================ -->

<!-- Add bin issues to shredding services menu -->

    <menuitem id="menu_bin_issues"
            name="Bin Issues"
            parent="menu_records_operations"
            action="bin_issue_record_action"
            sequence="42"
            groups="records_management.group_records_user"/>


<!-- Add billing submenu to billing section -->

    <menuitem id="menu_bin_issue_billing"
            name="Bin Issue Billing"
            parent="records_management.menu_records_billing"
            action="bin_issue_billing_action"
            sequence="50"
            groups="records_management.group_records_manager"/>

    
    </data>
</odoo>
