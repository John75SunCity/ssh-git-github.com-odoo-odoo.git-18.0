<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Enhanced Departmental Billing Contact Views -->

<!-- List view -->
    <record id="records_department_billing_contact_view_tree" model="ir.ui.view">
        <field name="name">records.department.billing.contact.view.tree</field>
        <field name="model">records.department.billing.contact</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="records_department_billing_contact_view_form" model="ir.ui.view">
        <field name="name">records.department.billing.contact.view.form</field>
        <field name="model">records.department.billing.contact</field>
        <field name="arch" type="xml">
            <form string="Records Department Billing Contact">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for base.rate -->
    <record id="records_department_billing_contact_view_search" model="ir.ui.view">
        <field name="name">records.department.billing.contact.view.search</field>
        <field name="model">records.department.billing.contact</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

<!-- List view for Action -->
    <record id="action_records_department_billing_contact" model="ir.actions.act_window">
        <field name="name">Records Department Billing Contact</field>
        <field name="res_model">records.department.billing.contact</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records Department Billing Contact.
            </p>
        </field>
    </record>

<!-- List view for ENTERPRISE -->

    <!-- Kanban view for Departmental -->
    <record id="records_department_billing_contact_view_kanban" model="ir.ui.view">
        <field name="name">records.department.billing.contact.view.kanban</field>
        <field name="model">records.department.billing.contact</field>
        <field name="arch" type="xml">
            <kanban default_group_by="department_id" class="o_kanban_billing_dashboard">
                <field name="contact_name"/>
                <field name="department_id"/>
                <field name="billing_role"/>
                <field name="monthly_budget"/>
                <field name="current_month_charges"/>
                <field name="budget_utilization"/>
                <field name="approval_authority"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>üíº                                            <field name="contact_name"/>
                                        </strong>
                                    </div>
                                    <div class="o_secondary">
                                        üè¢                                        <field name="department_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
<i class="fa fa-ellipsis-v" role="img" aria-label="More options" title="More options"/>

                                    </a>
                                </div>
                            </div>
<div class="o_kanban_card_content" t-att-title="record.display_name.raw_value" t-att-aria-label="record.display_name.raw_value" role="group">
                                <div class="row">
                                    <div class="col-8">
                                        <div>
<i class="fa fa-user-circle" aria-hidden="true"/>

                                            <field name="billing_role"/>
                                        </div>
                                        <div>
<i class="fa fa-dollar" aria-hidden="true"/>

 Budget: $<field name="monthly_budget"/>
                                        </div>
                                        <div>
<i class="fa fa-credit-card" aria-hidden="true"/>

 Used: $<field name="current_month_charges"/>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <span class="badge" t-att-class="record.budget_utilization.raw_value &amp;gt; 90 ? 'badge-danger' : record.budget_utilization.raw_value &gt; 75 ? 'badge-warning' : 'badge-success'">
                                            <field name="budget_utilization"/>
% Used
                                        </span>
                                        <span class="badge badge-primary" t-if="record.approval_authority.raw_value">
                                            ‚úÖ Approver
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <button class="btn btn-info btn-sm" type="object" name="action_view_approvals">
                                            ‚úÖ Approvals
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Contact</a>
                                <a role="menuitem" type="object" name="action_view_approvals" class="dropdown-item">‚úÖ View Approvals</a>
                                <a role="menuitem" type="object" name="action_budget_report" class="dropdown-item">üìã Budget Report</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="object" name="action_send_bill_notification" class="dropdown-item">üìß Send Bill Notification</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

<!-- List view for Enhanced -->
<record id="records_department_billing_contact_view_tree" model="ir.ui.view">
    <field name="name">records.department.billing.contact.view.tree</field>
        <field name="model">records.department.billing.contact</field>
        <field name="arch" type="xml">
            <list decoration-danger="budget_utilization &amp;gt; 90" decoration-warning="budget_utilization &amp;gt; 75" decoration-success="budget_utilization &amp;lt;= 50">
                <field name="contact_name" string="üíº Contact"/>
                <field name="department_id" string="üè¢ Department"/>
                <field name="billing_role" string="üéØ Role"/>
                <field name="email" string="üìß Email"/>
                <field name="phone" string="üìû Phone"/>
                <field name="monthly_budget" string="üí∞ Monthly Budget" sum="Total Budget"/>
                <field name="current_month_charges" string="üí≥ Current Charges" sum="Total Charges"/>
                <field name="budget_utilization" string="üìä Utilization %" widget="percentage"/>
                <field name="approval_authority" string="‚úÖ Approver" widget="boolean_toggle"/>
                <field name="active" string="üîÑ Active" widget="boolean_toggle"/>
                <button name="action_budget_report" type="object" string="Budget Report" icon="fa-file-pdf-o" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- Form view for Enhanced -->
    <record id="records_department_billing_contact_view_form" model="ir.ui.view">
        <field name="name">records.department.billing.contact.view.form</field>
        <field name="model">records.department.billing.contact</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_budget_report" type="object" string="üìã Generate Budget Report" class="btn-primary"/>
                    <button name="action_send_bill_notification" type="object" string="üìß Send Bill Notification" class="btn-secondary"/>
                    <field name="active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_approvals" icon="fa-check-circle">
                            <field name="approval_count" string="Approvals" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-percent">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="budget_utilization"/>
%</span>
                                <span class="o_stat_text">Budget Used</span>
                            </div>
                        </button>
                    </div>

                    <group>
                        <group string="üíº Contact Information">
                            <field name="contact_name" placeholder="Contact Full Name"/>
                            <field name="department_id"/>
                            <field name="billing_role"/>
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                        </group>
                        <group string="üí∞ Budget &amp;amp; Authority">
                            <field name="monthly_budget"/>
                            <field name="current_month_charges"/>
                            <field name="budget_utilization" widget="percentage"/>
                            <field name="approval_authority" widget="boolean_toggle"/>
                            <field name="approval_limit"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="‚úÖ Approval History" name="approvals">
                            <field name="approval_history_ids" mode="list">
                                <list>
                                    <field name="approval_date"/>
                                    <field name="charge_amount"/>
                                    <field name="service_description"/>
                                    <field name="vendor"/>
                                    <field name="approval_notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìã Budget Analysis" name="budget">
                            <group>
                                <group string="üìà Current Period">
                                    <field name="current_month_budget"/>
                                    <field name="current_month_actual"/>
                                    <field name="current_month_variance"/>
                                    <field name="current_month_forecast"/>
                                </group>
                                <group string="üìä Year to Date">
                                    <field name="ytd_budget"/>
                                    <field name="ytd_actual"/>
                                    <field name="ytd_variance"/>
                                    <field name="ytd_variance_percentage"/>
                                </group>
                            </group>
                        </page>
                        <page string="üìß Notifications" name="notifications">
                            <group>
                                <group string="üîî Alert Settings">
                                    <field name="budget_alert_threshold"/>
                                    <field name="email_notifications"/>
                                    <field name="weekly_reports"/>
                                    <field name="monthly_statements"/>
                                </group>
                                <group string="üë• CC Recipients">
                                    <field name="cc_finance_team"/>
                                    <field name="cc_department_head"/>
                                    <field name="cc_additional_emails"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

<!-- List view for Graph -->
    <record id="records_department_billing_contact_view_graph" model="ir.ui.view">
        <field name="name">records.department.billing.contact.view.graph</field>
        <field name="model">records.department.billing.contact</field>
        <field name="arch" type="xml">
            <graph string="üìä Department Budget Analytics">
                <field name="department_id" type="row"/>
                <field name="monthly_budget" type="measure"/>
                <field name="current_month_charges" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Search view for Enhanced -->
    <record id="records_department_billing_contact_view_search" model="ir.ui.view">
        <field name="name">records.department.billing.contact.view.search</field>
        <field name="model">records.department.billing.contact</field>
        <field name="arch" type="xml">
            <search>
                <field name="contact_name" string="Contact"/>
                <field name="department_id"/>
                <field name="email"/>

                <filter string="üíº Active Contacts" name="active" domain="[('active', '=', True)]"/>
                <filter string="‚úÖ Approvers" name="approvers" domain="[('approval_authority', '=', True)]"/>
                <filter string="üìß Email Notifications" name="email_notifications" domain="[('email_notifications', '=', True)]"/>

                <separator/>
                <filter string="üü¢ Under Budget" name="under_budget" domain="[('budget_utilization', '&amp;lt;', 75)]"/>
                <filter string="üü° Near Budget" name="near_budget" domain="[('budget_utilization', '&amp;gt;=', 75), ('budget_utilization', '&lt;', 90)]"/>
                <filter string="üî¥ Over Budget" name="over_budget" domain="[('budget_utilization', '&amp;gt;=', 90)]"/>

                <separator/>
                <filter string="üí∞ High Budget" name="high_budget" domain="[('monthly_budget', '&amp;gt;', 10000)]"/>
                <filter string="üìä Medium Budget" name="medium_budget" domain="[('monthly_budget', '&amp;gt;', 1000), ('monthly_budget', '&lt;=', 10000)]"/>

                <group expand="0" string="üìä Group By">
                    <filter string="Department" name="group_by_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Billing Role" name="group_by_role" context="{'group_by': 'billing_role'}"/>
                    <filter string="Budget Range" name="group_by_budget" context="{'group_by': 'budget_range'}"/>
                    <filter string="Approval Authority" name="group_by_approval" context="{'group_by': 'approval_authority'}"/>
                </group>
            </search>
        </field>
    </record>

<!-- List view for ENTERPRISE -->
    <record id="action_department_billing" model="ir.actions.act_window">
        <field name="name">üí∞ Departmental Billing</field>
        <field name="res_model">records.department.billing.contact</field>
        <field name="view_mode">kanban,list,form,graph</field>
        <field name="search_view_id" ref="records_department_billing_contact_view_search"/>
        <field name="context">{
            'search_default_active': 1,
            'search_default_under_budget': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üí∞ Set up your first departmental billing contact!
            </p>
            <p>
                <b>Enterprise Departmental Billing:</b>
                <br/>
                ‚Ä¢ üíº Multi-level departmental cost allocation<br/>
                ‚Ä¢ üìä Real-time budget tracking and alerts<br/>
                ‚Ä¢ ‚úÖ Hierarchical approval workflows<br/>
                ‚Ä¢ üìß Automated billing notifications<br/>
                ‚Ä¢ üìã Comprehensive budget reporting<br/>
                ‚Ä¢ üéØ Role-based billing authorization<br/>
                ‚Ä¢ üìà Budget variance analysis and forecasting<br/>
                ‚Ä¢ üì± Mobile-optimized budget management
</p>
</field>
</record>
</data>

</odoo>
