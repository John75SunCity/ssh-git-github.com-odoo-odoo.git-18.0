<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View barcode.product View List -->
    <record id="view_barcode_product_list" model="ir.ui.view">
        <field name="name">view.barcode.product.list</field>
        <field name="model">barcode.product</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View barcode.product form -->
    <record id="view_barcode_product_form" model="ir.ui.view">
        <field name="name">view.barcode.product.form</field>
        <field name="model">barcode.product</field>
        <field name="arch" type="xml">
            <form string="Barcode Product">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View barcode.product search -->
    <record id="view_barcode_product_search" model="ir.ui.view">
        <field name="name">view.barcode.product.search</field>
        <field name="model">barcode.product</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action barcode.product -->
    <record id="action_barcode_product" model="ir.actions.act_window">
        <field name="name">Barcode Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">barcode.product</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Barcode Product.
            </p>
        </field>
    </record>

</odoo>
