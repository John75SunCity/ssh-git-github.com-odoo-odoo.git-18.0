<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Form view for Key Restriction Checker -->
    <record id="key_restriction_checker_wizard_view_form" model="ir.ui.view">
        <field name="name">key.restriction.checker.wizard.view.form</field>
        <field name="model">key.restriction.checker.wizard</field>
        <field name="arch" type="xml">
    <form string="Key Restriction Checker">
        <sheet>
            <div class="col-md-6 text-center">
                <i class="fa fa-key" title="Key Restrictions" aria-hidden="true"/>
                <h5 class="mt-2">Key Restriction Checker</h5>
                <p>Check customer key issuance permissions and restrictions</p>
            </div>
            <group name="input_section">
                <group name="customer_info">
                    <field name="customer_name" placeholder="Start typing customer name..."/>
                    <field name="customer_id" options="{'no_create': True, 'no_edit': True}"/>
                </group>
                <group name="bin_info">
                    <field name="bin_identifier" placeholder="Enter bin number or identifier"/>
                </group>
            </group>

            <separator string="Check Results"/>
            <group name="results_section">
                <field name="check_performed" invisible="1"/>
                <group>
                    <field name="key_allowed" readonly="1"/>
                    <field name="restriction_reason" readonly="1"/>
                </group>
                <group>
                    <field name="restriction_date" readonly="1"/>
                    <field name="restriction_notes" readonly="1" nolabel="1"/>
                </group>
            </group>

            <div class="oe_inline">
                <field name="status_message" readonly="1" nolabel="1"/>
            </div>
            <div class="oe_inline">
                <field name="action_required" readonly="1" nolabel="1"/>
            </div>
        </sheet>

        <footer>
            <button name="action_check_customer" string="Check Customer" type="object" class="btn-primary" invisible="not customer_id">
                <i class="fa fa-search" title="Check Customer" aria-hidden="true"/>
            </button>
            <button name="action_create_unlock_service" string="Create Unlock Service" type="object" class="btn-warning" invisible="not key_allowed">
                <i class="fa fa-lock-open" title="Create Unlock Service" aria-hidden="true"/>
            </button>
            <button string="Close" class="btn-secondary" special="cancel"/>
        </footer>
</form>
</field>
    </record>

<!-- Action for Key Restriction Checker -->
    <record id="action_key_restriction_checker" model="ir.actions.act_window">
        <field name="name">Key Restriction Checker</field>
        <field name="res_model">key.restriction.checker.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

<!-- Menu Items -->
    <menuitem id="menu_key_restriction_checker" name="Key Restriction Checker" parent="records_management.menu_records_tools" action="action_key_restriction_checker" sequence="50" groups="records_management.group_records_user"/>
    <!-- Key Checker moved to Configuration > Security & Access -->
    <menuitem id="menu_key_checker_shortcut" name="Key Checker" parent="records_management.menu_security_access" action="action_key_restriction_checker" sequence="40" groups="records_management.group_records_user"/>

    </data>
</odoo>
