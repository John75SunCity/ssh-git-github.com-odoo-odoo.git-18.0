<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Form view for Key Restriction Checker -->
    <record id="key_restriction_checker_wizard_view_form" model="ir.ui.view">
        <field name="name">key.restriction.checker.wizard.view.form</field>
        <field name="model">key.restriction.checker.wizard</field>
        <field name="arch" type="xml">
    <form string="Key Restriction Checker">
        <sheet>
            <div class="col-md-6 text-center">
                <i class="fa fa-key" title="Key Restrictions" aria-hidden="true"/>
                <h5 class="mt-2">Key Restrictions</h5>
                <p>Current restrictions and permissions for this key</p>
            </div>
            <group name="input_section">
                <group name="employee_info">
                    <field name="employee_id"/>
                    <field name="user_id" readonly="1"/>
                </group>
                <group name="key_info">
                    <field name="key_type"/>
                    <field name="key_identifier"/>
                </group>
            </group>
            <group name="access_context">
                <group name="location_dept">
                    <field name="requested_location_id"/>
                    <field name="requested_department_id"/>
                </group>
                <group name="container_reason">
                    <field name="container_id"/>
                    <field name="access_reason"/>
                </group>
            </group>
            <group name="time_info">
                <field name="requested_start_time"/>
                <field name="requested_end_time"/>
            </group>
            <group name="detailed_info">
                <field name="detailed_reason"/>
            </group>

            <separator string="Access Decision"/>
            <group name="decision_section">
                <group>
                    <field name="access_granted" readonly="1"/>
                    <field name="supervisor_approval_required" readonly="1"/>
                </group>
                <group>
                    <field name="override_available" readonly="1"/>
                    <field name="restriction_reason" readonly="1" nolabel="1"/>
                </group>
            </group>
        </sheet>

        <footer>
            <button name="action_grant_access" string="Grant Access" type="object" class="btn-primary" invisible="not access_granted">
                <i class="fa fa-check" title="Grant Access" aria-hidden="true"/>
            </button>
            <button name="action_deny_access" string="Deny Access" type="object" class="btn-danger" invisible="access_granted">
                <i class="fa fa-times" title="Deny Access" aria-hidden="true"/>
            </button>
            <button string="Close" class="btn-secondary" special="cancel"/>
        </footer>
</form>
</field>
    </record>

<!-- Action for Key Restriction Checker -->
    <record id="action_key_restriction_checker" model="ir.actions.act_window">
        <field name="name">Key Restriction Checker</field>
        <field name="res_model">key.restriction.checker.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

<!-- Menu Items -->
    <menuitem id="menu_key_restriction_checker" name="Key Restriction Checker" parent="records_management.menu_records_tools" action="action_key_restriction_checker" sequence="50" groups="records_management.group_records_user"/>
    <!-- Key Checker moved to Configuration > Security & Access -->
    <menuitem id="menu_key_checker_shortcut" name="Key Checker" parent="records_management.menu_security_access" action="action_key_restriction_checker" sequence="40" groups="records_management.group_records_user"/>

    </data>
</odoo>
