<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
    <data><record id="destruction_item_view_tree" model="ir.ui.view">
        <field name="name">destruction.item.view.tree</field>
        <field name="model">destruction.item</field>
    <field name="arch" type="xml">
            <list string="Destruction Item">
                <field name="name"/>
                <field name="item_description"/>
                <field name="records_destruction_id"/>
                <field name="quantity"/>
                <field name="weight"/>
                <field name="container_type_id"/>
                <field name="partner_id"/>
                <field name="sequence"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    <record id="destruction_item_view_form" model="ir.ui.view">
        <field name="name">destruction.item.view.form</field>
        <field name="model">destruction.item</field>
    <field name="arch" type="xml">
            <form string="Destruction Item">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="item_description"/>
                        <field name="records_destruction_id"/>
                        <field name="quantity"/>
                        <field name="weight"/>
                        <field name="container_type_id"/>
                        <field name="partner_id"/>
                        <field name="sequence"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_destruction_item" model="ir.actions.act_window">
        <field name="name">Destruction Item</field>
        <field name="res_model">destruction.item</field>
        <field name="view_mode">list,form</field>
    </record>

    </data>
</odoo>
