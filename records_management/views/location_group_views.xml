<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- List View -->
        <record id="location_group_view_tree" model="ir.ui.view">
            <field name="name">location.group.view.tree</field>
            <field name="model">location.group</field>
            <field name="arch" type="xml">
                <list string="Location Group">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="manager_id"/>
                    <field name="company_id"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="location_group_view_form" model="ir.ui.view">
            <field name="name">location.group.view.form</field>
            <field name="model">location.group</field>
            <field name="arch" type="xml">
                <form string="Location Group">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="description"/>
                            <field name="manager_id"/>
                            <field name="company_id"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="location_group_view_search" model="ir.ui.view">
            <field name="name">location.group.view.search</field>
            <field name="model">location.group</field>
        <field name="arch" type="xml">
                <search string="Search Location Group">
                    <!-- Add search fields here -->
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_location_group" model="ir.actions.act_window">
            <field name="name">Location Group</field>
            <field name="res_model">location.group</field>
            <field name="view_mode">list,form</field>
        </record>

    </odoo>
