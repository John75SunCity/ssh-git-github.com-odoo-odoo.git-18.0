<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Records Retention Policy List View -->
        <record id="view_records_retention_policy_tree" model="ir.ui.view">
            <field name="name">records.retention.policy.list</field>
            <field name="model">records.retention.policy</field>
            <field name="arch" type="xml">
                <list string="Retention Policies">
                    <field name="name"/>
                    <field name="retention_years"/>
                    <field name="policy_type"/>
                    <field name="effective_date"/>
                    <field name="review_date"/>
                    <field name="policy_status"/>
                    <field name="document_count"/>
                </list>
            </field>
        </record>

        <!-- Records Retention Policy Form View -->
        <record id="view_records_retention_policy_form" model="ir.ui.view">
            <field name="name">records.retention.policy.form</field>
            <field name="model">records.retention.policy</field>
            <field name="arch" type="xml">
                <form string="Retention Policy">
                    <header>
                        <button name="action_activate_policy" string="Activate" type="object" class="btn-primary" invisible="policy_status != 'pending'"/>
                        <button name="action_review_policy" string="Mark for Review" type="object" class="btn-secondary" invisible="policy_status != 'active'"/>
                        <button name="action_deactivate_policy" string="Retire" type="object" class="btn-warning" invisible="policy_status not in ('active', 'pending')"/>
                        <field name="policy_status" widget="statusbar" statusbar_visible="pending,active,inactive,expired"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_policy_documents" type="object" class="oe_stat_button" icon="fa-files-o">
                                <field name="document_count" widget="statinfo" string="Documents"/>
                            </button>
                            <button name="action_view_exceptions" type="object" class="oe_stat_button" icon="fa-exclamation-triangle">
                                <field name="exception_count" widget="statinfo" string="Exceptions"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="policy_type"/>
                                <field name="retention_years"/>
                                <field name="destruction_method"/>
                            </group>
                            <group>
                                <field name="effective_date"/>
                                <field name="review_date"/>
                                <field name="policy_version"/>
                                <field name="risk_level"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Describe the retention policy..."/>
                            </page>
                            <page string="Legal Basis">
                                <field name="legal_basis" placeholder="Legal requirements and citations..."/>
                            </page>
                            <page string="Version History">
                                <field name="version_history_ids">
                                    <list>
                                        <field name="version_number"/>
                                        <field name="version_date"/>
                                        <field name="changed_by"/>
                                        <field name="approval_status"/>
                                        <field name="is_current_version"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Analytics" groups="base.group_system">
                                <group>
                                    <group string="Policy Metrics">
                                        <field name="policy_effectiveness_score"/>
                                        <field name="compliance_rate"/>
                                        <field name="destruction_efficiency_rate"/>
                                        <field name="policy_risk_score"/>
                                    </group>
                                    <group string="Usage Statistics">
                                        <field name="document_count"/>
                                        <field name="exception_count"/>
                                        <field name="review_cycle_months"/>
                                        <field name="next_mandatory_review"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Records Retention Policy Search View -->
        <record id="view_records_retention_policy_search" model="ir.ui.view">
            <field name="name">records.retention.policy.search</field>
            <field name="model">records.retention.policy</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="policy_type"/>
                    <field name="retention_years"/>
                    <filter string="Active" name="active" domain="[('policy_status', '=', 'active')]"/>
                    <filter string="Under Review" name="under_review" domain="[('policy_status', '=', 'under_review')]"/>
                    <filter string="High Risk" name="high_risk" domain="[('risk_level', 'in', ['high', 'critical'])]"/>
                    <group expand="0" string="Group By">
                        <filter string="Policy Type" name="group_policy_type" context="{'group_by': 'policy_type'}"/>
                        <filter string="Status" name="group_status" context="{'group_by': 'policy_status'}"/>
                        <filter string="Risk Level" name="group_risk" context="{'group_by': 'risk_level'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Records Retention Policy Action -->
        <record id="action_records_retention_policy" model="ir.actions.act_window">
            <field name="name">Retention Policies</field>
            <field name="res_model">records.retention.policy</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_records_retention_policy_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first retention policy!
                </p>
                <p>
                    Retention policies define how long documents should be kept
                    and how they should be destroyed when their retention period expires.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
            <!-- ðŸ”— MENU INTEGRATION -->
        <menuitem id="menu_records_retention_policy"
                  name="Retention Policies"
                  parent="menu_records_configuration"
                  action="action_records_retention_policy"
                  sequence="30"/>

    </data>
</odoo>