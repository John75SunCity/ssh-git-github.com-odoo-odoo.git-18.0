<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ‚è∞ ENTERPRISE RETENTION POLICIES - Automated Lifecycle Management -->
    
    <!-- üé® Retention Policy Kanban Dashboard -->
    <record id="view_records_retention_policy_kanban" model="ir.ui.view">
        <field name="name">records.retention.policy.kanban</field>
        <field name="model">records.retention.policy</field>
        <field name="arch" type="xml">
            <kanban default_group_by="policy_status" class="o_kanban_retention_dashboard">
                <field name="name"/>
                <field name="policy_type"/>
                <field name="retention_period"/>
                <field name="policy_status"/>
                <field name="auto_archive"/>
                <field name="auto_destroy"/>
                <field name="compliance_required"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>‚è∞ <field name="name"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        üè∑Ô∏è <field name="policy_type"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v"/></a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-8">
                                        <div><i class="fa fa-calendar"/> Period: <field name="retention_period"/> years</div>
                                        <div><i class="fa fa-cogs"/> Status: <field name="policy_status"/></div>
                                    </div>
                                    <div class="col-4">
                                        <span class="badge badge-success" t-if="record.auto_archive.raw_value">
                                            üì¶ Auto Archive
                                        </span>
                                        <span class="badge badge-warning" t-if="record.auto_destroy.raw_value">
                                            üóëÔ∏è Auto Destroy
                                        </span>
                                        <span class="badge badge-info" t-if="record.compliance_required.raw_value">
                                            üèÜ Compliance
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-sm" type="object" name="action_apply_policy">
                                            üöÄ Apply
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-success btn-sm" type="object" name="action_view_affected_documents">
                                            üìÑ Documents
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Policy</a>
                                <a role="menuitem" type="object" name="action_view_affected_documents" class="dropdown-item">üìÑ View Documents</a>
                                <a role="menuitem" type="object" name="action_schedule_review" class="dropdown-item">üìÖ Schedule Review</a>
                                <a role="menuitem" type="object" name="action_compliance_audit" class="dropdown-item">üèÜ Compliance Audit</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="object" name="action_duplicate" class="dropdown-item">üìã Duplicate</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- üìã Enhanced Tree with Lifecycle Tracking -->
    <record id="view_records_retention_policy_tree" model="ir.ui.view">
        <field name="name">records.retention.policy.list</field>
        <field name="model">records.retention.policy</field>
        <field name="arch" type="xml">
            <list decoration-success="policy_status == 'active' and compliance_required == True" 
                  decoration-warning="policy_status == 'pending_review'"
                  decoration-danger="policy_status == 'expired'"
                  decoration-info="auto_destroy == True">
                <field name="name" string="‚è∞ Policy Name"/>
                <field name="policy_type" string="üè∑Ô∏è Type"/>
                <field name="retention_period" string="üìÖ Period (Years)"/>
                <field name="trigger_event" string="üéØ Trigger"/>
                <field name="auto_archive" string="üì¶ Auto Archive" widget="boolean_toggle"/>
                <field name="auto_destroy" string="üóëÔ∏è Auto Destroy" widget="boolean_toggle"/>
                <field name="compliance_required" string="üèÜ Compliance" widget="boolean_toggle"/>
                <field name="policy_status" string="üéØ Status" widget="badge"/>
                <field name="next_review_date" string="üìÖ Next Review"/>
                <button name="action_apply_policy" type="object" string="Apply" 
                        icon="fa-play" class="btn-link" 
                        attrs="{'invisible': [('policy_status', '!=', 'active')]}"/>
                <button name="action_compliance_audit" type="object" string="Audit" 
                        icon="fa-shield" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- üìù Enhanced Form with Complete Lifecycle Management -->
    <record id="view_records_retention_policy_form" model="ir.ui.view">
        <field name="name">records.retention.policy.form</field>
        <field name="model">records.retention.policy</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_apply_policy" type="object" string="üöÄ Apply Policy" 
                            class="btn-primary" attrs="{'invisible': [('policy_status', '!=', 'active')]}"/>
                    <button name="action_schedule_review" type="object" string="üìÖ Schedule Review" class="btn-secondary"/>
                    <button name="action_compliance_audit" type="object" string="üèÜ Compliance Audit" class="btn-info"/>
                    <button name="action_test_policy" type="object" string="üß™ Test Policy" class="btn-warning"/>
                    <field name="policy_status" widget="statusbar" statusbar_visible="draft,active,pending_review,expired"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_affected_documents" icon="fa-file-text">
                            <field string="Affected Documents" name="document_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_schedules" icon="fa-calendar">
                            <field string="Scheduled Actions" name="schedule_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_audit_logs" icon="fa-history">
                            <field string="Audit Logs" name="audit_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-check-circle" 
                                attrs="{'invisible': [('compliance_verified', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">üèÜ</span>
                                <span class="o_stat_text">Compliant</span>
                            </div>
                        </button>
                    </div>
                    
                    <group>
                        <group string="‚è∞ Policy Definition">
                            <field name="name" placeholder="e.g., Financial Records Retention"/>
                            <field name="policy_type"/>
                            <field name="description"/>
                            <field name="effective_date"/>
                        </group>
                        <group string="üèÜ Compliance &amp; Legal">
                            <field name="legal_basis"/>
                            <field name="regulatory_requirement"/>
                            <field name="compliance_required"/>
                            <field name="compliance_verified"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="üìÖ Retention Rules">
                            <field name="retention_period"/>
                            <field name="retention_unit"/>
                            <field name="trigger_event"/>
                            <field name="calculation_method"/>
                        </group>
                        <group string="ü§ñ Automation Settings">
                            <field name="auto_archive"/>
                            <field name="auto_destroy"/>
                            <field name="requires_approval"/>
                            <field name="notification_enabled"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="üéØ Applicable Document Types" name="document_types">
                            <field name="applicable_document_type_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="category"/>
                                    <field name="confidentiality_level"/>
                                    <field name="current_retention_period"/>
                                    <button name="action_apply_to_type" type="object" string="Apply" icon="fa-check" class="btn-link"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìã Policy Rules" name="rules">
                            <field name="policy_rule_ids" mode="list">
                                <list editable="bottom">
                                    <field name="rule_name"/>
                                    <field name="condition"/>
                                    <field name="action"/>
                                    <field name="trigger_days"/>
                                    <field name="priority"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìÖ Review Schedule" name="schedule">
                            <group>
                                <group string="üìÜ Review Timing">
                                    <field name="review_frequency"/>
                                    <field name="next_review_date"/>
                                    <field name="last_review_date"/>
                                    <field name="review_required_by"/>
                                </group>
                                <group string="üë• Review Participants">
                                    <field name="review_manager"/>
                                    <field name="legal_reviewer"/>
                                    <field name="compliance_officer"/>
                                    <field name="stakeholder_notification"/>
                                </group>
                            </group>
                            <field name="review_history_ids" mode="list">
                                <list>
                                    <field name="review_date"/>
                                    <field name="reviewer"/>
                                    <field name="review_outcome"/>
                                    <field name="changes_made"/>
                                    <field name="next_review_scheduled"/>
                                </list>
                            </field>
                        </page>
                        <page string="üîî Notifications" name="notifications">
                            <group>
                                <group string="üì± Notification Settings">
                                    <field name="notify_before_archive"/>
                                    <field name="notify_before_destroy"/>
                                    <field name="escalation_enabled"/>
                                    <field name="reminder_frequency"/>
                                </group>
                                <group string="üë• Recipients">
                                    <field name="notification_recipients"/>
                                    <field name="manager_notification"/>
                                    <field name="legal_notification"/>
                                    <field name="compliance_notification"/>
                                </group>
                            </group>
                            <field name="notification_template_ids" mode="list">
                                <list>
                                    <field name="template_name"/>
                                    <field name="trigger_event"/>
                                    <field name="days_before"/>
                                    <field name="notification_method"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                        <page string="üîç Audit Trail" name="audit">
                            <field name="audit_log_ids" mode="list">
                                <list>
                                    <field name="timestamp"/>
                                    <field name="action"/>
                                    <field name="user_id"/>
                                    <field name="affected_documents"/>
                                    <field name="compliance_impact"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìä Analytics" name="analytics">
                            <group>
                                <group string="üìà Policy Performance">
                                    <field name="total_documents_affected" readonly="1"/>
                                    <field name="documents_archived" readonly="1"/>
                                    <field name="documents_destroyed" readonly="1"/>
                                    <field name="compliance_rate" readonly="1"/>
                                </group>
                                <group string="üìÖ Timeline Metrics">
                                    <field name="average_retention_period" readonly="1"/>
                                    <field name="policy_utilization_rate" readonly="1"/>
                                    <field name="last_policy_execution" readonly="1"/>
                                    <field name="next_scheduled_execution" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- üìÖ Calendar View for Policy Reviews -->
    <record id="view_records_retention_policy_calendar" model="ir.ui.view">
        <field name="name">records.retention.policy.calendar</field>
        <field name="model">records.retention.policy</field>
        <field name="arch" type="xml">
            <calendar string="üìÖ Policy Review Schedule" 
                      date_start="next_review_date" 
                      color="policy_status">
                <field name="name"/>
                <field name="policy_type"/>
                <field name="review_manager"/>
                <field name="compliance_required"/>
            </calendar>
        </field>
    </record>

    <!-- üîç Enhanced Search with Policy Filters -->
    <record id="view_records_retention_policy_search" model="ir.ui.view">
        <field name="name">records.retention.policy.search</field>
        <field name="model">records.retention.policy</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Policy"/>
                <field name="policy_type"/>
                <field name="legal_basis"/>
                <field name="review_manager"/>
                
                <filter string="üü¢ Active" name="active" domain="[('policy_status', '=', 'active')]"/>
                <filter string="üìã Draft" name="draft" domain="[('policy_status', '=', 'draft')]"/>
                <filter string="üìÖ Pending Review" name="pending_review" domain="[('policy_status', '=', 'pending_review')]"/>
                <filter string="‚è∞ Expired" name="expired" domain="[('policy_status', '=', 'expired')]"/>
                
                <separator/>
                <filter string="üèÜ Compliance Required" name="compliance_required" domain="[('compliance_required', '=', True)]"/>
                <filter string="‚úÖ Compliance Verified" name="compliance_verified" domain="[('compliance_verified', '=', True)]"/>
                <filter string="üì¶ Auto Archive" name="auto_archive" domain="[('auto_archive', '=', True)]"/>
                <filter string="üóëÔ∏è Auto Destroy" name="auto_destroy" domain="[('auto_destroy', '=', True)]"/>
                
                <separator/>
                <filter string="üìÖ Review Due This Month" name="review_due" 
                        domain="[('next_review_date', '&lt;=', (context_today() + relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="‚ö†Ô∏è Overdue Review" name="overdue_review" 
                        domain="[('next_review_date', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="üìä Group By">
                    <filter string="Policy Type" name="group_by_type" context="{'group_by': 'policy_type'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'policy_status'}"/>
                    <filter string="Review Manager" name="group_by_manager" context="{'group_by': 'review_manager'}"/>
                    <filter string="Compliance Required" name="group_by_compliance" context="{'group_by': 'compliance_required'}"/>
                    <filter string="Next Review" name="group_by_review_date" context="{'group_by': 'next_review_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- üöÄ ENTERPRISE ACTION - Retention Policy Management -->
    <record id="action_records_retention_policy" model="ir.actions.act_window">
        <field name="name">‚è∞ Retention Policies</field>
        <field name="res_model">records.retention.policy</field>
        <field name="view_mode">kanban,list,form,calendar</field>
        <field name="search_view_id" ref="view_records_retention_policy_search"/>
        <field name="context">{
            'search_default_active': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ‚è∞ Create your first retention policy!
            </p>
            <p>
                <b>Enterprise Retention Policy Management:</b><br/>
                ‚Ä¢ üìÖ Automated document lifecycle management<br/>
                ‚Ä¢ üèÜ Legal and regulatory compliance tracking<br/>
                ‚Ä¢ ü§ñ Intelligent auto-archive and destruction<br/>
                ‚Ä¢ üìÖ Scheduled policy reviews and audits<br/>
                ‚Ä¢ üîî Proactive notifications and alerts<br/>
                ‚Ä¢ üìä Comprehensive analytics and reporting<br/>
                ‚Ä¢ üë• Multi-stakeholder approval workflows<br/>
                ‚Ä¢ üîç Complete audit trail documentation<br/>
                ‚Ä¢ üìã Template-based policy creation
            </p>
        </field>
    </record>
</odoo>
