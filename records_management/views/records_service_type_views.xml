<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
<!-- View records.service.type View List -->
    <record id="view_records_service_type_list" model="ir.ui.view">
        <field name="name">view.records.service.type.list</field>
        <field name="model">records.service.type</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View records.service.type form -->
    <record id="view_records_service_type_form" model="ir.ui.view">
        <field name="name">view.records.service.type.form</field>
        <field name="model">records.service.type</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Records Service Type">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View records.service.type search -->
    <record id="view_records_service_type_search" model="ir.ui.view">
        <field name="name">view.records.service.type.search</field>
        <field name="model">records.service.type</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action records.service.type -->
    <record id="action_records_service_type" model="ir.actions.act_window">
        <field name="name">Records Service Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.service.type</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records Service Type.
            </p>
        </field>
    </record>
</data>

</odoo>
