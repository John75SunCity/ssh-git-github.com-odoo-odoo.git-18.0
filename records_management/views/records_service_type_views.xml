<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="records_service_type_view_tree" model="ir.ui.view">
            <field name="name">records.service.type.view.tree</field>
            <field name="model">records.service.type</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                </list>
            </field>
        </record>
        <record id="records_service_type_view_form" model="ir.ui.view">
            <field name="name">records.service.type.view.form</field>
            <field name="model">records.service.type</field>
            <field name="arch" type="xml">
                <form string="Records Service Type">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Name..." />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="records_service_type_view_search" model="ir.ui.view">
            <field name="name">records.service.type.view.search</field>
            <field name="model">records.service.type</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="1" string="Group By">
                        <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="records_service_type_action" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model records.service.type has sequence field - consider adding _order="sequence" to model -->
            <field name="name">Records Service Type</field>
            <field name="res_model">records.service.type</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
        There is no examples click here to add new Records Service Type.
    </p>
            </field>
        </record>
    </data>
</odoo>
