<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="display_name_view_tree" model="ir.ui.view">
            <field name="name">display_name.view.tree</field>
            <field name="model">display_name</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <tree string="Display Name">
                    <field name="name"/>
                    <field name="model_name"/>
                    <field name="pattern"/>
                    <field name="description"/>
                    <field name="active"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="display_name_view_form" model="ir.ui.view">
            <field name="name">display_name.view.form</field>
            <field name="model">display_name</field>
            <field name="type">form</field>
        <field name="arch" type="xml">
                <form string="Display Name">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="model_name"/>
                            <field name="pattern"/>
                            <field name="description"/>
                            <field name="active"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="display_name_view_search" model="ir.ui.view">
            <field name="name">display_name.view.search</field>
            <field name="model">display_name</field>
            <field name="type">search</field>
        <field name="arch" type="xml">
                <search string="Search Display Name">
                    <field name="name"/>
                    <field name="model_name"/>
                    <field name="pattern"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_display_name" model="ir.actions.act_window">
            <field name="name">Display Name</field>
            <field name="res_model">display_name</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu -->
        <!--
        <menuitem
            id="menu_display_name"
            name="Display Name"
            action="action_display_name"
            parent="REPLACE_WITH_PARENT_MENU_ID"
            sequence="10"/>
        -->

    </data>
</odoo>
