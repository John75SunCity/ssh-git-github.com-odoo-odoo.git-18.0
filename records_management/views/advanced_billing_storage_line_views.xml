<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="view_advanced_billing_storage_line_tree" model="ir.ui.view">
        <field name="name">advanced.billing.storage.line.tree</field>
        <field name="model">advanced.billing.storage.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="billing_id"/>
            </tree>
        </field>
    </record>
    <record id="view_advanced_billing_storage_line_form" model="ir.ui.view">
        <field name="name">advanced.billing.storage.line.form</field>
        <field name="model">advanced.billing.storage.line</field>
        <field name="arch" type="xml">
            <form string="Advanced Billing Storage Line">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="amount"/>
                        <field name="currency_id"/>
                        <field name="billing_id"/>
                        <field name="sequence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</data>
</odoo>
