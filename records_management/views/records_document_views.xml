<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="records_document_view_kanban" model="ir.ui.view">
            <field name="name">records.document.view.kanban</field>
            <field name="model">records.document</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_document_dashboard">
                    <field name="name" />
                    <field name="document_type_id" />
                    <field name="partner_id" />
                    <field name="container_id" />
                    <field name="state" />
                    <field name="retention_policy_id" />
                    <field name="destruction_eligible_date" />
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <i class="fa fa-file-text-o" title="Document" />
                                            <field name="name" />
                                        </div>
                                        <div class="o_secondary">
                                            <i class="fa fa-user" title="Customer" />
                                            <field name="partner_id" />
                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#">
                                            <i class="fa fa-ellipsis-v" title="More options" role="img" aria-label="More options" />
                                        </a>
                                    </div>
                                </div>
                                <div class="o_kanban_card_content" t-att-title="record.display_name.raw_value" t-att-aria-label="record.display_name.raw_value" role="group">
                                    <div class="row">
                                        <div class="col-8">
                                            <div>
                                                <i class="fa fa-folder" aria-hidden="true" />
                                                <field name="document_type_id" />
                                            </div>
                                            <div>
                                                <i class="fa fa-cube" aria-hidden="true" />
                                                <field name="container_id" />
                                            </div>
                                            <div t-if="record.destruction_eligible_date.raw_value">
                                                <i class="fa fa-calendar-times" aria-hidden="true" />
                                                <field name="destruction_eligible_date" />
                                            </div>
                                            <div t-if="record.total_scan_size_kb.raw_value and record.total_scan_size_visible.raw_value">
                                                <i class="fa fa-file" aria-hidden="true" />
                                                <field name="total_scan_size_kb" /> KB
                                        </div>
                                        </div>
                                        <div class="col-4">
                                            <span class="badge" t-att-class="record.state.raw_value === 'active' ? 'badge-success' : record.state.raw_value === 'pending_destruction' ? 'badge-warning' : record.state.raw_value === 'destroyed' ? 'badge-danger' : 'badge-secondary'">
                                                <field name="state" />
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <button class="btn btn-primary btn-sm" type="object" name="action_view_chain_of_custody">
                                                <i class="fas fa-link" title="Chain of Custody" /> Chain
                                        </button>
                                        </div>
                                        <div class="col-6">
                                            <button class="btn btn-info btn-sm" type="object" name="action_generate_document_barcode">
                                                <i class="fas fa-barcode" title="Generate Barcode" /> Barcode
                                        </button>
                                        </div>
                                    </div>
                                    <div class="row mt-1">
                                        <div class="col-6">
                                            <button class="btn btn-success btn-sm" type="object" name="action_generate_document_qr">
                                                <i class="fas fa-qrcode" title="Generate QR Code" /> QR Code
                                        </button>
                                        </div>
                                        <div class="col-6">
                                            <button class="btn btn-warning btn-sm" type="object" name="action_schedule_destruction" t-if="record.destruction_eligible_date.raw_value">
                                                <i class="fas fa-trash" title="Schedule Destruction" /> Destroy
                                        </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">
                                        <i class="fas fa-edit" title="Edit Document" /> Edit Document</a>
                                    <a role="menuitem" type="object" name="action_view_chain_of_custody" class="dropdown-item">
                                        <i class="fas fa-link" title="Chain of Custody" /> Chain of Custody</a>
                                    <a role="menuitem" type="object" name="action_scan_document" class="dropdown-item">
                                        <i class="fas fa-camera" title="Scan Document" /> Scan/Image</a>
                                    <a role="menuitem" type="object" name="action_audit_trail" class="dropdown-item">
                                        <i class="fas fa-history" title="Audit Trail" /> Audit Trail</a>
                                    <a role="menuitem" type="object" name="action_generate_document_barcode" class="dropdown-item">
                                        <i class="fas fa-barcode" title="Generate Barcode" /> Generate Barcode</a>
                                    <a role="menuitem" type="object" name="action_generate_document_qr" class="dropdown-item">
                                        <i class="fas fa-qrcode" title="Generate QR Code" /> Generate QR Code</a>
                                    <div class="dropdown-divider" />
                                    <a role="menuitem" type="object" name="action_schedule_destruction" class="dropdown-item">
                                        <i class="fas fa-bomb" title="Schedule Destruction" /> Schedule Destruction</a>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="records_document_view_tree" model="ir.ui.view">
            <field name="name">records.document.view.tree</field>
            <field name="model">records.document</field>
            <field name="arch" type="xml">
                <!-- Modernized decorations: remove Python expressions (relativedelta) -->
                <!-- Use computed helper field days_until_destruction (Integer) and permanent flag -->
                <!-- Interpretation:
                     danger: past due (negative or zero days)
                     warning: due within next 30 days (0 < days_until_destruction <= 30)
                     success: permanent record -->
                <list decoration-danger="days_until_destruction != False and days_until_destruction &lt;= 0"
                      decoration-warning="days_until_destruction != False and days_until_destruction &gt; 0 and days_until_destruction &lt;= 30"
                      decoration-success="is_permanent == True">
                    <field name="name" string="Document" />
                    <field name="document_type_id" string="Type" />
                    <field name="partner_id" string="Customer" />
                    <field name="stock_owner_id" string="Stock Owner" groups="records_management.group_records_manager" />
                    <field name="container_id" string="Container" />
                    <field name="is_permanent" string="Permanent" widget="boolean" />
                    <field name="retention_policy_id" string="Retention Policy" />
                    <field name="destruction_eligible_date" string="Destruction Date" />
                    <field name="state" string="Status" widget="badge" />
                    <button name="action_view_chain_of_custody" type="object" string="Chain" icon="fas fa-link" class="btn-link" />
                    <button name="action_generate_document_barcode" type="object" string="Barcode" icon="fas fa-barcode" class="btn-link" />
                    <button name="action_generate_document_qr" type="object" string="QR" icon="fas fa-qrcode" class="btn-link" />
                    <button name="action_mark_permanent" type="object" string="Mark Permanent" icon="fas fa-shield" class="btn-link" invisible="is_permanent" groups="records_management.group_records_user" />
                    <button name="action_unmark_permanent" type="object" string="Remove Permanent" icon="fas fa-shield" class="btn-link" invisible="not is_permanent" groups="base.group_system" />
                    <button name="action_schedule_destruction" type="object" string="Destroy" icon="fas fa-trash" class="btn-link" invisible="not destruction_eligible_date or is_permanent" />
                </list>
            </field>
        </record>
        <record id="records_document_view_form" model="ir.ui.view">
            <field name="name">records.document.view.form</field>
            <field name="model">records.document</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_view_chain_of_custody" type="object" string="View Chain of Custody" class="btn-primary" />
                        <button name="action_scan_document" type="object" string="Scan/Image Document" class="btn-secondary" invisible="digital_scanning_enabled == False" />
                        <button name="action_generate_document_barcode" type="object" string="Generate Barcode" class="btn-info" />
                        <button name="action_generate_document_qr" type="object" string="Generate QR Code" class="btn-success" />
                        <button name="action_mark_permanent" type="object" string="Mark as Permanent" class="btn-success" invisible="is_permanent" groups="records_management.group_records_user" />
                        <button name="action_unmark_permanent" type="object" string="Remove Permanent Flag" class="btn-warning" invisible="not is_permanent" groups="base.group_system" />
                        <button name="action_schedule_destruction" type="object" string="Schedule Destruction" class="btn-warning" invisible="not destruction_eligible_date or is_permanent" />
                        <field name="state" widget="statusbar" statusbar_visible="active,pending_destruction,destroyed" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_chain_of_custody" icon="fas fa-link">
                                <field name="chain_of_custody_count" string="Chain Events" widget="statinfo" />
                            </button>
                            <button class="oe_stat_button" type="object" name="action_audit_trail" icon="fas fa-history">
                                <field name="audit_log_count" string="Audit Events" widget="statinfo" />
                            </button>
                            <button class="oe_stat_button" icon="fas fa-calendar-times" invisible="not destruction_eligible_date">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="days_until_destruction" />
                                    </span>
                                    <span class="o_stat_text">Days to Destroy</span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group string="Document Information">
                                <field name="name" 
                                       string="Document Name"
                                       placeholder="e.g., Invoice-2024-001, Contract-ABC-Corp"
                                       help="Unique name/identifier for this document"/>
                                <field name="document_type_id" string="Document Type"/>
                                <field name="partner_id" string="Customer"/>
                                <field name="stock_owner_id" groups="records_management.group_records_manager" readonly="1" />
                                <field name="department_id" string="Department"/>
                                <field name="container_id" string="Container"/>
                                <field name="file_id" string="File Folder"/>
                            </group>
                            <group string="Barcode Tracking">
                                <field name="temp_barcode" 
                                       string="Temporary Barcode"
                                       readonly="1" 
                                       help="System-generated temporary barcode (auto-assigned)"
                                       invisible="barcode"/>
                                <field name="barcode" 
                                       string="Physical Barcode"
                                       placeholder="Scan or type barcode from pre-printed sheet"
                                       help="Physical barcode - scan with camera or laser scanner"
                                       widget="barcode"/>
                                <field name="reference" 
                                       string="Reference"
                                       placeholder="Additional reference or external barcode"/>
                                <div colspan="2" class="text-muted small" invisible="not barcode or not temp_barcode">
                                    <i class="fa fa-info-circle"/> Both temporary and physical barcodes are active
                                </div>
                            </group>
                            <group string="Security &amp; Compliance">
                                <field name="is_permanent" widget="boolean_toggle" />
                                <field name="permanent_user_id" readonly="1" invisible="not is_permanent" />
                                <field name="permanent_date" readonly="1" invisible="not is_permanent" />
                                <field name="retention_policy_id" />
                                <field name="destruction_eligible_date" />
                                <field name="state" />
                                <div colspan="2" style="font-weight: bold; color: #28a745; padding: 5px;">
                                    <i class="fas fa-certificate" title="NAID AAA Certified" /> NAID AAA Certified Facility</div>
                            </group>
                        </group>

                        <!-- Legal Compliance & Record Series (Optional) -->
                        <group string="Legal Compliance &amp; Record Series (Optional)" name="legal_compliance" col="2">
                            <group>
                                <field name="record_series_id"
                                       string="Record Series"
                                       options="{'no_create': True}"
                                       help="Select a record series code to automatically apply legal citations and retention policies"/>
                                <field name="disposition_id"
                                       string="Disposition Method"
                                       options="{'no_create': True}"
                                       help="How records should be handled at end of retention period (Shred, Archive, etc.)"/>
                            </group>
                            <group>
                                <field name="legal_citation_ids"
                                       string="Legal Citations"
                                       widget="many2many_tags"
                                       options="{'no_create': True}"
                                       help="Legal requirements governing retention of these records (IRS, HIPAA, SOX, etc.)"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Document Details" name="details">
                                <group>
                                    <group string="Dates &amp; Timeline">
                                        <field name="create_date" />
                                        <field name="received_date" />
                                        <field name="storage_date" />
                                        <field name="last_access_date" />
                                    </group>
                                    <group string="Classification">
                                        <field name="document_category" />
                                        <field name="media_type" />
                                        <field name="original_format" />
                                        <field name="digitized" />
                                        <field name="scan_count" readonly="1" />
                                        <field name="total_scan_size_kb" readonly="1" widget="integer" invisible="(scan_count == 0) or (total_scan_size_visible == False)" />
                                    </group>
                                </group>
                                <field name="description" placeholder="Document description, contents, and special handling notes..." />
                            </page>
                            <page string="Chain of Custody" name="custody_chain">
                                <field name="chain_of_custody_ids" mode="list">
                                    <list>
                                        <field name="event_date" />
                                        <field name="event_type" />
                                        <field name="user_id" />
                                        <field name="location_id" />
                                        <field name="signature_verified" />
                                        <field name="notes" />
                                    </list>
                                </field>
                            </page>
                            <page string="Audit Trail" name="audit">
                                <field name="audit_log_ids" mode="list">
                                    <list>
                                        <field name="timestamp" />
                                        <field name="action_type" />
                                        <field name="user_id" />
                                        <field name="description" />
                                        <field name="naid_compliant" />
                                    </list>
                                </field>
                            </page>
                            <page string="Destruction Record" name="destruction" invisible="state != 'destroyed'">
                                <group>
                                    <group string="Destruction Details">
                                        <field name="actual_destruction_date" />
                                        <field name="destruction_method" />
                                        <field name="destruction_certificate_id" />
                                        <field name="naid_destruction_verified" />
                                    </group>
                                    <group string="Authorized Personnel">
                                        <field name="destruction_authorized_by_id" />
                                        <field name="destruction_witness_id" />
                                        <field name="destruction_facility" />
                                    </group>
                                </group>
                                <field name="destruction_notes" placeholder="Destruction process notes and compliance verification..." />
                            </page>
                            <page string="Attachments" name="attachments" invisible="attachment_enabled == False">
                                <group>
                                    <group string="Document Attachment">
                                        <field name="file_data" filename="file_name" widget="binary"/>
                                        <field name="file_name"/>
                                        <field name="page_count"/>
                                        <field name="attachment_tracking_number"/>
                                    </group>
                                    <group string="Attachment Info">
                                        <field name="attachment_date"/>
                                        <field name="attachment_count"/>
                                        <field name="total_attachment_size_kb" invisible="total_attachment_size_visible == False"/>
                                    </group>
                                </group>
                                <field name="attachment_notes" placeholder="Notes about this attachment..."/>
                                <div class="text-muted mt-2">
                                    <p><i class="fa fa-info-circle"/> Additional attachments can be added via the Attachments button or by dragging files into the chatter.</p>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
        <record id="records_document_view_calendar" model="ir.ui.view">
            <field name="name">records.document.view.calendar</field>
            <field name="model">records.document</field>
            <field name="arch" type="xml">
                <calendar string="Document Destruction Schedule" date_start="destruction_eligible_date" color="state">
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="state" />
                </calendar>
            </field>
        </record>
        <record id="records_document_view_search" model="ir.ui.view">
            <field name="name">records.document.view.search</field>
            <field name="model">records.document</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Document" filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]" />
                    <field name="partner_id" />
                    <field name="document_type_id" />
                    <field name="container_id" />
                    <filter string="Active Documents" name="active" domain="[('state', '=', 'active')]" />
                    <filter string="Pending Destruction" name="pending_destruction" domain="[('state', '=', 'pending_destruction')]" />
                    <filter string="Destroyed" name="destroyed" domain="[('state', '=', 'destroyed')]" />
                    <separator />
                    <filter string="Permanent Records" name="permanent" domain="[('is_permanent', '=', True)]" />
                    <filter string="Non-Permanent Records" name="non_permanent" domain="[('is_permanent', '=', False)]" />
                    <separator />
                    <!-- Modernized date filters replacing Python expressions with mixin-backed virtual fields -->
                    <filter string="Destruction Due" name="destruction_due" domain="[('destruction_eligible_date', '&lt;=', context_today)]" />
                    <!-- Next 30 days destruction eligibility -->
                    <filter string="Destruction Next 30 Days" name="destruction_next_30d" domain="[('expiring_30d_destruction', '=', True)]" />
                    <!-- Recent Access: last 30 days -->
                    <filter string="Accessed Last 30 Days" name="recent_access" domain="[('is_recent_30d_last_access', '=', True)]" />
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="group_by_customer" context="{'group_by': 'partner_id'}" />
                        <filter string="Stock Owner" name="group_by_stock_owner" context="{'group_by': 'stock_owner_id'}" groups="records_management.group_records_manager" />
                        <filter string="Document Type" name="group_by_type" context="{'group_by': 'document_type_id'}" />
                        <filter string="Container" name="group_by_container" context="{'group_by': 'container_id'}" />
                        <filter string="Status" name="group_by_state" context="{'group_by': 'state'}" />
                        <filter string="Destruction Date" name="group_by_destruction" context="{'group_by': 'destruction_eligible_date:month'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="action_records_document" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model records.document has state field - consider using default search filters -->
            <field name="name">Document Management</field>
            <field name="res_model">records.document</field>
            <field name="view_mode">list,form,calendar</field>
            <field name="search_view_id" ref="records_document_view_search" />
            <field name="context">{
            'search_default_active': 1
        }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create your first document record!
            </p>
                <p>
                    <b>NAID AAA Compliant Document Management:</b>
                    <br />
                • Complete chain of custody tracking<br />
                • Comprehensive audit trails for compliance<br />
                • Multi-level confidentiality classification<br />
                • Automated retention policy enforcement<br />
                • Secure destruction scheduling and verification<br />
                • NAID AAA certification compliance<br />
                • Digital imaging and document scanning<br />
                • Barcode and QR code generation for mobile access<br />
                • Mobile access for field operations
</p>
            </field>
        </record>
    </data>
</odoo>
