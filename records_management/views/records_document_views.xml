<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- üìÑ ENTERPRISE DOCUMENT MANAGEMENT - NAID AAA Compliant -->

    <!-- üé® Document Kanban with Retention & Compliance Tracking -->
    <record id="view_records_document_kanban" model="ir.ui.view">
        <field name="name">records.document.kanban</field>
        <field name="model">records.document</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_document_dashboard">
                <field name="name"/>
                <field name="document_type_id"/>
                <field name="partner_id"/>
                <field name="container_id"/>
                <field name="state"/>
                <field name="retention_policy_id"/>
                <field name="destruction_eligible_date"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>üìÑ                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_secondary">
                                        üë§                                        <field name="partner_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" title="More options"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-8">
                                        <div>
                                            <i class="fa fa-folder"/>
                                            <field name="document_type_id"/>
                                        </div>
                                        <div>
                                            <i class="fa fa-cube"/>
                                            <field name="container_id"/>
                                        </div>
                                        <div t-if="record.destruction_eligible_date.raw_value">
                                            <i class="fa fa-calendar-times"/>
                                            <field name="destruction_eligible_date"/>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <!-- Certified NAID AAA facility - all records confidential by default -->
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-sm" type="object" name="action_view_chain_of_custody">
                                            üîó Chain
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-warning btn-sm" type="object" name="action_schedule_destruction" t-if="record.destruction_eligible_date.raw_value">
                                            üóëÔ∏è Destroy
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Document</a>
                                <a role="menuitem" type="object" name="action_view_chain_of_custody" class="dropdown-item">üîó Chain of Custody</a>
                                <a role="menuitem" type="object" name="action_scan_document" class="dropdown-item">üì∑ Scan/Image</a>
                                <a role="menuitem" type="object" name="action_audit_trail" class="dropdown-item">üìã Audit Trail</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="object" name="action_schedule_destruction" class="dropdown-item">üí• Schedule Destruction</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- üìã Enhanced Tree with Compliance Columns -->
    <record id="view_records_document_tree" model="ir.ui.view">
        <field name="name">records.document.list</field>
        <field name="model">records.document</field>
        <field name="arch" type="xml">
            <list decoration-danger="destruction_eligible_date &lt;= context_today()" decoration-warning="destruction_eligible_date &lt;= (context_today() + relativedelta(days=30))" decoration-success="permanent_flag == True">
                <field name="name" string="üìÑ Document"/>
                <field name="document_type_id" string="üìÇ Type"/>
                <field name="partner_id" string="üë§ Customer"/>
                <field name="container_id" string="üì¶ Container"/>
                <field name="permanent_flag" string="üõ°Ô∏è Permanent" widget="boolean"/>
                <field name="retention_policy_id" string="üìÖ Retention Policy"/>
                <field name="destruction_eligible_date" string="üí• Destruction Date"/>
                <field name="state" string="üéØ Status" widget="badge"/>
                <button name="action_view_chain_of_custody" type="object" string="Chain" icon="fa-link" class="btn-link"/>
                <button name="action_mark_permanent" type="object" string="Mark Permanent" icon="fa-shield" class="btn-link" invisible="permanent_flag" groups="records_management.group_records_user"/>
                <button name="action_unmark_permanent" type="object" string="Remove Permanent" icon="fa-shield" class="btn-link" invisible="not permanent_flag" groups="base.group_system"/>
                <button name="action_schedule_destruction" type="object" string="Destroy" icon="fa-trash" class="btn-link" invisible="not destruction_eligible_date or permanent_flag"/>
            </list>
        </field>
    </record>

    <!-- üìù Enhanced Form with NAID Compliance Features -->
    <record id="view_records_document_form" model="ir.ui.view">
        <field name="name">records.document.form</field>
        <field name="model">records.document</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_chain_of_custody" type="object" string="üîó View Chain of Custody" class="btn-primary"/>
                    <button name="action_scan_document" type="object" string="üì∑ Scan/Image Document" class="btn-secondary"/>
                    <button name="action_mark_permanent" type="object" string="üõ°Ô∏è Mark as Permanent" class="btn-success" invisible="permanent_flag" groups="records_management.group_records_user"/>
                    <button name="action_unmark_permanent" type="object" string="‚ö†Ô∏è Remove Permanent Flag" class="btn-warning" invisible="not permanent_flag" groups="base.group_system"/>
                    <button name="action_schedule_destruction" type="object" string="üí• Schedule Destruction" class="btn-warning" invisible="not destruction_eligible_date or permanent_flag"/>
                    <field name="state" widget="statusbar" statusbar_visible="active,pending_destruction,destroyed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_chain_of_custody" icon="fa-link">
                            <field string="Chain Events" name="chain_of_custody_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_audit_trail" icon="fa-history">
                            <field string="Audit Events" name="audit_trail_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-calendar-times" invisible="not destruction_eligible_date">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="days_until_destruction"/>
                                </span>
                                <span class="o_stat_text">Days to Destroy</span>
                            </div>
                        </button>
                    </div>

                    <group>
                        <group string="üìÑ Document Information">
                            <field name="name" placeholder="e.g., Invoice-2024-001"/>
                            <field name="document_type_id"/>
                            <field name="partner_id"/>
                            <field name="department_id"/>
                            <field name="container_id"/>
                        </group>
                        <group string="üîí Security &amp; Compliance">
                            <field name="permanent_flag" widget="boolean_toggle"/>
                            <field name="permanent_flag_set_by" readonly="1" invisible="not permanent_flag"/>
                            <field name="permanent_flag_set_date" readonly="1" invisible="not permanent_flag"/>
                            <field name="retention_policy_id"/>
                            <field name="destruction_eligible_date"/>
                            <field name="state"/>
                            <div colspan="2" style="font-weight: bold; color: #28a745; padding: 5px;">üèÜ NAID AAA Certified Facility</div>
                        </group>
                    </group>

                    <notebook>
                        <page string="üìã Document Details" name="details">
                            <group>
                                <group string="üìÖ Dates &amp; Timeline">
                                    <field name="created_date"/>
                                    <field name="received_date"/>
                                    <field name="storage_date"/>
                                    <field name="last_access_date"/>
                                </group>
                                <group string="üìä Classification">
                                    <field name="document_category"/>
                                    <field name="media_type"/>
                                    <field name="original_format"/>
                                    <field name="digitized"/>
                                </group>
                            </group>
                            <field name="description" placeholder="Document description, contents, and special handling notes..."/>
                        </page>
                        <page string="üîó Chain of Custody" name="custody_chain">
                            <field name="chain_of_custody_ids" mode="list">
                                <list>
                                    <field name="event_date"/>
                                    <field name="event_type"/>
                                    <field name="responsible_person"/>
                                    <field name="location"/>
                                    <field name="signature_verified"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìã Audit Trail" name="audit">
                            <field name="audit_trail_ids" mode="list">
                                <list>
                                    <field name="timestamp"/>
                                    <field name="action_type"/>
                                    <field name="user_id"/>
                                    <field name="description"/>
                                    <field name="compliance_verified"/>
                                </list>
                            </field>
                        </page>
                        <page string="üí• Destruction Record" name="destruction" invisible="state != 'destroyed'">
                            <group>
                                <group string="üóëÔ∏è Destruction Details">
                                    <field name="destruction_date"/>
                                    <field name="destruction_method"/>
                                    <field name="destruction_certificate_id"/>
                                    <field name="naid_destruction_verified"/>
                                </group>
                                <group string="üë§ Authorized Personnel">
                                    <field name="destruction_authorized_by"/>
                                    <field name="destruction_witness"/>
                                    <field name="destruction_facility"/>
                                </group>
                            </group>
                            <field name="destruction_notes" placeholder="Destruction process notes and compliance verification..."/>
                        </page>
                        <page string="üì∑ Digital Scans" name="digital">
                            <field name="digital_scan_ids" mode="list">
                                <list>
                                    <field name="scan_date"/>
                                    <field name="file_format"/>
                                    <field name="resolution"/>
                                    <field name="file_size"/>
                                    <field name="storage_location"/>
                                    <button name="action_download" type="object" string="Download" icon="fa-download" class="btn-link"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- üìÖ Calendar View for Destruction Scheduling -->
    <record id="view_records_document_calendar" model="ir.ui.view">
        <field name="name">records.document.calendar</field>
        <field name="model">records.document</field>
        <field name="arch" type="xml">
            <calendar string="üìÖ Document Destruction Schedule" date_start="destruction_eligible_date" color="state">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- üîç Enhanced Search with Compliance Filters -->
    <record id="view_records_document_search" model="ir.ui.view">
        <field name="name">records.document.search</field>
        <field name="model">records.document</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Document" filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>
                <field name="partner_id"/>
                <field name="document_type_id"/>
                <field name="container_id"/>

                <filter string="üìã Active Documents" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="üí• Pending Destruction" name="pending_destruction" domain="[('state', '=', 'pending_destruction')]"/>
                <filter string="üóëÔ∏è Destroyed" name="destroyed" domain="[('state', '=', 'destroyed')]"/>

                <separator/>
                <filter string="üõ°Ô∏è Permanent Records" name="permanent" domain="[('permanent_flag', '=', True)]"/>
                <filter string="üìÑ Non-Permanent Records" name="non_permanent" domain="[('permanent_flag', '=', False)]"/>

                <separator/>
                <filter string="‚ö†Ô∏è Destruction Due" name="destruction_due" domain="[('destruction_eligible_date', '&lt;=', context_today())]"/>
                <filter string="üìÖ Destruction This Month" name="destruction_this_month" domain="[('destruction_eligible_date', '&lt;=', (context_today() + relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="üìÜ Recent Activity" name="recent_access" domain="[('last_access_date', '&gt;=', (context_today() - relativedelta(days=30)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="üìä Group By">
                    <filter string="Customer" name="group_by_customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Document Type" name="group_by_type" context="{'group_by': 'document_type_id'}"/>
                    <filter string="Container" name="group_by_container" context="{'group_by': 'container_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Destruction Date" name="group_by_destruction" context="{'group_by': 'destruction_eligible_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- üöÄ ENTERPRISE ACTION - NAID Compliant Document Management -->
    <record id="action_records_document" model="ir.actions.act_window">
        <field name="name">üìÑ Document Management</field>
        <field name="res_model">records.document</field>
        <field name="view_mode">kanban,list,form,calendar</field>
        <field name="search_view_id" ref="view_records_document_search"/>
        <field name="context">{
            'search_default_active': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üìÑ Create your first document record!
            </p>
            <p>
                <b>NAID AAA Compliant Document Management:</b>
                <br/>
                ‚Ä¢ üîó Complete chain of custody tracking<br/>
                ‚Ä¢ üìã Comprehensive audit trails for compliance<br/>
                ‚Ä¢ üîí Multi-level confidentiality classification<br/>
                ‚Ä¢ üìÖ Automated retention policy enforcement<br/>
                ‚Ä¢ üí• Secure destruction scheduling and verification<br/>
                ‚Ä¢ üèÜ NAID AAA certification compliance<br/>
                ‚Ä¢ üì∑ Digital imaging and document scanning<br/>
                ‚Ä¢ üì± Mobile access for field operations
</p>
</field>
</record>
</odoo>
