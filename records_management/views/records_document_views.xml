<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Minimal action - let Odoo auto-generate views for records.document -->
    <record id="action_records_document" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">records.document</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first document
            </p>
            <p>
                Manage individual documents and track their details.
            </p>
        </field>
    </record>
</odoo>
