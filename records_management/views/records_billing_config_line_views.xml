<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Records Billing Config Line Views -->
    
    <!-- Tree View -->
    <record id="records_billing_config_line_view_tree" model="ir.ui.view">
        <field name="name">records.billing.config.line.view.tree</field>
        <field name="model">records.billing.config.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Billing Config Lines" default_order="billing_config_id, service_type">
                <field name="name"/>
                <field name="service_type"/>
                <field name="container_type"/>
                <field name="billing_method"/>
                <field name="unit_rate"/>
                <field name="effective_rate" sum="Total Rate"/>
                <field name="quantity_parameter"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="records_billing_config_line_view_form" model="ir.ui.view">
        <field name="name">records.billing.config.line.view.form</field>
        <field name="model">records.billing.config.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <form string="Billing Config Line">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Line Description"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="billing_config_id"/>
                            <field name="service_type"/>
                            <field name="container_type"/>
                            <field name="billing_method"/>
                        </group>
                        <group>
                            <field name="unit_rate"/>
                            <field name="discount_percentage"/>
                            <field name="markup_percentage"/>
                            <field name="effective_rate"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pricing Details">
                            <group>
                                <group>
                                    <field name="minimum_charge"/>
                                    <field name="maximum_charge"/>
                                    <field name="quantity_parameter"/>
                                </group>
                                <group>
                                    <field name="applies_to_volume"/>
                                    <field name="applies_to_weight"/>
                                    <field name="applies_to_count"/>
                                </group>
                            </group>
                        </page>
                        <page string="Validity">
                            <group>
                                <group>
                                    <field name="effective_date"/>
                                    <field name="expiry_date"/>
                                </group>
                                <group>
                                    <field name="is_default"/>
                                    <field name="priority"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="notes" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="records_billing_config_line_view_search" model="ir.ui.view">
        <field name="name">records.billing.config.line.view.search</field>
        <field name="model">records.billing.config.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <search string="Search Billing Config Lines">
                <field name="name"/>
                <field name="billing_config_id"/>
                <field name="service_type"/>
                <field name="container_type"/>
                <field name="billing_method"/>
                <separator/>
                <filter name="filter_default" string="Default Lines" domain="[('is_default', '=', True)]"/>
                <filter name="filter_active" string="Active" domain="[('effective_date', '&lt;=', today), '|', ('expiry_date', '=', False), ('expiry_date', '&gt;=', today)]"/>
                <filter name="filter_discounted" string="Discounted" domain="[('discount_percentage', '>', 0)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_service_type" string="Service Type" context="{'group_by': 'service_type'}"/>
                    <filter name="group_container_type" string="Container Type" context="{'group_by': 'container_type'}"/>
                    <filter name="group_billing_method" string="Billing Method" context="{'group_by': 'billing_method'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_records_billing_config_line" model="ir.actions.act_window">
        <field name="name">Billing Config Lines</field>
        <field name="res_model">records.billing.config.line</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No billing config lines found!
            </p>
            <p>
                Config lines define pricing for different services and container types.
            </p>
        </field>
    </record>
</data>
</odoo>
