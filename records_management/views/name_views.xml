<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
<!-- Tree view for name -->
    <record id="name_view_tree" model="ir.ui.view">
        <field name="name">name.view.tree</field>
        <field name="model">name</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for name -->
    <record id="name_view_form" model="ir.ui.view">
        <field name="name">name.view.form</field>
        <field name="model">name</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Name">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for name -->
    <record id="name_view_search" model="ir.ui.view">
        <field name="name">name.view.search</field>
        <field name="model">name</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for name -->
    <record id="action_name" model="ir.actions.act_window">
        <field name="name">Name</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">name</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new name.
            </p>
        </field>
    </record>
</data>

</odoo>
