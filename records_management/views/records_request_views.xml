<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="records_request_view_tree" model="ir.ui.view">
            <field name="name">records.request.view.tree</field>
            <field name="model">records.request</field>
            <field name="arch" type="xml">
                <list string="Records Requests">
                    <field name="name" />
                    <field name="request_type_id" />
                    <field name="partner_id" />
                    <field name="state" />
                </list>
            </field>
        </record>
        <record id="records_request_view_form" model="ir.ui.view">
            <field name="name">records.request.view.form</field>
            <field name="model">records.request</field>
            <field name="arch" type="xml">
                <form string="Records Request">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,in_progress,done" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="request_type_id" />
                                <field name="partner_id" />
                                <field name="destruction_address_id" />
                            </group>
                            <group>
                                <field name="user_id" />
                                <field name="company_id" groups="base.group_multi_company" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Request Lines">
                                <field name="request_line_ids">
                                    <list editable="bottom">
                                        <field name="document_id" />
                                        <field name="box_id" />
                                        <field name="container_id" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
        <record id="records_request_view_search" model="ir.ui.view">
            <field name="name">records.request.view.search</field>
            <field name="model">records.request</field>
            <field name="arch" type="xml">
                <search string="Search Records Requests">
                    <field name="name" />
                    <field name="request_type_id" />
                    <field name="partner_id" />
                    <field name="state" />
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" />
                    <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]" />
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_state" context="{'group_by': 'state'}" />
                        <filter string="Customer" name="group_by_partner" context="{'group_by': 'partner_id'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="action_records_request" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model records.request has state field - consider using default search filters -->
            <field name="name">Records Requests</field>
            <field name="res_model">records.request</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-inbox"/> No records requests yet!
                </p>
                <p>
                    <b>‚ö†Ô∏è Prerequisites for records requests:</b>
                </p>
                <ul>
                    <li>‚úì <b>Request Types</b> configured - Go to: <i>Configuration &gt; Master Data &gt; Request Types</i></li>
                    <li>‚úì <b>Customer Setup</b> - Verify customer has valid contact information</li>
                    <li>‚úì <b>Documents/Containers</b> - Items must exist in the system to request</li>
                    <li>‚úì <b>Assigned Users</b> - Ensure team members are available to process requests</li>
                </ul>
                <p>
                    <b>üìã Common Request Types:</b>
                </p>
                <ul>
                    <li><b>Retrieval:</b> Customer needs temporary access to specific documents/containers</li>
                    <li><b>Permanent Withdrawal:</b> Customer requests permanent return of items</li>
                    <li><b>Destruction:</b> Customer authorizes destruction of retained items</li>
                    <li><b>Inventory Report:</b> Customer requests list of stored items</li>
                    <li><b>Service Request:</b> Additional services (scanning, indexing, etc.)</li>
                </ul>
                <p>
                    <b>üéØ To create a records request:</b>
                </p>
                <ol>
                    <li>Click the <b>New</b> button above</li>
                    <li>Select <b>Request Type</b> (determines workflow and fields)</li>
                    <li>Choose <b>Customer</b> and <b>Department</b></li>
                    <li>Enter <b>Request Date</b> (when customer submitted)</li>
                    <li>Set <b>Required Date</b> (customer's deadline/need-by date)</li>
                    <li>Add <b>Requested Items</b>:
                        <ul>
                            <li>Link specific <b>Documents</b> or <b>Containers</b></li>
                            <li>Or provide description if items not yet in system</li>
                        </ul>
                    </li>
                    <li>Assign <b>Responsible User</b> (who will fulfill the request)</li>
                    <li>Add <b>Notes</b> (special instructions, delivery details)</li>
                    <li>Click <b>Submit</b> to activate the request</li>
                    <li>Use <b>In Progress</b> when work begins</li>
                    <li>Click <b>Complete</b> when customer need is fulfilled</li>
                </ol>
                <p>
                    <b>üìä Request Lifecycle:</b>
                </p>
                <ul>
                    <li><b>Draft:</b> Request being prepared, not yet submitted</li>
                    <li><b>Submitted:</b> Request sent to processing queue</li>
                    <li><b>In Progress:</b> Team member actively working on request</li>
                    <li><b>Completed:</b> Request fulfilled, customer notified</li>
                    <li><b>Cancelled:</b> Request withdrawn or no longer needed</li>
                </ul>
                <p>
                    <b>üöÄ Key Features:</b><br/>
                    ‚Ä¢ Automated workflow routing by request type<br/>
                    ‚Ä¢ Priority levels (Low, Normal, High, Urgent)<br/>
                    ‚Ä¢ Email notifications to customer and team<br/>
                    ‚Ä¢ Service Level Agreement (SLA) tracking<br/>
                    ‚Ä¢ Multi-item request support<br/>
                    ‚Ä¢ Customer portal integration<br/>
                    ‚Ä¢ Complete audit trail and history<br/>
                    ‚Ä¢ Integration with FSM for field service tasks
                </p>
                <p>
                    <b>üí° Pro Tip:</b> Use filters to view <i>My Requests</i> or <i>Urgent</i> items. Group by <i>Request Type</i> to organize your workload efficiently.
                </p>
            </field>
        </record>
    
        <menuitem id="menu_records_request" name="Requests" parent="records_management.menu_records_operations" action="action_records_request" sequence="30" />
    
    
    </data>
</odoo>
