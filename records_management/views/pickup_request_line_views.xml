<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="pickup_request_line_view_tree" model="ir.ui.view">
        <field name="name">pickup.request.line.view.tree</field>
        <field name="model">pickup.request.line</field>
    <field name="arch" type="xml">
            <list string="Pickup Request Line">
                <field name="request_id" />
                <field name="container_id" />
                <field name="item_description" />
                <field name="quantity" />
                <field name="sequence" />
                <field name="notes" />
                <field name="company_id" />
                <field name="active" />
            </list>
        </field>
    </record>

    
    <record id="pickup_request_line_view_form" model="ir.ui.view">
        <field name="name">pickup.request.line.view.form</field>
        <field name="model">pickup.request.line</field>
    <field name="arch" type="xml">
            <form string="Pickup Request Line">
                <sheet>
                    <group>
                        <field name="request_id" />
                        <field name="container_id" />
                        <field name="item_description" />
                        <field name="quantity" />
                        <field name="sequence" />
                        <field name="notes" />
                        <field name="company_id" />
                        <field name="active" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    
    <record id="pickup_request_line_view_search" model="ir.ui.view">
        <field name="name">pickup.request.line.view.search</field>
        <field name="model">pickup.request.line</field>
    <field name="arch" type="xml">
            <search string="Search Pickup Request Line">
                <field name="item_description" />
                <field name="container_id" />
                <field name="request_id" />
            </search>
        </field>
    </record>

    
    <record id="action_pickup_request_line" model="ir.actions.act_window">
        <field name="name">Pickup Request Line</field>
        <field name="res_model">pickup.request.line</field>
        <field name="view_mode">list,form</field>
    </record>
    </data>
</odoo>
