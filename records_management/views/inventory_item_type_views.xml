<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="inventory_item_type_view_tree" model="ir.ui.view">
            <field name="name">inventory.item.type.view.tree</field>
            <field name="model">inventory.item.type</field>
        <field name="arch" type="xml">
                <list string="Inventory Item Type">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category"/>
                    <field name="description"/>
                    <field name="active"/>
                    <field name="company_id"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="inventory_item_type_view_form" model="ir.ui.view">
            <field name="name">inventory.item.type.view.form</field>
            <field name="model">inventory.item.type</field>
        <field name="arch" type="xml">
                <form string="Inventory Item Type">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category"/>
                            <field name="description"/>
                            <field name="active"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="inventory_item_type_view_search" model="ir.ui.view">
            <field name="name">inventory.item.type.view.search</field>
            <field name="model">inventory.item.type</field>
        <field name="arch" type="xml">
                <search string="Search Inventory Item Type">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_inventory_item_type" model="ir.actions.act_window">
            <field name="name">Inventory Item Type</field>
            <field name="res_model">inventory.item.type</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu -->
        <!--
        <menuitem
            id="menu_inventory_item_type"
            name="Inventory Item Type"
            action="action_inventory_item_type"
            parent="REPLACE_WITH_PARENT_MENU_ID"
            sequence="10"/>
        -->

    </data>
</odoo>
