<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree view for advanced.billing.line (simple version) -->
        <record id="advanced_billing_line_view_tree" model="ir.ui.view">
            <field name="name">advanced.billing.line.view.tree</field>
            <field name="model">advanced.billing.line</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="billing_id"/>
                    <field name="sequence"/>
                </list>
            </field>
        </record>

        <!-- Tree view for advanced.billing.line (detailed version) -->
        <record id="advanced_billing_line_view_list" model="ir.ui.view">
            <field name="name">advanced.billing.line.view.list</field>
            <field name="model">advanced.billing.line</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="unit_price"/>
                    <field name="amount"/>
                    <field name="discount"/>
                    <field name="discount_amount"/>
                    <field name="subtotal"/>
                    <field name="currency_id"/>
                    <field name="billing_id"/>
                    <field name="billing_profile_id"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>
    </data>
</odoo>
