<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ============================================================================
             BASE RATES (base.rates) - Individual Rate Line Items
             Each record is ONE rate entry (used for specific rate lookups by type)
             ============================================================================ -->
        
        <!-- List View -->
        <record id="base_rates_view_tree" model="ir.ui.view">
            <field name="name">base.rates.view.tree</field>
            <field name="model">base.rates</field>
            <field name="arch" type="xml">
                <list string="Rate Items" editable="bottom">
                    <field name="name"/>
                    <field name="rate_type"/>
                    <field name="base_rate"/>
                    <field name="currency_id"/>
                    <field name="unit_type"/>
                    <field name="effective_date"/>
                    <field name="expiry_date"/>
                    <field name="minimum_charge"/>
                    <field name="active"/>
                    <field name="company_id" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="base_rates_view_form" model="ir.ui.view">
            <field name="name">base.rates.view.form</field>
            <field name="model">base.rates</field>
            <field name="arch" type="xml">
                <form string="Rate Item">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="e.g., Storage Rate - Standard Box"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Rate Configuration">
                                <field name="rate_type"/>
                                <field name="base_rate"/>
                                <field name="currency_id"/>
                                <field name="unit_type"/>
                            </group>
                            <group string="Validity &amp; Limits">
                                <field name="effective_date"/>
                                <field name="expiry_date"/>
                                <field name="minimum_charge"/>
                                <field name="maximum_charge"/>
                            </group>
                        </group>
                        <group>
                            <group string="Company">
                                <field name="company_id"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1" 
                                   placeholder="Additional details about this rate..."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="base_rates_view_search" model="ir.ui.view">
            <field name="name">base.rates.view.search</field>
            <field name="model">base.rates</field>
            <field name="arch" type="xml">
                <search string="Search Rate Items">
                    <field name="name"/>
                    <field name="rate_type"/>
                    <field name="company_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Current" name="current" 
                            domain="['|', ('expiry_date', '=', False), ('expiry_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter string="Storage" name="storage" domain="[('rate_type', '=', 'storage')]"/>
                    <filter string="Retrieval" name="retrieval" domain="[('rate_type', '=', 'retrieval')]"/>
                    <filter string="Destruction" name="destruction" domain="[('rate_type', '=', 'destruction')]"/>
                    <filter string="Transportation" name="transportation" domain="[('rate_type', '=', 'transportation')]"/>
                    <filter string="Scanning" name="scanning" domain="[('rate_type', '=', 'scanning')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Rate Type" name="group_rate_type" context="{'group_by': 'rate_type'}"/>
                        <filter string="Unit Type" name="group_unit_type" context="{'group_by': 'unit_type'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action for Rate Items -->
        <record id="action_base_rates_items" model="ir.actions.act_window">
            <field name="name">Rate Items</field>
            <field name="res_model">base.rates</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1, 'search_default_current': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create individual rate items!
                </p>
                <p>
                    Rate items are used for specific rate lookups by service type. 
                    Each record represents one rate (e.g., "Storage Rate per Box").
                </p>
            </field>
        </record>

    </data>
</odoo>
