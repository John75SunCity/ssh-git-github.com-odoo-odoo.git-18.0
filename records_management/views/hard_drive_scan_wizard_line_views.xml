<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="hard_drive_scan_wizard_line_view_tree" model="ir.ui.view">
            <field name="name">hard.drive.scan.wizard.line.view.tree</field>
            <field name="model">hard.drive.scan.wizard.line</field>
            <field name="arch" type="xml">
                <tree string="Hard Drive Scan Wizard Line">
                    <field name="wizard_id"/>
                    <field name="serial_number"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="hard_drive_scan_wizard_line_view_form" model="ir.ui.view">
            <field name="name">hard.drive.scan.wizard.line.view.form</field>
            <field name="model">hard.drive.scan.wizard.line</field>
            <field name="arch" type="xml">
                <form string="Hard Drive Scan Wizard Line">
                    <sheet>
                        <group>
                            <field name="wizard_id"/>
                            <field name="serial_number"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="hard_drive_scan_wizard_line_view_search" model="ir.ui.view">
            <field name="name">hard.drive.scan.wizard.line.view.search</field>
            <field name="model">hard.drive.scan.wizard.line</field>
            <field name="arch" type="xml">
                <search string="Search Hard Drive Scan Wizard Line">
                    <field name="serial_number"/>
                    <field name="wizard_id"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_hard_drive_scan_wizard_line" model="ir.actions.act_window">
            <field name="name">Hard Drive Scan Wizard Line</field>
            <field name="res_model">hard.drive.scan.wizard.line</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <!--
        <menuitem
            id="menu_hard_drive_scan_wizard_line"
            name="Hard Drive Scan Wizard Line"
            action="action_hard_drive_scan_wizard_line"
            parent="REPLACE_WITH_PARENT_MENU_ID"
            sequence="10"/>
        -->

    </data>
</odoo>
