<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <data>
<!-- Revenue Forecast Line Tree View -->
    <record id="view_revenue_forecast_line_tree" model="ir.ui.view">
        <field name="name">revenue.forecast.line.tree</field>
        <field name="model">revenue.forecast.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Revenue Forecast Lines" 
                  decoration-success="status=='achieved'" 
                  decoration-warning="status=='in_progress'"
                  decoration-danger="status=='missed'">
                <field name="customer_id"/>
                <field name="service_type"/>
                <field name="period_type"/>
                <field name="forecasted_amount" sum="Total Forecasted"/>
                <field name="actual_amount" sum="Total Actual"/>
                <field name="variance_amount" sum="Total Variance"/>
                <field name="variance_percentage" widget="percentage"/>
                <field name="confidence_level"/>
                <field name="status"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Revenue Forecast Line Form View -->
    <record id="view_revenue_forecast_line_form" model="ir.ui.view">
        <field name="name">revenue.forecast.line.form</field>
        <field name="model">revenue.forecast.line</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Revenue Forecast Line">
                <header>
                    <button name="action_confirm_forecast" type="object" 
                            string="Confirm" class="oe_highlight"
                            attrs="{'invisible': [('status', '!=', 'draft')]}"/>
                    <button name="action_start_tracking" type="object" 
                            string="Start Tracking"
                            attrs="{'invisible': [('status', '!=', 'confirmed')]}"/>
                    <button name="action_mark_achieved" type="object" 
                            string="Mark Achieved" class="oe_highlight"
                            attrs="{'invisible': [('status', '!=', 'in_progress')]}"/>
                    <button name="action_mark_missed" type="object" 
                            string="Mark Missed"
                            attrs="{'invisible': [('status', '!=', 'in_progress')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,achieved"/>
                </header>
                <sheet>
                    <group>
                        <group name="main_info">
                            <field name="forecast_id"/>
                            <field name="customer_id"/>
                            <field name="service_type"/>
                            <field name="period_type"/>
                        </group>
                        <group name="financial">
                            <field name="currency_id" invisible="1"/>
                            <field name="forecasted_amount"/>
                            <field name="actual_amount"/>
                            <field name="variance_amount"/>
                            <field name="variance_percentage" widget="percentage"/>
                        </group>
                    </group>
                    <group>
                        <group name="volume_metrics">
                            <field name="forecasted_volume"/>
                            <field name="actual_volume"/>
                            <field name="forecasted_containers"/>
                            <field name="actual_containers"/>
                        </group>
                        <group name="confidence">
                            <field name="confidence_level"/>
                            <field name="probability_percentage" widget="percentage"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Revenue Forecast Line Search View -->
    <record id="view_revenue_forecast_line_search" model="ir.ui.view">
        <field name="name">revenue.forecast.line.search</field>
        <field name="model">revenue.forecast.line</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Forecast Lines">
                <field name="customer_id"/>
                <field name="service_type"/>
                <field name="status"/>
                <field name="forecast_id"/>
                
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('status', '=', 'confirmed')]"/>
                <filter string="In Progress" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                <filter string="Achieved" name="achieved" domain="[('status', '=', 'achieved')]"/>
                <filter string="Missed" name="missed" domain="[('status', '=', 'missed')]"/>
                
                <separator/>
                <filter string="High Confidence" name="high_confidence" 
                        domain="[('confidence_level', 'in', ['high', 'very_high'])]"/>
                <filter string="Storage Services" name="storage" 
                        domain="[('service_type', '=', 'storage')]"/>
                <filter string="Destruction Services" name="destruction" 
                        domain="[('service_type', '=', 'destruction')]"/>
                
                <group expand="1" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Service Type" name="group_service" context="{'group_by': 'service_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Confidence" name="group_confidence" context="{'group_by': 'confidence_level'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_revenue_forecast_line" model="ir.actions.act_window">
        <field name="name">Revenue Forecast Lines</field>
        <field name="res_model">revenue.forecast.line</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first revenue forecast line!
            </p>
            <p>
                Track detailed revenue forecasts by customer and service type to improve planning accuracy.
            </p>
        </field>
    </record>

<!-- Sub-Model Menu Items and Actions -->

    <!-- Revenue Forecasting Menu -->
    <menuitem id="menu_revenue_forecasting" 
              name="Revenue Forecasting" 
              parent="records_management.menu_records_billing"
              sequence="30"/>
    
    <menuitem id="menu_revenue_forecast_lines"
              name="Forecast Lines"
              parent="menu_revenue_forecasting"
              action="action_revenue_forecast_line"
              sequence="10"/>

    <!-- Billing Configuration Menu -->
    <menuitem id="menu_billing_configuration" 
              name="Billing Configuration" 
              parent="records_management.menu_records_billing"
              sequence="40"/>
              
    <menuitem id="menu_billing_config_lines"
              name="Configuration Lines"
              parent="menu_billing_configuration"
              action="action_records_billing_config_line"
              sequence="10"/>
              
    <menuitem id="menu_billing_config_audit"
              name="Configuration Audit"
              parent="menu_billing_configuration"
              action="action_records_billing_config_audit"
              sequence="20"/>

    <!-- FSM Service Management Menu -->
    <menuitem id="menu_fsm_service_management" 
              name="FSM Services" 
              parent="records_management.menu_fsm"
              sequence="50"/>
              
    <menuitem id="menu_fsm_service_lines"
              name="Service Lines"
              parent="menu_fsm_service_management"
              action="action_fsm_task_service_line"
              sequence="10"/>

    <!-- Performance Analytics Menu -->
    <menuitem id="menu_performance_analytics" 
              name="Performance Analytics" 
              parent="records_management.menu_reports"
              sequence="60"/>
              
    <menuitem id="menu_document_retrieval_metrics"
              name="Retrieval Metrics"
              parent="menu_performance_analytics"
              action="action_document_retrieval_metrics"
              sequence="10"/>

    <!-- Payment Management Menu -->
    <menuitem id="menu_payment_management" 
              name="Payment Management" 
              parent="records_management.menu_records_billing"
              sequence="50"/>
              
    <menuitem id="menu_payment_split_lines"
              name="Payment Splits"
              parent="menu_payment_management"
              action="action_payment_split_line"
              sequence="10"/>

    <!-- Shredding Documentation Menu -->
    <menuitem id="menu_shredding_documentation" 
              name="Shredding Documentation" 
              parent="records_management.menu_shredding"
              sequence="70"/>
              
    <menuitem id="menu_shredding_service_photos"
              name="Service Photos"
              parent="menu_shredding_documentation"
              action="action_shredding_service_photo"
              sequence="10"/>

    <!-- Additional Window Actions for Integration -->
    
    <!-- Revenue Forecast Line Action (if not already defined) -->
    <record id="action_revenue_forecast_line" model="ir.actions.act_window">
        <field name="name">Revenue Forecast Lines</field>
        <field name="res_model">revenue.forecast.line</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No forecast lines found!
            </p>
            <p>
                Revenue forecast lines track individual customer and service forecasts with variance analysis.
            </p>
        </field>
    </record>

    <!-- Server Actions for Batch Operations -->
    
    <!-- Batch Approve Billing Config Audits -->
    <record id="action_batch_approve_billing_audit" model="ir.actions.server">
        <field name="name">Batch Approve Audits</field>
        <field name="model_id" ref="records_management.model_records_billing_config_audit"/>
        <field name="binding_model_id" ref="records_management.model_records_billing_config_audit"/>
        <field name="state">code</field>
        <field name="code">
            for record in records:
                if record.approval_status == 'pending':
                    record.action_approve()
        </field>
        <field name="groups_id" eval="[(4, ref('records_management.group_records_manager'))]"/>
    </record>

    <!-- Generate Performance Report -->
    <record id="action_generate_performance_report" model="ir.actions.server">
        <field name="name">Generate Performance Report</field>
        <field name="model_id" ref="records_management.model_document_retrieval_metrics"/>
        <field name="binding_model_id" ref="records_management.model_document_retrieval_metrics"/>
        <field name="state">code</field>
        <field name="code">
            # Generate performance summary report
            action = {
                'type': 'ir.actions.act_window',
                'name': 'Performance Summary',
                'res_model': 'document.retrieval.metrics',
                'view_mode': 'graph,pivot',
                'domain': [('id', 'in', records.ids)],
                'context': {'group_by': ['performance_rating', 'metric_type']},
            }
        </field>
    </record>
</data>

</odoo>
