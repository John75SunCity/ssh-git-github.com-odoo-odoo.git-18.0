<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Minimal action - let Odoo auto-generate views for records.box -->
    <record id="action_records_box" model="ir.actions.act_window">
        <field name="name">Storage Boxes</field>
        <field name="res_model">records.box</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first storage box
            </p>
            <p>
                Track physical boxes and their contents efficiently.
            </p>
        </field>
    </record>
</odoo>xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_records_box_form" model="ir.ui.view">
        <field name="name">records.box.form</field>
        <field name="model">records.box</field>
        <field name="arch" type="xml">
            <form string="Box">
                <header>
                    <button name="action_set_active" string="Set Active" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_archive_box" string="Archive" type="object" 
                            invisible="state != 'active'"/>
                    <button name="action_destroy_box" string="Mark Destroyed" type="object" 
                            invisible="state != 'archived'" confirm="Are you sure you want to mark this box as destroyed?"/>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_documents" type="object" class="oe_stat_button" icon="fa-files-o">
                            <field name="document_count" string="Documents" widget="statinfo"/>
                        </button>
                        <button name="action_increment_access" type="object" class="oe_stat_button" icon="fa-eye">
                            <field name="access_count" string="Access Count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Box Reference"/>
                        </h1>
                        <h2>
                            <field name="description" placeholder="Box Description"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="alternate_code"/>
                            <field name="container_type"/>
                            <field name="barcode" readonly="state != 'draft'"/>
                            <field name="barcode_type"/>
                            <field name="barcode_length"/>
                            <field name="product_id"/>
                            <field name="capacity"/>
                            <field name="used_capacity" widget="progressbar"/>
                        </group>
                        <group string="Location &amp; Assignment">
                            <field name="location_id"/>
                            <field name="location_code"/>
                            <field name="customer_id"/>
                            <field name="department_id"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Status &amp; Tracking">
                            <field name="item_status"/>
                            <field name="status_date"/>
                            <field name="add_date"/>
                            <field name="destroy_date"/>
                            <field name="perm_flag"/>
                        </group>
                        <group string="Classification">
                            <field name="security_code"/>
                            <field name="category_code"/>
                            <field name="record_series"/>
                            <field name="object_code"/>
                        </group>
                    </group>
                    <group>
                        <group string="Account Hierarchy">
                            <field name="account_level1"/>
                            <field name="account_level2"/>
                            <field name="account_level3"/>
                        </group>
                        <group string="Sequence &amp; Date Ranges">
                            <field name="sequence_from"/>
                            <field name="sequence_to"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <group>
                        <group string="Custom Metadata">
                            <field name="custom_metadata_1"/>
                            <field name="custom_metadata_2"/>
                            <field name="custom_metadata_3"/>
                            <field name="custom_metadata_4"/>
                            <field name="custom_date"/>
                        </group>
                        <group string="Billing Options">
                            <field name="charge_for_storage"/>
                            <field name="charge_for_add"/>
                            <field name="color" invisible="1"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Documents">
                            <field name="document_ids" nolabel="1" context="{'default_box_id': id}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="document_type_id"/>
                                    <field name="date"/>
                                    <field name="retention_date"/>
                                    <field name="partner_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Add internal notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="view_records_box_tree" model="ir.ui.view">
        <field name="name">records.box.tree</field>
        <field name="model">records.box</field>
        
        
        <field name="arch" type="xml">
            <tree decoration-info="state=='draft'" decoration-muted="state=='archived'" decoration-danger="state=='destroyed'">
                <field name="name"/>
                <field name="alternate_code"/>
                <field name="description"/>
                <field name="container_type"/>
                <field name="customer_id"/>
                <field name="department_id"/>
                <field name="location_id"/>
                <field name="item_status"/>
                <field name="document_count"/>
                <field name="access_count"/>
                <field name="used_capacity" widget="percentage"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="barcode" optional="hide"/>
                <field name="security_code" optional="hide"/>
                <field name="category_code" optional="hide"/>
                <field name="record_series" optional="hide"/>
                <field name="object_code" optional="hide"/>
                <field name="account_level1" optional="hide"/>
                <field name="account_level2" optional="hide"/>
                <field name="account_level3" optional="hide"/>
            </tree>
        </field>
    </record>
    
    <record id="view_records_box_search" model="ir.ui.view">
        <field name="name">records.box.search</field>
        <field name="model">records.box</field>
        <field name="arch" type="xml">
            <search string="Search Boxes">
                <field name="name"/>
                <field name="alternate_code"/>
                <field name="description"/>
                <field name="customer_id"/>
                <field name="department_id"/>
                <field name="location_id"/>
                <field name="barcode"/>
                <field name="user_id"/>
                <field name="security_code"/>
                <field name="category_code"/>
                <field name="record_series"/>
                <field name="object_code"/>
                <field name="account_level1"/>
                <field name="account_level2"/>
                <field name="account_level3"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Active" name="active" domain="[('state','=','active')]"/>
                <filter string="Archived" name="archived" domain="[('state','=','archived')]"/>
                <filter string="Destroyed" name="destroyed" domain="[('state','=','destroyed')]"/>
                <separator/>
                <filter string="Active Items" name="active_items" domain="[('item_status','=','active')]"/>
                <filter string="Pending Items" name="pending_items" domain="[('item_status','=','pending')]"/>
                <filter string="Permanent Out" name="permanent_out" domain="[('item_status','=','permanent_out')]"/>
                <separator/>
                <filter string="Standard Boxes" name="standard_boxes" domain="[('container_type','=','standard')]"/>
                <filter string="Map Boxes" name="map_boxes" domain="[('container_type','=','map_box')]"/>
                <filter string="Specialty Boxes" name="specialty_boxes" domain="[('container_type','=','specialty')]"/>
                <filter string="Pallets" name="pallets" domain="[('container_type','=','pallet')]"/>
                <separator/>
                <filter string="Charge for Storage" name="charge_storage" domain="[('charge_for_storage','=',True)]"/>
                <filter string="Permanent Flag" name="permanent_flag" domain="[('perm_flag','=',True)]"/>
                <separator/>
                <filter string="My Boxes" name="my_boxes" domain="[('user_id','=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Location" name="group_by_location" context="{'group_by': 'location_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Item Status" name="group_by_item_status" context="{'group_by': 'item_status'}"/>
                    <filter string="Container Type" name="group_by_container_type" context="{'group_by': 'container_type'}"/>
                    <filter string="Customer" name="group_by_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Department" name="group_by_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Responsible" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Security Code" name="group_by_security" context="{'group_by': 'security_code'}"/>
                    <filter string="Category Code" name="group_by_category" context="{'group_by': 'category_code'}"/>
                    <filter string="Account Level 1" name="group_by_account1" context="{'group_by': 'account_level1'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="view_records_box_kanban" model="ir.ui.view">
        <field name="name">records.box.kanban</field>
        <field name="model">records.box</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="state"/>
                <field name="color"/>
                <field name="name"/>
                <field name="document_count"/>
                <field name="used_capacity"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card 
                                           #{record.color.raw_value ? 'oe_kanban_color_' + record.color.raw_value : ''}">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="location_id"/>
                                </div>
                                <div class="oe_kanban_bottom_left">
                                    <span class="oe_kanban_count">
                                        <span class="badge badge-pill">
                                            <t t-esc="record.document_count.value"/> Documents
                                        </span>
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="used_capacity" widget="progressbar"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record id="action_records_box" model="ir.actions.act_window">
        <field name="name">Boxes</field>
        <field name="res_model">records.box</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new storage box
            </p>
            <p>
                Create and manage document storage boxes.
            </p>
        </field>
    </record>
</odoo>
