<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- üì¶ ENTERPRISE STORAGE BOXES - Advanced Warehouse Management -->
    
    <!-- üé® Kanban Board for Visual Box Management -->
    <record id="view_records_box_kanban" model="ir.ui.view">
        <field name="name">records.box.kanban</field>
        <field name="model">records.box</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_box_dashboard">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="location_id"/>
                <field name="state"/>
                <field name="storage_date"/>
                <field name="destruction_date"/>
                <field name="barcode"/>
                <field name="box_type_code"/>
                <field name="box_type_display"/>
                <field name="monthly_rate"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>üì¶ <field name="name"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        üë§ <field name="customer_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" title="More options"/></a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-8">
                                        <div><i class="fa fa-cube"/> <field name="box_type_display"/> (<field name="box_type_code"/>)</div>
                                        <div><i class="fa fa-dollar"/> $<field name="monthly_rate"/>/month</div>
                                        <div><i class="fa fa-map-marker"/> <field name="location_id"/></div>
                                        <div><i class="fa fa-calendar"/> <field name="storage_date"/></div>
                                        <div t-if="record.barcode.raw_value">
                                            <i class="fa fa-barcode"/> <field name="barcode"/>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <span class="badge" t-att-class="record.state.raw_value === 'stored' ? 'badge-success' : record.state.raw_value === 'in_transit' ? 'badge-warning' : record.state.raw_value === 'destroyed' ? 'badge-danger' : 'badge-secondary'">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-sm" type="object" name="action_view_documents">
                                            üìÑ Documents
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-info btn-sm" type="object" name="action_generate_barcode">
                                            üè∑Ô∏è Barcode
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Box</a>
                                <a role="menuitem" type="object" name="action_view_documents" class="dropdown-item">üìÑ View Documents</a>
                                <a role="menuitem" type="object" name="action_move_box" class="dropdown-item">üìç Move Box</a>
                                <a role="menuitem" type="object" name="action_generate_barcode" class="dropdown-item">üè∑Ô∏è Print Barcode</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="object" name="action_schedule_destruction" class="dropdown-item">üóëÔ∏è Schedule Destruction</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- üìã Enhanced List View with Smart Columns and Bulk Actions -->
    <record id="view_records_box_tree" model="ir.ui.view">
        <field name="name">records.box.list</field>
        <field name="model">records.box</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'stored'" 
                  decoration-warning="state == 'in_transit'" 
                  decoration-danger="state == 'destroyed'"
                  decoration-muted="state == 'pending'"
                  multi_edit="1">
                <header>
                    <button name="action_bulk_convert_box_type" type="object" 
                            string="üîÑ Bulk Convert Types" 
                            class="btn-primary"/>
                </header>
                <field name="name" string="üì¶ Box ID"/>
                <field name="box_type_code" string="üìä Type"/>
                <field name="box_type_display" string="üì¶ Box Type"/>
                <field name="monthly_rate" string="üí∞ Rate/Mo" widget="monetary"/>
                <field name="customer_id" string="üë§ Customer"/>
                <field name="department_id" string="üè¢ Department"/>
                <field name="location_id" string="üìç Location"/>
                <field name="state" string="üéØ Status" widget="badge"/>
                <field name="storage_date" string="üìÖ Stored"/>
                <field name="destruction_date" string="üí• Destruction" optional="hide"/>
                <field name="barcode" string="üè∑Ô∏è Barcode"/>
                <field name="document_count" string="üìÑ Docs" sum="Total Documents"/>
                <button name="action_view_documents" type="object" string="View Docs" 
                        icon="fa-file-text-o" class="btn-link"/>
                <button name="action_generate_barcode" type="object" string="Print Barcode" 
                        icon="fa-barcode" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- üìù Enhanced Form View with Advanced Features -->
    <record id="view_records_box_form" model="ir.ui.view">
        <field name="name">records.box.form</field>
        <field name="model">records.box</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_store_box" type="object" string="üì¶ Store Box" 
                            class="btn-primary" attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                    <button name="action_move_box" type="object" string="üìç Move Box" 
                            class="btn-secondary" attrs="{'invisible': [('state', '!=', 'stored')]}"/>
                    <button name="action_schedule_destruction" type="object" string="üóëÔ∏è Schedule Destruction" 
                            class="btn-warning" attrs="{'invisible': [('state', '=', 'destroyed')]}"/>
                    <button name="action_generate_barcode" type="object" string="üè∑Ô∏è Print Barcode" class="btn-info"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,stored,in_transit,destroyed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_documents" icon="fa-file-text-o">
                            <field string="Documents" name="document_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_movements" icon="fa-truck">
                            <field string="Movements" name="movement_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_requests" icon="fa-tasks">
                            <field string="Requests" name="service_request_count" widget="statinfo"/>
                        </button>
                    </div>
                    
                    <group>
                        <group string="üì¶ Box Information">
                            <field name="name" placeholder="e.g., BOX-2024-001"/>
                            <field name="box_type_code" required="1"/>
                            <field name="box_type_display" readonly="1"/>
                            <field name="monthly_rate" readonly="1" widget="monetary"/>
                            <field name="customer_id"/>
                            <field name="department_id"/>
                            <field name="barcode" placeholder="Auto-generated on save"/>
                        </group>
                        <group string="üìç Location &amp; Status">
                            <field name="location_id"/>
                            <field name="state"/>
                            <field name="storage_date"/>
                            <field name="destruction_date" attrs="{'invisible': [('destruction_date', '=', False)]}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="üìÑ Documents" name="documents">
                            <field name="document_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="document_type_id"/>
                                    <field name="state"/>
                                    <field name="created_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="üöö Movement History" name="movements">
                            <field name="movement_ids" mode="list">
                                <list>
                                    <field name="movement_date"/>
                                    <field name="from_location_id"/>
                                    <field name="to_location_id"/>
                                    <field name="movement_type"/>
                                    <field name="responsible_user_id"/>
                                </list>
                            </field>
                        </page>
                        <page string="üéØ Service Requests" name="requests">
                            <field name="service_request_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="service_type"/>
                                    <field name="priority"/>
                                    <field name="state"/>
                                    <field name="requested_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìù Notes &amp; Details" name="details">
                            <group>
                                <field name="description" placeholder="Box contents, special instructions, or notes..."/>
                                <field name="retention_policy_id"/>
                                <field name="size_category"/>
                                <field name="weight"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- üìÖ Calendar View for Box Management -->
    <record id="view_records_box_calendar" model="ir.ui.view">
        <field name="name">records.box.calendar</field>
        <field name="model">records.box</field>
        <field name="arch" type="xml">
            <calendar string="üìÖ Box Storage Calendar" 
                      date_start="storage_date" 
                      date_stop="destruction_date"
                      color="customer_id">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- üìà Graph View for Analytics -->
    <record id="view_records_box_graph" model="ir.ui.view">
        <field name="name">records.box.graph</field>
        <field name="model">records.box</field>
        <field name="arch" type="xml">
            <graph string="üìä Box Analytics">
                <field name="customer_id" type="row"/>
                <field name="state" type="col"/>
            </graph>
        </field>
    </record>

    <!-- üîç Enhanced Search with Smart Filters -->
    <record id="view_records_box_search" model="ir.ui.view">
        <field name="name">records.box.search</field>
        <field name="model">records.box</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Box" 
                       filter_domain="['|', ('name', 'ilike', self), ('barcode', 'ilike', self)]"/>
                <field name="customer_id"/>
                <field name="department_id"/>
                <field name="location_id"/>
                
                <filter string="üì¶ Stored Boxes" name="stored" domain="[('state', '=', 'stored')]"/>
                <filter string="üöö In Transit" name="in_transit" domain="[('state', '=', 'in_transit')]"/>
                <filter string="‚è≥ Pending Storage" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="üí• Destroyed" name="destroyed" domain="[('state', '=', 'destroyed')]"/>
                
                <separator/>
                <filter string="üìÖ Stored This Month" name="this_month" 
                        domain="[('storage_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter string="üóìÔ∏è Stored This Year" name="this_year" 
                        domain="[('storage_date', '&gt;=', context_today().strftime('%Y-01-01'))]"/>
                <filter string="‚ö†Ô∏è Near Destruction" name="near_destruction" 
                        domain="[('destruction_date', '&lt;=', (context_today() + relativedelta(months=6)).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="üìä Group By">
                    <filter string="Customer" name="group_by_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Department" name="group_by_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Location" name="group_by_location" context="{'group_by': 'location_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Storage Date" name="group_by_storage_date" context="{'group_by': 'storage_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- üöÄ ENTERPRISE ACTION - Complete Box Management -->
    <record id="action_records_box" model="ir.actions.act_window">
        <field name="name">üì¶ Storage Boxes</field>
        <field name="res_model">records.box</field>
        <field name="view_mode">kanban,list,form,calendar,graph</field>
        <field name="search_view_id" ref="view_records_box_search"/>
        <field name="context">{
            'search_default_stored': 1,
            'search_default_this_year': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üì¶ Create your first storage box!
            </p>
            <p>
                <b>Enterprise Box Management:</b><br/>
                ‚Ä¢ üì¶ Visual kanban boards for box tracking<br/>
                ‚Ä¢ üè∑Ô∏è Automated barcode generation and printing<br/>
                ‚Ä¢ üìç Real-time location tracking with movement history<br/>
                ‚Ä¢ üìÑ Document association and content management<br/>
                ‚Ä¢ üéØ Service request integration and workflows<br/>
                ‚Ä¢ üìä Advanced analytics and reporting<br/>
                ‚Ä¢ üì± Mobile-optimized for warehouse operations
            </p>
        </field>
    </record>
</odoo>
