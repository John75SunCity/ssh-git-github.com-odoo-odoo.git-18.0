<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Tree view for Bin Key Management -->
    <record id="bin_key_management_view_tree" model="ir.ui.view">
        <field name="name">bin.key.management.view.tree</field>
        <field name="model">bin.key.management</field>
        <field name="arch" type="xml">
<tree string="Bin Key Management" decoration-success="status == 'issued'" decoration-warning="status == 'lost'" decoration-danger="status == 'replaced'" decoration-info="status == 'returned'">
                <field name="key_number"/>
                <field name="partner_id"/>
                <field name="partner_company"/>
<field name="status" widget="badge"/>

                <field name="issue_date"/>
<field name="return_date" optional="show"/>
<field name="expected_return_date" optional="hide"/>

                <field name="issue_location"/>
                <field name="emergency_contact" widget="boolean_toggle"/>
<field name="unlock_service_count" optional="hide"/>
<field name="company_id" optional="hide" groups="base.group_multi_company"/>
<field name="active" optional="hide"/>

            </tree>
        </field>
    </record>

<!-- Search view for Bin Key Management -->
<record id="bin_key_management_view_search" model="ir.ui.view">
    <field name="name">bin.key.management.view.search</field>
    <field name="model">bin.key.management</field>
    <field name="arch" type="xml">
        <search string="Search Bin Key Management">
            <field name="key_number" string="Key Number"/>
            <field name="partner_id" string="Partner"/>
            <field name="partner_company" string="Company"/>
            <field name="issue_location" string="Issue Location"/>
            <field name="bin_locations" string="Bin Locations"/>

            <filter string="Active Keys" name="active" domain="[('active', '=', True)]"/>
            <filter string="Issued Keys" name="issued" domain="[('status', '=', 'issued')]"/>
            <filter string="Returned Keys" name="returned" domain="[('status', '=', 'returned')]"/>
            <filter string="Lost Keys" name="lost" domain="[('status', '=', 'lost')]"/>
            <filter string="Replaced Keys" name="replaced" domain="[('status', '=', 'replaced')]"/>

            <separator/>
            <filter string="Emergency Contacts" name="emergency" domain="[('emergency_contact', '=', True)]"/>
            <filter string="Overdue Returns" name="overdue" domain="[('expected_return_date', '&lt;', context_today()), ('status', '=', 'issued')]"/>

            <separator/>
            <filter string="Issued This Week" name="this_week" domain="[('issue_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
            <filter string="Issued This Month" name="this_month" domain="[('issue_date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>

            <separator/>
            <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>

            <group expand="1" string="Group By">
                <filter string="Status" name="group_status" domain="[]" context="{'group_by': 'status'}"/>
                <filter string="Partner" name="group_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                <filter string="Issue Location" name="group_location" domain="[]" context="{'group_by': 'issue_location'}"/>
                <filter string="Issue Date" name="group_issue_date" domain="[]" context="{'group_by': 'issue_date:month'}"/>
                <filter string="Company" name="group_company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
            </group>
        </search>
    </field>
</record>

<!-- Form view for Bin Key Management -->
    <record id="bin_key_management_view_form" model="ir.ui.view">
        <field name="name">bin.key.management.view.form</field>
        <field name="model">bin.key.management</field>
        <field name="arch" type="xml">
            <form string="Bin Key Management">
                <header>
                    <button name="action_return_key" string="🔄 Return Key" type="object" class="btn-warning" attrs="{'invisible': [('status', '!=', 'issued')]}"/>
                    <button name="action_mark_lost" string="⚠️ Mark Lost" type="object" class="btn-danger" attrs="{'invisible': [('status', '!=', 'issued')]}"/>
                    <button name="action_replace_key" string="🔄 Replace Key" type="object" class="btn-info" attrs="{'invisible': [('status', '!=', 'lost')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="issued,returned,lost,replaced"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_unlock_services" type="object" class="oe_stat_button" icon="fa-unlock-alt">
                            <field name="unlock_service_count" widget="statbutton" string="Unlock Services"/>
                        </button>
                    </div>

                    <div class="oe_title">
<label for="key_number" class="oe_edit_only"/>

                        <h1>
                            <field name="key_number" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="partner_id" options="{'no_create_edit': True}"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Key Information">
                            <field name="partner_company" readonly="1"/>
                            <field name="issue_location"/>
<field name="bin_locations" widget="text"/>

                            <field name="emergency_contact"/>
<field name="active"/>

                        </group>
<group string="Dates &amp; Timeline">
                            <field name="issue_date" readonly="1"/>
                            <field name="return_date" readonly="1"/>
                            <field name="expected_return_date"/>
                        </group>
                    </group>

                    <group string="Replacement Chain" attrs="{'invisible': [('replacement_of_id', '=', False), ('replaced_by_id', '=', False)]}">
                        <field name="replacement_of_id" readonly="1"/>
                        <field name="replaced_by_id" readonly="1"/>
                    </group>

                    <notebook>
<page string="Notes &amp; Details">
    <group>
        <field name="notes" widget="text" placeholder="Additional notes about this key assignment..."/>
    </group>
                        </page>
                        <page string="Unlock Services" attrs="{'invisible': [('unlock_service_count', '=', 0)]}">
                            <field name="unlock_service_ids" readonly="1">
                                <tree>
                                    <field name="service_number"/>
                                    <field name="service_date"/>
                                    <field name="bin_location"/>
                                    <field name="unlock_reason"/>
<field name="charge_amount" sum="Total"/>
<field name="billable" widget="boolean_toggle"/>
<field name="completed" widget="boolean_toggle"/>

                                </tree>
                            </field>
                        </page>
<page string="System Information">
    <group>
        <group>
            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
            <field name="create_date" readonly="1"/>
            <field name="create_uid" readonly="1"/>
        </group>
        <group>
            <field name="write_date" readonly="1"/>
            <field name="write_uid" readonly="1"/>
        </group>
    </group>
</page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
<field name="message_follower_ids" widget="mail_followers"/>
<field name="activity_ids" widget="mail_activity"/>
<field name="message_ids" widget="mail_thread"/>

                </div>
            </form>
        </field>
    </record>

<!-- Kanban view for Bin Key Management -->
    <record id="bin_key_management_view_kanban" model="ir.ui.view">
        <field name="name">bin.key.management.view.kanban</field>
        <field name="model">bin.key.management</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column">
                <field name="partner_id"/>
                <field name="partner_company"/>
                <field name="key_number"/>
                <field name="issue_date"/>
<field name="return_date"/>

                <field name="emergency_contact"/>
                <field name="status"/>
<field name="unlock_service_count"/>
<field name="expected_return_date"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb8">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
🔑<field name="key_number"/>

                                    </strong>
                                    <br/>
                                    <span class="o_kanban_record_subtitle text-muted">
                                        <field name="partner_id"/>
                                    </span>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <t t-if="record.emergency_contact.raw_value">
                                        <span class="badge badge-danger">🚨 Emergency</span>
                                    </t>
<t t-if="record.unlock_service_count.raw_value > 0">
    <span class="badge badge-info">
        <t t-esc="record.unlock_service_count.raw_value"/>
 Services
    </span>
</t>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
<div>
    <field name="partner_company"/>
</div>
<div>
    <i class="fa fa-calendar"/>
 Issued: <field name="issue_date"/>
</div>
<t t-if="record.return_date.raw_value">
    <div>
        <i class="fa fa-check-circle text-success"/>
 Returned: <field name="return_date"/>
    </div>
</t>
<t t-if="!record.return_date.raw_value and record.expected_return_date.raw_value">
    <div>
        <i class="fa fa-clock-o"/>
 Due: <field name="expected_return_date"/>
    </div>
</t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

<!-- Search view for Bin Unlock Service -->
<record id="bin_unlock_service_view_search" model="ir.ui.view">
    <field name="name">bin.unlock.service.view.search</field>
    <field name="model">bin.unlock.service</field>
    <field name="arch" type="xml">
        <search string="Search Unlock Services">
            <field name="service_number" string="Service Number"/>
            <field name="partner_id" string="Customer"/>
            <field name="technician_id" string="Technician"/>
            <field name="bin_location" string="Bin Location"/>
            <field name="unlock_reason" string="Unlock Reason"/>

            <filter string="Billable" name="billable" domain="[('billable', '=', True)]"/>
            <filter string="Non-Billable" name="non_billable" domain="[('billable', '=', False)]"/>
            <filter string="Completed" name="completed" domain="[('completed', '=', True)]"/>
            <filter string="Pending" name="pending" domain="[('completed', '=', False)]"/>
            <filter string="Invoice Created" name="invoiced" domain="[('invoice_created', '=', True)]"/>
            <filter string="Not Invoiced" name="not_invoiced" domain="[('invoice_created', '=', False)]"/>

            <separator/>
            <filter string="Today" name="today" domain="[('service_date', '=', context_today())]"/>
            <filter string="This Week" name="this_week" domain="[('service_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
            <filter string="This Month" name="this_month" domain="[('service_date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>

            <group expand="1" string="Group By">
                <filter string="Customer" name="group_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                <filter string="Technician" name="group_technician" domain="[]" context="{'group_by': 'technician_id'}"/>
                <filter string="Unlock Reason" name="group_reason" domain="[]" context="{'group_by': 'unlock_reason'}"/>
                <filter string="Service Date" name="group_date" domain="[]" context="{'group_by': 'service_date:month'}"/>
                <filter string="Billable Status" name="group_billable" domain="[]" context="{'group_by': 'billable'}"/>
            </group>
        </search>
    </field>
</record>

<!-- Enhanced Tree view for Bin Unlock Service -->
    <record id="bin_unlock_service_view_tree" model="ir.ui.view">
        <field name="name">bin.unlock.service.view.tree</field>
        <field name="model">bin.unlock.service</field>
        <field name="arch" type="xml">
<tree string="Bin Unlock Services" decoration-success="billable == True and invoice_created == True" decoration-warning="billable == False" decoration-info="completed == True">
                <field name="service_number"/>
                <field name="partner_id"/>
                <field name="service_date"/>
                <field name="bin_location"/>
                <field name="unlock_reason"/>
<field name="charge_amount" sum="Total Revenue"/>

                <field name="billable" widget="boolean_toggle"/>
<field name="completed" widget="boolean_toggle"/>

                <field name="technician_id"/>
                <field name="invoice_created" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

<!-- Enhanced Form view for Bin Unlock Service -->
    <record id="bin_unlock_service_view_form" model="ir.ui.view">
        <field name="name">bin.unlock.service.view.form</field>
        <field name="model">bin.unlock.service</field>
        <field name="arch" type="xml">
            <form string="Bin Unlock Service">
                <header>
                    <button name="action_create_invoice" string="💰 Create Invoice" type="object" class="btn-primary" attrs="{'invisible': ['|', ('billable', '=', False), ('invoice_created', '=', True)]}"/>
                    <button name="action_mark_completed" string="✅ Mark Completed" type="object" class="btn-success" attrs="{'invisible': [('completed', '=', True)]}"/>
                </header>

                <sheet>
                    <div class="oe_title">
<label for="service_number" class="oe_edit_only"/>

                        <h1>
                            <field name="service_number" readonly="1"/>
                        </h1>
                        <h2>
                            Unlock Service for <field name="partner_id" options="{'no_create_edit': True}"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Service Details">
                            <field name="service_date"/>
                            <field name="bin_location"/>
                            <field name="unlock_reason"/>
                            <field name="technician_id"/>
                            <field name="key_holder_id" readonly="1"/>
                        </group>
<group string="Billing &amp; Status">
                            <field name="charge_amount"/>
                            <field name="billable"/>
                            <field name="invoice_created" readonly="1"/>
                            <field name="completed"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Details">
                            <group>
<field name="reason_description" widget="text" placeholder="Detailed description of why unlock was needed..."/>
<field name="items_retrieved" widget="text" placeholder="Description of items retrieved from the bin..."/>
<field name="notes" widget="text" placeholder="Additional service notes..."/>

                            </group>
                        </page>
<page string="Photos &amp; Documentation">
                            <field name="photo_ids" widget="many2many_binary"/>
                        </page>
<page string="System Information">
    <group>
        <group>
            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
            <field name="create_date" readonly="1"/>
            <field name="create_uid" readonly="1"/>
        </group>
        <group>
            <field name="write_date" readonly="1"/>
            <field name="write_uid" readonly="1"/>
        </group>
    </group>
</page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
<field name="message_follower_ids" widget="mail_followers"/>
<field name="activity_ids" widget="mail_activity"/>
<field name="message_ids" widget="mail_thread"/>

                </div>
            </form>
        </field>
    </record>

<!-- Actions -->
    <record id="action_bin_key_management" model="ir.actions.act_window">
        <field name="name">Bin Key Management</field>
        <field name="res_model">bin.key.management</field>
        <field name="view_mode">kanban,tree,form</field>
<field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
<p class="o_view_nocontent_create">
                Create your first bin key assignment!
            </p>
            <p>
                Track which contacts have bin keys, manage key returns, and handle replacements.
This system provides complete audit trails for key management and security compliance.
</p>
<p>
<strong>Key Features:</strong>
<br/>
                • Complete key lifecycle tracking<br/>
                • Automated unlock service billing<br/>
                • Emergency contact management<br/>
                • Replacement key chains<br/>
                • NAID compliance support
            </p>
        </field>
    </record>

    <record id="action_bin_unlock_service" model="ir.actions.act_window">
        <field name="name">Bin Unlock Services</field>
        <field name="res_model">bin.unlock.service</field>
        <field name="view_mode">tree,form</field>
<field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
<p class="o_view_nocontent_create">
                Record your first bin unlock service!
            </p>
            <p>
                Track unlock services and automatically bill customers $25 for each service.
Perfect for managing emergency access and generating additional revenue.
</p>
<p>
<strong>Service Features:</strong>
<br/>
                • Automated billing integration<br/>
                • Photo documentation support<br/>
                • Technician assignment tracking<br/>
                • Customer notification system<br/>
                • Complete audit trails
            </p>
        </field>
    </record>

<!-- Menu Items -->
<menuitem id="menu_bin_key_management" name="🔑 Bin Key Management" parent="records_management.menu_records_management_root" action="action_bin_key_management" sequence="10"/>


<menuitem id="menu_bin_unlock_services" name="🔓 Unlock Services" parent="records_management.menu_records_management_root" action="action_bin_unlock_service" sequence="11"/>


</odoo>
