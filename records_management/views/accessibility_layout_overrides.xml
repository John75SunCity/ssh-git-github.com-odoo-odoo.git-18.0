<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Removed backend override by request: no changes to webclient layout -->

        <!-- Website layout: add dynamic HTML lang attribute for portal/website pages -->
        <template id="website_layout_lang_inherit" inherit_id="website.layout" name="website.layout.inherit.lang">
            <xpath expr="//html" position="attributes">
                <attribute name="t-att-lang">env.context.get('lang') or 'en_US'</attribute>
            </xpath>
        </template>
    </data>
</odoo>
