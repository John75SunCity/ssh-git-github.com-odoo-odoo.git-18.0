<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Backend webclient: add dynamic HTML lang attribute -->
        <template id="webclient_bootstrap_lang_inherit" inherit_id="web.webclient_bootstrap" name="web.webclient_bootstrap.inherit.lang">
            <xpath expr="//html" position="attributes">
                <!-- Use context language, fallback to en_US to satisfy validators -->
                <attribute name="t-att-lang">request.env.context.get('lang') or 'en_US'</attribute>
            </xpath>
        </template>

        <!-- Website layout: add dynamic HTML lang attribute for portal/website pages -->
        <template id="website_layout_lang_inherit" inherit_id="website.layout" name="website.layout.inherit.lang">
            <xpath expr="//html" position="attributes">
                <attribute name="t-att-lang">request.env.context.get('lang') or 'en_US'</attribute>
            </xpath>
        </template>
    </data>
</odoo>
