<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Removed duplicate initial search view definition (kept richer version later in file) -->
    </data>

    <!-- Kanban view for Shredding Services -->
    <record id="shredding_service_view_kanban" model="ir.ui.view">
        <field name="name">shredding.service.view.kanban</field>
        <field name="model">shredding.service</field>
        <field name="arch" type="xml">
            <kanban default_group_by="service_type" class="o_kanban_shredding_dashboard">
                <field name="name"/>
                <field name="provider_id"/>
                <field name="service_type"/>
                <field name="naid_compliant"/>
                <field name="chain_of_custody"/>
                <field name="witness_destruction"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <strong>üí• <field name="name"/></strong>
                                <div class="text-muted">
                                    <i class="fa fa-building"/>
                                    <field name="provider_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_card_content" t-att-title="record.display_name.raw_value" t-att-aria-label="record.display_name.raw_value" role="group">
                                <div class="mb-2">
                                    <strong>Type:</strong>
                                    <field name="service_type"/>
                                    <br/>
                                    <strong>Lead Time:</strong>
                                    <field name="lead_time_days"/> days
                                </div>
                                <div class="badges">
                                    <span class="badge badge-primary" t-if="record.naid_compliant.raw_value">
                                        üèÖ NAID Compliant
                                    </span>
                                    <span class="badge badge-warning" t-if="record.chain_of_custody.raw_value">
                                        <i class="fa fa-file-text"/>
                                        Chain of Custody
                                    </span>
                                    <span class="badge badge-info" t-if="record.witness_destruction.raw_value">
                                        Witness Required
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List view for Shredding Services -->
    <record id="shredding_service_view_tree" model="ir.ui.view">
        <field name="name">shredding.service.view.tree</field>
        <field name="model">shredding.service</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="provider_id"/>
                <field name="service_type"/>
                <field name="security_level"/>
                <field name="lead_time_days"/>
                <field name="naid_compliant" widget="boolean_toggle"/>
                <field name="chain_of_custody" widget="boolean_toggle"/>
                <field name="witness_destruction" widget="boolean_toggle"/>
                <field name="base_price"/>
            </list>
        </field>
    </record>

    <!-- Form view for Shredding Services -->
    <record id="shredding_service_view_form" model="ir.ui.view">
        <field name="name">shredding.service.view.form</field>
        <field name="model">shredding.service</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- Converted states="draft" to invisible condition -->
                    <button name="action_confirm" type="object" string="Confirm Service" invisible="state != 'draft'" class="btn-primary"/>
                    <!-- Converted states="confirmed" to invisible condition -->
                    <button name="action_start_shredding" type="object" string="Start Shredding" invisible="state != 'confirmed'" class="btn-success"/>
                    <!-- Converted states="in_progress" to invisible condition -->
                    <button name="action_complete" type="object" string="Complete" invisible="state != 'in_progress'" class="btn-success"/>
                    <!-- Converted states="completed" to invisible condition -->
                    <button name="action_generate_certificate" type="object" string="Generate Certificate" invisible="state != 'completed'" class="btn-info"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_destruction_items" icon="fa-file-text-o">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    <field name="destruction_item_count"/>
                                </span>
                                <span class="o_stat_text">Items</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_certificate" icon="fa-certificate" invisible="certificate_id == False">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Certificate</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="service_type"/>
                            <field name="destruction_method"/>
                            <field name="scheduled_date"/>
                        </group>
                        <group>
                            <field name="naid_compliance_level"/>
                            <field name="certificate_required"/>
                            <field name="witness_required"/>
                            <field name="total_weight"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Destruction Items">
                            <field name="destruction_item_ids" mode="list">
                                <list editable="bottom">
                                    <field name="item_description"/>
                                    <field name="quantity"/>
                                    <field name="weight"/>
                                    <field name="container_type"/>
                                    <field name="destruction_status"/>
                                </list>
                            </field>
                        </page>
                        <page string="Service Details">
                            <group>
                                <field name="service_location"/>
                                <field name="assigned_technician"/>
                                <field name="witness_name" invisible="witness_required == False" required="witness_required == True"/>
                                <field name="witness_company" invisible="witness_required == False"/>
                            </group>
                            <group>
                                <field name="special_instructions" placeholder="Special handling instructions..."/>
                                <field name="completion_notes" placeholder="Service completion notes..."/>
                            </group>
                        </page>
                        <page string="Compliance &amp; Certification">
                            <group>
                                <field name="certificate_id" readonly="1"/>
                                <field name="naid_audit_log_ids" mode="list">
                                    <list>
                                        <field name="event_type"/>
                                        <field name="event_date"/>
                                        <field name="user_id"/>
                                        <field name="location"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view for Shredding Services -->
    <record id="shredding_service_view_search" model="ir.ui.view">
        <field name="name">shredding.service.view.search</field>
        <field name="model">shredding.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="service_type"/>
                <field name="destruction_method"/>
                <filter string="Scheduled" name="scheduled" domain="[('state', '=', 'scheduled')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Certificate Required" name="cert_required" domain="[('certificate_required', '=', True)]"/>
                <filter string="Witness Required" name="witness_required" domain="[('witness_required', '=', True)]"/>
                <separator/>
                <filter string="This Week" name="this_week" domain="[('scheduled_date', '&gt;=', (context_today - datetime.timedelta(days=context_today.weekday())).strftime('%Y-%m-%d')), ('scheduled_date', '&lt;', (context_today + datetime.timedelta(days=7-context_today.weekday())).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'state'}"/>
                    <filter string="Service Type" name="group_type" context="{'group_by': 'service_type'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'scheduled_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Shredding Services -->
    <record id="action_shredding_service" model="ir.actions.act_window">
        <field name="name">Shredding Services</field>
        <field name="res_model">shredding.service</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_scheduled': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üí• Create your first shredding service!
            </p>
            <p>Schedule secure document destruction with NAID AAA compliance tracking.</p>
        </field>
    </record>
