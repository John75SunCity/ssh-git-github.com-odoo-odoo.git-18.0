<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Search View for Shredding Service -->
        <record id="shredding_service_search" model="ir.ui.view">
            <field name="name">shredding.service.search</field>
            <field name="model">shredding.service</field>
            <field name="arch" type="xml">
                <search string="Search Shredding Services">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="service_type"/>
                    <filter string="Strip-Cut" name="shredding_method_strip_cut" domain="[('shredding_method', '=', 'strip_cut')]"/>
                    <filter string="On-Site" name="service_type_on_site" domain="[('service_type', '=', 'on_site')]"/>
                    <filter string="Off-Site" name="service_type_off_site" domain="[('service_type', '=', 'off_site')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="Service Type" name="group_by_service_type" context="{'group_by': 'service_type'}"/>
                        <filter string="Shredding Method" name="group_by_shredding_method" context="{'group_by': 'shredding_method'}"/>
                        <filter string="Customer" name="group_by_partner" context="{'group_by': 'partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>