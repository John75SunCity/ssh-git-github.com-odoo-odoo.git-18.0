<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="container_retrieval_view_list" model="ir.ui.view">
    <field name="name">container.retrieval.view.list</field>
        <field name="model">container.retrieval</field>
    <field name="arch" type="xml">
            <tree string="Container Retrieval">
                <field name="name"/>
                <field name="container_id"/>
                <field name="partner_id"/>
                <field name="location_id"/>
                <field name="storage_location_id"/>
                <field name="status"/>
                <field name="priority"/>
                <field name="retrieval_date"/>
                <field name="retrieved_by_id"/>
                <field name="retrieval_cost"/>
                <field name="currency_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="container_retrieval_view_form" model="ir.ui.view">
        <field name="name">container.retrieval.view.form</field>
        <field name="model">container.retrieval</field>
    <field name="arch" type="xml">
            <form string="Container Retrieval">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                        <field name="user_id"/>
                        <field name="container_id"/>
                        <field name="partner_id"/>
                        <field name="location_id"/>
                        <field name="storage_location_id"/>
                        <field name="status"/>
                        <field name="priority"/>
                        <field name="estimated_time"/>
                        <field name="actual_time"/>
                        <field name="retrieval_date"/>
                        <field name="retrieved_by_id"/>
                        <field name="retrieval_cost"/>
                        <field name="currency_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_container_retrieval" model="ir.actions.act_window">
        <field name="name">Container Retrieval</field>
        <field name="res_model">container.retrieval</field>
        <field name="view_mode>tree,form</field>
    </record>
    </data>
</odoo>
