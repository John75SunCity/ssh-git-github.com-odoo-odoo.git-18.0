<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="naid_operator_certification_view_tree" model="ir.ui.view">
        <field name="name">naid.operator.certification.view.tree</field>
        <field name="model">naid.operator.certification</field>
    <field name="arch" type="xml">
            <list string="NAID Operator Certification" decoration-warning="status == 'expired'" decoration-danger="status == 'revoked'">
                <field name="name"/>
                <field name="operator_id"/>
                <field name="certification_type"/>
                <field name="certificate_number"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
                <field name="status"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="naid_operator_certification_view_form" model="ir.ui.view">
        <field name="name">naid.operator.certification.view.form</field>
        <field name="model">naid.operator.certification</field>
    <field name="arch" type="xml">
            <form string="NAID Operator Certification">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_renew_certification" string="Renew"
invisible="status not in ('expired', 'active')"
                                class="oe_stat_button" icon="fa-refresh"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Certification Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info">
                            <field name="operator_id"/>
                            <field name="certification_type"/>
                            <field name="certificate_number"/>
                            <field name="status"/>
                            <field name="active"/>
                        </group>
                        <group name="dates">
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                            <field name="issuing_authority"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details" name="details">
                            <group>
                                <field name="scope_of_certification" nolabel="1" placeholder="Enter scope of certification..."/>
                            </group>
                            <separator string="Notes"/>
                            <field name="notes" nolabel="1" placeholder="Additional notes..."/>
                        </page>
                        <page string="Documents" name="documents">
                            <field name="attachment_ids" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="naid_operator_certification_view_search" model="ir.ui.view">
        <field name="name">naid.operator.certification.view.search</field>
        <field name="model">naid.operator.certification</field>
    <field name="arch" type="xml">
            <search string="Search NAID Operator Certification">
                <field name="name"/>
                <field name="operator_id"/>
                <field name="certification_type"/>
                <field name="certificate_number"/>
                <field name="issuing_authority"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Expired" name="expired" domain="[('status', '=', 'expired')]"/>
                <filter string="Active Status" name="active_status" domain="[('status', '=', 'active')]"/>
                <separator/>
                <filter string="NAID AAA" name="naid_aaa" domain="[('certification_type', '=', 'aaa')]"/>
                <filter string="Hard Drive Destruction" name="hard_drive" domain="[('certification_type', '=', 'hard_drive')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Operator" name="group_operator" domain="[]" context="{'group_by': 'operator_id'}"/>
                    <filter string="Certification Type" name="group_type" domain="[]" context="{'group_by': 'certification_type'}"/>
                    <filter string="Status" name="group_status" domain="[]" context="{'group_by': 'status'}"/>
                    <filter string="Expiry Date" name="group_expiry" domain="[]" context="{'group_by': 'expiry_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_naid_operator_certification" model="ir.actions.act_window">
        <field name="name">NAID Operator Certification</field>
        <field name="res_model">naid.operator.certification</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
