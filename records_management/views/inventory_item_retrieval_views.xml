<!--
inventory_item_retrieval_views.xml

This file defines the Odoo views for the inventory.item.retrieval model within the Records Management module.
It includes:
  - Tree view for listing inventory item retrieval records
  - Form view for editing individual retrievals
  - Search view for filtering retrievals
  - Window action for accessing the retrieval records
  - (Commented) menu item for integration into the module's menu structure

These definitions allow users to manage inventory item retrieval operations directly from the Odoo UI.
-->
<odoo>
    <data>

        <!-- Tree View -->
        <record id="inventory_item_retrieval_view_tree" model="ir.ui.view">
            <field name="name">inventory.item.retrieval.view.tree</field>
            <field name="model">inventory.item.retrieval</field>
            <field name="type">list</field>
        <field name="arch" type="xml">
                <tree string="Inventory Item Retrieval">
                    <field name="name"/>
                    <field name="retrieval_date"/>
                    <field name="responsible_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="inventory_item_retrieval_view_form" model="ir.ui.view">
            <field name="name">inventory.item.retrieval.view.form</field>
            <field name="model">inventory.item.retrieval</field>
            <field name="type">form</field>
        <field name="arch" type="xml">
                <form string="Inventory Item Retrieval">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="retrieval_date"/>
                            <field name="responsible_id"/>
                            <field name="item_ids"/>
                            <field name="state"/>
                            <field name="notes" widget="text"/>
                            <field name="active"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="inventory_item_retrieval_view_search" model="ir.ui.view">
            <field name="name">inventory.item.retrieval.view.search</field>
            <field name="model">inventory.item.retrieval</field>
            <field name="type">search</field>
        <field name="arch" type="xml">
                <search string="Search Inventory Item Retrieval">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="responsible_id"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_inventory_item_retrieval" model="ir.actions.act_window">
            <field name="name">Inventory Item Retrieval</field>
            <field name="res_model">inventory.item.retrieval</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu -->
        <!--
        <menuitem
            id="menu_inventory_item_retrieval"
            name="Inventory Item Retrieval"
            action="action_inventory_item_retrieval"
            parent="REPLACE_WITH_PARENT_MENU_ID"
            sequence="10"/>
        -->

    </data>
</odoo>
