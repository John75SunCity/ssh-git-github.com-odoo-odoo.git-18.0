<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inventory_item_retrieval_view_tree" model="ir.ui.view">
            <field name="name">inventory.item.retrieval.view.tree</field>
            <field name="model">inventory.item.retrieval</field>
            <field name="arch" type="xml">
                <list string="Inventory Item Retrieval">
                    <field name="name" />
                    <field name="retrieval_date" />
                    <field name="responsible_id" />
                    <field name="state" />
                </list>
            </field>
        </record>
        <record id="inventory_item_retrieval_view_form" model="ir.ui.view">
            <field name="name">inventory.item.retrieval.view.form</field>
            <field name="model">inventory.item.retrieval</field>
            <field name="arch" type="xml">
                <form string="Inventory Item Retrieval">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="retrieval_date" />
                            <field name="responsible_id" />
                            <field name="item_ids" />
                            <field name="state" />
                            <field name="notes" widget="text" />
                            <field name="active" />
                            <field name="company_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="inventory_item_retrieval_view_search" model="ir.ui.view">
            <field name="name">inventory.item.retrieval.view.search</field>
            <field name="model">inventory.item.retrieval</field>
            <field name="arch" type="xml">
                <search string="Search Inventory Item Retrieval">
                    <field name="name" />
                    <field name="state" />
                    <field name="responsible_id" />
                </search>
            </field>
        </record>
        <record id="action_inventory_item_retrieval" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model inventory.item.retrieval has state field - consider using default search filters -->
            <field name="name">Inventory Item Retrieval</field>
            <field name="res_model">inventory.item.retrieval</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
