<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for payment.split -->
    <record id="view_payment_split_tree" model="ir.ui.view">
        <field name="name">payment.split.tree</field>
        <field name="model">payment.split</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for payment.split -->
    <record id="view_payment_split_form" model="ir.ui.view">
        <field name="name">payment.split.form</field>
        <field name="model">payment.split</field>
        <field name="arch" type="xml">
            <form string="Payment Split">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for payment.split -->
    <record id="view_payment_split_search" model="ir.ui.view">
        <field name="name">payment.split.search</field>
        <field name="model">payment.split</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action payment.split -->
    <record id="action_payment_split" model="ir.actions.act_window">
        <field name="name">Payment Split</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.split</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Payment Split.
            </p>
        </field>
    </record>

</odoo>
