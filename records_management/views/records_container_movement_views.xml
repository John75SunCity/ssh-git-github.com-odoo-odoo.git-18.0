<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View records.container.movement View List -->
    <record id="view_records_container_movement_list" model="ir.ui.view">
        <field name="name">view.records.container.movement.list</field>
        <field name="model">records.container.movement</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View records.container.movement form -->
    <record id="view_records_container_movement_form" model="ir.ui.view">
        <field name="name">view.records.container.movement.form</field>
        <field name="model">records.container.movement</field>
        <field name="arch" type="xml">
            <form string="Records Container Movement">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View records.container.movement search -->
    <record id="view_records_container_movement_search" model="ir.ui.view">
        <field name="name">view.records.container.movement.search</field>
        <field name="model">records.container.movement</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action records.container.movement -->
    <record id="action_records_container_movement" model="ir.actions.act_window">
        <field name="name">Records Container Movement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.container.movement</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records Container Movement.
            </p>
        </field>
    </record>

</odoo>
