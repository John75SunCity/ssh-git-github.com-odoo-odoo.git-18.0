<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="work_order_coordinator_view_tree" model="ir.ui.view">
            <field name="name">work.order.coordinator.view.tree</field>
            <field name="model">work.order.coordinator</field>
            <field name="arch" type="xml">
                <tree string="Work Order Coordinators" decoration-info="state=='draft'" decoration-warning="state=='in_progress'" decoration-success="state=='completed'">
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="employee_ids" />
                    <field name="scheduled_date" />
                    <field name="priority" widget="priority" />
                    <field name="total_work_orders" />
                    <field name="completed_work_orders" />
                    <field name="coordination_progress" widget="progressbar" />
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='in_progress'" decoration-success="state=='completed'" />
                    <field name="company_id" groups="base.group_multi_company" />
                </tree>
            </field>
        </record>
        <record id="work_order_coordinator_view_form" model="ir.ui.view">
            <field name="name">work.order.coordinator.view.form</field>
            <field name="model">work.order.coordinator</field>
            <field name="arch" type="xml">
                <form string="Work Order Coordinator">
                    <header>
                        <button name="action_coordinate_all" string="Start Coordination" type="object" class="oe_highlight" invisible="state != 'draft'" />
                        <button name="action_create_fsm_tasks" string="Create FSM Tasks" type="object" invisible="state in ('completed', 'cancelled')" />
                        <button name="action_consolidate_billing" string="Consolidate Billing" type="object" invisible="consolidated_billing == False" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_work_orders" icon="fa-tasks">
                                <field name="total_work_orders" widget="statinfo" string="Work Orders" />
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_work_orders" icon="fa-check-circle">
                                <field name="completed_work_orders" widget="statinfo" string="Completed" />
                            </button>
                            <button class="oe_stat_button" icon="fa-percent">
                                <field name="coordination_progress" widget="statinfo" string="Progress" />
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True" />
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" placeholder="Coordinator Name..." />
                            </h1>
                        </div>
                        <group>
                            <group name="coordinator_info" string="Coordinator Information">
                                <field name="partner_id" />
                                <field name="portal_request_id" />
                                <field name="scheduled_date" />
                                <field name="priority" widget="priority" />
                                <field name="consolidated_billing" />
                                <field name="active" />
                            </group>
                            <group name="billing_info" string="Billing Information">
                                <field name="invoice_id" readonly="1" />
                                <field name="company_id" groups="base.group_multi_company" />
                            </group>
                        </group>
                        <notebook>
                            <page name="work_orders" string="Work Orders">
                                <group>
                                    <group name="metrics" string="Coordination Metrics">
                                        <field name="total_work_orders" />
                                        <field name="completed_work_orders" />
                                        <field name="coordination_progress" widget="percentage" />
                                    </group>
                                </group>
                                <separator string="Retrieval Orders" />
                                <field name="retrieval_order_ids" nolabel="1">
                                    <tree>
                                        <field name="name" />
                                        <field name="state" />
                                        <field name="scheduled_date" />
                                    </tree>
                                </field>
                                <separator string="Destruction Orders" />
                                <field name="destruction_ids" nolabel="1">
                                    <tree>
                                        <field name="name" />
                                        <field name="state" />
                                        <field name="destruction_date" />
                                    </tree>
                                </field>
                            </page>
                            <page name="resources" string="Resources">
                                <group>
                                    <group name="employees" string="Assigned Employees">
                                        <field name="employee_ids" nolabel="1" />
                                    </group>
                                    <group name="vehicles" string="Assigned Vehicles">
                                        <field name="vehicle_ids" nolabel="1" />
                                    </group>
                                </group>
                                <separator string="Assigned Equipment" />
                                <field name="assigned_equipment_ids" nolabel="1">
                                    <tree>
                                        <field name="name" />
                                        <field name="category_id" />
                                    </tree>
                                </field>
                            </page>
                            <page name="fsm" string="FSM Integration">
                                <group>
                                    <field name="fsm_project_id" />
                                </group>
                                <separator string="FSM Tasks" />
                                <field name="fsm_task_ids" nolabel="1">
                                    <tree>
                                        <field name="name" />
                                        <field name="stage_id" />
                                        <field name="user_id" />
                                        <field name="date_deadline" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
        <record id="work_order_coordinator_view_search" model="ir.ui.view">
            <field name="name">work.order.coordinator.view.search</field>
            <field name="model">work.order.coordinator</field>
            <field name="arch" type="xml">
                <search string="Search Work Order Coordinators">
                    <field name="name" string="Name" filter_domain="[('name', 'ilike', self)]" />
                    <field name="partner_id" string="Customer" />
                    <field name="employee_ids" string="Employee" />
                    <separator />
                    <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]" />
                    <filter name="in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]" />
                    <filter name="completed" string="Completed" domain="[('state', '=', 'completed')]" />
                    <separator />
                    <filter name="high_priority" string="High Priority" domain="[('priority', '=', '1')]" />
                    <filter name="urgent" string="Urgent" domain="[('priority', '=', '2')]" />
                    <filter name="consolidated_billing" string="Consolidated Billing" domain="[('consolidated_billing', '=', True)]" />
                    <separator />
                    <filter name="active" string="Active" domain="[('active', '=', True)]" />
                    <filter name="archived" string="Archived" domain="[('active', '=', False)]" />
                    <group expand="1" string="Group By">
                        <filter string="State" name="group_state" domain="[]" context="{'group_by': 'state'}" />
                        <filter string="Customer" name="group_customer" domain="[]" context="{'group_by': 'partner_id'}" />
                        <filter string="Priority" name="group_priority" domain="[]" context="{'group_by': 'priority'}" />
                        <filter string="Company" name="group_company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company" />
                    </group>
                </search>
            </field>
        </record>
        <record id="work_order_coordinator_view_kanban" model="ir.ui.view">
            <field name="name">work.order.coordinator.view.kanban</field>
            <field name="model">work.order.coordinator</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="id" />
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="employee_ids" />
                    <field name="state" />
                    <field name="total_work_orders" />
                    <field name="completed_work_orders" />
                    <field name="coordination_progress" />
                    <field name="priority" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name" />
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        Customer: <field name="partner_id" />
                                    </div>
                                    <div class="oe_kanban_bottom_left">
                                        <div class="o_kanban_inline_block">
                                            Priority: <field name="priority" widget="priority" />
                                        </div>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <div class="o_kanban_inline_block">
                                            Work Orders: <strong><field name="total_work_orders" /></strong>
                                        </div>
                                        <div class="o_kanban_inline_block">
                                            Progress: <field name="coordination_progress" />%
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="action_work_order_coordinator" model="ir.actions.act_window">
            <field name="name">Work Order Coordinators</field>
            <field name="res_model">work.order.coordinator</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Work Order Coordinator.
                </p>
                <p>
                    Work Order Coordinators manage and coordinate multiple work orders,
                    assign resources, and ensure efficient execution of retrieval and destruction orders.
                </p>
            </field>
        </record>

        <record id="action_work_order_coordinator_available" model="ir.actions.act_window">
            <field name="name">Available Coordinators</field>
            <field name="res_model">work.order.coordinator</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('state', '=', 'draft')]</field>
            <field name="context">{'default_state': 'draft'}</field>
        </record>

        <record id="action_work_order_coordinator_performance" model="ir.actions.act_window">
            <field name="name">Coordinator Performance</field>
            <field name="res_model">work.order.coordinator</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_group_customer': 1}</field>
        </record>
    </data>
</odoo>
