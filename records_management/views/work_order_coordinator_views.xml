<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="work_order_coordinator_view_list" model="ir.ui.view">
            <field name="name">work.order.coordinator.view.list</field>
            <field name="model">work.order.coordinator</field>
            <field name="arch" type="xml">
                <list string="Work Order Coordinators" decoration-info="state=='draft'" decoration-warning="state=='in_progress'" decoration-success="state=='completed'">
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="employee_ids" />
                    <field name="scheduled_date" />
                    <field name="priority" widget="priority" />
                    <field name="total_work_orders" />
                    <field name="completed_work_orders" />
                    <field name="coordination_progress" widget="progressbar" />
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='in_progress'" decoration-success="state=='completed'" />
                    <field name="company_id" groups="base.group_multi_company" />
                </list>
            </field>
        </record>
        <record id="work_order_coordinator_view_form" model="ir.ui.view">
            <field name="name">work.order.coordinator.view.form</field>
            <field name="model">work.order.coordinator</field>
            <field name="arch" type="xml">
                <form string="Work Order Coordinator">
                    <header>
                        <button name="action_coordinate_all" string="Start Coordination" type="object" class="oe_highlight" invisible="state != 'draft'" />
                        <button name="action_create_fsm_tasks" string="Create FSM Tasks" type="object" invisible="state in ('completed', 'cancelled')" />
                        <button name="action_consolidate_billing" string="Consolidate Billing" type="object" invisible="consolidated_billing == False" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_work_orders" icon="fa-tasks">
                                <field name="total_work_orders" widget="statinfo" string="Work Orders" />
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_work_orders" icon="fa-check-circle">
                                <field name="completed_work_orders" widget="statinfo" string="Completed" />
                            </button>
                            <button class="oe_stat_button" icon="fa-percent">
                                <field name="coordination_progress" widget="statinfo" string="Progress" />
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True" />
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" placeholder="Coordinator Name..." />
                            </h1>
                        </div>
                        <group>
                            <group name="coordinator_info" string="Coordinator Information">
                                <field name="partner_id" />
                                <field name="portal_request_id" />
                                <field name="scheduled_date" />
                                <field name="priority" widget="priority" />
                                <field name="consolidated_billing" />
                                <field name="active" />
                            </group>
                            <group name="billing_info" string="Billing Information">
                                <field name="invoice_id" readonly="1" />
                                <field name="company_id" groups="base.group_multi_company" />
                            </group>
                        </group>
                        <notebook>
                            <page name="work_orders" string="Work Orders">
                                <group>
                                    <group name="metrics" string="Coordination Metrics">
                                        <field name="total_work_orders" />
                                        <field name="completed_work_orders" />
                                        <field name="coordination_progress" widget="percentage" />
                                    </group>
                                </group>
                                <separator string="Retrieval Orders" />
                                <field name="retrieval_order_ids" nolabel="1">
                                    <list>
                                        <field name="name" />
                                        <field name="state" />
                                        <field name="scheduled_date" />
                                    </list>
                                </field>
                                <separator string="Destruction Orders" />
                                <field name="destruction_ids" nolabel="1">
                                    <list>
                                        <field name="name" />
                                        <field name="state" />
                                        <field name="destruction_date" />
                                    </list>
                                </field>
                            </page>
                            <page name="resources" string="Resources">
                                <group>
                                    <group name="employees" string="Assigned Employees">
                                        <field name="employee_ids" nolabel="1" />
                                    </group>
                                    <group name="vehicles" string="Assigned Vehicles">
                                        <field name="vehicle_ids" nolabel="1" />
                                    </group>
                                </group>
                                <separator string="Assigned Equipment" />
                                <field name="assigned_equipment_ids" nolabel="1">
                                    <list>
                                        <field name="name" />
                                        <field name="category_id" />
                                    </list>
                                </field>
                            </page>
                            <page name="fsm" string="FSM Integration">
                                <group>
                                    <field name="fsm_project_id" />
                                </group>
                                <separator string="FSM Tasks" />
                                <field name="fsm_task_ids" nolabel="1">
                                    <list>
                                        <field name="name" />
                                        <field name="stage_id" />
                                        <field name="user_ids" widget="many2many_tags"/>
                                        <field name="date_deadline" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
        <record id="work_order_coordinator_view_search" model="ir.ui.view">
            <field name="name">work.order.coordinator.view.search</field>
            <field name="model">work.order.coordinator</field>
            <field name="arch" type="xml">
                <search string="Search Work Order Coordinators">
                    <field name="name" string="Name" filter_domain="[('name', 'ilike', self)]" />
                    <field name="partner_id" string="Customer" />
                    <field name="employee_ids" string="Employee" />
                    <separator />
                    <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]" />
                    <filter name="in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]" />
                    <filter name="completed" string="Completed" domain="[('state', '=', 'completed')]" />
                    <separator />
                    <filter name="high_priority" string="High Priority" domain="[('priority', '=', '1')]" />
                    <filter name="urgent" string="Urgent" domain="[('priority', '=', '2')]" />
                    <filter name="consolidated_billing" string="Consolidated Billing" domain="[('consolidated_billing', '=', True)]" />
                    <separator />
                    <filter name="active" string="Active" domain="[('active', '=', True)]" />
                    <filter name="archived" string="Archived" domain="[('active', '=', False)]" />
                    <group expand="1" string="Group By">
                        <filter string="State" name="group_state" domain="[]" context="{'group_by': 'state'}" />
                        <filter string="Customer" name="group_customer" domain="[]" context="{'group_by': 'partner_id'}" />
                        <filter string="Priority" name="group_priority" domain="[]" context="{'group_by': 'priority'}" />
                        <filter string="Company" name="group_company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company" />
                    </group>
                </search>
            </field>
        </record>
        <record id="work_order_coordinator_view_kanban" model="ir.ui.view">
            <field name="name">work.order.coordinator.view.kanban</field>
            <field name="model">work.order.coordinator</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="id" />
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="employee_ids" />
                    <field name="state" />
                    <field name="total_work_orders" />
                    <field name="completed_work_orders" />
                    <field name="coordination_progress" />
                    <field name="priority" />
                    <templates>
                        <t t-name="card">
                            <div class="o_kanban_record o_kanban_global_click">
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_primary_left">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="text-muted">
                                            Customer: <field name="partner_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_primary_right">
                                        <div>
                                            Work Orders: <strong><field name="total_work_orders"/></strong>
                                        </div>
                                        <div>
                                            Progress: <field name="coordination_progress"/>%
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div>
                                        Priority: <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="action_work_order_coordinator" model="ir.actions.act_window">
            <field name="name">Work Order Coordinators</field>
            <field name="res_model">work.order.coordinator</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-sitemap"/> No work order coordinators yet!
                </p>
                <p>
                    <b>‚ö†Ô∏è Prerequisites:</b>
                </p>
                <ul>
                    <li>‚úì <b>FSM Project</b> - Go to: <i>Records Management &gt; Configuration &gt; FSM Projects</i></li>
                    <li>‚úì <b>Employees</b> - Go to: <i>Employees &gt; Field Service Teams</i></li>
                    <li>‚úì <b>Vehicles</b> - Go to: <i>Fleet &gt; Vehicles</i></li>
                    <li>‚úì <b>Work Orders</b> - Go to: <i>Records Management &gt; Operations &gt; Retrieval/Destruction Orders</i></li>
                </ul>
                <p>
                    <b>üìã To create a coordinator:</b>
                </p>
                <ol>
                    <li>Click "Create" and enter <b>Coordinator Name</b></li>
                    <li>Select <b>Customer/Partner</b> for the coordination session</li>
                    <li>Add <b>Retrieval Orders</b> and <b>Destruction Orders</b> to coordinate</li>
                    <li>Assign <b>Employees</b> and <b>Vehicles</b> from resource pools</li>
                    <li>Set <b>Scheduled Date</b> for coordinated execution</li>
                    <li>Enable <b>Consolidated Billing</b> if combining multiple orders into one invoice</li>
                    <li>Click <b>Start Coordination</b> to activate resource assignments</li>
                    <li>Use <b>Create FSM Tasks</b> to generate Field Service mobile tasks</li>
                    <li>Monitor <b>Coordination Progress</b> bar (% of work orders completed)</li>
                    <li>Click <b>Consolidate Billing</b> when all work complete to generate unified invoice</li>
                </ol>
                <p>
                    <b>üìä Coordinator States:</b>
                </p>
                <ul>
                    <li><b>Draft:</b> Planning phase, resources being assigned, orders not yet coordinated</li>
                    <li><b>In Progress:</b> Active coordination session, field teams executing assigned work orders</li>
                    <li><b>Completed:</b> All work orders finished, billing consolidated if enabled, session archived</li>
                </ul>
                <p>
                    <b>üöÄ Key Features:</b><br/>
                    ‚Ä¢ <b>Multi-Order Coordination:</b> Manage retrieval + destruction + access orders in single session<br/>
                    ‚Ä¢ <b>Resource Optimization:</b> Auto-assign employees/vehicles across multiple orders efficiently<br/>
                    ‚Ä¢ <b>Consolidated Billing:</b> Combine multiple service charges into one unified customer invoice<br/>
                    ‚Ä¢ <b>FSM Integration:</b> Sync work orders to Field Service Management mobile app for real-time updates<br/>
                    ‚Ä¢ <b>Progress Tracking:</b> Visual progress bar showing % completion across all coordinated orders<br/>
                    ‚Ä¢ <b>Equipment Management:</b> Track specialized equipment usage (shredders, scanners, etc.)<br/>
                    ‚Ä¢ <b>Portal Integration:</b> Link to customer portal requests for full service visibility<br/>
                    ‚Ä¢ <b>Smart Statistics:</b> Real-time counters for total orders, completed orders, and progress metrics<br/>
                </p>
                <p>
                    <b>üí° Pro Tips:</b><br/>
                    ‚Ä¢ Use <b>Consolidated Billing</b> for same-day multi-service visits to simplify invoicing<br/>
                    ‚Ä¢ Assign <b>same field team</b> to related orders (e.g., retrieval + immediate destruction)<br/>
                    ‚Ä¢ Monitor <b>progress percentage</b> to identify delayed orders requiring supervisor intervention<br/>
                    ‚Ä¢ Set <b>priority levels</b> to ensure urgent orders are resourced first<br/>
                    ‚Ä¢ Review <b>FSM task status</b> to track mobile worker progress in real-time<br/>
                </p>
            </field>
        </record>

        <record id="action_work_order_coordinator_available" model="ir.actions.act_window">
            <field name="name">Available Coordinators</field>
            <field name="res_model">work.order.coordinator</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('state', '=', 'draft')]</field>
            <field name="context">{'default_state': 'draft'}</field>
        </record>

        <record id="action_work_order_coordinator_performance" model="ir.actions.act_window">
            <field name="name">Coordinator Performance</field>
            <field name="res_model">work.order.coordinator</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_group_customer': 1}</field>
        </record>
    </data>
</odoo>
