<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View prod.ext View List -->
    <record id="view_prod_ext_list" model="ir.ui.view">
        <field name="name">view.prod.ext.list</field>
        <field name="model">prod.ext</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View prod.ext form -->
    <record id="view_prod_ext_form" model="ir.ui.view">
        <field name="name">view.prod.ext.form</field>
        <field name="model">prod.ext</field>
        <field name="arch" type="xml">
            <form string="Prod Ext">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View prod.ext search -->
    <record id="view_prod_ext_search" model="ir.ui.view">
        <field name="name">view.prod.ext.search</field>
        <field name="model">prod.ext</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action prod.ext -->
    <record id="action_prod_ext" model="ir.actions.act_window">
        <field name="name">Prod Ext</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">prod.ext</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Prod Ext.
            </p>
        </field>
    </record>

</odoo>
