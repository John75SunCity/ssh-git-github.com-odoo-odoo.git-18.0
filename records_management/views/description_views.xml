<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="description_view_tree" model="ir.ui.view">
            <field name="name">description.view.tree</field>
            <field name="model">description</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <tree string="Description">
                    <field name="name"/>
                    <field name="category"/>
                    <field name="description"/>
                    <field name="active"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="description_view_form" model="ir.ui.view">
            <field name="name">description.view.form</field>
            <field name="model">description</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <form string="Description">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="category"/>
                            <field name="description"/>
                            <field name="active"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_description" model="ir.actions.act_window">
            <field name="name">Description</field>
            <field name="res_model">description</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
