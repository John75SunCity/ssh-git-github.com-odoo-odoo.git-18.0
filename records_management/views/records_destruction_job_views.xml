<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- List View -->
        <record id="records_destruction_job_view_tree" model="ir.ui.view">
            <field name="name">records.destruction.job.view.tree</field>
            <field name="model">records.destruction.job</field>
        <field name="arch" type="xml">
                <tree string="Records Destruction Job">
                    <field name="name"/>
                    <field name="destruction_date"/>
                    <field name="state"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="records_destruction_job_view_form" model="ir.ui.view">
            <field name="name">records.destruction.job.view.form</field>
            <field name="model">records.destruction.job</field>
        <field name="arch" type="xml">
                <form string="Records Destruction Job">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="destruction_date"/>
                            <field name="state"/>
                            <field name="user_id"/>
                            <field name="company_id"/>
                        </group>
                        <notebook>
                            <page string="Destruction Lines">
                                <field name="destruction_line_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="records_destruction_job_view_search" model="ir.ui.view">
            <field name="name">records.destruction.job.view.search</field>
            <field name="model">records.destruction.job</field>
        <field name="arch" type="xml">
                <search string="Search Records Destruction Job">
                    <field name="name"/>
                    <field name="destruction_date"/>
                    <field name="state"/>
                    <field name="user_id"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_records_destruction_job" model="ir.actions.act_window">
            <field name="name">Records Destruction Job</field>
            <field name="res_model">records.destruction.job</field>
            <field name="view_mode">list,form</field>
        </record>

</odoo>
