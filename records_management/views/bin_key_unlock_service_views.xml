<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
<!-- ============================================================================ -->
    <!-- BIN KEY UNLOCK SERVICE - TREE VIEW -->
    <!-- ============================================================================ -->
    <record id="bin_key_unlock_service_view_tree" model="ir.ui.view">
        <field name="name">bin.key.unlock.service.view.tree</field>
        <field name="model">bin.key.unlock.service</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <tree string="Bin Key Unlock Services" sample="1">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="bin_key_id"/>
                <field name="requested_date"/>
                <field name="service_date"/>
                <field name="technician_id"/>
                <field name="state" decoration-success="state=='completed'" decoration-info="state=='confirmed'" decoration-warning="state=='in_progress'" decoration-muted="state=='cancelled'" widget="badge"/>
                <field name="priority" widget="priority"/>
                <field name="total_cost" widget="monetary" optional="show"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- ============================================================================ -->
    <!-- BIN KEY UNLOCK SERVICE - FORM VIEW -->
    <!-- ============================================================================ -->
    <record id="bin_key_unlock_service_view_form" model="ir.ui.view">
        <field name="name">bin.key.unlock.service.view.form</field>
        <field name="model">bin.key.unlock.service</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Bin Key Unlock Service">
                <header>
                    <button name="action_confirm" type="object" string="Confirm Service" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_start_service" type="object" string="Start Service" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_complete_service" type="object" string="Complete Service" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                    <button name="action_cancel" type="object" string="Cancel" attrs="{'invisible': [('state', 'in', ['completed', 'cancelled'])]}"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_audit_logs" type="object" class="oe_stat_button" icon="fa-history">
                            <field name="audit_log_count" widget="statinfo" string="Audit Logs"/>
                        </button>
                        <button name="action_view_access_history" type="object" class="oe_stat_button" icon="fa-key">
                            <field name="access_history_count" widget="statinfo" string="Access History"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Service Reference Number"/>
                        </h1>
                    </div>
                    <group>
                        <group name="service_info" string="Service Information">
                            <field name="partner_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="bin_key_id" domain="[('partner_id', '=', partner_id)]" options="{'no_create': True}"/>
                            <field name="service_type"/>
                            <field name="priority" widget="priority"/>
                            <field name="requested_date"/>
                            <field name="service_date"/>
                            <field name="completion_date" readonly="1"/>
                        </group>
                        <group name="assignment_info" string="Assignment Information">
                            <field name="technician_id" domain="[('share', '=', False)]"/>
                            <field name="department_id"/>
                            <field name="location_id"/>
                            <field name="estimated_duration"/>
                            <field name="actual_duration" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="service_details" string="Service Details">
                            <group>
                                <group name="unlock_details" string="Unlock Details">
                                    <field name="unlock_reason"/>
                                    <field name="access_level_required"/>
                                    <field name="emergency_access" widget="boolean_toggle"/>
                                    <field name="authorized_by" attrs="{'required': [('emergency_access', '=', True)]}"/>
                                    <field name="authorization_reference"/>
                                </group>
                                <group name="verification" string="Verification">
                                    <field name="identity_verified" widget="boolean_toggle"/>
                                    <field name="verification_method"/>
                                    <field name="verification_reference"/>
                                    <field name="witness_required" widget="boolean_toggle"/>
                                    <field name="witness_id" attrs="{'required': [('witness_required', '=', True)]}"/>
                                </group>
                            </group>
                            <separator string="Service Notes"/>
                            <field name="description" placeholder="Detailed service description and notes..."/>
                        </page>
                        <page name="security" string="Security &amp; Compliance">
                            <group>
                                <group name="security_info" string="Security Information">
                                    <field name="security_level"/>
                                    <field name="access_code_changed" widget="boolean_toggle"/>
                                    <field name="new_access_code" password="True" attrs="{'invisible': [('access_code_changed', '=', False)]}"/>
                                    <field name="biometric_update" widget="boolean_toggle"/>
                                    <field name="audit_trail_generated" widget="boolean_toggle" readonly="1"/>
                                </group>
                                <group name="compliance" string="NAID Compliance">
                                    <field name="naid_compliant" widget="boolean_toggle" readonly="1"/>
                                    <field name="chain_of_custody_maintained" widget="boolean_toggle" readonly="1"/>
                                    <field name="compliance_officer_id"/>
                                    <field name="compliance_notes"/>
                                </group>
                            </group>
                        </page>
                        <page name="financial" string="Financial Information">
                            <group>
                                <group name="pricing" string="Service Pricing">
                                    <field name="service_rate"/>
                                    <field name="emergency_surcharge" attrs="{'invisible': [('emergency_access', '=', False)]}"/>
                                    <field name="travel_cost"/>
                                    <field name="additional_fees"/>
                                    <field name="total_cost" readonly="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </group>
                                <group name="billing" string="Billing Information">
                                    <field name="billing_method"/>
                                    <field name="invoiced" widget="boolean_toggle" readonly="1"/>
                                    <field name="invoice_id" readonly="1"/>
                                    <field name="payment_terms"/>
                                    <field name="billing_notes"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ============================================================================ -->
    <!-- BIN KEY UNLOCK SERVICE - SEARCH VIEW -->
    <!-- ============================================================================ -->
    <record id="bin_key_unlock_service_view_search" model="ir.ui.view">
        <field name="name">bin.key.unlock.service.view.search</field>
        <field name="model">bin.key.unlock.service</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Bin Key Unlock Services">
                <field name="name" string="Service Reference" filter_domain="[('name', 'ilike', self)]"/>
                <field name="partner_id" string="Customer"/>
                <field name="bin_key_id" string="Bin Key"/>
                <field name="technician_id" string="Technician"/>
                <field name="department_id" string="Department"/>
                <separator/>
                <filter name="my_services" string="My Services" domain="[('technician_id', '=', uid)]"/>
                <filter name="emergency" string="Emergency Access" domain="[('emergency_access', '=', True)]"/>
                <filter name="active_services" string="Active Services" domain="[('state', 'in', ['confirmed', 'in_progress'])]"/>
                <filter name="completed_services" string="Completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter name="today" string="Today" domain="[('service_date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), ('service_date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter name="this_week" string="This Week" domain="[('service_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('service_date', '&lt;', (context_today() + datetime.timedelta(days=7-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter name="group_partner" string="Customer" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_technician" string="Technician" context="{'group_by': 'technician_id'}"/>
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_service_date" string="Service Date" context="{'group_by': 'service_date:day'}"/>
                    <filter name="group_department" string="Department" context="{'group_by': 'department_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================================ -->
    <!-- BIN KEY UNLOCK SERVICE - KANBAN VIEW -->
    <!-- ============================================================================ -->
    <record id="bin_key_unlock_service_view_kanban" model="ir.ui.view">
        <field name="name">bin.key.unlock.service.view.kanban</field>
        <field name="model">bin.key.unlock.service</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="technician_id"/>
                <field name="service_date"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="emergency_access"/>
                <field name="total_cost"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a name="action_confirm" type="object" class="dropdown-item" t-if="record.state.raw_value == 'draft'">Confirm Service</a>
                                    <a name="action_start_service" type="object" class="dropdown-item" t-if="record.state.raw_value == 'confirmed'">Start Service</a>
                                    <a name="action_complete_service" type="object" class="dropdown-item" t-if="record.state.raw_value == 'in_progress'">Complete Service</a>
                                    <div class="dropdown-divider"/>
                                    <div class="dropdown-item-text text-muted">
                                        <small>Priority: <field name="priority" widget="priority"/></small>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                        <span t-if="record.emergency_access.raw_value" class="fa fa-exclamation-triangle text-danger" title="Emergency Access"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <i class="fa fa-user"/>
                                        <field name="partner_id"/>
                                    </div>
                                    <div class="o_kanban_record_subtitle" t-if="record.technician_id.raw_value">
                                        <i class="fa fa-wrench"/>
                                        <field name="technician_id"/>
                                    </div>
                                    <div class="o_kanban_record_subtitle" t-if="record.service_date.raw_value">
                                        <i class="fa fa-calendar"/>
                                        <field name="service_date"/>
                                    </div>
                                </div>
                                <div class="oe_kanban_footer">
                                    <div class="oe_kanban_footer_left">
                                        <span class="oe_kanban_record_subtitle">
                                            <field name="total_cost" widget="monetary"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_footer_right">
                                        <field name="priority" widget="priority" readonly="1"/>
                                        <div class="oe_kanban_avatar">
                                            <img t-att-src="kanban_image('res.users', 'image_128', record.technician_id.raw_value)" t-att-title="record.technician_id.value" alt="Technician"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================================================ -->
    <!-- ACTION WINDOW & MENU ITEM -->
    <!-- ============================================================================ -->
    <record id="action_bin_key_unlock_service" model="ir.actions.act_window">
        <field name="name">Bin Key Unlock Services</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bin.key.unlock.service</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_create">
                Click to create a new bin key unlock service request.
            </p>
            <p>
                This feature allows you to manage and track bin key unlock services,
                including emergency access requests, security verification, and
                compliance audit trails.
            </p>
        </field>
    </record>

    <menuitem id="menu_bin_key_unlock_service" name="Unlock Services" parent="records_management.menu_records_security" action="action_bin_key_unlock_service" sequence="30"/>
</data>

</odoo>
