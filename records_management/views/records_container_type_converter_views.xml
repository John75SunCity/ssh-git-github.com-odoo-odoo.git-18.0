<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- List view for Container -->
    <record id="records_container_type_converter_view_form" model="ir.ui.view">
        <field name="name">records.container.type.converter.view.form</field>
        <field name="model">records.container.type.converter</field>
    <field name="arch" type="xml">
            <form string="Bulk Container Type Converter">
                <group>
                    <group>
                        <field name="container_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                        <field name="current_type" invisible="1"/>
                        <label for="current_type" string="Current Type" invisible="current_type == False"/>
                        <div invisible="current_type == False">
                            <field name="current_type" readonly="1" nolabel="1"/>
                        </div>
                    </group>
                    <group>
                        <field name="new_container_type_code" required="1"/>
                        <field name="update_location"/>
                    </group>
                </group>

                <group string="Conversion Summary">
                    <field name="summary_line" nolabel="1"/>
                </group>

                <group string="Optional Information">
                    <field name="reason" placeholder="Why are you converting these containers? (Optional)"/>
                </group>

                <footer>
                    <button name="action_convert_containers" string="Convert Containers" type="object" class="btn-primary"/>
                    <button name="action_preview_changes" string="Preview Changes" type="object" class="btn-secondary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- List view for Action -->
    <record id="action_container_type_converter" model="ir.actions.act_window">
        <field name="name">Bulk Convert Container Types</field>
        <field name="res_model">records.container.type.converter</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

    <!-- List view for Menu -->
<data>
    <menuitem id="menu_container_type_converter" name="Bulk Convert Container Types" parent="menu_records_operations" action="action_container_type_converter" sequence="30"/>
</data>
    </data>
</odoo>
