<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
<!-- Tree view for naid.destruction.record -->
    <record id="naid_destruction_record_view_tree" model="ir.ui.view">
        <field name="name">naid.destruction.record.view.tree</field>
        <field name="model">naid.destruction.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for naid.destruction.record -->
    <record id="naid_destruction_record_view_form" model="ir.ui.view">
        <field name="name">naid.destruction.record.view.form</field>
        <field name="model">naid.destruction.record</field>
        <field name="arch" type="xml">
            <form string="Naid.Destruction.Record">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for naid.destruction.record -->
    <record id="naid_destruction_record_view_search" model="ir.ui.view">
        <field name="name">naid.destruction.record.view.search</field>
        <field name="model">naid.destruction.record</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for naid.destruction.record -->
    <record id="action_naid_destruction_record" model="ir.actions.act_window">
        <field name="name">Naid.Destruction.Record</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">naid.destruction.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new naid.destruction.record.
            </p>
        </field>
    </record>
</data>

</odoo>
