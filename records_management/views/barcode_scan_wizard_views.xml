<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Barcode Scan Wizard Form -->
        <record id="barcode_scan_wizard_form" model="ir.ui.view">
            <field name="name">barcode.scan.wizard.form</field>
            <field name="model">barcode.scan.wizard</field>
            <field name="arch" type="xml">
                <form string="Scan Barcode">
                    <div class="alert alert-info" role="status">
                        <p><i class="fa fa-barcode" title="Barcode"/> <strong>Quick Barcode Scanner</strong></p>
                        <ul>
                            <li><strong>USB Scanner:</strong> Focus field and scan</li>
                            <li><strong>Mobile Camera:</strong> Tap the camera icon in the barcode field</li>
                            <li><strong>Manual:</strong> Type and click Scan</li>
                        </ul>
                    </div>
                    
                    <group>
                        <!-- widget="barcode_scanner" enables mobile camera scanning in Odoo 18 -->
                        <field name="barcode_input" 
                               placeholder="Scan or type barcode here..." 
                               widget="barcode_scanner"
                               options="{'autofocus': true}"/>
                    </group>
                    
                    <field name="scan_result" nolabel="1"/>
                    
                    <footer>
                        <button name="action_scan" string="Scan" type="object" class="btn-primary"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                    
                    <!-- Hidden fields -->
                    <field name="work_order_model" invisible="1"/>
                    <field name="work_order_id" invisible="1"/>
                </form>
            </field>
        </record>

    </data>
</odoo>
