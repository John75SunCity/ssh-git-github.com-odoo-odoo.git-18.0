<!--
    View Definitions for full.customization.name Model

    This XML file defines the user interface for the "Customization Configurations" feature in the Records Management module.
    It includes:
      - Tree view for listing customization records
      - Form view for editing/creating a customization
      - Search view with filters and group by options
      - Window action for launching the UI
      - Menu item integration under the Records Management configuration menu

    All fields referenced here must exist in the full.customization.name model.
-->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Full Customization Name Tree View -->
        <record id="full_customization_name_view_tree" model="ir.ui.view">
            <field name="name">full.customization.name.tree</field>
            <field name="model">full.customization.name</field>
            <field name="arch" type="xml">
                <tree string="Customization Configurations">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <field name="create_date"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Full Customization Name Form View -->
        <record id="full_customization_name_view_form" model="ir.ui.view">
            <field name="name">full.customization.name.form</field>
            <field name="model">full.customization.name</field>
            <field name="arch" type="xml">
                <form string="Customization Configuration">
                    <header>
                        <button name="action_duplicate" type="object" string="Duplicate" class="btn-secondary"/>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="user_id"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Enter detailed description of this customization..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Full Customization Name Search View -->
        <record id="full_customization_name_view_search" model="ir.ui.view">
            <field name="name">full.customization.name.search</field>
            <field name="model">full.customization.name</field>
            <field name="arch" type="xml">
                <search string="Search Customizations">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="My Customizations" name="my_customizations" domain="[('user_id', '=', uid)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Owner" name="group_owner" context="{'group_by': 'user_id'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                        <filter string="Created Date" name="group_create_date" context="{'group_by': 'create_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Full Customization Name Action -->
        <record id="full_customization_name_action" model="ir.actions.act_window">
            <field name="name">Customization Configurations</field>
            <field name="res_model">full.customization.name</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first customization configuration!
                </p>
                <p>
                    Define custom configurations to personalize the Records Management system.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="full_customization_name_menu"
                  name="Customization Configurations"
                  parent="records_management.menu_records_config"
                  action="full_customization_name_action"
                  sequence="50"/>

    </data>
</odoo>
