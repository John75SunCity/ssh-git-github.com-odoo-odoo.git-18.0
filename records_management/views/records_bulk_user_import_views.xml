<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="records_bulk_user_import_view_tree" model="ir.ui.view">
            <field name="name">records.bulk.user.import.view.tree</field>
            <field name="model">records.bulk.user.import</field>
            <field name="arch" type="xml">
                <list string="Bulk User Imports">
                    <field name="name" />
                    <field name="filename" />
                    <field name="state" />
                    <field name="create_date" />
                </list>
            </field>
        </record>
        <record id="records_bulk_user_import_view_form" model="ir.ui.view">
            <field name="name">records.bulk.user.import.view.form</field>
            <field name="model">records.bulk.user.import</field>
            <field name="arch" type="xml">
                <form string="Bulk User Import">
                    <header>
                        <button name="action_import_users" string="Import Users" type="object" class="btn-primary" invisible="state != 'draft'" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="csv_file" />
                            <field name="filename" />
                            <field name="default_group_ids" widget="many2many_tags" />
                        </group>
                        <group string="Instructions">
                            <p>Upload a CSV file with columns: name, email. Optional: groups (comma-separated IDs).</p>
                        </group>
                        <group>
                            <field name="log" readonly="1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="records_bulk_user_import_view_search" model="ir.ui.view">
            <field name="name">records.bulk.user.import.view.search</field>
            <field name="model">records.bulk.user.import</field>
            <field name="arch" type="xml">
                <search string="Search Bulk User Imports">
                    <field name="name" />
                    <field name="state" />
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" />
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]" />
                    <filter string="Error" name="error" domain="[('state', '=', 'error')]" />
                </search>
            </field>
        </record>
        <record id="records_bulk_user_import_action" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model records.bulk.user.import has state field - consider using default search filters -->
            <field name="name">Bulk User Import</field>
            <field name="res_model">records.bulk.user.import</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="records_bulk_user_import_view_tree" />
        </record>
    <data>
        <menuitem id="records_bulk_user_import_menu" name="Bulk User Import" parent="menu_records_management_root" action="records_bulk_user_import_action" groups="records_management.group_records_manager" sequence="50" />
    </data>
    </data>
</odoo>
