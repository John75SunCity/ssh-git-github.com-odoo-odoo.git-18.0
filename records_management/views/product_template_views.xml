<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- Kanban view for Product Template -->
    <record id="product_template_view_kanban" model="ir.ui.view">
        <field name="name">product.template.view.kanban</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <kanban default_group_by="categ_id" class="o_kanban_product_template_dashboard">
                <field name="name"/>
                <field name="categ_id"/>
                <field name="list_price"/>
                <field name="default_code"/>
                <field name="type"/>
                <field name="active"/>
                <field name="sale_ok"/>
                <field name="purchase_ok"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong><i class='fa fa-briefcase' title="Product"/> <field name="name"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        <i class="fa fa-tag" title="Reference"/> <field name="default_code"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class='fa fa-ellipsis-v' role="img" aria-label="More options" title="More options"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content" t-att-title="record.display_name.raw_value" t-att-aria-label="record.display_name.raw_value" role="group">
                                <div class="row">
                                    <div class="col-8">
                                        <div>
                                            <i class='fa fa-folder' aria-hidden="true"/>
                                            <field name="categ_id"/>
                                        </div>
                                        <div>
                                            <i class='fa fa-cube' aria-hidden="true"/>
                                            Type: <field name="type"/>
                                        </div>
                                        <div class="mt-1">
                                            <span class="badge badge-success" t-if="record.sale_ok.raw_value">
                                                <i class='fa fa-money'/> Sellable
                                            </span>
                                            <span class="badge badge-info" t-if="record.purchase_ok.raw_value">
                                                <i class="fa fa-shopping-cart"></i> Purchasable
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-4 text-right">
                                        <div class="text-primary font-weight-bold">
                                            <i class="fa fa-dollar-sign"></i> $ <field name="list_price"/>
                                        </div>
                                        <span class="badge" t-att-class="record.active.raw_value ? 'badge-success' : 'badge-secondary'">
                                            <t t-if="record.active.raw_value"><i class="fa fa-circle text-success"></i> Active</t>
                                            <t t-else="">Inactive</t>
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-sm" type="object" name="action_view_sales">
                                            <i class='fa fa-bar-chart'/> Sales
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-success btn-sm" type="object" name="action_configure_pricing">
                                            <i class='fa fa-money'/> Pricing
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item"><i class='fa fa-edit'/> Edit Product</a>
                                <a role="menuitem" type="object" name="action_view_sales" class="dropdown-item"><i class='fa fa-bar-chart'/> View Sales</a>
                                <!-- Commented out - methods not implemented:
                                <a role="menuitem" type="object" name="action_configure_variants" class="dropdown-item"><i class='fa fa-bullseye'/> Configure Variants</a>
                                <a role="menuitem" type="object" name="action_pricing_rules" class="dropdown-item"><i class='fa fa-money'/> Pricing Rules</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="object" name="action_duplicate" class="dropdown-item"><i class='fa fa-clipboard'/> Duplicate</a>
                                -->
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree view for Product Template -->
    <record id="product_template_view_tree" model="ir.ui.view">
        <field name="name">product.template.view.tree</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <list decoration-success="sale_ok == True and active == True" decoration-warning="type == 'service'" decoration-info="purchase_ok == True">
                <field name="name" string="Product Name"/>
                <field name="default_code" string="Internal Reference"/>
                <field name="categ_id" string="Category"/>
                <field name="type" string="Type" widget="badge"/>
                <field name="list_price" string="Sale Price"/>
                <field name="standard_price" string="Cost"/>
                <field name="uom_id" string="Unit of Measure"/>
                <field name="sale_ok" string="Can be Sold" widget="boolean_toggle"/>
                <field name="purchase_ok" string="Can be Purchased" widget="boolean_toggle"/>
                <field name="active" string="Status" widget="boolean_toggle"/>
                <button name="action_view_sales" type="object" string="Sales" icon="fa-line-chart" class="btn-link"/>
                <button name="action_configure_pricing" type="object" string="Pricing" icon="fa-money" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- Form view for Product Template -->
    <record id="product_template_view_form" model="ir.ui.view">
        <field name="name">product.template.view.form</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_sales" type="object" string="View Sales History" class="btn-primary"/>
                    <!-- Commented out - methods not implemented in product.template model:
                    <button name="action_configure_variants" type="object" string="Configure Variants" class="btn-secondary"/>
                    <button name="action_pricing_rules" type="object" string="Pricing Rules" class="btn-info"/>
                    <button name="action_update_costs" type="object" string="Update Costs" class="btn-success"/>
                    -->
                    <field name="active" widget="boolean_button" options="{'terminology': {'string_true': 'Active', 'string_false': 'Archived'}}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Product Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Records Storage Service"/>
                        </h1>
                    </div>

                    <div class="oe_button_box" name="button_box">
                        <!-- Stat buttons commented out - computed fields not implemented:
                        <button class="oe_stat_button" type="object" name="action_view_sales" icon="fa-line-chart">
                            <field name="sales_count" string="Sales Orders" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_variants" icon="fa-th">
                            <field name="product_variant_count" string="Variants" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_pricing_history" icon="fa-money">
                            <field name="price_history_count" string="Price Changes" widget="statinfo"/>
                        </button>
                        -->
                        <button class="oe_stat_button" icon="fa-star" invisible="not is_featured_service">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><i class='fa fa-star' title="Featured Service"/></span>
                                <span class="o_stat_text">Featured</span>
                            </div>
                        </button>
                    </div>

                    <notebook>
                        <page string="General Information" name="general">
                            <group>
                                <group string="Basic Information">
                                    <field name="default_code" placeholder="e.g., RMS-001"/>
                                    <field name="categ_id"/>
                                    <field name="type"/>
                                </group>
                                <group string="Service Settings">
                                    <field name="sale_ok"/>
                                    <field name="purchase_ok"/>
                                    <!-- Field not implemented: can_be_expensed -->
                                    <field name="is_featured_service"/>
                                </group>
                            </group>
                            <field name="description" placeholder="Detailed description of the records management service..."/>
                        </page>
                        <page string="Sales &amp; Pricing" name="sales">
                            <group>
                                <group string="Pricing Information">
                                    <field name="list_price" widget="monetary"/>
                                    <field name="standard_price" widget="monetary"/>
                                    <!-- Field not implemented: price_margin -->
                                </group>
                                <group string="Units &amp; Measurements">
                                    <field name="uom_id"/>
                                    <field name="uom_po_id"/>
                                    <field name="weight" invisible="type != 'product'"/>
                                    <field name="volume" invisible="type != 'product'"/>
                                </group>
                            </group>
                            <!-- Cost Structure and Billing Settings fields not implemented in model -->
                        </page>
                        <page string="Records Management" name="records_management">
                            <group>
                                <group string="Container Specifications">
                                    <field name="is_records_container"/>
                                    <field name="container_volume_cf" invisible="not is_records_container"/>
                                    <field name="container_weight_lbs" invisible="not is_records_container"/>
                                </group>
                                <group string="Service Type &amp; Compliance">
                                    <field name="is_records_management_product"/>
                                    <field name="service_type" invisible="not is_records_management_product"/>
                                    <field name="naid_compliant"/>
                                    <field name="hipaa_compliant"/>
                                </group>
                            </group>
                            <group>
                                <group string="Service Level Agreement">
                                    <field name="requires_appointment"/>
                                    <field name="sla_response_time" invisible="not requires_appointment"/>
                                    <field name="sla_completion_time" invisible="not requires_appointment"/>
                                </group>
                                <group string="Portal Display">
                                    <field name="is_featured_service"/>
                                    <field name="service_description_portal" invisible="not is_featured_service"/>
                                </group>
                            </group>
                            <!-- Additional RM service fields not implemented in model -->
                        </page>
                        <page string="Customer Feedback" name="feedback">
                            <group>
                                <group string="Feedback Statistics">
                                    <field name="customer_rating" readonly="1"/>
                                    <field name="feedback_count" readonly="1"/>
                                </group>
                            </group>
                            <!-- Service Level Agreement, Destruction Services, Logistics Services fields not implemented -->
                        </page>
                        <!-- Product Variants page removed - uses standard product.template fields -->
                        <!-- Analytics, Configuration pages removed - fields not implemented in model -->
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view for Product Template -->
    <record id="product_template_view_search" model="ir.ui.view">
        <field name="name">product.template.view.search</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Product"/>
                <field name="default_code"/>
                <field name="categ_id"/>
                <field name="type"/>

                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>

                <separator/>
                <filter string="Can be Sold" name="sale_ok" domain="[('sale_ok', '=', True)]"/>
                <filter string="Can be Purchased" name="purchase_ok" domain="[('purchase_ok', '=', True)]"/>
                <filter string="Services" name="services" domain="[('type', '=', 'service')]"/>
                <filter string="Products" name="products" domain="[('type', '=', 'product')]"/>

                <separator/>
                <filter string="Featured Services" name="featured" domain="[('is_featured_service', '=', True)]"/>
                <filter string="RM Products" name="rm_products" domain="[('is_records_management_product', '=', True)]"/>
                <filter string="NAID Compliant" name="naid_compliant" domain="[('naid_compliant', '=', True)]"/>
                <filter string="HIPAA Compliant" name="hipaa_compliant" domain="[('hipaa_compliant', '=', True)]"/>
                <!-- Fields not implemented: naid_compliance_level, document_storage_included, shredding_included -->

                <separator/>
                <filter string="High Value (&gt;$100)" name="high_value" domain="[('list_price', '&gt;', 100)]"/>
                <!-- Field not implemented: total_sales_ytd -->

                <group expand="0" string="Group By">
                    <filter string="Category" name="group_by_category" context="{'group_by': 'categ_id'}"/>
                    <filter string="Product Type" name="group_by_type" context="{'group_by': 'type'}"/>
                    <filter string="Service Type" name="group_by_service" context="{'group_by': 'service_type'}"/>
                    <filter string="Can be Sold" name="group_by_sale" context="{'group_by': 'sale_ok'}"/>
                    <!-- Fields not implemented: naid_compliance_level, price_range -->
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Records Management Products -->
    <record id="action_product_template_records" model="ir.actions.act_window">
        <field name="name">Records Management Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="product_template_view_search"/>
        <field name="context">{
            'search_default_active': 1,
            'search_default_sale_ok': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first records management service!
            </p>
            <p>
                <b>Enterprise Service Catalog Management:</b>
                <br/>
                • Complete records management service portfolio<br/>
                • Advanced pricing rules and cost structures<br/>
                • NAID compliance service configuration<br/>
                • Service Level Agreement management<br/>
                • Multi-variant service offerings<br/>
                • Real-time sales analytics and performance<br/>
                • Flexible service customization options<br/>
                • Integrated storage and destruction services<br/>
                • Logistics and emergency retrieval services
            </p>
        </field>
    </record>

    <!-- Explicit view associations for the action -->
    <record id="action_product_template_records_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence">1</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="product_template_view_kanban"/>
        <field name="act_window_id" ref="action_product_template_records"/>
    </record>

    <record id="action_product_template_records_view_tree" model="ir.actions.act_window.view">
        <field name="sequence">2</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="product_template_view_tree"/>
        <field name="act_window_id" ref="action_product_template_records"/>
    </record>

    <record id="action_product_template_records_view_form" model="ir.actions.act_window.view">
        <field name="sequence">3</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_template_view_form"/>
        <field name="act_window_id" ref="action_product_template_records"/>
    </record>

    </data>
</odoo>
