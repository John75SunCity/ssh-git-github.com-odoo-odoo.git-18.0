<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Tree view for ENTERPRISE -->

    <!-- Kanban view for Product -->
    <record id="product_template_view_kanban" model="ir.ui.view">
        <field name="name">product.template.view.kanban</field>
        <field name="model">product.template</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <kanban default_group_by="categ_id" class="o_kanban_product_template_dashboard">
                <field name="name"/>
                <field name="categ_id"/>
                <field name="list_price"/>
                <field name="default_code"/>
                <field name="type"/>
                <field name="active"/>
                <field name="sale_ok"/>
                <field name="purchase_ok"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>üíº                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_secondary">
                                        üè∑Ô∏è                                        <field name="default_code"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" title="More options"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-8">
                                        <div>
                                            <i class="fa fa-folder"/>
                                            <field name="categ_id"/>
                                        </div>
                                        <div>
                                            <i class="fa fa-cube"/>
 Type: <field name="type"/>
                                        </div>
                                        <div class="mt-1">
                                            <span class="badge badge-success" t-if="record.sale_ok.raw_value">
                                                üí∞ Sellable
                                            </span>
                                            <span class="badge badge-info" t-if="record.purchase_ok.raw_value">
                                                üõí Purchasable
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-4 text-right">
                                        <div class="text-primary font-weight-bold">
                                            üíµ $                                            <field name="list_price"/>
                                        </div>
                                        <span class="badge" t-att-class="record.active.raw_value ? 'badge-success' : 'badge-secondary'">
                                            <t t-if="record.active.raw_value">üü¢ Active</t>
                                            <t t-else="">‚≠ï Inactive</t>
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-sm" type="object" name="action_view_sales">
                                            üìä Sales
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-success btn-sm" type="object" name="action_configure_pricing">
                                            üí∞ Pricing
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Product</a>
                                <a role="menuitem" type="object" name="action_view_sales" class="dropdown-item">üìä View Sales</a>
                                <a role="menuitem" type="object" name="action_configure_variants" class="dropdown-item">üéØ Configure Variants</a>
                                <a role="menuitem" type="object" name="action_pricing_rules" class="dropdown-item">üí∞ Pricing Rules</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="object" name="action_duplicate" class="dropdown-item">üìã Duplicate</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree view for Enhanced -->
    <record id="product_template_view_tree" model="ir.ui.view">
        <field name="name">product.template.view.tree</field>
        <field name="model">product.template</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree decoration-success="sale_ok == True and active == True" decoration-warning="type == 'service'" decoration-info="purchase_ok == True">
                <field name="name" string="üíº Product Name"/>
                <field name="default_code" string="üè∑Ô∏è Internal Reference"/>
                <field name="categ_id" string="üìÇ Category"/>
                <field name="type" string="üéØ Type" widget="badge"/>
                <field name="list_price" string="üíµ Sale Price"/>
                <field name="standard_price" string="üí∞ Cost"/>
                <field name="uom_id" string="üìè Unit of Measure"/>
                <field name="sale_ok" string="üí∞ Can be Sold" widget="boolean_toggle"/>
                <field name="purchase_ok" string="üõí Can be Purchased" widget="boolean_toggle"/>
                <field name="active" string="üéØ Status" widget="boolean_toggle"/>
                <button name="action_view_sales" type="object" string="Sales" icon="fa-line-chart" class="btn-link"/>
                <button name="action_configure_pricing" type="object" string="Pricing" icon="fa-money" class="btn-link"/>
            </tree>
        </field>
    </record>

    <!-- Form view for Enhanced -->
    <record id="product_template_view_form" model="ir.ui.view">
        <field name="name">product.template.view.form</field>
        <field name="model">product.template</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_sales" type="object" string="üìä View Sales History" class="btn-primary"/>
                    <button name="action_configure_variants" type="object" string="üéØ Configure Variants" class="btn-secondary"/>
                    <button name="action_pricing_rules" type="object" string="üí∞ Pricing Rules" class="btn-info"/>
                    <button name="action_update_costs" type="object" string="üìä Update Costs" class="btn-success"/>
                    <field name="active" widget="boolean_button" options="{'terminology': {'string_true': 'üü¢ Active', 'string_false': '‚≠ï Archived'}}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Product Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Records Storage Service"/>
                        </h1>
                    </div>

                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_sales" icon="fa-line-chart">
                            <field string="Sales Orders" name="sales_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_variants" icon="fa-th">
                            <field string="Variants" name="product_variant_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_pricing_history" icon="fa-money">
                            <field string="Price Changes" name="price_history_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-star" invisible="not is_featured_service">>
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">‚≠ê</span>
                                <span class="o_stat_text">Featured</span>
                            </div>
                        </button>
                    </div>

                    <notebook>
                        <page string="üíº General Information" name="general">
                            <group>
                                <group string="üìã Basic Information">
                                    <field name="default_code" placeholder="e.g., RMS-001"/>
                                    <field name="categ_id"/>
                                    <field name="type"/>
                                </group>
                                <group string="üéØ Service Settings">
                                    <field name="sale_ok"/>
                                    <field name="purchase_ok"/>
                                    <field name="can_be_expensed" invisible="type != 'service'"/>
                                    <field name="is_featured_service"/>
                                </group>
                            </group>
                            <field name="description" placeholder="Detailed description of the records management service..."/>
                        </page>
                        <page string="üí∞ Sales &amp;amp; Pricing" name="sales">
                            <group>
                                <group string="üíµ Pricing Information">
                                    <field name="list_price" widget="monetary"/>
                                    <field name="standard_price" widget="monetary"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="price_margin"/>
                                </group>
                                <group string="üìè Units &amp;amp; Measurements">
                                    <field name="uom_id"/>
                                    <field name="uom_po_id"/>
                                    <field name="weight" invisible="type != 'product'"/>
                                    <field name="volume" invisible="type != 'product'"/>
                                </group>
                            </group>
                            <group>
                                <group string="üí∞ Cost Structure">
                                    <field name="base_cost"/>
                                    <field name="labor_cost"/>
                                    <field name="material_cost"/>
                                    <field name="overhead_cost"/>
                                </group>
                                <group string="üìä Billing Settings">
                                    <field name="billing_frequency"/>
                                    <field name="minimum_billing_period"/>
                                    <field name="prorate_partial_periods"/>
                                    <field name="auto_invoice"/>
                                </group>
                            </group>
                        </page>
                        <page string="üì¶ Records Management" name="records_management">
                            <group>
                                <group string="üìÑ Document Services">
                                    <field name="document_storage_included"/>
                                    <field name="max_documents_included"/>
                                    <field name="additional_document_cost"/>
                                    <field name="digital_conversion_included"/>
                                </group>
                                <group string="üì¶ Storage Services">
                                    <field name="box_storage_included"/>
                                    <field name="max_boxes_included"/>
                                    <field name="additional_box_cost"/>
                                    <field name="climate_controlled"/>
                                </group>
                            </group>
                            <group>
                                <group string="üóëÔ∏è Destruction Services">
                                    <field name="shredding_included"/>
                                    <field name="naid_compliance_level"/>
                                    <field name="witness_destruction"/>
                                    <field name="certificate_of_destruction"/>
                                </group>
                                <group string="üöö Logistics Services">
                                    <field name="pickup_delivery_included"/>
                                    <field name="emergency_retrieval"/>
                                    <field name="same_day_service"/>
                                    <field name="geographic_coverage"/>
                                </group>
                            </group>
                        </page>
                        <page string="üìã Service Level Agreement" name="sla">
                            <group>
                                <group string="‚è±Ô∏è Response Times">
                                    <field name="standard_response_time"/>
                                    <field name="emergency_response_time"/>
                                    <field name="document_retrieval_time"/>
                                    <field name="box_retrieval_time"/>
                                </group>
                                <group string="üìä Service Guarantees">
                                    <field name="uptime_guarantee"/>
                                    <field name="security_guarantee"/>
                                    <field name="compliance_guarantee"/>
                                    <field name="data_recovery_guarantee"/>
                                </group>
                            </group>
                            <field name="sla_terms" placeholder="Detailed Service Level Agreement terms and conditions..."/>
                        </page>
                        <page string="üéØ Product Variants" name="variants">
                            <field name="product_variant_ids" mode="list">
                                <tree>
                                    <field name="default_code"/>
                                    <field name="display_name"/>
                                    <field name="lst_price"/>
                                    <field name="standard_price"/>
                                    <field name="qty_available" invisible="parent.type != 'product'"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        <page string=" Analytics" name="analytics">
                            <group>
                                <group string="üìà Sales Performance">
                                    <field name="total_sales_ytd" readonly="1"/>
                                    <field name="total_revenue_ytd" readonly="1"/>
                                    <field name="average_sale_price" readonly="1"/>
                                    <field name="profit_margin" readonly="1"/>
                                </group>
                                <group string="üìÖ Timeline Metrics">
                                    <field name="first_sale_date" readonly="1"/>
                                    <field name="last_sale_date" readonly="1"/>
                                    <field name="sales_velocity" readonly="1"/>
                                    <field name="customer_retention_rate" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="üîß Configuration" name="configuration">
                            <group>
                                <group string="üìã Template Settings">
                                    <field name="is_template_service"/>
                                    <field name="template_category"/>
                                    <field name="customization_allowed"/>
                                    <field name="requires_approval"/>
                                </group>
                                <group string="üîó Integration">
                                    <field name="external_service_id"/>
                                    <field name="api_integration"/>
                                    <field name="sync_enabled"/>
                                    <field name="webhook_notifications"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view for Enhanced -->
    <record id="product_template_view_search" model="ir.ui.view">
        <field name="name">product.template.view.search</field>
        <field name="model">product.template</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Product"/>
                <field name="default_code"/>
                <field name="categ_id"/>
                <field name="type"/>

                <filter string="üü¢ Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="‚≠ï Archived" name="archived" domain="[('active', '=', False)]"/>

                <separator/>
                <filter string="üí∞ Can be Sold" name="sale_ok" domain="[('sale_ok', '=', True)]"/>
                <filter string="üõí Can be Purchased" name="purchase_ok" domain="[('purchase_ok', '=', True)]"/>
                <filter string="üìã Services" name="services" domain="[('type', '=', 'service')]"/>
                <filter string="üì¶ Products" name="products" domain="[('type', '=', 'product')]"/>

                <separator/>
                <filter string="‚≠ê Featured Services" name="featured" domain="[('is_featured_service', '=', True)]"/>
                <filter string="üèÜ NAID Compliant" name="naid_compliant" domain="[('naid_compliance_level', 'in', ['A', 'AA', 'AAA'])]"/>
                <filter string="üìÑ Document Services" name="document_services" domain="[('document_storage_included', '=', True)]"/>
                <filter string="üóëÔ∏è Destruction Services" name="destruction_services" domain="[('shredding_included', '=', True)]"/>

                <separator/>
                <filter string="üí∞ High Value (&amp;gt;$100)" name="high_value" domain="[('list_price', '&amp;gt;', 100)]"/>
                <filter string="üìä Top Performers" name="top_performers" domain="[('total_sales_ytd', '&amp;gt;', 0)]"/>

                <group expand="0" string="üìä Group By">
                    <filter string="Category" name="group_by_category" context="{'group_by': 'categ_id'}"/>
                    <filter string="Product Type" name="group_by_type" context="{'group_by': 'type'}"/>
                    <filter string="NAID Level" name="group_by_naid" context="{'group_by': 'naid_compliance_level'}"/>
                    <filter string="Can be Sold" name="group_by_sale" context="{'group_by': 'sale_ok'}"/>
                    <filter string="Price Range" name="group_by_price" context="{'group_by': 'price_range'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree view for ENTERPRISE -->
    <record id="action_product_template_records" model="ir.actions.act_window">
        <field name="name">üíº Records Management Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_product_template_records_search"/>
        <field name="context">{
            'search_default_active': 1,
            'search_default_sale_ok': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üíº Create your first records management service!
            </p>
            <p>
                <b>Enterprise Service Catalog Management:</b>
                <br/>
                ‚Ä¢ üìã Complete records management service portfolio<br/>
                ‚Ä¢ üí∞ Advanced pricing rules and cost structures<br/>
                ‚Ä¢ üèÜ NAID compliance service configuration<br/>
                ‚Ä¢ üìä Service Level Agreement management<br/>
                ‚Ä¢ üéØ Multi-variant service offerings<br/>
                ‚Ä¢ üìà Real-time sales analytics and performance<br/>
                ‚Ä¢ üîß Flexible service customization options<br/>
                ‚Ä¢ üì¶ Integrated storage and destruction services<br/>
                ‚Ä¢ üöö Logistics and emergency retrieval services
</p>
</field>
</record>
</data>
</odoo>
