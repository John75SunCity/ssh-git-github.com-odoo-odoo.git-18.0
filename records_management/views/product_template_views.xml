<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Form View for Shred-Specific Fields -->
    <record id="product_template_form_view_inherit_shred" model="ir.ui.view">
        <field name="name">product.template.form.inherit.shred</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='general_information']" position="after">
                <group string="Shredding Service Details" name="shred_details">
                    <field name="shred_type" help="Type of shredding service (e.g., Document, Hard Drive)." placeholder="Document Destruction"/> <!-- Assume custom field added in models/product.py -->
                    <field name="naid_compliant" widget="boolean_toggle" help="Toggle if this product meets NAID AAA standards."/> <!-- Custom Boolean for compliance -->
                    <field name="retention_note" widget="text" readonly="1" help="Auto-generated retention policy note for ISO compliance."/> <!-- Computed field for integrity -->
                </group>
            </xpath>
        </field>
    </record>

    <!-- Inherit eCommerce Product Page Template for Modern UI -->
    <template id="product_template_inherit_shred" inherit_id="website_sale.product">
        <xpath expr="//div[@id='product_details']" position="inside">
            <t t-if="product.naid_compliant">
                <span class="badge bg-success ms-2" title="This service is NAID AAA certified for secure destruction.">NAID Certified</span>
            </t>
            <t t-if="product.shred_type">
                <div class="mt-2">
                    <strong>Service Type:</strong> <span t-esc="product.shred_type"/>
                </div>
            </t>
            <div class="mt-3">
                <a href="/my/quotes?product_id={product.id}" class="btn btn-primary">Request Custom Quote</a> <!-- Links to portal for self-quote -->
            </div>
        </xpath>
    </template>
</odoo>
