<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Enhanced Customer Form View with Billing Preferences -->
    <record id="view_partner_records_billing_form" model="ir.ui.view">
        <field name="name">res.partner.records.billing.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Records Management Billing" 
                      invisible="not is_company">
                    <group>
                        <group string="Customer Configuration">
                            <field name="is_records_customer"/>
                            <field name="billing_method" 
                                   invisible="not is_records_customer"/>
                            <field name="billing_contact_id"
                                   invisible="not is_records_customer"/>
                        </group>
                        <group string="Delivery Preferences">
                            <field name="invoice_delivery_method"
                                   invisible="not is_records_customer"/>
                            <field name="payment_terms_override"
                                   invisible="not is_records_customer"/>
                        </group>
                    </group>
                    
                    <group string="Multi-Department Billing" 
                           invisible="not is_records_customer">
                        <group>
                            <field name="billing_preference"/>
                            <field name="minimum_fee_per_department"/>
                            <field name="total_departments" readonly="1"/>
                        </group>
                        <group>
                            <field name="departments_with_storage" readonly="1"/>
                            <field name="monthly_storage_total" readonly="1"/>
                        </group>
                    </group>
                    
                    <field name="department_billing_contacts" 
                           invisible="not is_records_customer">
                        <list>
                            <field name="department_id"/>
                            <field name="contact_name"/>
                            <field name="receives_invoices"/>
                            <field name="delivery_method"/>
                            <field name="active"/>
                        </list>
                    </field>
                    
                    <field name="department_billing_contact_ids" 
                           invisible="not is_records_customer">
                        <list editable="bottom">
                            <field name="department_id"/>
                            <field name="department_name" readonly="1"/>
                            <field name="billing_contact_id"/>
                            <field name="billing_email" readonly="1"/>
                            <field name="use_separate_po_numbers"/>
                            <field name="default_po_number" 
                                   invisible="not use_separate_po_numbers"/>
                        </list>
                        <form>
                            <group>
                                <field name="department_id"/>
                                <field name="department_name" readonly="1"/>
                                <field name="billing_contact_id"/>
                                <field name="billing_email" readonly="1"/>
                                <field name="use_separate_po_numbers"/>
                                <field name="default_po_number" 
                                       invisible="not use_separate_po_numbers"/>
                            </group>
                        </form>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Department Billing Contact Form View -->
    <record id="view_department_billing_contact_form" model="ir.ui.view">
        <field name="name">records.department.billing.contact.form</field>
        <field name="model">records.department.billing.contact</field>
        <field name="arch" type="xml">
            <form string="Department Billing Contact">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="contact_name" placeholder="Contact Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="customer_id"/>
                            <field name="department_id"/>
                            <field name="active"/>
                        </group>
                        <group string="Billing Preferences">
                            <field name="receives_invoices"/>
                            <field name="receives_statements"/>
                            <field name="receives_notifications"/>
                            <field name="delivery_method"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Enhanced Billing Period Form View -->
    <record id="view_records_billing_period_enhanced_form" model="ir.ui.view">
        <field name="name">records.billing.period.enhanced.form</field>
        <field name="model">records.billing.period</field>
        <field name="inherit_id" ref="records_management.view_records_billing_period_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <group>
                    <separator string="Totals"/>
                    <group>
                        <field name="total_storage_boxes" readonly="1"/>
                        <field name="total_storage_amount" readonly="1"/>
                    </group>
                    <group>
                        <field name="total_services_amount" readonly="1"/>
                        <field name="total_amount" readonly="1"/>
                    </group>
                </group>
                
                <notebook>
                    <page string="Billing Lines">
                        <field name="billing_line_ids">
                            <list>
                                <field name="customer_id"/>
                                <field name="department_id"/>
                                <field name="line_type"/>
                                <field name="description"/>
                                <field name="quantity"/>
                                <field name="unit_price"/>
                                <field name="amount" sum="Total"/>
                            </list>
                        </field>
                    </page>
                    <page string="Summary">
                        <group>
                            <separator string="Summary by Type"/>
                            <p>View billing lines grouped by line type in the main tab</p>
                            <separator string="Instructions"/>
                            <p>Use the billing lines tab to view all charges for this period</p>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </field>
    </record>

    <!-- Base Department Form View -->
    <record id="view_records_department_form" model="ir.ui.view">
        <field name="name">records.department.form</field>
        <field name="model">records.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Department Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="code"/>
                            <!-- TEMP COMMENTED: <field name="partner_id"/> -->
                            <field name="parent_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="level" readonly="1"/>
                            <field name="complete_name" readonly="1"/>
                        </group>
                        <group string="Contact Information">
                            <field name="manager_id"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="active"/>
                            <field name="company_id"/>
                            <field name="user_count" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Department description..."/>
                        </page>
                        <page string="Sub-Departments" name="hierarchy">
                            <div class="oe_button_box" name="button_box">
                                <button name="action_view_hierarchy" type="object" class="oe_stat_button" icon="fa-sitemap">
                                    <div class="o_field_widget o_stat_info">
                                        <span class="o_stat_text">View</span>
                                        <span class="o_stat_text">Hierarchy</span>
                                    </div>
                                </button>
                            </div>
                            <field name="child_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="manager_id"/>
                                    <field name="level"/>
                                    <field name="user_count"/>
                                    <field name="total_boxes"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Users" name="users">
                            <div class="oe_button_box" name="button_box">
                                <button name="action_add_user" type="object" class="oe_stat_button" icon="fa-user-plus">
                                    <div class="o_field_widget o_stat_info">
                                        <span class="o_stat_text">Add</span>
                                        <span class="o_stat_text">User</span>
                                    </div>
                                </button>
                            </div>
                            <field name="user_ids">
                                <tree>
                                    <field name="user_id"/>
                                    <field name="email"/>
                                    <field name="access_level"/>
                                    <field name="can_view_inventory"/>
                                    <field name="can_add_boxes"/>
                                    <field name="can_request_services"/>
                                    <field name="active"/>
                                    <field name="last_login"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Statistics" name="stats">
                            <group>
                                <group string="Department Statistics">
                                    <field name="total_boxes"/>
                                    <field name="monthly_cost"/>
                                </group>
                                <group string="Hierarchy Information">
                                    <field name="level"/>
                                    <field name="user_count"/>
                                    <field name="all_child_ids" widget="many2many_tags"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Department Tree View with Hierarchy -->
    <record id="view_records_department_tree" model="ir.ui.view">
        <field name="name">records.department.tree</field>
        <field name="model">records.department</field>
        <field name="arch" type="xml">
            <tree string="Department Hierarchy" expand="1">
                <field name="complete_name"/>
                <field name="code"/>
                <!-- TEMP COMMENTED: <field name="partner_id"/> -->
                <field name="manager_id"/>
                <field name="level"/>
                <field name="user_count"/>
                <field name="total_boxes"/>
                <field name="monthly_cost"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Department Kanban View -->
    <record id="view_records_department_kanban" model="ir.ui.view">
        <field name="name">records.department.kanban</field>
        <field name="model">records.department</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <!-- TEMP COMMENTED: <field name="partner_id"/> -->
                <field name="level"/>
                <field name="user_count"/>
                <field name="total_boxes"/>
                <field name="complete_name"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                    <strong><field name="complete_name"/></strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <span class="text-muted">Customer:</span><br/>
                                    <!-- TEMP COMMENTED: <field name="partner_id"/> -->
                                    <span>TBD</span>
                                </div>
                                <div class="col-6">
                                    <span class="text-muted">Level:</span> <field name="level"/><br/>
                                    <span class="text-muted">Users:</span> <field name="user_count"/><br/>
                                    <span class="text-muted">Boxes:</span> <field name="total_boxes"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Department Action -->
    <record id="action_records_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">records.department</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new department
            </p>
            <p>
                Departments help organize your records management by customer and hierarchy levels.
                You can create multi-level department structures with sub-departments and assign users with different access levels.
            </p>
        </field>
    </record>

    <!-- Enhanced Department Form View -->
    <record id="view_records_department_enhanced_form" model="ir.ui.view">
        <field name="name">records.department.enhanced.form</field>
        <field name="model">records.department</field>
        <field name="inherit_id" ref="records_management.view_records_department_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Billing Configuration">
                    <group>
                        <group string="Billing Contact">
                            <field name="company_id" invisible="1"/>
                            <button name="action_setup_billing_contact" 
                                    string="Setup Billing Contact" 
                                    type="object" 
                                    class="btn-primary"
                                    icon="fa-user-plus"/>
                        </group>
                        <group string="Monthly Costs">
                            <field name="monthly_cost" readonly="1"/>
                            <field name="total_boxes" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Billing History">
                        <field name="box_ids" readonly="1">
                            <list>
                                <field name="name"/>
                                <field name="state"/>
                                <field name="location_id"/>
                            </list>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Action for Department Billing Contacts -->
    <record id="action_department_billing_contacts" model="ir.actions.act_window">
        <field name="name">Department Billing Contacts</field>
        <field name="res_model">records.department.billing.contact</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Set up billing contacts for departments
            </p>
            <p>
                Configure which contacts receive invoices for each department
                when using separate department billing.
            </p>
        </field>
    </record>

    <!-- Menu Item for Department Billing Contacts -->
    <menuitem id="menu_department_billing_contacts" 
              name="Department Billing Contacts" 
              parent="records_management.menu_records_billing"
              action="action_department_billing_contacts"
              sequence="25"/>

</odoo>
