<?xml version="1.0" encoding="utf-8"?>
<!--
ir_ui_view_views.xml

This file defines the Odoo views for the ir.ui.view model within the Records Management module.
It includes:
  - Tree view for listing views
  - Form view for editing individual views
  - Search view for filtering views
  - Window action for accessing the views
  - (Commented) menu item for integration into the module's menu structure

These definitions allow administrators to manage Odoo view records directly from the UI.
-->
<odoo>
    <data>
        <!-- Tree View -->
        <record id="ir_ui_view_view_tree" model="ir.ui.view">
            <field name="name">ir.ui.view.view.tree</field>
            <field name="model">ir.ui.view</field>
            <field name="type">list</field>
        <field name="arch" type="xml">
                <tree string="View">
                    <field name="name"/>
                    <field name="model"/>
                    <field name="priority"/>
                    <field name="active"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="ir_ui_view_view_form" model="ir.ui.view">
            <field name="name">ir.ui.view.view.form</field>
            <field name="model">ir.ui.view</field>
            <field name="type">form</field>
        <field name="arch" type="xml">
                <form string="View">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="model"/>
                            <field name="arch"/>
                            <field name="priority"/>
                            <field name="active"/>
                            <field name="type"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="ir_ui_view_view_search" model="ir.ui.view">
            <field name="name">ir.ui.view.view.search</field>
            <field name="model">ir.ui.view</field>
            <field name="type">search</field>
        <field name="arch" type="xml">
                <search string="Search View">
                    <field name="name"/>
                    <field name="model"/>
                    <field name="type"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_ir_ui_view" model="ir.actions.act_window">
            <field name="name">View</field>
            <field name="res_model">ir.ui.view</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu -->
        <!--
        <menuitem
            id="menu_ir_ui_view"
            name="View"
            action="action_ir_ui_view"
            parent="TODO_REPLACE_WITH_ACTUAL_PARENT_MENU_ID"
            sequence="10"/>
        -->
    </data>
</odoo>
