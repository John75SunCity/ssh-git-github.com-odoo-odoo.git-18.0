<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for barcode.pricing.tier -->
    <record id="view_barcode_pricing_tier_tree" model="ir.ui.view">
        <field name="name">barcode.pricing.tier.tree</field>
        <field name="model">barcode.pricing.tier</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for barcode.pricing.tier -->
    <record id="view_barcode_pricing_tier_form" model="ir.ui.view">
        <field name="name">barcode.pricing.tier.form</field>
        <field name="model">barcode.pricing.tier</field>
        <field name="arch" type="xml">
            <form string="Barcode Pricing Tier">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for barcode.pricing.tier -->
    <record id="view_barcode_pricing_tier_search" model="ir.ui.view">
        <field name="name">barcode.pricing.tier.search</field>
        <field name="model">barcode.pricing.tier</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action barcode.pricing.tier -->
    <record id="action_barcode_pricing_tier" model="ir.actions.act_window">
        <field name="name">Barcode Pricing Tier</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">barcode.pricing.tier</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Barcode Pricing Tier.
            </p>
        </field>
    </record>

</odoo>
