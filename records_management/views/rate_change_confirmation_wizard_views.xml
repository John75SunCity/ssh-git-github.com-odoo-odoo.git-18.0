<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
<!-- Tree view for rate.change.confirmation.wizard -->
    <record id="rate_change_confirmation_wizard_view_tree" model="ir.ui.view">
        <field name="name">rate.change.confirmation.wizard.view.tree</field>
        <field name="model">rate.change.confirmation.wizard</field>
        <field name="arch" type="xml">
            <list>
<field name="forecast_id"/>
<field name="effective_date"/>
<field name="revenue_impact"/>
<field name="customer_count"/>

            </list>
        </field>
    </record>

<!-- Form view for rate.change.confirmation.wizard -->
    <record id="rate_change_confirmation_wizard_view_form" model="ir.ui.view">
        <field name="name">rate.change.confirmation.wizard.view.form</field>
        <field name="model">rate.change.confirmation.wizard</field>
        <field name="arch" type="xml">
<form string="Rate Change Confirmation">
                <sheet>
<group>
    <group>
        <field name="forecast_id"/>
        <field name="effective_date"/>
        <field name="implementation_method"/>
    </group>
    <group>
        <field name="revenue_impact"/>
        <field name="customer_count"/>
        <field name="notification_required"/>
<field name="advance_notice_days" invisible="[['notification_required', '=', False]]"/>

    </group>
</group>
<group string="Approval" invisible="[['requires_approval', '=', False]]">
    <field name="requires_approval"/>
    <field name="approved_by_id" readonly="1"/>
    <field name="approval_date" readonly="1"/>
    <field name="approval_notes"/>
</group>
<footer>
    <button name="action_approve_changes" string="Approve Changes" type="object" class="btn-primary"/>
    <button name="action_implement_changes" string="Implement Changes" type="object" class="btn-success"/>
    <button string="Cancel" class="btn-secondary" special="cancel"/>
</footer>
                </sheet>
            </form>
        </field>
    </record>

<!-- Search view for rate.change.confirmation.wizard -->
    <record id="rate_change_confirmation_wizard_view_search" model="ir.ui.view">
        <field name="name">rate.change.confirmation.wizard.view.search</field>
        <field name="model">rate.change.confirmation.wizard</field>
        <field name="arch" type="xml">
            <search>
<field name="forecast_id"/>
<field name="effective_date"/>

                <group expand="1" string="Group By">
<filter string="Forecast" name="forecast_id" domain="[]" context="{'group_by':'forecast_id'}"/>
<filter string="Effective Date" name="effective_date" domain="[]" context="{'group_by':'effective_date'}"/>

                </group>
            </search>
        </field>
    </record>

    <!-- Tree view for Action -->
    <record id="action_rate_change_confirmation_wizard" model="ir.actions.act_window">
        <field name="name">Rate Change Confirmation Wizard</field>
        <field name="res_model">rate.change.confirmation.wizard</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There are no examples. Click here to add a new Rate Change Confirmation Wizard.
            </p>
        </field>
    </record>
</data>

</odoo>
