<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_records_request_type_tree" model="ir.ui.view">
            <field name="name">records.request.type.tree</field>
            <field name="model">records.request.type</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <tree string="Request Types">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_records_request_type_form" model="ir.ui.view">
            <field name="name">records.request.type.form</field>
            <field name="model">records.request.type</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <form string="Request Type">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_records_request_type" model="ir.actions.act_window">
            <field name="name">Request Types</field>
            <field name="res_model">records.request.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_records_request_type"
                  name="Request Types"
                  parent="records_management.menu_records_management_configuration"
                  action="action_records_request_type"
                  sequence="30"/>

    </data>
</odoo>
