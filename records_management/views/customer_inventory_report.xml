<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report
        id="customer_inventory_report"
        model="res.partner"
        string="Customer Inventory"
        report_type="qweb-pdf"
        name="records_management.customer_inventory_template"
    />
    <template id="customer_inventory_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="partner">
                <div class="page">
                    <h2><t t-esc="partner.name"/> Inventory</h2>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Serial Number</th>
                                <th>Location</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="serials" t-value="env['stock.production.lot'].search([('customer_id', '=', partner.id)])"/>
                            <t t-set="quants" t-value="env['stock.quant'].search([('lot_id', 'in', serials.ids), ('location_id.usage', '=', 'internal')])"/>
                            <t t-foreach="quants" t-as="quant">
                                <tr>
                                    <td><t t-esc="quant.product_id.name"/></td>
                                    <td><t t-esc="quant.lot_id.name"/></td>
                                    <td><t t-esc="quant.location_id.name"/></td>
                                    <td><t t-esc="quant.quantity"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>