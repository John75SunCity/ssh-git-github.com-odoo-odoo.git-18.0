<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- =============================================================== -->
        <!-- INTELLIGENT SEARCH CONFIGURATION MENU -->
        <!-- =============================================================== -->

        <!-- Search Configuration Menu Item -->
        <record id="menu_intelligent_search_config" model="ir.ui.menu">
            <field name="name">Search Configuration</field>
            <field name="parent_id" ref="base.menu_administration"/>
            <field name="sequence">50</field>
            <field name="groups_id" eval="[(4, ref('group_search_admin'))]"/>
        </record>

        <!-- Field Label Customization Menu (with Search Protection) -->
        <record id="menu_field_label_customization" model="ir.ui.menu">
            <field name="name">Field Label Customization</field>
            <field name="parent_id" ref="menu_intelligent_search_config"/>
            <field name="action" ref="action_field_label_customization"/>
            <field name="sequence">10</field>
            <field name="groups_id" eval="[(4, ref('group_search_admin'))]"/>
        </record>

        <!-- =============================================================== -->
        <!-- SEARCH CONFIGURATION ACTIONS -->
        <!-- =============================================================== -->

        <!-- Field Label Customization Action -->
        <record id="action_field_label_customization" model="ir.actions.act_window">
            <field name="name">Field Label Customization</field>
            <field name="res_model">field.label.customization</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure field label customizations
                </p>
                <p>
                    Customize field labels for your organization while maintaining search functionality integrity.
                    <br/>
                    <strong>Note:</strong> Search-critical fields are protected from customization.
                </p>
            </field>
        </record>

        <!-- Search Performance Monitor Action -->
        <record id="action_search_performance_monitor" model="ir.actions.server">
            <field name="name">Search Performance Monitor</field>
            <field name="model_id" ref="base.model_ir_config_parameter"/>
            <field name="state">code</field>
            <field name="code">
performance_info = env['ir.config_parameter'].get_search_performance_info()
action = {
    'type': 'ir.actions.client',
    'tag': 'display_notification',
    'params': {
        'title': 'Search Performance Settings',
        'message': f'Found {len(performance_info)} search configuration parameters',
        'type': 'success',
        'sticky': True,
    }
}
            </field>
            <field name="groups_id" eval="[(4, ref('group_search_admin'))]"/>
        </record>

        <!-- =============================================================== -->
        <!-- SEARCH CONFIGURATION VIEWS -->
        <!-- =============================================================== -->

        <!-- Enhanced Field Label Customization Tree View -->
        <record id="view_field_label_customization_tree" model="ir.ui.view">
            <field name="name">field.label.customization.tree</field>
            <field name="model">field.label.customization</field>
            <field name="arch" type="xml">
                <tree string="Field Label Customizations" decoration-danger="state=='failed'" decoration-success="state=='active'">
                    <field name="name"/>
                    <field name="model_name"/>
                    <field name="field_name"/>
                    <field name="custom_label"/>
                    <field name="scope"/>
                    <field name="state"/>
                    <field name="deployment_status"/>
                    <button name="%(action_search_performance_monitor)d" type="action" string="Performance Info" icon="fa-bar-chart" groups="records_management.group_search_admin"/>
                </tree>
            </field>
        </record>

        <!-- Enhanced Field Label Customization Form View -->
        <record id="view_field_label_customization_form" model="ir.ui.view">
            <field name="name">field.label.customization.form</field>
            <field name="model">field.label.customization</field>
            <field name="arch" type="xml">
                <form string="Field Label Customization">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="alert alert-info" role="alert">
                            <p>
                                <strong>Search Protection Active:</strong> Fields critical to intelligent search functionality are protected from customization.</p>
                            <p>Protected fields include: <code>container_id</code>,                                <code>box_number</code>,                                <code>search_keywords</code>,                                <code>alpha_range</code>,                                <code>date_range</code>,                                <code>parent_location_id</code>,                                <code>record_reference</code>,                                <code>location_code</code>, and other core relationship fields.</p>
                        </div>

                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="model_name"/>
                                <field name="field_name"/>
                            </group>
                            <group>
                                <field name="original_label"/>
                                <field name="custom_label"/>
                                <field name="scope"/>
                                <field name="deployment_status"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Configuration">
                                <group>
                                    <group>
                                        <field name="label_template"/>
                                        <field name="label_language"/>
                                        <field name="label_size"/>
                                    </group>
                                    <group>
                                        <field name="industry_type"/>
                                        <field name="compliance_framework"/>
                                        <field name="security_classification"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Available Fields">
                                <field name="available_fields" widget="text" readonly="1" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
