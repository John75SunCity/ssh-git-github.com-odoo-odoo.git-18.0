<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- List View -->
    <record id="paper_bale_line_view_list" model="ir.ui.view">
        <field name="name">paper.bale.line.view.list</field>
        <field name="model">paper.bale.line</field>
    <field name="arch" type="xml">
            <list string="Paper Bale Line">
                <field name="name"/>
                <field name="display_name"/>
                <field name="company_id"/>
                <field name="active"/>
                <field name="bale_id"/>
                <field name="weight_lbs"/>
                <field name="material_type"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="paper_bale_line_view_form" model="ir.ui.view">
        <field name="name">paper.bale.line.view.form</field>
        <field name="model">paper.bale.line</field>
    <field name="arch" type="xml">
            <form string="Paper Bale Line">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="display_name"/>
                        <field name="company_id"/>
                        <field name="active"/>
                        <field name="bale_id"/>
                        <field name="weight_lbs"/>
                        <field name="material_type"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="paper_bale_line_view_search" model="ir.ui.view">
        <field name="name">paper.bale.line.view.search</field>
        <field name="model">paper.bale.line</field>
    <field name="arch" type="xml">
            <search string="Search Paper Bale Line">
                <!-- Add search fields here -->
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_paper_bale_line" model="ir.actions.act_window">
        <field name="name">Paper Bale Line</field>
        <field name="res_model">paper.bale.line</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                <i class="fa fa-archive"/> Create your first bale line item
            </p>
            <p><b>‚ö†Ô∏è Prerequisites:</b></p>
            <ul>
                <li>‚úì <b>Paper bale created</b> - Go to: <i>Recycling &gt; Paper Bales</i></li>
                <li>‚úì <b>Material types defined</b> - White, mixed, cardboard, newsprint</li>
            </ul>
            <p><b>üìã To create a bale line:</b></p>
            <ol>
                <li>Click <b>New</b> to add a line item</li>
                <li>Auto-generated <b>Name</b></li>
                <li>Link to parent <b>Bale</b> (which paper bale this line belongs to)</li>
                <li>Enter <b>Weight</b> in pounds</li>
                <li>Select <b>Material Type</b>:
                    <ul>
                        <li><b>White Paper:</b> Highest value, office paper</li>
                        <li><b>Mixed Paper:</b> Moderate value, various types</li>
                        <li><b>Cardboard (OCC):</b> Corrugated boxes</li>
                        <li><b>Newsprint:</b> Lowest value, newspapers</li>
                    </ul>
                </li>
                <li>Mark as <b>Active</b> (uncheck to archive line)</li>
                <li>Select <b>Company</b> (for multi-company setups)</li>
                <li>Add <b>Notes</b> (contamination, quality issues)</li>
                <li>View <b>Display Name</b> (auto-generated description)</li>
                <li>Click <b>Save</b> to add the line</li>
            </ol>
            <p><b>üöÄ Key Features:</b><br/>
            ‚Ä¢ <b>Weight tracking:</b> Individual line weights in pounds<br/>
            ‚Ä¢ <b>Material classification:</b> White, mixed, cardboard, newsprint<br/>
            ‚Ä¢ <b>Bale linking:</b> Multiple lines per bale<br/>
            ‚Ä¢ <b>Auto-naming:</b> System-generated identifiers<br/>
            ‚Ä¢ <b>Active status:</b> Archive old lines<br/>
            ‚Ä¢ <b>Notes system:</b> Document quality and contamination<br/>
            </p>
            <p><b>üí° Pro Tips:</b><br/>
            ‚Ä¢ Separate material types for accurate pricing<br/>
            ‚Ä¢ Document contamination in notes (affects resale value)<br/>
            ‚Ä¢ Weight each material type separately before baling<br/>
            ‚Ä¢ Use consistent material classifications for reporting<br/>
            </p>
        </field>
    </record>
    </data>
</odoo>
