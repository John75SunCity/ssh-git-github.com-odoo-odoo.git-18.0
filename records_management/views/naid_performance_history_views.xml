<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="naid_performance_history_view_list" model="ir.ui.view">
            <field name="name">naid.performance.history.view.list</field>
            <field name="model">naid.performance.history</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                </list>
            </field>
        </record>
        <record id="naid_performance_history_view_form" model="ir.ui.view">
            <field name="name">naid.performance.history.view.form</field>
            <field name="model">naid.performance.history</field>
            <field name="arch" type="xml">
                <form string="Naid.Performance.History">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Name..." />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="naid_performance_history_view_search" model="ir.ui.view">
            <field name="name">naid.performance.history.view.search</field>
            <field name="model">naid.performance.history</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="1" string="Group By">
                        <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="action_naid_performance_history" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model naid.performance.history has state field - consider using default search filters -->
            <field name="name">Naid.Performance.History</field>
            <field name="res_model">naid.performance.history</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-history"/> Record your first NAID performance metric
                </p>
                <p><b>‚ö†Ô∏è Prerequisites:</b></p>
                <ul>
                    <li>‚úì <b>NAID certification active</b> - Go to: <i>Configuration &gt; NAID Certification</i></li>
                    <li>‚úì <b>Compliance events tracked</b> - Destruction, audits, inspections</li>
                </ul>
                <p><b>üìã To record performance history:</b></p>
                <ol>
                    <li>Click <b>New</b> to create a performance record</li>
                    <li>Enter a <b>Name/Description</b> (e.g., "Q1 2024 NAID Audit - Passed")</li>
                    <li>Click <b>Save</b> to record the history</li>
                </ol>
                <p><b>üöÄ Key Features:</b><br/>
                ‚Ä¢ <b>Historical tracking:</b> Maintain NAID compliance records<br/>
                ‚Ä¢ <b>State management:</b> Track performance status<br/>
                ‚Ä¢ <b>Group by name:</b> Organize records by category<br/>
                </p>
                <p><b>üí° Pro Tips:</b><br/>
                ‚Ä¢ Record all NAID audits and inspection results<br/>
                ‚Ä¢ Use consistent naming: "YYYY-QN Event Type - Result"<br/>
                ‚Ä¢ Keep complete history for certification renewals<br/>
                </p>
            </field>
        </record>
    </data>
</odoo>
