<!-- Enhanced Form view for Portal Requests -->
<record id="portal_request_view_form" model="ir.ui.view">
    <field name="name">portal.request.view.form</field>
    <field name="model">portal.request</field>
    <field name="type">form</field>
        <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_submit" string="Submit Request" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                <button name="action_approve" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'submitted')]}" groups="records_management.group_records_manager"/>
                <button name="action_reject" string="Reject" type="object" attrs="{'invisible': [('state', '!=', 'submitted')]}" groups="records_management.group_records_manager"/>
                <button name="action_reset_to_draft" string="Reset to Draft" type="object" attrs="{'invisible': [('state', 'in', ['draft', 'approved'])]}"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" type="object" name="action_view_attachments" icon="fa-file-text-o">
                        <div class="o_stat_info">
                            <field name="attachment_count" class="o_stat_value"/>
                            <span class="o_stat_text">Attachments</span>
                        </div>
                    </button>
                </div>

                <div class="oe_title">
                    <label for="name"/>
                    <h1>
                        <field name="name" placeholder="Portal Request Title..."/>
                    </h1>
                </div>

                <group>
                    <group>
                        <field name="partner_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="request_type"/>
                        <field name="priority" widget="priority"/>
                        <field name="requested_date"/>
                    </group>
                    <group>
                        <field name="user_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        <field name="active"/>
                    </group>
                </group>

                <notebook>
                    <page string="üìã Request Details">
                        <group>
                            <group>
                                <field name="description" placeholder="Detailed description of the request..."/>
                            </group>
                            <group>
                                <field name="estimated_hours"/>
                                <field name="actual_hours" attrs="{'invisible': [('state', 'not in', ['completed'])]}"/>
                                <field name="estimated_cost"/>
                                <field name="actual_cost" attrs="{'invisible': [('state', 'not in', ['completed'])]}"/>
                            </group>
                        </group>
                    </page>
                    <page string="üîí Compliance &amp; Audit">
                        <group>
                            <group string="Tracking Information">
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="write_uid" readonly="1"/>
                            </group>
                            <group string="NAID Compliance">
                                <field name="requires_naid_compliance"/>
                                <field name="billing_status"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <!-- Mail Thread Integration -->
            <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
        </form>
    </field>
</record>

<!-- Enhanced Kanban view -->
<record id="portal_request_view_kanban" model="ir.ui.view">
    <field name="name">portal.request.view.kanban</field>
    <field name="model">portal.request</field>
    <field name="type">search</field>
        <field name="arch" type="xml">
        <kanban default_group_by="state" class="o_kanban_small_column o_kanban_portal_request">
            <field name="priority"/>
            <field name="partner_id"/>
            <field name="user_id"/>
            <field name="requested_date"/>
            <field name="state"/>
            <field name="activity_ids"/>
            <field name="activity_state"/>
            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_card oe_kanban_global_click #{kanban_color(record.priority.raw_value)}">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="o_kanban_record_subtitle">
                                    <field name="partner_id"/>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <i class="fa fa-calendar" role="img" aria-label="Date" title="Date"/>
                                    <field name="requested_date"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <div class="o_priority_star">
                                        <field name="priority" widget="priority" readonly="1"/>
                                    </div>
                                    <t t-if="record.activity_ids.raw_value.length > 0">
                                        <div class="o_kanban_inline_block">
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                    </t>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <img t-att-src="kanban_image('res.users', 'avatar_128', record.user_id.raw_value)" t-att-title="record.user_id.value" t-att-alt="record.user_id.value" class="oe_kanban_avatar"/>
                                </div>
                            </div>
                        </div>
                        <div class="oe_kanban_manage_button_section">
                            <div class="o_kanban_manage_view">
                                <a type="edit" class="btn btn-primary btn-sm">Edit</a>
                                <a type="delete" class="btn btn-secondary btn-sm">Delete</a>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

<!-- Enhanced Search view -->
<record id="portal_request_view_search" model="ir.ui.view">
    <field name="name">portal.request.view.search</field>
    <field name="model">portal.request</field>
    <field name="type">search</field>
        <field name="arch" type="xml">
        <search>
            <field name="name" string="Request Name" filter_domain="[('name', 'ilike', self)]"/>
            <field name="partner_id" string="Customer"/>
            <field name="user_id" string="Assigned User"/>
            <field name="request_type"/>
            <separator/>
            <filter string="Active" name="active" domain="[('active', '=', True)]"/>
            <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
            <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
            <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
            <separator/>
            <filter string="High Priority" name="high_priority" domain="[('priority', '=', '3')]"/>
            <filter string="My Requests" name="my_requests" domain="[('user_id', '=', uid)]"/>
            <separator/>
            <filter string="This Week" name="week" domain="[('requested_date', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
            <filter string="This Month" name="month" domain="[('requested_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
            <separator/>
            <filter invisible="1" string="Late Activities" name="activities_overdue" domain="[('activity_ids.date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]" help="Show requests with overdue activities"/>
            <filter invisible="1" string="Today Activities" name="activities_today" domain="[('activity_ids.date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"/>
            <separator/>
            <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            <group expand="0" string="Group By">
                <filter string="Customer" name="customer" context="{'group_by': 'partner_id'}"/>
                <filter string="Request Type" name="request_type" context="{'group_by': 'request_type'}"/>
                <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                <filter string="Priority" name="priority" context="{'group_by': 'priority'}"/>
                <filter string="Assigned User" name="user" context="{'group_by': 'user_id'}"/>
                <separator/>
                <filter string="Request Date" name="request_date" context="{'group_by': 'requested_date:month'}"/>
            </group>
        </search>
    </field>
</record>

