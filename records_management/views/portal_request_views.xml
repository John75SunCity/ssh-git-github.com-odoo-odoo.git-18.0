<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action for Single Conversion Button -->
        <record id="action_convert_to_work_order" model="ir.actions.server">
            <field name="name">Convert to Work Order</field>
            <field name="model_id" ref="records_management.model_portal_request"/>
            <field name="binding_model_id" ref="records_management.model_portal_request"/>
            <field name="state">code</field>
            <field name="code">record.action_convert_to_work_order()</field>
        </record>

        <!-- Action for Batch Conversion (Individual) -->
        <record id="action_batch_convert_to_work_orders" model="ir.actions.server">
            <field name="name">Convert to Individual Work Orders</field>
            <field name="model_id" ref="records_management.model_portal_request"/>
            <field name="binding_model_id" ref="records_management.model_portal_request"/>
            <field name="state">code</field>
            <field name="code">env['portal.request'].action_batch_convert_to_work_orders()</field>
        </record>

        <!-- Action for Merge and Convert -->
        <record id="action_merge_convert_to_work_orders" model="ir.actions.server">
            <field name="name">Merge and Convert to Work Orders</field>
            <field name="model_id" ref="records_management.model_portal_request"/>
            <field name="binding_model_id" ref="records_management.model_portal_request"/>
            <field name="state">code</field>
            <field name="code">env['portal.request'].action_merge_convert_to_work_orders()</field>
        </record>

        <record id="portal_request_view_kanban" model="ir.ui.view">
            <field name="name">portal.request.view.kanban</field>
            <field name="model">portal.request</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_portal_request">
                    <field name="name" />
                    <field name="display_name" />
                    <field name="request_type" />
                    <field name="partner_id" />
                    <field name="state" />
                    <field name="priority" />
                    <field name="requested_date" />
                    <field name="user_id" />
                    <field name="active" />
                    <field name="deadline" />
                    <field name="estimated_cost" />
                    <field name="billing_status" />
                    <field name="requires_naid_compliance" />
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_card_header">
                                    <strong>
                                        <i class="fa fa-clipboard" title="Request" />
                                        <field name="name" />
                                    </strong>
                                    <span class="float-end">
                                        <field name="priority" widget="priority" />
                                    </span>
                                    <div class="text-muted">
                                        <i class="fa fa-user" title="Customer" />
                                        <field name="partner_id" />
                                    </div>
                                </div>
                                <div class="o_kanban_card_content" t-att-title="record.name.raw_value" t-att-aria-label="record.name.raw_value" role="group">
                                    <div class="mb-2">
                                        <strong>Type:</strong>
                                        <field name="request_type" />
                                        <br />
                                        <strong>Requested:</strong>
                                        <field name="requested_date" widget="date" />
                                        <br />
                                        <strong>Deadline:</strong>
                                        <field name="deadline" widget="date" />
                                        <br />
                                        <strong>Assigned:</strong>
                                        <field name="user_id" />
                                        <br />
                                        <strong>Cost:</strong>
                                        <field name="estimated_cost" widget="monetary" />
                                    </div>
                                    <div t-if="record.priority.raw_value == '3'">
                                        <span class="badge badge-danger">
                                            <i class="fa fa-fire" /> Urgent Priority</span>
                                    </div>
                                    <div t-if="record.priority.raw_value == '2'">
                                        <span class="badge badge-warning">
                                            <i class="fa fa-bolt" /> High Priority</span>
                                    </div>
                                    <div t-if="record.state.raw_value == 'submitted'">
                                        <span class="badge badge-info">‚è≥ Awaiting Approval</span>
                                    </div>
                                    <div t-if="record.state.raw_value == 'approved'">
                                        <span class="badge badge-success">
                                            <i class="fa fa-check-circle text-success" /> Approved</span>
                                    </div>
                                    <div t-if="record.requires_naid_compliance.raw_value">
                                        <span class="badge badge-primary">
                                            <i class="fa fa-lock" /> NAID Compliant</span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="portal_request_view_tree" model="ir.ui.view">
            <field name="name">portal.request.view.tree</field>
            <field name="model">portal.request</field>
            <field name="arch" type="xml">
                <list string="Portal Requests" decoration-info="state == 'draft'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'">
                    <field name="name" string="Request #"/>
                    <field name="title" optional="show"/>
                    <field name="request_type" />
                    <field name="partner_id" />
                    <field name="create_date" />
                    <field name="priority" />
                    <field name="state" />
                    <field name="user_id" optional="show"/>
                </list>
            </field>
        </record>
        <record id="portal_request_view_form" model="ir.ui.view">
            <field name="name">portal.request.view.form</field>
            <field name="model">portal.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_submit" string="Submit Request" type="object" class="oe_highlight" invisible="state != 'draft'" />
                        <button name="action_approve" string="Approve" type="object" class="oe_highlight" invisible="1" groups="records_management.group_records_manager" />
                        <button name="action_reject" string="Reject" type="object" invisible="state != 'submitted'" groups="records_management.group_records_manager" />
                        <button name="action_start_progress" string="Start Progress" type="object" invisible="state != 'approved'" groups="records_management.group_records_manager" />
                        <button name="action_complete" string="Mark Complete" type="object" invisible="state != 'in_progress'" groups="records_management.group_records_manager" />
                        <button name="action_cancel" string="Cancel" type="object" invisible="state in ['completed', 'cancelled']" groups="records_management.group_records_manager" />
                        <button name="%(action_convert_to_work_order)d" string="Convert to Work Order" type="action" class="btn-primary" invisible="state not in ('submitted', 'approved')"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,in_progress,completed" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_attachments" icon="fa-paperclip">
                                <div class="o_stat_info">
                                    <field name="attachment_count" class="o_stat_value" />
                                    <span class="o_stat_text">Attachments</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" string="Request #"/>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                            <label for="title" string="Title"/>
                            <h2>
                                <field name="title" placeholder="Request title..."/>
                            </h2>
                        </div>
                        <group>
                            <group string="Request Information">
                                <field name="partner_id" options="{'no_create': True, 'no_create_edit': True}" />
                                <field name="request_type" />
                                <field name="priority" widget="priority" />
                                <field name="requires_naid_compliance" />
                                <field name="shredding_service_id" />
                            </group>
                            <group string="Assignment &amp; Timeline">
                                <field name="user_id" options="{'no_create': True, 'no_create_edit': True}" />
                                <field name="requested_date" />
                                <field name="deadline" />
                                <field name="completion_date" invisible="state != 'completed'" />
                                <field name="is_overdue" invisible="is_overdue == False" />
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" />
                                <field name="active" />
                            </group>
                        </group>
                        <notebook>
                            <page string=" Request Details">
                                <group>
                                    <group string="Description">
                                        <field name="description" placeholder="Detailed description of the request..." nolabel="1" />
                                    </group>
                                    <group string="Time &amp; Cost Estimation">
                                        <field name="estimated_hours" />
                                        <field name="actual_hours" invisible="state not in ['completed']" />
                                        <field name="estimated_cost" />
                                        <field name="actual_cost" invisible="state not in ['completed']" />
                                        <field name="billing_status" />
                                    </group>
                                </group>
                            </page>
                            <page string=" Compliance &amp; Signatures">
                                <group>
                                    <group string="Customer Signature">
                                        <field name="customer_signature" widget="signature" />
                                        <field name="customer_signature_date" invisible="customer_signature == False" />
                                    </group>
                                    <group string="Technician Signature">
                                        <field name="technician_signature" widget="signature" />
                                        <field name="technician_signature_date" invisible="technician_signature == False" />
                                    </group>
                                </group>
                                <group>
                                    <group string="Compliance Tracking">
                                        <field name="certificate_of_destruction_id" invisible="certificate_of_destruction_id == False" />
                                        <field name="work_order_id" invisible="work_order_id == False" />
                                    </group>
                                    <group string="Audit Information">
                                        <field name="create_date" readonly="1" />
                                        <field name="write_date" readonly="1" />
                                        <field name="create_uid" readonly="1" />
                                        <field name="write_uid" readonly="1" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
        <record id="portal_request_view_search" model="ir.ui.view">
            <field name="name">portal.request.view.search</field>
            <field name="model">portal.request</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Request #"/>
                    <field name="title"/>
                    <field name="partner_id" />
                    <field name="request_type" />
                    <field name="user_id" />
                    <field name="description" />
                    <separator />
                    <filter string="Active" name="active" domain="[('active', '=', True)]" />
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" />
                    <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]" />
                    <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]" />
                    <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]" />
                    <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]" />
                    <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]" />
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]" />
                    <separator />
                    <filter string="High Priority" name="high_priority" domain="[('priority', '=', '2')]" />
                    <filter string="Urgent Priority" name="urgent_priority" domain="[('priority', '=', '3')]" />
                    <filter string="Overdue" name="overdue" domain="[('is_overdue', '=', True)]" />
                    <filter string="NAID Compliant" name="naid_compliant" domain="[('requires_naid_compliance', '=', True)]" />
                    <filter string="My Requests" name="my_requests" domain="[('user_id', '=', uid)]" />
                    <separator />
                    <!-- Refactored: dynamic Python date arithmetic replaced with precomputed boolean flags -->
                    <filter string="This Week" name="week" domain="[('requested_last_7d', '=', True)]" />
                    <filter string="This Month" name="month" domain="[('requested_last_30d', '=', True)]" />
                    <separator />
                    <!-- Hidden technical filters reused by automated contexts; intentionally invisible -->
                    <filter invisible="1" string="Late Activities" name="activities_overdue" domain="[('activity_ids', '!=', False)]" help="Show requests with overdue activities" />
                    <filter invisible="1" string="Today Activities" name="activities_today" domain="[('activity_ids', '!=', False)]" />
                    <separator />
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]" />
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="customer" context="{'group_by': 'partner_id'}" />
                        <filter string="Request Type" name="request_type" context="{'group_by': 'request_type'}" />
                        <filter string="Status" name="state" context="{'group_by': 'state'}" />
                        <filter string="Priority" name="priority" context="{'group_by': 'priority'}" />
                        <filter string="Assigned User" name="user" context="{'group_by': 'user_id'}" />
                        <filter string="Billing Status" name="billing_status" context="{'group_by': 'billing_status'}" />
                        <separator />
                        <filter string="Request Date" name="request_date" context="{'group_by': 'requested_date:month'}" />
                        <filter string="Deadline" name="deadline" context="{'group_by': 'deadline:month'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="action_portal_request" model="ir.actions.act_window">
            <!-- Shows all portal requests - shredding, destruction, pickup, retrieval -->
            <field name="name">Portal Requests</field>
            <field name="res_model">portal.request</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-globe"/> No portal requests yet!
                </p>
                <p>
                    <b>‚ö†Ô∏è Prerequisites for portal requests:</b>
                </p>
                <ul>
                    <li>‚úì <b>Customer Portal Access</b> - Go to: <i>Settings &gt; Users</i> (grant portal access to customers)</li>
                    <li>‚úì <b>Request Types</b> configured - Define available request types (retrieval, destruction, service)</li>
                    <li>‚úì <b>Approval Workflow</b> - Set up approval rules and authorized signers</li>
                    <li>‚úì <b>Email Templates</b> - Configure notification templates for each stage</li>
                    <li>‚úì <b>Assigned Team</b> - Ensure staff are assigned to process requests</li>
                </ul>
                <p>
                    <b>üìã Understanding Portal Requests:</b>
                </p>
                <p>
                    Portal Requests enable <b>self-service customer interactions</b> through the customer portal. 
                    Customers can submit requests online, track progress in real-time, sign documents electronically, 
                    and receive notifications automatically. This streamlines operations and improves customer satisfaction.
                </p>
                <p>
                    <b>üíª Customer Portal Workflow (Customer Side):</b>
                </p>
                <ol>
                    <li>Customer logs into portal at: <i>yourcompany.odoo.com/my</i></li>
                    <li>Navigates to <b>Records Management</b> section</li>
                    <li>Clicks <b>Create Request</b> button</li>
                    <li>Selects <b>Request Type</b> (e.g., "Document Destruction Request")</li>
                    <li>Fills in details and uploads supporting documents</li>
                    <li>Adds items to request (selects containers/documents)</li>
                    <li>Reviews and clicks <b>Submit Request</b></li>
                    <li>Receives email confirmation with request number</li>
                    <li>Tracks status in portal (Draft ‚Üí Submitted ‚Üí Approved ‚Üí Completed)</li>
                    <li>Signs documents electronically when required</li>
                    <li>Downloads certificates/reports when ready</li>
                </ol>
                <p>
                    <b>‚öôÔ∏è Internal Processing Workflow (Staff Side):</b>
                </p>
                <ol>
                    <li>Portal request appears in <b>Portal Requests</b> menu automatically</li>
                    <li>System sends notification to assigned team members</li>
                    <li>Staff reviews request details and attached items</li>
                    <li>Click <b>Approve</b> or <b>Reject</b> (with reason if rejected)</li>
                    <li>If approved, request auto-creates:
                        <ul>
                            <li><b>Retrieval Order</b> (for document requests)</li>
                            <li><b>Destruction Certificate</b> (for destruction requests)</li>
                            <li><b>Service Task</b> (for service requests)</li>
                        </ul>
                    </li>
                    <li>Process the related records (fulfill retrieval, complete destruction, etc.)</li>
                    <li>Click <b>Complete</b> on portal request</li>
                    <li>Customer receives completion notification with certificates/documents</li>
                </ol>
                <p>
                    <b>üìä Portal Request States:</b>
                </p>
                <ul>
                    <li><b>Draft:</b> Customer creating request, not yet submitted</li>
                    <li><b>Submitted:</b> Awaiting internal review and approval</li>
                    <li><b>Approved:</b> Approved and in processing queue</li>
                    <li><b>In Progress:</b> Actively being processed by staff</li>
                    <li><b>Completed:</b> Request fulfilled, customer notified</li>
                    <li><b>Rejected:</b> Request denied (with explanation)</li>
                    <li><b>Cancelled:</b> Customer or staff cancelled request</li>
                </ul>
                <p>
                    <b>üöÄ Enterprise Features:</b><br/>
                    ‚Ä¢ Streamlined customer request processing<br/>
                    ‚Ä¢ Advanced workflow automation and approvals<br/>
                    ‚Ä¢ Real-time status tracking and notifications<br/>
                    ‚Ä¢ Full integration with Records Management system<br/>
                    ‚Ä¢ Collaborative request handling with activity tracking<br/>
                    ‚Ä¢ Electronic signature integration (Odoo Sign)<br/>
                    ‚Ä¢ Comprehensive analytics and reporting<br/>
                    ‚Ä¢ Automated notifications and escalations<br/>
                    ‚Ä¢ NAID compliance and audit trail management<br/>
                    ‚Ä¢ Mobile-friendly portal access
                </p>
                <p>
                    <b>üí° Pro Tip:</b> Use <i>My Requests</i> filter to see only your assigned requests. Enable email notifications to stay updated. Group by <i>Request Type</i> to organize your workload.
                </p>
            </field>
        </record>
    
        <!-- Duplicate menus removed - defined in records_management_menus.xml -->
    
    
    </data>
</odoo>
