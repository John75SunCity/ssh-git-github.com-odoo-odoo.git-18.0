<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- Enhanced Kanban view for Portal Requests -->
    <record id="portal_request_view_kanban" model="ir.ui.view">
        <field name="name">portal.request.view.kanban</field>
        <field name="model">portal.request</field>
        <field name="arch" type="xml">
<kanban default_group_by="state" class="o_kanban_portal_request">
                <field name="name"/>
                <field name="request_type"/>
                <field name="partner_id"/>
<field name="state"/>

                <field name="priority"/>
<field name="requested_date"/>
<field name="user_id"/>
<field name="active"/>

                <templates>
<t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
<strong>üìã    <field name="name"/>
</strong>
                                <span class="float-end">
                                    <field name="priority" widget="priority"/>
                                </span>
<div class="text-muted">üë§    <field name="partner_id"/>
</div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="mb-2">
<strong>Type:</strong>
<field name="request_type"/>

                                    <br/>
<strong>Requested:</strong>
<field name="requested_date" widget="date"/>

                                    <br/>
<strong>Assigned:</strong>
<field name="user_id"/>

                                </div>
                                <div t-if="record.priority.raw_value == 'high'">
                                    <span class="badge badge-danger">üî• High Priority</span>
                                </div>
<div t-if="record.state.raw_value == 'submitted'">
    <span class="badge badge-warning">‚è≥ Awaiting Approval</span>
</div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

<!-- Enhanced Tree view for Portal Requests -->
    <record id="portal_request_view_tree" model="ir.ui.view">
        <field name="name">portal.request.view.tree</field>
        <field name="model">portal.request</field>
        <field name="arch" type="xml">
<tree decoration-muted="not active" decoration-info="state == 'draft'" decoration-warning="state == 'submitted'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'">
                <field name="name"/>
<field name="partner_id" optional="show"/>
<field name="request_type" optional="show"/>
<field name="priority" widget="priority" optional="show"/>
<field name="state" decoration-info="state == 'draft'" decoration-warning="state == 'submitted'" decoration-success="state == 'approved'"/>
<field name="requested_date" optional="show"/>
<field name="user_id" widget="many2one_avatar_user" optional="show"/>
<field name="active" invisible="1"/>
<field name="company_id" groups="base.group_multi_company" optional="hide"/>

            </tree>
        </field>
    </record>

<!-- Enhanced Form view for Portal Requests -->
    <record id="portal_request_view_form" model="ir.ui.view">
        <field name="name">portal.request.view.form</field>
        <field name="model">portal.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
<button name="action_submit" string="Submit Request" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
<button name="action_approve" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'submitted')]}" groups="records_management.group_records_manager"/>
<button name="action_reject" string="Reject" type="object" attrs="{'invisible': [('state', '!=', 'submitted')]}" groups="records_management.group_records_manager"/>
<button name="action_reset_to_draft" string="Reset to Draft" type="object" attrs="{'invisible': [('state', 'in', ['draft', 'approved'])]}"/>
<field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>

                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
<button class="oe_stat_button" type="action" icon="fa-tasks" attrs="{'invisible': [('related_tasks_count', '=', 0)]}" context="{'default_portal_request_id': id}">
    <div class="o_stat_info">
        <field name="related_tasks_count" widget="statinfo" string="Tasks"/>
    </div>
</button>
                        <button class="oe_stat_button" type="object" name="action_view_related_documents" icon="fa-file-text-o">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Documents</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="request_type"/>
                            <field name="partner_id"/>
<field name="requested_date"/>

                            <field name="priority"/>
                        </group>
                        <group>
<field name="user_id"/>

                            <field name="due_date"/>
                            <field name="estimated_hours"/>
                            <field name="actual_hours"/>
<field name="active"/>
<field name="company_id" groups="base.group_multi_company"/>

                        </group>
                    </group>

                    <notebook>
                        <page string="Request Details">
                            <field name="description" nolabel="1" placeholder="Request description and details..."/>
                            <group>
                                <field name="special_instructions" placeholder="Special handling instructions..."/>
                                <field name="customer_contact_info"/>
                            </group>
                        </page>
                        <page string="Processing Notes">
                            <group>
                                <field name="processing_notes" placeholder="Internal processing notes..."/>
                                <field name="completion_notes" placeholder="Completion summary and notes..."/>
                                <field name="customer_feedback" placeholder="Customer feedback on completed request..."/>
                            </group>
                        </page>
<page string="Signatures &amp; Approvals">
                            <group>
                                <field name="customer_signature" widget="signature"/>
                                <field name="staff_signature" widget="signature"/>
                                <field name="requires_approval"/>
                                <field name="approval_status" attrs="{'invisible': [('requires_approval', '=', False)]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

<!-- Enhanced Search view for Portal Requests -->
    <record id="portal_request_view_search" model="ir.ui.view">
        <field name="name">portal.request.view.search</field>
        <field name="model">portal.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="request_type"/>
<field name="user_id"/>

<!-- State-based filters -->
<filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
<filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
<filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
<filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                
<!-- Priority and date filters -->
                <filter string="High Priority" name="high_priority" domain="[('priority', '=', 'high')]"/>
<filter string="Overdue" name="overdue" domain="[('due_date', '&lt;', context_today())]"/>
<filter string="Active" name="active" domain="[('active', '=', True)]"/>


                <separator/>
<filter string="My Requests" name="my_requests" domain="[('user_id', '=', uid)]"/>


                <group expand="0" string="Group By">
<filter string="Customer" name="customer" context="{'group_by': 'partner_id'}"/>
<filter string="Request Type" name="request_type" context="{'group_by': 'request_type'}"/>
<filter string="Status" name="state" context="{'group_by': 'state'}"/>
<filter string="Priority" name="priority" context="{'group_by': 'priority'}"/>
<filter string="Assigned User" name="user" context="{'group_by': 'user_id'}"/>
<separator/>
<filter string="Request Date" name="request_date" context="{'group_by': 'requested_date:month'}"/>

                </group>
            </search>
        </field>
    </record>

