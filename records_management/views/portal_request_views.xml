<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ðŸ“‹ PORTAL REQUESTS - Customer Service Management -->

    <!-- Kanban View -->
    <record id="view_portal_request_kanban" model="ir.ui.view">
        <field name="name">portal.request.kanban</field>
        <field name="model">portal.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_portal_request">
                <field name="name"/>
                <field name="request_type"/>
                <field name="customer_id"/>
                <field name="status"/>
                <field name="priority"/>
                <field name="submission_date"/>
                <field name="assigned_to"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <strong>ðŸ“‹                                    <field name="name"/>
                                </strong>
                                <span class="float-end">
                                    <field name="priority" widget="priority"/>
                                </span>
                                <div class="text-muted">ðŸ‘¤                                    <field name="customer_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="mb-2">
                                    <strong>Type:</strong>
                                    <field name="request_type"/>
                                    <br/>
                                    <strong>Submitted:</strong>
                                    <field name="submission_date" widget="date"/>
                                    <br/>
                                    <strong>Assigned:</strong>
                                    <field name="assigned_to"/>
                                </div>
                                <div t-if="record.priority.raw_value == 'high'">
                                    <span class="badge badge-danger">ðŸ”¥ High Priority</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List View -->
    <record id="view_portal_request_tree" model="ir.ui.view">
        <field name="name">portal.request.list</field>
        <field name="model">portal.request</field>
        <field name="arch" type="xml">
            <list decoration-danger="priority=='high'" decoration-warning="priority=='medium'" decoration-success="status=='completed'">
                <field name="name"/>
                <field name="request_type"/>
                <field name="customer_id"/>
                <field name="submission_date" widget="date"/>
                <field name="priority" widget="priority"/>
                <field name="status" widget="badge"/>
                <field name="assigned_to" widget="many2one_avatar_user"/>
                <field name="due_date" widget="date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_portal_request_form" model="ir.ui.view">
        <field name="name">portal.request.form</field>
        <field name="model">portal.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_assign" type="object" string="Assign" states="new" class="btn-primary"/>
                    <button name="action_start_processing" type="object" string="Start Processing" states="assigned" class="btn-success"/>
                    <button name="action_complete" type="object" string="Complete" states="in_progress" class="btn-success"/>
                    <button name="action_escalate" type="object" string="Escalate" states="assigned,in_progress" class="btn-warning"/>
                    <field name="status" widget="statusbar" statusbar_visible="new,assigned,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_related_documents" icon="fa-file-text-o">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Documents</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="request_type"/>
                            <field name="customer_id"/>
                            <field name="submission_date"/>
                            <field name="priority"/>
                        </group>
                        <group>
                            <field name="assigned_to"/>
                            <field name="due_date"/>
                            <field name="estimated_hours"/>
                            <field name="actual_hours"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Request Details">
                            <field name="description" nolabel="1" placeholder="Request description and details..."/>
                            <group>
                                <field name="special_instructions" placeholder="Special handling instructions..."/>
                                <field name="customer_contact_info"/>
                            </group>
                        </page>
                        <page string="Processing Notes">
                            <group>
                                <field name="processing_notes" placeholder="Internal processing notes..."/>
                                <field name="completion_notes" placeholder="Completion summary and notes..."/>
                                <field name="customer_feedback" placeholder="Customer feedback on completed request..."/>
                            </group>
                        </page>
                        <page string="Signatures &amp; Approvals">
                            <group>
                                <field name="customer_signature" widget="signature"/>
                                <field name="staff_signature" widget="signature"/>
                                <field name="requires_approval"/>
                                <field name="approval_status" attrs="{'invisible': [('requires_approval', '=', False)]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_portal_request_search" model="ir.ui.view">
        <field name="name">portal.request.search</field>
        <field name="model">portal.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="request_type"/>
                <field name="assigned_to"/>

                <filter string="New" name="new" domain="[('status', '=', 'new')]"/>
                <filter string="Assigned" name="assigned" domain="[('status', '=', 'assigned')]"/>
                <filter string="In Progress" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                <filter string="High Priority" name="high_priority" domain="[('priority', '=', 'high')]"/>
                <filter string="Overdue" name="overdue" domain="[('due_date', '&lt;', context_today())]"/>

                <separator/>
                <filter string="My Requests" name="my_requests" domain="[('assigned_to', '=', uid)]"/>

                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'request_type'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Assigned To" name="group_assigned" context="{'group_by': 'assigned_to'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_portal_request" model="ir.actions.act_window">
        <field name="name">Portal Requests</field>
        <field name="res_model">portal.request</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_new': 1, 'search_default_assigned': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ðŸ“‹ No customer requests yet!
            </p>
            <p>Customer service requests will appear here when submitted through the portal.</p>
        </field>
    </record>

</odoo>
