<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="portal_request_tree_view" model="ir.ui.view">
        <field name="name">portal.request.tree</field>
        <field name="model">portal.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="department_id"/>
                <field name="request_type"/>
                <field name="state"/>
                <field name="create_date"/>
                <field name="is_walk_in" widget="badge" decoration-success="is_walk_in == True" decoration-muted="is_walk_in == False" attrs="{'column_invisible': [('parent', '=', False)]}" string="Walk-in"/>
                <field name="linked_visitor_id" options="{'no_create': True}"/>
            </list>
        </field>
    </record>

    <record id="portal_request_form_view" model="ir.ui.view">
        <field name="name">portal.request.form</field>
        <field name="model">portal.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="partner_id"/>
                        <field name="department_id"/>
                        <field name="request_type"/>
                        <field name="state"/>
                    </group>
                    <group>
                        <field name="description" widget="html"/>
                        <field name="suggested_date"/>
                    </group>
                    <group string="Signatures (NAID Compliant)">
                        <field name="sign_request_id" widget="sign_request"/>
                        <field name="requestor_signature_date"/>
                        <field name="admin_signature_date"/>
                    </group>
                    <group string="Visitor Integration (Walk-in Services)">
                        <field name="is_walk_in" help="Flag for walk-in shred/destruction; links to POS for auditing."/>
                        <field name="linked_visitor_id" options="{'no_create': True}" help="Linked frontdesk visit (NAID traceable)."/>
                    </group>
                    <group string="Links">
                        <field name="fsm_task_id"/>
                        <field name="invoice_id"/>
                        <field name="quote_id"/>
                    </group>
                    <group string="Audit Log (ISO Compliant)">
                        <field name="hashed_partner_ref" readonly="1" help="Hashed customer reference for secure auditing (no PII exposure)."/>
                        <field name="audit_log" widget="html" readonly="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="portal_request_kanban_view" model="ir.ui.view">
        <field name="name">portal.request.kanban</field>
        <field name="model">portal.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="state"/>
                <field name="request_type"/>
                <field name="is_walk_in"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_content" t-attf-class="oe_kanban_color_#{kanban_getcolor(record.state.raw_value)}">
                            <strong><field name="name"/></strong>
                            <div><field name="request_type"/></div>
                            <div><field name="partner_id"/></div>
                            <div t-if="record.is_walk_in.raw_value"><span class="badge bg-success">Walk-in</span></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="portal_request_action" model="ir.actions.act_window">
        <field name="name">Portal Requests</field>
        <field name="res_model">portal.request</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new request</p>
        </field>
    </record>

    <!-- Note: Menu moved to separate file to ensure proper loading order -->
    <!-- See views/portal_request_menus.xml -->
</odoo>
