<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="records_approval_step_view_tree" model="ir.ui.view">
            <field name="name">records.approval.step.view.tree</field>
            <field name="model">records.approval.step</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                </list>
            </field>
        </record>
        <record id="records_approval_step_view_form" model="ir.ui.view">
            <field name="name">records.approval.step.view.form</field>
            <field name="model">records.approval.step</field>
            <field name="arch" type="xml">
                <form string="Records Approval Step">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Name..." />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="records_approval_step_view_search" model="ir.ui.view">
            <field name="name">records.approval.step.view.search</field>
            <field name="model">records.approval.step</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="1" string="Group By">
                        <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="action_records_approval_step" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model records.approval.step has state field - consider using default search filters -->
            <field name="name">Records Approval Step</field>
            <field name="res_model">records.approval.step</field>
            <field name="view_mode>tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
            There is no examples click here to add new Records Approval Step.
        </p>
            </field>
        </record>
    </data>
</odoo>
