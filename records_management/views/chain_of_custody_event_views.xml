<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Chain of Custody Event List View -->
    <record id="chain_of_custody_event_view_list" model="ir.ui.view">
        <field name="name">chain.of.custody.event.view.list</field>
        <field name="model">chain.of.custody.event</field>
        <field name="arch" type="xml">
            <list string="Chain of Custody Events" default_order="event_date desc">
                <field name="event_date"/>
                <field name="event_type"/>
                <field name="custody_id"/>
                <field name="partner_id"/>
                <field name="from_location_id"/>
                <field name="to_location_id"/>
                <field name="responsible_person"/>
                <field name="compliance_status" decoration-success="compliance_status == 'compliant'" decoration-warning="compliance_status == 'pending_review'" decoration-danger="compliance_status == 'non_compliant'"/>
                <field name="signature_verified" widget="boolean_toggle"/>
                <field name="item_count"/>
                <field name="duration_since_previous" widget="float_time"/>
            </list>
        </field>
    </record>

    <!-- Chain of Custody Event Form View -->
    <record id="chain_of_custody_event_view_form" model="ir.ui.view">
        <field name="name">chain.of.custody.event.view.form</field>
        <field name="model">chain.of.custody.event</field>
        <field name="arch" type="xml">
            <form string="Chain of Custody Event">
                <header>
                    <button name="action_verify_signature" string="Verify Signature" type="object"
                            class="btn-primary" invisible="signature_data == False or signature_verified == True"/>
                    <button name="action_mark_compliant" string="Mark Compliant" type="object"
                            class="btn-success" invisible="compliance_status == 'compliant'"/>
                    <button name="action_flag_non_compliant" string="Flag Non-Compliant" type="object"
                            class="btn-danger" invisible="compliance_status == 'non_compliant'"/>
                    <field name="compliance_status" widget="statusbar" statusbar_visible="compliant,pending_review,non_compliant"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Event Details">
                            <field name="custody_id" required="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="event_date" required="1"/>
                            <field name="event_type" required="1"/>
                            <field name="responsible_person"/>
                            <field name="responsible_user_id"/>
                        </group>
                        <group string="Location &amp; Movement">
                            <field name="from_location_id"/>
                            <field name="to_location_id"/>
                            <field name="location"/>
                            <field name="gps_coordinates"/>
                            <field name="duration_since_previous" widget="float_time"/>
                        </group>
                    </group>
                    <group>
                        <group string="Items &amp; Inventory">
                            <field name="affected_items"/>
                            <field name="item_count"/>
                        </group>
                        <group string="Environmental Conditions">
                            <field name="temperature"/>
                            <field name="humidity"/>
                        </group>
                    </group>
                    <group>
                        <group string="Compliance &amp; Audit">
                            <field name="audit_reference"/>
                            <field name="signature_verified"/>
                            <field name="signature_data" widget="binary" filename="signature.png" invisible="signature_data == False"/>
                        </group>
                    </group>
                    <group string="Documentation">
                        <field name="notes" placeholder="Additional notes about this custody event..."/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Chain of Custody Event Search View -->
    <record id="chain_of_custody_event_view_search" model="ir.ui.view">
        <field name="name">chain.of.custody.event.view.search</field>
        <field name="model">chain.of.custody.event</field>
        <field name="arch" type="xml">
            <search string="Search Chain of Custody Events">
                <field name="custody_id" string="Custody Chain"/>
                <field name="partner_id" string="Customer"/>
                <field name="event_type"/>
                <field name="responsible_person"/>
                <field name="location"/>
                <field name="audit_reference"/>
                <field name="notes"/>
                <separator/>
                <filter name="today" string="Today" domain="[('event_date', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0)), ('event_date', '&lt;=', datetime.datetime.now().replace(hour=23, minute=59, second=59))]"/>
                <filter name="this_week" string="This Week" domain="[('event_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('event_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter name="this_month" string="This Month" domain="[('event_date', '&gt;=', context_today().replace(day=1)), ('event_date', '&lt;=', (context_today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1) - datetime.timedelta(days=1))]"/>
                <separator/>
                <filter name="compliant" string="Compliant" domain="[('compliance_status', '=', 'compliant')]"/>
                <filter name="pending_review" string="Pending Review" domain="[('compliance_status', '=', 'pending_review')]"/>
                <filter name="non_compliant" string="Non-Compliant" domain="[('compliance_status', '=', 'non_compliant')]"/>
                <separator/>
                <filter name="signature_verified" string="Signature Verified" domain="[('signature_verified', '=', True)]"/>
                <filter name="signature_pending" string="Signature Pending" domain="[('signature_verified', '=', False), ('signature_data', '!=', False)]"/>
                <separator/>
                <filter name="pickup_events" string="Pickup Events" domain="[('event_type', '=', 'pickup')]"/>
                <filter name="transport_events" string="Transport Events" domain="[('event_type', '=', 'transport')]"/>
                <filter name="destruction_events" string="Destruction Events" domain="[('event_type', '=', 'destruction')]"/>
                <filter name="exception_events" string="Exception Events" domain="[('event_type', '=', 'exception')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_custody" string="Custody Chain" context="{'group_by': 'custody_id'}"/>
                    <filter name="group_by_customer" string="Customer" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_event_type" string="Event Type" context="{'group_by': 'event_type'}"/>
                    <filter name="group_by_compliance" string="Compliance Status" context="{'group_by': 'compliance_status'}"/>
                    <filter name="group_by_date" string="Event Date" context="{'group_by': 'event_date:month'}"/>
                    <filter name="group_by_location" string="Location" context="{'group_by': 'location'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Chain of Custody Event Kanban View -->
    <record id="chain_of_custody_event_view_kanban" model="ir.ui.view">
        <field name="name">chain.of.custody.event.view.kanban</field>
        <field name="model">chain.of.custody.event</field>
        <field name="arch" type="xml">
            <kanban default_group_by="event_type" class="o_kanban_small_column" quick_create="false">
                <field name="event_date"/>
                <field name="event_type"/>
                <field name="custody_id"/>
                <field name="partner_id"/>
                <field name="compliance_status"/>
                <field name="signature_verified"/>
                <field name="responsible_person"/>
                <field name="location"/>
                <field name="item_count"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                </div>
                            </div>
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="display_name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_top_right">
                                            <div class="o_kanban_tags">
                                                <span t-if="record.compliance_status.raw_value == 'compliant'" class="badge badge-success">
                                                    <i class="fa fa-check"/> Compliant
                                                </span>
                                                <span t-if="record.compliance_status.raw_value == 'pending_review'" class="badge badge-warning">
                                                    <i class="fa fa-clock-o"/> Pending
                                                </span>
                                                <span t-if="record.compliance_status.raw_value == 'non_compliant'" class="badge badge-danger">
                                                    <i class="fa fa-exclamation-triangle"/> Non-Compliant
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_subtitle">
                                            <i class="fa fa-link"/> <field name="custody_id"/>
                                        </div>
                                        <div class="o_kanban_record_subtitle" t-if="record.partner_id.raw_value">
                                            <i class="fa fa-user"/> <field name="partner_id"/>
                                        </div>
                                        <div class="o_kanban_record_subtitle" t-if="record.location.raw_value">
                                            <i class="fa fa-map-marker"/> <field name="location"/>
                                        </div>
                                        <div class="o_kanban_record_subtitle" t-if="record.responsible_person.raw_value">
                                            <i class="fa fa-user-circle"/> <field name="responsible_person"/>
                                        </div>
                                        <div class="o_kanban_record_subtitle" t-if="record.item_count.raw_value">
                                            <i class="fa fa-cubes"/> <field name="item_count"/> items
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span class="oe_kanban_text_grey">
                                                <field name="event_date" widget="date"/>
                                            </span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span t-if="record.signature_verified.raw_value" class="fa fa-check-circle text-success" title="Signature Verified"/>
                                            <span t-if="!record.signature_verified.raw_value" class="fa fa-exclamation-circle text-warning" title="Signature Pending"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Chain of Custody Event Action Window -->
    <record id="chain_of_custody_event_action" model="ir.actions.act_window">
        <field name="name">Chain of Custody Events</field>
        <field name="res_model">chain.of.custody.event</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="search_view_id" ref="chain_of_custody_event_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first chain of custody event!
            </p>
            <p>
                Chain of custody events track the detailed movement and handling of records throughout their lifecycle.
                This provides comprehensive audit trails for NAID AAA compliance and customer transparency.
            </p>
        </field>
    </record>

    <!-- Menu Item for Chain of Custody Events -->
    <menuitem id="chain_of_custody_event_menu"
              name="Custody Events"
              parent="records_management.menu_chain_custody"
              action="chain_of_custody_event_action"
              sequence="20"/>

</odoo>
