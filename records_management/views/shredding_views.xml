<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- üí• SHREDDING SERVICES - NAID AAA Certified -->

    <!-- Kanban View -->
    <record id="view_shredding_service_kanban" model="ir.ui.view">
        <field name="name">shredding.service.kanban</field>
        <field name="model">shredding.service</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_shredding_dashboard">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="service_type"/>
                <field name="status"/>
                <field name="scheduled_date"/>
                <field name="destruction_method"/>
                <field name="naid_compliance_level"/>
                <field name="certificate_required"/>
                <field name="witness_required"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <strong>üí• <field name="name"/></strong>
                                <div class="text-muted">üë§ <field name="partner_id"/></div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="mb-2">
                                    <strong>Type:</strong> <field name="service_type"/><br/>
                                    <strong>Method:</strong> <field name="destruction_method"/><br/>
                                    <strong>Date:</strong> <field name="scheduled_date" widget="date"/>
                                </div>
                                <div class="badges">
                                    <span class="badge badge-primary" t-if="record.naid_compliance_level.raw_value">
                                        üèÖ <field name="naid_compliance_level"/>
                                    </span>
                                    <span class="badge badge-warning" t-if="record.certificate_required.raw_value">
                                        üìú Certificate Required
                                    </span>
                                    <span class="badge badge-info" t-if="record.witness_required.raw_value">
                                        üëÅÔ∏è Witness Required
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List View -->
    <record id="view_shredding_service_tree" model="ir.ui.view">
        <field name="name">shredding.service.tree</field>
        <field name="model">shredding.service</field>
        <field name="arch" type="xml">
            <tree decoration-warning="status=='scheduled'" decoration-success="status=='completed'" decoration-danger="status=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="service_type"/>
                <field name="destruction_method"/>
                <field name="scheduled_date" widget="date"/>
                <field name="naid_compliance_level"/>
                <field name="status" widget="badge"/>
                <field name="certificate_required" widget="boolean_toggle"/>
                <field name="witness_required" widget="boolean_toggle"/>
                <field name="total_weight"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_shredding_service_form" model="ir.ui.view">
        <field name="name">shredding.service.form</field>
        <field name="model">shredding.service</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm Service" states="draft" class="btn-primary"/>
                    <button name="action_start_shredding" type="object" string="Start Shredding" states="confirmed" class="btn-success"/>
                    <button name="action_complete" type="object" string="Complete" states="in_progress" class="btn-success"/>
                    <button name="action_generate_certificate" type="object" string="Generate Certificate" states="completed" class="btn-info"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_destruction_items" icon="fa-file-text-o">
                            <div class="o_stat_info">
                                <span class="o_stat_value"><field name="item_count"/></span>
                                <span class="o_stat_text">Items</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_certificate" icon="fa-certificate" t-if="certificate_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Certificate</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="service_type"/>
                            <field name="destruction_method"/>
                            <field name="scheduled_date"/>
                        </group>
                        <group>
                            <field name="naid_compliance_level"/>
                            <field name="certificate_required"/>
                            <field name="witness_required"/>
                            <field name="total_weight"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Destruction Items">
                            <field name="destruction_item_ids" mode="list">
                                <tree editable="bottom">
                                    <field name="item_description"/>
                                    <field name="quantity"/>
                                    <field name="weight"/>
                                    <field name="container_type"/>
                                    <field name="destruction_status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Service Details">
                            <group>
                                <field name="service_location"/>
                                <field name="assigned_technician"/>
                                <field name="witness_name" attrs="{'required': [('witness_required', '=', True)], 'invisible': [('witness_required', '=', False)]}"/>
                                <field name="witness_company" attrs="{'invisible': [('witness_required', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="special_instructions" placeholder="Special handling instructions..."/>
                                <field name="completion_notes" placeholder="Service completion notes..."/>
                            </group>
                        </page>
                        <page string="Compliance &amp; Certification">
                            <group>
                                <field name="certificate_id" readonly="1"/>
                                <field name="chain_of_custody_ids" mode="list">
                                    <tree>
                                        <field name="event_type"/>
                                        <field name="event_date"/>
                                        <field name="responsible_person"/>
                                        <field name="location"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_shredding_service_search" model="ir.ui.view">
        <field name="name">shredding.service.search</field>
        <field name="model">shredding.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="service_type"/>
                <field name="destruction_method"/>
                
                <filter string="Scheduled" name="scheduled" domain="[('status', '=', 'scheduled')]"/>
                <filter string="In Progress" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                <filter string="Certificate Required" name="cert_required" domain="[('certificate_required', '=', True)]"/>
                <filter string="Witness Required" name="witness_required" domain="[('witness_required', '=', True)]"/>
                
                <separator/>
                <filter string="This Week" name="this_week" domain="[('scheduled_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('scheduled_date', '&lt;', (context_today() + datetime.timedelta(days=7-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Service Type" name="group_type" context="{'group_by': 'service_type'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'scheduled_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_shredding_service" model="ir.actions.act_window">
        <field name="name">Shredding Services</field>
        <field name="res_model">shredding.service</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_scheduled': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üí• Create your first shredding service!
            </p>
            <p>Schedule secure document destruction with NAID AAA compliance tracking.</p>
        </field>
    </record>

</odoo>
