<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View records.usage.tracking View List -->
    <record id="view_records_usage_tracking_list" model="ir.ui.view">
        <field name="name">view.records.usage.tracking.list</field>
        <field name="model">records.usage.tracking</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View records.usage.tracking form -->
    <record id="view_records_usage_tracking_form" model="ir.ui.view">
        <field name="name">view.records.usage.tracking.form</field>
        <field name="model">records.usage.tracking</field>
        <field name="arch" type="xml">
            <form string="Records Usage Tracking">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View records.usage.tracking search -->
    <record id="view_records_usage_tracking_search" model="ir.ui.view">
        <field name="name">view.records.usage.tracking.search</field>
        <field name="model">records.usage.tracking</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action records.usage.tracking -->
    <record id="action_records_usage_tracking" model="ir.actions.act_window">
        <field name="name">Records Usage Tracking</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.usage.tracking</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records Usage Tracking.
            </p>
        </field>
    </record>

</odoo>
