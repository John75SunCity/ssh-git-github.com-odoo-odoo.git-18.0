<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Tree view for PAPER -->

    <!-- Kanban view for KANBAN -->
    <record id="load_view_kanban" model="ir.ui.view">
        <field name="name">load.view.kanban</field>
        <field name="model">paper.bale.load</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" sample="1" quick_create="false" class="o_kanban_small_column">
                <field name="name"/>
                <field name="state"/>
                <field name="total_weight"/>
                <field name="bale_count"/>
                <field name="market_price_per_ton"/>
                <field name="estimated_revenue"/>
                <field name="load_date"/>
                <field name="buyer_company"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <span class="float-end">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'secondary', 'ready': 'primary', 'loading': 'warning', 'shipped': 'info', 'sold': 'success', 'cancelled': 'danger'}}"/>
                                    </span>
                                </div>
                                <span class="o_kanban_record_subtitle text-muted">
                                    � <field name="bale_count"/> bales | <field name="buyer_company"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Weight:</strong> <field name="total_weight" widget="float"/> lbs<br/>
                                        <strong>Market Price:</strong> $<field name="market_price_per_ton"/>/ton
                                    </div>
                                    <div class="col-6">
                                        <strong>Revenue:</strong> $<field name="estimated_revenue" widget="float"/><br/>
                                        <strong>Load Date:</strong> <field name="load_date" widget="date"/>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge badge-pill badge-info">
                                        � <field name="total_weight" widget="float"/> lbs
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="activity_state" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree view for TREE -->
    <record id="load_view_tree" model="ir.ui.view">
        <field name="name">load.view.tree</field>
        <field name="model">paper.bale.load</field>
        <field name="arch" type="xml">
            <list string="Paper Bale Load Management" decoration-success="state=='sold'" decoration-info="state=='shipped'" decoration-warning="state=='loading'" decoration-muted="state=='cancelled'" multi_edit="1" sample="1">
                <header>
                    <button name="action_prepare_load" type="object" string="Prepare Load"/>
                    <button name="action_start_loading" type="object" string="Start Loading"/>
                    <button name="action_ship_load" type="object" string="Ship Load"/>
                    <button name="action_mark_sold" type="object" string="Mark Sold"/>
                </header>
                <field name="name" string="Load #"/>
                <field name="load_date" widget="date"/>
                <field name="buyer_company" string="Buyer"/>
                <field name="bale_count" string="Bales" sum="Total Bales"/>
                <field name="total_weight" string="Weight (lbs)" widget="float" sum="Total Weight"/>
                <field name="market_price_per_ton" string="Price/Ton" widget="monetary"/>
                <field name="estimated_revenue" string="Est. Revenue" widget="monetary" sum="Total Revenue"/>
                <field name="shipping_date" string="Ship Date" widget="date"/>
                <field name="state" string="Status" widget="badge" decoration-success="state=='sold'" decoration-info="state=='shipped'" decoration-warning="state=='loading'"/>
                <field name="activity_exception_decoration" widget="activity_exception"/>
            </list>
        </field>
    </record>

    <!-- Form view for FORM -->
    <record id="load_view_form" model="ir.ui.view">
        <field name="name">load.view.form</field>
        <field name="model">paper.bale.load</field>
        <field name="arch" type="xml">
            <form string="Paper Bale Load Management">
                <header>
                    <button name="action_prepare_load" string="Prepare Load" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start_loading" string="Start Loading" type="object" class="btn-primary" invisible="state != 'ready'"/>
                    <button name="action_ship_load" string="Ship Load" type="object" class="btn-success" invisible="state != 'loading'"/>
                    <button name="action_mark_sold" string="Mark Sold" type="object" class="btn-success" invisible="state != 'shipped'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ['draft', 'ready', 'loading']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,ready,loading,shipped,sold"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
<button name="action_view_bales" type="object" class="oe_stat_button" icon="fa-cubes" title="View Paper Bales">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="bale_count"/>
                                </span>
                                <span class="o_stat_text">Paper Bales</span>
                            </div>
                        </button>
<button name="action_view_revenue_report" type="object" class="oe_stat_button" icon="fa-dollar" title="View Revenue Report">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="estimated_revenue" widget="monetary"/>
                                </span>
                                <span class="o_stat_text">Revenue</span>
                            </div>
                        </button>
<button name="action_view_weight_tickets" type="object" class="oe_stat_button" icon="fa-balance-scale" title="View Weight Tickets">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="weight_ticket_count"/>
                                </span>
                                <span class="o_stat_text">Weight Tickets</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Load Number"/>
                        </h1>
                        <div class="o_row">
                            <field name="load_date" widget="date"/>
                            <label for="buyer_company" string="Buyer:"/>
                            <field name="buyer_company" placeholder="Paper Company"/>
                        </div>
                    </div>

                    <group>
                        <group name="load_details" string="📦 Load Details">
                            <field name="total_weight" widget="float"/>
                            <field name="bale_count"/>
                            <field name="average_bale_weight" widget="float"/>
                            <field name="load_quality_grade"/>
                            <field name="moisture_content" widget="percentage"/>
                            <field name="contamination_level"/>
                        </group>
                        <group name="market_details" string="💰 Market Details">
                            <field name="market_price_per_ton" widget="monetary"/>
                            <field name="estimated_revenue" widget="monetary"/>
                            <field name="actual_sale_price" widget="monetary" invisible="state != 'sold'"/>
                            <field name="price_variance" widget="monetary" invisible="state != 'sold'"/>
                            <field name="buyer_company"/>
                            <field name="sale_contract_number" invisible="state not in ['shipped', 'sold']"/>
                        </group>
                    </group>
                    <group name="tracking" string="Tracking and Status">
                        <field name="priority" widget="priority"/>
                        <field name="temperature_controlled" widget="boolean_toggle"/>
                        <field name="hazmat_required" widget="boolean_toggle"/>
                        <field name="special_instructions" placeholder="Special handling instructions..."/>
                        <field name="estimated_delivery" widget="datetime"/>
                        <field name="actual_delivery" widget="datetime" invisible="state != 'delivered'"/>
                    </group>

                    <notebook>
                        <page string="Load Items" name="load_items">
                            <field name="bale_ids" mode="list,kanban">
                                <list string="Paper Bales" editable="bottom">
                                    <field name="bale_number"/>
                                    <field name="weight" sum="Total Weight"/>
                                    <field name="quality_grade"/>
                                    <field name="moisture_content" widget="percentage"/>
                                    <field name="contamination_notes"/>
                                    <field name="production_date" widget="date"/>
                                    <field name="value_per_ton" widget="monetary"/>
                                </list>
                                <kanban>
                                    <field name="bale_number"/>
                                    <field name="weight"/>
                                    <field name="quality_grade"/>
                                    <field name="value_per_ton"/>
                                    <templates>
                                        <t t-name="card">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_record_top">
                                                    <strong><field name="bale_number"/></strong>
                                                    <span class="float-end">Grade: <field name="quality_grade"/></span>
                                                </div>
                                                <div class="o_kanban_record_body">
                                                    Weight: <field name="weight"/> lbs<br/>
                                                    Value: $<field name="value_per_ton"/>/ton
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Shipping and Transport" name="shipping">
                            <group>
                                <group string="🚛 Transport Details">
                                    <field name="shipping_date" widget="date"/>
                                    <field name="delivery_date" widget="date"/>
                                    <field name="transport_company"/>
                                    <field name="driver_name"/>
                                    <field name="truck_license_plate"/>
                                    <field name="trailer_number"/>
                                </group>
                                <group string="📍 Delivery Information">
                                    <field name="destination_address"/>
                                    <field name="delivery_contact"/>
                                    <field name="delivery_phone"/>
                                    <field name="special_delivery_instructions"/>
                                    <field name="loading_dock_requirements"/>
                                </group>
                            </group>
                        </page>
                        <page string="Documentation" name="documentation">
                            <group>
                                <group string="📄 Sales Documentation">
                                    <field name="bill_of_lading"/>
                                    <field name="sales_contract_number"/>
                                    <field name="invoice_number" invisible="state != 'sold'"/>
                                    <field name="payment_terms"/>
                                </group>
                                <group string="📊 Quality Documentation">
                                    <field name="quality_certificate"/>
                                    <field name="weight_certificate"/>
                                    <field name="moisture_test_report"/>
                                    <field name="contamination_report"/>
                                </group>
                            </group>
                            <separator string="Load Photos"/>
                            <field name="photo_ids" mode="kanban">
                                <kanban>
                                    <field name="name"/>
                                    <field name="image"/>
                                    <field name="photo_type"/>
                                    <templates>
                                        <t t-name="card">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="kanban_image('load.photo', 'image', record.id.raw_value)" alt="Load Photo"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <field name="name"/>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Communication" name="communication">
                            <field name="message_ids" mode="list">
                                <list string="Communications">
                                    <field name="date"/>
                                    <field name="author_id"/>
                                    <field name="subject"/>
                                    <field name="message_type"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view for SEARCH -->
    <record id="load_view_search" model="ir.ui.view">
        <field name="name">load.view.search</field>
        <field name="model">paper.bale.load</field>
        <field name="arch" type="xml">
            <search string="Search Loads">
                <field name="name" string="Load #" filter_domain="[('name', 'ilike', self)]"/>
                <field name="trailer_id" string="Trailer"/>
                <field name="driver_id" string="Driver"/>
                <field name="route_code" string="Route"/>
                <field name="load_date" string="Load Date"/>

                <filter string="My Loads" name="my_loads" domain="[('driver_id.user_id', '=', uid)]"/>
                <filter string="Today's Loads" name="today" domain="[('load_date', '=', context_today.strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="week" domain="[('load_date', '&amp;gt;=', (context_today - datetime.timedelta(days=context_today.weekday())).strftime('%Y-%m-%d')), ('load_date', '&lt;=', (context_today + datetime.timedelta(days=6-context_today.weekday())).strftime('%Y-%m-%d'))]"/>

                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Planned" name="planned" domain="[('state', '=', 'planned')]"/>
                <filter string="Loading" name="loading" domain="[('state', '=', 'loading')]"/>
                <filter string="In Transit" name="in_transit" domain="[('state', '=', 'in_transit')]"/>
                <filter string="Delivered" name="delivered" domain="[('state', '=', 'delivered')]"/>

                <separator/>
                <filter string="Temperature Controlled" name="temp_controlled" domain="[('temperature_controlled', '=', True)]"/>
                <filter string="Hazmat Required" name="hazmat" domain="[('hazmat_required', '=', True)]"/>
                <filter string="High Priority" name="high_priority" domain="[('priority', '=', '3')]"/>

                <separator/>
                <filter string="Overdue" name="overdue" domain="[('state', 'in', ['draft', 'planned', 'loading'])]"/>
                <filter string="Late Delivery" name="late_delivery" domain="[('state', '=', 'in_transit')]"/>

                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Driver" name="group_driver" context="{'group_by': 'driver_id'}"/>
                    <filter string="Trailer" name="group_trailer" context="{'group_by': 'trailer_id'}"/>
                    <filter string="Route" name="group_route" context="{'group_by': 'route_code'}"/>
                    <filter string="Load Date" name="group_date" context="{'group_by': 'load_date'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree view for CALENDAR -->
    <record id="load_view_calendar" model="ir.ui.view">
        <field name="name">load.view.calendar</field>
        <field name="model">paper.bale.load</field>
        <field name="arch" type="xml">
            <calendar string="Load Schedule" date_start="scheduled_departure" date_stop="estimated_delivery" color="driver_id" quick_add="False" mode="month">
                <field name="name"/>
                <field name="trailer_id"/>
                <field name="driver_id"/>
                <field name="state"/>
                <field name="route_code"/>
            </calendar>
        </field>
    </record>

    <!-- Tree view for GRAPH -->
    <record id="load_view_graph" model="ir.ui.view">
        <field name="name">load.view.graph</field>
        <field name="model">paper.bale.load</field>
        <field name="arch" type="xml">
            <graph string="Load Analytics" type="bar" sample="1">
                <field name="load_date" type="row" interval="week"/>
                <field name="state" type="col"/>
                <field name="total_weight" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Form view for PIVOT -->
    <record id="load_view_pivot" model="ir.ui.view">
        <field name="name">load.view.pivot</field>
        <field name="model">paper.bale.load</field>
        <field name="arch" type="xml">
            <pivot string="Load Performance" sample="1">
                <field name="driver_id" type="row"/>
                <field name="state" type="col"/>
                <field name="total_weight" type="measure"/>
                <field name="capacity_utilization" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Tree view for ACTION -->
    <record id="action_load" model="ir.actions.act_window">
        <field name="name">� Paper Bale Load Management</field>
        <field name="res_model">paper.bale.load</field>
        <field name="view_mode">kanban,list,form,calendar,graph,pivot</field>
        <field name="search_view_id" ref="view_load_search"/>
        <field name="context">{
            'search_default_today': 1,
            'search_default_my_loads': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                � Create your first paper bale load!
            </p>
            <p>
                Track paper bale loads for post-shredding market sales operations.
                Manage paper bale tracking from preparation through market sales with quality documentation, buyer management, and revenue tracking.
            </p>
            <p>
                <strong>Key Features:</strong><br/>
                • Paper bale quantity and weight tracking<br/>
                • Market pricing and buyer management<br/>
                • Quality grades and contamination monitoring<br/>
                • Revenue estimation and sales documentation<br/>
                • Load preparation and shipping coordination<br/>
                • Paper market sales analytics and reporting
            </p>
        </field>
    </record>
</data>
</odoo>
