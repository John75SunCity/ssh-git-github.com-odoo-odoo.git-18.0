<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 🚛 ENTERPRISE LOAD MANAGEMENT - Trailer Load Operations & Capacity Optimization -->
    
    <!-- KANBAN VIEW: Visual Load Management Dashboard -->
    <record id="view_load_kanban" model="ir.ui.view">
        <field name="name">load.kanban</field>
        <field name="model">load</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" sample="1" quick_create="false" class="o_kanban_small_column">
                <field name="name"/>
                <field name="state"/>
                <field name="trailer_id"/>
                <field name="total_weight"/>
                <field name="capacity_utilization"/>
                <field name="scheduled_departure"/>
                <field name="driver_id"/>
                <field name="route_code"/>
                <field name="load_date"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <span class="float-end">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'secondary', 'planned': 'primary', 'loading': 'warning', 'in_transit': 'info', 'delivered': 'success', 'cancelled': 'danger'}}"/>
                                    </span>
                                </div>
                                <span class="o_kanban_record_subtitle text-muted">
                                    🚛 <field name="trailer_id"/> | Route: <field name="route_code"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Weight:</strong> <field name="total_weight" widget="float"/> kg<br/>
                                        <strong>Capacity:</strong> <field name="capacity_utilization" widget="percentage"/>
                                    </div>
                                    <div class="col-6">
                                        <strong>Driver:</strong> <field name="driver_id"/><br/>
                                        <strong>Departure:</strong> <field name="scheduled_departure" widget="datetime"/>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge badge-pill badge-info">
                                        📅 <field name="load_date" widget="date"/>
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="activity_state" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- TREE VIEW: Load Operations List -->
    <record id="view_load_tree" model="ir.ui.view">
        <field name="name">load.tree</field>
        <field name="model">load</field>
        <field name="arch" type="xml">
            <tree string="Load Management" decoration-success="state=='delivered'" decoration-info="state=='in_transit'" decoration-warning="state=='loading'" decoration-muted="state=='cancelled'" multi_edit="1" sample="1">
                <header>
                    <button name="action_plan_load" type="object" string="Plan Load"/>
                    <button name="action_start_loading" type="object" string="Start Loading"/>
                    <button name="action_complete_loading" type="object" string="Complete Loading"/>
                </header>
                <field name="name" string="Load #"/>
                <field name="load_date" widget="date"/>
                <field name="trailer_id" string="Trailer"/>
                <field name="driver_id" string="Driver"/>
                <field name="route_code" string="Route"/>
                <field name="total_weight" string="Weight (kg)" widget="float" sum="Total Weight"/>
                <field name="capacity_utilization" string="Capacity %" widget="percentage" avg="Avg Capacity"/>
                <field name="scheduled_departure" string="Departure" widget="datetime"/>
                <field name="state" string="Status" widget="badge" decoration-success="state=='delivered'" decoration-info="state=='in_transit'" decoration-warning="state=='loading'"/>
                <field name="activity_exception_decoration" widget="activity_exception"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW: Detailed Load Management -->
    <record id="view_load_form" model="ir.ui.view">
        <field name="name">load.form</field>
        <field name="model">load</field>
        <field name="arch" type="xml">
            <form string="Load Management">
                <header>
                    <button name="action_plan_load" string="Plan Load" type="object" class="btn-primary" states="draft"/>
                    <button name="action_start_loading" string="Start Loading" type="object" class="btn-primary" states="planned"/>
                    <button name="action_complete_loading" string="Complete Loading" type="object" class="btn-primary" states="loading"/>
                    <button name="action_dispatch" string="Dispatch" type="object" class="btn-success" states="loaded"/>
                    <button name="action_mark_delivered" string="Mark Delivered" type="object" class="btn-success" states="in_transit"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,planned,loading"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,planned,loading,loaded,in_transit,delivered"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_deliveries" type="object" class="oe_stat_button" icon="fa-truck">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="delivery_count"/>
                                </span>
                                <span class="o_stat_text">Deliveries</span>
                            </div>
                        </button>
                        <button name="action_view_documents" type="object" class="oe_stat_button" icon="fa-file-text">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="document_count"/>
                                </span>
                                <span class="o_stat_text">Documents</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Load Number"/>
                        </h1>
                        <div class="o_row">
                            <field name="load_date" widget="date"/>
                            <label for="route_code" string="Route:"/>
                            <field name="route_code" placeholder="Route Code"/>
                        </div>
                    </div>
                    
                    <group>
                        <group name="load_details" string="Load Details">
                            <field name="trailer_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="driver_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="total_weight" widget="float"/>
                            <field name="capacity_utilization" widget="percentage"/>
                            <field name="scheduled_departure" widget="datetime"/>
                            <field name="actual_departure" widget="datetime" states="in_transit,delivered"/>
                        </group>
                        <group name="tracking" string="Tracking & Status">
                            <field name="priority" widget="priority"/>
                            <field name="temperature_controlled" widget="boolean_toggle"/>
                            <field name="hazmat_required" widget="boolean_toggle"/>
                            <field name="special_instructions" placeholder="Special handling instructions..."/>
                            <field name="estimated_delivery" widget="datetime"/>
                            <field name="actual_delivery" widget="datetime" states="delivered"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Load Items" name="load_items">
                            <field name="load_item_ids" mode="tree,kanban">
                                <tree string="Load Items" editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity" sum="Total Quantity"/>
                                    <field name="weight" sum="Total Weight"/>
                                    <field name="volume" sum="Total Volume"/>
                                    <field name="destination_location_id"/>
                                    <field name="priority"/>
                                    <field name="fragile" widget="boolean_toggle"/>
                                    <field name="temperature_sensitive" widget="boolean_toggle"/>
                                </tree>
                                <kanban>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="weight"/>
                                    <field name="destination_location_id"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_record_top">
                                                    <strong><field name="product_id"/></strong>
                                                </div>
                                                <div class="o_kanban_record_body">
                                                    Qty: <field name="quantity"/> | Weight: <field name="weight"/>kg<br/>
                                                    📍 <field name="destination_location_id"/>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Route & Stops" name="route_stops">
                            <field name="stop_ids" mode="tree">
                                <tree string="Route Stops" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="location_id"/>
                                    <field name="stop_type"/>
                                    <field name="estimated_arrival" widget="datetime"/>
                                    <field name="actual_arrival" widget="datetime"/>
                                    <field name="duration_minutes"/>
                                    <field name="completed" widget="boolean_toggle"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Documentation" name="documentation">
                            <group>
                                <group string="Load Documentation">
                                    <field name="bill_of_lading"/>
                                    <field name="manifest_number"/>
                                    <field name="seal_number"/>
                                    <field name="inspection_checklist"/>
                                </group>
                                <group string="Compliance">
                                    <field name="dot_inspection" widget="boolean_toggle"/>
                                    <field name="weight_ticket"/>
                                    <field name="customs_declaration"/>
                                    <field name="insurance_verification"/>
                                </group>
                            </group>
                            <separator string="Load Photos"/>
                            <field name="photo_ids" mode="kanban">
                                <kanban>
                                    <field name="name"/>
                                    <field name="image"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="kanban_image('load.photo', 'image', record.id.raw_value)" alt="Load Photo"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <field name="name"/>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Communication" name="communication">
                            <field name="message_ids" mode="tree">
                                <tree string="Communications">
                                    <field name="date"/>
                                    <field name="author_id"/>
                                    <field name="subject"/>
                                    <field name="message_type"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW: Advanced Load Search -->
    <record id="view_load_search" model="ir.ui.view">
        <field name="name">load.search</field>
        <field name="model">load</field>
        <field name="arch" type="xml">
            <search string="Search Loads">
                <field name="name" string="Load #" filter_domain="[('name', 'ilike', self)]"/>
                <field name="trailer_id" string="Trailer"/>
                <field name="driver_id" string="Driver"/>
                <field name="route_code" string="Route"/>
                <field name="load_date" string="Load Date"/>
                
                <filter string="My Loads" name="my_loads" domain="[('driver_id.user_id', '=', uid)]"/>
                <filter string="Today's Loads" name="today" domain="[('load_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="week" domain="[('load_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('load_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Planned" name="planned" domain="[('state', '=', 'planned')]"/>
                <filter string="Loading" name="loading" domain="[('state', '=', 'loading')]"/>
                <filter string="In Transit" name="in_transit" domain="[('state', '=', 'in_transit')]"/>
                <filter string="Delivered" name="delivered" domain="[('state', '=', 'delivered')]"/>
                
                <separator/>
                <filter string="Temperature Controlled" name="temp_controlled" domain="[('temperature_controlled', '=', True)]"/>
                <filter string="Hazmat Required" name="hazmat" domain="[('hazmat_required', '=', True)]"/>
                <filter string="High Priority" name="high_priority" domain="[('priority', '=', '3')]"/>
                
                <separator/>
                <filter string="Overdue" name="overdue" domain="[('scheduled_departure', '&lt;', datetime.datetime.now()), ('state', 'in', ['draft', 'planned', 'loading'])]"/>
                <filter string="Late Delivery" name="late_delivery" domain="[('estimated_delivery', '&lt;', datetime.datetime.now()), ('state', '=', 'in_transit')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Driver" name="group_driver" context="{'group_by': 'driver_id'}"/>
                    <filter string="Trailer" name="group_trailer" context="{'group_by': 'trailer_id'}"/>
                    <filter string="Route" name="group_route" context="{'group_by': 'route_code'}"/>
                    <filter string="Load Date" name="group_date" context="{'group_by': 'load_date'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- CALENDAR VIEW: Load Schedule -->
    <record id="view_load_calendar" model="ir.ui.view">
        <field name="name">load.calendar</field>
        <field name="model">load</field>
        <field name="arch" type="xml">
            <calendar string="Load Schedule" date_start="scheduled_departure" date_stop="estimated_delivery" color="driver_id" quick_add="False" mode="month">
                <field name="name"/>
                <field name="trailer_id"/>
                <field name="driver_id"/>
                <field name="state"/>
                <field name="route_code"/>
            </calendar>
        </field>
    </record>

    <!-- GRAPH VIEW: Load Analytics -->
    <record id="view_load_graph" model="ir.ui.view">
        <field name="name">load.graph</field>
        <field name="model">load</field>
        <field name="arch" type="xml">
            <graph string="Load Analytics" type="bar" sample="1">
                <field name="load_date" type="row" interval="week"/>
                <field name="state" type="col"/>
                <field name="total_weight" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- PIVOT VIEW: Load Performance Analysis -->
    <record id="view_load_pivot" model="ir.ui.view">
        <field name="name">load.pivot</field>
        <field name="model">load</field>
        <field name="arch" type="xml">
            <pivot string="Load Performance" sample="1">
                <field name="driver_id" type="row"/>
                <field name="state" type="col"/>
                <field name="total_weight" type="measure"/>
                <field name="capacity_utilization" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- ACTION: Load Management -->
    <record id="action_load" model="ir.actions.act_window">
        <field name="name">🚛 Load Management</field>
        <field name="res_model">load</field>
        <field name="view_mode">kanban,tree,form,calendar,graph,pivot</field>
        <field name="search_view_id" ref="view_load_search"/>
        <field name="context">{
            'search_default_today': 1,
            'search_default_my_loads': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                🚛 Create your first load!
            </p>
            <p>
                Manage trailer loading operations with comprehensive capacity optimization, route planning, and real-time tracking. 
                Track load progress from planning through delivery with driver assignment, documentation management, and compliance verification.
            </p>
            <p>
                <strong>Key Features:</strong><br/>
                • Visual load planning and capacity optimization<br/>
                • Real-time tracking and status updates<br/>
                • Route management and stop scheduling<br/>
                • Documentation and compliance management<br/>
                • Driver assignment and communication tools<br/>
                • Performance analytics and reporting
            </p>
        </field>
    </record>
</odoo>
