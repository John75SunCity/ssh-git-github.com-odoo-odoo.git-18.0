<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="document_search_attempt_view_search" model="ir.ui.view">
            <field name="name">document.search.attempt.view.search</field>
            <field name="model">document.search.attempt</field>
            <field name="arch" type="xml">
                <list string="Document Search Attempts">
                    <field name="search_date" />
                    <field name="retrieval_item_id" />
                    <field name="requested_file_name" />
                    <field name="container_id" />
                    <field name="searched_by_id" />
                    <field name="found" />
                    <field name="customer_id" />
                </list>
            </field>
        </record>
        <record id="document_search_attempt_view_form" model="ir.ui.view">
            <field name="name">document.search.attempt.view.form</field>
            <field name="model">document.search.attempt</field>
            <field name="arch" type="xml">
                <form string="Document Search Attempt">
                    <sheet>
                        <group>
                            <group>
                                <field name="retrieval_item_id" />
                                <field name="requested_file_name" />
                                <field name="container_id" />
                                <field name="customer_id" />
                            </group>
                            <group>
                                <field name="searched_by_id" />
                                <field name="search_date" />
                                <field name="found" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="document_search_attempt_view_search" model="ir.ui.view">
            <field name="name">document.search.attempt.view.search</field>
            <field name="model">document.search.attempt</field>
            <field name="arch" type="xml">
                <search string="Search Document Search Attempts">
                    <field name="requested_file_name" />
                    <field name="container_id" />
                    <field name="searched_by_id" />
                    <field name="customer_id" />
                    <filter string="Found" name="found" domain="[('found', '=', True)]" />
                    <filter string="Not Found" name="not_found" domain="[('found', '=', False)]" />
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="group_by_customer" context="{'group_by': 'customer_id'}" />
                        <filter string="Container" name="group_by_container" context="{'group_by': 'container_id'}" />
                        <filter string="Searched By" name="group_by_searched_by" context="{'group_by': 'searched_by_id'}" />
                        <filter string="Found Status" name="group_by_found" context="{'group_by': 'found'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="action_document_search_attempt" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model document.search.attempt has state field - consider using default search filters -->
            <field name="name">Document Search Attempts</field>
            <field name="res_model">document.search.attempt</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="document_search_attempt_view_search" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                No search attempts found.
            </p>
                <p>
                This view shows the history of all attempts to find specific files within containers.
            </p>
            </field>
        </record>
    <data>
        <menuitem id="menu_document_search_attempt" name="Search Attempts" action="action_document_search_attempt" parent="menu_document_retrieval_work_order" sequence="20" />
    </data>
    </data>
</odoo>
