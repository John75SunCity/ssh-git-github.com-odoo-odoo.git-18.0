<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <!-- Enhanced Kanban view for Stock Lot Management -->
    <record id="stock_lot_view_kanban" model="ir.ui.view">
        <field name="name">stock.lot.view.kanban</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <kanban default_group_by="product_id" class="o_kanban_stock_lot_dashboard">
                <field name="name"/>
                <field name="product_id"/>
                <field name="product_qty"/>
                <field name="create_date"/>
                <field name="expiration_date"/>
                <field name="ref"/>

<field name="company_id"/>

<templates>
<t t-name="card">
    <div class="oe_kanban_card oe_kanban_global_click">
        <div class="o_kanban_card_header">
            <div class="o_kanban_card_header_title">
                <div class="o_primary">
                    <strong><i class="fa fa-box"/>                        <field name="name"/>
                    </strong>
                </div>
                <div class="o_secondary">
                                            üè∑Ô∏è                    <field name="product_id"/>
                </div>
            </div>
            <div class="o_kanban_manage_button_section">
                <a class="o_kanban_manage_toggle_button" href="#">
<i class="fa fa-ellipsis-v" role="img" aria-label="More options" title="More options"/>

                </a>
            </div>
        </div>
<div class="o_kanban_card_content" t-att-title="record.display_name.raw_value" t-att-aria-label="record.display_name.raw_value" role="group">
            <div class="row">
                <div class="col-8">
                    <div>
<i class="fa fa-cubes" aria-hidden="true"/>

 Qty: <field name="product_qty"/>
                    </div>
                    <div>
<i class="fa fa-calendar" aria-hidden="true"/>

 Created: <field name="create_date"/>
                    </div>
<div t-if="record.expiration_date.raw_value">
<i class="fa fa-clock-o" aria-hidden="true"/>

 Expires: <field name="expiration_date"/>
</div>
</div>
<div class="col-4">
<span class="badge badge-info" t-if="record.ref.raw_value">
                                                <i class="fa fa-link"/>    <field name="ref"/>
</span>
<span class="badge badge-warning" t-if="record.expiration_date.raw_value and record.expiration_date.raw_value &lt; (new Date()).toISOString()">
                                                ‚ö†Ô∏è Expired
</span>
</div>
</div>
<div class="row mt-2">
<div class="col-6">
<button class="btn btn-primary btn-sm" type="object" name="action_view_stock_moves">
                                                <i class="fa fa-clipboard"/> Movements
</button>
</div>
<div class="col-6">
<button class="btn btn-success btn-sm" type="object" name="action_view_quants">
                                                üìç Locations
</button>
</div>
</div>
</div>
<div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
<a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Lot</a>
<a role="menuitem" type="object" name="action_view_stock_moves" class="dropdown-item"><i class="fa fa-clipboard"/> View Movements</a>
<a role="menuitem" type="delete" class="dropdown-item">üóëÔ∏è Delete</a>
</div>
</div>
</t>
</templates>
</kanban>
</field>
</record>

<!-- Enhanced List view -->
<record id="stock_lot_view_tree" model="ir.ui.view">
    <field name="name">stock.lot.view.tree</field>
    <field name="model">stock.lot</field>
        <field name="arch" type="xml">
<list decoration-success="product_qty &gt; 0" decoration-warning="expiration_date and expiration_date &lt; context_today" decoration-info="ref != False">
    <field name="name" string="<i class="fa fa-box"/> Serial/Lot Number"/>
    <field name="product_id" string="üè∑Ô∏è Product"/>
    <field name="product_qty" string="<i class="fa fa-bar-chart"/> Quantity"/>
    <field name="product_uom_id" string="üìè UoM"/>
    <field name="create_date" string="<i class="fa fa-calendar"/> Created"/>

<field name="expiration_date" string="‚è∞ Expiration" optional="show"/>
<field name="ref" string="<i class="fa fa-link"/> Reference" optional="hide"/>
<field name="company_id" string="<i class="fa fa-building"/> Company" groups="base.group_multi_company" optional="hide"/>
<button name="action_view_stock_moves" type="object" string="Movements" icon="fa-exchange" class="btn-link" title="View Stock Movements"/>

</list>
</field>
</record>

<!-- Enhanced Form view -->
<record id="stock_lot_view_form" model="ir.ui.view">
    <field name="name">stock.lot.view.form</field>
    <field name="model">stock.lot</field>
        <field name="arch" type="xml">
        <form>
            <header>
<button name="action_view_stock_moves" type="object" string="<i class="fa fa-clipboard"/> View Movements" class="btn-primary"/>
</header>
<sheet>
<div class="oe_button_box" name="button_box">
<!-- Smart buttons for related records -->
</div>

<group>
<group string="<i class="fa fa-box"/> Lot/Serial Information">
    <field name="name" placeholder="e.g., LOT-2024-001"/>

<field name="product_id" required="1"/>
<field name="ref"/>
<field name="company_id" groups="base.group_multi_company"/>
</group>
<group string="<i class="fa fa-bar-chart"/> Inventory Details">
<field name="product_qty" readonly="1"/>
<field name="product_uom_id"/>
<field name="create_date"/>
<field name="expiration_date"/>
</group>
</group>

<notebook>
<page string="<i class="fa fa-clipboard"/> Stock Movements" name="movements">
<field name="stock_move_ids" readonly="1">
    <list>
        <field name="date"/>
        <field name="reference"/>
        <field name="location_id"/>
        <field name="location_dest_id"/>
        <field name="product_uom_qty"/>
        <field name="state"/>

</list>
</field>
</page>
<page string="<i class="fa fa-box"/> Stock Locations" name="locations">
<field name="quant_ids" readonly="1">
    <list>
        <field name="location_id"/>
        <field name="quantity"/>
        <field name="reserved_quantity"/>
        <field name="available_quantity"/>
        <field name="in_date"/>

</list>
</field>
</page>
<page string="<i class="fa fa-pencil"/> Notes &amp; Description" name="notes">
    <field name="note" placeholder="Additional information about this lot/serial number..."/>
</page>
</notebook>
</sheet>
<div class="oe_chatter">
<field name="message_follower_ids"/>
<field name="activity_ids"/>
<field name="message_ids"/>
</div>
</form>
</field>
</record>

<!-- Enhanced Search view -->
<record id="stock_lot_view_search" model="ir.ui.view">
<field name="name">stock.lot.view.search</field>
<field name="model">stock.lot</field>
        <field name="arch" type="xml">
    <search>
        <field name="name" string="Serial/Lot" filter_domain="[('name', 'ilike', self)]"/>
        <field name="product_id"/>
        <field name="ref"/>
        <field name="create_date"/>

        <filter string="<i class="fa fa-box"/> In Stock" name="in_stock" domain="[('product_qty', '&gt;', 0)]"/>
        <filter string="üì§ Out of Stock" name="out_of_stock" domain="[('product_qty', '=', 0)]"/>

        <separator/>
        <filter string="‚ö†Ô∏è Expired" name="expired" domain="[('expiration_date', '&lt;', context_today)]"/>
        <filter string="üîî Expiring Soon (30 days)" name="expiring_soon" domain="[('expiration_date', '&lt;=', (context_today + datetime.timedelta(days=30)).strftime('%Y-%m-%d')), ('expiration_date', '&gt;=', context_today.strftime('%Y-%m-%d'))]"/>
        <filter string="üïí Valid" name="valid" domain="[('expiration_date', '&gt;=', context_today)]"/>

        <separator/>
        <filter string="<i class="fa fa-link"/> With Reference" name="with_reference" domain="[('ref', '!=', False)]"/>

        <separator/>
        <filter string="<i class="fa fa-calendar"/> Created Today" name="created_today" domain="[('create_date', '&gt;=', context_today)]"/>
        <filter string="üìÜ Created This Week" name="created_this_week" domain="[('create_date', '&gt;=', (context_today - datetime.timedelta(days=context_today.weekday())).strftime('%Y-%m-%d'))]"/>
        <filter string="üóìÔ∏è Created This Month" name="created_this_month" domain="[('create_date', '&gt;=', context_today.strftime('%Y-%m-01'))]"/>

        <group expand="0" string="<i class="fa fa-bar-chart"/> Group By">
            <filter string="Product" name="group_by_product" context="{'group_by': 'product_id'}"/>
            <filter string="Company" name="group_by_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
            <filter string="Creation Date" name="group_by_create_date" context="{'group_by': 'create_date:month'}"/>
            <filter string="Expiration Date" name="group_by_expiration" context="{'group_by': 'expiration_date:month'}"/>
        </group>
</search>
</field>
</record>

<!-- Action for Stock Lots -->
<record id="action_stock_lot" model="ir.actions.act_window">
<field name="name"><i class="fa fa-box"/> Serial Numbers / Lots</field>
<field name="res_model">stock.lot</field>
<field name="view_mode">kanban,list,form</field>
<field name="search_view_id" ref="stock_lot_view_search"/>
<field name="context">{
                'search_default_in_stock': 1
            }</field>
<field name="help" type="html">
    <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-box"/> Create your first serial number or lot!
    </p>
    <p>
        <b>Records Management Inventory Tracking:</b>
        <br/>
                    ‚Ä¢ <i class="fa fa-box"/> Complete serial number and lot management<br/>
                    ‚Ä¢ <i class="fa fa-link"/> Integration with Records Management system<br/>
                    ‚Ä¢ <i class="fa fa-bar-chart"/> Real-time stock movement tracking<br/>
                    ‚Ä¢ ‚è∞ Expiration date monitoring and alerts<br/>
                    ‚Ä¢ üè∑Ô∏è Product and reference tracking<br/>
                    ‚Ä¢ <i class="fa fa-clipboard"/> Complete audit trail and history<br/>
                    ‚Ä¢ <i class="fa fa-building"/> Multi-company support
</p>
</field>
</record>

<!-- Menu Integration with Records Management -->
<menuitem id="menu_stock_lot_inventory" name="Serial Numbers / Lots" parent="menu_records_inventory" action="action_stock_lot" sequence="50" groups="records_management.group_records_user"/>

</data>
</odoo>
