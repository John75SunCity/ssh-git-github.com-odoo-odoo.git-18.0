<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- üì¶ ENTERPRISE INVENTORY TRACKING - Serial Number & Lot Management -->
    
    <!-- üé® Stock Lot Kanban Dashboard -->
    <record id="view_stock_lot_kanban" model="ir.ui.view">
        <field name="name">stock.lot.kanban</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <kanban default_group_by="product_id" class="o_kanban_stock_lot_dashboard">
                <field name="name"/>
                <field name="product_id"/>
                <field name="product_qty"/>
                <field name="create_date"/>
                <field name="expiration_date"/>
                <field name="ref"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>üì¶ <field name="name"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        üè∑Ô∏è <field name="product_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v"/></a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-8">
                                        <div><i class="fa fa-cubes"/> Qty: <field name="product_qty"/></div>
                                        <div><i class="fa fa-calendar"/> Created: <field name="create_date"/></div>
                                        <div><i class="fa fa-clock-o"/> Expires: <field name="expiration_date"/></div>
                                    </div>
                                    <div class="col-4">
                                        <span class="badge badge-info" t-if="record.ref.raw_value">
                                            üîó <field name="ref"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-sm" type="object" name="action_view_movements">
                                            üìã Movements
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-success btn-sm" type="object" name="action_view_location">
                                            üìç Location
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Lot</a>
                                <a role="menuitem" type="object" name="action_view_movements" class="dropdown-item">üìã View Movements</a>
                                <a role="menuitem" type="object" name="action_print_label" class="dropdown-item">üè∑Ô∏è Print Label</a>
                                <a role="menuitem" type="object" name="action_track_history" class="dropdown-item">üìä Track History</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- üìã Enhanced Tree with Inventory Analytics -->
    <record id="view_stock_lot_tree" model="ir.ui.view">
        <field name="name">stock.lot.list</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <list decoration-success="product_qty &gt; 0" 
                  decoration-warning="expiration_date &lt; context_today()"
                  decoration-info="ref != False">
                <field name="name" string="üì¶ Serial/Lot Number"/>
                <field name="product_id" string="üè∑Ô∏è Product"/>
                <field name="product_qty" string="üìä Quantity"/>
                <field name="product_uom_id" string="üìè UoM"/>
                <field name="create_date" string="üìÖ Created"/>
                <field name="expiration_date" string="‚è∞ Expiration"/>
                <field name="ref" string="üîó Reference"/>
                <field name="company_id" string="üè¢ Company" groups="base.group_multi_company"/>
                <button name="action_view_movements" type="object" string="Movements" 
                        icon="fa-exchange" class="btn-link"/>
                <button name="action_print_label" type="object" string="Label" 
                        icon="fa-print" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- üìù Enhanced Form with Complete Lot Tracking -->
    <record id="view_stock_lot_form" model="ir.ui.view">
        <field name="name">stock.lot.form</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_movements" type="object" string="üìã View Movements" class="btn-primary"/>
                    <button name="action_print_label" type="object" string="üè∑Ô∏è Print Label" class="btn-secondary"/>
                    <button name="action_track_history" type="object" string="üìä Track History" class="btn-info"/>
                    <button name="action_quality_check" type="object" string="üîç Quality Check" class="btn-success"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_movements" icon="fa-exchange">
                            <field string="Stock Movements" name="stock_move_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_quants" icon="fa-cubes">
                            <field string="Stock Quants" name="quant_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_quality_checks" icon="fa-check-square">
                            <field string="Quality Checks" name="quality_check_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-warning" 
                                attrs="{'invisible': [('expiration_date', '&gt;=', context_today())]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">‚ö†Ô∏è</span>
                                <span class="o_stat_text">Expired</span>
                            </div>
                        </button>
                    </div>
                    
                    <group>
                        <group string="üì¶ Lot/Serial Information">
                            <field name="name" placeholder="e.g., LOT-2024-001"/>
                            <field name="product_id"/>
                            <field name="ref"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="üìä Inventory Details">
                            <field name="product_qty"/>
                            <field name="product_uom_id"/>
                            <field name="create_date"/>
                            <field name="expiration_date"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="üìã Stock Movements" name="movements">
                            <field name="stock_move_ids" mode="list">
                                <list>
                                    <field name="date"/>
                                    <field name="reference"/>
                                    <field name="location_id"/>
                                    <field name="location_dest_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="state"/>
                                    <button name="action_view_move_details" type="object" string="Details" icon="fa-eye" class="btn-link"/>
                                </list>
                            </field>
                        </page>
                        <page string="üì¶ Stock Locations" name="locations">
                            <field name="quant_ids" mode="list">
                                <list>
                                    <field name="location_id"/>
                                    <field name="quantity"/>
                                    <field name="reserved_quantity"/>
                                    <field name="available_quantity"/>
                                    <field name="in_date"/>
                                    <field name="inventory_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="üîç Quality Control" name="quality">
                            <field name="quality_check_ids" mode="list">
                                <list>
                                    <field name="check_date"/>
                                    <field name="quality_point_id"/>
                                    <field name="quality_state"/>
                                    <field name="user_id"/>
                                    <field name="test_type"/>
                                    <field name="measure"/>
                                    <button name="action_view_quality_details" type="object" string="Details" icon="fa-eye" class="btn-link"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìä Traceability" name="traceability">
                            <group>
                                <group string="üîó Upstream Traceability">
                                    <field name="supplier_lot_id"/>
                                    <field name="purchase_order_id"/>
                                    <field name="manufacturing_order_id"/>
                                    <field name="source_location"/>
                                </group>
                                <group string="üìã Downstream Tracking">
                                    <field name="delivery_order_id"/>
                                    <field name="customer_reference"/>
                                    <field name="destination_location"/>
                                    <field name="final_customer"/>
                                </group>
                            </group>
                            <field name="traceability_log_ids" mode="list">
                                <list>
                                    <field name="timestamp"/>
                                    <field name="action_type"/>
                                    <field name="location_from"/>
                                    <field name="location_to"/>
                                    <field name="user_id"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìã Attributes &amp; Properties" name="attributes">
                            <field name="attribute_ids" mode="list">
                                <list editable="bottom">
                                    <field name="attribute_name"/>
                                    <field name="attribute_value"/>
                                    <field name="attribute_type"/>
                                    <field name="measurement_unit"/>
                                    <field name="quality_verified"/>
                                    <field name="verification_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìà Analytics &amp; Reports" name="analytics">
                            <group>
                                <group string="üìä Inventory Metrics">
                                    <field name="total_movements" readonly="1"/>
                                    <field name="average_movement_time" readonly="1"/>
                                    <field name="current_location" readonly="1"/>
                                    <field name="days_in_inventory" readonly="1"/>
                                </group>
                                <group string="üí∞ Value Information">
                                    <field name="unit_cost" readonly="1"/>
                                    <field name="total_value" readonly="1"/>
                                    <field name="last_purchase_price" readonly="1"/>
                                    <field name="market_value" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- üîç Enhanced Search with Inventory Filters -->
    <record id="view_stock_lot_search" model="ir.ui.view">
        <field name="name">stock.lot.search</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Serial/Lot"/>
                <field name="product_id"/>
                <field name="ref"/>
                <field name="create_date"/>
                
                <filter string="üì¶ In Stock" name="in_stock" domain="[('product_qty', '&gt;', 0)]"/>
                <filter string="üì§ Out of Stock" name="out_of_stock" domain="[('product_qty', '=', 0)]"/>
                
                <separator/>
                <filter string="‚ö†Ô∏è Expired" name="expired" domain="[('expiration_date', '&lt;', context_today())]"/>
                <filter string="üîî Expiring Soon (30 days)" name="expiring_soon" 
                        domain="[('expiration_date', '&lt;=', (context_today() + relativedelta(days=30)).strftime('%Y-%m-%d')), ('expiration_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="üïí Valid" name="valid" domain="[('expiration_date', '&gt;=', context_today())]"/>
                
                <separator/>
                <filter string="üîó With Reference" name="with_reference" domain="[('ref', '!=', False)]"/>
                <filter string="üîç Quality Checked" name="quality_checked" domain="[('quality_check_count', '&gt;', 0)]"/>
                
                <separator/>
                <filter string="üìÖ Created Today" name="created_today" domain="[('create_date', '&gt;=', context_today())]"/>
                <filter string="üìÜ Created This Week" name="created_this_week" 
                        domain="[('create_date', '&gt;=', (context_today() - relativedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="üóìÔ∏è Created This Month" name="created_this_month" 
                        domain="[('create_date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                
                <group expand="0" string="üìä Group By">
                    <filter string="Product" name="group_by_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Company" name="group_by_company" context="{'group_by': 'company_id'}"/>
                    <filter string="Creation Date" name="group_by_create_date" context="{'group_by': 'create_date:month'}"/>
                    <filter string="Expiration Date" name="group_by_expiration" context="{'group_by': 'expiration_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- üöÄ ENTERPRISE ACTION - Stock Lot Management -->
    <record id="action_stock_lot" model="ir.actions.act_window">
        <field name="name">üì¶ Serial Numbers / Lots</field>
        <field name="res_model">stock.lot</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_stock_lot_search"/>
        <field name="context">{
            'search_default_in_stock': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üì¶ Create your first serial number or lot!
            </p>
            <p>
                <b>Enterprise Inventory Tracking System:</b><br/>
                ‚Ä¢ üì¶ Complete serial number and lot management<br/>
                ‚Ä¢ üîó Full upstream and downstream traceability<br/>
                ‚Ä¢ üìä Real-time stock movement tracking<br/>
                ‚Ä¢ üîç Integrated quality control workflows<br/>
                ‚Ä¢ üìà Advanced inventory analytics and reporting<br/>
                ‚Ä¢ ‚è∞ Expiration date monitoring and alerts<br/>
                ‚Ä¢ üè∑Ô∏è Automated label printing and identification<br/>
                ‚Ä¢ üìã Custom attributes and property tracking<br/>
                ‚Ä¢ üí∞ Value analysis and cost tracking
            </p>
        </field>
    </record>
</odoo>
