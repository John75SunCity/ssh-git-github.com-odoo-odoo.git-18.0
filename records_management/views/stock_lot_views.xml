<odoo>
    <data>
        <!-- Stock Lot List View -->
        <record id="view_stock_lot_tree" model="ir.ui.view">
            <field name="name">stock.lot.list</field>
            <field name="model">stock.lot</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="customer_id"/>
                    <field name="location_id"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>

        <!-- Stock Lot Search View -->
        <record id="view_stock_lot_search" model="ir.ui.view">
            <field name="name">stock.lot.search</field>
            <field name="model">stock.lot</field>
            <field name="arch" type="xml">
                <search string="Search Serial Numbers">
                    <field name="name" string="Serial Number"/>
                    <field name="product_id"/>
                    <field name="customer_id"/>
                    <field name="location_id"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Product" name="group_product" context="{'group_by':'product_id'}"/>
                        <filter string="Customer" name="group_customer" context="{'group_by':'customer_id'}"/>
                        <filter string="Location" name="group_location" context="{'group_by':'location_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Stock Lot Form View -->
        <record id="view_stock_lot_form" model="ir.ui.view">
            <field name="name">stock.lot.form</field>
            <field name="model">stock.lot</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!-- No state/statusbar/actions -->
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Serial Number"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_id" required="1"/>
                                <field name="customer_id" required="1"/>
                            </group>
                            <group>
                                <field name="location_id"/>
                                <field name="create_date" readonly="1"/>
                            </group>
                        </group>
                        <!-- Removed notebook/pages for notes/history -->
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Stock Lot Action -->
        <record id="action_stock_lot" model="ir.actions.act_window">
            <field name="name">Serial Numbers</field>
            <field name="res_model">stock.lot</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="search_view_id" ref="view_stock_lot_search"/>
            <field name="context">{'search_default_available': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new serial number
                </p>
                <p>
                    Manage your serial numbers for effective records management.
                </p>
            </field>
        </record>

        <!-- Records Management Menu -->
        <menuitem id="menu_records_management_root" name="Records Management" sequence="10" groups="records_management.group_records_user"/>
        <menuitem id="menu_stock_lots" name="Serial Numbers" parent="menu_records_management_root" action="action_stock_lot" sequence="10" groups="records_management.group_records_user"/>
    </data>
</odoo>
