<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_lot_view_kanban" model="ir.ui.view">
            <field name="name">stock.lot.view.kanban</field>
            <field name="model">stock.lot</field>
            <field name="arch" type="xml">
                <kanban default_group_by="product_id" class="o_kanban_stock_lot_dashboard">
                    <field name="name" />
                    <field name="product_id" />
                    <field name="product_qty" />
                    <field name="product_uom_id" />
                    <field name="create_date" />
                    <field name="retention_date" />
                    <field name="destruction_eligible" />
                    <field name="ref" />
                    <field name="company_id" />
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <strong>
                                                <i class="fa fa-box" title="Lot/Serial Number" />
                                                <field name="name" />
                                            </strong>
                                        </div>
                                        <div class="o_secondary">
                                            <i class="fa fa-tag" title="Product" />
                                            <field name="product_id" />
                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#">
                                            <i class="fa fa-ellipsis-v" role="img" aria-label="More options" title="More options" />
                                        </a>
                                    </div>
                                </div>
                                <div class="o_kanban_card_content" t-att-title="record.display_name.raw_value" t-att-aria-label="record.display_name.raw_value" role="group">
                                    <div class="row">
                                        <div class="col-8">
                                            <div>
                                                <i class="fa fa-cubes" aria-hidden="true" /> Qty: <field name="product_qty"/>
                                            </div>
                                            <div>
                                                <i class="fa fa-calendar" aria-hidden="true" /> Created: <field name="create_date"/>
                                            </div>
                                            <div t-if="record.retention_date.raw_value">
                                                <i class="fa fa-calendar-times-o" aria-hidden="true" /> Retention Due: <field name="retention_date"/>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <span class="badge badge-info" t-if="record.ref.raw_value">
                                                <i class="fa fa-link" title="Reference" /> <field name="ref"/>
                                            </span>
                                            <span class="badge badge-warning" t-if="record.retention_date.raw_value and record.retention_date.raw_value &lt; context_today">
                                                <i class="fa fa-warning" title="Warning" /> Past Retention
                                            </span>
                                            <span class="badge badge-success" t-if="record.destruction_eligible.raw_value">
                                                <i class="fa fa-check" title="Approved" /> Eligible for Destruction
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <button class="btn btn-primary btn-sm" type="object" name="action_view_stock_moves">
                                                <i class="fa fa-clipboard" title="Movements" /> Movements
                                            </button>
                                        </div>
                                        <div class="col-6">
                                            <button class="btn btn-success btn-sm" type="object" name="action_view_quants">
                                                <i class="fa fa-map-marker" title="Locations" /> Locations
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">
                                        <i class="fa fa-edit" title="Edit" /> Edit Lot
                                    </a>
                                    <a role="menuitem" type="object" name="action_view_stock_moves" class="dropdown-item">
                                        <i class="fa fa-clipboard" title="View" /> View Movements
                                    </a>
                                    <a role="menuitem" type="delete" class="dropdown-item">
                                        <i class="fa fa-trash" title="Delete" /> Delete
                                    </a>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="stock_lot_view_tree" model="ir.ui.view">
            <field name="name">stock.lot.view.tree</field>
            <field name="model">stock.lot</field>
            <field name="arch" type="xml">
                <list decoration-success="product_qty &gt; 0" decoration-warning="retention_date and retention_date &lt; context_today" decoration-info="ref != False" decoration-danger="destruction_eligible == True">
                    <field name="name" string="Serial/Lot Number" />
                    <field name="product_id" string="Product" />
                    <field name="product_qty" string="Quantity" />
                    <field name="product_uom_id" string="UoM" />
                    <field name="create_date" string="Created" />
                    <field name="retention_date" string="Retention Due" optional="show" />
                    <field name="destruction_eligible" string="Eligible for Destruction" optional="show" />
                    <field name="ref" string="Reference" optional="hide" />
                    <field name="company_id" string="Company" groups="base.group_multi_company" optional="hide" />
                    <button name="action_view_stock_moves" type="object" string="Movements" icon="fa-exchange" class="btn-link" title="View Stock Movements" />
                    <button name="action_view_documents" type="object" string="Documents" icon="fa-file-text" class="btn-link" title="View Documents in Box" attrs="{'invisible': [('is_records_box', '=', False)]}"/>
                </list>
            </field>
        </record>
        <record id="stock_lot_view_form" model="ir.ui.view">
            <field name="name">stock.lot.view.form</field>
            <field name="model">stock.lot</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_view_stock_moves" type="object" string="View Movements" class="btn-primary"/>
                        <button name="action_view_documents" type="object" string="View Documents" class="btn-secondary" attrs="{'invisible': [('is_records_box', '=', False)]}"/>
                        <button name="action_mark_destruction_eligible" type="object" string="Mark for Destruction" class="btn-warning" attrs="{'invisible': ['|', ('destruction_eligible', '=', True), ('is_records_box', '=', False)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box"></div>
                        <group>
                            <group string="Lot/Serial Information">
                                <field name="name" placeholder="e.g., LOT-2024-001" />
                                <field name="product_id" required="1" />
                                <field name="ref" />
                                <field name="company_id" groups="base.group_multi_company" />
                            </group>
                            <group string="Inventory Details">
                                <field name="product_qty" readonly="1" />
                                <field name="product_uom_id" />
                                <field name="create_date" />
                            </group>
                        </group>
                        <group string="Records Management" attrs="{'invisible': [('is_records_box', '=', False)]}">
                            <group>
                                <field name="is_records_box" />
                                <field name="document_count" readonly="1" />
                                <field name="destruction_eligible" readonly="1" />
                            </group>
                            <group>
                                <field name="retention_date" />
                                <field name="destruction_date" readonly="1" />
                                <field name="last_audit_date" readonly="1" />
                            </group>
                        </group>
                        <group string="Audit Notes" attrs="{'invisible': [('is_records_box', '=', False)]}">
                            <field name="audit_notes" nolabel="1" placeholder="Internal audit notes and observations..." />
                        </group>
                        <notebook>
                            <page string="Documents" name="documents" attrs="{'invisible': [('is_records_box', '=', False)]}">
                                <field name="document_ids" readonly="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="document_type_id"/>
                                        <field name="description"/>
                                        <field name="create_date"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Stock Information" name="stock_info">
                                <group>
                                    <group string="Current Stock">
                                        <label for="product_qty" />
                                        <div class="o_row">
                                            <field name="product_qty" readonly="1" />
                                            <field name="product_uom_id" readonly="1" nolabel="1" />
                                        </div>
                                    </group>
                                    <group string="Location">
                                        <p>Use Inventory → Products → Lots/Serial Numbers to view detailed stock movements and locations.</p>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="stock_lot_view_search" model="ir.ui.view">
            <field name="name">stock.lot.view.search</field>
            <field name="model">stock.lot</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Serial/Lot" filter_domain="[('name', 'ilike', self)]" />
                    <field name="product_id" />
                    <field name="ref" />
                    <field name="create_date" />
                    <filter string="In Stock" name="in_stock" domain="[('product_qty', '&gt;', 0)]" />
                    <filter string="Out of Stock" name="out_of_stock" domain="[('product_qty', '=', 0)]" />
                    <separator />
                    <filter string="Past Retention" name="past_retention" domain="[('retention_date', '&lt;', context_today)]" />
                    <filter string="Retention Due Soon (30 days)" name="retention_soon" domain="[('retention_date', '&lt;=', (context_today + relativedelta(days=30))), ('retention_date', '&gt;=', context_today)]" />
                    <filter string="Retention Current" name="retention_current" domain="[('retention_date', '&gt;=', context_today)]" />
                    <separator />
                    <filter string="Records Boxes" name="records_boxes" domain="[('is_records_box', '=', True)]" />
                    <filter string="Eligible for Destruction" name="destruction_eligible" domain="[('destruction_eligible', '=', True)]" />
                    <separator />
                    <filter string="With Reference" name="with_reference" domain="[('ref', '!=', False)]" />
                    <separator />
                    <filter string="Created Today" name="created_today" domain="[('create_date', '&gt;=', context_today)]"/>
                    <filter string="Created This Week" name="created_this_week" domain="[('create_date', '&gt;=', (context_today - relativedelta(days=7)))]"/>
                    <filter string="Created This Month" name="created_this_month" domain="[('create_date', '&gt;=', (context_today - relativedelta(days=30)))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Product" name="group_by_product" context="{'group_by': 'product_id'}" />
                        <filter string="Company" name="group_by_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company" />
                        <filter string="Creation Date" name="group_by_create_date" context="{'group_by': 'create_date:month'}" />
                        <filter string="Retention Date" name="group_by_retention" context="{'group_by': 'retention_date:month'}" />
                        <filter string="Records vs Regular" name="group_by_records_type" context="{'group_by': 'is_records_box'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="action_stock_lot" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model stock.lot has state field - consider using default search filters -->
            <field name="name">Serial Numbers / Lots</field>
            <field name="res_model">stock.lot</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="stock_lot_view_search" />
            <field name="context">{'search_default_in_stock': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-box" title="Serial/Lot" />
            Create your first serial number or lot!
</p>
                <p>
                    <b>Records Management Inventory Tracking:</b>
                    <br />

•<i class="fa fa-box" title="Serial/Lot" />
            Complete serial number and lot management<br />
            •<i class="fa fa-link" title="Integration" />
            Integration with Records Management system<br />
            •<i class="fa fa-bar-chart" title="Analytics" />
            Real-time stock movement tracking<br />
            •<i class="fa fa-clock-o" title="Time" />
            Expiration date monitoring and alerts<br />
            •<i class="fa fa-tag" title="Tags" />
            Product and reference tracking<br />
            •<i class="fa fa-clipboard" title="Audit" />
            Complete audit trail and history<br />
            •<i class="fa fa-building" title="Company" />
            Multi-company support
</p>
            </field>
        </record>
    </data>
</odoo>
