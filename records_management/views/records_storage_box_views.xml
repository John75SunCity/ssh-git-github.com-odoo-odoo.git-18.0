<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_records_storage_box_tree" model="ir.ui.view">
            <field name="name">records.storage.box.tree</field>
            <field name="model">records.storage.box</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <tree string="Storage Boxes">
                    <field name="name"/>
                    <field name="box_size"/>
                    <field name="location_id"/>
                    <field name="state"/>
                    <field name="document_count"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_records_storage_box_form" model="ir.ui.view">
            <field name="name">records.storage.box.form</field>
            <field name="model">records.storage.box</field>
            <field name="type">form</field>
        <field name="arch" type="xml">
                <form string="Storage Box">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_use,archived"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="box_size"/>
                                <field name="location_id"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Documents">
                                <field name="document_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_records_storage_box_search" model="ir.ui.view">
            <field name="name">records.storage.box.search</field>
            <field name="model">records.storage.box</field>
            <field name="type">search</field>
        <field name="arch" type="xml">
                <search string="Search Storage Boxes">
                    <field name="name"/>
                    <field name="box_size"/>
                    <field name="location_id"/>
                    <field name="state"/>
                    <filter string="In Use" name="in_use" domain="[('state', '=', 'in_use')]"/>
                    <filter string="Archived" name="archived" domain="[('state', '=', 'archived')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="Location" name="group_by_location" context="{'group_by': 'location_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_records_storage_box" model="ir.actions.act_window">
            <field name="name">Storage Boxes</field>
            <field name="res_model">records.storage.box</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new storage box.
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_records_storage_box"
                  name="Storage Boxes"
                  parent="records_management.menu_records_management_inventory"
                  action="action_records_storage_box"
                  sequence="20"/>

    </data>
</odoo>
