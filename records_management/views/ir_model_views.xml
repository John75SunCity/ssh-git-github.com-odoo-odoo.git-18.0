<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="ir_model_view_tree" model="ir.ui.view">
            <field name="name">ir.model.view.tree</field>
            <field name="model">ir.model</field>
            <field name="type">list</field>
        <field name="arch" type="xml">
                <tree string="Model">
                    name
                    model
                    state
                    info
                    field_id
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="ir_model_view_form" model="ir.ui.view">
            <field name="name">ir.model.view.form</field>
            <field name="model">ir.model</field>
            <field name="type">form</field>
        <field name="arch" type="xml">
                <form string="Model">
                    <sheet>
                        <group>
                            name
                            model
                            state
                            info
                            field_id
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="ir_model_view_search" model="ir.ui.view">
            <field name="name">ir.model.view.search</field>
            <field name="model">ir.model</field>
            <field name="type">search</field>
        <field name="arch" type="xml">
                <search string="Search Model">
                    <field name="name"/>
                    <field name="model"/>
                    <field name="state"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_ir_model" model="ir.actions.act_window">
            <field name="name">Model</field>
            <field name="res_model">ir.model</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu -->
        <!--
        <menuitem
            id="menu_ir_model"
            name="Model"
            action="action_ir_model"
            parent="REPLACE_WITH_PARENT_MENU_ID"
            sequence="10"/>
        -->

    </data>
</odoo>
