<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="work_order_retrieval_view_tree" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.tree</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <list string="Work Order Retrievals" decoration-info="state=='draft'" decoration-warning="state=='in_progress'" decoration-success="state=='completed'">
                    <field name="name" />
                    <field name="work_order_id" />
                    <field name="customer_id" />
                    <field name="retrieval_date" />
                    <field name="assigned_technician_id" />
                    <field name="state" widget="badge" />
                    <field name="priority" widget="priority" />
                    <field name="location_id" />
                    <field name="total_boxes" />
                    <field name="completed_boxes" />
                    <field name="activity_ids" widget="list_activity" />
                </list>
            </field>
        </record>
        <record id="work_order_retrieval_view_form" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.form</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <form string="Work Order Retrieval">
                    <header>
                        <button name="action_start_retrieval" type="object" string="Start Retrieval" class="oe_highlight" invisible="state != 'draft'" />
                        <button name="action_complete_retrieval" type="object" string="Complete Retrieval" class="oe_highlight" invisible="state != 'in_progress'" />
                        <button name="action_cancel_retrieval" type="object" string="Cancel" invisible="state in ('completed', 'cancelled')" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action" name="%(action_records_box)d" icon="fa-archive" context="{'search_default_retrieval_id': active_id}">
                                <field name="total_boxes" string="Boxes" widget="statinfo" />
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_audit_logs" icon="fa-list-alt">
                                <field name="audit_log_count" string="Audit Logs" widget="statinfo" />
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True" />
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" placeholder="e.g. WOR-2024-001" />
                            </h1>
                        </div>
                        <group>
                            <group name="main_info">
                                <field name="work_order_id" required="1" />
                                <field name="customer_id" />
                                <field name="retrieval_date" required="1" />
                                <field name="priority" />
                                <field name="assigned_technician_id" domain="[('share', '=', False)]" />
                            </group>
                            <group name="location_info">
                                <field name="location_id" required="1" />
                                <field name="pickup_address" />
                                <field name="special_instructions" />
                                <field name="estimated_duration" />
                            </group>
                        </group>
                        <group name="progress_info">
                            <group>
                                <field name="total_boxes" readonly="1" />
                                <field name="completed_boxes" readonly="1" />
                                <field name="progress_percentage" widget="progressbar" />
                            </group>
                            <group>
                                <field name="start_time" />
                                <field name="completion_time" />
                                <field name="actual_duration" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Retrieval Details" name="details">
                                <group>
                                    <field name="retrieval_type" />
                                    <field name="equipment_needed" />
                                    <field name="access_requirements" />
                                    <field name="safety_notes" />
                                </group>
                            </page>
                            <page string="Items to Retrieve" name="items">
                                <field name="retrieval_item_ids">
                                    <list editable="bottom">
                                        <field name="box_id" domain="[('location_id', '=', parent.location_id)]" />
                                        <field name="item_description" />
                                        <field name="retrieved" widget="boolean_toggle" />
                                        <field name="retrieval_time" />
                                        <field name="notes" />
                                    </list>
                                </field>
                            </page>
                            <page string="Audit Trail" name="audit">
                                <field name="audit_log_ids" readonly="1">
                                    <list>
                                        <field name="timestamp" />
                                        <field name="user_id" />
                                        <field name="action" />
                                        <field name="details" />
                                    </list>
                                </field>
                            </page>
                            <page string="Documents" name="documents">
                                <field name="attachment_ids" widget="many2many_binary" />
                            </page>
                        </notebook>
                        <group name="completion_info" invisible="state != 'completed'">
                            <field name="completion_notes" />
                            <field name="customer_signature" widget="signature" />
                            <field name="technician_signature" widget="signature" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
        <record id="work_order_retrieval_view_kanban" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.kanban</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name" />
                    <field name="customer_id" />
                    <field name="assigned_technician_id" />
                    <field name="retrieval_date" />
                    <field name="priority" />
                    <field name="state" />
                    <field name="progress_percentage" />
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_content">
                                    <div class="o_kanban_record_title">
                                        <field name="name" />
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="customer_id" />
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="priority" widget="priority" />
                                            <field name="retrieval_date" />
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="assigned_technician_id" widget="many2one_avatar_user" />
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_top_right">
                                            <field name="progress_percentage" widget="progressbar" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="work_order_retrieval_view_search" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.search</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Retrieval" filter_domain="[('name', 'ilike', self)]" />
                    <field name="customer_id" />
                    <field name="work_order_id" />
                    <field name="assigned_technician_id" />
                    <field name="location_id" />
                    <separator />
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" />
                    <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]" />
                    <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]" />
                    <separator />
                    <filter string="High Priority" name="high_priority" domain="[('priority', '=', '3')]" />
                    <filter string="My Retrievals" name="my_retrievals" domain="[('assigned_technician_id', '=', uid)]" />
                    <filter string="Today" name="today" domain="[('retrieval_date', '!=', False)]" />
                    <filter string="This Week" name="this_week" domain="[('retrieval_date', '&gt;=', (context_today - datetime.timedelta(days=context_today.weekday())).strftime('%Y-%m-%d')),                                         ('retrieval_date', '&lt;=', (context_today + datetime.timedelta(days=6-context_today.weekday())).strftime('%Y-%m-%d'))]" />
                    <separator />
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]" />
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}" />
                        <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}" />
                        <filter string="Technician" name="group_technician" context="{'group_by': 'assigned_technician_id'}" />
                        <filter string="Retrieval Date" name="group_date" context="{'group_by': 'retrieval_date'}" />
                        <filter string="Location" name="group_location" context="{'group_by': 'location_id'}" />
                        <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="action_work_order_retrieval" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model work.order.retrieval has state field - consider using default search filters -->
            <!-- OPTIMIZATION: Model work.order.retrieval has sequence field - consider adding _order="sequence" to model -->
            <field name="name">Work Order Retrievals</field>
            <field name="res_model">work.order.retrieval</field>
            <!-- Added activity, graph, and pivot views for analytical and scheduling capabilities -->
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{
            'search_default_in_progress': 1,
            'search_default_my_retrievals': 1
        }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-hand-grab-o"/> No work order retrievals yet!
                </p>
                <p>
                    <b>‚ö†Ô∏è Prerequisites:</b>
                </p>
                <ul>
                    <li>‚úì <b>Parent Work Order</b> - Go to: <i>Records Management &gt; Work Orders &gt; Retrieval Orders</i></li>
                    <li>‚úì <b>Warehouse Locations</b> - Go to: <i>Records Management &gt; Locations</i></li>
                    <li>‚úì <b>Field Technicians</b> - Go to: <i>Employees &gt; Retrieval Teams</i></li>
                    <li>‚úì <b>Items to Retrieve</b> - Go to: <i>Records Management &gt; Containers/Documents</i></li>
                </ul>
                <p>
                    <b>üìã To execute a work order retrieval:</b>
                </p>
                <ol>
                    <li>Auto-created from parent <b>Retrieval Order</b> (or create manually)</li>
                    <li>Review <b>Customer</b> and <b>Work Order Reference</b></li>
                    <li>Set <b>Retrieval Date</b> and <b>Estimated Duration</b></li>
                    <li>Assign <b>Field Technician</b> to execute retrieval</li>
                    <li>Select <b>Storage Location</b> where items are kept</li>
                    <li>Add <b>Pickup Address</b> if retrieving from customer site (vs warehouse)</li>
                    <li>Enter <b>Special Instructions</b> (access codes, parking, contact person)</li>
                    <li>Set <b>Priority</b> (0-3 stars) for urgent same-day retrievals</li>
                    <li>List <b>Items to Retrieve</b> (boxes, documents, containers) with descriptions</li>
                    <li>Specify <b>Retrieval Type</b>:
                        <ul>
                            <li><b>Temporary:</b> Return to storage after customer use (e.g., viewing/scanning)</li>
                            <li><b>Permanent:</b> Deliver to customer, remove from inventory</li>
                            <li><b>Inspection:</b> Pull for quality check, damage assessment, inventory audit</li>
                        </ul>
                    </li>
                    <li>Note <b>Equipment Needed</b> (hand truck, ladder, pallet jack)</li>
                    <li>Log <b>Access Requirements</b> (security clearance, building access, elevators)</li>
                    <li>Add <b>Safety Notes</b> (heavy boxes, fragile items, hazmat)</li>
                    <li>Click <b>Start Retrieval</b> when technician begins work (auto-logs start time)</li>
                    <li>Technician checks off <b>Retrieved</b> checkbox for each item as found</li>
                    <li>Progress bar updates in real-time as items completed</li>
                    <li>Technician adds <b>Notes</b> for any missing/damaged items</li>
                    <li>Capture <b>Customer Signature</b> if delivering to customer site</li>
                    <li>Capture <b>Technician Signature</b> for chain of custody</li>
                    <li>Click <b>Complete Retrieval</b> (auto-logs completion time, calculates actual duration)</li>
                    <li>System auto-attaches photos, updates audit trail, notifies customer</li>
                </ol>
                <p>
                    <b>üìä Retrieval States:</b>
                </p>
                <ul>
                    <li><b>Draft:</b> New retrieval created, items being listed, technician not yet assigned</li>
                    <li><b>In Progress:</b> Technician actively retrieving items, real-time progress tracking enabled</li>
                    <li><b>Completed:</b> All items retrieved, signatures captured, duration recorded, audit sealed</li>
                    <li><b>Cancelled:</b> Retrieval terminated (customer cancellation, items not found, access denied)</li>
                </ul>
                <p>
                    <b>üöÄ Key Features:</b><br/>
                    ‚Ä¢ <b>Real-Time Progress:</b> Visual progress bar shows % completion, items remaining<br/>
                    ‚Ä¢ <b>Technician Dashboard:</b> "My Retrievals" view filtered to assigned user with today\'s tasks<br/>
                    ‚Ä¢ <b>Duration Tracking:</b> Auto-calculates actual vs estimated time for labor cost accuracy<br/>
                    ‚Ä¢ <b>Item-Level Tracking:</b> Check off each box/document as retrieved with retrieval timestamps<br/>
                    ‚Ä¢ <b>Digital Signatures:</b> Customer + Technician e-signatures for chain of custody compliance<br/>
                    ‚Ä¢ <b>Photo Attachments:</b> Add photos of items, damage, or proof of delivery<br/>
                    ‚Ä¢ <b>Audit Trail:</b> Complete immutable log from assignment through completion<br/>
                    ‚Ä¢ <b>Equipment Checklist:</b> Pre-plan required tools to avoid return trips<br/>
                    ‚Ä¢ <b>Safety Documentation:</b> Log hazards, safety equipment used, incident reports<br/>
                    ‚Ä¢ <b>Performance Analytics:</b> Graph/pivot views for team productivity, time estimation accuracy<br/>
                </p>
                <p>
                    <b>üí° Pro Tips:</b><br/>
                    ‚Ä¢ Use <b>My Retrievals</b> filter to show only your assigned tasks with today\'s priority items first<br/>
                    ‚Ä¢ Set <b>realistic estimated durations</b> - system learns and suggests better estimates over time<br/>
                    ‚Ä¢ Always log <b>special instructions</b> - saves time on repeat visits to same customer sites<br/>
                    ‚Ä¢ Mark <b>high priority</b> (3 stars) for same-day urgent retrievals - highlights in red<br/>
                    ‚Ä¢ Use <b>Activity</b> view to see all retrievals on calendar/schedule for resource planning<br/>
                    ‚Ä¢ Review <b>Graph view</b> weekly to identify technicians consistently over/under estimated times<br/>
                </p>
            </field>
        </record>
        <record id="action_work_order_retrieval_dashboard" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model work.order.retrieval has state field - consider using default search filters -->
            <!-- OPTIMIZATION: Model work.order.retrieval has sequence field - consider adding _order="sequence" to model -->
            <field name="name">My Retrievals</field>
            <field name="res_model">work.order.retrieval</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('assigned_technician_id', '=', uid)]</field>
            <field name="context">{
            'search_default_today': 1,
            'search_default_in_progress': 1
        }</field>
        </record>
        <!-- Activity view: enables mail.activity based scheduling overview -->
        <record id="work_order_retrieval_view_activity" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.activity</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <activity string="Work Order Retrieval Activities"/>
            </field>
        </record>
        <!-- Graph view: progress and duration analytics over time -->
        <record id="work_order_retrieval_view_graph" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.graph</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <graph string="Retrieval Performance" type="bar" stacked="True">
                    <field name="scheduled_date" interval="day" />
                    <field name="actual_duration" type="measure" />
                    <field name="estimated_duration" type="measure" />
                    <field name="item_count" type="measure" />
                    <field name="state" />
                </graph>
            </field>
        </record>
        <!-- Pivot view: multidimensional analysis (state, priority, partner, team) -->
        <record id="work_order_retrieval_view_pivot" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.pivot</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <pivot string="Retrieval Analysis" disable_linking="True">
                    <field name="scheduled_date" interval="month" />
                    <field name="partner_id" />
                    <field name="state" />
                    <field name="priority" />
                    <field name="assigned_team_id" />
                    <field name="actual_duration" type="measure" />
                    <field name="estimated_duration" type="measure" />
                    <field name="item_count" type="measure" />
                </pivot>
            </field>
        </record>
    </data>
</odoo>
