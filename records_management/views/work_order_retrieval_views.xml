<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="work_order_retrieval_view_tree" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.tree</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <list string="Work Order Retrievals" decoration-info="state=='scheduled'" decoration-warning="state=='in_progress'" decoration-success="state=='completed'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="scheduled_date"/>
                    <field name="user_id"/>
                    <field name="state" widget="badge"/>
                    <field name="priority" widget="priority"/>
                    <field name="item_count"/>
                </list>
            </field>
        </record>
        <record id="work_order_retrieval_view_form" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.form</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <form string="Work Order Retrieval">
                    <header>
                        <button name="action_start_retrieval" type="object" string="‚ñ∂Ô∏è Start Retrieval" class="oe_highlight" invisible="state != 'scheduled'"/>
                        <button name="action_open_camera_scanner" type="object" string="üì∑ Camera Scan" class="btn-info" invisible="state not in ('scheduled', 'in_progress')" title="Scan containers using phone camera"/>
                        <button name="action_open_picklist_scanner" type="object" string="‚å®Ô∏è Keyboard Scan" class="btn-secondary" invisible="state not in ('scheduled', 'in_progress')" title="Type barcodes manually or use USB scanner"/>
                        <button name="action_complete_retrieval" type="object" string="‚úÖ Complete Retrieval" class="oe_highlight" invisible="state != 'in_progress'"/>
                        <button name="action_create_invoice" type="object" string="üí∞ Create Invoice" 
                                class="btn-primary" invisible="state != 'completed' or invoice_id"
                                groups="records_management.group_records_manager"/>
                        <button name="action_view_invoice" type="object" string="View Invoice" 
                                class="btn-secondary" invisible="not invoice_id"/>
                        <button name="action_reset_for_rebilling" type="object" string="Reset for Re-billing" 
                                class="btn-warning" invisible="not invoice_id"
                                groups="records_management.group_records_manager"
                                confirm="This will unlink the invoice from this work order, allowing it to be billed again. Continue?"/>
                        <button name="action_cancel_retrieval" type="object" string="Cancel" invisible="state in ('completed', 'cancelled')"/>
                        <field name="state" widget="statusbar" statusbar_visible="scheduled,in_progress,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-money"
                                    invisible="not invoice_id">
                                <field name="invoice_status" widget="badge" string="Invoice"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. WOR-2024-001"/>
                            </h1>
                        </div>
                        <group>
                            <group name="main_info">
                                <field name="partner_id" required="1"
                                       placeholder="Type customer name..."
                                       options="{'no_create': True, 'no_quick_create': True}"
                                       autocomplete="off"/>
                                <field name="department_id"
                                       placeholder="Select department..."
                                       domain="[('partner_id', '=', partner_id)]"
                                       options="{'no_create': True, 'no_quick_create': True}"/>
                                <field name="customer_staging_location_id"
                                       placeholder="Select staging location..."
                                       domain="[('partner_id', '=', partner_id), '|', ('department_id', '=', department_id), ('department_id', '=', False)]"
                                       options="{'no_create': True, 'no_quick_create': True}"/>
                                <field name="scheduled_date" required="1"/>
                                <field name="priority" widget="priority"/>
                                <field name="user_id" 
                                       placeholder="Type technician name..."
                                       domain="[('share', '=', False)]"
                                       options="{'no_create': True}"
                                       autocomplete="off"/>
                            </group>
                            <group name="location_info">
                                <field name="company_id"/>
                                <field name="pickup_address"/>
                                <field name="special_instructions"/>
                                <field name="estimated_duration"/>
                            </group>
                        </group>
                        <group name="progress_info">
                            <group>
                                <field name="total_boxes" readonly="1"/>
                                <field name="completed_boxes" readonly="1"/>
                                <field name="progress_percentage" widget="progressbar"/>
                            </group>
                            <group>
                                <field name="start_time"/>
                                <field name="completion_time"/>
                                <field name="actual_duration"/>
                            </group>
                        </group>
                        <notebook>
                            <!-- Line Items Tab (Sales Order Style Billing) -->
                            <page name="line_items" string="Line Items">
                                <field name="line_ids" nolabel="1" widget="section_and_note_one2many">
                                    <list editable="bottom" decoration-muted="state == 'cancelled'">
                                        <field name="sequence" widget="handle"/>
                                        <field name="barcode" optional="show"/>
                                        <field name="scan_timestamp" optional="hide"/>
                                        <field name="name"/>
                                        <field name="line_type" optional="hide"/>
                                        <field name="product_id"/>
                                        <field name="container_id" optional="hide"/>
                                        <field name="quantity"/>
                                        <field name="uom_id" optional="hide"/>
                                        <field name="unit_price" widget="monetary"/>
                                        <field name="subtotal" widget="monetary" sum="Total"/>
                                        <field name="state" widget="badge"
                                               decoration-info="state == 'pending'"
                                               decoration-success="state == 'processed'"
                                               decoration-muted="state in ('invoiced', 'cancelled')"/>
                                    </list>
                                </field>
                                <group class="oe_subtotal_footer">
                                    <field name="line_count" string="Items"/>
                                    <field name="total_amount" widget="monetary" class="oe_subtotal_footer_separator"/>
                                </group>
                            </page>
                            <page string="Retrieval Details" name="details">
                                <group>
                                    <field name="equipment_needed"/>
                                    <field name="access_requirements"/>
                                    <field name="safety_notes"/>
                                </group>
                            </page>
                            <page string="Items to Retrieve" name="items">
                                <field name="retrieval_item_ids">
                                    <list editable="bottom">
                                        <field name="box_id"/>
                                        <field name="location_id" optional="show"/>
                                        <field name="barcode" optional="show"/>
                                        <field name="item_description"/>
                                        <field name="retrieved" widget="boolean_toggle"/>
                                        <field name="retrieval_time"/>
                                        <field name="notes"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Documents" name="documents">
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </page>
                            <page string="Customer Balance" name="customer_balance">
                                <div class="alert alert-danger" role="alert" invisible="not show_payment_alert">
                                    <strong>‚ö†Ô∏è Payment Collection Recommended</strong>
                                    <p>This customer has a significant past due balance. Please discuss payment options during this service call.</p>
                                </div>
                                <group>
                                    <group string="Company Balance">
                                        <field name="customer_total_balance" widget="monetary"/>
                                        <field name="customer_past_due_balance" widget="monetary"/>
                                        <field name="customer_balance_status" widget="badge" 
                                               decoration-success="customer_balance_status == 'current'"
                                               decoration-warning="customer_balance_status == 'attention'"
                                               decoration-danger="customer_balance_status in ('overdue', 'critical')"/>
                                    </group>
                                    <group string="Department Balance" invisible="not department_total_balance">
                                        <field name="department_total_balance" widget="monetary"/>
                                    </group>
                                </group>
                                <group string="Payment Actions">
                                    <div class="d-flex gap-2 flex-wrap">
                                        <button name="action_field_payment" type="object" 
                                                string="üí≥ Collect Payment" class="btn-primary"
                                                help="Collect payment from customer on-site"/>
                                        <button name="action_view_unpaid_invoices" type="object" 
                                                string="üìã View Unpaid Invoices" class="btn-secondary"
                                                help="View all unpaid invoices for this customer"/>
                                        <button name="action_view_payment_history" type="object" 
                                                string="üìä Payment History" class="btn-secondary"
                                                help="View payment history for this customer"/>
                                    </div>
                                </group>
                                <group string="Payment Notes">
                                    <p class="text-muted">
                                        <strong>Balance Status Guide:</strong><br/>
                                        ‚Ä¢ <span class="badge bg-success">Current</span> - All invoices within terms<br/>
                                        ‚Ä¢ <span class="badge bg-warning">Needs Attention</span> - 30+ days past due<br/>
                                        ‚Ä¢ <span class="badge bg-danger">Overdue</span> - 60+ days or $500+ past due<br/>
                                        ‚Ä¢ <span class="badge bg-danger">Critical</span> - 90+ days or $1,000+ past due - Collect payment!
                                    </p>
                                </group>
                            </page>
                            <page string="Billing" name="billing">
                                <group>
                                    <group string="Service Details">
                                        <field name="billable"/>
                                        <field name="service_product_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                    </group>
                                    <group string="Discount (Optional)">
                                        <field name="discount_amount" widget="monetary"/>
                                        <field name="discount_reason" placeholder="Reason for discount..."
                                               invisible="not discount_amount"/>
                                        <field name="subtotal" widget="monetary" string="Total to Invoice"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Invoice Status">
                                        <field name="invoice_status"/>
                                        <field name="invoiced_amount" widget="monetary"/>
                                        <field name="invoice_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                        <group name="completion_info" invisible="state != 'completed'">
                            <field name="completion_notes"/>
                            <field name="customer_signature" widget="signature"/>
                            <field name="technician_signature" widget="signature"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="work_order_retrieval_view_kanban" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.kanban</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="scheduled_date"/>
                    <field name="priority"/>
                    <field name="state"/>
                    <field name="progress_percentage"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_content">
                                    <div class="o_kanban_record_title">
                                        <field name="name"/>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="partner_id"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="priority" widget="priority"/>
                                            <field name="scheduled_date"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="user_id" widget="many2one_avatar_user"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_top_right">
                                            <field name="progress_percentage" widget="progressbar"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="work_order_retrieval_view_search" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.search</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Retrieval" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <separator/>
                    <filter string="Scheduled" name="scheduled" domain="[('state', '=', 'scheduled')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                    <separator/>
                    <filter string="High Priority" name="high_priority" domain="[('priority', 'in', ['2', '3'])]"/>
                    <filter string="My Retrievals" name="my_retrievals" domain="[('user_id', '=', uid)]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Customer" name="group_customer" context="{'group_by': 'partner_id'}"/>
                        <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_work_order_retrieval" model="ir.actions.act_window">
            <field name="name">Work Order Retrievals</field>
            <field name="res_model">work.order.retrieval</field>
            <field name="view_mode">list,form,kanban,activity,graph,pivot</field>
            <field name="domain">[]</field>
            <field name="context">{
            'search_default_in_progress': 1,
            'search_default_my_retrievals': 1
        }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-hand-grab-o"/> No work order retrievals yet!
                </p>
                <p>
                    <b>‚ö†Ô∏è Prerequisites:</b>
                </p>
                <ul>
                    <li>‚úì <b>Parent Work Order</b> - Go to: <i>Records Management &gt; Work Orders &gt; Retrieval Orders</i></li>
                    <li>‚úì <b>Warehouse Locations</b> - Go to: <i>Records Management &gt; Locations</i></li>
                    <li>‚úì <b>Field Technicians</b> - Go to: <i>Employees &gt; Retrieval Teams</i></li>
                    <li>‚úì <b>Items to Retrieve</b> - Go to: <i>Records Management &gt; Containers/Documents</i></li>
                </ul>
                <p>
                    <b>üìã To execute a work order retrieval:</b>
                </p>
                <ol>
                    <li>Auto-created from parent <b>Retrieval Order</b> (or create manually)</li>
                    <li>Review <b>Customer</b> and <b>Work Order Reference</b></li>
                    <li>Set <b>Scheduled Date</b> and <b>Estimated Duration</b></li>
                    <li>Assign <b>Field Technician</b> to execute retrieval</li>
                    <li>Add <b>Pickup Address</b> if retrieving from customer site (vs warehouse)</li>
                    <li>Enter <b>Special Instructions</b> (access codes, parking, contact person)</li>
                    <li>Set <b>Priority</b> (0-3 stars) for urgent same-day retrievals</li>
                    <li>List <b>Items to Retrieve</b> (boxes, documents, containers) with descriptions</li>
                    <li>Note <b>Equipment Needed</b> (hand truck, ladder, pallet jack)</li>
                    <li>Log <b>Access Requirements</b> (security clearance, building access, elevators)</li>
                    <li>Add <b>Safety Notes</b> (heavy boxes, fragile items, hazmat)</li>
                    <li>Click <b>Start Retrieval</b> when technician begins work (auto-logs start time)</li>
                    <li>Technician checks off <b>Retrieved</b> checkbox for each item as found</li>
                    <li>Progress bar updates in real-time as items completed</li>
                    <li>Technician adds <b>Notes</b> for any missing/damaged items</li>
                    <li>Capture <b>Customer Signature</b> if delivering to customer site</li>
                    <li>Capture <b>Technician Signature</b> for chain of custody</li>
                    <li>Click <b>Complete Retrieval</b> (auto-logs completion time, calculates actual duration)</li>
                    <li>System auto-attaches photos, updates audit trail, notifies customer</li>
                </ol>
                <p>
                    <b>üìä Retrieval States:</b>
                </p>
                <ul>
                    <li><b>Draft:</b> New retrieval created, items being listed, technician not yet assigned</li>
                    <li><b>In Progress:</b> Technician actively retrieving items, real-time progress tracking enabled</li>
                    <li><b>Completed:</b> All items retrieved, signatures captured, duration recorded, audit sealed</li>
                    <li><b>Cancelled:</b> Retrieval terminated (customer cancellation, items not found, access denied)</li>
                </ul>
                <p>
                    <b>üöÄ Key Features:</b><br/>
                    ‚Ä¢ <b>Real-Time Progress:</b> Visual progress bar shows % completion, items remaining<br/>
                    ‚Ä¢ <b>Technician Dashboard:</b> "My Retrievals" view filtered to assigned user with today\'s tasks<br/>
                    ‚Ä¢ <b>Duration Tracking:</b> Auto-calculates actual vs estimated time for labor cost accuracy<br/>
                    ‚Ä¢ <b>Item-Level Tracking:</b> Check off each box/document as retrieved with retrieval timestamps<br/>
                    ‚Ä¢ <b>Digital Signatures:</b> Customer + Technician e-signatures for chain of custody compliance<br/>
                    ‚Ä¢ <b>Photo Attachments:</b> Add photos of items, damage, or proof of delivery<br/>
                    ‚Ä¢ <b>Audit Trail:</b> Complete immutable log from assignment through completion<br/>
                    ‚Ä¢ <b>Equipment Checklist:</b> Pre-plan required tools to avoid return trips<br/>
                    ‚Ä¢ <b>Safety Documentation:</b> Log hazards, safety equipment used, incident reports<br/>
                    ‚Ä¢ <b>Performance Analytics:</b> Graph/pivot views for team productivity, time estimation accuracy<br/>
                </p>
            </field>
        </record>
        <record id="action_work_order_retrieval_dashboard" model="ir.actions.act_window">
            <field name="name">My Retrievals</field>
            <field name="res_model">work.order.retrieval</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('user_id', '=', uid)]</field>
            <field name="context">{
            'search_default_in_progress': 1
        }</field>
        </record>
        <!-- Activity view: enables mail.activity based scheduling overview -->
        <record id="work_order_retrieval_view_activity" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.activity</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <activity string="Work Order Retrieval Activities"/>
            </field>
        </record>
        <!-- Graph view: progress and duration analytics over time -->
        <record id="work_order_retrieval_view_graph" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.graph</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <graph string="Retrieval Performance" type="bar" stacked="True">
                    <field name="scheduled_date" interval="day"/>
                    <field name="actual_duration" type="measure"/>
                    <field name="estimated_duration" type="measure"/>
                    <field name="item_count" type="measure"/>
                    <field name="state"/>
                </graph>
            </field>
        </record>
        <!-- Pivot view: multidimensional analysis (state, priority, partner, team) -->
        <record id="work_order_retrieval_view_pivot" model="ir.ui.view">
            <field name="name">work.order.retrieval.view.pivot</field>
            <field name="model">work.order.retrieval</field>
            <field name="arch" type="xml">
                <pivot string="Retrieval Analysis" disable_linking="True">
                    <field name="scheduled_date" interval="month"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                    <field name="priority"/>
                    <field name="user_id"/>
                    <field name="actual_duration" type="measure"/>
                    <field name="estimated_duration" type="measure"/>
                    <field name="item_count" type="measure"/>
                </pivot>
            </field>
        </record>
    </data>
</odoo>
