<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View work.order.retrieval View List -->
    <record id="view_work_order_retrieval_list" model="ir.ui.view">
        <field name="name">view.work.order.retrieval.list</field>
        <field name="model">work.order.retrieval</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View work.order.retrieval form -->
    <record id="view_work_order_retrieval_form" model="ir.ui.view">
        <field name="name">view.work.order.retrieval.form</field>
        <field name="model">work.order.retrieval</field>
        <field name="arch" type="xml">
            <form string="Work Order Retrieval">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View work.order.retrieval search -->
    <record id="view_work_order_retrieval_search" model="ir.ui.view">
        <field name="name">view.work.order.retrieval.search</field>
        <field name="model">work.order.retrieval</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action work.order.retrieval -->
    <record id="action_work_order_retrieval" model="ir.actions.act_window">
        <field name="name">Work Order Retrieval</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">work.order.retrieval</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Work Order Retrieval.
            </p>
        </field>
    </record>

</odoo>
