<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit document tree to add bulk upload and temp barcode print actions -->
    <record id="records_document_view_tree_inherit_bulk_upload" model="ir.ui.view">
            <field name="name">records.document.view.tree.inherit.bulk.upload</field>
            <field name="model">records.document</field>
            <!-- Inherit the main records.document tree view -->
            <field name="inherit_id" ref="records_management.records_document_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">true</attribute>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="%(records_document_bulk_upload_wizard_action)d" type="action" string="Bulk Upload Files" class="oe_highlight"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
