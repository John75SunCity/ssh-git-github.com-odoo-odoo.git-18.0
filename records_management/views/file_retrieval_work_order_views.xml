<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View file.retrieval.work.order View List -->
<record id="file_retrieval_work_order_view_tree" model="ir.ui.view">
    <field name="name">file.retrieval.work.order.view.tree</field>
        <field name="model">file.retrieval.work.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View file.retrieval.work.order form -->
<record id="file_retrieval_work_order_view_form" model="ir.ui.view">
    <field name="name">file.retrieval.work.order.view.form</field>
        <field name="model">file.retrieval.work.order</field>
        <field name="arch" type="xml">
            <form string="File Retrieval Work Order">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View file.retrieval.work.order search -->
<record id="file_retrieval_work_order_view_search" model="ir.ui.view">
    <field name="name">file.retrieval.work.order.view.search</field>
        <field name="model">file.retrieval.work.order</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action file.retrieval.work.order -->
    <record id="action_file_retrieval_work_order" model="ir.actions.act_window">
        <field name="name">File Retrieval Work Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">file.retrieval.work.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new File Retrieval Work Order.
            </p>
        </field>
    </record>

</odoo>
