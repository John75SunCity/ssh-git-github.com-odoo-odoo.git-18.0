<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
<!-- List view for revenue.forecast -->
    <record id="revenue_forecast_view_tree" model="ir.ui.view">
        <field name="name">revenue.forecast.view.tree</field>
        <field name="model">revenue.forecast</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form view for revenue.forecast -->
    <record id="revenue_forecast_view_form" model="ir.ui.view">
        <field name="name">revenue.forecast.view.form</field>
        <field name="model">revenue.forecast</field>
        <field name="arch" type="xml">
            <form string="Revenue.Forecast">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for revenue.forecast -->
    <record id="revenue_forecast_view_search" model="ir.ui.view">
        <field name="name">revenue.forecast.view.search</field>
        <field name="model">revenue.forecast</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for revenue.forecast -->
    <record id="action_revenue_forecast" model="ir.actions.act_window">
        <field name="name">Revenue.Forecast</field>
        <field name="res_model">revenue.forecast</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new revenue.forecast.
            </p>
        </field>
    </record>
</data>

</odoo>
