<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="survey_improvement_action_view_tree" model="ir.ui.view">
            <field name="name">survey.improvement.action.view.tree</field>
            <field name="model">survey.improvement.action</field>
            <field name="arch" type="xml">
                <tree decoration-danger="priority == '3'" 
                      decoration-warning="priority == '2'" 
                      decoration-info="state == 'in_progress'"
                      decoration-muted="state in ('done', 'cancelled')">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="state" widget="badge" 
                           decoration-success="state == 'done'"
                           decoration-warning="state == 'in_progress'"
                           decoration-info="state == 'new'"
                           decoration-muted="state == 'cancelled'"/>
                    <field name="priority" widget="priority"/>
                    <field name="user_id" widget="many2one_avatar_user"/>
                    <field name="deadline"/>
                    <field name="feedback_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="survey_improvement_action_view_form" model="ir.ui.view">
            <field name="name">survey.improvement.action.view.form</field>
            <field name="model">survey.improvement.action</field>
            <field name="arch" type="xml">
                <form string="Survey Improvement Action">
                    <header>
                        <button name="action_mark_as_done" 
                                type="object" 
                                string="Mark as Done" 
                                class="btn-primary"
                                invisible="state in ('done', 'cancelled')"/>
                        <button name="action_reset_to_new" 
                                type="object" 
                                string="Reset to New" 
                                invisible="state == 'new'"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,in_progress,done"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" 
                                invisible="active == True"/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Action Title..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="priority" widget="priority"/>
                                <field name="user_id" widget="many2one_avatar_user"/>
                                <field name="deadline"/>
                                <field name="feedback_id"/>
                            </group>
                            <group>
                                <field name="sequence"/>
                                <field name="active"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" widget="html"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="survey_improvement_action_view_search" model="ir.ui.view">
            <field name="name">survey.improvement.action.view.search</field>
            <field name="model">survey.improvement.action</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Action Title" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="description"/>
                    <field name="user_id"/>
                    <field name="feedback_id"/>
                    <separator/>
                    <filter string="New" name="new" domain="[('state', '=', 'new')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <separator/>
                    <filter string="My Actions" name="my_actions" domain="[('user_id', '=', uid)]"/>
                    <filter string="Urgent" name="urgent" domain="[('priority', '=', '3')]"/>
                    <filter string="High Priority" name="high" domain="[('priority', '=', '2')]"/>
                    <separator/>
                    <filter string="Overdue" name="overdue" domain="[('deadline', '&lt;', context_today())]"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Status" name="status" domain="[]" context="{'group_by': 'state'}"/>
                        <filter string="Priority" name="priority_group" domain="[]" context="{'group_by': 'priority'}"/>
                        <filter string="Assigned User" name="user" domain="[]" context="{'group_by': 'user_id'}"/>
                        <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_survey_improvement_action" model="ir.actions.act_window">
            <field name="name">Survey Improvement Actions</field>
            <field name="res_model">survey.improvement.action</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Survey Improvement Action.
                </p>
                <p>
                    Track actions to improve your services based on customer feedback.
                    Set priorities, assign users, and monitor progress through completion.
                </p>
            </field>
        </record>
    </data>
</odoo>
