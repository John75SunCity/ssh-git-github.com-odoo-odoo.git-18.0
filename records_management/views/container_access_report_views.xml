<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="container_access_report_view_tree" model="ir.ui.view">
            <field name="name">container.access.report.tree</field>
            <field name="model">container.access.report</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="activity_id"/>
                    <field name="attachment_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="container_access_report_view_form" model="ir.ui.view">
            <field name="name">container.access.report.form</field>
            <field name="model">container.access.report</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group name="report_info">
                                <field name="name"/>
                                <field name="activity_id"/>
                                <field name="attachment_id"/>
                            </group>
                            <group name="additional_info">
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group name="content_group" string="Report Content">
                            <field name="content" nolabel="1" placeholder="Enter report content here..."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="container_access_report_view_search" model="ir.ui.view">
            <field name="name">container.access.report.search</field>
            <field name="model">container.access.report</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="activity_id"/>
                    <field name="content"/>

                    <filter name="has_attachment" string="Has Attachment" domain="[('attachment_id','!=',False)]"/>
                    <filter name="no_attachment" string="No Attachment" domain="[('attachment_id','=',False)]"/>

                    <separator/>
                    <filter name="my_company" string="My Company" domain="[('company_id','=',company_id)]"/>

                    <group expand="0" string="Group By">
                        <filter name="group_by_activity" string="Access Activity" context="{'group_by':'activity_id'}"/>
                        <filter name="group_by_company" string="Company" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="container_access_report_action" model="ir.actions.act_window">
            <field name="name">Container Access Reports</field>
            <field name="res_model">container.access.report</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new access report!
                </p>
                <p>
                    Generate formal reports for container access activities to maintain compliance and audit trails.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_container_access_report"
                  name="Access Reports"
                  parent="records_management.menu_container_access"
                  action="container_access_report_action"
                  sequence="20"/>

    </data>
</odoo>
