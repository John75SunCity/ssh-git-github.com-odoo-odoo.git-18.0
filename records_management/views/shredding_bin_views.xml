<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- List view for base.rate -->
    <record id="shredding_bin_view_tree" model="ir.ui.view">
        <field name="name">shredding.service.bin.view.tree</field>
        <field name="model">shredding.service.bin</field>
        <field name="arch" type="xml">
        <tree>
        <field name="name"/>
        </tree>
    </field>
    </record>

<!-- Form view for base.rate -->
    <record id="shredding_bin_view_form" model="ir.ui.view">
        <field name="name">shredding.service.bin.view.form</field>
        <field name="model">shredding.service.bin</field>
        <field name="arch" type="xml">
        <form string="Shredding Bin">
            <sheet>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
        <field name="name" placeholder="Name..."/>
                    </h1>
                </div>
            </sheet>
        </form>
    </field>
    </record>

<!-- Search view for base.rate -->
    <record id="shredding_bin_view_search" model="ir.ui.view">
        <field name="name">shredding.service.bin.view.search</field>
        <field name="model">shredding.service.bin</field>
        <field name="arch" type="xml">
        <search>
            <group expand="1" string="Group By">
                <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
            </group>
        </search>
    </field>
    </record>

<!-- List view for Action -->
    <record id="action_shredding_bin" model="ir.actions.act_window">
        <field name="name">Shredding Bin</field>
        <field name="res_model">shredding.service.bin</field>
        <field name="view_mode>tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            There is no examples click here to add new Shredding Bin.
        </p>
    </field>
    </record>
    </data>
</odoo>
