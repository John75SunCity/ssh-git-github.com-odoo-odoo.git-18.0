<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- List view for base.rate -->
    <record id="portal_feedback_action_view_tree" model="ir.ui.view">
        <field name="name">portal.feedback.action.view.tree</field>
        <field name="model">portal.feedback.action</field>
        <field name="arch" type="xml">
        <list>
        <field name="name"/>
        </list>
    </field>
    </record>

<!-- Form view for base.rate -->
    <record id="portal_feedback_action_view_form" model="ir.ui.view">
        <field name="name">portal.feedback.action.view.form</field>
        <field name="model">portal.feedback.action</field>
        <field name="arch" type="xml">
        <form string="Portal Feedback Action">
            <sheet>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
        <field name="name" placeholder="Name..."/>
                    </h1>
                </div>
            </sheet>
        </form>
    </field>
    </record>

<!-- Search view for base.rate -->
    <record id="portal_feedback_action_view_search" model="ir.ui.view">
        <field name="name">portal.feedback.action.view.search</field>
        <field name="model">portal.feedback.action</field>
        <field name="arch" type="xml">
        <search>
            <group expand="1" string="Group By">
                <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
            </group>
        </search>
    </field>
    </record>

<!-- List view for Action -->
    <record id="action_portal_feedback_action" model="ir.actions.act_window">
        <field name="name">Portal Feedback Action</field>
        <field name="res_model">portal.feedback.action</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                <i class="fa fa-reply"/> Define your first feedback action
            </p>
            <p><b>‚ö†Ô∏è Prerequisites:</b></p>
            <ul>
                <li>‚úì <b>Portal active</b> - Go to: <i>Settings &gt; Users &amp; Companies &gt; Portal</i></li>
                <li>‚úì <b>Customer feedback received</b> - Go to: <i>Customer Feedback</i></li>
            </ul>
            <p><b>üìã To create a feedback action:</b></p>
            <ol>
                <li>Click <b>New</b> to define an action</li>
                <li>Enter an <b>Action Name</b> (e.g., "Follow-up Call", "Service Improvement", "Escalate to Manager")</li>
                <li>Click <b>Save</b> to create the action</li>
                <li>Link this action to customer feedback records</li>
            </ol>
            <p><b>üöÄ Key Features:</b><br/>
            ‚Ä¢ <b>Action templates:</b> Pre-defined response categories<br/>
            ‚Ä¢ <b>Feedback linking:</b> Connect actions to customer feedback<br/>
            ‚Ä¢ <b>Standardized responses:</b> Consistent follow-up procedures<br/>
            ‚Ä¢ <b>Group by name:</b> Organize actions by type<br/>
            </p>
            <p><b>üí° Pro Tips:</b><br/>
            ‚Ä¢ Create standard actions: "Call Customer", "Email Follow-up", "Site Visit"<br/>
            ‚Ä¢ Use consistent naming for better filtering<br/>
            ‚Ä¢ Link actions to feedback for complete audit trail<br/>
            </p>
        </field>
    </record>
    </data>
</odoo>
