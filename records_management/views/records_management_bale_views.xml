<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View records_management.bale View List -->
    <record id="view_records_management_bale_list" model="ir.ui.view">
        <field name="name">view.records_management.bale.list</field>
        <field name="model">records_management.bale</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View records_management.bale form -->
    <record id="view_records_management_bale_form" model="ir.ui.view">
        <field name="name">view.records_management.bale.form</field>
        <field name="model">records_management.bale</field>
        <field name="arch" type="xml">
            <form string="Records_management Bale">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View records_management.bale search -->
    <record id="view_records_management_bale_search" model="ir.ui.view">
        <field name="name">view.records_management.bale.search</field>
        <field name="model">records_management.bale</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action records_management.bale -->
    <record id="action_records_management_bale" model="ir.actions.act_window">
        <field name="name">Records_management Bale</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records_management.bale</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records_management Bale.
            </p>
        </field>
    </record>

</odoo>
