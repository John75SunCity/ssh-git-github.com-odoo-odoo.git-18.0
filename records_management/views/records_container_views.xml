<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- ========================================== -->
<!-- RECORDS CONTAINER VIEWS -->
<!-- ========================================== -->
    <record id="records_container_view_kanban" model="ir.ui.view">
        <field name="name">records.container.view.kanban</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <kanban default_group_by="state" class="o_kanban_container_dashboard">
        <field name="name"/>
        <field name="partner_id"/>
        <field name="location_id"/>
        <field name="state"/>
        <field name="create_date"/>
        <field name="destruction_date"/>
        <field name="container_type_id"/>
        <field name="document_count"/>
        <field name="is_full"/>
    <field name="temp_barcode"/>
    <field name="barcode"/>
            <templates>
                <t t-name="card">
                    <div class="oe_kanban_card oe_kanban_global_click">
                        <div class="o_kanban_card_header">
                            <div class="o_kanban_card_header_title">
                                <div class="o_primary">
<i class="fa fa-cube" title="Container" aria-hidden="true"/>


        <field name="name"/>
                                </div>
                                <div class="o_secondary">
<i class="fa fa-user" title="Customer" aria-hidden="true"/>

        <field name="partner_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_manage_button_section">
                                <a class="o_kanban_manage_toggle_button" href="#">
<i class="fa fa-ellipsis-v" title="More options" role="img" aria-label="More options"/>

                                </a>
                            </div>
                        </div>
        <div class="o_kanban_card_content" t-att-title="record.display_name.raw_value" t-att-aria-label="record.display_name.raw_value" role="group">
                            <div class="row">
                                <div class="col-8">
                                    <div>
<i class="fa fa-cube" title="Container Type" aria-label="Container Type" role="img"/>

        <field name="container_type_id"/>
                                    </div>
                                    <div>
<i class="fa fa-weight" title="Weight" aria-label="Weight" role="img"/>

        <field name="weight"/>
lbs
                                    </div>
                                    <div>
<i class="fa fa-map-marker" title="Storage Location" aria-label="Storage Location" role="img"/>

        <field name="location_id"/>
                                    </div>
                                    <div>
<i class="fa fa-calendar" title="Creation Date" aria-label="Creation Date" role="img"/>

        <field name="create_date"/>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <span class="badge" t-att-class="record.state.raw_value === 'in' ? 'badge-success' : record.state.raw_value === 'pending' ? 'badge-info' : record.state.raw_value === 'out' ? 'badge-warning' : record.state.raw_value === 'destroyed' ? 'badge-danger' : record.state.raw_value === 'perm_out' ? 'badge-secondary' : 'badge-secondary'">
        <field name="state"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-6">
                                    <button class="btn btn-primary btn-sm" type="object" name="action_view_documents">
<i class="fa fa-file-text" title="View Documents" aria-hidden="true"/>
Documents
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-info btn-sm" type="object" name="action_print_barcode_label">
<i class="fas fa-barcode" title="Print Barcode Label" aria-hidden="true"/>
Barcode
                                    </button>
                                </div>
                            </div>
                            <div class="row mt-1">
                                <div class="col-12">
                                    <button class="btn btn-success btn-sm" type="object" name="action_print_qr_label">
<i class="fas fa-qrcode" title="Print QR Code Label" aria-hidden="true"/>
QR Code
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
<a role="menuitem" type="edit" class="dropdown-item">
<i class="fas fa-edit" title="Edit Container" aria-hidden="true"/>
Edit Container</a>
<a role="menuitem" type="object" name="action_view_documents" class="dropdown-item">
<i class="fa fa-file-text" title="View Documents" aria-hidden="true"/>
View Documents</a>
<a role="menuitem" type="object" name="action_retrieve_container" class="dropdown-item">
<i class="fas fa-map-marker" title="Retrieve Container" aria-hidden="true"/>
Retrieve Container</a>
<a role="menuitem" type="object" name="action_print_barcode_label" class="dropdown-item">
<i class="fas fa-barcode" title="Print Barcode Label" aria-hidden="true"/>
Print Barcode</a>
<a role="menuitem" type="object" name="action_print_qr_label" class="dropdown-item">
<i class="fas fa-qrcode" title="Print QR Code Label" aria-hidden="true"/>
Print QR Label</a>
                            <div class="dropdown-divider"/>
<a role="menuitem" type="object" name="action_destroy" class="dropdown-item">
<i class="fas fa-trash" title="Destroy Container"/>
Destroy Container</a>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
    </record>

<!-- List view for Enhanced -->
    <!-- Tree/List view for Enhanced -->
    <record id="records_container_view_tree" model="ir.ui.view">
        <field name="name">records.container.view.tree</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <list decoration-success="state == 'in'" decoration-info="state == 'pending'" decoration-warning="state == 'out'" decoration-danger="state == 'destroyed'" decoration-muted="state == 'perm_out'" multi_edit="1">
