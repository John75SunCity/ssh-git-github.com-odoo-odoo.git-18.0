<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- ========================================== -->
<!-- RECORDS CONTAINER VIEWS -->
<!-- ========================================== -->
    <record id="records_container_view_kanban" model="ir.ui.view">
        <field name="name">records.container.view.kanban</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <kanban default_group_by="state" class="o_kanban_container_dashboard">
        <field name="name"/>
        <field name="partner_id"/>
        <field name="location_id"/>
        <field name="state"/>
        <field name="create_date"/>
        <field name="destruction_date"/>
        <field name="container_type_id"/>
        <field name="document_count"/>
        <field name="is_full"/>
    <field name="temp_barcode"/>
    <field name="barcode"/>
            <templates>
                <t t-name="card">
                    <div class="oe_kanban_card oe_kanban_global_click">
                        <div class="o_kanban_card_header">
                            <div class="o_kanban_card_header_title">
                                <div class="o_primary">
<i class="fa fa-cube" title="Container" aria-hidden="true"/>


        <field name="name"/>
                                </div>
                                <div class="o_secondary">
<i class="fa fa-user" title="Customer" aria-hidden="true"/>

        <field name="partner_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_manage_button_section">
                                <a class="o_kanban_manage_toggle_button" href="#">
<i class="fa fa-ellipsis-v" title="More options" role="img" aria-label="More options"/>

                                </a>
                            </div>
                        </div>
        <div class="o_kanban_card_content" t-att-title="record.display_name.raw_value" t-att-aria-label="record.display_name.raw_value" role="group">
                            <div class="row">
                                <div class="col-8">
                                    <div>
<i class="fa fa-cube" title="Container Type" aria-label="Container Type" role="img"/>

        <field name="container_type_id"/>
                                    </div>
                                    <div>
<i class="fa fa-weight" title="Weight" aria-label="Weight" role="img"/>

        <field name="weight"/>
lbs
                                    </div>
                                    <div>
<i class="fa fa-map-marker" title="Storage Location" aria-label="Storage Location" role="img"/>

        <field name="location_id"/>
                                    </div>
                                    <div>
<i class="fa fa-calendar" title="Creation Date" aria-label="Creation Date" role="img"/>

        <field name="create_date"/>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <span class="badge" t-att-class="record.state.raw_value === 'stored' ? 'badge-success' : record.state.raw_value === 'indexed' ? 'badge-info' : record.state.raw_value === 'retrieved' ? 'badge-warning' : record.state.raw_value === 'destroyed' ? 'badge-danger' : 'badge-secondary'">
        <field name="state"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-6">
                                    <button class="btn btn-primary btn-sm" type="object" name="action_view_documents">
<i class="fas fa-file-text-o" title="View Documents" aria-hidden="true"/>
Documents
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-info btn-sm" type="object" name="action_generate_barcode">
<i class="fas fa-barcode" title="Generate Barcode" aria-hidden="true"/>
Barcode
                                    </button>
                                </div>
                            </div>
                            <div class="row mt-1">
                                <div class="col-12">
                                    <button class="btn btn-success btn-sm" type="object" name="action_generate_qr_code">
<i class="fas fa-qrcode" title="Generate QR Code" aria-hidden="true"/>
QR Code
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
<a role="menuitem" type="edit" class="dropdown-item">
<i class="fas fa-edit" title="Edit Container" aria-hidden="true"/>
Edit Container</a>
<a role="menuitem" type="object" name="action_view_documents" class="dropdown-item">
<i class="fas fa-file-text-o" title="View Documents" aria-hidden="true"/>
View Documents</a>
<a role="menuitem" type="object" name="action_retrieve_container" class="dropdown-item">
<i class="fas fa-map-marker" title="Retrieve Container" aria-hidden="true"/>
Retrieve Container</a>
<a role="menuitem" type="object" name="action_generate_barcode" class="dropdown-item">
<i class="fas fa-barcode" title="Print Barcode" aria-hidden="true"/>
Print Barcode</a>
<a role="menuitem" type="object" name="action_generate_qr_code" class="dropdown-item">
<i class="fas fa-qrcode" title="Generate QR Code" aria-hidden="true"/>
Generate QR Code</a>
                            <div class="dropdown-divider"/>
<a role="menuitem" type="object" name="action_destroy" class="dropdown-item">
<i class="fas fa-trash" title="Destroy Container"/>
Destroy Container</a>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
    </record>

<!-- List view for Enhanced -->
    <!-- Tree/List view for Enhanced -->
    <record id="records_container_view_tree" model="ir.ui.view">
        <field name="name">records.container.view.tree</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <list decoration-success="state == 'stored'" decoration-info="state == 'active'" decoration-warning="state == 'retrieved'" decoration-danger="state == 'destroyed'" decoration-muted="state == 'draft'" multi_edit="1">
            <header>
<button name="action_bulk_convert_container_type" type="object" string="Bulk Convert Types" class="btn-primary" icon="fa-refresh" title="Bulk Convert Container Types"/>

            </header>
        <field name="name" string="Container ID"/>
        <field name="temp_barcode" string="Temp Barcode"/>
        <field name="barcode" string="Barcode"/>
        <field name="container_type_id" string="Container Type"/>
        <field name="weight" string="Weight"/>
        <field name="partner_id" string="Customer"/>
        <field name="department_id" string="Department"/>
        <field name="location_id" string="Location"/>
        <field name="state" string="Status" widget="badge"/>
        <field name="document_count" string="Documents" sum="Total Documents"/>
        <field name="storage_start_date" string="Storage Start"/>
        <field name="destruction_due_date" string="Due Date"/>
        <field name="is_due_for_destruction" string="Due" widget="boolean_toggle"/>
        <field name="security_level" string="Security"/>
        <field name="active" string="Active" widget="boolean_toggle"/>
            <button name="action_view_documents" type="object" string="View Docs" icon="fas fa-file-text-o" class="btn-link"/>
            <button name="action_generate_barcode" type="object" string="Print Barcode" icon="fas fa-barcode" class="btn-link"/>
            <button name="action_generate_qr_code" type="object" string="QR Code" icon="fas fa-qrcode" class="btn-link"/>
        </list>
    </field>
    </record>

    <!-- Also keep a list view for modern Odoo -->
    <record id="records_container_view_list" model="ir.ui.view">
        <field name="name">records.container.view.list</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <list decoration-success="state == 'stored'" decoration-info="state == 'active'" decoration-warning="state == 'retrieved'" decoration-danger="state == 'destroyed'" decoration-muted="state == 'draft'" multi_edit="1">
            <header>
<button name="action_bulk_convert_container_type" type="object" string="Bulk Convert Types" class="btn-primary" icon="fa-refresh" title="Bulk Convert Container Types"/>

            </header>
        <!-- Stock location field - Configurable visibility via RM Module Configurator -->
        <field name="stock_location_id" optional="hide"/>

        <field name="name" string="Container ID"/>
        <field name="partner_id" string="Customer" required="1"/>
        <field name="stock_owner_id" string="Inventory Owner" optional="show"/>
        <field name="department_id" string="Department"/>
        <field name="temp_barcode" string="Temp Barcode"/>
        <field name="barcode" string="Physical Barcode"/>
        <field name="container_type_id" string="Container Type"/>
        <field name="weight" string="Weight"/>
        <field name="location_id" string="Location"/>
        <field name="state" string="Status" widget="badge"/>
        <field name="document_count" string="Documents" sum="Total Documents"/>
        <field name="storage_start_date" string="Storage Start" optional="hide"/>
        <field name="destruction_due_date" string="Due Date" optional="hide"/>
        <field name="is_due_for_destruction" string="Due" widget="boolean_toggle" optional="hide"/>
        <field name="security_level" string="Security" optional="hide"/>
        <field name="active" string="Active" widget="boolean_toggle" optional="hide"/>
        <!-- Hide company_id - not relevant since all containers belong to service provider "My Company" -->
        <!-- Users care about CUSTOMER (partner_id), not service provider company -->
        <field name="company_id" column_invisible="1"/>
            <button name="action_view_documents" type="object" string="View Docs" icon="fas fa-file-text-o" class="btn-link"/>
            <button name="action_generate_barcode" type="object" string="Print Barcode" icon="fas fa-barcode" class="btn-link"/>
            <button name="action_generate_qr_code" type="object" string="QR Code" icon="fas fa-qrcode" class="btn-link"/>
        </list>
    </field>
    </record>

<!-- Form view for Enhanced -->
    <record id="records_container_view_form" model="ir.ui.view">
        <field name="name">records.container.view.form</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <form>
            <header>
                <!-- ✅ NEW: Index Container button (creates stock quant) -->
                <button name="action_index_container" type="object" string="Index Container"
                        class="btn-primary"
                        invisible="state != 'draft' or not barcode"
                        help="Index container: Assign to inventory system and create stock quant"/>

                <button name="action_activate" type="object" string="Activate" class="btn-primary" invisible="state != 'draft'"/>
                <button name="action_store_container" type="object" string="Store Container" class="btn-primary" invisible="state != 'active'"/>
                <button name="action_retrieve_container" type="object" string="Retrieve Container" class="btn-secondary" invisible="state != 'stored'"/>
                <button name="action_schedule_destruction" type="object" string="Schedule Destruction" class="btn-warning" invisible="not is_due_for_destruction"/>
                <button name="action_destroy" type="object" string="Destroy Container" class="btn-danger" invisible="state != 'pending_destruction'"/>
                <button name="action_generate_barcode" type="object" string="Print Barcode" class="btn-info"/>
                <button name="action_generate_qr_code" type="object" string="Generate QR Code" class="btn-success"/>
                <!-- Modernized visibility: use barcode_assigned compute field instead of deprecated attrs expression -->
                <button name="%(action_records_container_assign_barcode_wizard)d" type="action" string="Assign Physical Barcode" class="btn-secondary" invisible="barcode_assigned"/>
        <field name="state" widget="statusbar" statusbar_visible="draft,active,stored,retrieved,pending_destruction,destroyed"/>
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box">
<button class="oe_stat_button" type="object" name="action_view_documents" icon="fa-file-text-o" title="View Documents">
        <field name="document_count" string="Documents" widget="statinfo"/>
                    </button>

                    <!-- ✅ NEW: Stock Quant smart button -->
                    <button class="oe_stat_button" type="object" name="action_view_stock_quant"
                            icon="fa-cubes"
                            title="View in Inventory System"
                            invisible="not quant_id">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Stock</span>
                            <span class="o_stat_text">Quant</span>
                        </div>
                    </button>

                    <!-- Stock Location smart button -->
                    <button class="oe_stat_button" type="object" name="action_view_stock_location"
                            icon="fa-map-marker"
                            title="View Stock Location"
                            invisible="not location_id">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Stock</span>
                            <span class="o_stat_text">Location</span>
                        </div>
                    </button>
                </div>

                <group>
                    <group string="Container Information">
    <field name="name"
           placeholder="e.g., HR Personnel 2024"
           help="Customer's name for this container - fully editable"
           readonly="state == 'destroyed'"/>
    <!-- Include computed flag field (hidden) so invisible expression works reliably -->
    <field name="barcode_assigned" invisible="1"/>
    <field name="temp_barcode" readonly="1" invisible="barcode_assigned" context="{'allow_temp_barcode_edit': False}"/>
    <field name="barcode" placeholder="Assign from pre-printed barcode sheet" help="Physical barcode - manually assigned by staff"/>
        <field name="container_type_id" required="1"/>
        <field name="weight"/>
        <field name="cubic_feet" readonly="1"/>
        <field name="is_full"/>
                    </group>
                    <group string="Customer &amp; Location">
        <field name="partner_id" required="1" groups="base.group_user" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
        <field name="partner_id" required="1" readonly="1" groups="base.group_portal" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
        <field name="department_id"/>
        
        <!-- Stock Owner - Organizational hierarchy: Company → Department → Child Department -->
        <field name="stock_owner_id"
               string="Inventory Owner"
               readonly="1"
               options="{'no_create': True}"
               help="Organizational unit that owns this inventory (Company → Department → Child Department). Auto-filled when you select customer or department."/>

        <!-- PRIMARY LOCATION: What user sets manually -->
        <field name="location_id"
               string="Warehouse Location"
               groups="base.group_user"
               options="{'no_create': True}"
               help="Where you want to store this container (e.g., Aisle 10/Row 0). Set this manually."/>
        
        <!-- HIDDEN TECHNICAL FIELDS - Only for advanced inventory users -->
        <field name="stock_location_id"
               string="Stock Location (Technical)"
               invisible="1"
               groups="stock.group_stock_manager"
               options="{'no_create': True}"
               help="Legacy alias - same as Warehouse Location"/>
               
        <field name="current_location_id"
               string="Inventory Sync Location"
               readonly="1"
               invisible="1"
               groups="stock.group_stock_manager"
               help="Auto-synced from stock quant after activation. Shows actual inventory system location."/>
               
        <field name="quant_id"
               string="Stock Quant"
               readonly="1"
               invisible="1"
               groups="stock.group_stock_manager"
               help="Inventory tracking record (created when container is activated)"/>

        <!-- Portal users: Temporary inventory (temp locations at customer site) -->
        <!-- Only show if NO physical location assigned (mutually exclusive) -->
        <field name="temp_inventory_id"
               groups="base.group_portal"
               context="{'default_partner_id': partner_id}"
               invisible="location_id"
               options="{'no_open': False}"
               help="Temporary location at customer site (hidden when assigned to warehouse location)"/>
        <field name="user_id"/>
                    </group>
                </group>

                <group>
                    <group string="Retention &amp; Security">
        <field name="retention_policy_id"/>
        <field name="document_type_id"/>
        <field name="security_level"/>
        <field name="permanent_retention"/>
                    </group>
                    <group string="Important Dates">
        <field name="storage_start_date"/>
        <field name="last_access_date" readonly="1"/>
        <field name="destruction_due_date" readonly="1"/>
        <field name="destruction_date" readonly="1"/>
        <field name="is_due_for_destruction" readonly="1"/>
                    </group>
                </group>

                <group>
                    <group string="Content &amp; Description">
        <field name="description" placeholder="Container contents, special instructions, or notes..."/>
        <field name="content_description"/>
        <field name="access_restrictions"/>
                    </group>
                    <group string="Additional Info">
        <field name="temp_inventory_id"/>
        <field name="active"/>
        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </group>

                <notebook>
                    <page string="Documents" name="documents">
        <field name="document_ids" mode="list,form" context="{'default_container_id': id}">
                            <list string="Documents">
        <field name="name"/>
        <field name="document_type_id"/>
        <field name="state"/>
        <field name="create_date"/>
                            </list>
                            <form string="Document">
                                <group>
        <field name="name"/>
        <field name="document_type_id"/>
        <field name="state"/>
        <field name="description"/>
                                </group>
                            </form>
                        </field>
                    </page>
                    <page string="Movement History" name="movements">
        <field name="movement_ids" mode="list"/>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
        <field name="message_follower_ids"/>
        <field name="activity_ids"/>
        <field name="message_ids"/>
            </div>
        </form>
    </field>
    </record>

<!-- List view for Calendar -->
    <record id="records_container_view_calendar" model="ir.ui.view">
        <field name="name">records.container.view.calendar</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <calendar string="Container Storage Calendar" date_start="storage_start_date" date_stop="destruction_due_date" color="partner_id">
        <field name="name"/>
        <field name="partner_id"/>
        <field name="location_id"/>
        <field name="state"/>
        <field name="container_type_id"/>
        <field name="document_count"/>
        </calendar>
    </field>
    </record>

<!-- List view for Graph -->
    <record id="records_container_view_graph" model="ir.ui.view">
        <field name="name">records.container.view.graph</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <graph string="Container Analytics">
        <field name="partner_id" type="row"/>
        <field name="state" type="col"/>
        <field name="document_count" type="measure"/>
        </graph>
    </field>
    </record>

<!-- Search view for Enhanced -->
    <record id="records_container_view_search" model="ir.ui.view">
        <field name="name">records.container.view.search</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <search>
    <field name="name" string="Container" filter_domain="['|','|', ('name', 'ilike', self), ('barcode', 'ilike', self), ('temp_barcode', 'ilike', self)]"/>
        <field name="partner_id"/>
        <field name="department_id"/>
        <field name="location_id"/>
        <field name="container_type_id"/>
        <field name="retention_policy_id"/>
        <field name="document_type_id"/>
        <field name="state"/>
        <field name="security_level"/>
        <field name="is_due_for_destruction"/>
        <field name="permanent_retention"/>
        <field name="active"/>

            <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
            <filter string="Active" name="active_state" domain="[('state', '=', 'active')]"/>
            <filter string="In Storage" name="stored" domain="[('state', '=', 'stored')]"/>
            <filter string="In Transit" name="in_transit" domain="[('state', '=', 'in_transit')]"/>
            <filter string="Retrieved" name="retrieved" domain="[('state', '=', 'retrieved')]"/>
            <filter string="Pending Destruction" name="pending_destruction" domain="[('state', '=', 'pending_destruction')]"/>
            <filter string="Destroyed" name="destroyed" domain="[('state', '=', 'destroyed')]"/>

            <separator/>
            <filter string="Due for Destruction" name="due_for_destruction" domain="[('is_due_for_destruction', '=', True)]"/>
            <filter string="Permanent Retention" name="permanent_retention" domain="[('permanent_retention', '=', True)]"/>
            <filter string="Active Only" name="active" domain="[('active', '=', True)]"/>
            <filter string="Inactive Only" name="inactive" domain="[('active', '=', False)]"/>

            <separator/>
            <filter string="Stored This Month" name="this_month" domain="[('stored_last_30d', '=', True)]"/>
            <filter string="Stored This Year" name="this_year" domain="[('storage_start_date', '!=', False)]"/>
            <filter string="Due Within 6 Months" name="due_soon" domain="[('destruction_due_6m', '=', True)]"/>

            <group expand="0" string="Group By">
                <filter string="Customer" name="group_by_customer" context="{'group_by': 'partner_id'}"/>
                <filter string="Department" name="group_by_department" context="{'group_by': 'department_id'}"/>
                <filter string="Location" name="group_by_location" context="{'group_by': 'location_id'}"/>
                <filter string="Container Type" name="group_by_type" context="{'group_by': 'container_type_id'}"/>
                <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                <filter string="Security Level" name="group_by_security" context="{'group_by': 'security_level'}"/>
                <filter string="Storage Month" name="group_by_storage_month" context="{'group_by': 'storage_start_date:month'}"/>
                <filter string="Due Month" name="group_by_due_month" context="{'group_by': 'destruction_due_date:month'}"/>
            </group>
        </search>
    </field>
    </record>
    <!-- Technical tree view (needed for x2many fallback + view tests expecting a real <list> root) -->
    <record id="records_container_view_tree_technical" model="ir.ui.view">
        <field name="name">records.container.view.tree.technical</field>
        <field name="model">records.container</field>
        <!-- High priority so it does NOT override primary list usage (higher number = lower precedence) -->
        <field name="priority" eval="0"/>
        <field name="arch" type="xml">
            <list string="Containers (Technical)">
                <field name="name"/>
                <field name="barcode"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    </data>
</odoo>
