<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Tree view for ENTERPRISE -->

    <!-- Kanban view fo                <field name="destruction_due_date" string="üìÖ Due Date"/> Kanban -->
    <record id="records_container_view_kanban" model="ir.ui.view">
        <field name="name">records.container.view.kanban</field>
        <field name="model">records.container</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_container_dashboard">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="location_id"/>
                <field name="state"/>
                <field name="create_date"/>
                <field name="destruction_date"/>
                <field name="container_type_id"/>
                <field name="document_count"/>
                <field name="is_full"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>üì¶                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_secondary">
                                        üë§                                        <field name="partner_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" title="More options"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-8">
                                        <div>
                                            <i class="fa fa-cube" title="Container Type"/>
                                            <field name="container_type_id"/>
                                        </div>
                                        <div>
                                            <i class="fa fa-weight" title="Weight"/>
                                            <field name="weight"/>
 lbs
                                        </div>
                                        <div>
                                            <i class="fa fa-map-marker" title="Storage Location"/>
                                            <field name="location_id"/>
                                        </div>
                                        <div>
                                            <i class="fa fa-calendar" title="Creation Date"/>
                                            <field name="create_date"/>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <span class="badge" t-att-class="record.state.raw_value === 'stored' ? 'badge-success' : record.state.raw_value === 'indexed' ? 'badge-info' : record.state.raw_value === 'retrieved' ? 'badge-warning' : record.state.raw_value === 'destroyed' ? 'badge-danger' : 'badge-secondary'">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-sm" type="object" name="action_view_documents">
                                            üìÑ Documents
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-info btn-sm" type="object" name="action_generate_barcode">
                                            üè∑Ô∏è Barcode
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Container</a>
                                <a role="menuitem" type="object" name="action_view_documents" class="dropdown-item">üìÑ View Documents</a>
                                <a role="menuitem" type="object" name="action_retrieve_container" class="dropdown-item">üìç Retrieve Container</a>
                                <a role="menuitem" type="object" name="action_generate_barcode" class="dropdown-item">üè∑Ô∏è Print Barcode</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="object" name="action_destroy_container" class="dropdown-item">üóëÔ∏è Destroy Container</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree view for Enhanced -->
    <record id="records_container_view_tree" model="ir.ui.view">
        <field name="name">records.container.view.tree</field>
        <field name="model">records.container</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'stored'" decoration-info="state == 'active'" decoration-warning="state == 'retrieved'" decoration-danger="state == 'destroyed'" decoration-muted="state == 'draft'" multi_edit="1">
                <header>
                    <button name="action_bulk_convert_container_type" type="object" string="üîÑ Bulk Convert Types" class="btn-primary"/>
                </header>
                <field name="name" string="üì¶ Container ID"/>
                <field name="barcode" string="üè∑Ô∏è Barcode"/>
                <field name="container_type_id" string="üì¶ Container Type"/>
                <field name="weight" string="‚öñÔ∏è Weight"/>
                <field name="partner_id" string="üë§ Customer"/>
                <field name="department_id" string="üè¢ Department"/>
                <field name="location_id" string="üìç Location"/>
                <field name="state" string="üéØ Status" widget="badge"/>
                <field name="document_count" string="üíæ Documents" sum="Total Documents"/>
                <field name="storage_start_date" string="üìÖ Storage Start"/>
                <field name="destruction_due_date" string="ÔøΩ Due Date"/>
                <field name="is_due_for_destruction" string="Due" widget="boolean_toggle"/>
                <field name="security_level" string="üîí Security"/>
                <field name="active" string="Active" widget="boolean_toggle"/>
                <button name="action_view_documents" type="object" string="View Docs" icon="fa-file-text-o" class="btn-link"/>
                <button name="action_generate_barcode" type="object" string="Print Barcode" icon="fa-barcode" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- Form view for Enhanced -->
    <record id="records_container_view_form" model="ir.ui.view">
        <field name="name">records.container.view.form</field>
        <field name="model">records.container</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_activate" type="object" string="Activate" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_store_container" type="object" string="Store Container" class="btn-primary" invisible="state != 'active'"/>
                    <button name="action_retrieve_container" type="object" string="Retrieve Container" class="btn-secondary" invisible="state != 'stored'"/>
                    <button name="action_schedule_destruction" type="object" string="Schedule Destruction" class="btn-warning" invisible="not is_due_for_destruction"/>
                    <button name="action_destroy" type="object" string="Destroy Container" class="btn-danger" invisible="state != 'pending_destruction'"/>
                    <button name="action_generate_barcode" type="object" string="Print Barcode" class="btn-info"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,stored,retrieved,pending_destruction,destroyed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_documents" icon="fa-file-text-o">
                            <field name="document_count" string="Documents" widget="statinfo"/>
                        </button>
                    </div>

                    <group>
                        <group string="Container Information">
                            <field name="name" placeholder="e.g., CONT-2024-001"/>
                            <field name="barcode" placeholder="Auto-generated on save"/>
                            <field name="container_type_id" required="1"/>
                            <field name="weight"/>
                            <field name="cubic_feet" readonly="1"/>
                            <field name="is_full"/>
                        </group>
                        <group string="Customer &amp; Location">
                            <field name="partner_id" required="1"/>
                            <field name="department_id"/>
                            <field name="location_id"/>
                            <field name="user_id"/>
                        </group>
                    </group>

                    <group>
                        <group string="Retention &amp; Security">
                            <field name="retention_policy_id"/>
                            <field name="document_type_id"/>
                            <field name="security_level"/>
                            <field name="permanent_retention"/>
                        </group>
                        <group string="Important Dates">
                            <field name="storage_start_date"/>
                            <field name="last_access_date" readonly="1"/>
                            <field name="destruction_due_date" readonly="1"/>
                            <field name="destruction_date" readonly="1"/>
                            <field name="is_due_for_destruction" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Content &amp; Description">
                            <field name="description" placeholder="Container contents, special instructions, or notes..."/>
                            <field name="content_description"/>
                            <field name="access_restrictions"/>
                        </group>
                        <group string="Additional Info">
                            <field name="temp_inventory_id"/>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Documents" name="documents">
                            <field name="document_ids" mode="tree,form" context="{'default_container_id': active_id}">
                                <tree string="Documents">
                                    <field name="name"/>
                                    <field name="document_type_id"/>
                                    <field name="state"/>
                                    <field name="file_size"/>
                                    <field name="create_date"/>
                                </tree>
                                <form string="Document">
                                    <group>
                                        <field name="name"/>
                                        <field name="document_type_id"/>
                                        <field name="state"/>
                                        <field name="file_size"/>
                                        <field name="description"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Movement History" name="movements">
                            <field name="movement_ids" mode="tree">
                                <tree string="Movement History">
                                    <field name="create_date"/>
                                    <field name="location_id"/>
                                    <field name="destination_location_id"/>
                                    <field name="movement_type"/>
                                    <field name="user_id"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree view for Calendar -->
    <record id="records_container_view_calendar" model="ir.ui.view">
        <field name="name">records.container.view.calendar</field>
        <field name="model">records.container</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar string="Container Storage Calendar" date_start="storage_start_date" date_stop="destruction_due_date" color="partner_id">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="location_id"/>
                <field name="state"/>
                <field name="container_type_id"/>
                <field name="document_count"/>
            </calendar>
        </field>
    </record>

    <!-- Tree view for Graph -->
    <record id="records_container_view_graph" model="ir.ui.view">
        <field name="name">records.container.view.graph</field>
        <field name="model">records.container</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Container Analytics">
                <field name="partner_id" type="row"/>
                <field name="state" type="col"/>
                <field name="document_count" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Search view for Enhanced -->
    <record id="records_container_view_search" model="ir.ui.view">
        <field name="name">records.container.view.search</field>
        <field name="model">records.container</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Container" filter_domain="['|', ('name', 'ilike', self), ('barcode', 'ilike', self)]"/>
                <field name="partner_id"/>
                <field name="department_id"/>
                <field name="location_id"/>
                <field name="container_type_id"/>
                <field name="retention_policy_id"/>
                <field name="document_type_id"/>
                <field name="state"/>
                <field name="security_level"/>
                <field name="is_due_for_destruction"/>
                <field name="permanent_retention"/>
                <field name="active"/>

                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Active" name="active_state" domain="[('state', '=', 'active')]"/>
                <filter string="In Storage" name="stored" domain="[('state', '=', 'stored')]"/>
                <filter string="In Transit" name="in_transit" domain="[('state', '=', 'in_transit')]"/>
                <filter string="Retrieved" name="retrieved" domain="[('state', '=', 'retrieved')]"/>
                <filter string="Pending Destruction" name="pending_destruction" domain="[('state', '=', 'pending_destruction')]"/>
                <filter string="Destroyed" name="destroyed" domain="[('state', '=', 'destroyed')]"/>

                <separator/>
                <filter string="Due for Destruction" name="due_for_destruction" domain="[('is_due_for_destruction', '=', True)]"/>
                <filter string="Permanent Retention" name="permanent_retention" domain="[('permanent_retention', '=', True)]"/>
                <filter string="Active Only" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive Only" name="inactive" domain="[('active', '=', False)]"/>

                <separator/>
                <filter string="Stored This Month" name="this_month" domain="[('storage_start_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Stored This Year" name="this_year" domain="[('storage_start_date', '&gt;=', context_today().strftime('%Y-01-01'))]"/>
                <filter string="Due Within 6 Months" name="due_soon" domain="[('destruction_due_date', '&lt;=', (context_today() + relativedelta(months=6)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_by_customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Department" name="group_by_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Location" name="group_by_location" context="{'group_by': 'location_id'}"/>
                    <filter string="Container Type" name="group_by_type" context="{'group_by': 'container_type_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Security Level" name="group_by_security" context="{'group_by': 'security_level'}"/>
                    <filter string="Storage Month" name="group_by_storage_month" context="{'group_by': 'storage_start_date:month'}"/>
                    <filter string="Due Month" name="group_by_due_month" context="{'group_by': 'destruction_due_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree view for ENTERPRISE -->
    <record id="action_records_container" model="ir.actions.act_window">
        <field name="name">Storage Containers</field>
        <field name="res_model">records.container</field>
        <field name="view_mode">tree,kanban,form,calendar,graph</field>
        <field name="view_id" ref="records_container_view_tree"/>
        <field name="search_view_id" ref="records_container_view_search"/>
        <field name="context">{
            'search_default_stored': 1,
            'search_default_active': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first storage container!
            </p>
            <p>
                <b>Enterprise Container Management:</b>
                <br/>
                ‚Ä¢ Visual kanban boards for container tracking<br/>
                ‚Ä¢ Automated barcode generation and printing<br/>
                ‚Ä¢ Real-time location tracking with movement history<br/>
                ‚Ä¢ Document association and content management<br/>
                ‚Ä¢ Service request integration and workflows<br/>
                ‚Ä¢ Advanced analytics and reporting<br/>
                ‚Ä¢ Mobile-optimized for warehouse operations
            </p>
        </field>
    </record>


</data></odoo>
