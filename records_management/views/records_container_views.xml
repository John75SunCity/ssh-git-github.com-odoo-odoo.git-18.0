<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- üì¶ ENTERPRISE STORAGE BOXES - Advanced Warehouse Management -->

    <!-- üé® Kanban Board for Visual Box Management -->
    <record id="view_records_container_kanban" model="ir.ui.view">
        <field name="name">records.container.kanban</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_container_dashboard">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="location_id"/>
                <field name="state"/>
                <field name="create_date"/>
                <field name="destruction_date"/>
                <field name="container_type_id"/>
                <field name="document_count"/>
                <field name="is_full"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>üì¶                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_secondary">
                                        üë§                                        <field name="partner_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" title="More options"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-8">
                                        <div>
                                            <i class="fa fa-cube" title="Container Type"/>
                                            <field name="container_type_id"/>
                                        </div>
                                        <div>
                                            <i class="fa fa-weight" title="Weight"/>
                                            <field name="weight"/>
 lbs
                                        </div>
                                        <div>
                                            <i class="fa fa-map-marker" title="Storage Location"/>
                                            <field name="location_id"/>
                                        </div>
                                        <div>
                                            <i class="fa fa-calendar" title="Creation Date"/>
                                            <field name="create_date"/>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <span class="badge" t-att-class="record.state.raw_value === 'stored' ? 'badge-success' : record.state.raw_value === 'indexed' ? 'badge-info' : record.state.raw_value === 'retrieved' ? 'badge-warning' : record.state.raw_value === 'destroyed' ? 'badge-danger' : 'badge-secondary'">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-sm" type="object" name="action_view_documents">
                                            üìÑ Documents
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-info btn-sm" type="object" name="action_generate_barcode">
                                            üè∑Ô∏è Barcode
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Container</a>
                                <a role="menuitem" type="object" name="action_view_documents" class="dropdown-item">üìÑ View Documents</a>
                                <a role="menuitem" type="object" name="action_retrieve_container" class="dropdown-item">üìç Retrieve Container</a>
                                <a role="menuitem" type="object" name="action_generate_barcode" class="dropdown-item">üè∑Ô∏è Print Barcode</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="object" name="action_destroy_container" class="dropdown-item">üóëÔ∏è Destroy Container</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- üìã Enhanced List View with Smart Columns and Bulk Actions -->
    <record id="view_records_container_tree" model="ir.ui.view">
        <field name="name">records.container.tree</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'stored'" decoration-info="state == 'indexed'" decoration-warning="state == 'retrieved'" decoration-danger="state == 'destroyed'" decoration-muted="state == 'received'" multi_edit="1">
                <header>
                    <button name="action_bulk_convert_container_type" type="object" string="üîÑ Bulk Convert Types" class="btn-primary"/>
                </header>
                <field name="name" string="üì¶ Container ID"/>
                <field name="container_type_id" string="üì¶ Container Type"/>
                <field name="billing_rate" string="üí∞ Rate/Mo" widget="monetary"/>
                <field name="partner_id" string="üë§ Customer"/>
                <field name="department_id" string="üè¢ Department"/>
                <field name="location_id" string="üìç Location"/>
                <field name="state" string="üéØ Status" widget="badge"/>
                <field name="create_date" string="üìÖ Created"/>
                <field name="destruction_date" string="üí• Destruction" optional="hide"/>
                <field name="barcode" string="üè∑Ô∏è Barcode"/>
                <field name="document_count" string="üíæ Documents" sum="Total Documents"/>
                <button name="action_view_documents" type="object" string="View Docs" icon="fa-file-text-o" class="btn-link"/>
                <button name="action_generate_barcode" type="object" string="Print Barcode" icon="fa-barcode" class="btn-link"/>
            </tree>
        </field>
    </record>

    <!-- üìù Enhanced Form View with Advanced Features -->
    <record id="view_records_container_form" model="ir.ui.view">
        <field name="name">records.container.form</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_index_container" type="object" string="üìã Index Container" class="btn-primary" invisible="state != 'received'"/>
                    <button name="action_store_container" type="object" string="üì¶ Store Container" class="btn-primary" invisible="state != 'indexed'"/>
                    <button name="action_retrieve_container" type="object" string="üìç Retrieve Container" class="btn-secondary" invisible="state != 'stored'"/>
                    <button name="action_destroy_container" type="object" string="üóëÔ∏è Destroy Container" class="btn-warning" invisible="state not in ['stored', 'retrieved']"/>
                    <button name="action_generate_barcode" type="object" string="üè∑Ô∏è Print Barcode" class="btn-info"/>
                    <field name="state" widget="statusbar" statusbar_visible="received,indexed,stored,retrieved,destroyed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_documents" icon="fa-file-text-o">
                            <field string="Documents" name="document_count" widget="statinfo"/>
                        </button>
                    </div>

                    <group>
                        <group string="üì¶ Container Information">
                            <field name="name" placeholder="e.g., CONT-2024-001"/>
                            <field name="container_type_id" required="1"/>
                            <field name="billing_rate" readonly="1" widget="monetary"/>
                            <field name="partner_id"/>
                            <field name="department_id"/>
                            <field name="barcode" placeholder="Auto-generated on save"/>
                        </group>
                        <group string="üìç Location &amp; Status">
                            <field name="location_id"/>
                            <field name="state"/>
                            <field name="create_date"/>
                            <field name="destruction_date" invisible="not destruction_date"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="üìÑ Documents" name="documents">
                            <field name="document_ids" mode="list">
                                <tree>
                                    <field name="name"/>
                                    <field name="document_type_id"/>
                                    <field name="state"/>
                                    <field name="create_date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="üöö Movement History" name="movements">
                            <field name="movement_ids" mode="list">
                                <tree>
                                    <field name="movement_date"/>
                                    <field name="from_location_id"/>
                                    <field name="to_location_id"/>
                                    <field name="movement_type"/>
                                    <field name="user_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="üìù Notes &amp; Details" name="details">
                            <group>
                                <field name="description" placeholder="Container contents, special instructions, or notes..."/>
                                <field name="retention_policy_id"/>
                                <field name="weight"/>
                                <field name="cubic_feet"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- üìÖ Calendar View for Container Management -->
    <record id="view_records_container_calendar" model="ir.ui.view">
        <field name="name">records.container.calendar</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
            <calendar string="üìÖ Container Storage Calendar" date_start="create_date" date_stop="destruction_date" color="partner_id">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- üìà Graph View for Analytics -->
    <record id="view_records_container_graph" model="ir.ui.view">
        <field name="name">records.container.graph</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
            <graph string="üìä Container Analytics">
                <field name="partner_id" type="row"/>
                <field name="state" type="col"/>
            </graph>
        </field>
    </record>

    <!-- üîç Enhanced Search with Smart Filters -->
    <record id="view_records_container_search" model="ir.ui.view">
        <field name="name">records.container.search</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Container" filter_domain="['|', ('name', 'ilike', self), ('barcode', 'ilike', self)]"/>
                <field name="partner_id"/>
                <field name="department_id"/>
                <field name="location_id"/>

                <filter string="ÔøΩ Received Boxes" name="received" domain="[('state', '=', 'received')]"/>
                <filter string="ÔøΩ Indexed Boxes" name="indexed" domain="[('state', '=', 'indexed')]"/>
                <filter string="üì¶ Stored Boxes" name="stored" domain="[('state', '=', 'stored')]"/>
                <filter string="üì§ Retrieved Boxes" name="retrieved" domain="[('state', '=', 'retrieved')]"/>
                <filter string="üí• Destroyed" name="destroyed" domain="[('state', '=', 'destroyed')]"/>

                <separator/>
                <filter string="üìÖ Stored This Month" name="this_month" domain="[('create_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter string="üóìÔ∏è Stored This Year" name="this_year" domain="[('create_date', '&gt;=', context_today().strftime('%Y-01-01'))]"/>
                <filter string="‚ö†Ô∏è Near Destruction" name="near_destruction" domain="[('destruction_date', '&lt;=', (context_today() + relativedelta(months=6)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="üìä Group By">
                    <filter string="Customer" name="group_by_customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Department" name="group_by_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Location" name="group_by_location" context="{'group_by': 'location_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Creation Date" name="group_by_creation_date" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- üöÄ ENTERPRISE ACTION - Complete Container Management -->
    <record id="action_records_container" model="ir.actions.act_window">
        <field name="name">üì¶ Storage Containers</field>
        <field name="res_model">records.container</field>
        <field name="view_mode">kanban,list,form,calendar,graph</field>
        <field name="search_view_id" ref="view_records_container_search"/>
        <field name="context">{
            'search_default_stored': 1,
            'search_default_this_year': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üì¶ Create your first storage container!
            </p>
            <p>
                <b>Enterprise Container Management:</b>
                <br/>
                ‚Ä¢ üì¶ Visual kanban boards for container tracking<br/>
                ‚Ä¢ üè∑Ô∏è Automated barcode generation and printing<br/>
                ‚Ä¢ üìç Real-time location tracking with movement history<br/>
                ‚Ä¢ üìÑ Document association and content management<br/>
                ‚Ä¢ üéØ Service request integration and workflows<br/>
                ‚Ä¢ üìä Advanced analytics and reporting<br/>
                ‚Ä¢ üì± Mobile-optimized for warehouse operations
</p>
</field>
</record>
</odoo>
