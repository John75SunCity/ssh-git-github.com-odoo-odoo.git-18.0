            <button name="action_view_documents" type="object" string="View Docs" icon="fa-file-text" class="btn-link"/>
            <button name="action_generate_barcode" type="object" string="Print Barcode" icon="fa-barcode" class="btn-link"/>
            <button name="action_generate_qr_code" type="object" string="QR Code" icon="fa-qrcode" class="btn-link"/>
        </list>
    </field>
    </record>

    <!-- Also keep a list view for modern Odoo -->
    <record id="records_container_view_list" model="ir.ui.view">
        <field name="name">records.container.view.list</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <list decoration-success="state == 'in'" decoration-info="state == 'pending'" decoration-warning="state == 'out'" decoration-danger="state == 'destroyed'" decoration-muted="state == 'perm_out'" multi_edit="1">
            <header>
<button name="action_bulk_convert_container_type" type="object" string="Bulk Convert Types" class="btn-primary" icon="fa-refresh" title="Bulk Convert Container Types"/>

            </header>
        <!-- Stock location field - Configurable visibility via RM Module Configurator -->
        <field name="stock_location_id" optional="hide"/>

        <field name="name" string="Container ID"/>
        <field name="partner_id" string="Customer" required="1"/>
        <field name="stock_owner_id" string="Inventory Owner" optional="show"/>
        <field name="department_id" string="Department"/>
        <field name="temp_barcode" string="Temp Barcode"/>
        <field name="barcode" string="Physical Barcode"/>
        <field name="container_type_id" string="Container Type"/>
        <field name="weight" string="Weight"/>
        <field name="location_id" string="Location"/>
        <field name="state" string="Status" widget="badge"/>
        <field name="document_count" string="Documents" sum="Total Documents"/>
        <field name="storage_start_date" string="Storage Start" optional="hide"/>
        <field name="destruction_due_date" string="Due Date" optional="hide"/>
        <field name="is_due_for_destruction" string="Due" widget="boolean_toggle" optional="hide"/>
        <field name="security_level" string="Security" optional="hide"/>
        <field name="active" string="Active" widget="boolean_toggle" optional="hide"/>
        <!-- Hide company_id - not relevant since all containers belong to service provider "My Company" -->
        <!-- Users care about CUSTOMER (partner_id), not service provider company -->
        <field name="company_id" column_invisible="1"/>
            <button name="action_view_documents" type="object" string="View Docs" icon="fa-file-text" class="btn-link"/>
            <button name="action_generate_barcode" type="object" string="Print Barcode" icon="fa-barcode" class="btn-link"/>
            <button name="action_generate_qr_code" type="object" string="QR Code" icon="fa-qrcode" class="btn-link"/>
        </list>
    </field>
    </record>

<!-- Form view for Enhanced -->
    <record id="records_container_view_form" model="ir.ui.view">
        <field name="name">records.container.view.form</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <form>
            <header>
                <!-- Container state values: pending, in, out, perm_out, destroyed -->
                <!-- PRIMARY WORKFLOW BUTTONS -->
                <button name="action_create_pickup_order" type="object" string="+ Pickup Order" class="btn-primary" 
                        invisible="state == 'destroyed'"
                        help="Create a pickup order to schedule technicians to pick up this container from the customer"/>
                <button name="action_stock_in" type="object" string="Add to Inventory" class="btn-success" 
                        invisible="state not in ['pending', 'out']"
                        help="Stock in this container - changes state from Pending to In Storage"/>
                <button name="action_retrieve_container" type="object" string="Retrieve Container" class="btn-secondary" invisible="state != 'in'"/>
                <button name="action_destroy" type="object" string="Destroy Container" class="btn-danger" 
                        invisible="state == 'destroyed'"
                        groups="records_management.group_records_manager"
                        help="Permanently destroy container - NAID certified destruction"/>
                <!-- LABEL/PRINT BUTTONS - grouped together -->
                <button name="action_print_barcode_label" type="object" string="Field Labels" class="btn-info"
                        help="Print barcode labels for field use"/>
                <button name="action_print_movement_slip" type="object" string="Print Movement Slip" class="btn-secondary"
                        help="Print a movement slip for chain of custody"/>
                <button name="action_print_pickup_slip" type="object" string="Print Pickup Slip" class="btn-secondary"
                        invisible="state not in ['pending', 'out']"
                        help="Print a pickup slip for the customer"/>
                <!-- FILE MANAGEMENT BUTTONS -->
                <button name="action_add_files" type="object" string="+ Add File" class="btn-success" 
                        invisible="state in ['destroyed', 'perm_out']"
                        help="Add a single file folder to this container"/>
                <button name="action_index_container" type="object" string="Bulk File Add"
                        class="btn-success"
                        invisible="state in ['destroyed', 'perm_out']"
                        help="Add multiple file folders at once - creates billable indexing charges per file"/>
                <!-- BARCODE ASSIGNMENT -->
                <button name="%(action_records_container_assign_barcode_wizard)d" type="action" string="Assign Physical Barcode" class="btn-secondary" invisible="barcode_assigned"/>
                <field name="state" widget="statusbar" statusbar_visible="pending,in,out,perm_out,destroyed"/>
            </header>
            <sheet>
                <!-- Color-coded state badge displayed prominently -->
                <widget name="web_ribbon" title="Pending" bg_color="text-bg-info" invisible="state != 'pending'"/>
                <widget name="web_ribbon" title="In Storage" bg_color="text-bg-success" invisible="state != 'in'"/>
                <widget name="web_ribbon" title="Checked Out" bg_color="text-bg-warning" invisible="state != 'out'"/>
                <widget name="web_ribbon" title="Permanent Out" bg_color="text-bg-secondary" invisible="state != 'perm_out'"/>
                <widget name="web_ribbon" title="Destroyed" bg_color="text-bg-danger" invisible="state != 'destroyed'"/>
                
                <!-- PROMINENT BARCODE DISPLAY AT TOP -->
                <div class="row mb-3" invisible="not barcode and not temp_barcode">
                    <div class="col-12 text-center">
                        <div class="p-2" style="background: #f8f9fa; border: 2px solid #dee2e6; border-radius: 4px;">
                            <field name="barcode" widget="barcode" invisible="not barcode"
                                   options="{'symbology': 'CODE128'}"/>
                            <field name="temp_barcode" widget="barcode" invisible="barcode or not temp_barcode"
                                   options="{'symbology': 'CODE128'}"/>
                            <div class="text-muted small mt-1">
                                <span invisible="not barcode"><i class="fa fa-barcode" title="Barcode" aria-hidden="true"/> <field name="barcode" readonly="1" nolabel="1"/></span>
                                <span invisible="barcode or not temp_barcode"><i class="fa fa-barcode" title="Temporary Barcode" aria-hidden="true"/> <field name="temp_barcode" readonly="1" nolabel="1"/> (Temporary)</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" type="object" name="action_view_documents" icon="fa-file-text" title="View Documents">
                        <field name="document_count" string="Documents" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" type="object" name="action_view_files" icon="fa-folder-open" title="View File Folders">
                        <field name="file_count" string="File Folders" widget="statinfo"/>
                    </button>

                    <!-- âœ… NEW: Stock Quant smart button -->
                    <button class="oe_stat_button" type="object" name="action_view_stock_quant"
                            icon="fa-cubes"
                            title="View in Inventory System"
                            invisible="not quant_id">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Stock</span>
                            <span class="o_stat_text">Quant</span>
                        </div>
                    </button>

                    <!-- Stock Location smart button -->
                    <button class="oe_stat_button" type="object" name="action_view_stock_location"
                            icon="fa-map-marker"
                            title="View Stock Location"
                            invisible="not location_id">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Stock</span>
                            <span class="o_stat_text">Location</span>
                        </div>
                    </button>
                </div>

                <group>
                    <group string="Container Information">
                        <field name="name"
                               string="Box Number"
                               placeholder="e.g., HR-1001, Finance-Q4-2024"
                               help="Unique name/identifier for this container"
                               required="1"
                               readonly="state == 'destroyed'"/>
                        <field name="description"
                               string="Description"
                               placeholder="Brief description of container purpose or contents"
                               help="Optional description to help identify this container"/>
                        <field name="container_type_id" 
                               string="Container Type"
                               required="1"/>
                        <field name="weight" string="Weight (lbs)"/>
                        <field name="cubic_feet" string="Capacity (ftÂ³)" readonly="1"/>
                        <field name="is_full" string="Container Full" widget="boolean_toggle"/>
                    </group>
                    <group string="Barcode Tracking">
                        <!-- Include computed flag field (hidden) so invisible expression works reliably -->
                        <field name="barcode_assigned" invisible="1"/>
                        <field name="temp_barcode" 
                               string="Temporary Barcode"
                               readonly="1" 
                               help="System-generated temporary barcode (auto-assigned)"
                               invisible="barcode_assigned"/>
                        <field name="barcode" 
                               string="Physical Barcode"
                               placeholder="Scan or type barcode from pre-printed sheet"
                               help="Physical barcode - scan with camera or laser scanner"
                               widget="barcode"/>
                        <div colspan="2" class="text-muted small" invisible="not barcode or not temp_barcode">
                            <i class="fa fa-info-circle"/> Both temporary and physical barcodes are active
                        </div>
                    </group>
                    <group string="Customer &amp; Location">
        <field name="partner_id" required="1" groups="base.group_user" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
        <field name="partner_id" required="1" readonly="1" groups="base.group_portal" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
        <field name="department_id"/>
        
        <!-- Stock Owner - Organizational hierarchy: Company â†’ Department â†’ Child Department -->
        <field name="stock_owner_id"
               string="Inventory Owner"
               readonly="1"
               options="{'no_create': True}"
               help="Organizational unit that owns this inventory (Company â†’ Department â†’ Child Department). Auto-filled when you select customer or department."/>

        <!-- PRIMARY LOCATION: What user sets manually -->
        <field name="location_id"
               string="Warehouse Location"
               groups="base.group_user"
               options="{'no_create': True}"
               help="Where you want to store this container (e.g., Aisle 10/Row 0). Set this manually."/>
        
        <!-- HIDDEN TECHNICAL FIELDS - Only for advanced inventory users -->
        <field name="stock_location_id"
               string="Stock Location (Technical)"
               invisible="1"
               groups="stock.group_stock_manager"
               options="{'no_create': True}"
               help="Legacy alias - same as Warehouse Location"/>
               
        <field name="current_location_id"
               string="Inventory Sync Location"
               readonly="1"
               invisible="1"
               groups="stock.group_stock_manager"
               help="Auto-synced from stock quant after activation. Shows actual inventory system location."/>
               
        <field name="quant_id"
               string="Stock Quant"
               readonly="1"
               invisible="1"
               groups="stock.group_stock_manager"
               help="Inventory tracking record (created when container is activated)"/>

        <!-- Portal users: Temporary inventory (temp locations at customer site) -->
        <!-- Only show if NO physical location assigned (mutually exclusive) -->
        <field name="temp_inventory_id"
               groups="base.group_portal"
               context="{'default_partner_id': partner_id}"
               invisible="location_id"
               options="{'no_open': False}"
               help="Temporary location at customer site (hidden when assigned to warehouse location)"/>
        <field name="user_id"
               string="Responsible User"
               context="{'records_with_department': True}"
               domain="[('active', '=', True), '|', ('department_assignment_ids.department_id', '=', department_id), ('department_assignment_ids', '=', False)]"
               help="Select the responsible user. Users are shown with their department name in brackets to help identify the correct person."/>
                    </group>
                </group>

                <!-- Legal Compliance &amp; Record Series (Optional) -->
                <group string="Legal Compliance &amp; Record Series (Optional)" name="legal_compliance" col="2">
                    <group>
                        <field name="record_series_id"
                               string="Record Series"
                               options="{'no_create': True}"
                               help="Select a record series code to automatically apply legal citations and retention policies"/>
                        <field name="disposition_id"
                               string="Disposition Method"
                               options="{'no_create': True}"
                               help="How records should be handled at end of retention period (Shred, Archive, etc.)"/>
                    </group>
                    <group>
                        <field name="legal_citation_ids"
                               string="Legal Citations"
                               widget="many2many_tags"
                               options="{'no_create': True}"
                               help="Legal requirements governing retention of these records (IRS, HIPAA, SOX, etc.)"/>
                    </group>
                </group>

                <group>
                    <group string="Retention &amp; Security">
        <field name="retention_policy_id"/>
        <field name="document_type_id"/>
        <field name="security_level"/>
        <field name="permanent_retention"/>
                    </group>
                    <group string="Important Dates">
        <field name="storage_start_date"/>
        <field name="last_access_date" readonly="1"/>
        <field name="destruction_due_date" readonly="1"/>
        <field name="destruction_date" readonly="1"/>
        <field name="is_due_for_destruction" readonly="1"/>
                    </group>
                </group>

                <group>
                    <group string="Content &amp; Description">
        <field name="description" placeholder="Container contents, special instructions, or notes..."/>
        <field name="content_description"/>
        <field name="access_restrictions"/>
                    </group>
                    <group string="Additional Info">
        <field name="temp_inventory_id"/>
        <field name="active"/>
        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </group>

                <notebook>
                    <page string="File Folders" name="files">
        <field name="file_ids" mode="list,form" context="{'default_container_id': id}">
                            <list string="File Folders">
                                <field name="name"/>
                                <field name="barcode" string="Physical Barcode"/>
                                <field name="temp_barcode" string="ðŸ·ï¸ Temp Barcode"/>
                                <field name="file_category"/>
                                <field name="received_date"/>
                                <field name="location_id"/>
                                <field name="partner_id"/>
                                <field name="create_date"/>
                            </list>
                            <form string="File Folder">
                                <group>
                                    <field name="name"/>
                                    <field name="barcode" string="Physical Barcode"/>
                                    <field name="temp_barcode" string="ðŸ·ï¸ Temp Barcode" readonly="1"/>
                                    <field name="file_category"/>
                                    <field name="received_date"/>
                                    <field name="container_id"/>
                                    <field name="partner_id"/>
                                    <field name="location_id"/>
                                </group>
                            </form>
                        </field>
                    </page>
                    <page string="Movement History" name="movements">
        <field name="movement_ids" mode="list"/>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
        <field name="message_follower_ids"/>
        <field name="activity_ids"/>
        <field name="message_ids"/>
            </div>
        </form>
    </field>
    </record>

<!-- List view for Calendar -->
    <record id="records_container_view_calendar" model="ir.ui.view">
        <field name="name">records.container.view.calendar</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <calendar string="Container Storage Calendar" date_start="storage_start_date" date_stop="destruction_due_date" color="partner_id">
        <field name="name"/>
        <field name="partner_id"/>
        <field name="location_id"/>
        <field name="state"/>
        <field name="container_type_id"/>
        <field name="document_count"/>
        </calendar>
    </field>
    </record>

<!-- List view for Graph -->
    <record id="records_container_view_graph" model="ir.ui.view">
        <field name="name">records.container.view.graph</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <graph string="Container Analytics">
        <field name="partner_id" type="row"/>
        <field name="state" type="col"/>
        <field name="document_count" type="measure"/>
        </graph>
    </field>
    </record>

<!-- Search view for Enhanced -->
    <record id="records_container_view_search" model="ir.ui.view">
        <field name="name">records.container.view.search</field>
        <field name="model">records.container</field>
        <field name="arch" type="xml">
        <search>
    <field name="name" string="Container" filter_domain="['|','|', ('name', 'ilike', self), ('barcode', 'ilike', self), ('temp_barcode', 'ilike', self)]"/>
        <field name="partner_id"/>
        <field name="department_id"/>
        <field name="location_id"/>
        <field name="container_type_id"/>
        <field name="retention_policy_id"/>
        <field name="document_type_id"/>
        <field name="state"/>
        <field name="security_level"/>
        <field name="is_due_for_destruction"/>
        <field name="permanent_retention"/>
        <field name="active"/>

            <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
            <filter string="In Storage" name="in_storage" domain="[('state', '=', 'in')]"/>
            <filter string="Out" name="out" domain="[('state', '=', 'out')]"/>
            <filter string="Permanently Out" name="perm_out" domain="[('state', '=', 'perm_out')]"/>
            <filter string="Destroyed" name="destroyed" domain="[('state', '=', 'destroyed')]"/>

            <separator/>
            <filter string="Due for Destruction" name="due_for_destruction" domain="[('is_due_for_destruction', '=', True)]"/>
            <filter string="Permanent Retention" name="permanent_retention" domain="[('permanent_retention', '=', True)]"/>
            <filter string="Active Only" name="active" domain="[('active', '=', True)]"/>
            <filter string="Inactive Only" name="inactive" domain="[('active', '=', False)]"/>

            <separator/>
            <filter string="Stored This Month" name="this_month" domain="[('stored_last_30d', '=', True)]"/>
            <filter string="Stored This Year" name="this_year" domain="[('storage_start_date', '!=', False)]"/>
            <filter string="Due Within 6 Months" name="due_soon" domain="[('destruction_due_6m', '=', True)]"/>

            <group expand="0" string="Group By">
                <filter string="Customer" name="group_by_customer" context="{'group_by': 'partner_id'}"/>
                <filter string="Department" name="group_by_department" context="{'group_by': 'department_id'}"/>
                <filter string="Location" name="group_by_location" context="{'group_by': 'location_id'}"/>
                <filter string="Container Type" name="group_by_type" context="{'group_by': 'container_type_id'}"/>
                <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                <filter string="Security Level" name="group_by_security" context="{'group_by': 'security_level'}"/>
                <filter string="Storage Month" name="group_by_storage_month" context="{'group_by': 'storage_start_date:month'}"/>
                <filter string="Due Month" name="group_by_due_month" context="{'group_by': 'destruction_due_date:month'}"/>
            </group>
        </search>
