<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for stock.picking.records.extension -->
    <record id="view_stock_picking_records_extension_tree" model="ir.ui.view">
        <field name="name">stock.picking.records.extension.tree</field>
        <field name="model">stock.picking.records.extension</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for stock.picking.records.extension -->
    <record id="view_stock_picking_records_extension_form" model="ir.ui.view">
        <field name="name">stock.picking.records.extension.form</field>
        <field name="model">stock.picking.records.extension</field>
        <field name="arch" type="xml">
            <form string="Stock Picking Records Extension">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for stock.picking.records.extension -->
    <record id="view_stock_picking_records_extension_search" model="ir.ui.view">
        <field name="name">stock.picking.records.extension.search</field>
        <field name="model">stock.picking.records.extension</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action stock.picking.records.extension -->
    <record id="action_stock_picking_records_extension" model="ir.actions.act_window">
        <field name="name">Stock Picking Records Extension</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.picking.records.extension</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Stock Picking Records Extension.
            </p>
        </field>
    </record>

</odoo>
