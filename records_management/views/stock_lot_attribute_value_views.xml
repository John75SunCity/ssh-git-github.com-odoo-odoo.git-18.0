<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List view for Stock Lot Attribute Value -->
        <record id="stock_lot_attribute_value_view_tree" model="ir.ui.view">
            <field name="name">stock.lot.attribute.value.view.tree</field>
            <field name="model">stock.lot.attribute.value</field>
            <field name="arch" type="xml">
                <list>
                    <field name="display_name"/>
                    <field name="lot_id"/>
                    <field name="attribute_id"/>
                    <field name="attribute_type"/>
                    <field name="value_text" optional="hide"/>
                    <field name="value_number" optional="hide"/>
                    <field name="value_date" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Form view for Stock Lot Attribute Value -->
        <record id="stock_lot_attribute_value_view_form" model="ir.ui.view">
            <field name="name">stock.lot.attribute.value.view.form</field>
            <field name="model">stock.lot.attribute.value</field>
            <field name="arch" type="xml">
                <form string="Stock Lot Attribute Value">
                    <sheet>
                        <div class="oe_title">
                            <label for="display_name"/>
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Attribute Information">
                                <field name="lot_id" required="1"/>
                                <field name="attribute_id" required="1"/>
                                <field name="attribute_type" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Value">
                                <group>
                                    <field name="value_text" string="Text Value"/>
                                    <field name="value_number" string="Number Value"/>
                                    <field name="value_date" string="Date Value"/>
                                    <field name="value_boolean" string="Boolean Value"/>
                                    <field name="value_selection_id" string="Selection Value"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view for Stock Lot Attribute Value -->
        <record id="stock_lot_attribute_value_view_search" model="ir.ui.view">
            <field name="name">stock.lot.attribute.value.view.search</field>
            <field name="model">stock.lot.attribute.value</field>
            <field name="arch" type="xml">
                <search>
                    <field name="lot_id" string="Stock Lot"/>
                    <field name="attribute_id" string="Attribute"/>
                    <filter string="Text Values" name="has_text" domain="[('value_text', '!=', False)]"/>
                    <filter string="Number Values" name="has_number" domain="[('value_number', '!=', False)]"/>
                    <filter string="Date Values" name="has_date" domain="[('value_date', '!=', False)]"/>
                    <filter string="Boolean True" name="bool_true" domain="[('value_boolean', '=', True)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Attribute" name="attribute" context="{'group_by':'attribute_id'}"/>
                        <filter string="Stock Lot" name="lot" context="{'group_by':'lot_id'}"/>
                        <filter string="Type" name="type" context="{'group_by':'attribute_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action for Stock Lot Attribute Value -->
        <record id="action_stock_lot_attribute_value" model="ir.actions.act_window">
            <field name="name">Stock Lot Attribute Values</field>
            <field name="res_model">stock.lot.attribute.value</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Stock Lot Attribute Value.
                </p>
            </field>
        </record>
    </data>
</odoo>
