<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for photo -->
    <record id="view_photo_tree" model="ir.ui.view">
        <field name="name">photo.tree</field>
        <field name="model">photo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for photo -->
    <record id="view_photo_form" model="ir.ui.view">
        <field name="name">photo.form</field>
        <field name="model">photo</field>
        <field name="arch" type="xml">
            <form string="Photo">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for photo -->
    <record id="view_photo_search" model="ir.ui.view">
        <field name="name">photo.search</field>
        <field name="model">photo</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action photo -->
    <record id="action_photo" model="ir.actions.act_window">
        <field name="name">Photo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">photo</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Photo.
            </p>
        </field>
    </record>

</odoo>
