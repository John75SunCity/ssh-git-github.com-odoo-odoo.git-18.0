<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List view for photo -->
        <record id="photo_view_tree" model="ir.ui.view">
            <field name="name">photo.view.tree</field>
            <field name="model">photo</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="company_id"/>
                    <field name="user_id"/>
                </list>
            </field>
        </record>

        <!-- Form view for photo -->
        <record id="photo_view_form" model="ir.ui.view">
            <field name="name">photo.view.form</field>
            <field name="model">photo</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="state"/>
                            <field name="company_id"/>
                            <field name="user_id"/>
                            <field name="task_id"/>
                            <field name="invoice_id"/>
                            <field name="sale_order_id"/>
                            <field name="maintenance_request_id"/>
                            <field name="reference_model"/>
                            <field name="image" widget="image"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view for photo -->
        <record id="photo_view_search" model="ir.ui.view">
            <field name="name">photo.view.search</field>
            <field name="model">photo</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="company_id"/>
                    <field name="user_id"/>
                    <filter name="validated" string="Validated" domain="[('state', '=', 'validated')]"/>
                </search>
            </field>
        </record>

        <!-- Action for photo -->
        <record id="action_photo" model="ir.actions.act_window">
            <field name="name">Photo</field>
            <field name="res_model">photo</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to add a photo.
                </p>
            </field>
        </record>
    </data>
</odoo>
