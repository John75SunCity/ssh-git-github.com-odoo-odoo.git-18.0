<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Partner Form Inheritance: Key Restrictions -->
    <record id="res_partner_view_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.key_restrictions</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add Key Restrictions tab -->
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page name="key_restrictions" string="Key Restrictions" groups="records_management.group_records_manager">
                    <group>
                        <group name="key_restriction_status">
                            <field name="key_restriction_status" widget="badge" decoration-success="key_restriction_status == 'allowed'" decoration-danger="key_restriction_status == 'restricted'"/>
                            <field name="key_issuance_allowed"/>
                        </group>
                        <group name="key_restriction_details" invisible="key_issuance_allowed == True">
                            <field name="key_restriction_reason" required="key_issuance_allowed == False"/>
                            <field name="key_restriction_date"/>
                            <field name="key_restriction_approved_by_id"/>
                            <field name="restricted_unlock_count"/>
                        </group>
                    </group>
                    <group name="key_restriction_notes" invisible="key_issuance_allowed == True">
                        <field name="key_restriction_notes" nolabel="1" placeholder="Additional notes about key restrictions..."/>
                    </group>
                    <group name="key_restriction_buttons" invisible="key_issuance_allowed == True">
                        <button name="action_view_unlock_services" type="object" class="oe_stat_button" icon="fa-unlock-alt" title="View Unlock Services"/>
                    </group>
                    <div class="oe_button_box" name="key_restriction_buttons">
                        <button name="action_view_unlock_services" type="object" class="oe_stat_button" icon="fa-unlock-alt" title="View Unlock Services"/>
                        <field name="restricted_unlock_count" widget="statinfo" string="Unlock Services"/>
                    </div>
                    <!-- History -->
                    <group string="Restriction History" invisible="key_issuance_allowed == True">
                        <field name="key_restriction_history_ids" nolabel="1" mode="tree">
                            <list>
                                <field name="action"/>
                                <field name="reason"/>
                                <field name="approved_by"/>
                            </list>
                        </field>
                    </group>
                </page>
            </xpath>
            <!-- Warning banner -->
            <xpath expr="//sheet" position="before">
                <div class="alert alert-warning" role="alert" invisible="key_issuance_allowed == True or id == False">
                    <strong><i class="fa fa-exclamation-triangle text-danger"></i> Key Restriction Warning:</strong>
                    This customer is restricted from receiving bin keys. Use bin unlock service instead.
                    <br/>
                    <field name="key_restriction_reason" readonly="1" nolabel="1"/>
                </div>
            </xpath>
            <!-- Button box additions -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_restrict_key_issuance" type="object" class="oe_stat_button" icon="fa-ban" invisible="key_issuance_allowed == True" groups="records_management.group_records_manager" title="Restrict Key Issuance">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Restrict</span>
                        <span class="o_stat_text">Keys</span>
                    </div>
                </button>
                <button name="action_view_key_history" type="object" class="oe_stat_button" icon="fa-history" invisible="key_restriction_history_count == 0" title="View Key History">
                    <field name="key_restriction_history_count" widget="statinfo" string="Key History"/>
                </button>
                <button name="action_allow_key_issuance" type="object" class="oe_stat_button" icon="fa-key" invisible="key_issuance_allowed == True" groups="records_management.group_records_manager" title="Allow Key Issuance">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Allow</span>
                        <span class="o_stat_text">Keys</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Partner Tree Inheritance -->
    <record id="res_partner_view_tree_inherit" model="ir.ui.view">
        <field name="name">res.partner.view.tree.inherit.key_restrictions</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="key_restriction_status" widget="badge" decoration-success="key_restriction_status == 'allowed'" decoration-danger="key_restriction_status == 'restricted'" optional="hide"/>
                <field name="restricted_unlock_count" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Partner Search Inheritance -->
    <record id="res_partner_view_search_inherit" model="ir.ui.view">
        <field name="name">res.partner.view.search.inherit.key_restrictions</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='supplier']" position="after">
                <separator/>
                <filter name="key_restricted" string="Key Restricted" domain="[('key_issuance_allowed', '=', False)]"/>
                <filter name="recent_restrictions" string="Recently Restricted" domain="[('key_restriction_date', '&gt;=', (context_today-relativedelta(days=30)).strftime('%Y-%m-%d'))]"/>
            </xpath>
        </field>
    </record>

    <!-- Wizard View -->
    <record id="key_restriction_management_wizard_view_form" model="ir.ui.view">
        <field name="name">key.restriction.management.wizard.view.form</field>
        <field name="model">key.restriction.checker.wizard</field>
        <field name="arch" type="xml">
            <form string="Key Restriction Management">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="action"/>
                        <field name="current_status" readonly="1" invisible="partner_id == False"/>
                    </group>
                    <group name="restriction_details" invisible="action != 'restrict'">
                        <group>
                            <field name="restriction_reason" required="action == 'restrict'"/>
                            <field name="effective_date"/>
                        </group>
                        <field name="unlock_services_count" readonly="1"/>
                        <group>
                            <field name="restriction_notes" nolabel="1"/>
                            <field name="restriction_notes_placeholder" invisible="1"/>
                        </group>
                    </group>
                    <group name="allow_details" invisible="action != 'allow'">
                        <field name="allow_reason" nolabel="1" placeholder="Enter reason for removing key restriction..."/>
                        <field name="notify_customer" string="Notify Customer of Change"/>
                    </group>
                    <group name="impact_analysis" invisible="partner_id == False">
                        <group string="Impact Analysis">
                            <field name="active_keys_count" readonly="1"/>
                            <field name="pending_requests_count" readonly="1"/>
                            <field name="recent_unlock_services_count" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Base Bin Unlock Service Search -->
    <record id="bin_unlock_service_view_search" model="ir.ui.view">
        <field name="name">bin.unlock.service.view.search</field>
        <field name="model">bin.unlock.service</field>
        <field name="arch" type="xml">
            <search string="Search Unlock Services">
                <field name="service_number"/>
                <field name="partner_id"/>
                <field name="technician_id"/>
                <field name="bin_location"/>
                <field name="unlock_reason"/>
                <filter string="Billable" name="billable" domain="[('billable', '=', True)]"/>
                <filter string="Non-Billable" name="non_billable" domain="[('billable', '=', False)]"/>
                <filter string="Completed" name="completed" domain="[('completed', '=', True)]"/>
                <filter string="Pending" name="pending" domain="[('completed', '=', False)]"/>
                <filter string="Invoice Created" name="invoiced" domain="[('invoice_created', '=', True)]"/>
                <filter string="Not Invoiced" name="not_invoiced" domain="[('invoice_created', '=', False)]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('service_date', '=', context_today)]"/>
                <filter string="This Week" name="this_week" domain="[('service_date', '>=', (context_today - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" domain="[('service_date', '>=', context_today.strftime('%Y-%m-01'))]"/>
                <group expand="1" string="Group By">
                    <filter string="Customer" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Technician" name="group_technician" context="{'group_by': 'technician_id'}"/>
                    <filter string="Unlock Reason" name="group_reason" context="{'group_by': 'unlock_reason'}"/>
                    <filter string="Service Date" name="group_date" context="{'group_by': 'service_date:month'}"/>
                    <filter string="Billable Status" name="group_billable" context="{'group_by': 'billable'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Base Tree -->
    <record id="bin_unlock_service_view_tree" model="ir.ui.view">
        <field name="name">bin.unlock.service.view.tree</field>
        <field name="model">bin.unlock.service</field>
        <field name="arch" type="xml">
            <list string="Bin Unlock Services" decoration-success="billable == True and invoice_created == True" decoration-warning="billable == False" decoration-info="completed == True">
                <field name="service_number"/>
                <field name="partner_id"/>
                <field name="service_date"/>
                <field name="bin_location"/>
                <field name="unlock_reason"/>
                <field name="charge_amount" sum="Total Revenue"/>
                <field name="billable" widget="boolean_toggle"/>
                <field name="completed" widget="boolean_toggle"/>
                <field name="technician_id"/>
                <field name="invoice_created" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Base Form -->
    <record id="bin_unlock_service_view_form" model="ir.ui.view">
        <field name="name">bin.unlock.service.view.form</field>
        <field name="model">bin.unlock.service</field>
        <field name="arch" type="xml">
            <form string="Bin Unlock Service">
                <header>
                    <button name="action_create_invoice" string="Create Invoice" type="object" class="btn-primary" invisible="billable == False or invoice_created == True"/>
                    <button name="action_mark_completed" string="Mark Completed" type="object" class="btn-success" invisible="completed == True"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="service_number" class="oe_edit_only"/>
                        <h1>
                            <field name="service_number" readonly="1"/>
                        </h1>
                        <h2>Unlock Service for <field name="partner_id" options="{'no_create_edit': True}"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Service Details">
                            <field name="service_date"/>
                            <field name="bin_location"/>
                            <field name="unlock_reason"/>
                            <field name="technician_id"/>
                            <field name="key_holder_id" readonly="1"/>
                        </group>
                        <group string="Billing &amp; Status">
                            <field name="charge_amount"/>
                            <field name="billable"/>
                            <field name="invoice_created" readonly="1"/>
                            <field name="completed"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="reason_description" widget="text" placeholder="Detailed description of why unlock was needed..."/>
                                <field name="items_retrieved" widget="text" placeholder="Description of items retrieved from the bin..."/>
                                <field name="notes" widget="text" placeholder="Additional service notes..."/>
                            </group>
                        </page>
                        <page string="Photos &amp; Documentation">
                            <field name="photo_ids" widget="many2many_binary"/>
                        </page>
                        <page string="System Information">
                            <group>
                                <group>
                                    <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                                    <field name="create_date" readonly="1"/>
                                    <field name="create_uid" readonly="1"/>
                                </group>
                                <group>
                                    <field name="write_date" readonly="1"/>
                                    <field name="write_uid" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Inherited Bin Unlock Service Form (Key Restrictions) -->
    <record id="bin_unlock_service_view_form_inherit" model="ir.ui.view">
        <field name="name">bin.unlock.service.view.form.inherit.key_restrictions</field>
        <field name="model">bin.unlock.service</field>
        <field name="inherit_id" ref="bin_unlock_service_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <div class="alert alert-info" role="status" invisible="customer_key_restricted == False">
                    <strong>
                        <i class='fa fa-key'></i> Key Restricted Customer:</strong>
                    This customer is not allowed to receive bin keys.
                    <br/>
                    <strong>Restriction Reason:</strong>
                    <field name="key_restriction_reason" readonly="1" nolabel="1"/>
                    <br/>
                    <strong>Alternative:</strong> This unlock service provides temporary access.
                </div>
            </xpath>
            <xpath expr="//field[@name='unlock_reason']" position="after">
                <field name="unlock_reason_code"/>
                <field name="customer_key_restricted" invisible="1"/>
                <field name="key_restriction_reason" invisible="1"/>
                <field name="auto_created_for_restriction" invisible="auto_created_for_restriction == False"/>
            </xpath>
        </field>
    </record>

    <!-- Inherited Bin Unlock Service Tree (Key Restrictions) -->
    <record id="bin_unlock_service_view_tree_inherit" model="ir.ui.view">
        <field name="name">bin.unlock.service.view.tree.inherit.key_restrictions</field>
        <field name="model">bin.unlock.service</field>
        <field name="inherit_id" ref="bin_unlock_service_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='unlock_reason']" position="after">
                <field name="unlock_reason_code" optional="hide"/>
                <field name="customer_key_restricted" widget="boolean_toggle" optional="hide"/>
                <field name="auto_created_for_restriction" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='service_number']" position="after">
                <field name="key_restriction_reason" string="Restriction Reason" optional="hide"/>
                <field name="key_restriction_approved_by_id" string="Approved By" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Inherited Bin Unlock Service Search (Key Restrictions) -->
    <record id="bin_unlock_service_view_search_inherit" model="ir.ui.view">
        <field name="name">bin.unlock.service.view.search.inherit.key_restrictions</field>
        <field name="model">bin.unlock.service</field>
        <field name="inherit_id" ref="bin_unlock_service_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_services']" position="after">
                <separator/>
                <filter name="key_restriction" string="Key Restriction Services" domain="[('unlock_reason_code', '=', 'key_restriction')]"/>
                <filter name="key_restricted_customers" string="Key Restricted Customers" domain="[('customer_key_restricted', '=', True)]"/>
                <filter name="auto_created_restrictions" string="Auto-Created for Restrictions" domain="[('auto_created_for_restriction', '=', True)]"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="key_restriction_reason" string="Restriction Reason"/>
                <field name="key_restriction_approved_by_id" string="Approved By"/>
            </xpath>
            <xpath expr="//group[@expand='0']" position="inside">
                <filter string="Key Status" name="group_key_status" context="{'group_by': 'key_restriction_status'}"/>
                <filter string="Restriction Status" name="group_restriction_status" context="{'group_by': 'customer_key_restricted'}"/>
                <filter string="Unlock Reason" name="group_unlock_reason" context="{'group_by': 'unlock_reason_code'}"/>
                <filter string="Restriction Date" name="group_restriction_date" context="{'group_by': 'key_restriction_date'}"/>
            </xpath>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_bin_key_management" model="ir.actions.act_window">
        <field name="name">Bin Key Management</field>
        <field name="res_model">bin.key</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_create">
                Create your first bin key assignment!
            </p>
            <p>
                Track which contacts have bin keys, manage key returns, and handle replacements.
                This system provides complete audit trails for key management and security compliance.
            </p>
            <p>
                <strong>Key Features:</strong>
                <br/>
                • Complete key lifecycle tracking<br/>
                • Automated unlock service billing<br/>
                • Emergency contact management<br/>
                • Replacement key chains<br/>
                • NAID compliance support
            </p>
        </field>
    </record>

    <record id="action_bin_unlock_service" model="ir.actions.act_window">
        <field name="name">Bin Unlock Services</field>
        <field name="res_model">bin.unlock.service</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_create">
                Record your first bin unlock service!
            </p>
            <p>
                Track unlock services and automatically bill customers $25 for each service.
                Perfect for managing emergency access and generating additional revenue.
            </p>
            <p>
                <strong>Service Features:</strong>
                <br/>
                • Automated billing integration<br/>
                • Photo documentation support<br/>
                • Technician assignment tracking<br/>
                • Customer notification system<br/>
                • Complete audit trails
            </p>
        </field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_bin_key_management" name="Bin Key Management" parent="records_management.menu_records_management_root" action="action_bin_key_management" sequence="10"/>
    <menuitem id="menu_bin_unlock_services" name="Unlock Services" parent="records_management.menu_records_management_root" action="action_bin_unlock_service" sequence="11"/>

</odoo>
