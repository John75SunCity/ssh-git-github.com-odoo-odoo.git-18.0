<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_partner_view_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.view.form.inherit.key_restrictions</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page name="key_restrictions" string="Key Restrictions" groups="records_management.group_records_manager">
                        <group>
                            <group name="key_restriction_status">
                                <field name="key_restriction_status" widget="badge" decoration-success="key_restriction_status == 'allowed'" decoration-danger="key_restriction_status == 'restricted'" />
                                <field name="key_issuance_allowed" />
                            </group>
                            <group name="key_restriction_details" invisible="key_issuance_allowed == True">
                                <field name="key_restriction_reason" required="key_issuance_allowed == False" />
                                <field name="key_restriction_date" />
                                <field name="key_restriction_approved_by" />
                                <field name="restricted_unlock_count" />
                            </group>
                        </group>
                        <group name="key_restriction_notes" invisible="key_issuance_allowed == True">
                            <field name="key_restriction_notes" nolabel="1" placeholder="Additional notes about key restrictions..." />
                        </group>
                        <group name="key_restriction_buttons" invisible="key_issuance_allowed == True">
                            <button name="action_view_unlock_services" type="object" class="oe_stat_button" icon="fa-unlock-alt" title="View Unlock Services" />
                        </group>
                        <div class="oe_button_box" name="key_restriction_buttons">
                            <button name="action_view_unlock_services" type="object" class="oe_stat_button" icon="fa-unlock-alt" title="View Unlock Services" />
                            <field name="restricted_unlock_count" widget="statinfo" string="Unlock Services" />
                        </div>
                        <group string="Restriction History" invisible="key_issuance_allowed == True">
                            <field name="key_restriction_history_ids" nolabel="1">
                                <!-- Inline one2many list view (modern Odoo 18 <list/> tag). Using <list> instead of legacy <tree> to ensure proper comodel context (res.partner.key.restriction) so nested fields are not resolved against res.partner. -->
                                <list string="Key Restriction History">
                                    <field name="state"/>
                                    <field name="restriction_reason"/>
                                    <field name="effective_date"/>
                                    <field name="user_id" string="Approved By"/>
                                </list>
                            </field>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//sheet" position="before">
                    <div class="alert alert-warning" role="alert" invisible="key_issuance_allowed == True or id == False">
                        <strong>
                            <i class="fa fa-exclamation-triangle text-danger" aria-hidden="true" /> Key Restriction Warning:</strong>
                    This customer is restricted from receiving bin keys. Use bin unlock service instead.
                    <br />
                        <field name="key_restriction_reason" readonly="1" nolabel="1" />
                    </div>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_restrict_key_issuance" type="object" class="oe_stat_button" icon="fa-ban" invisible="key_issuance_allowed == True" groups="records_management.group_records_manager" title="Restrict Key Issuance">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Restrict</span>
                            <span class="o_stat_text">Keys</span>
                        </div>
                    </button>
                    <button name="action_view_key_history" type="object" class="oe_stat_button" icon="fa-history" invisible="key_restriction_history_count == 0" title="View Key History">
                        <field name="key_restriction_history_count" widget="statinfo" string="Key History" />
                    </button>
                    <button name="action_allow_key_issuance" type="object" class="oe_stat_button" icon="fa-key" invisible="key_issuance_allowed == True" groups="records_management.group_records_manager" title="Allow Key Issuance">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Allow</span>
                            <span class="o_stat_text">Keys</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
    <record id="res_partner_view_tree_inherit" model="ir.ui.view">
            <field name="name">res.partner.view.tree.inherit.key_restrictions</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">
                <!-- Insert additional columns directly inside the partner list to avoid brittle field-based xpaths -->
                <xpath expr="//list" position="inside">
                    <field name="key_restriction_status" widget="badge" decoration-success="key_restriction_status == 'allowed'" decoration-danger="key_restriction_status == 'restricted'" optional="hide"/>
                    <field name="restricted_unlock_count" optional="hide"/>
                </xpath>
            </field>
        </record>
        <record id="res_partner_view_search_inherit" model="ir.ui.view">
            <field name="name">res.partner.view.search.inherit.key_restrictions</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter" />
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='supplier']" position="after">
                    <separator />
                    <filter name="key_restricted" string="Key Restricted" domain="[('key_issuance_allowed', '=', False)]" />
                    <!-- Replaced Python expression in domain with stored computed boolean field -->
                    <filter name="recent_restrictions" string="Recently Restricted" domain="[('recently_restricted', '=', True)]" />
                </xpath>
            </field>
        </record>
        <record id="key_restriction_management_wizard_view_form" model="ir.ui.view">
            <field name="name">key.restriction.management.wizard.view.form</field>
            <field name="model">key.restriction.management.wizard</field>
            <field name="arch" type="xml">
                <form string="Key Restriction Management">
                    <sheet>
                        <group>
                            <field name="partner_id" />
                            <field name="action" />
                            <field name="current_status" readonly="1" invisible="partner_id == False" />
                        </group>
                        <group name="restriction_details" invisible="action != 'restrict'">
                            <group>
                                <field name="restriction_reason" required="action == 'restrict'" />
                                <field name="effective_date" />
                            </group>
                            <field name="unlock_services_count" readonly="1" />
                            <group>
                                <field name="restriction_notes" nolabel="1" />
                                <!-- Technical placeholder for dynamic note templates; intentionally hidden -->
                                <field name="restriction_notes_placeholder" invisible="1" />
                            </group>
                        </group>
                        <group name="allow_details" invisible="action != 'allow'">
                            <field name="allow_reason" nolabel="1" placeholder="Enter reason for removing key restriction..." />
                            <field name="notify_customer" string="Notify Customer of Change" />
                        </group>
                        <group name="impact_analysis" invisible="partner_id == False">
                            <group string="Impact Analysis">
                                <field name="active_keys_count" readonly="1" />
                                <field name="pending_requests_count" readonly="1" />
                                <field name="recent_unlock_services_count" readonly="1" />
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="bin_unlock_service_view_search" model="ir.ui.view">
            <field name="name">bin.unlock.service.view.search</field>
            <field name="model">bin.unlock.service</field>
            <field name="arch" type="xml">
                <search string="Search Unlock Services">
                    <field name="service_number"/>
                    <field name="partner_id"/>
                    <field name="assigned_technician_id"/>
                    <field name="bin_location"/>
                    <field name="reason_for_unlock"/>
                    <separator/>
                    <filter string="Draft" name="flt_draft" domain="[('state','=','draft')]"/>
                    <filter string="Scheduled" name="flt_scheduled" domain="[('state','=','scheduled')]"/>
                    <filter string="In Progress" name="flt_in_progress" domain="[('state','=','in_progress')]"/>
                    <filter string="Completed" name="flt_completed" domain="[('state','=','completed')]"/>
                    <filter string="Invoiced" name="flt_invoiced" domain="[('state','=','invoiced')]"/>
                    <separator/>
                    <filter string="Requested Today" name="today" domain="[('request_date', '=', context_today)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Customer" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Technician" name="group_technician" context="{'group_by': 'assigned_technician_id'}"/>
                        <filter string="Reason" name="group_reason" context="{'group_by': 'reason_for_unlock'}"/>
                        <filter string="Completion Month" name="group_date" context="{'group_by': 'completion_date:month'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="bin_unlock_service_view_tree" model="ir.ui.view">
            <field name="name">bin.unlock.service.view.tree</field>
            <field name="model">bin.unlock.service</field>
            <field name="arch" type="xml">
                <list string="Bin Unlock Services" decoration-success="state == 'invoiced'" decoration-info="state == 'completed'">
                    <field name="service_number"/>
                    <field name="partner_id"/>
                    <field name="request_date"/>
                    <field name="scheduled_date"/>
                    <field name="completion_date"/>
                    <field name="bin_id"/>
                    <field name="bin_location"/>
                    <field name="reason_for_unlock"/>
                    <field name="total_cost" sum="Total Revenue"/>
                    <field name="assigned_technician_id"/>
                    <field name="state"/>
                    <field name="invoice_id"/>
                </list>
            </field>
        </record>
        <record id="bin_unlock_service_view_form" model="ir.ui.view">
            <field name="name">bin.unlock.service.view.form</field>
            <field name="model">bin.unlock.service</field>
            <field name="arch" type="xml">
                <form string="Bin Unlock Service">
                    <header>
                        <button name="action_create_invoice" string="Create Invoice" type="object" class="btn-primary" invisible="state != 'completed' or invoice_id != False"/>
                        <button name="action_complete" string="Mark Completed" type="object" class="btn-success" invisible="state == 'completed' or state == 'invoiced'"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="service_number" class="oe_edit_only" />
                            <h1>
                                <field name="service_number" readonly="1"/>
                            </h1>
                            <h2>Unlock Service for <field name="partner_id" options="{'no_create_edit': True}"/>
                            </h2>
                        </div>
                        <group>
                            <group string="Service Details">
                                <field name="request_date"/>
                                <field name="scheduled_date"/>
                                <field name="completion_date"/>
                                <field name="bin_id"/>
                                <field name="bin_location" readonly="1"/>
                                <field name="reason_for_unlock"/>
                                <field name="assigned_technician_id"/>
                                <field name="key_id"/>
                                <field name="key_serial_number" readonly="1"/>
                            </group>
                            <group string="Billing &amp; Status">
                                <field name="service_cost"/>
                                <field name="emergency_surcharge"/>
                                <field name="total_cost" readonly="1"/>
                                <field name="state"/>
                                <field name="invoice_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Details">
                                <group>
                                    <field name="service_report" widget="text" placeholder="Detailed description of why unlock was needed..."/>
                                    <field name="completion_notes" widget="text" placeholder="Completion notes..."/>
                                </group>
                            </page>
                            <page string="Photos &amp; Documentation">
                                <group>
                                    <field name="photo_before"/>
                                    <field name="photo_after"/>
                                    <field name="service_certificate" readonly="1"/>
                                </group>
                            </page>
                            <page string="System Information">
                                <group>
                                    <group>
                                        <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                        <field name="create_uid" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="write_date" readonly="1"/>
                                        <field name="write_uid" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <record id="action_bin_key_management" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model bin.key has state field - consider using default search filters -->
            <field name="name">Bin Key Management</field>
            <field name="res_model">bin.key</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_create">
                Create your first bin key assignment!
            </p>
                <p>
                Track which contacts have bin keys, manage key returns, and handle replacements.
                This system provides complete audit trails for key management and security compliance.
            </p>
                <p>
                    <strong>Key Features:</strong>
                    <br />
                • Complete key lifecycle tracking<br />
                • Automated unlock service billing<br />
                • Emergency contact management<br />
                • Replacement key chains<br />
                • NAID compliance support
            </p>
            </field>
        </record>
        <record id="action_bin_unlock_service" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model bin.unlock.service has state field - consider using default search filters -->
            <field name="name">Bin Unlock Services</field>
            <field name="res_model">bin.unlock.service</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_this_month': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_create">
                Record your first bin unlock service!
            </p>
                <p>
                Track unlock services and automatically bill customers $25 for each service.
                Perfect for managing emergency access and generating additional revenue.
            </p>
                <p>
                    <strong>Service Features:</strong>
                    <br />
                • Automated billing integration<br />
                • Photo documentation support<br />
                • Technician assignment tracking<br />
                • Customer notification system<br />
                • Complete audit trails
            </p>
            </field>
        </record>

    <!-- Menus defined centrally in records_management_menus.xml to guarantee load order -->


    </data>
</odoo>
