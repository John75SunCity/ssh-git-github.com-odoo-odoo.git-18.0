<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree view for advanced.billing.profile -->
        <record id="advanced_billing_profile_view_tree" model="ir.ui.view">
            <field name="name">advanced.billing.profile.view.tree</field>
            <field name="model">advanced.billing.profile</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <tree string="Billing Profiles">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="billing_frequency"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Form view for advanced.billing.profile -->
        <record id="advanced_billing_profile_view_form" model="ir.ui.view">
            <field name="name">advanced.billing.profile.view.form</field>
            <field name="model">advanced.billing.profile</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <form string="Billing Profile">
                    <header>
                        <button name="action_activate" type="object" string="Activate" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_suspend" type="object" string="Suspend" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                        <button name="action_close" type="object" string="Close" attrs="{'invisible': [('state', 'not in', ['active', 'suspended'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,closed"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="department_id"/>
                            </group>
                            <group>
                                <field name="active"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Billing Configuration">
                                <group>
                                    <field name="billing_frequency"/>
                                    <field name="billing_cycle_day"/>
                                    <field name="payment_term_id"/>
                                    <field name="auto_billing"/>
                                    <field name="consolidate_invoices"/>
                                </group>
                            </page>
                            <page string="Contacts">
                                <field name="billing_contact_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Services &amp; Pricing">
                                <group>
                                    <field name="billing_service_ids" widget="many2many_tags"/>
                                    <field name="require_purchase_orders"/>
                                    <field name="discount_percentage"/>
                                    <field name="minimum_monthly_charge"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for advanced.billing.profile -->
        <record id="advanced_billing_profile_action" model="ir.actions.act_window">
            <field name="name">Billing Profiles</field>
            <field name="res_model">advanced.billing.profile</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- List view for advanced.billing.profile -->
        <record id="advanced_billing_profile_view_list" model="ir.ui.view">
            <field name="name">advanced.billing.profile.view.list</field>
            <field name="model">advanced.billing.profile</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="primary_contact_id"/>
                </tree>
            </field>
        </record>

        <!-- Search view for advanced.billing.profile -->
        <record id="advanced_billing_profile_view_search" model="ir.ui.view">
            <field name="name">advanced.billing.profile.view.search</field>
            <field name="model">advanced.billing.profile</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
