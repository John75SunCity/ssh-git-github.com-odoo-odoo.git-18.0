<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View required.document View List -->
    <record id="view_required_document_list" model="ir.ui.view">
        <field name="name">view.required.document.list</field>
        <field name="model">required.document</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View required.document form -->
    <record id="view_required_document_form" model="ir.ui.view">
        <field name="name">view.required.document.form</field>
        <field name="model">required.document</field>
        <field name="arch" type="xml">
            <form string="Required Document">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View required.document search -->
    <record id="view_required_document_search" model="ir.ui.view">
        <field name="name">view.required.document.search</field>
        <field name="model">required.document</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action required.document -->
    <record id="action_required_document" model="ir.actions.act_window">
        <field name="name">Required Document</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">required.document</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Required Document.
            </p>
        </field>
    </record>

</odoo>
