<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for portal.feedback.escalation -->
    <record id="view_portal_feedback_escalation_tree" model="ir.ui.view">
        <field name="name">portal.feedback.escalation.tree</field>
        <field name="model">portal.feedback.escalation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for portal.feedback.escalation -->
    <record id="view_portal_feedback_escalation_form" model="ir.ui.view">
        <field name="name">portal.feedback.escalation.form</field>
        <field name="model">portal.feedback.escalation</field>
        <field name="arch" type="xml">
            <form string="Portal Feedback Escalation">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for portal.feedback.escalation -->
    <record id="view_portal_feedback_escalation_search" model="ir.ui.view">
        <field name="name">portal.feedback.escalation.search</field>
        <field name="model">portal.feedback.escalation</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action portal.feedback.escalation -->
    <record id="action_portal_feedback_escalation" model="ir.actions.act_window">
        <field name="name">Portal Feedback Escalation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">portal.feedback.escalation</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Portal Feedback Escalation.
            </p>
        </field>
    </record>

</odoo>
