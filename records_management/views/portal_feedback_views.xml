<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ðŸ“Š ENTERPRISE CUSTOMER FEEDBACK - Advanced Analytics & Satisfaction Management -->
    
    <!-- KANBAN VIEW: Customer Feedback Dashboard -->
    <record id="view_portal_feedback_kanban" model="ir.ui.view">
        <field name="name">portal.feedback.kanban</field>
        <field name="model">portal.feedback</field>
        <field name="arch" type="xml">
            <kanban default_group_by="satisfaction_level" sample="1" quick_create="false" class="o_kanban_small_column">
                <field name="name"/>
                <field name="satisfaction_level"/>
                <field name="customer_id"/>
                <field name="feedback_type"/>
                <field name="overall_rating"/>
                <field name="service_quality_rating"/>
                <field name="response_time_rating"/>
                <field name="submission_date"/>
                <field name="status"/>
                <field name="priority"/>
                <field name="assigned_to"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <span class="float-end">
                                        <field name="status" widget="label_selection" options="{'classes': {'new': 'primary', 'reviewed': 'info', 'responded': 'success', 'escalated': 'warning', 'closed': 'secondary'}}"/>
                                    </span>
                                </div>
                                <span class="o_kanban_record_subtitle text-muted">
                                    ðŸ‘¤ <field name="customer_id"/> | <field name="feedback_type"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="mb-2">
                                            <strong>Overall Rating:</strong>
                                            <div class="d-inline-block ml-2">
                                                <field name="overall_rating" widget="priority" readonly="1"/>
                                                <span class="text-muted">(<field name="overall_rating"/>/5)</span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <small><strong>Service:</strong> <field name="service_quality_rating"/>/5</small>
                                            </div>
                                            <div class="col-6">
                                                <small><strong>Response:</strong> <field name="response_time_rating"/>/5</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-2" t-if="record.priority.raw_value == 'high'">
                                    <span class="badge badge-danger">ðŸ”¥ High Priority</span>
                                </div>
                                <div class="mt-2">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge badge-pill badge-info">
                                        ðŸ“… <field name="submission_date" widget="date"/>
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <img t-att-src="kanban_image('res.users', 'avatar_128', record.assigned_to.raw_value)" t-att-title="record.assigned_to.value" t-att-alt="record.assigned_to.value" class="oe_kanban_avatar o_image_24_cover" t-if="record.assigned_to.raw_value"/>
                                    <field name="activity_state" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- TREE VIEW: Customer Feedback List -->
    <record id="view_portal_feedback_tree" model="ir.ui.view">
        <field name="name">portal.feedback.tree</field>
        <field name="model">portal.feedback</field>
        <field name="arch" type="xml">
            <tree string="Customer Feedback Management" decoration-danger="priority=='high'" decoration-warning="priority=='medium'" decoration-success="status=='responded'" decoration-muted="status=='closed'" multi_edit="1" sample="1">
                <header>
                    <button name="action_mark_reviewed" type="object" string="Mark Reviewed"/>
                    <button name="action_respond" type="object" string="Respond"/>
                    <button name="action_escalate" type="object" string="Escalate"/>
                    <button name="action_close" type="object" string="Close"/>
                </header>
                <field name="name" string="Feedback ID"/>
                <field name="submission_date" string="Date" widget="date"/>
                <field name="customer_id" string="Customer"/>
                <field name="feedback_type" string="Type"/>
                <field name="overall_rating" string="Overall Rating" widget="priority"/>
                <field name="service_quality_rating" string="Service" widget="float" avg="Avg Service"/>
                <field name="response_time_rating" string="Response" widget="float" avg="Avg Response"/>
                <field name="satisfaction_level" string="Satisfaction"/>
                <field name="priority" string="Priority" widget="badge" decoration-danger="priority=='high'" decoration-warning="priority=='medium'"/>
                <field name="assigned_to" string="Assigned To"/>
                <field name="status" string="Status" widget="badge" decoration-success="status=='responded'" decoration-info="status=='reviewed'" decoration-warning="status=='escalated'"/>
                <field name="activity_exception_decoration" widget="activity_exception"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW: Detailed Customer Feedback Management -->
    <record id="view_portal_feedback_form" model="ir.ui.view">
        <field name="name">portal.feedback.form</field>
        <field name="model">portal.feedback</field>
        <field name="arch" type="xml">
            <form string="Customer Feedback Management">
                <header>
                    <button name="action_mark_reviewed" string="Mark Reviewed" type="object" class="btn-primary" states="new"/>
                    <button name="action_respond" string="Respond" type="object" class="btn-success" states="reviewed"/>
                    <button name="action_escalate" string="Escalate" type="object" class="btn-warning" states="new,reviewed"/>
                    <button name="action_close" string="Close" type="object" class="btn-secondary" states="responded"/>
                    <button name="action_reopen" string="Reopen" type="object" states="closed"/>
                    <field name="status" widget="statusbar" statusbar_visible="new,reviewed,responded,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_customer_history" type="object" class="oe_stat_button" icon="fa-history">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="customer_feedback_count"/>
                                </span>
                                <span class="o_stat_text">Total Feedback</span>
                            </div>
                        </button>
                        <button name="action_view_related_tickets" type="object" class="oe_stat_button" icon="fa-ticket">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="related_ticket_count"/>
                                </span>
                                <span class="o_stat_text">Related Tickets</span>
                            </div>
                        </button>
                        <button name="action_view_improvement_actions" type="object" class="oe_stat_button" icon="fa-cogs">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="improvement_action_count"/>
                                </span>
                                <span class="o_stat_text">Improvements</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Feedback Reference"/>
                        </h1>
                        <div class="o_row">
                            <field name="submission_date" widget="datetime"/>
                            <label for="priority" string="Priority:"/>
                            <field name="priority" widget="priority"/>
                        </div>
                    </div>
                    
                    <group>
                        <group name="customer_info" string="Customer Information">
                            <field name="customer_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="customer_email"/>
                            <field name="customer_phone"/>
                            <field name="customer_segment"/>
                            <field name="customer_tier"/>
                            <field name="account_manager"/>
                        </group>
                        <group name="feedback_details" string="Feedback Details">
                            <field name="feedback_type"/>
                            <field name="feedback_category"/>
                            <field name="service_request_id" states="feedback_type=='service_issue'"/>
                            <field name="product_id" states="feedback_type=='product_feedback'"/>
                            <field name="assigned_to"/>
                            <field name="satisfaction_level"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="ratings" string="Detailed Ratings">
                            <field name="overall_rating" widget="priority"/>
                            <field name="service_quality_rating" widget="float"/>
                            <field name="response_time_rating" widget="float"/>
                            <field name="staff_professionalism_rating" widget="float"/>
                            <field name="communication_rating" widget="float"/>
                            <field name="value_for_money_rating" widget="float"/>
                        </group>
                        <group name="metrics" string="Satisfaction Metrics">
                            <field name="nps_score" widget="float"/>
                            <field name="csat_score" widget="percentage"/>
                            <field name="ces_score" widget="float"/>
                            <field name="likelihood_to_recommend" widget="percentage"/>
                            <field name="likelihood_to_return" widget="percentage"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Feedback Content" name="feedback_content">
                            <group>
                                <field name="feedback_subject" placeholder="Feedback Subject"/>
                                <field name="feedback_description" placeholder="Detailed feedback description..." widget="html"/>
                                <field name="improvement_suggestions" placeholder="Customer suggestions for improvement..." widget="html"/>
                                <field name="positive_aspects" placeholder="What did the customer like?" widget="html"/>
                                <field name="negative_aspects" placeholder="What needs improvement?" widget="html"/>
                            </group>
                        </page>
                        <page string="Response & Actions" name="response_actions">
                            <group>
                                <group string="Response Information">
                                    <field name="response_date" widget="datetime"/>
                                    <field name="response_time_hours" widget="float"/>
                                    <field name="responded_by"/>
                                    <field name="response_method"/>
                                </group>
                                <group string="Resolution Details">
                                    <field name="resolution_date" widget="datetime"/>
                                    <field name="resolution_time_hours" widget="float"/>
                                    <field name="resolved_by"/>
                                    <field name="resolution_category"/>
                                </group>
                            </group>
                            <separator string="Response Details"/>
                            <field name="response_description" placeholder="Response to customer..." widget="html"/>
                            <separator string="Internal Actions Taken"/>
                            <field name="internal_actions" placeholder="Internal actions and improvements implemented..." widget="html"/>
                        </page>
                        <page string="Follow-up" name="followup">
                            <group>
                                <group string="Follow-up Schedule">
                                    <field name="followup_required" widget="boolean_toggle"/>
                                    <field name="followup_date" widget="date" states="followup_required=True"/>
                                    <field name="followup_method" states="followup_required=True"/>
                                    <field name="followup_assigned_to" states="followup_required=True"/>
                                </group>
                                <group string="Escalation Information">
                                    <field name="escalated" widget="boolean_toggle"/>
                                    <field name="escalation_date" widget="datetime" states="escalated=True"/>
                                    <field name="escalated_to" states="escalated=True"/>
                                    <field name="escalation_reason" states="escalated=True"/>
                                </group>
                            </group>
                            <separator string="Follow-up Activities"/>
                            <field name="followup_activity_ids" mode="tree">
                                <tree string="Follow-up Activities" editable="bottom">
                                    <field name="activity_date" widget="date"/>
                                    <field name="activity_type"/>
                                    <field name="assigned_to"/>
                                    <field name="description"/>
                                    <field name="completed" widget="boolean_toggle"/>
                                    <field name="completion_date" widget="date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Analysis" name="analysis">
                            <group>
                                <group string="Feedback Analysis">
                                    <field name="sentiment_analysis"/>
                                    <field name="urgency_level"/>
                                    <field name="impact_assessment"/>
                                    <field name="root_cause_category"/>
                                </group>
                                <group string="Business Impact">
                                    <field name="revenue_impact" widget="monetary"/>
                                    <field name="retention_risk"/>
                                    <field name="improvement_opportunity"/>
                                    <field name="competitive_mention" widget="boolean_toggle"/>
                                </group>
                            </group>
                            <separator string="Keywords & Tags"/>
                            <field name="keyword_tags" widget="many2many_tags"/>
                            <separator string="Related Feedback Trends"/>
                            <field name="trend_analysis" placeholder="Analysis of similar feedback patterns..." widget="html"/>
                        </page>
                        <page string="Attachments" name="attachments">
                            <field name="attachment_ids" mode="kanban">
                                <kanban>
                                    <field name="name"/>
                                    <field name="mimetype"/>
                                    <field name="file_size"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_record_top">
                                                    <div class="o_kanban_record_headings">
                                                        <strong class="o_kanban_record_title">
                                                            <field name="name"/>
                                                        </strong>
                                                    </div>
                                                </div>
                                                <div class="o_kanban_record_body">
                                                    <field name="mimetype"/> | <field name="file_size" widget="data_size"/>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW: Advanced Customer Feedback Search -->
    <record id="view_portal_feedback_search" model="ir.ui.view">
        <field name="name">portal.feedback.search</field>
        <field name="model">portal.feedback</field>
        <field name="arch" type="xml">
            <search string="Search Customer Feedback">
                <field name="name" string="Feedback ID" filter_domain="[('name', 'ilike', self)]"/>
                <field name="customer_id" string="Customer"/>
                <field name="feedback_subject" string="Subject"/>
                <field name="assigned_to" string="Assigned To"/>
                <field name="feedback_type" string="Type"/>
                
                <filter string="My Feedback" name="my_feedback" domain="[('assigned_to', '=', uid)]"/>
                <filter string="Today" name="today" domain="[('submission_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time.min)), ('submission_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time.max))]"/>
                <filter string="This Week" name="week" domain="[('submission_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('submission_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                
                <separator/>
                <filter string="New" name="new" domain="[('status', '=', 'new')]"/>
                <filter string="Reviewed" name="reviewed" domain="[('status', '=', 'reviewed')]"/>
                <filter string="Responded" name="responded" domain="[('status', '=', 'responded')]"/>
                <filter string="Escalated" name="escalated" domain="[('status', '=', 'escalated')]"/>
                <filter string="Closed" name="closed" domain="[('status', '=', 'closed')]"/>
                
                <separator/>
                <filter string="High Priority" name="high_priority" domain="[('priority', '=', 'high')]"/>
                <filter string="Low Satisfaction" name="low_satisfaction" domain="[('satisfaction_level', 'in', ['very_dissatisfied', 'dissatisfied'])]"/>
                <filter string="High Ratings" name="high_ratings" domain="[('overall_rating', '&gt;=', 4)]"/>
                <filter string="Complaints" name="complaints" domain="[('feedback_type', '=', 'complaint')]"/>
                <filter string="Compliments" name="compliments" domain="[('feedback_type', '=', 'compliment')]"/>
                
                <separator/>
                <filter string="Follow-up Required" name="followup_required" domain="[('followup_required', '=', True)]"/>
                <filter string="Escalated Cases" name="escalated_cases" domain="[('escalated', '=', True)]"/>
                <filter string="Overdue Response" name="overdue_response" domain="[('status', '=', 'new'), ('submission_date', '&lt;', (datetime.datetime.now() - datetime.timedelta(hours=24)).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Assigned To" name="group_assigned" context="{'group_by': 'assigned_to'}"/>
                    <filter string="Feedback Type" name="group_type" context="{'group_by': 'feedback_type'}"/>
                    <filter string="Satisfaction Level" name="group_satisfaction" context="{'group_by': 'satisfaction_level'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Submission Date" name="group_date" context="{'group_by': 'submission_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- CALENDAR VIEW: Feedback Timeline -->
    <record id="view_portal_feedback_calendar" model="ir.ui.view">
        <field name="name">portal.feedback.calendar</field>
        <field name="model">portal.feedback</field>
        <field name="arch" type="xml">
            <calendar string="Feedback Timeline" date_start="submission_date" color="assigned_to" quick_add="False" mode="month">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="status"/>
                <field name="priority"/>
                <field name="overall_rating"/>
            </calendar>
        </field>
    </record>

    <!-- GRAPH VIEW: Feedback Analytics -->
    <record id="view_portal_feedback_graph" model="ir.ui.view">
        <field name="name">portal.feedback.graph</field>
        <field name="model">portal.feedback</field>
        <field name="arch" type="xml">
            <graph string="Feedback Analytics" type="bar" sample="1">
                <field name="submission_date" type="row" interval="week"/>
                <field name="satisfaction_level" type="col"/>
                <field name="overall_rating" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- PIVOT VIEW: Feedback Performance Analysis -->
    <record id="view_portal_feedback_pivot" model="ir.ui.view">
        <field name="name">portal.feedback.pivot</field>
        <field name="model">portal.feedback</field>
        <field name="arch" type="xml">
            <pivot string="Feedback Analysis" sample="1">
                <field name="feedback_type" type="row"/>
                <field name="status" type="col"/>
                <field name="overall_rating" type="measure"/>
                <field name="csat_score" type="measure"/>
                <field name="nps_score" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- ACTION: Customer Feedback Management -->
    <record id="action_portal_feedback" model="ir.actions.act_window">
        <field name="name">ðŸ“Š Customer Feedback Management</field>
        <field name="res_model">portal.feedback</field>
        <field name="view_mode">kanban,tree,form,calendar,graph,pivot</field>
        <field name="search_view_id" ref="view_portal_feedback_search"/>
        <field name="context">{
            'search_default_my_feedback': 1,
            'search_default_new': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ðŸ“Š No customer feedback yet!
            </p>
            <p>
                Manage comprehensive customer feedback with advanced analytics, satisfaction tracking, and automated response workflows. 
                Monitor customer satisfaction metrics including NPS, CSAT, and CES scores with detailed performance analysis.
            </p>
            <p>
                <strong>Key Features:</strong><br/>
                â€¢ Multi-dimensional satisfaction rating system<br/>
                â€¢ Automated sentiment analysis and categorization<br/>
                â€¢ Follow-up scheduling and escalation management<br/>
                â€¢ Customer satisfaction metrics (NPS, CSAT, CES)<br/>
                â€¢ Trend analysis and improvement tracking<br/>
                â€¢ Response time monitoring and SLA management
            </p>
        </field>
    </record>
</odoo>
