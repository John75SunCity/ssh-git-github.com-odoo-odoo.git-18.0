<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Minimal action - let Odoo auto-generate views for portal.feedback -->
    <record id="action_portal_feedback" model="ir.actions.act_window">
        <field name="name">Customer Feedback</field>
        <field name="res_model">portal.feedback</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first record
            </p>
            <p>
                Collect and analyze customer feedback for service improvement.
            </p>
        </field>
    </record>
</odoo>
