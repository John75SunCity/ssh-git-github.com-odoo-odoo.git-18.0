<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
<!-- Tree view for retrieval.metric -->
    <record id="retrieval_metric_view_tree" model="ir.ui.view">
        <field name="name">retrieval.metric.view.tree</field>
        <field name="model">retrieval.metric</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for retrieval.metric -->
    <record id="retrieval_metric_view_form" model="ir.ui.view">
        <field name="name">retrieval.metric.view.form</field>
        <field name="model">retrieval.metric</field>
        <field name="arch" type="xml">
            <form string="Retrieval.Metric">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for retrieval.metric -->
    <record id="retrieval_metric_view_search" model="ir.ui.view">
        <field name="name">retrieval.metric.view.search</field>
        <field name="model">retrieval.metric</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for retrieval.metric -->
    <record id="action_retrieval_metric" model="ir.actions.act_window">
        <field name="name">Retrieval.Metric</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">retrieval.metric</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new retrieval.metric.
            </p>
        </field>
    </record>
</data>

</odoo>
