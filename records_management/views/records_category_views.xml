<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="records_category_view_list" model="ir.ui.view">
        <field name="name">records.category.view.list</field>
        <field name="model">records.category</field>
        <field name="arch" type="xml">
            <list string="Records Categories">
                <field name="name" />
                <field name="complete_name" />
                <field name="parent_id" />
                <field name="document_count" />
            </list>
        </field>
    </record>
    <record id="records_category_view_form" model="ir.ui.view">
        <field name="name">records.category.view.form</field>
        <field name="model">records.category</field>
        <field name="arch" type="xml">
            <form string="Records Category">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="parent_id" />
                        <field name="complete_name" readonly="1" />
                    </group>
                    <notebook>
                        <page string="Document Types">
                            <field name="document_type_ids">
                                <list string="Document Types" editable="bottom">
                                    <field name="name" />
                                    <field name="code" />
                                    <field name="state" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="records_category_view_search" model="ir.ui.view">
        <field name="name">records.category.view.search</field>
        <field name="model">records.category</field>
        <field name="arch" type="xml">
            <search string="Records Categories">
                <field name="name" />
                <field name="parent_id" />
                <filter string="Top Level Categories" name="top_level" domain="[('parent_id', '=', False)]" />
                <group expand="0" string="Group By">
                    <filter string="Parent Category" name="group_parent" context="{'group_by': 'parent_id'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="action_records_category" model="ir.actions.act_window">
        <!-- OPTIMIZATION: Model records.category has state field - consider using default search filters -->
        <field name="name">Categories</field>
        <field name="res_model">records.category</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),             (0, 0, {'view_mode': 'list'}),             (0, 0, {'view_mode': 'form', 'view_id': ref('records_category_view_form')})]" />
        <field name="search_view_id" ref="records_category_view_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                <i class="fa fa-folder-open"/> No container categories yet!
            </p>
            <p>
                <b>üìÅ What are Categories?</b><br/>
                Categories organize your containers hierarchically for easier management and reporting.<br/>
                Think of them as "container types" or "storage groups."
            </p>
            <p>
                <b>üìã To create a category:</b>
            </p>
            <ol>
                <li>Click <b>New</b> button above</li>
                <li>Enter <b>Category Name</b> (e.g., "Standard Boxes", "Legal Files", "Medical Records")</li>
                <li>Add a <b>Description</b> (optional but recommended)</li>
                <li>Choose <b>Parent Category</b> (optional - for hierarchies):<br/>
                    <small>Example hierarchy: Legal ‚Üí Litigation ‚Üí Case Files</small>
                </li>
                <li>Set <b>Color</b> (for visual identification in kanban view)</li>
                <li>Click <b>Save</b></li>
            </ol>
            <p>
                <b>üì¶ Common Category Examples:</b><br/>
                ‚Ä¢ <b>By Industry:</b> Legal, Medical, Financial, Government, Retail<br/>
                ‚Ä¢ <b>By Type:</b> Active Files, Archive, Permanent, Temporary<br/>
                ‚Ä¢ <b>By Size:</b> Standard Boxes, Oversize, Document Boxes, File Boxes<br/>
                ‚Ä¢ <b>By Security:</b> Public, Confidential, Highly Confidential<br/>
                ‚Ä¢ <b>By Department:</b> HR, Accounting, Operations, Sales
            </p>
            <p>
                <b>üí° Quick Tips:</b><br/>
                ‚Ä¢ Use categories to <b>group by type</b> in list views<br/>
                ‚Ä¢ Create <b>hierarchies</b> for complex organizational needs<br/>
                ‚Ä¢ Assign categories to <b>document types</b> for auto-classification<br/>
                ‚Ä¢ Use categories in <b>filters</b> and <b>reports</b> for analysis
            </p>
        </field>
    </record>

    <!-- Categories moved to Configuration > Master Data -->
    <menuitem id="menu_records_category_root" name="Categories" parent="records_management.menu_master_data" action="action_records_category" sequence="40" />

    
    </data>
</odoo>
