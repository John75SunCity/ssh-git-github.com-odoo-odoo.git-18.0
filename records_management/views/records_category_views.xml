<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="records_category_view_tree" model="ir.ui.view">
            <field name="name">records.category.view.tree</field>
            <field name="model">records.category</field>
            <field name="arch" type="xml">
                <list string="Records Categories">
                    <field name="name"/>
                    <field name="complete_name"/>
                    <field name="parent_id"/>
                    <field name="document_count"/>
                </list>
            </field>
        </record>

        <record id="records_category_view_form" model="ir.ui.view">
            <field name="name">records.category.view.form</field>
            <field name="model">records.category</field>
            <field name="arch" type="xml">
                <form string="Records Category">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                            <field name="complete_name" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Document Types">
                                <field name="document_type_ids">
                                    <list string="Document Types">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="records_category_view_search" model="ir.ui.view">
            <field name="name">records.category.view.search</field>
            <field name="model">records.category</field>
            <field name="arch" type="xml">
                <search string="Records Categories">
                    <field name="name"/>
                    <field name="parent_id"/>
                </search>
            </field>
        </record>

        <menuitem id="menu_records_category_root" name="Categories" parent="records_management.menu_records_management_root" sequence="30"/>
        <act_window id="action_records_category" name="Categories" res_model="records.category" view_mode="list,form" menu_id="menu_records_category_root"/>
    </data>
</odoo>
