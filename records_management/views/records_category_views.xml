<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="view_records_category_tree" model="ir.ui.view">
        <field name="name">records.category.tree</field>
        <field name="model">records.category</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Records Categories">
                <field name="name"/>
                <field name="complete_name"/>
                <field name="parent_id"/>
                <field name="document_count"/>
            </tree>
        </field>
    </record>

    <record id="view_records_category_form" model="ir.ui.view">
        <field name="name">records.category.form</field>
        <field name="model">records.category</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <form string="Records Category">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="parent_id"/>
                        <field name="complete_name" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Document Types">
                            <field name="document_type_ids">
                                <tree string="Document Types">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_records_category_search" model="ir.ui.view">
        <field name="name">records.category.search</field>
        <field name="model">records.category</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Records Categories">
                <field name="name"/>
                <field name="parent_id"/>
            </search>
        </field>
    </record>

    <menuitem id="menu_records_category_root" name="Categories" parent="records_management.menu_records_management_root" sequence="30"/>
    <act_window id="action_records_category" name="Categories" res_model="records.category" view_mode="tree,form" menu_id="menu_records_category_root"/>
</data>
</odoo>
