<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="customer_inventory_line_view_tree" model="ir.ui.view">
            <field name="name">customer.inventory.line.view.tree</field>
            <field name="model">customer.inventory.line</field>
            <field name="type">list</field>
        <field name="arch" type="xml">
                <tree string="Customer Inventory Line">
                    container_id
                    location_id
                    file_count
                    expected_file_count
                    previous_file_count
                    verified
                    verification_date
                    verified_by_id
                    has_variance
                    variance_amount
                    variance_percentage
                </tree>
            </field>
        </record>

        <record id="customer_inventory_line_view_form" model="ir.ui.view">
            <field name="name">customer.inventory.line.view.form</field>
            <field name="model">customer.inventory.line</field>
            <field name="type">form</field>
        <field name="arch" type="xml">
                <form string="Customer Inventory Line">
                    <sheet>
                        <group>
                            inventory_id
                            container_id
                            location_id
                            file_count
                            expected_file_count
                            previous_file_count
                            verified
                            verification_date
                            verified_by_id
                            notes
                            has_variance
                            variance_amount
                            variance_percentage
                            variance_reason
                            variance_notes
                            container_type_id
                            department_id
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_customer_inventory_line" model="ir.actions.act_window">
            <field name="name">Customer Inventory Line</field>
            <field name="res_model">customer.inventory.line</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>
