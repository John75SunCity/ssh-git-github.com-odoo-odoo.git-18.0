<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_work_order_dashboard_all" model="ir.actions.client">
            <field name="name">Work Order Dashboard</field>
            <field name="tag">work_order_dashboard</field>
            <field name="target">current</field>
            <field name="params" eval="{}" />
        </record>
        <record id="action_dashboard_records_retrieval" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model records.retrieval.order has state field - consider using default search filters -->
            <field name="name">Records Retrieval</field>
            <field name="res_model">records.retrieval.order</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_in_progress': 1}</field>
        </record>
        <record id="action_dashboard_container_access" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model container.access.work.order has state field - consider using default search filters -->
            <field name="name">Container Access</field>
            <field name="res_model">container.access.work.order</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_in_progress': 1}</field>
        </record>
        <record id="action_dashboard_container_destruction" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model container.destruction.work.order has state field - consider using default search filters -->
            <field name="name">Container Destruction</field>
            <field name="res_model">container.destruction.work.order</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_in_progress': 1}</field>
        </record>
        <record id="action_dashboard_shredding" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model work.order.shredding has state field - consider using default search filters -->
            <field name="name">Shredding Services</field>
            <field name="res_model">work.order.shredding</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_in_progress': 1}</field>
        </record>
        <record id="work_order_dashboard_view_tree" model="ir.ui.view">
            <field name="name">work.order.dashboard.view.tree</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <list string="All Work Orders" create="false" edit="false" decoration-info="stage_id.name=='Draft'" decoration-warning="stage_id.name=='In Progress'" decoration-success="stage_id.name=='Completed'">
                    <field name="name" string="Work Order" />
                    <field name="project_id" string="Type" />
                    <field name="partner_id" string="Customer" />
                    <field name="user_ids" string="Assigned To" widget="many2many_tags" />
                    <field name="stage_id" string="Status" widget="badge" />
                    <field name="date_deadline" string="Due Date" />
                    <field name="priority" widget="priority" />
                    <field name="company_id" groups="base.group_multi_company" />
                </list>
            </field>
        </record>
        <record id="action_all_work_orders_unified" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model project.task has state field - consider using default search filters -->
            <field name="name">All Work Orders</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="view_id" ref="work_order_dashboard_view_tree" />
            <field name="domain">[('project_id.name', 'ilike', 'work order')]</field>
            <field name="context">{'search_default_open': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-tasks"/> Create your first work order
                </p>
                <p><b>‚ö†Ô∏è Prerequisites:</b></p>
                <ul>
                    <li>‚úì <b>Customer configured</b> - Go to: <i>Contacts</i></li>
                    <li>‚úì <b>Work order types set up</b> - Retrieval, shredding, access, destruction</li>
                    <li>‚úì <b>FSM integration active</b> - Field service management enabled</li>
                    <li>‚úì <b>Technicians assigned</b> - Users with work order permissions</li>
                </ul>
                <p><b>üìã To create a work order:</b></p>
                <ol>
                    <li>Click <b>New</b> to open the work order form</li>
                    <li>Enter <b>Work Order Name</b> (e.g., "Smith Corp - Shredding Service")</li>
                    <li>Select <b>Type</b> (Project):
                        <ul>
                            <li><b>Records Retrieval:</b> Fetching containers/documents</li>
                            <li><b>Shredding Services:</b> On-site or facility destruction</li>
                            <li><b>Container Access:</b> Customer viewing/inspection</li>
                            <li><b>Container Destruction:</b> Permanent disposal</li>
                        </ul>
                    </li>
                    <li>Select the <b>Customer</b> (partner)</li>
                    <li>Assign <b>Technicians</b> (users) using many2many tags</li>
                    <li>Set <b>Priority</b>:
                        <ul>
                            <li><b>Low:</b> Routine, no urgency</li>
                            <li><b>Normal:</b> Standard service level</li>
                            <li><b>High:</b> Expedited service</li>
                            <li><b>Urgent:</b> Same-day required</li>
                        </ul>
                    </li>
                    <li>Set <b>Due Date</b> (deadline for completion)</li>
                    <li>Track through <b>Status</b> (stage):
                        <ul>
                            <li><b>Draft:</b> Work order being planned</li>
                            <li><b>In Progress:</b> Technicians actively working</li>
                            <li><b>Completed:</b> Work finished and verified</li>
                        </ul>
                    </li>
                    <li>Select <b>Company</b> (multi-company setups)</li>
                    <li>Click <b>Save</b> to create the work order</li>
                </ol>
                <p><b>üöÄ Key Features:</b><br/>
                ‚Ä¢ <b>Unified dashboard:</b> All work order types in one view<br/>
                ‚Ä¢ <b>FSM integration:</b> Field service management synchronization<br/>
                ‚Ä¢ <b>Multi-assignment:</b> Multiple technicians per order<br/>
                ‚Ä¢ <b>Priority system:</b> Low/normal/high/urgent classification<br/>
                ‚Ä¢ <b>Due date tracking:</b> Deadline management and alerts<br/>
                ‚Ä¢ <b>Status badges:</b> Color-coded stage visualization<br/>
                ‚Ä¢ <b>Kanban view:</b> Drag-drop workflow management<br/>
                ‚Ä¢ <b>Search filters:</b> Find by type, customer, status, or assignee<br/>
                </p>
                <p><b>üí° Pro Tips:</b><br/>
                ‚Ä¢ Use Kanban view for visual workflow management<br/>
                ‚Ä¢ Set priority to "Urgent" for same-day service<br/>
                ‚Ä¢ Filter by "In Progress" to see active work orders<br/>
                ‚Ä¢ Assign multiple technicians for complex jobs<br/>
                ‚Ä¢ Use color decorations: Blue (Draft), Orange (In Progress), Green (Completed)<br/>
                ‚Ä¢ Group by status or customer for better organization<br/>
                </p>
            </field>
        </record>
        <record id="action_quick_create_records_retrieval" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model records.retrieval.order has state field - consider using default search filters -->
            <field name="name">New Records Retrieval</field>
            <field name="res_model">records.retrieval.order</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_state': 'draft'}</field>
        </record>
        <record id="action_quick_create_container_access" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model container.access.work.order has state field - consider using default search filters -->
            <field name="name">New Container Access</field>
            <field name="res_model">container.access.work.order</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_state': 'draft'}</field>
        </record>
        <record id="action_quick_create_container_destruction" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model container.destruction.work.order has state field - consider using default search filters -->
            <field name="name">New Container Destruction</field>
            <field name="res_model">container.destruction.work.order</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_state': 'draft'}</field>
        </record>
        <record id="action_work_order_performance" model="ir.actions.act_window">
            <field name="name">All Work Orders</field>
            <field name="res_model">unified.work.order</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record id="action_overdue_work_orders" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model project.task has state field - consider using default search filters -->
            <field name="name">Overdue Work Orders</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('stage_id.name', '!=', 'Completed'), ('project_id.name', 'ilike', 'work order')]</field>
            <field name="context">{'search_default_group_project': 1}</field>
        </record>
        <record id="action_todays_work_orders" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model project.task has state field - consider using default search filters -->
            <field name="name">Today's Work Orders</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('project_id.name', 'ilike', 'work order')]</field>
            <field name="context">{'search_default_open': 1}</field>
        </record>
    </data>
</odoo>
