<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Partner Form Extension for Rate Management -->
        <record id="res_partner_view_form_rate_management" model="ir.ui.view">
            <field name="name">res.partner.view.form.inherit.rate.management</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="%(action_partner_negotiated_rates)d" type="action" class="oe_stat_button" icon="fa-handshake-o" context="{'default_partner_id': active_id}" groups="records_management.group_records_manager">
                        <field name="negotiated_rates_count" widget="statinfo" string="Negotiated Rates"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
