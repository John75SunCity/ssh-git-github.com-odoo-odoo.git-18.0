<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Website / Portal Accessibility Overrides
             Adds dynamic lang attribute to <html> in website layout.
        -->
        <template id="website_layout_lang_inherit" inherit_id="website.layout" name="website.layout.inherit.lang">
            <xpath expr="//html" position="attributes">
                <attribute name="t-att-lang">(env.context.get('lang') or 'en_US').replace('_','-')</attribute>
            </xpath>
            <xpath expr="//head" position="inside">
                <t t-set="_rm_theme_color" t-value="(env['rm.module.configurator'].sudo().get_config_parameter('rm_theme_color') or '#875A7B')"/>
                <meta t-if="not head.xpath(&quot;meta[@name='theme-color']&quot;)" name="theme-color" t-att-content="_rm_theme_color"/>
                <meta name="color-scheme" content="light dark"/>
            </xpath>
        </template>
    </data>
</odoo>
