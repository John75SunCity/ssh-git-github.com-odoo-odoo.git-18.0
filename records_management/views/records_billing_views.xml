<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="records_billing_view_tree" model="ir.ui.view">
            <field name="name">records.billing.view.tree</field>
            <field name="model">records.billing</field>
            <field name="arch" type="xml">
                <list string="Billing Records" default_order="date desc">
                    <field name="name" />
                    <field name="date" />
                    <field name="partner_id" />
                    <field name="amount_total" />
                    <field name="currency_id" />
                    <field name="state" />
                    <field name="company_id" groups="base.group_multi_company" />
                </list>
            </field>
        </record>
        <record id="records_billing_view_form" model="ir.ui.view">
            <field name="name">records.billing.view.form</field>
            <field name="model">records.billing</field>
            <field name="arch" type="xml">
                <form string="Billing Record">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary" invisible="state != 'draft'" />
                        <button name="action_create_invoice" string="Create Invoice" type="object" class="btn-secondary" invisible="state not in ['confirmed', 'billed']" />
                        <button name="action_cancel" string="Cancel" type="object" class="btn-danger" invisible="state in ['paid', 'cancelled']" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,billed,paid" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Billing Reference" />
                            </h1>
                        </div>
                        <group>
                            <group string="Basic Information">
                                <field name="date" required="1" />
                                <field name="partner_id" required="1" />
                                <field name="billing_config_id" required="1" />
                                <field name="company_id" groups="base.group_multi_company" />
                            </group>
                            <group string="Financial Information">
                                <field name="currency_id" required="1" />
                                <field name="amount_untaxed" readonly="1" />
                                <field name="amount_tax" readonly="1" />
                                <field name="amount_total" readonly="1" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Billing Lines">
                                <field name="billing_line_ids">
                                    <list>
                                        <field name="name" />
                                        <field name="amount_total" />
                                        <field name="currency_id" />
                                        <field name="billing_profile_id" />
                                    </list>
                                </field>
                            </page>
                            <page string="Invoice">
                                <group>
                                    <field name="invoice_id" readonly="1" />
                                </group>
                            </page>
                        </notebook>
                        <field name="notes" />
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <record id="records_billing_view_search" model="ir.ui.view">
            <field name="name">records.billing.view.search</field>
            <field name="model">records.billing</field>
            <field name="arch" type="xml">
                <search string="Search Billing Records">
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="date" />
                    <field name="billing_config_id" />
                    <field name="state" />
                    <field name="company_id" groups="base.group_multi_company" />
                    <group expand="0" string="Group By">
                        <filter name="group_by_partner" string="Customer" context="{'group_by': 'partner_id'}" />
                        <filter name="group_by_state" string="Status" context="{'group_by': 'state'}" />
                        <filter name="group_by_date" string="Date" context="{'group_by': 'date'}" />
                        <filter name="group_by_config" string="Billing Config" context="{'group_by': 'billing_config_id'}" />
                    </group>
                    <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]" />
                    <filter name="filter_confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]" />
                    <filter name="filter_billed" string="Billed" domain="[('state', '=', 'billed')]" />
                    <filter name="filter_paid" string="Paid" domain="[('state', '=', 'paid')]" />
                    <filter name="filter_cancelled" string="Cancelled" domain="[('state', '=', 'cancelled')]" />
                </search>
            </field>
        </record>
        <record id="records_billing_action" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model records.billing has state field - consider using default search filters -->
            <field name="name">Billing Records</field>
            <field name="res_model">records.billing</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="records_billing_view_tree" />
            <field name="search_view_id" ref="records_billing_view_search" />
            <field name="context">{'search_default_filter_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-money"/> No billing records yet!
                </p>
                <p>
                    <b>‚ö†Ô∏è PREREQUISITES - Configure these first:</b><br/>
                    ‚Ä¢ <b>Customers:</b> Contacts ‚Üí Customers (mark "Is a Records Management Customer")<br/>
                    ‚Ä¢ <b>Base Rates:</b> Configuration ‚Üí Billing ‚Üí Base Rates<br/>
                    ‚Ä¢ <b>Billing Config:</b> Configuration ‚Üí Billing ‚Üí Billing Config<br/>
                    ‚Ä¢ <b>Containers/Services:</b> Must have active containers or services to bill
                </p>
                <p>
                    <b>üìã To create a billing record (invoice):</b>
                </p>
                <ol>
                    <li>Click <b>New</b> button above</li>
                    <li>Select <b>Customer</b> (must have billing config setup)</li>
                    <li>Choose <b>Billing Period</b> (monthly, quarterly, etc.)</li>
                    <li>Set <b>Billing Date</b> (invoice date)</li>
                    <li><b>Add Billing Lines:</b>
                        <ul>
                            <li>Storage charges (container count √ó rate)</li>
                            <li>Retrieval fees (per request)</li>
                            <li>Destruction services</li>
                            <li>Special services (pickup, delivery)</li>
                        </ul>
                    </li>
                    <li>Review <b>Total Amount</b> (auto-calculated)</li>
                    <li>Click <b>Confirm</b> to lock billing record</li>
                    <li>Click <b>Create Invoice</b> to generate accounting invoice</li>
                </ol>
                <p>
                    <b>üîÑ Billing Workflow:</b><br/>
                    <b>Draft</b> ‚Üí Add/edit lines ‚Üí <b>Confirm</b> ‚Üí Generate invoice ‚Üí <b>Invoiced</b> ‚Üí Collect payment ‚Üí <b>Paid</b>
                </p>
                <p>
                    <b>üí° Quick Tips:</b><br/>
                    ‚Ä¢ Use <b>Filters</b> to find draft/unpaid invoices<br/>
                    ‚Ä¢ <b>Group by Customer</b> to see all customer billing<br/>
                    ‚Ä¢ Set up <b>Automatic Billing</b> in customer billing config<br/>
                    ‚Ä¢ Use <b>Billing Run</b> wizard to generate multiple invoices at once
                </p>
            </field>
        </record>
    
        <menuitem id="records_billing_menu" name="Billing Records" parent="records_management.menu_records_billing" action="records_billing_action" sequence="10" />
    
    
    </data>
</odoo>
