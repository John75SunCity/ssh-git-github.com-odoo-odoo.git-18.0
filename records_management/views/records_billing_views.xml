<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for records.billing -->
    <record id="view_records_billing_tree" model="ir.ui.view">
        <field name="name">records.billing.tree</field>
        <field name="model">records.billing</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for records.billing -->
    <record id="view_records_billing_form" model="ir.ui.view">
        <field name="name">records.billing.form</field>
        <field name="model">records.billing</field>
        <field name="arch" type="xml">
            <form string="Records Billing">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for records.billing -->
    <record id="view_records_billing_search" model="ir.ui.view">
        <field name="name">records.billing.search</field>
        <field name="model">records.billing</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action records.billing -->
    <record id="action_records_billing" model="ir.actions.act_window">
        <field name="name">Records Billing</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.billing</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records Billing.
            </p>
        </field>
    </record>

</odoo>
