<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for base.rate -->
    <record id="container_content_view_tree" model="ir.ui.view">
        <field name="name">container.content.view.tree</field>
        <field name="model">container.content</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for base.rate -->
    <record id="container_content_view_form" model="ir.ui.view">
        <field name="name">container.content.view.form</field>
        <field name="model">container.content</field>
        <field name="arch" type="xml">
            <form string="Container Content">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for base.rate -->
    <record id="container_content_view_search" model="ir.ui.view">
        <field name="name">container.content.view.search</field>
        <field name="model">container.content</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree view for Action -->
    <record id="action_container_content" model="ir.actions.act_window">
        <field name="name">Container Contents</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">container.content</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Container Content.
            </p>
        </field>
    </record>

</odoo>
