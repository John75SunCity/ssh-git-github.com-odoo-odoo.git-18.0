<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Document Retrieval Metrics Views -->
    
    <!-- Tree View -->
    <record id="document_retrieval_metrics_view_tree" model="ir.ui.view">
        <field name="name">document.retrieval.metrics.view.tree</field>
        <field name="model">document.retrieval.metrics</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <list string="Retrieval Metrics" default_order="retrieval_date desc">
                <field name="name"/>
                <field name="metric_type"/>
                <field name="metric_value"/>
                <field name="metric_unit"/>
                <field name="performance_rating"/>
                <field name="quality_score"/>
                <field name="retrieval_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="document_retrieval_metrics_view_form" model="ir.ui.view">
        <field name="name">document.retrieval.metrics.view.form</field>
        <field name="model">document.retrieval.metrics</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Retrieval Metrics">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="work_order_id"/>
                            <field name="metric_type"/>
                            <field name="metric_value"/>
                            <field name="metric_unit"/>
                        </group>
                        <group>
                            <field name="retrieval_date"/>
                            <field name="performance_rating"/>
                            <field name="quality_score"/>
                            <field name="accuracy_percentage"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Performance">
                            <group>
                                <group>
                                    <field name="target_value"/>
                                    <field name="variance"/>
                                </group>
                                <group>
                                    <field name="start_time"/>
                                    <field name="end_time"/>
                                </group>
                            </group>
                        </page>
                        <page string="Context">
                            <group>
                                <field name="employee_id"/>
                                <field name="container_id"/>
                                <field name="location_id"/>
                                <field name="complexity_level"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="notes" nolabel="1"/>
                            </group>
                            <group>
                                <field name="improvement_suggestions" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="document_retrieval_metrics_view_search" model="ir.ui.view">
        <field name="name">document.retrieval.metrics.view.search</field>
        <field name="model">document.retrieval.metrics</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Retrieval Metrics">
                <field name="name"/>
                <field name="work_order_id"/>
                <field name="employee_id"/>
                <field name="metric_type"/>
                <separator/>
                <filter name="filter_excellent" string="Excellent Performance" domain="[('performance_rating', '=', 'excellent')]"/>
                <filter name="filter_poor" string="Poor Performance" domain="[('performance_rating', 'in', ['poor', 'unacceptable'])]"/>
                <filter name="filter_today" string="Today" domain="[('retrieval_date', '=', today)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_metric_type" string="Metric Type" context="{'group_by': 'metric_type'}"/>
                    <filter name="group_performance" string="Performance" context="{'group_by': 'performance_rating'}"/>
                    <filter name="group_employee" string="Employee" context="{'group_by': 'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_document_retrieval_metrics" model="ir.actions.act_window">
        <field name="name">Document Retrieval Metrics</field>
        <field name="res_model">document.retrieval.metrics</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No retrieval metrics found!
            </p>
            <p>
                Metrics track performance of document retrieval operations.
            </p>
        </field>
    </record>
</data>
</odoo>
