<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Retrieval Metrics Views -->

<!-- List View -->
    <record id="document_retrieval_metrics_view_tree" model="ir.ui.view">
        <field name="name">retrieval.metric.view.tree</field>
        <field name="model">retrieval.metric</field>
        <field name="arch" type="xml">
        <list string="Retrieval Metrics" default_order="metric_date desc">
        <field name="name"/>
        <field name="metric_type"/>
        <field name="metric_value"/>
        <field name="metric_unit"/>
        <field name="performance_rating"/>
        <field name="metric_date"/>
        </list>
    </field>
    </record>

<!-- Form View -->
    <record id="document_retrieval_metrics_view_form" model="ir.ui.view">
        <field name="name">retrieval.metric.view.form</field>
        <field name="model">retrieval.metric</field>
        <field name="arch" type="xml">
        <form string="Retrieval Metrics">
            <sheet>
                <group>
                    <group>
        <field name="name"/>
        <field name="retrieval_line_id"/>
        <field name="metric_type"/>
        <field name="metric_value"/>
        <field name="metric_unit"/>
                    </group>
                    <group>
        <field name="metric_date"/>
        <field name="performance_rating"/>
        <field name="state"/>
        <field name="employee_id"/>
                    </group>
                </group>
                <notebook>
                    <page string="Performance">
                        <group>
                            <group>
        <field name="target_value"/>
        <field name="variance"/>
        <field name="variance_percentage"/>
                            </group>
                            <group>
        <field name="start_time"/>
        <field name="end_time"/>
        <field name="duration"/>
                            </group>
                        </group>
                    </page>
                    <page string="Notes">
                        <group>
        <field name="notes" nolabel="1"/>
                        </group>
                        <group>
        <field name="improvement_suggestions" nolabel="1"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
        <field name="message_follower_ids"/>
        <field name="activity_ids"/>
        <field name="message_ids"/>
            </div>
        </form>
    </field>
    </record>

<!-- Search View -->
    <record id="document_retrieval_metrics_view_search" model="ir.ui.view">
        <field name="name">retrieval.metric.view.search</field>
        <field name="model">retrieval.metric</field>
        <field name="arch" type="xml">
        <search string="Search Retrieval Metrics">
        <field name="name"/>
        <field name="retrieval_line_id"/>
        <field name="employee_id"/>
        <field name="metric_type"/>
            <separator/>
            <filter name="filter_excellent" string="Excellent Performance" domain="[('performance_rating', '=', 'excellent')]"/>
            <filter name="filter_poor" string="Poor Performance" domain="[('performance_rating', 'in', ['poor', 'unacceptable'])]"/>
            <filter name="filter_today" string="Today" domain="[('metric_date', '=', today)]"/>
            <separator/>
            <group expand="0" string="Group By">
                <filter name="group_metric_type" string="Metric Type" context="{'group_by': 'metric_type'}"/>
                <filter name="group_performance" string="Performance" context="{'group_by': 'performance_rating'}"/>
                <filter name="group_employee" string="Employee" context="{'group_by': 'employee_id'}"/>
            </group>
        </search>
    </field>
    </record>

<!-- Action -->
    <record id="action_document_retrieval_metrics" model="ir.actions.act_window">
        <field name="name">Retrieval Metrics</field>
        <field name="res_model">retrieval.metric</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            No retrieval metrics found!
        </p>
        <p>
            Metrics track performance of document retrieval operations.
        </p>
    </field>
    </record>
    </data>
</odoo>
