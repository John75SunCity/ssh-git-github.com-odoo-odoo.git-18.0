<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Root + primary level menus loaded early to satisfy parent references in subsequent view files -->

        <!-- Default dashboard action for Records Management root menu -->
        <record id="action_records_management_dashboard" model="ir.actions.act_window">
            <field name="name">Records Management Dashboard</field>
            <field name="res_model">records.container</field>
            <field name="view_mode">list,form</field>
            <field name="context">{
                'search_default_stored': 1,
                'search_default_active': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Welcome to Records Management!
                </p>
                <p>
                    <b>Enterprise Container Management System:</b><br/>
                    • Manage storage containers and documents<br/>
                    • Track pickup requests and shredding services<br/>
                    • Monitor NAID compliance and audit logs<br/>
                    • Generate reports and analytics<br/>
                    • Configure billing and customer portal
                </p>
            </field>
        </record>

        <menuitem id="menu_records_management_root" name="Records Management" sequence="50" web_icon="records_management,static/description/icon.png" action="action_records_management_dashboard"/>
        
        <!-- 5 Main Menus -->
        <menuitem id="menu_records_operations" name="Operations" parent="menu_records_management_root" sequence="10" groups="records_management.group_records_user"/>
        <menuitem id="menu_records_inventory" name="Inventory" parent="menu_records_management_root" sequence="20" groups="records_management.group_records_user"/>
        <menuitem id="menu_records_billing" name="Billing &amp; Finance" parent="menu_records_management_root" sequence="30" groups="records_management.group_records_manager"/>
        <menuitem id="menu_records_compliance_reports" name="Compliance &amp; Reports" parent="menu_records_management_root" sequence="40" groups="records_management.group_records_user"/>
        <menuitem id="menu_records_configuration" name="Configuration" parent="menu_records_management_root" sequence="50" groups="records_management.group_records_manager,base.group_system"/>
        
        <!-- Secondary parent menus (folders) - must load EARLY so child menus can reference them -->
        <menuitem id="menu_shredding_operations" name="Shredding Operations" parent="menu_records_operations" sequence="40" groups="records_management.group_records_user" />
        <menuitem id="menu_paper_recycling" name="Paper Recycling" parent="menu_records_operations" sequence="50" groups="records_management.group_records_user" />
        <menuitem id="menu_stock_lots" name="Serial Numbers" parent="menu_records_operations" sequence="55" groups="records_management.group_records_user" />
        <menuitem id="menu_records_management_documents" name="Documents" parent="menu_records_inventory" sequence="15" groups="records_management.group_records_user" />
        <menuitem id="menu_temp_inventory_root" name="Temporary Inventory" parent="menu_records_inventory" sequence="25" />
        <menuitem id="menu_rate_management" name="Rate Management" parent="menu_records_billing" sequence="30" groups="records_management.group_records_manager" />
        <menuitem id="menu_revenue_forecasting" name="Revenue Forecasting" parent="menu_records_billing" sequence="40" groups="records_management.group_records_manager" />
        <menuitem id="menu_payment_management" name="Payment Management" parent="menu_records_billing" sequence="50" />
        <menuitem id="menu_reports" name="Reporting Hub" parent="menu_records_compliance_reports" sequence="5" groups="records_management.group_records_user" />
        <menuitem id="menu_performance_analytics" name="Performance Analytics" parent="menu_records_compliance_reports" sequence="25" />
        <menuitem id="menu_naid_audit_root" name="NAID Audits" parent="menu_records_compliance_reports" sequence="50" />
        <menuitem id="menu_naid_certification_root" name="NAID Certification" parent="menu_records_compliance_reports" sequence="55" />
        <menuitem id="menu_chain_custody" name="Chain of Custody" parent="menu_records_compliance_reports" action="action_chain_of_custody" sequence="60" groups="records_management.group_records_user" />
        <menuitem id="menu_master_data" name="Master Data" parent="menu_records_configuration" sequence="5" groups="records_management.group_records_manager" />
        <menuitem id="menu_products_services" name="Products &amp; Services" parent="menu_records_configuration" sequence="15" groups="records_management.group_records_manager" />
        <menuitem id="menu_security_access" name="Security &amp; Access" parent="menu_records_configuration" sequence="20" groups="records_management.group_records_manager" />
        <menuitem id="menu_barcode_config" name="Barcode Configuration" parent="menu_records_configuration" sequence="30" groups="records_management.group_records_manager" />
        
        <!-- Legacy menu aliases for backward compatibility -->
        <menuitem id="menu_records_compliance" name="NAID Compliance" parent="records_management.menu_records_compliance_reports" sequence="10" groups="records_management.group_records_user"/>
        <menuitem id="menu_records_reporting" name="Reports" parent="records_management.menu_records_compliance_reports" sequence="20" groups="records_management.group_records_user"/>
        <menuitem id="menu_records_portal" name="Portal Feedback" parent="records_management.menu_records_compliance_reports" sequence="30" groups="records_management.group_records_user"/>


    </data>
</odoo>
