<?xml version="1.0" encoding="utf-8"?>
<odoo>

<data>
<!-- Tree view for naid.audit.log -->
    <record id="naid_audit_log_view_tree" model="ir.ui.view">
        <field name="name">naid.audit.log.view.tree</field>
        <field name="model">naid.audit.log</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date" widget="datetime"/>
                <field name="user_id"/>
                <field name="action_type"/>
                <field name="name"/>
                <field name="res_model"/>
                <field name="res_id"/>
                <field name="naid_compliant" widget="boolean_toggle"/>
                <field name="company_id" optional="hide"/>
            </tree>
        </field>
    </record>

<!-- Form view for naid.audit.log -->
    <record id="naid_audit_log_view_form" model="ir.ui.view">
        <field name="name">naid.audit.log.view.form</field>
        <field name="model">naid.audit.log</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
<form string="NAID Audit Log" create="false" edit="false">
                <sheet>
                    <div class="oe_title">
<label for="name" class="oe_edit_only"/>
<h1>
    <field name="name" readonly="1"/>
</h1>
                    </div>
                <group>
                    <group>
                        <field name="create_date"/>
                        <field name="user_id"/>
                        <field name="action_type"/>
                        <field name="naid_compliant"/>
                    </group>
                    <group>
                        <field name="custody_id"/>
                        <field name="task_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </group>
<group string="Description">
    <field name="description" nolabel="1" readonly="1"/>
</group>
<group string="Technical Information">
    <group>
        <field name="res_model"/>
        <field name="res_id"/>
    </group>
    <group>
        <field name="ip_address"/>
    </group>
</group>
                </sheet>
<div class="oe_chatter">
    <field name="message_follower_ids"/>
    <field name="message_ids"/>
</div>
            </form>
        </field>
    </record>

<!-- Search view for naid.audit.log -->
    <record id="naid_audit_log_view_search" model="ir.ui.view">
        <field name="name">naid.audit.log.view.search</field>
        <field name="model">naid.audit.log</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Description or Reference"/>
                <field name="user_id"/>
                <field name="res_model"/>
                <separator/>
                <filter string="NAID Compliant" name="naid_compliant" domain="[('naid_compliant', '=', True)]"/>
                <filter string="Non-Compliant" name="naid_non_compliant" domain="[('naid_compliant', '=', False)]"/>
                <separator/>
                <filter string="Today" name="filter_today" domain="[('create_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="filter_this_week" domain="[('create_date', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="User" name="group_by_user" context="{'group_by':'user_id'}"/>
                    <filter string="Action Type" name="group_by_action_type" context="{'group_by':'action_type'}"/>
                    <filter string="Model" name="group_by_model" context="{'group_by':'res_model'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by':'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

<!-- Action for naid.audit.log -->
    <record id="action_naid_audit_log" model="ir.actions.act_window">
<field name="name">üõ°Ô∏è NAID Audit Logs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">naid.audit.log</field>
        <field name="view_mode">list,form</field>
<field name="search_view_id" ref="naid_audit_log_view_search"/>

        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
<p class="o_view_nocontent_smiling_face">
                No audit logs found.
</p>
<p>
                This view provides a complete and immutable log of all significant
                actions related to NAID compliance within the system.
</p>
<p>
    <b>Key features include:</b>
    <br/>
                ‚Ä¢ üïí Timestamped records of all events.<br/>
                ‚Ä¢ üë§ User tracking for every action.<br/>
                ‚Ä¢ üîó Direct links to related documents and compliance records.<br/>
                ‚Ä¢ üîç Advanced filtering and search capabilities.
            </p>
        </field>
    </record>
</data>

</odoo>
