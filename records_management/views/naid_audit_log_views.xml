<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Tree view for naid.audit.log -->
    <record id="naid_audit_log_view_tree" model="ir.ui.view">
        <field name="name">naid.audit.log.view.tree</field>
        <field name="model">naid.audit.log</field>
        <field name="arch" type="xml">
<tree decoration-info="event_level=='info'" decoration-warning="event_level=='warning'" decoration-danger="event_level=='critical'">
    <field name="event_date" widget="remaining_days"/>
    <field name="user_id"/>
    <field name="event_type"/>

                <field name="name"/>
<field name="res_model"/>
<field name="res_id"/>
<field name="event_level" optional="show"/>
<field name="company_id" optional="hide"/>

            </tree>
        </field>
    </record>

<!-- Form view for naid.audit.log -->
    <record id="naid_audit_log_view_form" model="ir.ui.view">
        <field name="name">naid.audit.log.view.form</field>
        <field name="model">naid.audit.log</field>
        <field name="arch" type="xml">
<form string="NAID Audit Log" create="false" edit="false">
                <sheet>
                    <div class="oe_title">
<label for="name" class="oe_edit_only"/>
<h1>
    <field name="name" readonly="1"/>
</h1>
                    </div>
<group>
    <group>
        <field name="event_date"/>
        <field name="user_id"/>
        <field name="event_type"/>
        <field name="event_level"/>
    </group>
    <group>
        <field name="naid_compliance_id"/>
        <field name="chain_of_custody_id"/>
        <field name="company_id" groups="base.group_multi_company"/>
    </group>
</group>
<group string="Description">
    <field name="description" nolabel="1" readonly="1"/>
</group>
<group string="Technical Information">
    <group>
        <field name="res_model"/>
        <field name="res_id"/>
    </group>
    <group>
        <field name="ip_address"/>
    </group>
</group>
                </sheet>
<div class="oe_chatter">
    <field name="message_follower_ids"/>
    <field name="message_ids"/>
</div>
            </form>
        </field>
    </record>

<!-- Search view for naid.audit.log -->
    <record id="naid_audit_log_view_search" model="ir.ui.view">
        <field name="name">naid.audit.log.view.search</field>
        <field name="model">naid.audit.log</field>
        <field name="arch" type="xml">
            <search>
<field name="name" string="Description or Event"/>
<field name="user_id"/>
<field name="res_model"/>
<separator/>
<filter string="Critical" name="level_critical" domain="[('event_level', '=', 'critical')]"/>
<filter string="Warning" name="level_warning" domain="[('event_level', '=', 'warning')]"/>
<filter string="Info" name="level_info" domain="[('event_level', '=', 'info')]"/>
<separator/>
<filter string="Today" name="filter_today" domain="[('event_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
<filter string="This Week" name="filter_this_week" domain="[('event_date', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
<group expand="0" string="Group By">
    <filter string="User" name="group_by_user" context="{'group_by':'user_id'}"/>
    <filter string="Event Type" name="group_by_event_type" context="{'group_by':'event_type'}"/>
    <filter string="Level" name="group_by_level" context="{'group_by':'event_level'}"/>
    <filter string="Model" name="group_by_model" context="{'group_by':'res_model'}"/>
    <filter string="Date" name="group_by_date" context="{'group_by':'event_date:day'}"/>

                </group>
            </search>
        </field>
    </record>

<!-- Action for naid.audit.log -->
    <record id="action_naid_audit_log" model="ir.actions.act_window">
<field name="name">🛡️ NAID Audit Logs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">naid.audit.log</field>
        <field name="view_mode">tree,form</field>
<field name="search_view_id" ref="naid_audit_log_view_search"/>

        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
<p class="o_view_nocontent_smiling_face">
                No audit logs found.
</p>
<p>
                This view provides a complete and immutable log of all significant
                actions related to NAID compliance within the system.
</p>
<p>
    <b>Key features include:</b>
    <br/>
                • 🕒 Timestamped records of all events.<br/>
                • 👤 User tracking for every action.<br/>
                • 🔗 Direct links to related documents and compliance records.<br/>
                • 🔍 Advanced filtering and search capabilities.
            </p>
        </field>
    </record>

</odoo>
