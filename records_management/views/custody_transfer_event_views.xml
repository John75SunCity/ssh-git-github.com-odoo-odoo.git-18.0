<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
    <data><!-- List View -->
    <record id="custody_transfer_event_view_tree" model="ir.ui.view">
        <field name="name">custody.transfer.event.view.tree</field>
        <field name="model">custody.transfer.event</field>
    <field name="arch" type="xml">
            <list string="Custody Transfer Event">
                <field name="name"/>
                <field name="company_id"/>
                <field name="custody_record_id"/>
                <field name="work_order_id"/>
                <field name="transfer_date"/>
                <field name="from_party_id"/>
                <field name="to_party_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="custody_transfer_event_view_form" model="ir.ui.view">
        <field name="name">custody.transfer.event.view.form</field>
        <field name="model">custody.transfer.event</field>
    <field name="arch" type="xml">
            <form string="Custody Transfer Event">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                        <field name="custody_record_id"/>
                        <field name="work_order_id"/>
                        <field name="transfer_date"/>
                        <field name="from_party_id"/>
                        <field name="to_party_id"/>
                        <field name="notes"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="custody_transfer_event_view_search" model="ir.ui.view">
        <field name="name">custody.transfer.event.view.search</field>
        <field name="model">custody.transfer.event</field>
    <field name="arch" type="xml">
            <search string="Search Custody Transfer Event">
                <!-- Add search fields here -->
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_custody_transfer_event" model="ir.actions.act_window">
        <field name="name">Custody Transfer Event</field>
        <field name="res_model">custody.transfer.event</field>
        <field name="view_mode">list,form</field>
    </record>

