<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
<!-- List View -->
    <record id="custody_transfer_event_view_list" model="ir.ui.view">
        <field name="name">custody.transfer.event.view.list</field>
        <field name="model">custody.transfer.event</field>
    <field name="arch" type="xml">
            <list string="Custody Transfer Event">
                <field name="name"/>
                <field name="company_id"/>
                <field name="custody_record_id"/>
                <field name="work_order_id"/>
                <field name="transfer_date"/>
                <field name="from_party_id"/>
                <field name="to_party_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="custody_transfer_event_view_form" model="ir.ui.view">
        <field name="name">custody.transfer.event.view.form</field>
        <field name="model">custody.transfer.event</field>
    <field name="arch" type="xml">
            <form string="Custody Transfer Event">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="transfer_info" string="Transfer Details">
                            <field name="custody_record_id"/>
                            <field name="work_order_id"/>
                            <field name="transfer_date"/>
                            <field name="transfer_type"/>
                        </group>
                        <group name="parties" string="Parties Involved">
                            <field name="from_party_id"/>
                            <field name="to_party_id"/>
                            <field name="witness_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="location" string="Transfer Location">
                            <field name="location_name"/>
                            <field name="gps_latitude"/>
                            <field name="gps_longitude"/>
                        </group>
                        <group name="verification" string="Verification">
                            <field name="signature_from" widget="signature"/>
                            <field name="signature_to" widget="signature"/>
                            <field name="verified"/>
                            <field name="verification_method"/>
                        </group>
                    </group>
                    
                    <!-- Map Widget for Transfer Location -->
                    <group string="ğŸ—ºï¸ Transfer Location Map" invisible="not gps_latitude or not gps_longitude">
                        <field name="gps_latitude" invisible="1"/>
                        <field name="gps_longitude" invisible="1"/>
                        <div class="row">
                            <div class="col-12">
                                <field name="gps_latitude" widget="map_widget" 
                                       options="{'latitudeField': 'gps_latitude', 'longitudeField': 'gps_longitude'}" 
                                       nolabel="1"/>
                            </div>
                        </div>
                    </group>
                    
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional transfer notes..."/>
                        </page>
                        <page string="Attachments" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                    
                    <group>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="custody_transfer_event_view_search" model="ir.ui.view">
        <field name="name">custody.transfer.event.view.search</field>
        <field name="model">custody.transfer.event</field>
    <field name="arch" type="xml">
            <search string="Search Custody Transfer Event">
                <!-- Add search fields here -->
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_custody_transfer_event" model="ir.actions.act_window">
        <field name="name">Custody Transfer Event</field>
        <field name="res_model">custody.transfer.event</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <!--

    <menuitem
        id="menu_custody_transfer_event"
        name="Custody Transfer Event"
        action="action_custody_transfer_event"
        parent="REPLACE_WITH_PARENT_MENU_ID"
        sequence="10"/>

    -->
    
    </data>
</odoo>
