<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_key_restriction_view_tree" model="ir.ui.view">
            <field name="name">res.partner.key.restriction.view.tree</field>
            <field name="model">res.partner.key.restriction</field>
            <field name="arch" type="xml">
                <list string="Key Access Restrictions">
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="key_issuance_allowed" />
                    <field name="state" />
                    <field name="effective_date" />
                    <field name="expiry_date" />
                    <field name="user_id" />
                </list>
            </field>
        </record>
        <record id="res_partner_key_restriction_view_form" model="ir.ui.view">
            <field name="name">res.partner.key.restriction.view.form</field>
            <field name="model">res.partner.key.restriction</field>
            <field name="arch" type="xml">
                <form string="Partner Key Access Restriction">
                    <header>
                        <field name="state" widget="statusbar" />
                        <button name="action_activate" string="Activate" type="object" class="btn-primary" invisible="state != 'draft'" />
                        <button name="action_revoke" string="Revoke" type="object" class="btn-danger" invisible="state not in ('active', 'expired')" />
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state == 'draft'" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Restriction Reference..." />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" required="1" />
                                <field name="key_issuance_allowed" />
                                <field name="effective_date" required="1" />
                                <field name="expiry_date" />
                            </group>
                            <group>
                                <field name="user_id" readonly="1" />
                                <field name="company_id" readonly="1" />
                                <field name="active" />
                            </group>
                        </group>
                        <group string="Restriction Details">
                            <field name="restriction_reason" />
                            <field name="notes" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <record id="res_partner_key_restriction_view_search" model="ir.ui.view">
            <field name="name">res.partner.key.restriction.view.search</field>
            <field name="model">res.partner.key.restriction</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="user_id" />
                    <field name="restriction_reason" />
                    <filter string="Active" name="active" domain="[('active', '=', True)]" />
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" />
                    <filter string="Active Restrictions" name="active_restrictions" domain="[('state', '=', 'active')]" />
                    <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]" />
                    <filter string="Revoked" name="revoked" domain="[('state', '=', 'revoked')]" />
                    <filter string="Key Issuance Allowed" name="issuance_allowed" domain="[('key_issuance_allowed', '=', True)]" />
                    <filter string="Key Issuance Restricted" name="issuance_restricted" domain="[('key_issuance_allowed', '=', False)]" />
                    <group expand="1" string="Group By">
                        <filter string="Partner" name="partner" domain="[]" context="{'group_by':'partner_id'}" />
                        <filter string="Status" name="status" domain="[]" context="{'group_by':'state'}" />
                        <filter string="Created By" name="created_by" domain="[]" context="{'group_by':'user_id'}" />
                        <filter string="Effective Date" name="effective_date" domain="[]" context="{'group_by':'effective_date'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- Main Action - Must be defined BEFORE view references -->
        <record id="action_res_partner_key_restriction" model="ir.actions.act_window">
            <field name="name">Key Access Restrictions</field>
            <field name="res_model">res.partner.key.restriction</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="res_partner_key_restriction_view_tree"/>
            <field name="domain">[('active', '=', True)]</field>
            <field name="context">{'search_default_active_restrictions': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No key access restrictions found. Click here to create your first restriction.
                </p>
                <p>
                    <b>Key Access Restriction Management:</b>
                    <br />
                    • Control physical key issuance for partners<br />
                    • Set effective dates and expiry periods<br />
                    • Track restriction reasons and internal notes<br />
                    • Manage restriction lifecycle (draft → active → expired/revoked)<br />
                    • Audit trail with full chatter and activity tracking
                </p>
            </field>
        </record>

        <!-- View References for Action - Must come AFTER main action -->
        <record id="action_res_partner_key_restriction_view_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">list</field>
            <field name="view_id" ref="res_partner_key_restriction_view_tree"/>
            <field name="act_window_id" ref="action_res_partner_key_restriction"/>
        </record>

        <record id="action_res_partner_key_restriction_view_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="res_partner_key_restriction_view_form"/>
            <field name="act_window_id" ref="action_res_partner_key_restriction"/>
        </record>
    </data>
</odoo>
