<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View work.order.shredding View List -->
    <record id="view_work_order_shredding_list" model="ir.ui.view">
        <field name="name">view.work.order.shredding.list</field>
        <field name="model">work.order.shredding</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View work.order.shredding form -->
    <record id="view_work_order_shredding_form" model="ir.ui.view">
        <field name="name">view.work.order.shredding.form</field>
        <field name="model">work.order.shredding</field>
        <field name="arch" type="xml">
            <form string="Work Order Shredding">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View work.order.shredding search -->
    <record id="view_work_order_shredding_search" model="ir.ui.view">
        <field name="name">view.work.order.shredding.search</field>
        <field name="model">work.order.shredding</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action work.order.shredding -->
    <record id="action_work_order_shredding" model="ir.actions.act_window">
        <field name="name">Work Order Shredding</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">work.order.shredding</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Work Order Shredding.
            </p>
        </field>
    </record>

</odoo>
