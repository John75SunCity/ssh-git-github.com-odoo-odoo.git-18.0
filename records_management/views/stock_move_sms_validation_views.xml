<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_move_sms_validation_view_form" model="ir.ui.view">
            <field name="name">stock.move.sms.validation.view.form</field>
            <field name="model">stock.move.sms.validation</field>
            <field name="arch" type="xml">
                <form string="SMS Validation">
                    <header>
                        <button name="action_send_sms" type="object" string="Send SMS" class="btn-primary" invisible="state != 'draft'" />
                        <button name="action_cancel" type="object" string="Cancel" invisible="state == 'cancelled'" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <h1><field name="name" /></h1>
                        <group>
                            <group string="Stock Move">
                                <field name="stock_move_id" />
                                <field name="partner_id" />
                            </group>
                            <group string="Status">
                                <field name="is_validated" />
                                <field name="state" />
                            </group>
                        </group>
                        <group>
                            <group string="SMS Details">
                                <field name="phone_number" />
                                <field name="sms_message" />
                                <field name="sms_sent_date" />
                            </group>
                            <group string="Validation">
                                <field name="validation_code" />
                                <field name="validation_date" />
                                <field name="validated_by_id" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
        <record id="stock_move_sms_validation_view_tree" model="ir.ui.view">
            <field name="name">stock.move.sms.validation.view.tree</field>
            <field name="model">stock.move.sms.validation</field>
            <field name="arch" type="xml">
                <list string="SMS Validations" decoration-success="is_validated == True" decoration-warning="is_validated == False">
                    <field name="name" />
                    <field name="stock_move_id" />
                    <field name="partner_id" />
                    <field name="phone_number" />
                    <field name="state" />
                    <field name="is_validated" widget="boolean_toggle" />
                    <field name="validation_date" />
                </list>
            </field>
        </record>
        <record id="stock_move_sms_validation_view_search" model="ir.ui.view">
            <field name="name">stock.move.sms.validation.view.search</field>
            <field name="model">stock.move.sms.validation</field>
            <field name="arch" type="xml">
                <search string="Search SMS Validations">
                    <field name="name" />
                    <field name="stock_move_id" />
                    <field name="partner_id" />
                    <field name="phone_number" />
                    <filter string="Validated" name="validated" domain="[('is_validated', '=', True)]" />
                    <filter string="Pending" name="pending" domain="[('is_validated', '=', False)]" />
                    <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]" />
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" />
                    <separator />
                    <group expand="0" string="Group By">
                        <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}" />
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}" />
                        <filter string="Validation Status" name="group_validation" context="{'group_by': 'is_validated'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="stock_move_sms_validation_action" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model stock.move.sms.validation has state field - consider using default search filters -->
            <field name="name">SMS Validations</field>
            <field name="res_model">stock.move.sms.validation</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_pending': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create your first SMS validation!
</p>
                <p>
                SMS validations provide secure confirmation for stock moves and transfers.
</p>
            </field>
        </record>
    
        <menuitem id="stock_move_sms_validation_menu" name="SMS Validations" parent="records_management.menu_records_operations" action="stock_move_sms_validation_action" sequence="60" groups="stock.group_stock_user,stock.group_stock_manager" />
    
    
    </data>
</odoo>
