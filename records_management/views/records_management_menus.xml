        <record id="action_records_container" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model records.container has state field - consider using default search filters -->
            <field name="name">Storage Containers</field>
            <field name="res_model">records.container</field>
            <field name="view_mode">list,kanban,form,calendar,graph</field>
            <field name="context">{
            'search_default_stored': 1,
            'search_default_active': 1
        }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create your first storage container!
    </p>
                <p>
                    <b>Enterprise Container Management:</b>
                    <br />
                • Visual kanban boards for container tracking<br />
                • Automated barcode generation and printing<br />
                • QR code generation for mobile scanning<br />
                • Real-time location tracking with movement history<br />
                • Document association and content management<br />
                • Service request integration and workflows<br />
                • Advanced analytics and reporting<br />
                • Mobile-optimized for warehouse operations
</p>
            </field>
        </record>
        <record id="action_records_document" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model records.document has state field - consider using default search filters -->
            <field name="name">Documents</field>
            <field name="res_model">records.document</field>
            <field name="view_mode">list,form</field>
            <field name="context">{
            'search_default_active': 1
        }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Manage your document records!
    </p>
                <p>
                    <b>Document Management:</b>
                    <br />
                • Track document lifecycle and status<br />
                • Associate documents with containers<br />
                • Manage retention policies<br />
                • Generate compliance reports<br />
                • Mobile document scanning
</p>
            </field>
        </record>
