<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="fsm_notification_view_tree" model="ir.ui.view">
            <field name="name">fsm.notification.view.tree</field>
            <field name="model">fsm.notification</field>
            <field name="arch" type="xml">
                <tree string="FSM Notification">
                    <field name="name"/>
                    <field name="display_name"/>
                    <field name="partner_id"/>
                    <field name="notification_type"/>
                    <field name="subject"/>
                    <field name="delivery_method"/>
                    <field name="state"/>
                    <field name="priority"/>
                    <field name="scheduled_datetime"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="fsm_notification_view_form" model="ir.ui.view">
            <field name="name">fsm.notification.view.form</field>
            <field name="model">fsm.notification</field>
            <field name="arch" type="xml">
                <form string="FSM Notification">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="display_name"/>
                            <field name="partner_id"/>
                            <field name="notification_type"/>
                            <field name="subject"/>
                            <field name="message"/>
                            <field name="delivery_method"/>
                            <field name="state"/>
                            <field name="priority"/>
                            <field name="scheduled_datetime"/>
                            <field name="sent_datetime"/>
                            <field name="delivered_datetime"/>
                            <field name="attempts"/>
                            <field name="max_attempts"/>
                            <field name="error_message"/>
                            <field name="template_id"/>
                            <field name="custom_data"/>
                            <field name="can_retry"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="fsm_notification_view_search" model="ir.ui.view">
            <field name="name">fsm.notification.view.search</field>
            <field name="model">fsm.notification</field>
            <field name="arch" type="xml">
                <search string="Search FSM Notification">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="notification_type"/>
                    <field name="state"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_fsm_notification" model="ir.actions.act_window">
            <field name="name">FSM Notification</field>
            <field name="res_model">fsm.notification</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <!--
        <menuitem
            id="menu_fsm_notification"
            name="FSM Notification"
            action="action_fsm_notification"
            parent="REPLACE_WITH_PARENT_MENU_ID"
            sequence="10"/>
        -->

    </data>
</odoo>
