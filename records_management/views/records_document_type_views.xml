<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Tree view for DOCUMENT -->

    <!-- Tree view for Document -->
    <record id="records_document_type_view_tree" model="ir.ui.view">
        <field name="name">records.document.type.view.tree</field>
        <field name="model">records.document.type</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <tree string="Document Types">
                <field name="sequence"/>
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="state"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form view for Document -->
    <record id="records_document_type_view_form" model="ir.ui.view">
        <field name="name">records.document.type.view.form</field>
        <field name="model">records.document.type</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Document Type">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,deprecated,archived"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Document count button removed - field not available in model -->
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Document Type Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="description"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="category"/>
                            <field name="state"/>
                            <field name="company_id"/>
                            <field name="parent_type_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="description" placeholder="Additional notes and description for this document type..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban view for Document -->
    <record id="records_document_type_view_kanban" model="ir.ui.view">
        <field name="name">records.document.type.view.kanban</field>
        <field name="model">records.document.type</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <kanban default_group_by="category" class="o_kanban_document_type">
                <field name="name"/>
                <field name="category"/>
                <field name="state"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_card_header">
                                <div class="oe_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_secondary">
                                        <field name="category"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_kanban_card_content">
                                <div>
                                    <strong>Code:</strong>
                                    <field name="code"/>
                                </div>
                                <div>
                                    <strong>Status:</strong>
                                    <field name="state"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search view for Document -->
    <record id="records_document_type_view_search" model="ir.ui.view">
        <field name="name">records.document.type.view.search</field>
        <field name="model">records.document.type</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Document Types">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Active Types" name="active_types" domain="[('state', '=', 'active')]"/>
                <filter string="Deprecated" name="deprecated" domain="[('state', '=', 'deprecated')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree view for Actions -->
    <record id="action_records_document_type" model="ir.actions.act_window">
        <field name="name">Document Types</field>
        <field name="res_model">records.document.type</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first document type!
            </p>
            <p>
                Document types help classify and organize your records management system.
            </p>
        </field>
    </record>
</data>

</odoo>
