<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- üìã ENTERPRISE DOCUMENT TYPES - Records Management Classification -->
    
    <!-- üé® Document Type Kanban Dashboard -->
    <record id="view_records_document_type_kanban" model="ir.ui.view">
        <field name="name">records.document.type.kanban</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <kanban default_group_by="category" class="o_kanban_document_type_dashboard">
                <field name="name"/>
                <field name="category"/>
                <field name="retention_period"/>
                <field name="confidentiality_level"/>
                <field name="requires_approval"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>üìã <field name="name"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        üè∑Ô∏è <field name="category"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" title="More options"/></a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-8">
                                        <div><i class="fa fa-clock-o" title="Time"/> Retention: <field name="retention_period"/> years</div>
                                        <div><i class="fa fa-shield" title="Security"/> Level: <field name="confidentiality_level"/></div>
                                    </div>
                                    <div class="col-4">
                                        <span class="badge badge-info" t-if="record.requires_approval.raw_value">
                                            ‚úÖ Approval Required
                                        </span>
                                        <span class="badge" t-att-class="record.active.raw_value ? 'badge-success' : 'badge-secondary'">
                                            <t t-if="record.active.raw_value">üü¢ Active</t>
                                            <t t-else="">‚≠ï Inactive</t>
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-sm" type="object" name="action_view_documents">
                                            üìÑ Documents
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-success btn-sm" type="object" name="action_create_template">
                                            üìù Template
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Type</a>
                                <a role="menuitem" type="object" name="action_view_documents" class="dropdown-item">üìÑ View Documents</a>
                                <a role="menuitem" type="object" name="action_retention_policy" class="dropdown-item">‚è∞ Retention Policy</a>
                                <a role="menuitem" type="object" name="action_compliance_check" class="dropdown-item">üèÜ Compliance Check</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="object" name="action_duplicate" class="dropdown-item">üìã Duplicate</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- üìã Enhanced Tree with Compliance Tracking -->
    <record id="view_records_document_type_tree" model="ir.ui.view">
        <field name="name">records.document.type.list</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <list decoration-success="active == True and requires_approval == True" 
                  decoration-warning="retention_period &gt; 7"
                  decoration-info="confidentiality_level in ('high', 'confidential')">
                <field name="name" string="üìã Document Type"/>
                <field name="category" string="üè∑Ô∏è Category"/>
                <field name="retention_period" string="‚è∞ Retention (Years)"/>
                <field name="confidentiality_level" string="üõ°Ô∏è Confidentiality" widget="badge"/>
                <field name="requires_approval" string="‚úÖ Approval" widget="boolean_toggle"/>
                <field name="auto_archive" string="üì¶ Auto Archive" widget="boolean_toggle"/>
                <field name="active" string="üéØ Status" widget="boolean_toggle"/>
                <button name="action_view_documents" type="object" string="Documents" 
                        icon="fa-file-text-o" class="btn-link"/>
                <button name="action_retention_policy" type="object" string="Policy" 
                        icon="fa-clock-o" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- üìù Enhanced Form with Complete Classification System -->
    <record id="view_records_document_type_form" model="ir.ui.view">
        <field name="name">records.document.type.form</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_template" type="object" string="üìù Create Template" class="btn-primary"/>
                    <button name="action_retention_policy" type="object" string="‚è∞ Retention Policy" class="btn-secondary"/>
                    <button name="action_compliance_check" type="object" string="üèÜ Compliance Check" class="btn-info"/>
                    <field name="active" widget="boolean_button" options="{'terminology': {'string_true': 'üü¢ Active', 'string_false': '‚≠ï Archived'}}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_documents" icon="fa-file-text-o">
                            <field string="Documents" name="document_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_templates" icon="fa-file-code-o">
                            <field string="Templates" name="template_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_retention_policies" icon="fa-clock-o">
                            <field string="Policies" name="policy_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-shield" 
                                invisible="confidentiality_level not in ('high', 'confidential')">>
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">üõ°Ô∏è</span>
                                <span class="o_stat_text">Confidential</span>
                            </div>
                        </button>
                    </div>
                    
                    <group>
                        <group string="üìã Basic Information">
                            <field name="name" placeholder="e.g., Financial Statements"/>
                            <field name="category"/>
                            <field name="description"/>
                            <field name="active"/>
                        </group>
                        <group string="üõ°Ô∏è Security &amp; Compliance">
                            <field name="confidentiality_level"/>
                            <field name="requires_approval"/>
                            <field name="requires_signature"/>
                            <field name="encryption_required"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="‚è∞ Retention Management">
                            <field name="retention_period"/>
                            <field name="retention_unit"/>
                            <field name="auto_archive"/>
                            <field name="destruction_method"/>
                        </group>
                        <group string="üìã Processing Rules">
                            <field name="auto_classify"/>
                            <field name="ocr_enabled"/>
                            <field name="index_automatically"/>
                            <field name="notify_on_expiry"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="üìÑ Document Templates" name="templates">
                            <field name="template_ids" mode="list">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="template_type"/>
                                    <field name="file_format"/>
                                    <field name="is_default"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                        <page string="üè∑Ô∏è Classification Rules" name="classification">
                            <field name="classification_rule_ids" mode="list">
                                <list editable="bottom">
                                    <field name="rule_name"/>
                                    <field name="keyword"/>
                                    <field name="rule_type"/>
                                    <field name="confidence_threshold"/>
                                    <field name="auto_apply"/>
                                </list>
                            </field>
                        </page>
                        <page string="‚úÖ Approval Workflow" name="approval">
                            <group>
                                <group string="üë• Approval Settings">
                                    <field name="approval_required_for"/>
                                    <field name="min_approvers"/>
                                    <field name="approval_sequence"/>
                                    <field name="escalation_enabled"/>
                                </group>
                                <group string="‚è∞ Timing">
                                    <field name="approval_deadline"/>
                                    <field name="escalation_days"/>
                                    <field name="auto_approve_days"/>
                                    <field name="reminder_frequency"/>
                                </group>
                            </group>
                            <field name="approval_rule_ids" mode="list">
                                <list>
                                    <field name="approver_id"/>
                                    <field name="approval_type"/>
                                    <field name="sequence"/>
                                    <field name="is_required"/>
                                    <field name="delegation_allowed"/>
                                </list>
                            </field>
                        </page>
                        <page string="üîç Metadata Fields" name="metadata">
                            <field name="metadata_field_ids" mode="list">
                                <list editable="bottom">
                                    <field name="field_name"/>
                                    <field name="field_type"/>
                                    <field name="is_required"/>
                                    <field name="is_indexed"/>
                                    <field name="default_value"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìä Analytics" name="analytics">
                            <group>
                                <group string="üìà Usage Statistics">
                                    <field name="total_documents" readonly="1"/>
                                    <field name="active_documents" readonly="1"/>
                                    <field name="archived_documents" readonly="1"/>
                                    <field name="pending_approval" readonly="1"/>
                                </group>
                                <group string="üìÖ Timeline">
                                    <field name="last_document_created" readonly="1"/>
                                    <field name="last_policy_update" readonly="1"/>
                                    <field name="next_retention_review" readonly="1"/>
                                    <field name="compliance_check_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- üîç Enhanced Search with Classification Filters -->
    <record id="view_records_document_type_search" model="ir.ui.view">
        <field name="name">records.document.type.search</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Document Type"/>
                <field name="category"/>
                <field name="description"/>
                <field name="confidentiality_level"/>
                
                <filter string="üü¢ Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="‚≠ï Archived" name="archived" domain="[('active', '=', False)]"/>
                
                <separator/>
                <filter string="‚úÖ Requires Approval" name="approval_required" domain="[('requires_approval', '=', True)]"/>
                <filter string="üîè Requires Signature" name="signature_required" domain="[('requires_signature', '=', True)]"/>
                <filter string="üîê Encryption Required" name="encryption_required" domain="[('encryption_required', '=', True)]"/>
                
                <separator/>
                <filter string="üõ°Ô∏è Confidential" name="confidential" domain="[('confidentiality_level', 'in', ['high', 'confidential'])]"/>
                <filter string="üì¶ Auto Archive" name="auto_archive" domain="[('auto_archive', '=', True)]"/>
                <filter string="ü§ñ Auto Classify" name="auto_classify" domain="[('auto_classify', '=', True)]"/>
                
                <separator/>
                <filter string="‚è∞ Long Retention (&gt;7 years)" name="long_retention" domain="[('retention_period', '&gt;', 7)]"/>
                <filter string="üìã Recent Updates" name="recent_updates" 
                        domain="[('last_policy_update', '&gt;=', (context_today() - relativedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="üìä Group By">
                    <filter string="Category" name="group_by_category" context="{'group_by': 'category'}"/>
                    <filter string="Confidentiality Level" name="group_by_confidentiality" context="{'group_by': 'confidentiality_level'}"/>
                    <filter string="Retention Period" name="group_by_retention" context="{'group_by': 'retention_period'}"/>
                    <filter string="Approval Required" name="group_by_approval" context="{'group_by': 'requires_approval'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- üöÄ ENTERPRISE ACTION - Document Type Management -->
    <record id="action_records_document_type" model="ir.actions.act_window">
        <field name="name">üìã Document Types</field>
        <field name="res_model">records.document.type</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_records_document_type_search"/>
        <field name="context">{
            'search_default_active': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üìã Create your first document type classification!
            </p>
            <p>
                <b>Enterprise Document Type Management:</b><br/>
                ‚Ä¢ üè∑Ô∏è Comprehensive document classification system<br/>
                ‚Ä¢ ‚è∞ Automated retention policy management<br/>
                ‚Ä¢ üõ°Ô∏è Multi-level confidentiality and security controls<br/>
                ‚Ä¢ ‚úÖ Configurable approval workflows<br/>
                ‚Ä¢ ü§ñ AI-powered auto-classification rules<br/>
                ‚Ä¢ üìù Dynamic template management<br/>
                ‚Ä¢ üîç Advanced metadata and indexing<br/>
                ‚Ä¢ üìä Real-time analytics and compliance reporting<br/>
                ‚Ä¢ üîê Encryption and digital signature support
            </p>
        </field>
    </record>
</odoo>
