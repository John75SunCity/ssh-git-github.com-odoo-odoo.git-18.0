<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ðŸ“‹ DOCUMENT TYPES - Records Management Classification -->

    <!-- Actions defined first so they can be referenced by buttons -->
    <record id="action_view_documents" model="ir.actions.act_window">
        <field name="name">Related Documents</field>
        <field name="res_model">records.document</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('document_type_id', '=', active_id)]</field>
        <field name="context">{'default_document_type_id': active_id}</field>
        <field name="target">current</field>
    </record>

    <!-- Document Type List View -->
    <record id="view_records_document_type_list" model="ir.ui.view">
        <field name="name">records.document.type.list</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <list string="Document Types">
                <field name="name"/>
                <field name="security_classification"/>
                <field name="risk_level"/>
                <field name="compliance_status"/>
                <field name="audit_required"/>
                <field name="active"/>
                <field name="document_count"/>
            </list>
        </field>
    </record>

    <!-- Document Type Form View -->
    <record id="view_records_document_type_form" model="ir.ui.view">
        <field name="name">records.document.type.form</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <form string="Document Type">
                <header>
                    <field name="compliance_status" widget="statusbar" statusbar_visible="pending,under_review,approved,rejected"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" name="action_view_documents" icon="fa-file-text-o">
                            <field string="Documents" name="document_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Document Type Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="active"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="security_classification"/>
                            <field name="risk_level"/>
                            <field name="audit_required"/>
                            <field name="approval_required"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Compliance" name="compliance">
                            <group>
                                <group>
                                    <field name="regulatory_requirement"/>
                                    <field name="retention_compliance"/>
                                    <field name="compliance_notes"/>
                                </group>
                                <group>
                                    <field name="approved_by"/>
                                    <field name="approval_date"/>
                                </group>
                            </group>
                        </page>
                        <page string="Analytics" name="analytics">
                            <group>
                                <group string="Usage Analytics">
                                    <field name="document_type_utilization"/>
                                    <field name="growth_trend_indicator"/>
                                    <field name="seasonal_pattern_score"/>
                                </group>
                                <group string="Classification Analytics">
                                    <field name="classification_accuracy_score"/>
                                    <field name="auto_classification_potential"/>
                                    <field name="type_complexity_rating"/>
                                </group>
                            </group>
                            <group>
                                <group string="Compliance Analytics">
                                    <field name="regulatory_compliance_score"/>
                                    <field name="audit_readiness_level"/>
                                    <field name="compliance_risk_assessment"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Document Type Kanban View -->
    <record id="view_records_document_type_kanban" model="ir.ui.view">
        <field name="name">records.document.type.kanban</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <kanban default_group_by="security_classification" class="o_kanban_document_type">
                <field name="name"/>
                <field name="security_classification"/>
                <field name="risk_level"/>
                <field name="compliance_status"/>
                <field name="document_count"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_card_header">
                                <div class="oe_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_secondary">
                                        <field name="security_classification"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_kanban_card_content">
                                <div>
                                    <strong>Risk Level:</strong>
                                    <field name="risk_level"/>
                                </div>
                                <div>
                                    <strong>Status:</strong>
                                    <field name="compliance_status"/>
                                </div>
                                <div>
                                    <strong>Documents:</strong>
                                    <field name="document_count"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Document Type Search View -->
    <record id="view_records_document_type_search" model="ir.ui.view">
        <field name="name">records.document.type.search</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <search string="Document Types">
                <field name="name"/>
                <field name="description"/>
                <field name="security_classification"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Audit Required" name="audit_required" domain="[('audit_required', '=', True)]"/>
                <filter string="Approval Required" name="approval_required" domain="[('approval_required', '=', True)]"/>
                <separator/>
                <filter string="Confidential" name="confidential" domain="[('security_classification', 'in', ['confidential', 'secret'])]"/>
                <filter string="Retention Compliance" name="retention_compliance" domain="[('retention_compliance', '=', True)]"/>
                <filter string="Auto Classification Potential" name="auto_classification" domain="[('auto_classification_potential', '&gt;', 0)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Security Classification" name="group_security" context="{'group_by': 'security_classification'}"/>
                    <filter string="Risk Level" name="group_risk" context="{'group_by': 'risk_level'}"/>
                    <filter string="Compliance Status" name="group_compliance" context="{'group_by': 'compliance_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_records_document_type" model="ir.actions.act_window">
        <field name="name">Document Types</field>
        <field name="res_model">records.document.type</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first document type!
            </p>
            <p>
                Document types help classify and organize your records management system.
            </p>
        </field>
    </record>

</odoo>
