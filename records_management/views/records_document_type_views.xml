<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Document Type Form View -->
    <record id="view_records_document_type_form" model="ir.ui.view">
        <field name="name">records.document.type.form</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <form string="Document Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Document Type Tree View -->
    <record id="view_records_document_type_tree" model="ir.ui.view">
        <field name="name">records.document.type.tree</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <tree string="Document Types" editable="bottom">
                <field name="name"/>
                <field name="description"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Document Type Search View -->
    <record id="view_records_document_type_search" model="ir.ui.view">
        <field name="name">records.document.type.search</field>
        <field name="model">records.document.type</field>
        <field name="arch" type="xml">
            <search string="Search Document Types">
                <field name="name"/>
                <field name="description"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Company" name="company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Document Type Action -->
    <record id="action_records_document_type" model="ir.actions.act_window">
        <field name="name">Document Types</field>
        <field name="res_model">records.document.type</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_records_document_type_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first document type
            </p>
            <p>
                Document types help categorize and organize your records.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_records_document_type"
              name="Document Types"
              parent="records_management_configuration_menu"
              action="action_records_document_type"
              sequence="20"/>
</odoo>
