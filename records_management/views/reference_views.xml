<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- List view for reference -->
    <record id="reference_view_tree" model="ir.ui.view">
        <field name="name">reference.view.tree</field>
        <field name="model">reference</field>
        <field name="arch" type="xml">
        <list>
        <field name="name"/>
        </list>
    </field>
    </record>

<!-- Form view for reference -->
    <record id="reference_view_form" model="ir.ui.view">
        <field name="name">reference.view.form</field>
        <field name="model">reference</field>
        <field name="arch" type="xml">
        <form string="Reference">
            <sheet>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
        <field name="name" placeholder="Name..."/>
                    </h1>
                </div>
            </sheet>
        </form>
    </field>
    </record>

<!-- Search view for reference -->
    <record id="reference_view_search" model="ir.ui.view">
        <field name="name">reference.view.search</field>
        <field name="model">reference</field>
        <field name="arch" type="xml">
        <search>
            <group expand="1" string="Group By">
                <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
            </group>
        </search>
    </field>
    </record>

<!-- Action for reference -->
    <record id="action_reference" model="ir.actions.act_window">
        <field name="name">Reference</field>
        <field name="res_model">reference</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Click to add a new reference.
        </p>
    </field>
    </record>
    </data>
</odoo>
