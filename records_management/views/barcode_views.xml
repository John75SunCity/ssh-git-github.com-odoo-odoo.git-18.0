                                    <div class="progress" style="height: 4px;">
                                        <div class="progress-bar bg-info" role="progressbar" t-att-style="'width: ' + record.battery_level.raw_value + '%'" t-att-aria-valuenow="record.battery_level.raw_value" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <small class="text-muted">Battery Level</small>
                                </div>
                                <div class="mt-2" t-if="record.scan_session_active.raw_value">
                                    <span class="badge badge-success">üîÑ Active Session</span>
                                </div>
                                <div class="mt-2">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge badge-pill badge-info">
                                        ‚è±Ô∏è <field name="last_scan_time" widget="datetime"/>
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="activity_state" widget="kanban_activity"/>
