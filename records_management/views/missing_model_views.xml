<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

<!-- container.retrieval.item views removed (unified retrieval lines) -->

        <!-- Processing Log Resolution Wizard Views -->
        <record id="processing_log_resolution_wizard_form" model="ir.ui.view">
            <field name="name">processing.log.resolution.wizard.form</field>
            <field name="model">processing.log.resolution.wizard</field>
        <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <field name="log_id"/>
                            <field name="resolution"/>
                            <field name="resolution_date"/>
                        </group>
                        <footer>
                            <button string="Resolve" type="object" name="action_resolve" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Scan Digital Asset Views -->
        <record id="scan_digital_asset_tree" model="ir.ui.view">
            <field name="name">scan.digital.asset.tree</field>
