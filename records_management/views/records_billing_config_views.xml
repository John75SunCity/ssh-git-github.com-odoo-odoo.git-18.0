<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View records.billing.config View List -->
    <record id="view_records_billing_config_list" model="ir.ui.view">
        <field name="name">view.records.billing.config.list</field>
        <field name="model">records.billing.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View records.billing.config form -->
    <record id="view_records_billing_config_form" model="ir.ui.view">
        <field name="name">view.records.billing.config.form</field>
        <field name="model">records.billing.config</field>
        <field name="arch" type="xml">
            <form string="Records Billing Config">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View records.billing.config search -->
    <record id="view_records_billing_config_search" model="ir.ui.view">
        <field name="name">view.records.billing.config.search</field>
        <field name="model">records.billing.config</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action records.billing.config -->
    <record id="action_records_billing_config" model="ir.actions.act_window">
        <field name="name">Records Billing Config</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.billing.config</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records Billing Config.
            </p>
        </field>
    </record>

</odoo>
