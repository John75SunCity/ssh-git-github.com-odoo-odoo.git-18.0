<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
<!-- Tree view for base.rate -->
    <record id="records_billing_config_view_tree" model="ir.ui.view">
        <field name="name">records.billing.config.view.tree</field>
        <field name="model">records.billing.config</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form view for base.rate -->
    <record id="records_billing_config_view_form" model="ir.ui.view">
        <field name="name">records.billing.config.view.form</field>
        <field name="model">records.billing.config</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Records Billing Config">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for base.rate -->
    <record id="records_billing_config_view_search" model="ir.ui.view">
        <field name="name">records.billing.config.view.search</field>
        <field name="model">records.billing.config</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree view for Action -->
    <record id="action_records_billing_config" model="ir.actions.act_window">
        <field name="name">Records Billing Config</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.billing.config</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records Billing Config.
            </p>
        </field>
    </record>

<!-- Tree view for ENTERPRISE -->

    <!-- Kanban view for Billing -->
    <record id="records_billing_config_view_kanban" model="ir.ui.view">
        <field name="name">records.billing.config.view.kanban</field>
        <field name="model">records.billing.config</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="billing_model" class="o_kanban_billing_config_dashboard">
                <field name="name"/>
                <field name="billing_model"/>
                <field name="active"/>
                <field name="partner_id"/>
                <field name="base_rate"/>
                <field name="auto_billing"/>
                <field name="payment_terms"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>üí≥ <field name="name"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        üë§ <field name="partner_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" title="More options"/></a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-8">
                                        <div><i class="fa fa-credit-card"/> Model: <field name="billing_model"/></div>
                                        <div><i class="fa fa-money"/> Rate: $<field name="base_rate"/></div>
                                        <div><i class="fa fa-calendar"/> Terms: <field name="payment_terms"/></div>
                                    </div>
                                    <div class="col-4">
                                        <span class="badge badge-success" t-if="record.auto_billing.raw_value">
                                            ü§ñ Auto
                                        </span>
                                        <span class="badge" t-att-class="record.active.raw_value ? 'badge-primary' : 'badge-secondary'">
                                            <t t-if="record.active.raw_value">üü¢ Active</t>
                                            <t t-else="">‚≠ï Inactive</t>
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-sm" type="object" name="action_generate_invoice">
                                            üìÑ Invoice
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-success btn-sm" type="object" name="action_view_analytics">
                                            üìä Analytics
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Config</a>
                                <a role="menuitem" type="object" name="action_view_billing_history" class="dropdown-item">üìã Billing History</a>
                                <a role="menuitem" type="object" name="action_configure_rates" class="dropdown-item">üí∞ Configure Rates</a>
                                <a role="menuitem" type="object" name="action_test_billing" class="dropdown-item">üß™ Test Billing</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="object" name="action_duplicate" class="dropdown-item">üìã Duplicate</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree view for Enhanced -->
    <record id="records_billing_config_view_tree" model="ir.ui.view">
        <field name="name">records.billing.config.view.tree</field>
        <field name="model">records.billing.config</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list decoration-success="active == True and auto_billing == True"
                  decoration-warning="billing_model == 'custom'"
                  decoration-info="payment_terms == 'net_30'">
                <field name="name" string="üí≥ Configuration Name"/>
                <field name="partner_id" string="üë§ Customer"/>
                <field name="billing_model" string="üíº Billing Model" widget="badge"/>
                <field name="base_rate" string="üí∞ Base Rate"/>
                <field name="billing_frequency" string="üìÖ Frequency"/>
                <field name="payment_terms" string="üí≥ Payment Terms"/>
                <field name="auto_billing" string="ü§ñ Auto Billing" widget="boolean_toggle"/>
                <field name="active" string="üéØ Status" widget="boolean_toggle"/>
                <field name="last_invoice_date" string="üìÑ Last Invoice"/>
                <button name="action_generate_invoice" type="object" string="Invoice"
                        icon="fa-file-text" class="btn-link"/>
                <button name="action_view_analytics" type="object" string="Analytics"
                        icon="fa-bar-chart" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- Form view for Enhanced -->
    <record id="records_billing_config_view_form" model="ir.ui.view">
        <field name="name">records.billing.config.view.form</field>
        <field name="model">records.billing.config</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_invoice" type="object" string="üìÑ Generate Invoice" class="btn-primary"/>
                    <button name="action_configure_rates" type="object" string="üí∞ Configure Rates" class="btn-secondary"/>
                    <button name="action_test_billing" type="object" string="üß™ Test Billing" class="btn-info"/>
                    <button name="action_view_analytics" type="object" string="üìä View Analytics" class="btn-success"/>
                    <button name="action_view_invoices" type="object" string="üìÑ View Invoices" class="btn-secondary"/>
                    <button name="action_view_billing_history" type="object" string="üìã View Billing History" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_invoices" icon="fa-file-text">
                            <field name="invoice_count" string="Invoices Generated" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_billing_history" icon="fa-history">
                            <field name="billing_history_count" string="Billing History" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_revenue" icon="fa-money">
                            <field name="total_revenue" string="Total Revenue" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-check-circle"
                                invisible="not auto_billing">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">ü§ñ</span>
                                <span class="o_stat_text">Automated</span>
                            </div>
                        </button>
                    </div>

                    <group>
                        <group string="üí≥ Billing Configuration">
                            <field name="name" placeholder="e.g., Standard Storage Billing"/>
                            <field name="partner_id"/>
                            <field name="billing_model"/>
                            <field name="service_category"/>
                        </group>
                        <group string="üí∞ Pricing Structure">
                            <field name="base_rate"/>
                            <field name="currency_id"/>
                            <field name="rate_unit"/>
                            <field name="minimum_charge"/>
                        </group>
                    </group>

                    <group>
                        <group string="üìÖ Billing Schedule">
                            <field name="billing_frequency"/>
                            <field name="billing_cycle_start"/>
                            <field name="next_billing_date"/>
                            <field name="auto_billing"/>
                        </group>
                        <group string="üí≥ Payment Terms">
                            <field name="payment_terms"/>
                            <field name="payment_method"/>
                            <field name="late_fee_percentage"/>
                            <field name="grace_period_days"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="üí∞ Rate Structure" name="rates">
                            <field name="billing_rate_ids" mode="list">
                                <list editable="bottom">
                                    <field name="service_type"/>
                                    <field name="rate_type"/>
                                    <field name="base_rate"/>
                                    <field name="unit_of_measure"/>
                                    <field name="tier_threshold"/>
                                    <field name="discount_percentage"/>
                                    <field name="effective_date"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìä Usage Tracking" name="usage">
                            <group>
                                <group string="üì¶ Storage Metrics">
                                    <field name="track_box_storage"/>
                                    <field name="track_document_count"/>
                                    <field name="track_access_frequency"/>
                                    <field name="track_special_handling"/>
                                </group>
                                <group string="üöö Service Metrics">
                                    <field name="track_pickup_delivery"/>
                                    <field name="track_retrieval_requests"/>
                                    <field name="track_destruction_services"/>
                                    <field name="track_digital_services"/>
                                </group>
                            </group>
                            <field name="usage_tracking_ids" mode="list">
                                <list>
                                    <field name="tracking_date"/>
                                    <field name="service_type"/>
                                    <field name="quantity"/>
                                    <field name="unit_rate"/>
                                    <field name="total_cost"/>
                                    <field name="billable"/>
                                    <field name="invoice_status"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìÑ Invoice Generation" name="invoicing">
                            <group>
                                <group string="üìù Invoice Settings">
                                    <field name="invoice_template_id"/>
                                    <field name="consolidate_charges"/>
                                    <field name="prorate_monthly"/>
                                    <field name="include_usage_details"/>
                                </group>
                                <group string="üìß Delivery Settings">
                                    <field name="send_invoice_email"/>
                                    <field name="invoice_email_template_id"/>
                                    <field name="cc_accounting"/>
                                    <field name="reminder_schedule"/>
                                </group>
                            </group>
                            <field name="invoice_generation_log_ids" mode="list">
                                <list>
                                    <field name="generation_date"/>
                                    <field name="invoice_number"/>
                                    <field name="period_start"/>
                                    <field name="period_end"/>
                                    <field name="amount"/>
                                    <field name="status"/>
                                    <button name="action_view_invoice" type="object" string="View" icon="fa-eye" class="btn-link"/>
                                </list>
                            </field>
                        </page>
                        <page string="üéØ Discounts &amp; Promotions" name="discounts">
                            <field name="discount_rule_ids" mode="list">
                                <list editable="bottom">
                                    <field name="rule_name"/>
                                    <field name="discount_type"/>
                                    <field name="discount_value"/>
                                    <field name="minimum_threshold"/>
                                    <field name="valid_from"/>
                                    <field name="valid_until"/>
                                    <field name="auto_apply"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìä Revenue Analytics" name="analytics">
                            <group>
                                <group string="üí∞ Revenue Metrics">
                                    <field name="monthly_revenue" readonly="1"/>
                                    <field name="quarterly_revenue" readonly="1"/>
                                    <field name="annual_revenue" readonly="1"/>
                                    <field name="average_monthly_billing" readonly="1"/>
                                </group>
                                <group string="üìà Performance Indicators">
                                    <field name="billing_accuracy_rate" readonly="1"/>
                                    <field name="collection_rate" readonly="1"/>
                                    <field name="payment_delay_average" readonly="1"/>
                                    <field name="customer_satisfaction_score" readonly="1"/>
                                </group>
                            </group>
                            <field name="revenue_analytics_ids" mode="list">
                                <list>
                                    <field name="period"/>
                                    <field name="service_category"/>
                                    <field name="revenue_amount"/>
                                    <field name="cost_amount"/>
                                    <field name="profit_margin"/>
                                    <field name="customer_count"/>
                                </list>
                            </field>
                        </page>
                        <page string="üîî Notifications &amp; Alerts" name="notifications">
                            <group>
                                <group string="üì± Alert Settings">
                                    <field name="billing_failure_alerts"/>
                                    <field name="payment_overdue_alerts"/>
                                    <field name="usage_threshold_alerts"/>
                                    <field name="revenue_variance_alerts"/>
                                </group>
                                <group string="üë• Recipients">
                                    <field name="finance_team_notifications"/>
                                    <field name="manager_notifications"/>
                                    <field name="customer_notifications"/>
                                    <field name="escalation_notifications"/>
                                </group>
                            </group>
                        </page>
                        <page string="üîß Advanced Configuration" name="advanced">
                            <group>
                                <group string="üîó Integration Settings">
                                    <field name="accounting_system_sync"/>
                                    <field name="payment_gateway_integration"/>
                                    <field name="tax_calculation_method"/>
                                    <field name="multi_currency_support"/>
                                </group>
                                <group string="üîê Security &amp; Compliance">
                                    <field name="audit_trail_enabled"/>
                                    <field name="data_retention_period"/>
                                    <field name="encryption_enabled"/>
                                    <field name="compliance_reporting"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree view for Calendar -->
    <record id="records_billing_config_view_calendar" model="ir.ui.view">
        <field name="name">records.billing.config.view.calendar</field>
        <field name="model">records.billing.config</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar string="üìÖ Billing Schedule"
                      date_start="next_billing_date"
                      color="billing_model">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="billing_frequency"/>
                <field name="base_rate"/>
                <field name="auto_billing"/>
            </calendar>
        </field>
    </record>

    <!-- Search view for Enhanced -->
    <record id="records_billing_config_view_search" model="ir.ui.view">
        <field name="name">records.billing.config.view.search</field>
        <field name="model">records.billing.config</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Configuration"/>
                <field name="partner_id"/>
                <field name="billing_model"/>
                <field name="service_category"/>

                <filter string="üü¢ Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="‚≠ï Inactive" name="inactive" domain="[('active', '=', False)]"/>

                <separator/>
                <filter string="ü§ñ Auto Billing" name="auto_billing" domain="[('auto_billing', '=', True)]"/>
                <filter string="üìã Manual Billing" name="manual_billing" domain="[('auto_billing', '=', False)]"/>

                <separator/>
                <filter string="üìÖ Monthly" name="monthly" domain="[('billing_frequency', '=', 'monthly')]"/>
                <filter string="üìÜ Quarterly" name="quarterly" domain="[('billing_frequency', '=', 'quarterly')]"/>
                <filter string="üóìÔ∏è Annual" name="annual" domain="[('billing_frequency', '=', 'annual')]"/>

                <separator/>
                <filter string="üí∞ High Value (&amp;gt;$1000)" name="high_value" domain="[('base_rate', '&amp;gt;', 1000)]"/>
                <filter string="‚ö° Due This Week" name="due_this_week"
                        domain="[('next_billing_date', '&amp;gt;=', context_today), ('next_billing_date', '&lt;=', (context_today + relativedelta(days=7)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="üìä Group By">
                    <filter string="Customer" name="group_by_customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Billing Model" name="group_by_model" context="{'group_by': 'billing_model'}"/>
                    <filter string="Service Category" name="group_by_category" context="{'group_by': 'service_category'}"/>
                    <filter string="Billing Frequency" name="group_by_frequency" context="{'group_by': 'billing_frequency'}"/>
                    <filter string="Payment Terms" name="group_by_terms" context="{'group_by': 'payment_terms'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree view for ENTERPRISE -->
    <record id="action_billing_config" model="ir.actions.act_window">
        <field name="name">üí≥ Billing Configuration</field>
        <field name="res_model">records.billing.config</field>
        <field name="view_mode">kanban,list,form,calendar</field>
        <field name="search_view_id" ref="records_billing_config_view_search"/>
        <field name="context">{
            'search_default_active': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üí≥ Create your first billing configuration!
            </p>
            <p>
                <b>Enterprise Billing Management System:</b><br/>
                ‚Ä¢ üí∞ Flexible multi-tier rate structures<br/>
                ‚Ä¢ ü§ñ Automated billing and invoice generation<br/>
                ‚Ä¢ üìä Real-time usage tracking and analytics<br/>
                ‚Ä¢ üéØ Advanced discount and promotion management<br/>
                ‚Ä¢ üìÖ Flexible billing cycles and schedules<br/>
                ‚Ä¢ üí≥ Multiple payment method support<br/>
                ‚Ä¢ üìß Automated notifications and reminders<br/>
                ‚Ä¢ üîó Seamless accounting system integration<br/>
                ‚Ä¢ üìà Comprehensive revenue analytics and reporting
            </p>
        </field>
    </record>
</data>

</odoo>
