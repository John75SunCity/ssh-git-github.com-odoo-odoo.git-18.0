<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit base user form to inject Records Profile selector and ensure Related Partner visible -->
        <record id="view_users_form_inherit_records_profile" model="ir.ui.view">
            <field name="name">res.users.view.form.inherit.records.profile</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <!-- Robust insertion: some variants of the user form may not expose groups_id directly at this hierarchy level.
                     We fall back to appending our group near the end of the main sheet to avoid xpath failures. -->
                <xpath expr="//sheet" position="inside">
                    <group string="Records Management Access" colspan="2">
                        <field name="records_user_profile" widget="statusbar" options="{'clickable': True}"/>
                        <field name="partner_required" invisible="1"/>
                    </group>
                    <!-- Portal User Instructions -->
                    <div class="alert alert-info" role="alert" invisible="partner_required == False">
                        <strong>ğŸ¢ Portal User Company Assignment Required</strong>
                        <br/>Portal users represent a specific customer company and can only access that company's data.
                        You must select an existing customer company in the "Related Partner" field below.
                        <br/><br/>
                        <strong>How it works:</strong>
                        <ul>
                            <li>Portal user sees only their company's records (invoices, orders, documents, etc.)</li>
                            <li>Company-based access control ensures data security</li>
                            <li>User inherits permissions based on their assigned company</li>
                        </ul>
                        <em>ğŸ’¡ Tip: If the company doesn't exist, create it first in Contacts â†’ Customers, then return here.</em>
                    </div>
                </xpath>
                <!-- Enhance partner_id field for portal users with proper domain and help text -->
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="invisible">0</attribute>
                    <attribute name="readonly">partner_required == False</attribute>
                    <attribute name="force_save">1</attribute>
                    <attribute name="domain">[('is_company', '=', True), ('customer_rank', '>', 0)]</attribute>
                    <attribute name="context">{'search_default_is_company': 1, 'search_default_customer': 1, 'default_is_company': True}</attribute>
                    <attribute name="help">ğŸ¢ Portal User Company Assignment: Select the customer company this user represents. This determines which records they can access through the portal. For internal users, this field is auto-managed.</attribute>
                    <attribute name="placeholder">ğŸ” Search and select customer company...</attribute>
                    <attribute name="options">{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}</attribute>
                    <attribute name="required">partner_required == True</attribute>
                    <attribute name="string">Customer Company</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
