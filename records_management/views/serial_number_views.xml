<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- List view for serial_number -->
<record id="serial_number_view_tree" model="ir.ui.view">
    <field name="name">serial_number.view.tree</field>
    <field name="model">serial_number</field>
    <field name="arch" type="xml">
        <list>
            <field name="name"/>
        </list>
    </field>
</record>

<!-- Form view for serial_number -->
<record id="serial_number_view_form" model="ir.ui.view">
    <field name="name">serial_number.view.form</field>
    <field name="model">serial_number</field>
    <field name="arch" type="xml">
        <form string="Serial Number">
            <sheet>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
                        <field name="name" placeholder="Name..."/>
                    </h1>
                </div>
            </sheet>
        </form>
    </field>
</record>

<!-- Search view for serial_number -->
<record id="serial_number_view_search" model="ir.ui.view">
    <field name="name">serial_number.view.search</field>
    <field name="model">serial_number</field>
    <field name="arch" type="xml">
        <search>
            <group expand="1" string="Group By">
                <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
            </group>
        </search>
    </field>
</record>

<!-- Action for serial_number -->
<record id="action_serial_number" model="ir.actions.act_window">
    <field name="name">Serial Number</field>
    <field name="res_model">serial_number</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Click to add a new serial number.
        </p>
    </field>
</record>

</odoo>
