<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for records.config.setting -->
    <record id="view_records_config_setting_tree" model="ir.ui.view">
        <field name="name">records.config.setting.tree</field>
        <field name="model">records.config.setting</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for records.config.setting -->
    <record id="view_records_config_setting_form" model="ir.ui.view">
        <field name="name">records.config.setting.form</field>
        <field name="model">records.config.setting</field>
        <field name="arch" type="xml">
            <form string="Records Config Setting">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for records.config.setting -->
    <record id="view_records_config_setting_search" model="ir.ui.view">
        <field name="name">records.config.setting.search</field>
        <field name="model">records.config.setting</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action records.config.setting -->
    <record id="action_records_config_setting" model="ir.actions.act_window">
        <field name="name">Records Config Setting</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.config.setting</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records Config Setting.
            </p>
        </field>
    </record>

</odoo>
