<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ========================================================== -->
        <!-- MAINTENANCE REQUEST VIEWS - Records Management Integration -->
        <!-- ========================================================== -->
        <!-- NOTE: These are STANDALONE views (not inheritances) for the -->
        <!-- maintenance.request model extended by records_management -->
        <!-- ========================================================== -->

        <!-- FORM VIEW -->
        <record id="maintenance_request_view_form" model="ir.ui.view">
            <field name="name">maintenance.request.form.records</field>
            <field name="model">maintenance.request</field>
            <field name="priority">25</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_create_invoice" type="object" string="Create Invoice" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group string="Request Information">
                                <field name="equipment_id"/>
                                <field name="maintenance_team_id"/>
                                <field name="request_date"/>
                                <field name="priority"/>
                            </group>
                            <group string="Related Records">
                                <field name="records_container_id"/>
                            </group>
                        </group>
                        <notebook>
                            <!-- Cost Tracking Tab -->
                            <page string="Cost Tracking" name="cost_tracking">
                                <group>
                                    <group string="Cost Summary">
                                        <field name="cost" readonly="1" widget="monetary"/>
                                        <field name="currency_id"/>
                                    </group>
                                    <group string="Cost Breakdown">
                                        <field name="labor_cost" widget="monetary"/>
                                        <field name="parts_cost" widget="monetary"/>
                                        <field name="external_cost" widget="monetary"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- LIST VIEW -->
        <record id="maintenance_request_view_list" model="ir.ui.view">
            <field name="name">maintenance.request.list.records</field>
            <field name="model">maintenance.request</field>
            <field name="priority">25</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="equipment_id"/>
                    <field name="maintenance_team_id"/>
                    <field name="cost" widget="monetary" optional="show"/>
                    <field name="priority" optional="show"/>
                    <field name="request_date" optional="show"/>
                    <field name="records_container_id" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- SEARCH VIEW -->
        <record id="maintenance_request_view_search" model="ir.ui.view">
            <field name="name">maintenance.request.search.records</field>
            <field name="model">maintenance.request</field>
            <field name="priority">25</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Request"/>
                    <field name="cost"/>
                    <field name="priority"/>
                    <field name="request_date"/>
                    <field name="equipment_id"/>
                    <field name="records_container_id"/>
                    <separator/>
                    <filter name="filter_high_cost" string="High Cost" domain="[('cost', '&gt;=', 1000)]"/>
                    <filter name="filter_priority_high" string="High Priority" domain="[('priority', '=', '3')]"/>
                    <filter name="filter_has_container" string="Has Related Container" domain="[('records_container_id', '!=', False)]"/>
                    <separator/>
                    <group string="Group By">
                        <filter name="group_by_priority" string="Priority" context="{'group_by': 'priority'}"/>
                        <filter name="group_by_equipment" string="Equipment" context="{'group_by': 'equipment_id'}"/>
                        <filter name="group_by_team" string="Team" context="{'group_by': 'maintenance_team_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- KANBAN VIEW -->
        <record id="maintenance_request_view_kanban" model="ir.ui.view">
            <field name="name">maintenance.request.kanban.records</field>
            <field name="model">maintenance.request</field>
            <field name="priority">25</field>
            <field name="arch" type="xml">
                <kanban default_group_by="priority">
                    <field name="name"/>
                    <field name="cost"/>
                    <field name="priority"/>
                    <field name="records_container_id"/>
                    <templates>
                        <t t-name="card">
                            <div class="o_kanban_card">
                                <div class="o_kanban_card_header">
                                    <h5 class="o_kanban_card_title">
                                        <t t-esc="record.name.value"/>
                                    </h5>
                                </div>
                                <div class="o_kanban_card_body">
                                    <span t-if="record.cost.raw_value" class="badge bg-info">
                                        <t t-esc="record.cost.value"/>
                                    </span>
                                    <span t-attf-class="badge #{record.priority.raw_value == '3' and 'bg-danger' or record.priority.raw_value == '2' and 'bg-warning' or 'bg-success'}">
                                        <t t-esc="record.priority.value"/>
                                    </span>
                                    <span t-if="record.records_container_id.value" class="badge bg-secondary">
                                        Container: <t t-esc="record.records_container_id.value"/>
                                    </span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>        <!-- GRAPH VIEW -->
        <record id="maintenance_request_view_graph" model="ir.ui.view">
            <field name="name">maintenance.request.graph.records</field>
            <field name="model">maintenance.request</field>
            <field name="priority">25</field>
            <field name="arch" type="xml">
                <graph string="Maintenance Requests Analysis" type="bar">
                    <field name="cost" type="measure"/>
                    <field name="priority" type="row"/>
                </graph>
            </field>
        </record>

        <!-- PIVOT VIEW -->
        <record id="maintenance_request_view_pivot" model="ir.ui.view">
            <field name="name">maintenance.request.pivot.records</field>
            <field name="model">maintenance.request</field>
            <field name="priority">25</field>
            <field name="arch" type="xml">
                <pivot string="Maintenance Requests Analysis">
                    <field name="cost" type="measure"/>
                    <field name="priority" type="row"/>
                    <field name="equipment_id" type="col"/>
                </pivot>
            </field>
        </record>

    </data>
</odoo>
