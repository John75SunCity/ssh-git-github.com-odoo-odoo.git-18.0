<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Custom Box Volume Calculator Wizard Form -->
        <record id="view_custom_box_volume_calculator_form" model="ir.ui.view">
            <field name="name">custom.box.volume.calculator.form</field>
            <field name="model">custom.box.volume.calculator</field>
            <field name="arch" type="xml">
                <form string="Custom Box Volume Calculator">
                    <header>
                        <button name="action_recalculate" string="Recalculate" type="object" class="btn-secondary"/>
                        <button name="action_reset" string="Reset" type="object" class="btn-secondary"/>
                        <button name="action_apply_to_service" string="Apply to Service" type="object" class="btn-primary"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="custom_dimensions_display" readonly="1" placeholder="Enter box dimensions..."/>
                            </h1>
                            <h3>Custom Box Volume Calculator</h3>
                        </div>

                        <group>
                            <group string="Custom Box Dimensions (inches)">
                                <field name="custom_length" widget="float" digits="[12, 1]"/>
                                <field name="custom_width" widget="float" digits="[12, 1]"/>
                                <field name="custom_height" widget="float" digits="[12, 1]"/>
                                <field name="custom_volume" readonly="1" widget="float" digits="[12, 0]"/>
                            </group>

                            <group string="Standard Box Reference">
                                <field name="standard_dimensions_display" readonly="1"/>
                                <field name="standard_length" readonly="1" widget="float" digits="[12, 1]"/>
                                <field name="standard_width" readonly="1" widget="float" digits="[12, 1]"/>
                                <field name="standard_height" readonly="1" widget="float" digits="[12, 1]"/>
                                <field name="standard_volume" readonly="1" widget="float" digits="[12, 0]"/>
                            </group>
                        </group>

                        <group>
                            <group string="Volume Equivalency">
                                <field name="volume_ratio" readonly="1" widget="float" digits="[12, 3]"/>
                                <field name="equivalent_boxes" readonly="1" widget="float" digits="[12, 2]"/>
                            </group>

                            <group string="Pricing Calculation">
                                <field name="standard_box_rate" widget="monetary"/>
                                <field name="calculated_price" readonly="1" widget="monetary"/>
                            </group>
                        </group>

                        <separator string="Pricing Explanation"/>
                        <field name="pricing_explanation" readonly="1" nolabel="1" widget="text"/>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action to open the calculator -->
        <record id="action_custom_box_volume_calculator" model="ir.actions.act_window">
            <field name="name">Custom Box Volume Calculator</field>
            <field name="res_model">custom.box.volume.calculator</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- Menu item for technicians -->
        <menuitem id="menu_custom_box_calculator" name="Box Volume Calculator" parent="records_management.menu_records_tools" action="action_custom_box_volume_calculator" sequence="30"/>

    </data>
</odoo>
