<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View wizard.template View List -->
    <record id="view_wizard_template_list" model="ir.ui.view">
        <field name="name">view.wizard.template.list</field>
        <field name="model">wizard.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View wizard.template form -->
    <record id="view_wizard_template_form" model="ir.ui.view">
        <field name="name">view.wizard.template.form</field>
        <field name="model">wizard.template</field>
        <field name="arch" type="xml">
            <form string="Wizard Template">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View wizard.template search -->
    <record id="view_wizard_template_search" model="ir.ui.view">
        <field name="name">view.wizard.template.search</field>
        <field name="model">wizard.template</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action wizard.template -->
    <record id="action_wizard_template" model="ir.actions.act_window">
        <field name="name">Wizard Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.template</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Wizard Template.
            </p>
        </field>
    </record>

</odoo>
