<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- List view for wizard.template -->
<record id="wizard_template_view_tree" model="ir.ui.view">
    <field name="name">wizard.template.view.tree</field>
    <field name="model">wizard.template</field>
    <field name="arch" type="xml">
        <list>
<field name="reason"/>
<field name="confirm_action"/>

        </list>
    </field>
</record>

<!-- Form view for wizard.template -->
<record id="wizard_template_view_form" model="ir.ui.view">
    <field name="name">wizard.template.view.form</field>
    <field name="model">wizard.template</field>
    <field name="arch" type="xml">
        <form string="Wizard Template">
            <sheet>
<group>
<field name="note"/>
<field name="reason"/>
<field name="confirm_action"/>
</group>
<footer>
<button name="action_apply" string="Apply" type="object" class="btn-primary"/>
<button name="action_cancel" string="Cancel" class="btn-secondary" special="cancel"/>
</footer>
            </sheet>
        </form>
    </field>
</record>

<!-- Search view for wizard.template -->
<record id="wizard_template_view_search" model="ir.ui.view">
    <field name="name">wizard.template.view.search</field>
    <field name="model">wizard.template</field>
    <field name="arch" type="xml">
        <search>
<field name="reason"/>
<filter string="Confirmed" name="confirmed" domain="[('confirm_action', '=', True)]"/>

            <group expand="1" string="Group By">
<filter string="Confirm Action" name="confirm_action" domain="[]" context="{'group_by':'confirm_action'}"/>

            </group>
        </search>
    </field>
</record>

<!-- List view for Action -->
<record id="action_wizard_template" model="ir.actions.act_window">
    <field name="name">Wizard Template</field>
    <field name="res_model">wizard.template</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            There is no examples click here to add new Wizard Template.
        </p>
    </field>
</record>

</odoo>
