<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree view for advanced.billing.line (simple version) - Renamed to follow pattern as primary -->
        <record id="advanced_billing_line_view_tree" model="ir.ui.view">
            <field name="name">advanced.billing.line.view.tree</field>
            <field name="model">advanced.billing.line</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <!-- Form view for advanced.billing.line (simple version) - Renamed to follow Odoo naming pattern as primary form -->
        <record id="advanced_billing_line_view_form" model="ir.ui.view">
            <field name="name">advanced.billing.line.view.form</field>
            <field name="model">advanced.billing.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Advanced Billing Line">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view for advanced.billing.line -->
        <record id="advanced_billing_line_view_search" model="ir.ui.view">
            <field name="name">advanced.billing.line.view.search</field>
            <field name="model">advanced.billing.line</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="1" string="Group By">
                        <filter string="Name" name="name" domain="[('name', '!=', False)]" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Tree view for advanced.billing.line (detailed version) - Renamed to follow Odoo naming pattern -->
        <record id="advanced_billing_line_view_list" model="ir.ui.view">
            <field name="name">advanced.billing.line.view.list</field>
            <field name="model">advanced.billing.line</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="billing_id"/>
                </list>
            </field>
        </record>

        <!-- Form view for advanced.billing.line (detailed version) - Renamed to follow Odoo naming pattern with suffix for distinction -->
        <record id="advanced_billing_line_view_form_detailed" model="ir.ui.view">
            <field name="name">advanced.billing.line.view.form.detailed</field>
            <field name="model">advanced.billing.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Advanced Billing Line">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                            <field name="billing_id"/>
                            <field name="sequence"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for advanced.billing.line (updated to reference the primary tree view) -->
        <record id="advanced_billing_line_action" model="ir.actions.act_window">
            <field name="name">Advanced Billing Lines</field>
            <field name="res_model">advanced.billing.line</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="advanced_billing_line_view_tree"/>
            <field name="search_view_id" ref="advanced_billing_line_view_search"/>
            <field name="context">{'search_default_filter_active': 1}</field>
            <field name="help">Manage billing line items</field>
        </record>

        <!-- Menu item for advanced.billing.line -->
        <menuitem id="advanced_billing_line_menu"
                  name="Billing Lines"
                  parent="records_management.menu_records_billing"
                  action="advanced_billing_line_action"
                  sequence="23"/>
    </data>
</odoo>
