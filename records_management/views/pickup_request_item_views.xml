<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pickup_request_item_view_tree" model="ir.ui.view">
            <field name="name">pickup.request.item.view.tree</field>
            <field name="model">pickup.request.item</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                </list>
            </field>
        </record>
        <record id="pickup_request_item_view_form" model="ir.ui.view">
            <field name="name">pickup.request.item.view.form</field>
            <field name="model">pickup.request.item</field>
            <field name="arch" type="xml">
                <form string="Pickup Request Item">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Name..." />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="pickup_request_item_view_search" model="ir.ui.view">
            <field name="name">pickup.request.item.view.search</field>
            <field name="model">pickup.request.item</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="1" string="Group By">
                        <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="action_pickup_request_item" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model pickup.request.item has state field - consider using default search filters -->
            <field name="name">Pickup Request Item</field>
            <field name="res_model">pickup.request.item</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
            There is no examples click here to add new Pickup Request Item.
        </p>
            </field>
        </record>
    </data>
</odoo>
