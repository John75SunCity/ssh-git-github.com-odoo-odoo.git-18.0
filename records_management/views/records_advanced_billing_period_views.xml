<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View records.advanced.billing.period View List -->
    <record id="view_records_advanced_billing_period_list" model="ir.ui.view">
        <field name="name">view.records.advanced.billing.period.list</field>
        <field name="model">records.advanced.billing.period</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View records.advanced.billing.period form -->
    <record id="view_records_advanced_billing_period_form" model="ir.ui.view">
        <field name="name">view.records.advanced.billing.period.form</field>
        <field name="model">records.advanced.billing.period</field>
        <field name="arch" type="xml">
            <form string="Records Advanced Billing Period">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View records.advanced.billing.period search -->
    <record id="view_records_advanced_billing_period_search" model="ir.ui.view">
        <field name="name">view.records.advanced.billing.period.search</field>
        <field name="model">records.advanced.billing.period</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action records.advanced.billing.period -->
    <record id="action_records_advanced_billing_period" model="ir.actions.act_window">
        <field name="name">Records Advanced Billing Period</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">records.advanced.billing.period</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Records Advanced Billing Period.
            </p>
        </field>
    </record>

</odoo>
