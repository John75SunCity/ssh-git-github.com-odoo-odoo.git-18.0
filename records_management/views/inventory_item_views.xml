<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="inventory_item_view_tree" model="ir.ui.view">
            <field name="name">inventory.item.view.tree</field>
            <field name="model">inventory.item</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <tree string="Inventory Item">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="serial_number"/>
                    <field name="location_id"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="inventory_item_view_form" model="ir.ui.view">
            <field name="name">inventory.item.view.form</field>
            <field name="model">inventory.item</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <form string="Inventory Item">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="serial_number"/>
                            <field name="location_id"/>
                            <field name="status"/>
                            <field name="acquisition_date"/>
                            <field name="notes"/>
                            <field name="active"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="inventory_item_view_search" model="ir.ui.view">
            <field name="name">inventory.item.view.search</field>
            <field name="model">inventory.item</field>
            <field name="type">tree</field>
        <field name="arch" type="xml">
                <search string="Search Inventory Item">
                    <field name="name"/>
                    <field name="status"/>
                    <field name="location_id"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_inventory_item" model="ir.actions.act_window">
            <field name="name">Inventory Item</field>
            <field name="res_model">inventory.item</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <!--
        <menuitem
            id="menu_inventory_item"
            name="Inventory Item"
            action="action_inventory_item"
            parent="REPLACE_WITH_PARENT_MENU_ID"
            sequence="10"/>
        -->

    </data>
</odoo>
