<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="shredding_inventory_batch_view_tree" model="ir.ui.view">
            <field name="name">shredding.inventory.batch.view.tree</field>
            <field name="model">shredding.inventory.batch</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                </list>
            </field>
        </record>
        <record id="shredding_inventory_batch_view_form" model="ir.ui.view">
            <field name="name">shredding.inventory.batch.view.form</field>
            <field name="model">shredding.inventory.batch</field>
            <field name="arch" type="xml">
                <form string="Shredding Inventory Batch">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Name..." />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="shredding_inventory_batch_view_search" model="ir.ui.view">
            <field name="name">shredding.inventory.batch.view.search</field>
            <field name="model">shredding.inventory.batch</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="1" string="Group By">
                        <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="action_shredding_inventory_batch" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model shredding.inventory.batch has state field - consider using default search filters -->
            <field name="name">Shredding Inventory Batch</field>
            <field name="res_model">shredding.inventory.batch</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
            There is no examples click here to add new Shredding Inventory Batch.
        </p>
            </field>
        </record>
    </data>
</odoo>
