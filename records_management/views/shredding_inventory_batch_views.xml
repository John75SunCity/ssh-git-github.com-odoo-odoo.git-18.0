<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view for shredding.inventory.batch -->
    <record id="view_shredding_inventory_batch_tree" model="ir.ui.view">
        <field name="name">shredding.inventory.batch.tree</field>
        <field name="model">shredding.inventory.batch</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for shredding.inventory.batch -->
    <record id="view_shredding_inventory_batch_form" model="ir.ui.view">
        <field name="name">shredding.inventory.batch.form</field>
        <field name="model">shredding.inventory.batch</field>
        <field name="arch" type="xml">
            <form string="Shredding Inventory Batch">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for shredding.inventory.batch -->
    <record id="view_shredding_inventory_batch_search" model="ir.ui.view">
        <field name="name">shredding.inventory.batch.search</field>
        <field name="model">shredding.inventory.batch</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action shredding.inventory.batch -->
    <record id="action_shredding_inventory_batch" model="ir.actions.act_window">
        <field name="name">Shredding Inventory Batch</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shredding.inventory.batch</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Shredding Inventory Batch.
            </p>
        </field>
    </record>

</odoo>
