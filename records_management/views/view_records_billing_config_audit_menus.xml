<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Records Billing Config Audit Views -->

    <!-- Tree View -->
    <record id="records_billing_config_audit_view_tree" model="ir.ui.view">
        <field name="name">records.billing.config.audit.view.tree</field>
        <field name="model">records.billing.config.audit</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <list string="Billing Config Audit" default_order="audit_date desc">
                <field name="name"/>
                <field name="audit_date"/>
                <field name="action_type"/>
                <field name="user_id"/>
                <field name="approval_status"/>
                <field name="financial_impact" sum="Total Impact"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="records_billing_config_audit_view_form" model="ir.ui.view">
        <field name="name">records.billing.config.audit.view.form</field>
        <field name="model">records.billing.config.audit</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Billing Config Audit">
                <header>
<button name="action_submit_for_approval" string="Submit for Approval" type="object" class="btn-primary" invisible="approval_status != 'draft'"/>

<button name="action_approve" string="Approve" type="object" class="btn-success" groups="records_management.group_records_manager" invisible="approval_status != 'pending'"/>

<button name="action_reject" string="Reject" type="object" class="btn-danger" groups="records_management.group_records_manager" invisible="approval_status != 'pending'"/>

                    <field name="approval_status" widget="statusbar" statusbar_visible="draft,pending,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Audit Description"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="billing_config_id"/>
                            <field name="action_type"/>
                            <field name="audit_date"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="financial_impact"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="approval_required"/>
                            <field name="approved_by"/>
                            <field name="approval_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Change Details">
                            <group>
                                <group>
                                    <field name="field_changed"/>
                                    <field name="old_value"/>
                                </group>
                                <group>
                                    <field name="new_value"/>
                                    <field name="change_reason"/>
                                </group>
                            </group>
                        </page>
                        <page string="Impact Assessment">
                            <group>
                                <field name="impact_assessment" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Compliance">
                            <group>
                                <field name="compliance_notes" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Session Info">
                            <group>
                                <group>
                                    <field name="session_id"/>
                                    <field name="ip_address"/>
                                </group>
                                <group>
                                    <field name="user_agent"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="records_billing_config_audit_view_search" model="ir.ui.view">
        <field name="name">records.billing.config.audit.view.search</field>
        <field name="model">records.billing.config.audit</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Billing Config Audit">
                <field name="name"/>
                <field name="billing_config_id"/>
                <field name="user_id"/>
                <field name="action_type"/>
                <field name="field_changed"/>
                <separator/>
                <filter name="filter_pending_approval" string="Pending Approval" domain="[('approval_status', '=', 'pending')]"/>
                <filter name="filter_approved" string="Approved" domain="[('approval_status', '=', 'approved')]"/>
                <filter name="filter_high_impact" string="High Financial Impact" domain="[('financial_impact', '>', 1000)]"/>
                <separator/>
                <filter name="filter_today" string="Today" domain="[('audit_date', '=', today)]"/>
                <filter name="filter_this_week" string="This Week" domain="[('audit_date', '>=', (context_today - datetime.timedelta(days=7)))]"/>
                <filter name="filter_this_month" string="This Month" domain="[('audit_date', '>=', (context_today.replace(day=1)))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_action_type" string="Action Type" context="{'group_by': 'action_type'}"/>
                    <filter name="group_user" string="User" context="{'group_by': 'user_id'}"/>
                    <filter name="group_approval_status" string="Approval Status" context="{'group_by': 'approval_status'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'audit_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_records_billing_config_audit" model="ir.actions.act_window">
        <field name="name">Billing Config Audit</field>
        <field name="res_model">records.billing.config.audit</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No audit records found!
            </p>
            <p>
                Audit records are automatically created when billing configurations are modified.
            </p>
        </field>
    </record>

    <!-- Kanban View for Enhanced Visual Management -->
    <record id="records_billing_config_audit_view_kanban" model="ir.ui.view">
        <field name="name">records.billing.config.audit.view.kanban</field>
        <field name="model">records.billing.config.audit</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="approval_status">
                <field name="name"/>
                <field name="audit_date"/>
                <field name="action_type"/>
                <field name="user_id"/>
                <field name="financial_impact"/>
                <field name="approval_status"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="action_type"/>
                                        </span>
                                    </div>
                                    <div class="o_kanban_record_right">
                                        <div class="o_dropdown_kanban dropdown" t-if="widget.deletable or widget.editable">
                                            <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li t-if="widget.editable"><a t-attf-href="#" type="edit">Edit</a></li>
                                                <li t-if="widget.deletable"><a t-attf-href="#" type="delete">Delete</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <strong>User:</strong> <field name="user_id"/>
                                    </div>
                                    <div>
                                        <strong>Date:</strong> <field name="audit_date"/>
                                    </div>
                                    <div t-if="record.financial_impact.raw_value">
<strong>Impact:</strong>
                                        <field name="financial_impact" widget="monetary"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge" t-att-class="record.approval_status.raw_value == 'approved' ? 'badge-success' : (record.approval_status.raw_value == 'pending' ? 'badge-warning' : 'badge-secondary')">
                                            <field name="approval_status"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View for Timeline Management -->
    <record id="records_billing_config_audit_view_calendar" model="ir.ui.view">
        <field name="name">records.billing.config.audit.view.calendar</field>
        <field name="model">records.billing.config.audit</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
<calendar string="Billing Config Audit Calendar" date_start="audit_date"
                     color="approval_status"
                     mode="month">
                <field name="name"/>
                <field name="action_type"/>
                <field name="user_id"/>
                <field name="financial_impact"/>
            </calendar>
        </field>
    </record>

    <!-- Graph View for Financial Impact Analysis -->
    <record id="records_billing_config_audit_view_graph" model="ir.ui.view">
        <field name="name">records.billing.config.audit.view.graph</field>
        <field name="model">records.billing.config.audit</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <graph string="Audit Financial Impact Analysis" type="bar">
                <field name="action_type" type="row"/>
                <field name="financial_impact" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View for Advanced Analytics -->
    <record id="records_billing_config_audit_view_pivot" model="ir.ui.view">
        <field name="name">records.billing.config.audit.view.pivot</field>
        <field name="model">records.billing.config.audit</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <pivot string="Billing Config Audit Analysis" display_quantity="true">
                <field name="action_type" type="row"/>
                <field name="approval_status" type="col"/>
                <field name="financial_impact" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Enhanced Menu Structure -->
    <menuitem id="menu_records_billing_config_audit_root"
              name="Billing Config Audit"
              parent="records_management.menu_records_billing"
              sequence="30"/>

    <menuitem id="menu_records_billing_config_audit"
              name="Audit Records"
              parent="menu_records_billing_config_audit_root"
              action="action_records_billing_config_audit"
              sequence="10"/>

    <!-- Manager-Only Approval Dashboard -->
    <record id="action_records_billing_config_audit_pending" model="ir.actions.act_window">
        <field name="name">Pending Approvals</field>
        <field name="res_model">records.billing.config.audit</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('approval_status', '=', 'pending')]</field>
        <field name="context">{'search_default_filter_pending_approval': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No pending approvals!
            </p>
            <p>
                Billing configuration changes requiring approval will appear here.
            </p>
        </field>
    </record>

    <menuitem id="menu_records_billing_config_audit_pending"
              name="Pending Approvals"
              parent="menu_records_billing_config_audit_root"
              action="action_records_billing_config_audit_pending"
              groups="records_management.group_records_manager"
              sequence="20"/>

    <!-- High Impact Changes Dashboard -->
    <record id="action_records_billing_config_audit_high_impact" model="ir.actions.act_window">
        <field name="name">High Impact Changes</field>
        <field name="res_model">records.billing.config.audit</field>
        <field name="view_mode">list,form,graph,pivot</field>
        <field name="domain">[('financial_impact', '>', 1000)]</field>
        <field name="context">{'search_default_filter_high_impact': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No high impact changes found!
            </p>
            <p>
                Billing configuration changes with significant financial impact will appear here.
            </p>
        </field>
    </record>

    <menuitem id="menu_records_billing_config_audit_high_impact"
              name="High Impact Changes"
              parent="menu_records_billing_config_audit_root"
              action="action_records_billing_config_audit_high_impact"
              groups="records_management.group_records_manager"
              sequence="30"/>

    <!-- Server Actions for Bulk Operations -->
    <record id="server_action_approve_multiple_audits" model="ir.actions.server">
        <field name="name">Approve Selected Audits</field>
        <field name="model_id" ref="records_management.model_records_billing_config_audit"/>
        <field name="binding_model_id" ref="records_management.model_records_billing_config_audit"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(6, 0, [ref('records_management.group_records_manager')])]"/>
        <field name="code">
if records:
    approved_count = 0
    for record in records:
        if record.approval_status == 'pending':
            record.action_approve()
            approved_count += 1

    if approved_count > 0:
        env.user.notify_info(message=f'Successfully approved {approved_count} audit record(s)')
    else:
        env.user.notify_warning(message='No pending audit records were selected')
        </field>
    </record>

    <record id="server_action_reject_multiple_audits" model="ir.actions.server">
        <field name="name">Reject Selected Audits</field>
        <field name="model_id" ref="records_management.model_records_billing_config_audit"/>
        <field name="binding_model_id" ref="records_management.model_records_billing_config_audit"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(6, 0, [ref('records_management.group_records_manager')])]"/>
        <field name="code">
if records:
    rejected_count = 0
    for record in records:
        if record.approval_status == 'pending':
            record.action_reject()
            rejected_count += 1

    if rejected_count > 0:
        env.user.notify_info(message=f'Successfully rejected {rejected_count} audit record(s)')
    else:
        env.user.notify_warning(message='No pending audit records were selected')
        </field>
    </record>
</data>
</odoo>
