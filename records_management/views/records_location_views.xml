<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- üè¢ ENTERPRISE STORAGE LOCATIONS - Hierarchical Location Management -->
    
    <!-- üé® Enhanced Kanban View for Visual Location Management -->
    <record id="view_records_location_kanban" model="ir.ui.view">
        <field name="name">records.location.kanban</field>
        <field name="model">records.location</field>
        <field name="arch" type="xml">
            <kanban default_group_by="location_type" class="o_kanban_location_dashboard">
                <field name="name"/>
                <field name="box_count"/>
                <field name="capacity"/>
                <field name="current_utilization"/>
                <field name="available_utilization"/>
                <field name="available_spaces"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        <i class="fa fa-building-o" title="Location Type"/> <field name="location_type"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#" title="More options"><i class="fa fa-ellipsis-v" title="More options"/></a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="o_kanban_primary_left">
                                    <div class="row">
                                        <div class="col-6">
                                            <button class="btn btn-primary btn-sm" type="object" name="action_view_boxes">
                                                <i class="fa fa-cube"/> View Boxes
                                            </button>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-right">
                                                <span class="badge badge-info">
                                                    <field name="current_utilization"/>/<field name="capacity"/> Used
                                                </span>
                                                <br/>
                                                <span class="badge badge-success">
                                                    <field name="available_spaces"/> Available
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="progress mt-2" style="height: 8px;">
                                        <div class="progress-bar bg-info" role="progressbar" 
                                             t-att-style="'width: ' + (record.current_utilization.raw_value / record.capacity.raw_value * 100) + '%'"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Location</a>
                                <a role="menuitem" type="object" name="action_view_boxes" class="dropdown-item">üì¶ View Boxes</a>
                                <a role="menuitem" type="object" name="action_location_report" class="dropdown-item">üìä Location Report</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="delete" class="dropdown-item">üóëÔ∏è Archive</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- üìã Enhanced List View with Smart Columns -->
    <record id="view_records_location_tree" model="ir.ui.view">
        <field name="name">records.location.list</field>
        <field name="model">records.location</field>
        <field name="arch" type="xml">
            <list decoration-success="current_utilization &lt; capacity * 0.8" 
                  decoration-warning="current_utilization &gt;= capacity * 0.8 and current_utilization &lt; capacity" 
                  decoration-danger="current_utilization &gt;= capacity">
                <field name="name" string="üè¢ Location Name"/>
                <field name="location_type" string="üìÇ Type"/>
                <field name="capacity" string="üî¢ Capacity"/>
                <field name="current_utilization" string="üì¶ Current Usage"/>
                <field name="current_utilization" string="üìä Utilization %" widget="percentage"/>
                <field name="available_utilization" string="üÜì Available %" widget="percentage"/>
                <field name="available_spaces" string="üì≠ Open Spaces"/>
                <field name="active" string="‚úÖ Active"/>
                <button name="action_view_boxes" type="object" string="View Boxes" 
                        icon="fa-cube" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- üìù Enhanced Form View with Smart Layout -->
    <record id="view_records_location_form" model="ir.ui.view">
        <field name="name">records.location.form</field>
        <field name="model">records.location</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_boxes" type="object" string="üì¶ View Boxes" class="btn-primary"/>
                    <button name="action_location_report" type="object" string="üìä Generate Report" class="btn-secondary"/>
                    <field name="active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_boxes" icon="fa-cube">
                            <field string="Boxes" name="box_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_location_report" icon="fa-bar-chart">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="current_utilization"/>%</span>
                                <span class="o_stat_text">Utilization</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" icon="fa-check-circle" style="color: green;">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="available_spaces"/></span>
                                <span class="o_stat_text">Available</span>
                            </div>
                        </button>
                    </div>
                    
                    <group>
                        <group string="üè¢ Location Information">
                            <field name="name" placeholder="e.g., Building A - Section 1"/>
                            <field name="location_type"/>
                            <field name="parent_id" string="Parent Location"/>
                        </group>
                        <group string="üìä Capacity &amp; Usage">
                            <field name="capacity"/>
                            <field name="current_utilization"/>
                            <field name="current_utilization" widget="percentage"/>
                            <separator string="Available Space"/>
                            <field name="available_utilization" widget="percentage"/>
                            <field name="available_spaces"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="üì¶ Stored Boxes" name="boxes">
                            <field name="box_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="customer_id"/>
                                    <field name="state"/>
                                    <field name="storage_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìã Details &amp; Notes" name="details">
                            <group>
                                <field name="description" placeholder="Location description and special instructions..."/>
                                <field name="access_instructions"/>
                                <field name="security_level"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- üîç Enhanced Search View with Smart Filters -->
    <record id="view_records_location_search" model="ir.ui.view">
        <field name="name">records.location.search</field>
        <field name="model">records.location</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Location" 
                       filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>
                <field name="location_type"/>
                
                <filter string="üü¢ Available Space" name="available_space" 
                        domain="[('current_utilization', '&lt;', 'capacity')]"/>
                <filter string="üü° Near Capacity" name="near_capacity" 
                        domain="[('current_utilization', '&gt;=', 'capacity * 0.8')]"/>
                <filter string="üî¥ At Capacity" name="at_capacity" 
                        domain="[('current_utilization', '&gt;=', 'capacity')]"/>
                        
                <separator/>
                <filter string="üÜì High Availability (>50%)" name="high_availability" 
                        domain="[('available_utilization', '&gt;', 50)]"/>
                <filter string="üì≠ 10+ Open Spaces" name="many_open_spaces" 
                        domain="[('available_spaces', '&gt;=', 10)]"/>
                <filter string="üéØ Optimal Load (20-80%)" name="optimal_load" 
                        domain="[('current_utilization', '&gt;=', 20), ('current_utilization', '&lt;=', 80)]"/>
                
                <separator/>
                <filter string="üì¶ Active Locations" name="active" domain="[('active', '=', True)]"/>
                <filter string="üìÅ Archived Locations" name="inactive" domain="[('active', '=', False)]"/>
                
                <group expand="0" string="üìä Group By">
                    <filter string="Type" name="group_by_type" context="{'group_by': 'location_type'}"/>
                    <filter string="Parent Location" name="group_by_parent" context="{'group_by': 'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- üöÄ ENTERPRISE ACTION - Multiple View Modes with Smart Defaults -->
    <record id="action_records_location" model="ir.actions.act_window">
        <field name="name">üè¢ Storage Locations</field>
        <field name="res_model">records.location</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_records_location_search"/>
        <field name="context">{
            'search_default_active': 1,
            'search_default_available_space': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üè¢ Create your first storage location!
            </p>
            <p>
                <b>Enterprise Storage Management:</b><br/>
                ‚Ä¢ üì¶ Track box locations with visual kanban boards<br/>
                ‚Ä¢ üìä Monitor capacity utilization in real-time<br/>
                ‚Ä¢ üîç Smart search with advanced filters<br/>
                ‚Ä¢ üè¢ Hierarchical location organization<br/>
                ‚Ä¢ üì± Mobile-optimized for facility operations
            </p>
        </field>
    </record>
</odoo>
