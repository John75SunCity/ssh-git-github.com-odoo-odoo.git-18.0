<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Records Location Views -->
    <record id="view_records_location_tree" model="ir.ui.view">
        <field name="name">records.location.tree</field>
        <field name="model">records.location</field>
        
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="complete_name"/>
                <field name="parent_id"/>
                <field name="capacity"/>
                <field name="box_count"/>
                <field name="used_capacity"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_records_location_form" model="ir.ui.view">
        <field name="name">records.location.form</field>
        <field name="model">records.location</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Location Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="parent_id"/>
                            <field name="capacity"/>
                        </group>
                        <group>
                            <field name="box_count"/>
                            <field name="used_capacity"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_records_location" model="ir.actions.act_window">
        <field name="name">Storage Locations</field>
        <field name="res_model">records.location</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first storage location!
            </p>
            <p>
                Define storage locations to track where your boxes and documents are stored.
            </p>
        </field>
    </record>
</odoo>
