<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Kanban view for Enhanced -->
        <record id="records_location_view_kanban" model="ir.ui.view">
            <field name="name">records.location.view.kanban</field>
            <field name="model">records.location</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban default_group_by="location_type" class="o_kanban_location_dashboard">
                    <field name="name"/>
                    <field name="location_type"/>
                    <field name="current_utilization"/>
                    <field name="storage_capacity"/>
                    <field name="available_spaces"/>
                    <field name="utilization_percentage"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <strong>
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_secondary">
                                            <i class="fa fa-building-o" title="Location Type"/>
                                            <field name="location_type"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#" title="More options">
                                            <i class="fa fa-ellipsis-v" title="More options"/>
                                        </a>
                                    </div>
                                </div>
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="row">
                                            <div class="col-6">
                                                <button class="btn btn-primary btn-sm" type="object" name="action_view_containers">
                                                    <i class="fa fa-cube"/>
 View Containers
                                                </button>
                                            </div>
                                            <div class="col-6">
                                                <div class="text-right">
                                                    <span class="badge badge-info">
                                                        <field name="current_utilization"/>
/                                                    <field name="storage_capacity"/>
 Used
                                                </span>
                                                <br/>
                                                <span class="badge badge-success">
                                                    <field name="available_spaces"/>
 Available
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="progress mt-2" style="height: 8px;">
                                        <div class="progress-bar bg-info" role="progressbar" t-att-style="'width: ' + (record.utilization_percentage.raw_value or 0) + '%'"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="edit" class="dropdown-item">‚úèÔ∏è Edit Location</a>
                                <a role="menuitem" type="object" name="action_view_containers" class="dropdown-item">üì¶ View Containers</a>
                                <a role="menuitem" type="object" name="action_location_report" class="dropdown-item">üìä Location Report</a>
                                <div class="dropdown-divider"/>
                                <a role="menuitem" type="delete" class="dropdown-item">üóëÔ∏è Archive</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree view for Enhanced -->
    <record id="records_location_view_tree" model="ir.ui.view">
        <field name="name">records.location.view.tree</field>
        <field name="model">records.location</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <tree decoration-success="current_utilization &amp;lt; storage_capacity * 0.8" decoration-warning="current_utilization &amp;gt;= storage_capacity * 0.8 and current_utilization &lt; storage_capacity" decoration-danger="current_utilization &amp;gt;= storage_capacity">
                <field name="name" string="üè¢ Location Name"/>
                <field name="location_type" string="üìÇ Type"/>
                <field name="storage_capacity" string="üî¢ Capacity"/>
                <field name="current_utilization" string="üì¶ Current Usage"/>
                <field name="available_spaces" string="üÜì Available Spaces"/>
                <field name="utilization_percentage" string="üìä Utilization %" widget="percentage"/>
                <field name="active" string="‚úÖ Active"/>
                <button name="action_view_containers" type="object" string="View Containers" icon="fa-cube" class="btn-link"/>
            </tree>
        </field>
    </record>

    <!-- Form view for Enhanced -->
    <record id="records_location_view_form" model="ir.ui.view">
        <field name="name">records.location.view.form</field>
        <field name="model">records.location</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_containers" type="object" string="üì¶ View Containers" class="btn-primary"/>
                    <button name="action_location_report" type="object" string="üìä Generate Report" class="btn-secondary"/>
                    <field name="active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_containers" icon="fa-cube">
                            <field string="Containers" name="current_utilization" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_location_report" icon="fa-bar-chart">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="utilization_percentage"/>
%</span>
                                <span class="o_stat_text">Utilization</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" icon="fa-check-circle" style="color: green;">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="available_spaces"/>
                                </span>
                                <span class="o_stat_text">Available</span>
                            </div>
                        </button>
                    </div>

                    <group>
                        <group string="üè¢ Location Information">
                            <field name="name" placeholder="e.g., Building A - Section 1"/>
                            <field name="location_type"/>
                            <field name="parent_location_id" string="Parent Location"/>
                        </group>
                        <group string="üìä Capacity &amp;amp; Usage">
                            <field name="storage_capacity"/>
                            <field name="current_utilization"/>
                            <field name="available_spaces"/>
                            <field name="utilization_percentage" widget="percentage"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="üì¶ Stored Containers" name="containers">
                            <field name="container_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="state"/>
                                    <field name="storage_start_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="üìã Details &amp;amp; Notes" name="details">
                            <group>
                                <field name="description" placeholder="Location description and special instructions..."/>
                                <field name="access_instructions"/>
                                <field name="security_level"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view for Enhanced -->
    <record id="records_location_view_search" model="ir.ui.view">
        <field name="name">records.location.view.search</field>
        <field name="model">records.location</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Location" filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>
                <field name="location_type"/>

                <filter string="üü¢ Available Space" name="available_space" domain="[('available_spaces', '&amp;gt;', 0)]"/>
                <filter string="üü° Near Capacity" name="near_capacity" domain="[('utilization_percentage', '&amp;gt;=', 80)]"/>
                <filter string="üî¥ At Capacity" name="at_capacity" domain="[('current_utilization', '&amp;gt;=', 'storage_capacity')]"/>

                <separator/>
                <filter string="üéØ Optimal Load (20-80%)" name="optimal_load" domain="[('utilization_percentage', '&amp;gt;=', 20), ('utilization_percentage', '&lt;=', 80)]"/>
                <filter string="üÜì Lots of Space (&amp;gt;10)" name="lots_of_space" domain="[('available_spaces', '&amp;gt;', 10)]"/>

                <separator/>
                <filter string="üì¶ Active Locations" name="active" domain="[('active', '=', True)]"/>
                <filter string="üìÅ Archived Locations" name="inactive" domain="[('active', '=', False)]"/>

                <group expand="0" string="üìä Group By">
                    <filter string="Type" name="group_by_type" context="{'group_by': 'location_type'}"/>
                    <filter string="Parent Location" name="group_by_parent" context="{'group_by': 'parent_location_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree view for ENTERPRISE -->
    <record id="action_records_location" model="ir.actions.act_window">
        <field name="name">üè¢ Storage Locations</field>
        <field name="res_model">records.location</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="records_location_view_search"/>
        <field name="context">{
            'search_default_active': 1,
            'search_default_available_space': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üè¢ Create your first storage location!
            </p>
            <p>
                <b>Enterprise Storage Management:</b>
                <br/>
                ‚Ä¢ üì¶ Track box locations with visual kanban boards<br/>
                ‚Ä¢ üìä Monitor capacity utilization in real-time<br/>
                ‚Ä¢ üîç Smart search with advanced filters<br/>
                ‚Ä¢ üè¢ Hierarchical location organization<br/>
                ‚Ä¢ üì± Mobile-optimized for facility operations
</p>
</field>
</record>
</data>
</odoo>
</data>
</odoo>
