<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="records_location_view_kanban" model="ir.ui.view">
            <field name="name">records.location.view.kanban</field>
            <field name="model">stock.location</field>
            <field name="arch" type="xml">
                <kanban default_group_by="usage" class="o_kanban_location_dashboard">
                    <field name="name" />
                    <field name="usage" />
                    <field name="max_capacity" />
                    <field name="active" />
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <strong>
                                                <field name="name" />
                                            </strong>
                                        </div>
                                        <div class="o_secondary">
                                            <i class="fa fa-building-o" title="Location Type" />
                                            <field name="usage" />
                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#" title="More options">
                                            <i class="fa fa-ellipsis-v" role="img" aria-label="More options" title="More options" />
                                        </a>
                                    </div>
                                </div>
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="row">
                                            <div class="col-6">
                                                <button name="action_view_containers" type="object" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-cube" aria-hidden="true" />
                                                    View Containers
                                                </button>
                                            </div>
                                            <div class="col-6">
                                                <div class="text-right">
                                                    <span class="badge badge-info">
                                                        Capacity:
                                                        <field name="max_capacity" />
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">
                                        <i class="fa fa-edit" title="Edit" />
                                        Edit Location
                                    </a>
                                    <a role="menuitem" type="object" name="action_view_containers" class="dropdown-item">
                                        <i class="fa fa-cube" title="Containers" />
                                        View Containers
                                    </a>
                                    <div class="dropdown-divider" />
                                    <a role="menuitem" type="object" name="toggle_active" class="dropdown-item">
                                        <i class="fa fa-archive" title="Archive/Unarchive Location" />
                                        <t t-if="record.active.raw_value">Archive</t>
                                        <t t-else="">Unarchive</t>
                                    </a>
                                    <a role="menuitem" type="object" name="action_duplicate" class="dropdown-item">
                                        <i class="fa fa-copy" title="Duplicate" />
                                        Duplicate
                                    </a>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="records_location_view_tree" model="ir.ui.view">
            <field name="name">records.location.view.tree</field>
            <field name="model">stock.location</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" string="Location Name" />
                    <field name="location_id" string="Parent Location" optional="show"/>
                    <field name="usage" string="Type" />
                    <field name="max_capacity" string="Capacity" />
                    <field name="active" string="Active" />
                    <button name="action_view_containers" type="object" string="View Containers" icon="fa-cube" class="btn-link" />
                </list>
            </field>
        </record>
        <!-- Hierarchy View for Locations -->
        <record id="records_location_view_hierarchy" model="ir.ui.view">
            <field name="name">records.location.view.hierarchy</field>
            <field name="model">stock.location</field>
            <field name="arch" type="xml">
                <!-- parent_field: location_id (inherited from stock.location) -->
                <!-- child_field: child_ids (inherited from stock.location) -->
                <hierarchy string="Location Hierarchy" parent_field="location_id" child_field="child_ids">
                    <field name="name"/>
                    <field name="usage"/>
                    <field name="max_capacity"/>
                    <field name="active"/>
                </hierarchy>
            </field>
        </record>
        <record id="records_location_view_form" model="ir.ui.view">
            <field name="name">records.location.view.form</field>
            <field name="model">stock.location</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_view_containers" type="object" string="View Containers" class="btn-primary" />
                        <field name="active" widget="boolean_toggle" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_containers" type="object" class="oe_stat_button" icon="fa-cube">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">View</span>
                                    <span class="o_stat_text">Containers</span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group string="Location Information">
                                <field name="name" placeholder="e.g., Building A - Section 1" />
                                <field name="usage" />
                                <field name="location_id" string="Parent Location" />
                            </group>
                            <group string="Capacity">
                                <field name="max_capacity" />
                            </group>
                        </group>
                        <notebook>
                            <page name="containers" string="Stored Containers">
                                <field name="container_ids" mode="list">
                                    <list>
                                        <field name="name" />
                                        <field name="partner_id" />
                                        <field name="state" />
                                        <field name="storage_start_date" />
                                    </list>
                                </field>
                            </page>
                            <page name="details" string="Details &amp; Notes">
                                <group>
                                    <field name="comment" placeholder="Location description and special instructions..." />
                                    <field name="security_level" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="records_location_view_search" model="ir.ui.view">
            <field name="name">records.location.view.search</field>
            <field name="model">stock.location</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Location" filter_domain="['|', ('name', 'ilike', '%s'), ('comment', 'ilike', '%s')]" />
                    <field name="usage" />
                    <separator />
                    <filter name="active" string="Active Locations" domain="[('active', '=', True)]" />
                    <filter name="inactive" string="Archived Locations" domain="[('active', '=', False)]" />
                    <group string="Group By" expand="0">
                        <filter name="group_by_type" string="Type" context="{'group_by': 'usage'}" />
                        <filter name="group_by_parent" string="Parent Location" context="{'group_by': 'location_id'}" />
                    </group>
                </search>
            </field>
        </record>
        
        <!-- NEW: Stock Location Action for Records Management -->
        <record id="action_stock_location_records" model="ir.actions.act_window">
            <field name="name">Storage Locations (Inventory Integration)</field>
            <field name="res_model">stock.location</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_records_location', '=', True)]</field>
            <field name="context">{
                'default_is_records_location': True,
                'default_usage': 'internal'
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Records Management locations configured yet!
                </p>
                <p>
                    <b>‚úÖ Unified Inventory System:</b> Records Management now uses Odoo's native stock locations.
                </p>
                <p>
                    <b>üìã To create a records storage location:</b>
                </p>
                <ol>
                    <li>Go to <b>Inventory ‚Üí Configuration ‚Üí Locations</b></li>
                    <li>Create or edit a location</li>
                    <li>Check the box: <b>"Is Records Location"</b></li>
                    <li>The location will appear here automatically</li>
                </ol>
                <p>
                    <b>üí° Benefits:</b>
                </p>
                <ul>
                    <li>‚úÖ No data duplication</li>
                    <li>‚úÖ Barcode scanning integration</li>
                    <li>‚úÖ Stock transfer automation</li>
                    <li>‚úÖ Warehouse hierarchy support</li>
                </ul>
            </field>
        </record>
        
        <record id="action_records_location" model="ir.actions.act_window">
            <!-- LEGACY ACTION: Kept for backward compatibility -->
            <field name="name">Storage Locations (Legacy)</field>
            <field name="res_model">stock.location</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="records_location_view_search" />
            <field name="context">{
                'search_default_active': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-exclamation-triangle"/> Legacy location model
                </p>
                <p>
                    <b>‚ö†Ô∏è DEPRECATED:</b> Use the <b>Stock Location Integration</b> menu instead.
                </p>
                <p>
                    This legacy model is being phased out. Please use:
                    <br/><b>Records Management ‚Üí Storage Locations (Inventory Integration)</b>
                </p>
            </field>
        </record>
        
        <!-- Keep original action for existing records -->
        <record id="action_records_location_legacy" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model records.location has state field - consider using default search filters -->
            <field name="name">Storage Locations</field>
            <field name="res_model">stock.location</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="records_location_view_search" />
            <field name="context">{
                'search_default_active': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-map-marker"/> No storage locations yet!
                </p>
                <p>
                    <b>‚ö†Ô∏è IMPORTANT:</b> Storage locations are <b>REQUIRED</b> before creating containers.
                </p>
                <p>
                    <b>üìã Creating a hierarchical location structure:</b>
                </p>
                <ol>
                    <li>Click <b>New</b> to create a <b>top-level location</b> (e.g., "Warehouse A")
                        <ul>
                            <li>Enter a name (e.g., "Warehouse A")</li>
                            <li>Leave <b>Parent Location</b> empty</li>
                            <li>Set <b>Location Type</b> to "Warehouse"</li>
                            <li>Enter <b>Max Capacity</b> (optional)</li>
                        </ul>
                    </li>
                    <li>Create <b>sub-locations</b> (e.g., "Section A1")
                        <ul>
                            <li>Click <b>New</b> again</li>
                            <li>Enter name "Section A1"</li>
                            <li>Set <b>Parent Location</b> to "Warehouse A"</li>
                            <li>Set <b>Location Type</b> to "Section"</li>
                        </ul>
                    </li>
                    <li>Create <b>storage spots</b> (e.g., "Spot A1-001")
                        <ul>
                            <li>Click <b>New</b> once more</li>
                            <li>Enter name "Spot A1-001"</li>
                            <li>Set <b>Parent Location</b> to "Section A1"</li>
                            <li>Set <b>Location Type</b> to "Storage Spot"</li>
                        </ul>
                    </li>
                </ol>
                <p>
                    <b>Example hierarchy:</b><br/>
                    üì¶ Warehouse A<br/>
                    &#160;&#160;&#160;‚îî‚îÄ üìÅ Section A1<br/>
                    &#160;&#160;&#160;&#160;&#160;&#160;‚îú‚îÄ üìç Spot A1-001<br/>
                    &#160;&#160;&#160;&#160;&#160;&#160;‚îú‚îÄ üìç Spot A1-002<br/>
                    &#160;&#160;&#160;&#160;&#160;&#160;‚îî‚îÄ üìç Spot A1-003
                </p>
                <p>
                    <b>üöÄ Key Features:</b><br/>
                    ‚Ä¢ Hierarchical location organization<br/>
                    ‚Ä¢ Real-time capacity tracking<br/>
                    ‚Ä¢ Visual kanban boards<br/>
                    ‚Ä¢ Mobile-optimized for facility operations
                </p>
            </field>
        </record>
        <!-- Technical tree view to satisfy default tree view resolution in x2many and tests -->
        <record id="records_location_view_tree_technical" model="ir.ui.view">
            <field name="name">records.location.view.tree.technical</field>
            <field name="model">stock.location</field>
            <field name="priority" eval="0"/>
            <field name="arch" type="xml">
                <list string="Locations (Technical)">
                    <field name="name"/>
                    <!-- Use correct hierarchy parent field (inherited from stock.location) -->
                    <field name="location_id" string="Parent Location"/>
                    <!-- Show utilization percentage (existing compute field) instead of non-existent capacity_utilization -->
                    <field name="utilization_percentage"/>
                </list>
            </field>
        </record>
    </data>
</odoo>
