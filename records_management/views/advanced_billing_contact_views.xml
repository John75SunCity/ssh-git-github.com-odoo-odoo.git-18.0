<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List view for advanced.billing.contact -->
    <record id="advanced_billing_contact_view_tree" model="ir.ui.view">
        <field name="name">advanced.billing.contact.view.tree</field>
        <field name="model">advanced.billing.contact</field>
        <field name="arch" type="xml">
            <list string="Billing Contacts" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="contact_type"/>
                <field name="primary_contact"/>
                <field name="preferred_communication"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form view for advanced.billing.contact -->
    <record id="advanced_billing_contact_view_form" model="ir.ui.view">
        <field name="name">advanced.billing.contact.view.form</field>
        <field name="model">advanced.billing.contact</field>
        <field name="arch" type="xml">
            <form string="Billing Contact">
                <header>
                    <button name="action_set_primary" string="Set as Primary" type="object"
                            class="btn-primary" invisible="primary_contact"/>
                    <button name="action_contact_now" string="Record Contact" type="object"
                            class="btn-secondary"/>
                    <field name="active" widget="statusbar" statusbar_visible="active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Contact Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Contact Information">
                            <field name="email" required="1"/>
                            <field name="phone"/>
                            <field name="contact_type"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Communication Preferences">
                            <field name="preferred_communication"/>
                            <field name="language"/>
                            <field name="timezone"/>
                            <field name="last_contact_date" readonly="1"/>
                        </group>
                    </group>
                    <group string="Invoice Preferences">
                        <field name="receive_storage_invoices"/>
                        <field name="receive_service_invoices"/>
                        <field name="receive_statements"/>
                        <field name="receive_reminders"/>
                    </group>
                    <group string="Contact Status">
                        <field name="primary_contact"/>
                        <field name="billing_profile_id" readonly="1"/>
                        <field name="partner_id" readonly="1"/>
                        <field name="company_id" readonly="1"/>
                    </group>
                    <field name="notes"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view for advanced.billing.contact -->
    <record id="advanced_billing_contact_view_search" model="ir.ui.view">
        <field name="name">advanced.billing.contact.view.search</field>
        <field name="model">advanced.billing.contact</field>
        <field name="arch" type="xml">
            <search string="Search Billing Contacts">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="contact_type"/>
                <field name="billing_profile_id"/>
                <field name="partner_id"/>
                <field name="primary_contact"/>
                <field name="preferred_communication"/>
                <field name="active"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_contact_type" string="Contact Type" context="{'group_by': 'contact_type'}"/>
                    <filter name="group_by_billing_profile" string="Billing Profile" context="{'group_by': 'billing_profile_id'}"/>
                    <filter name="group_by_partner" string="Customer" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_primary" string="Primary Contact" context="{'group_by': 'primary_contact'}"/>
                    <filter name="group_by_communication" string="Preferred Communication" context="{'group_by': 'preferred_communication'}"/>
                </group>
                <filter name="filter_primary_contacts" string="Primary Contacts" domain="[('primary_contact', '=', True)]"/>
                <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="filter_inactive" string="Inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action for advanced.billing.contact -->
    <record id="advanced_billing_contact_action" model="ir.actions.act_window">
        <field name="name">Billing Contacts</field>
        <field name="res_model">advanced.billing.contact</field>
    <field name="view_mode">list,form</field>
        <field name="view_id" ref="advanced_billing_contact_view_tree"/>
        <field name="search_view_id" ref="advanced_billing_contact_view_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help">Manage billing contacts for customer billing profiles</field>
    </record>

    <!-- Menu item for advanced.billing.contact -->
    <menuitem id="advanced_billing_contact_menu"
              name="Billing Contacts"
              parent="records_management.menu_records_billing"
              action="advanced_billing_contact_action"
              sequence="25"/>
</odoo>
