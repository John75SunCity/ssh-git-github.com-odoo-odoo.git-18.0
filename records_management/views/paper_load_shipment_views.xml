<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Tree view for Paper -->

    <!-- Tree view for base.rate -->
    <record id="paper_load_shipment_view_tree" model="ir.ui.view">
        <field name="name">paper.load.shipment.view.tree</field>
        <field name="model">paper.load.shipment</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <list string="Load Shipments" decoration-success="status=='paid'" decoration-info="status=='delivered'" decoration-warning="status=='in_transit'" decoration-primary="status=='ready_pickup'" sample="1">
                <field name="load_number"/>
                <field name="pickup_date"/>
                <field name="driver_name"/>
                <field name="partner_id"/>
                <field name="bale_count" sum="Total Bales"/>
                <field name="total_weight_lbs" sum="Total Weight (lbs)"/>
                <field name="total_weight_kg" sum="Total Weight (kg)"/>
                <field name="white_paper_count"/>
                <field name="mixed_paper_count"/>
                <field name="cardboard_count"/>
                <field name="status" widget="badge" decoration-success="status=='paid'" decoration-info="status=='delivered'" decoration-warning="status=='in_transit'"/>
                <field name="manifest_generated" widget="boolean_toggle"/>
                <field name="mobile_manifest" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form view for base.rate -->
    <record id="paper_load_shipment_view_form" model="ir.ui.view">
        <field name="name">paper.load.shipment.view.form</field>
        <field name="model">paper.load.shipment</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <form string="Load Shipment">
                <header>
                    <button name="action_schedule_pickup" string="Schedule Pickup" type="object" class="btn-primary" invisible="status != 'draft'"/>
                    <button name="action_ready_for_pickup" string="Ready for Pickup" type="object" class="btn-primary" invisible="status != 'scheduled'"/>
                    <button name="action_generate_manifest" string="Generate Manifest" type="object" class="btn-warning" invisible="status not in ['scheduled', 'ready_pickup']"/>
                    <button name="action_mark_in_transit" string="Mark In Transit" type="object" class="btn-success" invisible="status != 'ready_pickup'"/>
                    <button name="action_mark_delivered" string="Mark Delivered" type="object" class="btn-info" invisible="status != 'in_transit'"/>
                    <button name="action_create_invoice" string="Create Invoice" type="object" class="btn-warning" invisible="status != 'delivered'"/>
                    <button name="action_mark_paid" string="Mark Paid" type="object" class="btn-success" invisible="status != 'invoiced'"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,scheduled,ready_pickup,in_transit,delivered,invoiced,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_add_bales_to_load" type="object" class="oe_stat_button" icon="fa-cubes">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="bale_count"/>
                                </span>
                                <span class="o_stat_text">Bales</span>
                            </div>
                        </button>
                        <button name="action_view_weight_breakdown" type="object" class="oe_stat_button" icon="fa-balance-scale">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="total_weight_lbs" widget="float"/>
                                </span>
                                <span class="o_stat_text">Total lbs</span>
                            </div>
                        </button>
                        <button name="action_view_manifest" type="object" class="oe_stat_button" icon="fa-file-text" invisible="not manifest_generated">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View Manifest</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="load_number"/>
                        </h1>
                        <div class="o_row">
                            <field name="pickup_date"/>
                            <span class="mx-2">•</span>
                            <field name="driver_name"/>
                            <span class="mx-2">•</span>
                            <field name="partner_id" options="{'no_create': True}"/>
                        </div>
                    </div>

                    <!-- Tree view for Truck -->
                    <div class="row" name="truck_visualization" invisible="bale_count == 0">
                        <div class="col-12">
                            <div class="o_group">
                                <div class="o_group_header">
                                    <h5>Load Progress Visualization</h5>
                                </div>
                                <!-- Tree view for Custom -->
                                <field name="bale_count" widget="paper_load_progress" nolabel="1"/>
                            </div>
                        </div>
                    </div>

                    <group>
                        <group name="pickup_info" string="Pickup Information">
                            <field name="pickup_date"/>
                            <field name="pickup_time"/>
                            <field name="driver_name"/>
                            <field name="driver_phone"/>
                            <field name="driver_license"/>
                        </group>
                        <group name="transportation" string="Transportation">
                            <field name="truck_info"/>
                            <field name="transportation_company"/>
                            <field name="destination_address"/>
                            <field name="delivery_notes"/>
                        </group>
                    </group>

                    <group>
                        <group name="load_summary" string="Load Summary">
                            <field name="total_weight_lbs" readonly="1"/>
                            <field name="total_weight_kg" readonly="1"/>
                            <field name="bale_count" readonly="1"/>
                        </group>
                        <group name="grade_breakdown" string="Paper Grade Breakdown">
                            <label for="white_paper_weight" string="White Paper:"/>
                            <div class="o_row">
                                <field name="white_paper_weight" readonly="1"/>
 lbs
                                (                                <field name="white_paper_count" readonly="1"/>
 bales)
                            </div>
                            <label for="mixed_paper_weight" string="Mixed Paper:"/>
                            <div class="o_row">
                                <field name="mixed_paper_weight" readonly="1"/>
 lbs
                                (                                <field name="mixed_paper_count" readonly="1"/>
 bales)
                            </div>
                            <label for="cardboard_weight" string="Cardboard:"/>
                            <div class="o_row">
                                <field name="cardboard_weight" readonly="1"/>
 lbs
                                (                                <field name="cardboard_count" readonly="1"/>
 bales)
                            </div>
                        </group>
                    </group>

                    <group name="signatures" string="Signatures and Documentation">
                        <field name="manifest_generated" widget="boolean_toggle"/>
                        <field name="manifest_number" readonly="manifest_generated"/>
                        <field name="manifest_date" readonly="1"/>
                        <field name="driver_signature_date" readonly="1"/>
                        <field name="company_signature_date" readonly="1"/>
                        <field name="signed_by" readonly="1"/>
                    </group>

                    <group name="payment_tracking" string="Payment Tracking">
                        <field name="invoice_amount"/>
                        <field name="invoice_date"/>
                        <field name="payment_due_date"/>
                        <field name="payment_received_date"/>
                        <field name="payment_amount"/>
                        <field name="payment_notes"/>
                    </group>

                    <group name="mobile_integration" string="Mobile Integration">
                        <field name="mobile_manifest" widget="boolean_toggle"/>
                        <field name="gps_pickup_location"/>
                        <field name="gps_delivery_location"/>
                    </group>

                    <notebook>
                        <page string="Bales in Load" name="bales">
                            <field name="bale_ids" context="{'default_load_shipment_id': active_id}">
                                <list string="Paper Bales" editable="bottom">
                                    <field name="display_name"/>
                                    <field name="bale_number"/>
                                    <field name="paper_grade"/>
                                    <field name="weight_lbs" sum="Total Weight"/>
                                    <field name="production_date"/>
                                    <field name="weighed_by"/>
                                    <field name="status"/>
                                    <field name="mobile_entry" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                    <group name="system_info" string="System Information">
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban view for Kanban -->
    <record id="paper_load_shipment_view_kanban" model="ir.ui.view">
        <field name="name">paper.load.shipment.view.kanban</field>
        <field name="model">paper.load.shipment</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column" sample="1">
                <field name="load_number"/>
                <field name="pickup_date"/>
                <field name="driver_name"/>
                <field name="partner_id"/>
                <field name="bale_count"/>
                <field name="total_weight_lbs"/>
                <field name="status"/>
                <field name="manifest_generated"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="load_number"/>
                                    </strong>
                                    <span class="float-end">
                                        <field name="status" widget="label_selection" options="{'classes': {'draft': 'secondary', 'scheduled': 'primary', 'ready_pickup': 'warning', 'in_transit': 'info', 'delivered': 'success', 'invoiced': 'warning', 'paid': 'success'}}"/>
                                    </span>
                                </div>
                                <span class="o_kanban_record_subtitle text-muted">
                                    <field name="driver_name"/>
 •                                    <field name="pickup_date"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <!-- Tree view for Load -->
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between">
                                        <small>
                                            <strong>
                                                <field name="bale_count"/>
 bales</strong>
                                        </small>
                                        <small>
                                            <strong>
                                                <field name="total_weight_lbs"/>
 lbs</strong>
                                        </small>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-success" role="progressbar" t-att-style="'width: ' + str(min(100, (record.bale_count.raw_value or 0) * 2)) + '%'">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <strong>Customer:</strong>
                                        <field name="partner_id"/>
                                        <br/>
                                        <span t-if="record.manifest_generated.raw_value" class="float-end">
                                            <i class="fa fa-file-text-o text-success" title="Manifest Generated"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search view for base.rate -->
    <record id="paper_load_shipment_view_search" model="ir.ui.view">
        <field name="name">paper.load.shipment.view.search</field>
        <field name="model">paper.load.shipment</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Load Shipments">
                <field name="load_number"/>
                <field name="driver_name"/>
                <field name="partner_id"/>

                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Scheduled" name="scheduled" domain="[('status', '=', 'scheduled')]"/>
                <filter string="Ready for Pickup" name="ready_pickup" domain="[('status', '=', 'ready_pickup')]"/>
                <filter string="In Transit" name="in_transit" domain="[('status', '=', 'in_transit')]"/>
                <filter string="Delivered" name="delivered" domain="[('status', '=', 'delivered')]"/>
                <filter string="Invoiced" name="invoiced" domain="[('status', '=', 'invoiced')]"/>
                <filter string="Paid" name="paid" domain="[('status', '=', 'paid')]"/>

                <separator/>
                <filter string="Manifest Generated" name="manifest_generated" domain="[('manifest_generated', '=', True)]"/>
                <filter string="Mobile Manifest" name="mobile_manifest" domain="[('mobile_manifest', '=', True)]"/>

                <separator/>
                <filter string="Today" name="today" domain="[('pickup_date', '=', context_today)]"/>
                <filter string="This Week" name="this_week" domain="[('pickup_date', '&amp;gt;=', (context_today - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" domain="[('pickup_date', '&amp;gt;=', (context_today.replace(day=1)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Pickup Date" name="group_pickup_date" context="{'group_by': 'pickup_date'}"/>
                    <filter string="Driver" name="group_driver" context="{'group_by': 'driver_name'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree view for Action -->
    <record id="action_paper_load_shipment" model="ir.actions.act_window">
        <field name="name">Load Shipments</field>
        <field name="res_model">paper.load.shipment</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_paper_load_shipment_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first load shipment!
            </p>
            <p>
                Track load shipments from scheduling through to payment.
                Generate manifests and manage driver pickups with mobile integration.
            </p>
        </field>
    </record>

<!-- Tree view for Paper -->

    <!-- Tree view for Main -->
    <menuitem id="menu_paper_recycling" name="Paper Recycling" parent="records_management_main_menu" sequence="25" groups="records_management.group_records_user"/>

    <!-- Tree view for Paper -->
    <menuitem id="menu_paper_bales" name="Paper Bales" parent="menu_paper_recycling" action="action_paper_bale_recycling" sequence="10" groups="records_management.group_records_user"/>

    <!-- Tree view for Load -->
    <menuitem id="menu_load_shipments" name="Load Shipments" parent="menu_paper_recycling" action="action_paper_load_shipment" sequence="20" groups="records_management.group_records_user"/>

    <!-- Tree view for Paper -->
    <record id="action_paper_recycling_dashboard" model="ir.actions.act_window">
        <field name="name">Paper Recycling Dashboard</field>
        <field name="res_model">paper.load.shipment</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="view_id" ref="view_paper_load_shipment_kanban"/>
        <field name="domain">[('status', 'in', ['draft', 'scheduled', 'ready_pickup', 'in_transit'])]</field>
        <field name="context">{'search_default_group_status': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Welcome to Paper Recycling Dashboard!
            </p>
            <p>
                Track your paper recycling operations from bale production to payment receipt.
                Create load shipments, generate manifests, and manage driver pickups.
            </p>
        </field>
    </record>

    <!-- Tree view for Dashboard -->
    <menuitem id="menu_paper_recycling_dashboard" name="Dashboard" parent="menu_paper_recycling" action="action_paper_recycling_dashboard" sequence="5" groups="records_management.group_records_user"/>
</data>

</odoo>
