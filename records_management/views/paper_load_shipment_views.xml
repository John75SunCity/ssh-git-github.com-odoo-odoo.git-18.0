<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paper_load_shipment_view_tree" model="ir.ui.view">
            <field name="name">paper.load.shipment.view.tree</field>
            <field name="model">paper.load.shipment</field>
            <field name="arch" type="xml">
                <list string="Load Shipments" decoration-success="state=='picked_up'" decoration-primary="state=='ready'">
                    <field name="name" />
                    <field name="scheduled_pickup_date" />
                    <field name="driver_id" />
                    <field name="carrier_id" />
                    <field name="bale_count" sum="Total Bales" />
                    <field name="total_weight" sum="Total Weight (kg)" />
                    <field name="white_count" />
                    <field name="mixed_count" />
                    <field name="cardboard_count" />
                    <field name="driver_signature" />
                    <field name="state" widget="badge" decoration-success="state=='picked_up'" decoration-primary="state=='ready'" />
                </list>
            </field>
        </record>
        <record id="paper_load_shipment_view_form" model="ir.ui.view">
            <field name="name">paper.load.shipment.view.form</field>
            <field name="model">paper.load.shipment</field>
            <field name="arch" type="xml">
                <form string="Load Shipment">
                    <header>
                        <button name="action_ready_for_shipment" string="Ready for Pickup" type="object" class="btn-primary" invisible="state != 'draft'" />
                        <button name="action_mark_picked_up" string="Mark Picked Up" type="object" class="btn-success" invisible="state != 'ready'" />
                        <button name="action_print_manifest" string="Print Manifest" type="object" class="btn-secondary" invisible="state == 'cancelled'" />
                        <button name="action_view_bales" string="View Bales" type="object" class="btn-secondary" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,ready,picked_up" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_bales" type="object" class="oe_stat_button" icon="fa-cubes">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="bale_count" />
                                    </span>
                                    <span class="o_stat_text">Bales</span>
                                </div>
                            </button>
                            <button name="action_view_bales" type="object" class="oe_stat_button" icon="fa-balance-scale">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="total_weight" widget="float" />
                                    </span>
                                    <span class="o_stat_text">Total kg</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <group name="shipping_info" string="Shipping Information">
                                <field name="carrier_id" />
                                <field name="driver_id" />
                                <field name="pickup_location_id" />
                                <field name="driver_signature" placeholder="Driver name or signature timestamp" />
                                <field name="enable_geographic_batching" widget="boolean_toggle" />
                            </group>
                            <group name="schedule_info" string="Schedule">
                                <field name="scheduled_pickup_date" />
                                <field name="actual_pickup_date" readonly="1" />
                                <field name="manifest_printed" widget="boolean_toggle" readonly="1" />
                                <field name="manifest_print_date" readonly="1" />
                            </group>
                        </group>
                        <!-- Visual Truck Load Widget -->
                        <div class="row">
                            <div class="col-12">
                                <group string="üöõ Visual Load Status">
                                    <!-- Use bale_count field with the truck widget -->
                                    <field name="bale_count" widget="paper_load_truck_widget" nolabel="1"/>
                                </group>
                            </div>
                        </div>

                        <group>
                            <group name="load_summary" string="Load Summary">
                                <field name="bale_count" readonly="1" />
                                <field name="total_weight" readonly="1" />
                            </group>
                            <group name="grade_breakdown" string="Paper Grade Breakdown">
                                <field name="white_count" readonly="1" string="White Bales" />
                                <field name="mixed_count" readonly="1" string="Mixed Bales" />
                                <field name="cardboard_count" readonly="1" string="Cardboard Bales" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Bales in Load" name="bales">
                                <field name="bale_ids" nolabel="1">
                                    <list string="Paper Bales">
                                        <field name="name" />
                                        <field name="bale_number" />
                                        <field name="paper_grade" />
                                        <field name="weight" sum="Total Weight" />
                                        <field name="source_date" />
                                        <field name="state" />
                                    </list>
                                </field>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes" nolabel="1" />
                            </page>
                        </notebook>
                        <group name="system_info" string="System Information">
                            <field name="company_id" groups="base.group_multi_company" />
                            <field name="active" widget="boolean_toggle" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" help="Internal staff: warehouse technicians weighing/categorizing bales, supervisors, billing team" />
                        <field name="activity_ids" help="Schedule tasks for warehouse staff (not driver-facing)" />
                        <field name="message_ids" help="Internal communications about load preparation, bale weighing, manifest issues" />
                    </div>
                </form>
            </field>
        </record>
        <record id="paper_load_shipment_view_kanban" model="ir.ui.view">
            <field name="name">paper.load.shipment.view.kanban</field>
            <field name="model">paper.load.shipment</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name" />
                    <field name="scheduled_pickup_date" />
                    <field name="driver_id" />
                    <field name="carrier_id" />
                    <field name="bale_count" />
                    <field name="total_weight" />
                    <field name="state" />
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name" />
                                        </strong>
                                        <span class="float-end">
                                            <field name="state" widget="label_selection" options="{'classes': {'draft': 'secondary', 'ready': 'primary', 'in_transit': 'info', 'delivered': 'warning', 'completed': 'success', 'cancelled': 'danger'}}" />
                                        </span>
                                    </div>
                                    <span class="o_kanban_record_subtitle text-muted">
                                        <field name="driver_id" /> ‚Ä¢ <field name="scheduled_pickup_date" />
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="mb-2">
                                        <div class="d-flex justify-content-between">
                                            <small>
                                                <strong>
                                                    <field name="bale_count" /> bales</strong>
                                            </small>
                                            <small>
                                                <strong>
                                                    <field name="total_weight" /> kg</strong>
                                            </small>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <strong>Carrier:</strong>
                                            <field name="carrier_id" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="paper_load_shipment_view_search" model="ir.ui.view">
            <field name="name">paper.load.shipment.view.search</field>
            <field name="model">paper.load.shipment</field>
            <field name="arch" type="xml">
                <search string="Load Shipments">
                    <field name="name" />
                    <field name="driver_id" />
                    <field name="carrier_id" />
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" />
                    <filter string="Ready for Pickup" name="ready" domain="[('state', '=', 'ready')]" />
                    <filter string="Picked Up" name="picked_up" domain="[('state', '=', 'picked_up')]" />
                    <separator />
                    <filter string="Today" name="today" domain="[('scheduled_pickup_date', '=', context_today)]" />
                    <filter string="This Week" name="this_week" domain="[('scheduled_pickup_date', '&gt;=', (context_today - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]" />
                    <filter string="This Month" name="this_month" domain="[('scheduled_pickup_date', '&gt;=', (context_today.replace(day=1)).strftime('%Y-%m-%d'))]" />
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status" context="{'group_by': 'state'}" />
                        <filter string="Pickup Date" name="group_pickup_date" context="{'group_by': 'scheduled_pickup_date'}" />
                        <filter string="Driver" name="group_driver" context="{'group_by': 'driver_id'}" />
                        <filter string="Carrier" name="group_carrier" context="{'group_by': 'carrier_id'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="action_paper_load_shipment" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model paper.load.shipment has state field - consider using default search filters -->
            <field name="name">Load Shipments</field>
            <field name="res_model">paper.load.shipment</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="paper_load_shipment_view_search" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-truck"/> No shipments scheduled yet!
                </p>
                <p>
                    <b>‚ö†Ô∏è Prerequisites:</b>
                </p>
                <ul>
                    <li>‚úì <b>Paper Bales In Stock</b> - Go to: <i>Operations ‚Üí Paper Recycling ‚Üí Paper Bales</i> (filter: In Stock)</li>
                    <li>‚úì <b>Carrier/Driver Setup</b> - Go to: <i>Contacts</i> (create trucking companies + driver records)</li>
                    <li>‚úì <b>Storage Locations</b> - Go to: <i>Configuration ‚Üí Locations</i> (warehouse pickup addresses)</li>
                    <li>‚úì <b>Truck Capacity Known</b> - Standard semi: 40,000 lbs / 18,144 kg max payload</li>
                </ul>
                <p>
                    <b>üìã Load Shipment Workflow:</b>
                </p>
                <ol>
                    <li>Click <b>Create</b> to start new shipment (status: Draft)</li>
                    <li>System auto-assigns unique <b>Shipment Number</b> (SHIP-2024-001)</li>
                    <li>Select <b>Carrier</b> (trucking company) from dropdown</li>
                    <li>Select <b>Driver</b> (specific person) assigned to this load</li>
                    <li>Set <b>Pickup Location</b> (your warehouse with bales ready)</li>
                    <li>Enter <b>Scheduled Pickup Date</b> (when truck arrives at warehouse)</li>
                    <li>In <b>Bales in Load</b> tab, click Add and select bales (status: In Stock)</li>
                    <li>System shows <b>Load Summary</b>: Bale Count, Total Weight, Grade Breakdown</li>
                    <li>Verify <b>Total Weight &lt; 40,000 lbs</b> (truck capacity limit)</li>
                    <li>System separates by grade: <b>White Bales</b>, <b>Mixed Bales</b>, <b>Cardboard Bales</b></li>
                    <li>Click <b>Ready for Pickup</b> (status: Ready)</li>
                    <li>Driver arrives, checks in using visitor app (driver does NOT weigh/categorize)</li>
                    <li><b>Internal technicians</b> weigh, categorize, and sign for each bale on manifest</li>
                    <li>Click <b>Print Manifest</b> to generate manifest with signature timestamp</li>
                    <li>Enter <b>Driver Signature</b> (text record or digital signature timestamp)</li>
                    <li>Click <b>Mark Picked Up</b> - system creates invoice matching load number and manifest</li>
                    <li>System changes bale status to <b>Picked Up</b></li>
                </ol>
                <p>
                    <b>üìä Shipment States:</b>
                </p>
                <ul>
                    <li><b>Draft:</b> Shipment created, planning in progress, bales not yet assigned</li>
                    <li><b>Ready for Pickup:</b> Bales assigned, driver scheduled, awaiting truck arrival</li>
                    <li><b>Picked Up:</b> Load picked up by driver, invoice generated, manifest signed</li>
                </ul>
                <p>
                    <b>üì¶ Load Optimization Strategies:</b>
                </p>
                <ul>
                    <li><b>Max Capacity:</b> Target 38,000-40,000 lbs per load (leave 2K buffer for safety)</li>
                    <li><b>Grade Mixing:</b> Mills prefer single-grade loads, but mixed is acceptable if marked</li>
                    <li><b>FIFO Loading:</b> Ship oldest bales first to minimize storage dwell time</li>
                    <li><b>Geographic Batching (Optional):</b> Toggle on to consolidate deliveries - good feature but can be disabled</li>
                </ul>
                <p>
                    <b>üöÄ Key Features:</b><br/>
                    ‚Ä¢ <b>Capacity Tracking:</b> Real-time weight total vs 40K lb truck limit<br/>
                    ‚Ä¢ <b>Grade Breakdown:</b> Auto-count white/mixed/cardboard bales in load<br/>
                    ‚Ä¢ <b>Driver Assignment:</b> Links to contacts - driver only checks in via visitor app<br/>
                    ‚Ä¢ <b>Technician Workflow:</b> Internal warehouse staff weighs/categorizes/signs bales on manifest<br/>
                    ‚Ä¢ <b>Pickup Times:</b> Scheduled vs actual for on-time performance tracking<br/>
                    ‚Ä¢ <b>Bale Selection:</b> Only shows In Stock bales (passed inspection, ready to ship)<br/>
                    ‚Ä¢ <b>Invoice Creation:</b> Auto-generates invoice when load is picked up, matching load number and manifest with driver signature<br/>
                    ‚Ä¢ <b>Manifest Printing:</b> Easy print with signature timestamp for records<br/>
                    ‚Ä¢ <b>Stat Buttons:</b> Quick view total bales + weight without opening record<br/>
                    ‚Ä¢ <b>Kanban Pipeline:</b> Visual workflow from Draft ‚Üí Picked Up by status<br/>
                    ‚Ä¢ <b>Chatter Integration:</b> Internal staff communications (warehouse technicians weighing bales, supervisors, billing team)<br/>
                    ‚Ä¢ <b>Geographic Batching Toggle:</b> Optional feature - enable/disable as needed<br/>
                </p>
                <p>
                    <b>üí° Pro Tips:</b><br/>
                    ‚Ä¢ Use <b>View Bales</b> button to quickly see all bales in load without opening record<br/>
                    ‚Ä¢ Filter by <b>Ready for Pickup</b> to see loads awaiting driver arrival<br/>
                    ‚Ä¢ Sort by <b>Scheduled Pickup Date</b> to prioritize upcoming loads<br/>
                    ‚Ä¢ <b>Chatter is for employees</b> weighing bales or internal communications - not driver-facing<br/>
                    ‚Ä¢ <b>Driver checks in</b> using visitor app - technicians handle the actual weighing and manifest signing<br/>
                    ‚Ä¢ <b>Toggle Geographic Batching</b> on/off based on your operational needs<br/>
                    ‚Ä¢ <b>Driver signature</b> can be text record or digital timestamp - keep it simple for easy manifest printing<br/>
                </p>
            </field>
        </record>

        <!-- Paper Recycling moved to Operations menu -->
        <!-- menu_paper_recycling removed - defined in records_management_root_menus.xml -->
        <menuitem id="menu_load_shipments" name="Load Shipments" parent="menu_paper_recycling" action="action_paper_load_shipment" sequence="20" groups="records_management.group_records_user" />

        <record id="action_paper_recycling_dashboard" model="ir.actions.act_window">
            <!-- OPTIMIZATION: Model paper.load.shipment has state field - consider using default search filters -->
            <field name="name">Paper Recycling Dashboard</field>
            <field name="res_model">paper.load.shipment</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="paper_load_shipment_view_kanban" />
            <field name="domain">[('state', 'in', ['draft', 'ready'])]</field>
            <field name="context">{'search_default_group_status': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Welcome to Paper Recycling Dashboard!
                </p>
                <p>
                    Track your paper recycling operations from bale production to delivery.
                    Manage load shipments, schedules, and carrier coordination.
                </p>
            </field>
        </record>

        <menuitem id="menu_paper_recycling_dashboard" name="Dashboard" parent="menu_paper_recycling" action="action_paper_recycling_dashboard" sequence="5" groups="records_management.group_records_user" />


    </data>
</odoo>
