<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="inventory_item_profile_view_tree" model="ir.ui.view">
        <field name="name">inventory.item.profile.view.tree</field>
        <field name="model">inventory.item.profile</field>
    <field name="arch" type="xml">
            <tree string="Inventory Item Profile">
                <field name="name"/>
                <field name="item_type"/>
                <field name="default_location_id"/>
                <field name="retention_period"/>
                <field name="active"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="inventory_item_profile_view_form" model="ir.ui.view">
        <field name="name">inventory.item.profile.view.form</field>
        <field name="model">inventory.item.profile</field>
    <field name="arch" type="xml">
            <form string="Inventory Item Profile">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="item_type"/>
                        <field name="default_location_id"/>
                        <field name="retention_period"/>
                        <field name="description"/>
                        <field name="active"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="inventory_item_profile_view_search" model="ir.ui.view">
        <field name="name">inventory.item.profile.view.search</field>
        <field name="model">inventory.item.profile</field>
    <field name="arch" type="xml">
            <search string="Search Inventory Item Profile">
                <field name="name"/>
                <field name="item_type"/>
                <field name="default_location_id"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_inventory_item_profile" model="ir.actions.act_window">
        <field name="name">Inventory Item Profile</field>
        <field name="res_model">inventory.item.profile</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <!--
    <menuitem
        id="menu_inventory_item_profile"
        name="Inventory Item Profile"
        action="action_inventory_item_profile"
        parent="REPLACE_WITH_PARENT_MENU_ID"
        sequence="10"/>
    -->

</odoo>
