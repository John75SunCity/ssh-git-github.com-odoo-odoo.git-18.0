<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Tree view for ENTERPRISE -->
    
    <!-- Kanban view for KANBAN -->
    <record id="pos_config_view_kanban" model="ir.ui.view">
        <field name="name">pos.config.view.kanban</field>
        <field name="model">pos.config</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" sample="1" quick_create="false" class="o_kanban_small_column">
                <field name="name"/>
                <field name="state"/>
                <field name="current_session_id"/>
                <field name="current_session_state"/>
                <field name="session_user_id"/>
                <field name="last_session_closing_date"/>
                <field name="company_id"/>
                <field name="pricelist_id"/>
                <field name="currency_id"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <span class="float-end">
                                        <field name="state" widget="label_selection" options="{'classes': {'active': 'success', 'inactive': 'secondary', 'deprecated': 'danger'}}"/>
                                    </span>
                                </div>
                                <span class="o_kanban_record_subtitle text-muted">
                                    üè™ <field name="company_id"/> | <field name="currency_id"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-12">
                                        <div t-if="record.current_session_id.raw_value">
                                            <strong>Current Session:</strong><br/>
                                            <span class="badge badge-success">üîÑ Active</span>
                                            <field name="session_user_id"/><br/>
                                            <small>Session: <field name="current_session_state"/></small>
                                        </div>
                                        <div t-else="">
                                            <strong>Last Session:</strong><br/>
                                            <field name="last_session_closing_date" widget="datetime"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge badge-pill badge-info">
                                        üí∞ <field name="pricelist_id"/>
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="activity_state" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree view for TREE -->
    <record id="pos_config_view_tree" model="ir.ui.view">
        <field name="name">pos.config.view.tree</field>
        <field name="model">pos.config</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <list string="POS Configuration Management" decoration-success="state=='active'" decoration-muted="state=='inactive'" decoration-danger="state=='deprecated'" multi_edit="1" sample="1">
                <header>
                    <button name="action_activate" type="object" string="Activate"/>
                    <button name="action_deactivate" type="object" string="Deactivate"/>
                    <button name="action_open_session" type="object" string="Open Session"/>
                    <button name="action_close_session" type="object" string="Close Session"/>
                </header>
                <field name="name" string="POS Name"/>
                <field name="company_id" string="Company"/>
                <field name="pricelist_id" string="Pricelist"/>
                <field name="currency_id" string="Currency"/>
                <field name="session_user_id" string="Current User"/>
                <field name="current_session_state" string="Session Status"/>
                <field name="last_session_closing_date" string="Last Closed" widget="datetime"/>
                <field name="state" string="Status" widget="badge" decoration-success="state=='active'" decoration-muted="state=='inactive'" decoration-danger="state=='deprecated'"/>
                <field name="activity_exception_decoration" widget="activity_exception"/>
            </list>
        </field>
    </record>

    <!-- Form view for FORM -->
    <record id="pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.view.form</field>
        <field name="model">pos.config</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <form string="POS Configuration">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" states="inactive"/>
                    <button name="action_deactivate" string="Deactivate" type="object" class="btn-warning" states="active"/>
                    <button name="action_open_session" string="Open Session" type="object" class="btn-success" states="active"/>
                    <button name="action_close_session" string="Close Session" type="object" class="btn-danger" states="active" context="{'force_close': False}"/>
                    <button name="action_force_close_session" string="Force Close" type="object" class="btn-danger" states="active" context="{'force_close': True}"/>
                    <field name="state" widget="statusbar" statusbar_visible="inactive,active,deprecated"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sessions" type="object" class="oe_stat_button" icon="fa-clock-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="session_count"/>
                                </span>
                                <span class="o_stat_text">Sessions</span>
                            </div>
                        </button>
                        <button name="action_view_orders" type="object" class="oe_stat_button" icon="fa-shopping-cart">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="order_count"/>
                                </span>
                                <span class="o_stat_text">Orders</span>
                            </div>
                        </button>
                        <button name="action_view_sales_report" type="object" class="oe_stat_button" icon="fa-bar-chart">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="total_sales" widget="monetary"/>
                                </span>
                                <span class="o_stat_text">Total Sales</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="POS Configuration Name"/>
                        </h1>
                        <div class="o_row">
                            <field name="company_id" options="{'no_create': True}"/>
                            <label for="currency_id" string="Currency:"/>
                            <field name="currency_id" options="{'no_create': True}"/>
                        </div>
                    </div>
                    
                    <group>
                        <group name="basic_settings" string="Basic Settings">
                            <field name="picking_type_id"/>
                            <field name="stock_location_id"/>
                            <field name="pricelist_id"/>
                            <field name="invoice_journal_id"/>
                            <field name="payment_method_ids" widget="many2many_tags"/>
                            <field name="module_pos_restaurant" widget="boolean_toggle"/>
                        </group>
                        <group name="session_info" string="Current Session">
                            <field name="current_session_id" readonly="1"/>
                            <field name="current_session_state" readonly="1"/>
                            <field name="session_user_id" readonly="1"/>
                            <field name="last_session_closing_date" readonly="1"/>
                            <field name="sequence_id"/>
                            <field name="sequence_line_id"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Records Management Integration" name="records_integration">
                            <group>
                                <group string="Walk-In Service Configuration">
                                    <field name="enable_walk_in_service" widget="boolean_toggle"/>
                                    <field name="walk_in_customer_id" states="enable_walk_in_service=True"/>
                                    <field name="walk_in_pricelist_id" states="enable_walk_in_service=True"/>
                                    <field name="auto_create_customer" widget="boolean_toggle" states="enable_walk_in_service=True"/>
                                    <field name="require_customer_info" widget="boolean_toggle" states="enable_walk_in_service=True"/>
                                </group>
                                <group string="Document Services">
                                    <field name="enable_document_services" widget="boolean_toggle"/>
                                    <field name="document_scanning_rate" widget="monetary" states="enable_document_services=True"/>
                                    <field name="document_storage_rate" widget="monetary" states="enable_document_services=True"/>
                                    <field name="shredding_service_rate" widget="monetary" states="enable_document_services=True"/>
                                    <field name="rush_service_multiplier" widget="float" states="enable_document_services=True"/>
                                </group>
                            </group>
                            <separator string="Service Products"/>
                            <field name="service_product_ids" mode="list" states="enable_walk_in_service=True">
                                <list string="Available Services" editable="bottom">
                                    <field name="product_id"/>
                                    <field name="pos_category_id"/>
                                    <field name="list_price" widget="monetary"/>
                                    <field name="available_in_pos" widget="boolean_toggle"/>
                                    <field name="service_type"/>
                                    <field name="requires_appointment" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                        <page string="Interface Settings" name="interface_settings">
                            <group>
                                <group string="Display Options">
                                    <field name="iface_tipproduct" widget="boolean_toggle"/>
                                    <field name="iface_splitbill" widget="boolean_toggle"/>
                                    <field name="iface_printbill" widget="boolean_toggle"/>
                                    <field name="iface_orderline_notes" widget="boolean_toggle"/>
                                    <field name="iface_start_categ_id"/>
                                    <field name="iface_display_categ_images" widget="boolean_toggle"/>
                                </group>
                                <group string="Receipt Configuration">
                                    <field name="receipt_header"/>
                                    <field name="receipt_footer"/>
                                    <field name="iface_print_auto" widget="boolean_toggle"/>
                                    <field name="iface_print_skip_screen" widget="boolean_toggle"/>
                                    <field name="iface_scan_via_proxy" widget="boolean_toggle"/>
                                </group>
                            </group>
                        </page>
                        <page string="Hardware" name="hardware">
                            <group>
                                <group string="Hardware Proxy">
                                    <field name="proxy_ip"/>
                                    <field name="iface_payment_terminal" widget="boolean_toggle"/>
                                    <field name="iface_electronic_scale" widget="boolean_toggle"/>
                                    <field name="iface_cashdrawer" widget="boolean_toggle"/>
                                    <field name="iface_customer_facing_display" widget="boolean_toggle"/>
                                </group>
                                <group string="Barcode Scanner">
                                    <field name="barcode_scanner_enabled" widget="boolean_toggle"/>
                                    <field name="barcode_nomenclature_id" states="barcode_scanner_enabled=True"/>
                                    <field name="scan_product_check" widget="boolean_toggle" states="barcode_scanner_enabled=True"/>
                                    <field name="restrict_price_control" widget="boolean_toggle"/>
                                </group>
                            </group>
                        </page>
                        <page string="Payment Methods" name="payment_methods">
                            <field name="payment_method_ids" mode="list">
                                <list string="Payment Methods" editable="bottom">
                                    <field name="name"/>
                                    <field name="journal_id"/>
                                    <field name="type"/>
                                    <field name="use_payment_terminal"/>
                                    <field name="split_transactions" widget="boolean_toggle"/>
                                    <field name="open_session_ids" invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Inventory" name="inventory">
                            <group>
                                <group string="Stock Management">
                                    <field name="stock_location_id"/>
                                    <field name="picking_type_id"/>
                                    <field name="limit_categories" widget="boolean_toggle"/>
                                    <field name="iface_available_categ_ids" states="limit_categories=True" widget="many2many_tags"/>
                                </group>
                                <group string="Product Options">
                                    <field name="module_pos_discount" widget="boolean_toggle"/>
                                    <field name="module_pos_loyalty" widget="boolean_toggle"/>
                                    <field name="module_pos_mercury" widget="boolean_toggle"/>
                                    <field name="module_pos_reprint" widget="boolean_toggle"/>
                                </group>
                            </group>
                        </page>
                        <page string="Analytics" name="analytics">
                            <group>
                                <group string="Performance Metrics">
                                    <field name="avg_transaction_time" widget="float"/>
                                    <field name="total_transactions"/>
                                    <field name="avg_transaction_value" widget="monetary"/>
                                    <field name="peak_hour_sales" widget="monetary"/>
                                </group>
                                <group string="Usage Statistics">
                                    <field name="most_sold_product_id"/>
                                    <field name="busiest_day_of_week"/>
                                    <field name="customer_satisfaction_score" widget="float"/>
                                    <field name="loyalty_program_usage" widget="percentage"/>
                                </group>
                            </group>
                            <separator string="Recent Performance Data"/>
                            <field name="performance_data_ids" mode="list">
                                <list string="Performance Metrics">
                                    <field name="date"/>
                                    <field name="session_count"/>
                                    <field name="total_sales" widget="monetary"/>
                                    <field name="transaction_count"/>
                                    <field name="avg_transaction_value" widget="monetary"/>
                                    <field name="customer_count"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view for SEARCH -->
    <record id="pos_config_view_search" model="ir.ui.view">
        <field name="name">pos.config.view.search</field>
        <field name="model">pos.config</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search POS Configurations">
                <field name="name" string="POS Name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="company_id" string="Company"/>
                <field name="pricelist_id" string="Pricelist"/>
                <field name="session_user_id" string="Current User"/>
                
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Inactive" name="inactive" domain="[('state', '=', 'inactive')]"/>
                <filter string="Deprecated" name="deprecated" domain="[('state', '=', 'deprecated')]"/>
                
                <separator/>
                <filter string="With Open Session" name="open_session" domain="[('current_session_id', '!=', False)]"/>
                <filter string="Walk-In Enabled" name="walk_in_enabled" domain="[('enable_walk_in_service', '=', True)]"/>
                <filter string="Document Services" name="document_services" domain="[('enable_document_services', '=', True)]"/>
                <filter string="Restaurant Mode" name="restaurant" domain="[('module_pos_restaurant', '=', True)]"/>
                
                <separator/>
                <filter string="My Sessions" name="my_sessions" domain="[('session_user_id', '=', uid)]"/>
                <filter string="Today's Sales" name="today_sales" domain="[('current_session_id.start_at', '&amp;gt;=', datetime.datetime.combine(context_today, datetime.time.min))]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'state'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    <filter string="Pricelist" name="group_pricelist" context="{'group_by': 'pricelist_id'}"/>
                    <filter string="Current User" name="group_user" context="{'group_by': 'session_user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form view for GRAPH -->
    <record id="pos_config_view_graph" model="ir.ui.view">
        <field name="name">pos.config.view.graph</field>
        <field name="model">pos.config</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <graph string="POS Performance" type="bar" sample="1">
                <field name="name" type="row"/>
                <field name="state" type="col"/>
                <field name="total_sales" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Tree view for PIVOT -->
    <record id="pos_config_view_pivot" model="ir.ui.view">
        <field name="name">pos.config.view.pivot</field>
        <field name="model">pos.config</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <pivot string="POS Analysis" sample="1">
                <field name="company_id" type="row"/>
                <field name="state" type="col"/>
                <field name="total_sales" type="measure"/>
                <field name="order_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Tree view for ACTION -->
    <record id="action_pos_config_records" model="ir.actions.act_window">
        <field name="name">üè™ POS Configuration</field>
        <field name="res_model">pos.config</field>
        <field name="view_mode">kanban,list,form,graph,pivot</field>
        <field name="search_view_id" ref="view_pos_config_search"/>
        <field name="context">{
            'search_default_active': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üè™ Set up your first POS configuration!
            </p>
            <p>
                Configure advanced point-of-sale systems with integrated Records Management services for walk-in customers. 
                Enable document scanning, storage services, shredding operations, and comprehensive customer management.
            </p>
            <p>
                <strong>Key Features:</strong><br/>
                ‚Ä¢ Walk-in service integration with Records Management<br/>
                ‚Ä¢ Document services pricing and configuration<br/>
                ‚Ä¢ Real-time session management and monitoring<br/>
                ‚Ä¢ Hardware integration (scanners, payment terminals)<br/>
                ‚Ä¢ Performance analytics and sales reporting<br/>
                ‚Ä¢ Customer satisfaction tracking and loyalty programs
            </p>
        </field>
    </record>
</data>
</odoo>
