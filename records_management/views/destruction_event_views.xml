<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="destruction_event_view_list" model="ir.ui.view">
    <field name="name">destruction.event.view.list</field>
        <field name="model">destruction.event</field>
        <field name="arch" type="xml">
<list>
                <field name="name"/>
                <field name="date"/>
                <field name="technician_id"/>
                <field name="location_type"/>
                <field name="quantity"/>
                <field name="unit_of_measure"/>
</list>
        </field>
    </record>

    <record id="destruction_event_view_form" model="ir.ui.view">
        <field name="name">destruction.event.view.form</field>
        <field name="model">destruction.event</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="time"/>
                        <field name="technician_id"/>
                        <field name="requestor_id"/>
                        <field name="location_type"/>
                        <field name="shredded_items"/>
                        <field name="quantity"/>
                        <field name="unit_of_measure"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="destruction_event_view_search" model="ir.ui.view">
        <field name="name">destruction.event.view.search</field>
        <field name="model">destruction.event</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="technician_id"/>
                <field name="location_type"/>
                <field name="date"/>
            </search>
        </field>
    </record>

    <record id="destruction_event_action" model="ir.actions.act_window">
        <field name="name">Destruction Events</field>
        <field name="res_model">destruction.event</field>
<field name="view_mode">list,form</field>
    </record>
</odoo>
