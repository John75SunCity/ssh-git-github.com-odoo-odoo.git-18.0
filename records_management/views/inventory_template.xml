<odoo>
    <data>
        <!-- Stock Lot Tree View -->
        <record id="view_stock_lot_tree" model="ir.ui.view">
            <field name="name">stock.lot.tree</field>
            <field name="model">stock.lot</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="customer_id"/>
                </tree>
            </field>
        </record>

        <!-- Stock Lot Form View -->
        <record id="view_stock_lot_form" model="ir.ui.view">
            <field name="name">stock.lot.form</field>
            <field name="model">stock.lot</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="customer_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Stock Lot Action -->
        <record id="action_stock_lot" model="ir.actions.act_window">
            <field name="name">Stock Production Lots</field>
            <field name="res_model">stock.lot</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Records Management Menu -->
        <menuitem id="menu_records_management_root" name="Records Management" sequence="10"/>
        <menuitem id="menu_stock_lots" name="Stock Lots" parent="menu_records_management_root" action="action_stock_lot" sequence="10"/>
    </data>
</odoo>
