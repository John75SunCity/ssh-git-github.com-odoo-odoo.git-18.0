<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- List View -->
    <record id="customer_inventory_report_view_tree" model="ir.ui.view">
        <field name="name">customer.inventory.report.view.list</field>
        <field name="model">customer.inventory.report</field>
        <field name="arch" type="xml">
            <list decoration-bf="active==True">
        <field name="name"/>
        <field name="partner_id"/>
        <field name="department_id"/>
        <field name="report_date"/>
        <field name="total_documents"/>
        <field name="total_monthly_cost" widget="monetary"/>
        <field name="user_id"/>
        <field name="active" invisible="1"/>
        <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="customer_inventory_report_view_form" model="ir.ui.view">
        <field name="name">customer.inventory.report.view.form</field>
        <field name="model">customer.inventory.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
        <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group name="report_info">
        <field name="name"/>
        <field name="partner_id"/>
        <field name="department_id"/>
        <field name="report_date"/>
                        </group>
                        <group name="responsibility">
        <field name="user_id"/>
        <field name="company_id" groups="base.group_multi_company"/>
        <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <group name="summary" string="Summary">
                        <group>
        <field name="total_documents"/>
        <field name="total_monthly_cost" widget="monetary"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Report Lines" name="lines">
        <field name="line_ids" mode="tree,form">
                                <list editable="bottom">
        <field name="container_id"/>
        <field name="document_count"/>
        <field name="monthly_storage_cost" widget="monetary"/>
        <field name="line_status"/>
        <field name="billing_status"/>
        <field name="notes"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
        <field name="message_follower_ids"/>
        <field name="activity_ids"/>
        <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="customer_inventory_report_view_search" model="ir.ui.view">
        <field name="name">customer.inventory.report.view.search</field>
        <field name="model">customer.inventory.report</field>
        <field name="arch" type="xml">
            <search>
        <field name="name"/>
        <field name="partner_id"/>
        <field name="department_id"/>
        <field name="user_id"/>
        <field name="report_date"/>

                <filter name="active" string="Active" domain="[('active','=',True)]"/>
                <filter name="archived" string="Archived" domain="[('active','=',False)]"/>

                <separator/>
                <filter name="current_month" string="Current Month"
                        domain="[('report_date', '!=', False)]"/>
                <filter name="last_month" string="Last Month"
                        domain="[('report_date', '!=', False)]"/>

                <separator/>
                <filter name="my_reports" string="My Reports" domain="[('user_id','=',uid)]"/>
                <filter name="my_company" string="My Company" domain="[('company_id','=',company_id)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_customer" string="Customer" context="{'group_by':'partner_id'}"/>
                    <filter name="group_by_department" string="Department" context="{'group_by':'department_id'}"/>
                    <filter name="group_by_user" string="Responsible" context="{'group_by':'user_id'}"/>
                    <filter name="group_by_month" string="Month" context="{'group_by':'report_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="customer_inventory_report_view_kanban" model="ir.ui.view">
        <field name="name">customer.inventory.report.view.kanban</field>
        <field name="model">customer.inventory.report</field>
        <field name="arch" type="xml">
            <kanban>
        <field name="id"/>
        <field name="name"/>
        <field name="partner_id"/>
        <field name="department_id"/>
        <field name="report_date"/>
        <field name="total_documents"/>
        <field name="total_monthly_cost"/>
        <field name="currency_id"/>
                <templates>
<t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
        <field name="partner_id"/>
                                        <t t-if="record.department_id.raw_value"> - <field name="department_id"/></t>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <span class="badge badge-pill badge-info">
                                            <t t-esc="record.total_documents.value"/> docs
                                        </span>
                                    </div>
                                    <div class="col-6 text-right">
        <field name="total_monthly_cost" widget="monetary"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom mt8">
                                    <div class="oe_kanban_bottom_left">
        <field name="report_date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="customer_inventory_report_action" model="ir.actions.act_window">
        <field name="name">Customer Inventory Reports</field>
        <field name="res_model">customer.inventory.report</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new customer inventory report!
            </p>
            <p>
                Generate and manage customer inventory reports to track storage costs and document counts.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_customer_inventory_report"
name="Customer Inventory Reports" parent="menu_records_reporting"
              action="customer_inventory_report_action"
              sequence="10"/>
    </data>
</odoo>
