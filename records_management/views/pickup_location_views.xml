<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- List View -->
    <record id="pickup_location_view_list" model="ir.ui.view">
        <field name="name">pickup.location.view.list</field>
        <field name="model">pickup.location</field>
    <field name="arch" type="xml">
            <list string="Pickup Location">
                <field name="name"/>
                <field name="address"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="zip"/>
                <field name="country_id"/>
                <field name="active"/>
                <field name="company_id"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="pickup_location_view_form" model="ir.ui.view">
        <field name="name">pickup.location.view.form</field>
        <field name="model">pickup.location</field>
    <field name="arch" type="xml">
            <form string="Pickup Location">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="address"/>
                        <field name="city"/>
                        <field name="state_id"/>
                        <field name="zip"/>
                        <field name="country_id"/>
                        <field name="active"/>
                        <field name="company_id"/>
                        <field name="user_id"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="pickup_location_view_search" model="ir.ui.view">
        <field name="name">pickup.location.view.search</field>
        <field name="model">pickup.location</field>
    <field name="arch" type="xml">
            <search string="Search Pickup Location">
                <field name="name"/>
                <field name="address"/>
                <field name="city"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pickup_location" model="ir.actions.act_window">
        <field name="name">Pickup Location</field>
        <field name="res_model">pickup.location</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                <i class="fa fa-map-marker"/> Create your first pickup location
            </p>
            <p><b>‚ö†Ô∏è Prerequisites:</b></p>
            <ul>
                <li>‚úì <b>Country/state configured</b> - Go to: <i>Contacts &gt; Configuration &gt; Localization</i></li>
                <li>‚úì <b>Company/user assigned</b> - Set location ownership</li>
            </ul>
            <p><b>üìã To create a pickup location:</b></p>
            <ol>
                <li>Click <b>New</b> to open the location form</li>
                <li>Enter a <b>Location Name</b> (e.g., "Smith Corp Main Office")</li>
                <li>Add complete <b>Address</b> (street, building, suite)</li>
                <li>Enter <b>City</b> name</li>
                <li>Select <b>State</b> (province/region)</li>
                <li>Enter <b>ZIP/Postal Code</b></li>
                <li>Select <b>Country</b></li>
                <li>Mark as <b>Active</b> (uncheck to disable location)</li>
                <li>Assign <b>Company</b> (for multi-company setups)</li>
                <li>Assign <b>User</b> (location manager/contact)</li>
                <li>Add <b>Notes</b> (access instructions, parking, contact names)</li>
                <li>Click <b>Save</b> to create the location</li>
            </ol>
            <p><b>üöÄ Key Features:</b><br/>
            ‚Ä¢ <b>Complete addressing:</b> Full street to country details<br/>
            ‚Ä¢ <b>Active/inactive status:</b> Disable old locations<br/>
            ‚Ä¢ <b>Company assignment:</b> Multi-organization support<br/>
            ‚Ä¢ <b>User linking:</b> Contact person for each location<br/>
            ‚Ä¢ <b>Notes system:</b> Access codes, parking, special instructions<br/>
            ‚Ä¢ <b>Search filters:</b> Find by name, address, or city<br/>
            </p>
            <p><b>üí° Pro Tips:</b><br/>
            ‚Ä¢ Add gate codes and parking instructions in notes<br/>
            ‚Ä¢ Include contact names and phone numbers<br/>
            ‚Ä¢ Use consistent naming: "Customer Name - Building/Location"<br/>
            ‚Ä¢ Mark as inactive rather than deleting (history preservation)<br/>
            ‚Ä¢ Verify addresses with GPS/Google Maps before saving<br/>
            </p>
        </field>
    </record>
    </data>
</odoo>
