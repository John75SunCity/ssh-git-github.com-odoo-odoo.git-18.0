<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_customer_inventory" model="ir.actions.report">
            <field name="name">Customer Inventory</field>
            <field name="model">customer.inventory.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">records_management.report_customer_inventory_template</field>
            <field name="report_file">records_management.report_customer_inventory_template</field>
            <field name="binding_model_id" ref="model_customer_inventory_report"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_customer_inventory_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Inventory for <span t-field="doc.partner_id.name"/></h2>
                            <p>Date: <span t-field="doc.create_date" t-options='{"widget": "date"}'/></p>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.line_ids" t-as="line">
                                        <td><span t-field="line.product_id.name"/></td>
                                        <td><span t-field="line.quantity"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
