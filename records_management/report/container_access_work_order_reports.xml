<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="report_container_access_work_order" model="ir.actions.report">
        <field name="name">Container Access Work Order</field>
        <field name="model">container.access.work.order</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_container_access_work_order_view</field>
        <field name="report_file">records_management.report_container_access_work_order</field>
        <field name="print_report_name">"(Container Access Work Order Report) %s" % (object.name or 'N/A')</field>
        <field name="binding_model_id" ref="records_management.model_container_access_work_order"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_container_access_work_order_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Container Access Work Order Report</h2>
                        <div class="row mb-4">
                            <div class="col-6">
                                <p><strong>Work Order:</strong> <t t-esc="doc.name or 'N/A'"/></p>
                                <p><strong>Customer:</strong> <t t-esc="doc.partner_id.name or 'N/A'"/></p>
                            </div>
                            <div class="col-6">
                                <p><strong>State:</strong> <t t-esc="doc.state or 'N/A'"/></p>
                            </div>
                        </div>

                        <!-- Customer Staging Location -->
                        <t t-if="doc.customer_staging_location_id">
                            <t t-call="records_management.staging_location_block">
                                <t t-set="location" t-value="doc.customer_staging_location_id"/>
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    </data>
</odoo>
