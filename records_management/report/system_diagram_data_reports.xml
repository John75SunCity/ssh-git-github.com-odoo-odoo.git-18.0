<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="report_system_diagram_data" model="ir.actions.report">
        <field name="name">System Diagram Data</field>
        <field name="model">system.diagram.data</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_system_diagram_data_view</field>
        <field name="report_file">records_management.report_system_diagram_data</field>
        <field name="print_report_name">"(System Diagram Data Report) %s" % (object.name or 'N/A')</field>
        <field name="binding_model_id" ref="records_management.model_system_diagram_data"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_system_diagram_data_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>System Architecture Diagram Report</h2>
                        
                        <!-- Diagram Information -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <strong>Diagram Name:</strong> <span t-field="doc.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Layout Algorithm:</strong> <span t-field="doc.layout_algorithm"/>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-6">
                                <strong>Node Count:</strong> <span t-field="doc.node_count"/>
                            </div>
                            <div class="col-6">
                                <strong>Edge Count:</strong> <span t-field="doc.edge_count"/>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-6">
                                <strong>Search Type:</strong> <span t-field="doc.search_type"/>
                            </div>
                            <div class="col-6">
                                <strong>Company:</strong> <span t-field="doc.company_id.name"/>
                            </div>
                        </div>
                        
                        <!-- Diagram Visualization -->
                        <div class="mt-4">
                            <h3>System Architecture Diagram</h3>
                            <div t-field="doc.diagram_html" class="border p-3"/>
                        </div>
                        
                        <!-- Configuration Details -->
                        <div class="mt-4">
                            <h3>Configuration Details</h3>
                            <table class="table table-condensed table-bordered">
                                <tbody>
                                    <tr>
                                        <th width="30%">Node Spacing</th>
                                        <td><span t-field="doc.node_spacing"/> px</td>
                                    </tr>
                                    <tr>
                                        <th>Edge Length</th>
                                        <td><span t-field="doc.edge_length"/> px</td>
                                    </tr>
                                    <tr>
                                        <th>Include Inactive</th>
                                        <td><span t-field="doc.include_inactive"/></td>
                                    </tr>
                                    <tr>
                                        <th>Group by Module</th>
                                        <td><span t-field="doc.group_by_module"/></td>
                                    </tr>
                                    <tr>
                                        <th>Maximum Depth</th>
                                        <td><span t-field="doc.max_depth"/></td>
                                    </tr>
                                    <tr>
                                        <th>Exclude System Models</th>
                                        <td><span t-field="doc.exclude_system_models"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    </data>
</odoo>