<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_container_movement">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="header">
                        <h2>Container Movement Report</h2>
                        <h3>Container: <span t-field="o.name"/>
                        </h3>
                        <p>Customer: <span t-field="o.partner_id.name"/>
                        </p>
                        <p>Report Date: <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/>
                        </p>
                    </div>

                    <div class="movement-timeline mt-4">
                        <h4>Movement History</h4>
                        <div class="timeline">
                            <t t-foreach="o.movement_ids" t-as="move">
                                <div class="timeline-item">
                                    <div class="row">
                                        <div class="col-3">
                                            <strong>
                                                <span t-field="move.movement_date" t-options="{'widget': 'datetime'}"/>
                                            </strong>
                                        </div>
                                        <div class="col-6">
                                            From: <span t-field="move.from_location_id.name"/>
 â†’ 
                                            To: <span t-field="move.to_location_id.name"/>
                                    </div>
                                    <div class="col-3">
                                            By: <span t-field="move.user_id.name"/>
                                    </div>
                                </div>
                                <div class="row" t-if="move.notes">
                                    <div class="col-12">
                                        <small>
                                            <em>Notes: <span t-field="move.notes"/>
                                            </em>
                                        </small>
                                    </div>
                                </div>
                                <hr/>
                            </div>
                        </t>
                    </div>
                </div>

                <div class="current-status mt-4">
                    <h4>Current Status</h4>
                    <div class="row">
                        <div class="col-6">
                            <p>
                                <strong>Current Location:</strong>
                                <span t-field="o.location_id.name"/>
                            </p>
                            <p>
                                <strong>Status:</strong>
                                <span t-field="o.state"/>
                            </p>
                        </div>
                        <div class="col-6">
                            <p>
                                <strong>Last Movement:</strong>
                                <span t-field="o.last_movement_date"/>
                            </p>
                            <p>
                                <strong>Days at Location:</strong>
                                <span t-field="o.days_at_location"/>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="chain-of-custody mt-4">
                    <p>
                        <strong>Chain of Custody:</strong> Maintained per NAID AAA standards</p>
                    <p>
                        <strong>GPS Tracking:</strong>
                        <t t-if="o.gps_enabled">Enabled</t>
                        <t t-else="">Disabled</t>
                    </p>
                </div>
            </div>
        </t>
    </t>
</template>

<record id="action_report_container_movement" model="ir.actions.report">
    <field name="name">Container Movement Report</field>
    <field name="model">records.box</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">records_management.report_container_movement</field>
    <field name="report_file">records_management.report_container_movement</field>
    <field name="binding_model_id" ref="records_management.model_records_box"/>
    <field name="binding_type">report</field>
</record>
</odoo>
