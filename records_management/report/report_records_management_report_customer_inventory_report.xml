<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="report_report_records_management_report_customer_inventory" model="ir.actions.report">
        <field name="name">Customer Inventory Report</field>
        <!-- Business model the report prints -->
        <field name="model">customer.inventory</field>
        <field name="report_type">qweb-html</field>
        <!-- QWeb template identifier (module.template_id) -->
        <field name="report_name">records_management.report_report_records_management_report_customer_inventory_view</field>
        <field name="report_file">records_management.report_report_records_management_report_customer_inventory_view</field>
        <field name="print_report_name">'Customer Inventory - %s' % object.display_name</field>
        <!-- Bind to the customer.inventory model definition -->
        <field name="binding_model_id" ref="records_management.model_customer_inventory"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_report_records_management_report_customer_inventory_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Title</h2>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.field_ids" t-as="field">
                                    <td>
                                        <span t-esc="field.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="field.description"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
    </data>
</odoo>
