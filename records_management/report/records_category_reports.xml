<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_records_category" model="ir.actions.report">
            <field name="name">Records Category Report</field>
            <field name="model">records.category</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">records_management.report_records_category_view</field>
            <field name="report_file">records_management.report_records_category</field>
            <field name="print_report_name">"Records Category Report - %s" % (object.name or object.id)</field>
            <field name="binding_model_id" ref="records_management.model_records_category"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_records_category_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Records Category Report</h2>
                            <h3 t-if="doc.name"><span t-esc="doc.name or doc.complete_name or 'Category #' + str(doc.id)"/></h3>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-sm">
                                        <tbody>
                                            <tr>
                                                <td><strong>ID:</strong></td>
                                                <td><span t-esc="doc.id"/></td>
                                            </tr>
                                            <t t-if="doc.name">
                                            <tr>
                                                <td><strong>Name:</strong></td>
                                                <td><span t-esc="doc.name or 'Unnamed Category'"/></td>
                                            </tr>
                                            </t>
                                            <t t-if="doc.create_date">
                                            <tr>
                                                <td><strong>Created:</strong></td>
                                                <td><span t-esc="doc.create_date"/></td>
                                            </tr>
                                            </t>
                                            <t t-if="doc.complete_name">
                                            <tr>
                                                <td><strong>Full Path:</strong></td>
                                                <td><span t-esc="doc.complete_name"/></td>
                                            </tr>
                                            </t>
                                            <t t-if="doc.code">
                                            <tr>
                                                <td><strong>Code:</strong></td>
                                                <td><span t-esc="doc.code"/></td>
                                            </tr>
                                            </t>
                                            <t t-if="doc.state">
                                            <tr>
                                                <td><strong>Status:</strong></td>
                                                <td><span t-esc="doc.state.title()"/></td>
                                            </tr>
                                            </t>
                                            <t t-if="doc.document_count">
                                            <tr>
                                                <td><strong>Document Types:</strong></td>
                                                <td><span t-esc="doc.document_count"/></td>
                                            </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
