<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="report_res_partner" model="ir.actions.report">
        <field name="name">Res Partner</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_res_partner_view</field>
        <field name="report_file">records_management.report_res_partner</field>
        <field name="print_report_name">"(Res Partner Report) %s" % (object.name or 'N/A')</field>
        <!-- Removed binding to prevent interference with core PDF tests -->
    </record>    <template id="report_res_partner_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Res Partner Report</h2>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="doc.field_ids">
                                <tr t-foreach="doc.field_ids" t-as="field">
                                    <td>
                                        <span t-esc="field.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="field.description"/>
                                    </td>
                                </tr>
                            </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
    </data>
</odoo>
