<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="report_paper_bale" model="ir.actions.report">
        <field name="name">Paper Bale</field>
        <field name="model">paper.bale</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_paper_bale_view</field>
        <field name="report_file">records_management.report_paper_bale</field>
        <field name="print_report_name">"(Paper Bale Report) %s" % (object.name or 'N/A')</field>
        <field name="binding_model_id" ref="records_management.model_paper_bale"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_paper_bale_view" name="Paper Bale Report" t-name="records_management.report_paper_bale_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 t-esc="doc.name"/>
                        <p>
                            <strong>Status:</strong>
                            <span t-esc="dict(doc._fields['state'].selection).get(doc.state) if 'state' in doc._fields else doc.state"/>
                        </p>
                        <p>
                            <strong>Weight (kg):</strong>
                            <span t-esc="doc.weight"/>
                        </p>
                        <p>
                            <strong>Paper Grade:</strong>
                            <span t-esc="doc.paper_grade"/>
                        </p>
                        <p>
                            <strong>Location:</strong>
                            <span t-esc="doc.location_id.display_name"/>
                        </p>
                        <p>
                            <strong>Source Type:</strong>
                            <span t-esc="doc.source_type"/>
                        </p>
                        <p>
                            <strong>Notes:</strong>
                            <span t-esc="doc.notes"/>
                        </p>
                        <h3>Inspection Summary</h3>
                        <p>
                            Total Inspections: <span t-esc="doc.inspection_count"/>
                        </p>
                        <h3>Movement Summary</h3>
                        <p>
                            Total Movements: <span t-esc="doc.movement_count"/>
                        </p>
                    </div>
                </t>
            </t>
        </t>
    </template>
    </data>
</odoo>
