<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- File Folder Label Paper Format - 2.5935" x 1" (30 per sheet) -->
    <record id="paperformat_file_folder_label" model="report.paperformat">
      <field name="name">File Folder Label (2.6x1 inch)</field>
      <field name="default" eval="False"/>
      <field name="format">custom</field>
      <field name="page_width">66</field>  <!-- 2.5935 inches = 65.87mm, rounded -->
      <field name="page_height">25</field>  <!-- 1 inch = 25.4mm, rounded -->
      <field name="orientation">Landscape</field>
      <field name="margin_top">1</field>
      <field name="margin_bottom">1</field>
      <field name="margin_left">1</field>
      <field name="margin_right">1</field>
      <field name="header_line" eval="False"/>
      <field name="header_spacing">0</field>
      <field name="dpi">96</field>
      <field name="disable_shrinking" eval="True"/>
    </record>

    <!-- Note: paperformat_qr_code_label is defined in container_barcode_reports.xml (loaded first) -->

    <template id="report_file_barcode_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="barcode_value" t-value="doc.barcode or doc.temp_barcode"/>
                <!-- Compact label layout for 2.5935" x 1" -->
                <div class="page" style="text-align:center; padding:1mm; font-family:Arial,sans-serif;">
                    <div style="font-size:7pt; font-weight:bold; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                        <t t-esc="doc.name"/>
                    </div>
                    <div t-if="barcode_value" style="margin:1mm 0;">
                        <img t-attf-src="/report/barcode/?barcode_type=Code128&amp;value={{barcode_value}}&amp;width=180&amp;height=30" style="max-width:100%;"/>
                        <div style="font-size:7pt; font-weight:600;">
                            <t t-esc="barcode_value"/>
                        </div>
                    </div>
                    <div t-else="" style="font-size:7pt; color:#999;">No barcode</div>
                </div>
            </t>
        </t>
    </template>

    <!-- Report action using proper ir.actions.report structure -->
    <record id="report_file_barcode" model="ir.actions.report">
        <field name="name">File Folder Barcode Labels</field>
        <field name="model">records.file</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">records_management.report_file_barcode_template</field>
        <field name="report_file">records_management.report_file_barcode</field>
        <field name="print_report_name">'file_barcode_%s' % object.barcode or object.temp_barcode or object.id</field>
        <field name="paperformat_id" ref="paperformat_file_folder_label"/>
    </record>

    <!-- QR Code Report Template (Secure Portal URL) -->
    <template id="report_file_qrcode_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="barcode_value" t-value="doc.barcode or doc.temp_barcode"/>
                <t t-set="portal_url" t-value="'%s/my/inventory/file/%s' % (doc.get_base_url(), doc.id)"/>
                <!-- Compact QR label layout for 1" x 1.25" -->
                <div class="page" style="text-align:center; padding:1mm; font-family:Arial,sans-serif;">
                    <div style="margin:0;">
                        <img t-att-src="'/report/qr/?value=%s&amp;width=60&amp;height=60' % portal_url" style="width:18mm;height:18mm;"/>
                    </div>
                    <div style="font-size:5pt; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; margin-top:0.5mm;">
                        <t t-esc="doc.name[:20]"/>
                    </div>
                    <div style="font-size:4pt; color:#666;">
                        <t t-if="barcode_value" t-esc="barcode_value"/>
                        <t t-else="">ID:<t t-esc="doc.id"/></t>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- QR Code Report Action -->
    <record id="report_file_qrcode" model="ir.actions.report">
        <field name="name">File Folder QR Code Labels</field>
        <field name="model">records.file</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">records_management.report_file_qrcode_template</field>
        <field name="report_file">records_management.report_file_qrcode</field>
        <field name="print_report_name">'file_qrcode_%s' % object.barcode or object.temp_barcode or object.id</field>
        <field name="paperformat_id" ref="paperformat_qr_code_label"/>
    </record>
    </data>
</odoo>
