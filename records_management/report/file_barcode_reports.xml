<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Force update of report actions -->
  <data noupdate="0">
    <!-- File Barcode Report Action - Multiple per sheet -->
    <record id="report_file_barcode" model="ir.actions.report">
      <field name="name">File Folder Barcode Labels</field>
      <field name="model">records.file</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">records_management.report_file_barcode_template</field>
      <field name="report_file">records_management.report_file_barcode</field>
      <field name="print_report_name">'File_Barcodes'</field>
      <field name="binding_model_id" ref="records_management.model_records_file"/>
      <field name="binding_type">report</field>
      <field name="paperformat_id" ref="records_management.paperformat_label_sheet"/>
      <field name="attachment_use" eval="False"/>
      <field name="attachment" eval="False"/>
    </record>

    <!-- File QR Code Report Action - Multiple per sheet -->
    <record id="report_file_qrcode" model="ir.actions.report">
      <field name="name">File Folder QR Code Labels</field>
      <field name="model">records.file</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">records_management.report_file_qrcode_template</field>
      <field name="report_file">records_management.report_file_qrcode</field>
      <field name="print_report_name">'File_QRCodes'</field>
      <field name="binding_model_id" ref="records_management.model_records_file"/>
      <field name="binding_type">report</field>
      <field name="paperformat_id" ref="records_management.paperformat_label_sheet"/>
      <field name="attachment_use" eval="False"/>
    </record>
  </data>

  <data>
    <!-- File Barcode Labels - Grid Layout (3 cols x 10 rows = 30 per page for 2.6" x 1" labels) -->
    <template id="report_file_barcode_template">
      <t t-call="web.basic_layout">
        <t t-call="web.html_container">
          <!-- 3 columns x 10 rows = 30 labels per page (2.6" x 1" each) -->
          <t t-set="nRows" t-value="10"/>
          <t t-set="nCols" t-value="3"/>
          <t t-set="labelsPerPage" t-value="nRows * nCols"/>
          
          <!-- Loop through pages -->
          <t t-foreach="[docs[x:x + labelsPerPage] for x in range(0, len(docs), labelsPerPage)]" t-as="page_docs">
            <div class="page" style="padding: 5mm; font-family: Arial, sans-serif;">
              <table class="table table-borderless" style="width:100%; table-layout:fixed;">
                <t t-foreach="range(nRows)" t-as="row">
                  <tr>
                    <t t-foreach="range(nCols)" t-as="col">
                      <t t-set="idx" t-value="row * nCols + col"/>
                      <td style="width:33.33%; height:25mm; vertical-align:middle; padding:1mm;">
                        <t t-if="idx &lt; len(page_docs)">
                          <t t-set="doc" t-value="page_docs[idx]"/>
                          <t t-set="barcode_value" t-value="doc.barcode or doc.temp_barcode"/>
                          <div style="border:1px solid #ccc; padding:1mm; height:22mm; text-align:center; overflow:hidden;">
                            <!-- File Name -->
                            <div style="font-weight:bold; font-size:7pt; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                              <t t-esc="doc.name or doc.display_name"/>
                            </div>
                            <!-- Barcode -->
                            <t t-if="barcode_value">
                              <img t-att-src="'/report/barcode/Code128/%s?width=160&amp;height=25' % barcode_value" 
                                   style="max-width:60mm; height:7mm; margin-top:1mm;"/>
                              <div style="font-size:6pt; font-weight:600;">
                                <t t-esc="barcode_value"/>
                                <t t-if="doc.temp_barcode and not doc.barcode">
                                  <span style="font-size:5pt; color:#666;"> (TEMP)</span>
                                </t>
                              </div>
                            </t>
                            <t t-else="">
                              <div style="font-size:6pt; color:#999; margin-top:2mm;"><em>No barcode</em></div>
                            </t>
                          </div>
                        </t>
                      </td>
                    </t>
                  </tr>
                </t>
              </table>
            </div>
          </t>
        </t>
      </t>
    </template>

    <!-- File QR Code Labels - Grid Layout (7 cols x 7 rows = 49 per page) -->
    <template id="report_file_qrcode_template">
      <t t-call="web.basic_layout">
        <t t-call="web.html_container">
          <!-- 7 columns x 7 rows = 49 labels per page (1" x 1.25" each) -->
          <t t-set="nRows" t-value="7"/>
          <t t-set="nCols" t-value="7"/>
          <t t-set="labelsPerPage" t-value="nRows * nCols"/>
          
          <!-- Loop through pages -->
          <t t-foreach="[docs[x:x + labelsPerPage] for x in range(0, len(docs), labelsPerPage)]" t-as="page_docs">
            <div class="page" style="padding: 3mm; font-family: Arial, sans-serif;">
              <table class="table table-borderless" style="width:100%; table-layout:fixed;">
                <t t-foreach="range(nRows)" t-as="row">
                  <tr>
                    <t t-foreach="range(nCols)" t-as="col">
                      <t t-set="idx" t-value="row * nCols + col"/>
                      <td style="width:14.28%; height:32mm; vertical-align:middle; padding:1mm; text-align:center;">
                        <t t-if="idx &lt; len(page_docs)">
                          <t t-set="doc" t-value="page_docs[idx]"/>
                          <t t-set="portal_url" t-value="'%s/my/inventory/file/%s' % (doc.get_base_url(), doc.id)"/>
                          <div style="border:1px solid #ddd; padding:1mm; height:28mm; overflow:hidden;">
                            <img t-att-src="'/report/qr/?value=%s&amp;width=80&amp;height=80' % portal_url" 
                                 style="width:20mm; height:20mm;"/>
                            <div style="font-size:5pt; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                              <t t-esc="(doc.name or '')[:15]"/>
                            </div>
                            <div style="font-size:4pt; color:#666;">
                              <t t-esc="doc.barcode or doc.temp_barcode or ''"/>
                            </div>
                          </div>
                        </t>
                      </td>
                    </t>
                  </tr>
                </t>
              </table>
            </div>
          </t>
        </t>
      </t>
    </template>
  </data>
</odoo>
