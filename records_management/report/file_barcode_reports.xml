<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <template id="report_file_barcode_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="barcode_value" t-value="doc.barcode or doc.temp_barcode"/>
                <div style="display:inline-block;width:200px;height:130px;border:1px solid #000;margin:4px;padding:8px;font-size:11px;vertical-align:top;">
                    <div style="font-weight:bold;text-align:center;margin-bottom:4px;">File Folder Barcode</div>
                    <div t-if="barcode_value" style="font-size:14px;text-align:center;font-weight:bold;">
                        <t t-esc="barcode_value"/>
                    </div>
                    <div t-if="not barcode_value" style="color:red;text-align:center;">NO BARCODE</div>
                    <div t-if="barcode_value" style="margin-top:4px;text-align:center;">
                        <img t-att-src="'/report/barcode/Code128/%s?width=180&amp;height=40' % barcode_value" style="max-width:100%;height:40px;"/>
                    </div>
                    <div style="margin-top:4px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;text-align:center;">
                        <t t-esc="doc.name"/>
                    </div>
                    <div style="font-size:9px;text-align:center;">
                        Container: <t t-esc="doc.container_id.name or 'N/A'"/>
                    </div>
                    <div style="font-size:9px;text-align:center;">
                        <t t-esc="doc.partner_id.name or ''"/>
                    </div>
                </div>
                <t t-if="(doc_index + 1) % 12 == 0"><div style="page-break-after:always;"></div></t>
            </t>
        </t>
    </template>

    <!-- Report action using proper ir.actions.report structure -->
    <record id="report_file_barcode" model="ir.actions.report">
        <field name="name">File Folder Barcode Labels</field>
        <field name="model">records.file</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">records_management.report_file_barcode_template</field>
        <field name="report_file">records_management.report_file_barcode</field>
        <field name="print_report_name">'file_barcode_%s' % object.barcode or object.temp_barcode or object.id</field>
    </record>

    <!-- QR Code Report Template (Secure Portal URL) -->
    <template id="report_file_qrcode_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="barcode_value" t-value="doc.barcode or doc.temp_barcode"/>
                <t t-set="portal_url" t-value="'%s/my/inventory/file/%s' % (doc.get_base_url(), doc.id)"/>
                <div style="display:inline-block;width:200px;height:220px;border:1px solid #000;margin:4px;padding:8px;text-align:center;vertical-align:top;">
                    <div style="font-weight:bold;font-size:12px;margin-bottom:5px;">File Folder QR Code</div>
                    <div style="font-size:10px;color:#666;margin-bottom:5px;">Scan to view details (login required)</div>
                    <div style="margin:8px 0;">
                        <img t-att-src="'/report/qr/?value=%s&amp;width=150&amp;height=150' % portal_url" style="width:150px;height:150px;"/>
                    </div>
                    <div style="font-size:9px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;margin-top:5px;">
                        <t t-esc="doc.name"/>
                    </div>
                    <div style="font-size:8px;color:#999;">
                        <t t-if="barcode_value" t-esc="barcode_value"/>
                        <t t-else="">ID: <t t-esc="doc.id"/></t>
                    </div>
                </div>
                <t t-if="(doc_index + 1) % 9 == 0"><div style="page-break-after:always;"></div></t>
            </t>
        </t>
    </template>

    <!-- QR Code Report Action -->
    <record id="report_file_qrcode" model="ir.actions.report">
        <field name="name">File Folder QR Code Labels</field>
        <field name="model">records.file</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">records_management.report_file_qrcode_template</field>
        <field name="report_file">records_management.report_file_qrcode</field>
        <field name="print_report_name">'file_qrcode_%s' % object.barcode or object.temp_barcode or object.id</field>
    </record>
    </data>
</odoo>
