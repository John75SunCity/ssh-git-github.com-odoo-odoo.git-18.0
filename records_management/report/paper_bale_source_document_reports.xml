<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_paper_bale_source_document" model="ir.actions.report">
        <field name="name">Paper Bale Source Document</field>
        <field name="model">paper.bale.source.document</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_paper_bale_source_document_view</field>
        <field name="report_file">records_management.report_paper_bale_source_document</field>
        <field name="binding_model_id" ref="model_paper_bale_source_document"/>
        <field name="binding_type">report</field>
    </record>

    <!--
        Template: report_paper_bale_source_document_view
        Purpose: Generates a QWeb report for Paper Bale Source Document records, displaying their name and description fields.
    -->
    <template id="report_paper_bale_source_document_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Paper Bale Source Document Report</h2>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="doc.field_ids">
                            <tr t-foreach="doc.field_ids" t-as="field">
                                <td>
                                    <span t-out="field.name"/>
                                </td>
                                <td>
                                    <span t-out="field.description"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
        </t>
    </template>

</odoo>
