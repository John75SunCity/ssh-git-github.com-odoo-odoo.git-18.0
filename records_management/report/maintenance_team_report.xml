<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_maintenance_team" model="ir.actions.report">
        <field name="name">Maintenance Team</field>
        <field name="model">maintenance.team</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_template">records_management.report_maintenance_team_view</field>
        <field name="print_report_name">'%s' % object.name</field>
        <field name="binding_type">report</field>
    </record>

    <template id="report_maintenance_team_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Title</h2>
                        <h2 t-out="doc.name or 'Maintenance Team Report'"/>
                        <table class="table table-condensed">
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="doc.field_ids">
                                    <tr t-foreach="doc.field_ids" t-as="field">
                                        <td>
                                            <span t-out="field.name"/>
                                        </td>
                                        <td>
                                            <span t-out="field.description"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-else="">
                                    <tr>
                                        <td colspan="2">No fields available.</td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
