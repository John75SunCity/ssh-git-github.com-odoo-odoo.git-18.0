<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- PDF Visitor Log Report -->
    <template id="report_visitor_log">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Visitor Log</h2>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Visit Date</th>
                            <th>Purpose</th>
                            <th>Host</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="docs" t-as="visitor">
                            <td><span t-field="visitor.name"/></td>
                            <td><span t-field="visitor.visit_date" t-options="{'widget': 'datetime'}"/></td>
                            <td><span t-field="visitor.purpose"/></td>
                            <td><span t-field="visitor.host_id.name"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
    <record id="action_report_visitor_log" model="ir.actions.report">
        <field name="name">Visitor Log</field>
        <field name="model">visitor.log</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">records_management.report_visitor_log</field>
        <field name="binding_model_id" ref="records_management.model_visitor"/>
        <field name="binding_type">report</field>
    </record>

    <!-- HTML Visitor Report -->
    <record id="report_visitor" model="ir.actions.report">
        <field name="name">Visitor</field>
        <field name="model">visitor</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_visitor_view</field>
        <field name="report_file">records_management.report_visitor</field>
        <field name="print_report_name">"(Visitor Report) %s" % (object.name or 'N/A')</field>
        <field name="binding_model_id" ref="records_management.model_visitor"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_visitor_view">
        <!-- Simplified structure: one external_layout call wrapping a single page.
             We render all doc.field_ids across docs into one consolidated table to
             avoid multiplying <div class="page"> elements per record which can
             inflate page box counts in tests expecting a stable layout (3 core boxes).
        -->
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Visitor Report</h2>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Aggregate all field lines from all docs -->
                            <t t-foreach="docs" t-as="doc">
                                <t t-if="doc.field_ids">
                                    <tr t-foreach="doc.field_ids" t-as="field">
                                        <td><span t-esc="field.name"/></td>
                                        <td><span t-esc="field.description"/></td>
                                    </tr>
                                </t>
                            </t>
                            <t t-if="not any(d.field_ids for d in docs)">
                                <tr>
                                    <td colspan="2">No fields available.</td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
    </data>
</odoo>
