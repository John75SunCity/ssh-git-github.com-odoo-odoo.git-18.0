<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        Report Action for Shred Bin.
        This action defines the report for the shred.bin model, making it available
        in the "Print" menu for shred bin records.
    -->
    <record id="report_shred_bin" model="ir.actions.report">
        <field name="name">Shred Bin</field>
        <field name="model">shred.bin</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_shred_bin_view</field>
        <field name="report_file">records_management.report_shred_bin</field>
        <field name="binding_model_id" ref="model_shred_bin"/>
        <field name="binding_type">report</field>
    </record>

    <!--
        QWeb Template for the Shred Bin Report.
        This template defines the layout and content of the printable report for a shred bin.
        It iterates through the provided documents (shred.bin records) and displays
        their details in a structured table format.
    -->
    <template id="report_shred_bin_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Shred Bin Report</h2>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="doc.field_ids">
                                    <tr t-foreach="doc.field_ids" t-as="field">
                                        <td t-out="field.name"/>
                                        <td t-out="field.description"/>
                                    </tr>
                                </t>
                            </tbody>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
