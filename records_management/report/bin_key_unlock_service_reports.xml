<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_bin_key_unlock_service" model="ir.actions.report">
        <field name="name">Bin Key Unlock Service</field>
        <field name="model">bin.key.unlock.service</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_bin_key_unlock_service_view</field>
        <field name="report_file">records_management.report_bin_key_unlock_service</field>
        <field name="print_report_name">"%s" % (object.name,)</field>
        <field name="binding_model_id" ref="model_bin_key_unlock_service"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_bin_key_unlock_service_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Bin Key Unlock Service Report</h2>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="doc.field_ids">
                                    <tr t-foreach="doc.field_ids" t-as="field">
                                        <td>
                                            <span t-esc="field.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="field.description"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>