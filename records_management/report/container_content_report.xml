<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_container_content" model="ir.actions.report">
            <field name="name">Container Contents</field>
            <field name="model">records.container.content</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">records_management.report_container_content_template</field>
            <field name="report_file">records_management.report_container_content_template</field>
            <field name="binding_model_id" ref="records_management.model_records_container_content"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_container_content_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Container Content Report</h2>
                            <p>Container: <span t-field="doc.container_id.name"/></p>
                            <p>Content: <span t-field="doc.name"/></p>
                            <p>Description: <span t-field="doc.description"/></p>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
