<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_work_order_shredding">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Work Order Shredding Report</h2>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Work Order</th>
                            <th>Shredding Date</th>
                            <th>Technician</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="docs" t-as="shred">
                            <td><span t-field="shred.work_order_id.name"/></td>
                            <td><span t-field="shred.shredding_date" t-options="{'widget': 'datetime'}"/></td>
                            <td><span t-field="shred.technician_id.name"/></td>
                            <td><span t-field="shred.state"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
    <record id="action_report_work_order_shredding" model="ir.actions.report">
        <field name="name">Work Order Shredding</field>
        <field name="model">work.order.shredding</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">records_management.report_work_order_shredding</field>
        <field name="binding_model_id" ref="records_management.model_work_order_shredding"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_work_order_shredding" model="ir.actions.report">
        <field name="name">Work Order Shredding</field>
        <field name="model">work.order.shredding</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_work_order_shredding_view</field>
        <field name="report_file">records_management.report_work_order_shredding</field>
        <field name="print_report_name">"(Work Order Shredding Report) %s" % (object.name or 'N/A')</field>
        <field name="binding_model_id" ref="model_work_order_shredding"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_work_order_shredding_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Work Order Shredding Report</h2>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="doc.field_ids">
                                <tr t-foreach="doc.field_ids" t-as="field">
                                    <td>
                                        <span t-esc="field.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="field.description"/>
                                    </td>
                                </tr>
                            </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
