<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_records_tag" model="ir.actions.report">
        <field name="name">Records Tag</field>
        <field name="model">records.tag</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">addon.report_records_tag_view</field>
        <field name="report_file">addon.report_records_tag</field>
        <field name="print_report_name">'%s' % object.name</field>
        <field name="binding_model_id" ref="model_records_tag"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_records_tag_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Title</h2>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.field_ids" t-as="field">
                                    <td>
                                        <span t-esc="field.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="field.description"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>