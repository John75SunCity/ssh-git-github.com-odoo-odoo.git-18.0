<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="report_records_location" model="ir.actions.report">
        <field name="name">Stock Location (Records)</field>
        <field name="model">stock.location</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_records_location_view</field>
        <field name="report_file">records_management.report_records_location</field>
        <field name="print_report_name">"(Stock Location Report) %s" % (object.name or 'N/A')</field>
        <field name="binding_model_id" ref="stock.model_stock_location"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_records_location_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Stock Location Report</h2>
                        <h3><t t-esc="doc.complete_name or doc.name"/></h3>
                        
                        <div class="row mt-4">
                            <div class="col-6">
                                <table class="table table-sm">
                                    <tbody>
                                        <tr>
                                            <th style="width: 40%;">Location Name</th>
                                            <td><t t-esc="doc.name"/></td>
                                        </tr>
                                        <tr>
                                            <th>Location Type</th>
                                            <td><t t-esc="doc.usage"/></td>
                                        </tr>
                                        <tr>
                                            <th>Parent Location</th>
                                            <td><t t-esc="doc.location_id.complete_name if doc.location_id else 'N/A'"/></td>
                                        </tr>
                                        <tr>
                                            <th>Company</th>
                                            <td><t t-esc="doc.company_id.name if doc.company_id else 'N/A'"/></td>
                                        </tr>
                                        <tr t-if="hasattr(doc, 'is_records_location')">
                                            <th>Records Location</th>
                                            <td><t t-if="doc.is_records_location">Yes</t><t t-else="">No</t></td>
                                        </tr>
                                        <tr t-if="hasattr(doc, 'max_capacity')">
                                            <th>Maximum Capacity</th>
                                            <td><t t-esc="doc.max_capacity or 'N/A'"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <t t-if="doc.child_ids">
                            <h4 class="mt-4">Child Locations</h4>
                            <table class="table table-condensed table-striped">
                                <thead>
                                    <tr>
                                        <th>Location Name</th>
                                        <th>Type</th>
                                        <th>Active</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.child_ids" t-as="child">
                                        <td><t t-esc="child.name"/></td>
                                        <td><t t-esc="child.usage"/></td>
                                        <td><t t-if="child.active">Yes</t><t t-else="">No</t></td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    </data>
</odoo>
