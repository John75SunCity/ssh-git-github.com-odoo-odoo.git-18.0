<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="report_portal_request" model="ir.actions.report">
        <field name="name">Portal Request</field>
        <field name="model">portal.request</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_portal_request_view</field>
        <field name="report_file">records_management.report_portal_request</field>
        <field name="print_report_name">"(Portal Request Report) %s" % (object.name or 'N/A')</field>
        <field name="binding_model_id" ref="records_management.model_portal_request"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_portal_request_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Portal Request Report</h2>
                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Request:</strong> <span t-field="doc.name"/><br/>
                                <strong>Customer:</strong> <span t-field="doc.partner_id"/><br/>
                                <strong>Type:</strong> <span t-field="doc.request_type"/><br/>
                                <strong>Status:</strong> <span t-field="doc.state"/><br/>
                            </div>
                            <div class="col-6">
                                <strong>Requested Date:</strong> <span t-field="doc.requested_date"/><br/>
                                <strong>Deadline:</strong> <span t-field="doc.deadline"/><br/>
                                <strong>Priority:</strong> <span t-field="doc.priority"/><br/>
                                <strong>Assigned To:</strong> <span t-field="doc.user_id"/><br/>
                            </div>
                        </div>
                        
                        <t t-if="doc.description">
                            <h4>Description</h4>
                            <p t-field="doc.description"/>
                        </t>

                        <t t-if="doc.file_ids">
                            <h4>Related Files</h4>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>File Name</th>
                                        <th>Barcode</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.file_ids" t-as="file">
                                        <td><span t-field="file.name"/></td>
                                        <td><span t-field="file.barcode"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>

                        <t t-if="doc.container_ids">
                            <h4>Related Containers</h4>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Container</th>
                                        <th>Barcode</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.container_ids" t-as="container">
                                        <td><span t-field="container.name"/></td>
                                        <td><span t-field="container.barcode"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    </data>
</odoo>