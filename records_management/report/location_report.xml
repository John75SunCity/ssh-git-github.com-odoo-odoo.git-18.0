<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_location" model="ir.actions.report">
            <field name="name">Location Report</field>
            <field name="model">records.location</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">records_management.report_location_template</field>
            <field name="report_file">records_management.report_location_template</field>
            <field name="binding_model_id" ref="model_records_location"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_location_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Location: <span t-field="doc.name"/></h2>
                            <p>Barcode: <span t-field="doc.barcode"/></p>
                            <p>Company: <span t-field="doc.company_id.name"/></p>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
