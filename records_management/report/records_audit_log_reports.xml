<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_records_audit_log" model="ir.actions.report">
        <field name="name">Records Audit Log</field>
        <field name="model">naid.audit.log</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_records_audit_log_view</field>
        <field name="report_file">records_management.report_records_audit_log</field>
        <field name="binding_model_id" ref="records_management.model_naid_audit_log"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_records_audit_log_view">
        <!-- Removed web.html_container and web.external_layout to avoid unresolved external IDs -->
        <t t-foreach="docs" t-as="doc">
            <div class="page">
                <h2>Records Audit Log Report</h2>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><span t-esc="doc.name"/></td>
                            <td><span t-esc="doc.description"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>

