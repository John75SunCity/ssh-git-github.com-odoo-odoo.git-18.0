<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Report Action -->
        <record id="action_report_destruction_certificate" model="ir.actions.report">
            <field name="name">Destruction Certificate</field>
            <field name="model">destruction.certificate</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">records_management.report_destruction_certificate_template</field>
            <field name="report_file">records_management.report_destruction_certificate_template</field>
            <field name="print_report_name">'DestructionCertificate-%s' % (object.name or '')</field>
            <field name="binding_model_id" ref="records_management.model_destruction_certificate"/>
            <field name="binding_type">report</field>
        </record>

        <!-- QWeb Template -->
        <template id="report_destruction_certificate_template" name="Destruction Certificate">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <style>
                                .o_signature_placeholder {
                                    height: 60px;
                                    border-bottom: 1px solid #000;
                                }
                            </style>

                            <div class="text-center">
                                <h2>Destruction Certificate</h2>
                            </div>

                            <p><strong>Certificate Number:</strong> <span t-field="doc.name"/></p>
                            <p><strong>Certificate Date:</strong> <span t-field="doc.certificate_date"/></p>
                            <p><strong>Customer:</strong> <span t-field="doc.partner_id.display_name"/></p>
                            <p><strong>Destruction Type:</strong> <span t-field="doc.destruction_type"/></p>
                            <p><strong>Weight Processed (kg):</strong> <span t-field="doc.weight_processed"/></p>
                            <p><strong>Containers Processed:</strong> <span t-field="doc.containers_processed"/></p>
                            <p><strong>Status:</strong> <span t-field="doc.state"/></p>

                            <div t-if="doc.notes">
                                <p><strong>Notes:</strong></p>
                                <p t-field="doc.notes"/>
                            </div>

                            <!-- Aggregated Events -->
                            <t t-set="events" t-value="doc._get_aggregated_events()"/>
                            <t t-if="events">
                                <h3 class="mt32">Event Details</h3>
                                <table class="table table-sm o_destruction_events">
                                    <thead>
                                        <tr>
                                            <th>Ref</th>
                                            <th>Date</th>
                                            <th>Technician</th>
                                            <th>Location</th>
                                            <th>Items</th>
                                            <th class="text-end">Quantity</th>
                                            <th>UoM</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="events" t-as="ev">
                                            <td><span t-esc="ev['name']"/></td>
                                            <td><span t-esc="ev['date']"/></td>
                                            <td><span t-esc="ev['technician']"/></td>
                                            <td><span t-esc="ev['location_type']"/></td>
                                            <td><span t-esc="ev['items']"/></td>
                                            <td class="text-end"><span t-esc="ev['quantity']"/></td>
                                            <td><span t-esc="ev['uom']"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>

                            <!-- Signatures -->
                            <t t-set="sign_ctx" t-value="doc._signature_block_context()"/>
                            <div class="row mt32" t-if="sign_ctx['compliance_officer'] or sign_ctx['witness'] or sign_ctx['operator']">
                                <div class="col-4" t-if="sign_ctx['compliance_officer']">
                                    <p class="mb4"><strong>Compliance Officer</strong></p>
                                    <div class="o_signature_placeholder"/>
                                    <p class="mt4"><span t-esc="sign_ctx['compliance_officer']"/></p>
                                </div>
                                <div class="col-4" t-if="sign_ctx['witness']">
                                    <p class="mb4"><strong>Witness</strong></p>
                                    <div class="o_signature_placeholder"/>
                                    <p class="mt4"><span t-esc="sign_ctx['witness']"/></p>
                                </div>
                                <div class="col-4" t-if="sign_ctx['operator']">
                                    <p class="mb4"><strong>Operator</strong></p>
                                    <div class="o_signature_placeholder"/>
                                    <p class="mt4"><span t-esc="sign_ctx['operator']"/></p>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
