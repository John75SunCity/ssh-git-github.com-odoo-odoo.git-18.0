<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="report_naid_certificate" model="ir.actions.report">
    <field name="name">Naid Certificate</field>
        <field name="model">naid.certificate</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">records_management.report_naid_certificate_view</field>
        <field name="report_file">records_management.report_naid_certificate</field>
        <field name="print_report_name">"(NAID Certificate Report) %s" % (object.name or 'N/A')</field>
        <field name="binding_model_id" ref="records_management.model_naid_certificate"/>
        <field name="binding_type">report</field>
    <!-- Enable attachment caching for immutable certificates -->
    <field name="attachment">(object.certificate_number and ('naid_cert_'+object.certificate_number)) or False</field>
    <field name="attachment_use">True</field>
    </record>

    <!-- Backward-compatibility alias expected by Python and portal routes -->
    <record id="action_report_naid_certificate" model="ir.actions.report">
        <field name="name">Naid Certificate</field>
        <field name="model">naid.certificate</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">records_management.report_naid_certificate_view</field>
        <field name="report_file">records_management.report_naid_certificate</field>
        <field name="print_report_name">"(NAID Certificate Report) %s" % (object.name or 'N/A')</field>
        <!-- Note: No binding to avoid duplicate Print menu entries; used as XMLID alias only. -->
    </record>

    <template id="report_naid_certificate_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Replaced invalid t-translate with t-translation (official directive) -->
                        <h2 t-translation="on">NAID Certificate of Destruction</h2>
                        <div class="row">
                            <div class="col-12">
                                <p>
                                    <strong t-translation="on">Certificate Number:</strong>
                                    <span t-esc="doc.certificate_number or doc.name"/>
                                </p>
                                <p>
                                    <strong t-translation="on">Customer:</strong>
                                    <span t-esc="doc.partner_id and doc.partner_id.display_name or ''"/>
                                </p>
                                <p>
                                    <strong t-translation="on">Destruction Date:</strong>
                                    <span t-if="doc.destruction_date" t-field="doc.destruction_date" t-options="{'format': 'datetime'}"/>
                                </p>
                                <p>
                                    <strong t-translation="on">Issue Date:</strong>
                                    <span t-if="doc.issue_date" t-field="doc.issue_date" t-options="{'format': 'datetime'}"/>
                                </p>
                            </div>
                        </div>

                        <t t-if="doc.container_ids or doc.box_ids or doc.destruction_item_ids">
                            <h3 t-translation="on">Destroyed Items Summary</h3>
                            <table class="table table-sm">
                                <caption style="caption-side: top; text-align:left; font-size:10px;" t-translation="on">Summary of all destroyed containers, boxes, and loose items</caption>
                                <thead>
                                    <tr>
                                        <th t-translation="on">Type</th>
                                        <th t-translation="on">Name</th>
                                        <th t-attf-style="text-align:right;" t-translation="on">Qty</th>
                                        <th t-attf-style="text-align:right;" t-translation="on">Weight (lbs)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.destruction_item_ids" t-as="item">
                                        <tr>
                                            <td t-translation="on">Item</td>
                                            <td><span t-esc="item.display_name"/></td>
                                            <td style="text-align:right"><span t-esc="item.quantity or 0"/></td>
                                            <td style="text-align:right"><span t-esc="item.weight or 0.0"/></td>
                                        </tr>
                                    </t>
                                    <t t-foreach="doc.container_ids" t-as="cont">
                                        <tr>
                                            <td t-translation="on">Container</td>
                                            <td><span t-esc="cont.display_name"/></td>
                                            <td style="text-align:right">1</td>
                                            <td style="text-align:right"><span t-esc="cont.cubic_feet or 0.0"/></td>
                                        </tr>
                                    </t>
                                    <t t-foreach="doc.box_ids" t-as="box">
                                        <tr>
                                            <td t-translation="on">Box</td>
                                            <td><span t-esc="box.display_name"/></td>
                                            <td style="text-align:right">1</td>
                                            <td style="text-align:right"><span t-esc="box.cubic_feet or 0.0"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="2" style="text-align:right" t-translation="on">Totals:</th>
                                        <th style="text-align:right"><span t-esc="doc.total_items or 0"/></th>
                                        <th style="text-align:right"><span t-esc="doc.total_weight or 0.0"/></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </t>
                        <t t-else="">
                            <p><em t-translation="on">No destruction items, containers, or boxes were recorded for this certificate.</em></p>
                        </t>

                        <t t-if="doc.witness_name">
                            <p>
                                <strong t-translation="on">Witness:</strong>
                                <span t-esc="doc.witness_name"/>
                            </p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    </data>
</odoo>
