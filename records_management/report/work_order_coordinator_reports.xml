<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Single consolidated report definition for Work Order Coordinator -->
    <record id="report_work_order_coordinator" model="ir.actions.report">
        <field name="name">Work Order Coordinator</field>
        <field name="model">work.order.coordinator</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_work_order_coordinator_view</field>
        <field name="report_file">records_management.report_work_order_coordinator</field>
        <field name="print_report_name">"(Work Order Coordinator Report) %s" % (object.name or 'N/A')</field>
        <field name="binding_model_id" ref="records_management.model_work_order_coordinator"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_work_order_coordinator_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Work Order Coordinator Report</h2>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Work Order</th>
                                    <th>Coordinator</th>
                                    <th>Status</th>
                                    <th>Assigned Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span t-field="doc.work_order_id.name"/></td>
                                    <td><span t-field="doc.coordinator_id.name"/></td>
                                    <td><span t-field="doc.state"/></td>
                                    <td><span t-field="doc.assigned_date" t-options="{'widget': 'datetime'}"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
