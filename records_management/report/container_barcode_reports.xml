<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Container Barcode Report Action -->
    <record id="report_container_barcode" model="ir.actions.report">
      <field name="name">Container Barcode</field>
      <field name="model">records.container</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">records_management.report_container_barcode_view</field>
      <field name="report_file">records_management.report_container_barcode</field>
      <field name="print_report_name">"(Container Barcode) %s" % (object.display_name or 'Container')</field>
      <field name="binding_model_id" ref="records_management.model_records_container"/>
      <field name="binding_type">report</field>
      <!-- Attachment caching: only if a physical barcode exists (immutable physical state) -->
      <field name="attachment">(object.barcode and ('container_barcode_'+object.barcode)) or False</field>
      <field name="attachment_use">True</field>
    </record>

    <template id="report_container_barcode_view">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
          <t t-call="web.external_layout">
            <div class="page" style="text-align:center; padding-top:0.8cm;">
              <h3 style="margin:4px 0;">Container Label</h3>
              <div>
                <strong t-esc="doc.display_name"/>
              </div>
              <div style="margin-top:10px;" t-if="doc.barcode">
                <img t-att-src="'/report/barcode/Code128/%s?width=400&amp;height=120' % doc.barcode" alt="Barcode" style="margin:8px 0;"/>
                <div style="font-size:14px; font-weight:600;" t-esc="doc.barcode"/>
              </div>
              <div style="margin-top:10px;" t-elif="doc.temp_barcode">
                <img t-att-src="'/report/barcode/Code128/%s?width=400&amp;height=120' % doc.temp_barcode" alt="Temporary Barcode" style="margin:8px 0;"/>
                <div style="font-size:14px; font-weight:600;" t-esc="doc.temp_barcode"/>
                <div style="font-size:10px;">Temporary Barcode</div>
              </div>
              <div t-else="" style="margin-top:18px;">
                <em style="font-size:12px;">No barcode assigned</em>
              </div>
              <div style="margin-top:6px; font-size:11px;">
                <span t-if="doc.container_type_id" t-esc="doc.container_type_id.name"/>
              </div>
              <div style="margin-top:4px; font-size:9px; color:#666;">
                <span>Generated</span>: <span t-esc="(datetime.datetime.utcnow()).strftime('%Y-%m-%d %H:%M UTC')"/>
              </div>
            </div>
          </t>
        </t>
      </t>
    </template>

    <!-- Container QR Code Report Template (Secure Portal URL) -->
    <template id="report_container_qrcode_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div style="display:inline-block;width:200px;height:200px;border:1px solid #000;margin:4px;padding:8px;text-align:center;vertical-align:top;">
                    <div style="font-weight:bold;font-size:12px;margin-bottom:5px;">Container QR Code</div>
                    <div style="font-size:10px;color:#666;margin-bottom:5px;">Scan to view details (login required)</div>
                    <div style="margin:8px 0;">
                        <t t-set="portal_url" t-value="'%s/my/inventory/container/%s' % (doc.get_base_url(), doc.id)"/>
                        <img t-att-src="'/report/qr/?value=%s&amp;width=150&amp;height=150' % portal_url" style="width:150px;height:150px;"/>
                    </div>
                    <div style="font-size:9px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;margin-top:5px;">[[ doc.name ]]</div>
                    <div style="font-size:8px;color:#999;">[[ doc.barcode or doc.temp_barcode or 'ID: %s' % doc.id ]]</div>
                </div>
                <t t-if="(doc_index + 1) % 9 == 0"><div style="page-break-after:always;"></div></t>
            </t>
        </t>
    </template>

    <!-- Container QR Code Report Action -->
    <record id="report_container_qrcode" model="ir.actions.report">
        <field name="name">Container QR Code Labels</field>
        <field name="model">records.container</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">records_management.report_container_qrcode_template</field>
        <field name="report_file">records_management.report_container_qrcode</field>
        <field name="print_report_name">'container_qrcode_%s' % object.barcode or object.temp_barcode or object.id</field>
        <field name="binding_model_id" ref="records_management.model_records_container"/>
        <field name="binding_type">report</field>
    </record>
  </data>
</odoo>
