<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Letter Size Paper Format for Label Sheets -->
    <record id="paperformat_label_sheet" model="report.paperformat">
      <field name="name">Label Sheet (Letter)</field>
      <field name="default" eval="False"/>
      <field name="format">Letter</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">10</field>
      <field name="margin_bottom">10</field>
      <field name="margin_left">5</field>
      <field name="margin_right">5</field>
      <field name="header_line" eval="False"/>
      <field name="header_spacing">0</field>
      <field name="dpi">96</field>
    </record>
  </data>

  <!-- Force update of report actions to disable attachment caching -->
  <data noupdate="0">
    <!-- Container Barcode Report Action - Multiple per sheet -->
    <record id="report_container_barcode" model="ir.actions.report">
      <field name="name">Container Barcode Labels</field>
      <field name="model">records.container</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">records_management.report_container_barcode_view</field>
      <field name="report_file">records_management.report_container_barcode</field>
      <field name="print_report_name">'Container_Barcodes'</field>
      <field name="binding_model_id" ref="records_management.model_records_container"/>
      <field name="binding_type">report</field>
      <field name="paperformat_id" ref="paperformat_label_sheet"/>
      <field name="attachment_use" eval="False"/>
      <field name="attachment" eval="False"/>
    </record>

    <!-- Container QR Code Report Action - Multiple per sheet -->
    <record id="report_container_qrcode" model="ir.actions.report">
      <field name="name">Container QR Code Labels</field>
      <field name="model">records.container</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">records_management.report_container_qrcode_template</field>
      <field name="report_file">records_management.report_container_qrcode</field>
      <field name="print_report_name">'Container_QRCodes'</field>
      <field name="binding_model_id" ref="records_management.model_records_container"/>
      <field name="binding_type">report</field>
      <field name="paperformat_id" ref="paperformat_label_sheet"/>
      <field name="attachment_use" eval="False"/>
    </record>
  </data>

  <data>
    <!-- Container Barcode Labels - Grid Layout (2 cols x 7 rows = 14 per page) -->
    <template id="report_container_barcode_view">
      <t t-call="web.basic_layout">
        <t t-call="web.html_container">
          <!-- 2 columns x 7 rows = 14 labels per page (4" x 1.33" each) -->
          <t t-set="nRows" t-value="7"/>
          <t t-set="nCols" t-value="2"/>
          <t t-set="labelsPerPage" t-value="nRows * nCols"/>
          
          <!-- Loop through pages -->
          <t t-foreach="[docs[x:x + labelsPerPage] for x in range(0, len(docs), labelsPerPage)]" t-as="page_docs">
            <div class="page" style="padding: 5mm; font-family: Arial, sans-serif;">
              <table class="table table-borderless" style="width:100%; table-layout:fixed;">
                <t t-foreach="range(nRows)" t-as="row">
                  <tr>
                    <t t-foreach="range(nCols)" t-as="col">
                      <t t-set="idx" t-value="row * nCols + col"/>
                      <td style="width:50%; height:34mm; vertical-align:middle; padding:2mm;">
                        <t t-if="idx &lt; len(page_docs)">
                          <t t-set="doc" t-value="page_docs[idx]"/>
                          <div style="border:1px solid #ccc; padding:2mm; height:30mm; text-align:center; overflow:hidden;">
                            <!-- Container Name -->
                            <div style="font-weight:bold; font-size:9pt; margin-bottom:1mm; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                              <t t-esc="doc.display_name"/>
                            </div>
                            <!-- Barcode -->
                            <t t-if="doc.barcode">
                              <img t-att-src="'/report/barcode/Code128/%s?width=200&amp;height=35' % doc.barcode" 
                                   style="max-width:95mm; height:9mm;"/>
                              <div style="font-size:8pt; font-weight:600; margin-top:1mm;">
                                <t t-esc="doc.barcode"/>
                              </div>
                            </t>
                            <t t-elif="doc.temp_barcode">
                              <img t-att-src="'/report/barcode/Code128/%s?width=200&amp;height=35' % doc.temp_barcode"
                                   style="max-width:95mm; height:9mm;"/>
                              <div style="font-size:8pt; font-weight:600; margin-top:1mm;">
                                <t t-esc="doc.temp_barcode"/> <span style="font-size:6pt; color:#666;">(TEMP)</span>
                              </div>
                            </t>
                            <t t-else="">
                              <div style="font-size:7pt; color:#999; margin-top:3mm;"><em>No barcode</em></div>
                            </t>
                            <!-- Container Type -->
                            <t t-if="doc.container_type_id">
                              <div style="font-size:6pt; color:#666; margin-top:1mm;">
                                <t t-esc="doc.container_type_id.name"/>
                              </div>
                            </t>
                          </div>
                        </t>
                      </td>
                    </t>
                  </tr>
                </t>
              </table>
            </div>
          </t>
        </t>
      </t>
    </template>

    <!-- Container QR Code Labels - Grid Layout (7 cols x 7 rows = 49 per page) -->
    <template id="report_container_qrcode_template">
      <t t-call="web.basic_layout">
        <t t-call="web.html_container">
          <!-- 7 columns x 7 rows = 49 labels per page (1" x 1.25" each) -->
          <t t-set="nRows" t-value="7"/>
          <t t-set="nCols" t-value="7"/>
          <t t-set="labelsPerPage" t-value="nRows * nCols"/>
          
          <!-- Loop through pages -->
          <t t-foreach="[docs[x:x + labelsPerPage] for x in range(0, len(docs), labelsPerPage)]" t-as="page_docs">
            <div class="page" style="padding: 3mm; font-family: Arial, sans-serif;">
              <table class="table table-borderless" style="width:100%; table-layout:fixed;">
                <t t-foreach="range(nRows)" t-as="row">
                  <tr>
                    <t t-foreach="range(nCols)" t-as="col">
                      <t t-set="idx" t-value="row * nCols + col"/>
                      <td style="width:14.28%; height:32mm; vertical-align:middle; padding:1mm; text-align:center;">
                        <t t-if="idx &lt; len(page_docs)">
                          <t t-set="doc" t-value="page_docs[idx]"/>
                          <t t-set="portal_url" t-value="'%s/my/inventory/container/%s' % (doc.get_base_url(), doc.id)"/>
                          <div style="border:1px solid #ddd; padding:1mm; height:28mm; overflow:hidden;">
                            <img t-att-src="'/report/qr/?value=%s&amp;width=80&amp;height=80' % portal_url" 
                                 style="width:20mm; height:20mm;"/>
                            <div style="font-size:5pt; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                              <t t-esc="(doc.name or '')[:15]"/>
                            </div>
                            <div style="font-size:4pt; color:#666;">
                              <t t-esc="doc.barcode or doc.temp_barcode or ''"/>
                            </div>
                          </div>
                        </t>
                      </td>
                    </t>
                  </tr>
                </t>
              </table>
            </div>
          </t>
        </t>
      </t>
    </template>
  </data>
</odoo>
