<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Container Barcode Label Paper Format - 4" x 1.33" (Avery compatible, 14 per sheet) -->
    <record id="paperformat_container_barcode_label" model="report.paperformat">
      <field name="name">Container Barcode Label (4x1.33 inch)</field>
      <field name="default" eval="False"/>
      <field name="format">custom</field>
      <field name="page_width">102</field>
      <field name="page_height">34</field>
      <field name="orientation">Landscape</field>
      <field name="margin_top">1</field>
      <field name="margin_bottom">1</field>
      <field name="margin_left">2</field>
      <field name="margin_right">2</field>
      <field name="header_line" eval="False"/>
      <field name="header_spacing">0</field>
      <field name="dpi">96</field>
      <field name="disable_shrinking" eval="True"/>
    </record>

    <!-- QR Code Label Paper Format - 1" x 1.25" (49 per sheet) -->
    <record id="paperformat_qr_code_label" model="report.paperformat">
      <field name="name">QR Code Label (1x1.25 inch)</field>
      <field name="default" eval="False"/>
      <field name="format">custom</field>
      <field name="page_width">25</field>
      <field name="page_height">32</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">1</field>
      <field name="margin_bottom">1</field>
      <field name="margin_left">1</field>
      <field name="margin_right">1</field>
      <field name="header_line" eval="False"/>
      <field name="header_spacing">0</field>
      <field name="dpi">96</field>
      <field name="disable_shrinking" eval="True"/>
    </record>
  </data>

  <!-- Force update of report actions to disable attachment caching -->
  <data noupdate="0">
    <!-- Container Barcode Report Action -->
    <record id="report_container_barcode" model="ir.actions.report">
      <field name="name">Container Barcode</field>
      <field name="model">records.container</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">records_management.report_container_barcode_view</field>
      <field name="report_file">records_management.report_container_barcode</field>
      <field name="print_report_name">"(Container Barcode) %s" % (object.display_name or 'Container')</field>
      <field name="binding_model_id" ref="records_management.model_records_container"/>
      <field name="binding_type">report</field>
      <field name="paperformat_id" ref="paperformat_container_barcode_label"/>
      <field name="attachment_use" eval="False"/>
      <field name="attachment" eval="False"/>
    </record>

    <!-- Container QR Code Report Action -->
    <record id="report_container_qrcode" model="ir.actions.report">
      <field name="name">Container QR Code Labels</field>
      <field name="model">records.container</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">records_management.report_container_qrcode_template</field>
      <field name="report_file">records_management.report_container_qrcode</field>
      <field name="print_report_name">'container_qrcode_%s' % object.barcode or object.temp_barcode or object.id</field>
      <field name="paperformat_id" ref="records_management.paperformat_qr_code_label"/>
      <field name="attachment_use" eval="False"/>
    </record>
  </data>

  <data>
    <!-- Container Barcode Report Template -->
    <template id="report_container_barcode_view">
      <t t-call="web.basic_layout">
        <t t-foreach="docs" t-as="doc">
          <div class="page" style="text-align:center; padding:2mm; font-family:Arial,sans-serif; page-break-after:always;">
            <div style="font-weight:bold; font-size:9pt; margin-bottom:1mm; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
              <t t-esc="doc.display_name"/>
            </div>
            <t t-if="doc.barcode">
              <div style="margin:1mm 0;">
                <img t-att-src="'/report/barcode/Code128/%s?width=260&amp;height=40' % doc.barcode" alt="Barcode"/>
              </div>
              <div style="font-size:9pt; font-weight:600;" t-esc="doc.barcode"/>
            </t>
            <t t-elif="doc.temp_barcode">
              <div style="margin:1mm 0;">
                <img t-att-src="'/report/barcode/Code128/%s?width=260&amp;height=40' % doc.temp_barcode" alt="Temporary Barcode"/>
              </div>
              <div style="font-size:9pt; font-weight:600;">
                <t t-esc="doc.temp_barcode"/> <span style="font-size:7pt; color:#666;">(TEMP)</span>
              </div>
            </t>
            <t t-else="">
              <div style="font-size:8pt; color:#999;"><em>No barcode assigned</em></div>
            </t>
            <t t-if="doc.container_type_id">
              <div style="font-size:7pt; color:#333; margin-top:1mm;">
                <t t-esc="doc.container_type_id.name"/>
              </div>
            </t>
          </div>
        </t>
      </t>
    </template>

    <!-- Container QR Code Report Template -->
    <template id="report_container_qrcode_template">
      <t t-call="web.basic_layout">
        <t t-foreach="docs" t-as="doc">
          <t t-set="portal_url" t-value="'%s/my/inventory/container/%s' % (doc.get_base_url(), doc.id)"/>
          <div class="page" style="text-align:center; padding:1mm; font-family:Arial,sans-serif; page-break-after:always;">
            <div style="margin:0;">
              <img t-att-src="'/report/qr/?value=%s&amp;width=60&amp;height=60' % portal_url" style="width:18mm;height:18mm;"/>
            </div>
            <div style="font-size:5pt; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; margin-top:0.5mm;">
              <t t-esc="doc.name[:20] if doc.name else ''"/>
            </div>
            <div style="font-size:4pt; color:#666;">
              <t t-esc="doc.barcode or doc.temp_barcode or ('ID:%s' % doc.id)"/>
            </div>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
