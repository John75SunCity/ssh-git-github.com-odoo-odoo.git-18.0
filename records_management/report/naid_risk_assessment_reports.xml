<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_naid_risk_assessment" model="ir.actions.report">
        <field name="name">NAID Risk Assessment</field>
        <field name="model">naid.risk.assessment</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_naid_risk_assessment_view</field>
        <field name="report_file">records_management.report_naid_risk_assessment</field>
        <field name="print_report_name">"(NAID Risk Assessment Report) %s" % (object.name or 'N/A')</field>
        <field name="binding_model_id" ref="model_naid_risk_assessment"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_naid_risk_assessment_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>NAID Risk Assessment Report</h2>
                        
                        <!-- Assessment Overview -->
                        <div class="row mb32">
                            <div class="col-6">
                                <strong>Assessment Name:</strong> <span t-field="doc.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Assessment Date:</strong> <span t-field="doc.assessment_date"/>
                            </div>
                        </div>
                        
                        <div class="row mb32">
                            <div class="col-6">
                                <strong>Risk Level:</strong> <span t-field="doc.risk_level"/>
                            </div>
                            <div class="col-6">
                                <strong>Status:</strong> <span t-field="doc.state"/>
                            </div>
                        </div>
                        
                        <!-- Risk Description -->
                        <div class="row mb32" t-if="doc.description">
                            <div class="col-12">
                                <strong>Risk Description:</strong>
                                <p t-field="doc.description"/>
                            </div>
                        </div>
                        
                        <!-- Assessment Details -->
                        <div class="row mb32" t-if="doc.assessment_details">
                            <div class="col-12">
                                <strong>Assessment Details:</strong>
                                <p t-field="doc.assessment_details"/>
                            </div>
                        </div>
                        
                        <!-- Mitigation Strategy -->
                        <div class="row mb32" t-if="doc.mitigation_strategy">
                            <div class="col-12">
                                <strong>Mitigation Strategy:</strong>
                                <p t-field="doc.mitigation_strategy"/>
                            </div>
                        </div>
                        
                        <!-- Responsible Person -->
                        <div class="row mb32" t-if="doc.responsible_user_id">
                            <div class="col-6">
                                <strong>Responsible Person:</strong> <span t-field="doc.responsible_user_id.name"/>
                            </div>
                            <div class="col-6" t-if="doc.due_date">
                                <strong>Due Date:</strong> <span t-field="doc.due_date"/>
                            </div>
                        </div>
                        
                        <!-- Action Items Table -->
                        <div class="row" t-if="doc.action_item_ids">
                            <div class="col-12">
                                <h3>Related Action Items</h3>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Action Item</th>
                                            <th>Priority</th>
                                            <th>Status</th>
                                            <th>Due Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="doc.action_item_ids" t-as="item">
                                            <td><span t-field="item.name"/></td>
                                            <td><span t-field="item.priority"/></td>
                                            <td><span t-field="item.state"/></td>
                                            <td><span t-field="item.due_date"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        
                        <!-- NAID Compliance Footer -->
                        <div class="row mt32">
                            <div class="col-12 text-center">
                                <p><small>This report was generated in compliance with NAID AAA standards for document security risk assessment.</small></p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
