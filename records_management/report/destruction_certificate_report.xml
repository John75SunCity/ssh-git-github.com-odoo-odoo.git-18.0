<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_destruction_certificate" model="ir.actions.report">
            <field name="name">Certificate of Destruction</field>
            <field name="model">records.destruction.certificate</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">records_management.report_destruction_certificate_template</field>
            <field name="report_file">records_management.report_destruction_certificate_template</field>
            <field name="binding_model_id" ref="records_management.model_records_destruction_certificate"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_destruction_certificate_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="text-center">
                                <h2>Certificate of Destruction</h2>
                            </div>
                            <p>This is to certify that the materials listed below were destroyed in accordance with NAID standards.</p>
                            <p><strong>Customer:</strong> <span t-field="doc.partner_id.name"/></p>
                            <p><strong>Date of Destruction:</strong> <span t-field="doc.destruction_date"/></p>
                            <p><strong>Certificate Number:</strong> <span t-field="doc.name"/></p>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
