<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="report_shredding_bin" model="ir.actions.report">
        <field name="name">Shredding Bin</field>
        <field name="model">shredding.service.bin</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_shredding_bin_view</field>
        <field name="report_file">records_management.report_shredding_bin</field>
        <field name="print_report_name">"(Shredding Bin Report) %s" % (object.barcode or 'N/A')</field>
        <field name="binding_model_id" ref="model_shredding_service_bin"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_shredding_bin_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Shredding Bin Report</h2>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Barcode</th>
                                    <th>Size</th>
                                    <th>Status</th>
                                    <th>Current Customer</th>
                                    <th>Location</th>
                                    <th>Last Service Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span t-esc="doc.barcode"/></td>
                                    <td><span t-esc="doc.size"/></td>
                                    <td><span t-esc="doc.status"/></td>
                                    <td><span t-esc="doc.current_customer_id.name if doc.current_customer_id else 'Unassigned'"/></td>
                                    <td><span t-esc="doc.current_location_id.name if doc.current_location_id else 'N/A'"/></td>
                                    <td><span t-esc="doc.last_service_date"/></td>
                                </tr>
                            </tbody>
                        </table>
                        
                        <div class="mt16">
                            <h4>Service Details</h4>
                            <p><strong>Service Frequency:</strong> <span t-esc="doc.service_frequency"/></p>
                            <p><strong>Tips Included:</strong> <span t-esc="'Yes' if doc.tips_included else 'No'"/></p>
                            <p><strong>Lock Required:</strong> <span t-esc="'Yes' if doc.lock_required else 'No'"/></p>
                            <t t-if="doc.special_instructions">
                                <p><strong>Special Instructions:</strong> <span t-esc="doc.special_instructions"/></p>
                            </t>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    </data>
</odoo>
