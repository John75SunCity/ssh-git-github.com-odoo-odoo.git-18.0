<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Paper Format -->
        <record id="paperformat_service_item_report" model="report.paperformat">
            <field name="name">Service Item Report</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <!-- Service Item Utilization Report -->
        <record id="action_report_service_item_utilization" model="ir.actions.report">
            <field name="name">Utilization Report</field>
            <field name="model">service.item</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">records_management.report_service_item_utilization_template</field>
            <field name="report_file">records_management.report_service_item_utilization_template</field>
            <field name="print_report_name">'Utilization Report - %s' % (object.name)</field>
            <field name="binding_model_id" ref="records_management.model_service_item"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_service_item_report"/>
        </record>

        <!-- Maintenance Schedule Report -->
        <record id="action_report_maintenance_schedule" model="ir.actions.report">
            <field name="name">Maintenance Schedule</field>
            <field name="model">service.item</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">records_management.report_maintenance_schedule_template</field>
            <field name="report_file">records_management.report_maintenance_schedule_template</field>
            <field name="print_report_name">'Maintenance Schedule - %s' % (object.name)</field>
            <field name="binding_model_id" ref="records_management.model_service_item"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_service_item_report"/>
        </record>
    </data>
</odoo>
