<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_billing_period" model="ir.actions.report">
            <field name="name">Billing Period Report</field>
            <field name="model">billing.period</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">records_management.report_billing_period_view</field>
            <field name="report_file">records_management.report_billing_period</field>
            <field name="print_report_name">"Billing Period Report - %s" % (object.name or 'N/A')</field>
            <field name="binding_model_id" ref="records_management.model_billing_period"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_billing_period_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Billing Period Report</h2>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Active</th>
                                        <th>Note</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><span t-esc="doc.name"/></td>
                                        <td><span t-esc="doc.start_date"/></td>
                                        <td><span t-esc="doc.end_date"/></td>
                                        <td><span t-esc="doc.active"/></td>
                                        <td><span t-esc="doc.note"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
</content>
</invoke>
