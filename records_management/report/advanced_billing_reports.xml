<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_advanced_billing" model="ir.actions.report">
        <field name="name">Advanced Billing</field>
<field name="model">records.billing</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.report_advanced_billing_view</field>
        <field name="report_file">records_management.report_advanced_billing</field>
        <field name="print_report_name">"(Advanced Billing Report) %s" % (object.name or 'N/A')</field>
<field name="binding_model_id" ref="records_management.model_records_billing"/>

        <field name="binding_type">report</field>
    </record>

    <template id="report_advanced_billing_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Advanced Billing Report</h2>
<div class="row">
    <div class="col-6">
        <strong>Billing Reference:</strong>
        <span t-esc="doc.name"/>
    </div>
    <div class="col-6">
        <strong>Date:</strong>
        <span t-esc="doc.date"/>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <strong>Customer:</strong>
        <span t-esc="doc.partner_id.name"/>
    </div>
    <div class="col-6">
        <strong>Status:</strong>
        <span t-esc="doc.state"/>
    </div>
</div>
<br/>

                        <table class="table table-condensed">
                            <thead>
<tr>
                                    <th>Description</th>
<th>Quantity</th>
<th>Unit Price</th>
<th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
<t t-if="doc.billing_line_ids">
    <tr t-foreach="doc.billing_line_ids" t-as="line">
        <td>
<span t-esc="line.name"/>
</td>
<td>
<span t-esc="line.quantity"/>
</td>
<td>
<span t-esc="line.price_unit"/>
</td>
<td>
<span t-esc="line.price_subtotal"/>
</td>
</tr>
</t>
<t t-else="">
    <tr>
        <td colspan="4">No billing lines found.</td>
    </tr>
</t>
                            </tbody>
                        </table>
<br/>
<div class="row">
    <div class="col-6">
        <strong>Untaxed Amount:</strong>
        <span t-esc="doc.amount_untaxed"/>
    </div>
    <div class="col-6">
        <strong>Tax Amount:</strong>
        <span t-esc="doc.amount_tax"/>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <strong>Total Amount:</strong>
        <span t-esc="doc.amount_total"/>
    </div>
</div>
<t t-if="doc.notes">
    <br/>
    <div>
        <strong>Notes:</strong>
        <br/>
        <span t-esc="doc.notes"/>
    </div>
</t>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
