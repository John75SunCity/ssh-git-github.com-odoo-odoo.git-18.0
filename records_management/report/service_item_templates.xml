<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_service_item_utilization_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Utilization Report</h2>
                    <t t-if="not docs">
                        <p>No service items to display.</p>
                    </t>
                    <t t-foreach="docs" t-as="o">
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Item:</strong>
                                <span t-field="o.name"/>
                                <br/>
                                <strong>Category:</strong>
                                <span t-field="o.category"/>
                                <br/>
                                <strong>Service Type:</strong>
                                <span t-field="o.service_type"/>
                                <br/>
                            </div>
                            <div class="col-6">
                                <strong>Status:</strong>
                                <span t-field="o.state"/>
                                <br/>
                                <strong>Utilization Rate:</strong>
                                <span t-field="o.utilization_rate"/> %
                                <br/>
                                <strong>Efficiency:</strong>
                                <span t-field="o.efficiency_rating"/>
                                <br/>
                            </div>
                        </div>
                    </t>
                    <h3>Performance Metrics</h3>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th name="th_item" class="text-left">Item</th>
                                <th name="th_created" class="text-left">Created</th>
                                <th name="th_user" class="text-left">Created By</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="not docs">
                                <tr><td colspan="3">No performance data.</td></tr>
                            </t>
                            <t t-foreach="docs" t-as="doc">
                                <tr>
                                    <td><span t-esc="doc.name or 'N/A'"/></td>
                                    <td>
                                        <span t-esc="doc.create_date and doc.create_date.strftime('%Y-%m-%d %H:%M') or '-'"/>
                                    </td>
                                    <td><span t-esc="doc.user_id and doc.user_id.name or '-'"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <template id="report_maintenance_schedule_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Maintenance Schedule</h2>
                    <t t-if="not docs"><p>No maintenance items.</p></t>
                    <t t-foreach="docs" t-as="o">
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Item:</strong>
                                <span t-field="o.name"/>
                                <br/>
                                <strong>Serial Number:</strong>
                                <span t-field="o.serial_number"/>
                                <br/>
                            </div>
                            <div class="col-6">
                                <strong>Last Maintenance:</strong>
                                <span t-field="o.last_maintenance"/>
                                <br/>
                                <strong>Next Maintenance:</strong>
                                <span t-field="o.next_maintenance"/>
                                <br/>
                            </div>
                        </div>
                    </t>
                    <h3>Maintenance History</h3>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th name="th_item" class="text-left">Item</th>
                                <th name="th_created" class="text-left">Created</th>
                                <th name="th_user" class="text-left">Created By</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="not docs">
                                <tr><td colspan="3">No history available.</td></tr>
                            </t>
                            <t t-foreach="docs" t-as="doc">
                                <tr>
                                    <td><span t-esc="doc.name or 'N/A'"/></td>
                                    <td>
                                        <span t-esc="doc.create_date and doc.create_date.strftime('%Y-%m-%d %H:%M') or '-'"/>
                                    </td>
                                    <td><span t-esc="doc.user_id and doc.user_id.name or '-'"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
