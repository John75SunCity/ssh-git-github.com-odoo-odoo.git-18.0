<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <template id="report_records_document_temp_barcode_labels">
        <t t-call="web.html_container">
            <style>
              .label-page { page-break-after: always; page-break-inside: avoid; }
              .label-page:last-child { page-break-after: auto; }
            </style>
            <t t-foreach="docs" t-as="doc">
                <!-- Compact label layout for 4" x 1.33" container labels -->
                <div class="page label-page" style="text-align:center; padding:1mm; font-family:Arial,sans-serif;">
                    <div style="font-size:7pt; font-weight:bold; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                        <t t-esc="doc.display_name or doc.name"/>
                    </div>
                    <div t-if="doc.temp_barcode" style="margin:1mm 0;">
                        <img t-att-src="'/report/barcode/Code128/%s?width=180&amp;height=30' % doc.temp_barcode" style="max-width:100%;"/>
                        <div style="font-size:7pt; font-weight:600;">
                            <t t-esc="doc.temp_barcode"/> <span style="font-size:5pt; color:#666;">(TEMP)</span>
                        </div>
                    </div>
                    <div t-else="" style="font-size:7pt; color:red;">NO TEMP BARCODE</div>
                </div>
            </t>
        </t>
    </template>

    <!-- Report action using proper ir.actions.report structure -->
    <record id="action_report_records_document_temp_barcode_labels" model="ir.actions.report">
        <field name="name">Temp File Barcodes</field>
        <field name="model">records.document</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">records_management.report_records_document_temp_barcode_labels</field>
        <field name="report_file">records_management.report_records_document_temp_barcode_labels</field>
        <field name="print_report_name">'temp_file_barcodes'</field>
        <field name="binding_model_id" ref="model_records_document"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="records_management.paperformat_container_barcode_label"/>
        <field name="attachment_use" eval="False"/>
    </record>
    </data>
</odoo>
