# -*- coding: utf-8 -*-

Shredding Service Photo Model

Photo documentation for shredding services with NAID compliance.:
    pass


from odoo import models, fields, api, _
from odoo.exceptions import ValidationError


class ShreddingServicePhoto(models.Model):
    """Shredding Service Photo"""

    _name = "shredding.service.photo"
    _description = "Shredding Service Photo Documentation"
    _inherit = ['mail.thread', 'mail.activity.mixin']
    _order = "shredding_service_id, sequence, photo_type"

        # ============================================================================
    # CORE IDENTIFICATION FIELDS
        # ============================================================================
    name = fields.Char(
        string="Photo Description",
        required=True,
        tracking=True
    

    company_id = fields.Many2one(
        "res.company",
        default=lambda self: self.env.company,
        required=True
    

    active = fields.Boolean(default=True),
    sequence = fields.Integer(default=10)

        # ============================================================================
    # RELATIONSHIP FIELDS
        # ============================================================================
    shredding_service_id = fields.Many2one(
        "shredding.service",
        string="Shredding Service",
        required=True,
        ondelete="cascade",
        index=True
    

        # ============================================================================
    # PHOTO DETAILS
        # ============================================================================
    photo_type = fields.Selection([)]
        ('before', 'Before Shredding'),
        ('during', 'During Process'),
        ('after', 'After Completion'),
        ('certificate', 'Certificate Documentation'),
        ('equipment', 'Equipment Used'),
        ('location', 'Service Location')
    

    photo_data = fields.Binary(
        string="Photo",
        required=True,
        help="Photo image data"
    

    photo_filename = fields.Char(
        string="Filename",
        help="Original filename"
    

    photo_date = fields.Datetime(
        string="Photo Date",
        required=True,
        default=fields.Datetime.now
    

        # ============================================================================
    # NAID COMPLIANCE
        # ============================================================================
    witness_name = fields.Char(
        string="Witness Name",
        help="Name of person who witnessed the photo"
    

    witness_signature = fields.Binary(
        string="Witness Signature",
        help="Digital signature of witness"
    

        # Mail Thread Framework Fields
    activity_ids = fields.One2many("mail.activity", "res_id", string="Activities"),
    message_follower_ids = fields.One2many("mail.followers", "res_id", string="Followers"),
    message_ids = fields.One2many("mail.message", "res_id", string="Messages")
