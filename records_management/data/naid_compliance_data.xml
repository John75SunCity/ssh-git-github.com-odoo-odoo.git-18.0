<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- NAID Chain of Custody Sequence -->
        <record id="seq_naid_chain_custody" model="ir.sequence">
            <field name="name">NAID Chain of Custody</field>
            <field name="code">naid.chain.custody</field>
            <field name="prefix">COC</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- NAID Audit Log Sequence -->
        <record id="seq_naid_audit_log" model="ir.sequence">
            <field name="name">NAID Audit Log</field>
            <field name="code">naid.audit.log</field>
            <field name="prefix">AUDIT</field>
            <field name="padding">6</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- NAID Compliance Policies -->
        <record id="policy_access_control" model="naid.compliance">
            <field name="name">Access Control</field>
            <field name="sequence">10</field>
            <field name="policy_type">access_control</field>
            <field name="description">All personnel must have proper authorization and background checks before accessing secure areas or handling confidential materials.</field>
            <field name="mandatory">True</field>
            <field name="automated_check">True</field>
            <field name="check_frequency">daily</field>
            <field name="implementation_notes">Implement card access systems, maintain visitor logs, conduct regular access reviews.</field>
            <field name="violation_consequences">Immediate suspension of access privileges, security review, potential termination.</field>
            <field name="review_frequency_months">6</field>
        </record>

        <record id="policy_document_handling" model="naid.compliance">
            <field name="name">Document Handling</field>
            <field name="sequence">20</field>
            <field name="policy_type">document_handling</field>
            <field name="description">Confidential documents must be handled, transported, and stored according to established security protocols.</field>
            <field name="mandatory">True</field>
            <field name="automated_check">False</field>
            <field name="check_frequency">weekly</field>
            <field name="implementation_notes">Use secure containers, maintain chain of custody logs, require dual authorization for sensitive materials.</field>
            <field name="violation_consequences">Document breach investigation, client notification, potential legal action.</field>
            <field name="review_frequency_months">3</field>
        </record>

        <record id="policy_destruction_process" model="naid.compliance">
            <field name="name">Destruction Process</field>
            <field name="sequence">30</field>
            <field name="policy_type">destruction</field>
            <field name="description">All document destruction must follow NAID AAA standards with proper witnessing and certificate generation.</field>
            <field name="mandatory">True</field>
            <field name="automated_check">True</field>
            <field name="check_frequency">per_operation</field>
            <field name="implementation_notes">Use certified destruction equipment, maintain witness logs, generate destruction certificates within 24 hours.</field>
            <field name="violation_consequences">Immediate process review, client notification, potential certification suspension.</field>
            <field name="review_frequency_months">12</field>
        </record>

        <record id="policy_employee_screening" model="naid.compliance">
            <field name="name">Employee Screening</field>
            <field name="sequence">40</field>
            <field name="policy_type">employee_screening</field>
            <field name="description">All employees must undergo background checks and security clearance verification before handling confidential materials.</field>
            <field name="mandatory">True</field>
            <field name="automated_check">False</field>
            <field name="check_frequency">annually</field>
            <field name="implementation_notes">Conduct criminal background checks, verify references, maintain updated security clearance records.</field>
            <field name="violation_consequences">Immediate suspension, security review, potential termination and law enforcement notification.</field>
            <field name="review_frequency_months">12</field>
        </record>

        <record id="policy_facility_security" model="naid.compliance">
            <field name="name">Facility Security</field>
            <field name="sequence">50</field>
            <field name="policy_type">facility_security</field>
            <field name="description">Physical facilities must maintain appropriate security measures including surveillance, access controls, and environmental protections.</field>
            <field name="mandatory">True</field>
            <field name="automated_check">True</field>
            <field name="check_frequency">daily</field>
            <field name="implementation_notes">Install security cameras, maintain alarm systems, conduct regular security patrols, environmental monitoring.</field>
            <field name="violation_consequences">Immediate security assessment, facility lockdown if necessary, insurance notification.</field>
            <field name="review_frequency_months">6</field>
        </record>

        <record id="policy_equipment_maintenance" model="naid.compliance">
            <field name="name">Equipment Maintenance</field>
            <field name="sequence">60</field>
            <field name="policy_type">equipment</field>
            <field name="description">All destruction and security equipment must be regularly maintained, calibrated, and certified according to manufacturer specifications.</field>
            <field name="mandatory">True</field>
            <field name="automated_check">True</field>
            <field name="check_frequency">monthly</field>
            <field name="implementation_notes">Schedule preventive maintenance, maintain equipment logs, ensure proper calibration, verify certifications.</field>
            <field name="violation_consequences">Equipment shutdown, maintenance review, potential service interruption.</field>
            <field name="review_frequency_months">3</field>
        </record>

        <record id="policy_audit_requirements" model="naid.compliance">
            <field name="name">Audit Requirements</field>
            <field name="sequence">70</field>
            <field name="policy_type">audit</field>
            <field name="description">Regular internal and external audits must be conducted to ensure compliance with all NAID AAA standards and client requirements.</field>
            <field name="mandatory">True</field>
            <field name="automated_check">False</field>
            <field name="check_frequency">quarterly</field>
            <field name="implementation_notes">Schedule regular audits, maintain audit logs, address findings promptly, document corrective actions.</field>
            <field name="violation_consequences">Compliance review, client notification, potential certification impact.</field>
            <field name="review_frequency_months">12</field>
        </record>

        <!-- Scheduled Actions for NAID Compliance -->
        <record id="cron_check_employee_credentials" model="ir.cron">
            <field name="name">Check Employee Credential Expiry</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.check_expiring_credentials()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <record id="cron_cleanup_audit_logs" model="ir.cron">
            <field name="name">Cleanup Old Audit Logs</field>
            <field name="model_id" ref="model_naid_audit_log"/>
            <field name="state">code</field>
            <field name="code">model.cleanup_old_logs()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="active">True</field>
        </record>

        <record id="cron_compliance_check" model="ir.cron">
            <field name="name">NAID Compliance Check</field>
            <field name="model_id" ref="model_naid_compliance_enhanced"/>
            <field name="state">code</field>
            <field name="code">model.check_compliance()</field>
            <field name="interval_number">4</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
