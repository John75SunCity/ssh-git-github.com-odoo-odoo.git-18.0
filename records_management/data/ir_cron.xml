<odoo>
    <data noupdate="0">
        <!-- Retention Expiry Alert Cron -->
        <record id="cron_retention_expiry_alerts" model="ir.cron">
            <field name="name">Records Management: Retention Expiry Alerts</field>
            <field name="model_id" ref="records_management.model_records_document"/>
            <field name="state">code</field>
            <field name="code">model._send_retention_expiry_alerts()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <!-- Inventory Audit Cron -->
        <record id="cron_inventory_audit" model="ir.cron">
            <field name="name">Records Management: Daily Inventory Audit</field>
            <field name="model_id" ref="records_management.model_customer_inventory"/>
            <field name="state">code</field>
            <field name="code">model._perform_inventory_audit()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <!-- Compliance Check Cron -->
        <record id="cron_compliance_checks" model="ir.cron">
            <field name="name">Records Management: Compliance Checks</field>
            <field name="model_id" ref="records_management.model_naid_compliance"/>
            <field name="state">code</field>
            <field name="code">model._run_compliance_checks()</field>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <!-- Monthly Work Order Billing Cron -->
        <record id="cron_monthly_work_order_billing" model="ir.cron">
            <field name="name">Records Management: Monthly Work Order Billing</field>
            <field name="model_id" ref="records_management.model_work_order_shredding"/>
            <field name="state">code</field>
            <field name="code">model._monthly_bill_pending()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
