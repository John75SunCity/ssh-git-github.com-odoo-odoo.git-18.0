<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Records Management Portal Hub Page -->
        <record id="website_page_portal_hub" model="website.page">
            <field name="name">Records Management Portal</field>
            <field name="type">qweb</field>
            <field name="url">/portal-hub</field>
            <field name="website_published">True</field>
            <field name="is_published">True</field>
            <field name="arch" type="xml">
                <t name="Records Management Portal" t-name="records_management.portal_hub_page">
                    <t t-call="website.layout">
                        <div id="wrap" class="oe_structure oe_empty">
                            <section class="s_banner pt48 pb48" data-vcss="001" data-snippet="s_banner">
                                <div class="container">
                                    <div class="row s_nb_column_fixed">
                                        <div class="col-lg-12 pt16 pb16 o_colored_level">
                                            <h1 class="display-4 text-center">Records Management Portal</h1>
                                            <p class="lead text-center">Access all your records management services in one place</p>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            
                            <section class="s_text_block pt32 pb32" data-snippet="s_text_block">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-4 mb-4">
                                            <div class="card h-100">
                                                <div class="card-body text-center">
                                                    <i class="fa fa-archive fa-3x text-primary mb-3"></i>
                                                    <h4 class="card-title">My Inventory</h4>
                                                    <p class="card-text">View and manage your stored containers and documents</p>
                                                    <a href="/my/containers" class="btn btn-primary">View Inventory</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 mb-4">
                                            <div class="card h-100">
                                                <div class="card-body text-center">
                                                    <i class="fa fa-tasks fa-3x text-success mb-3"></i>
                                                    <h4 class="card-title">Service Requests</h4>
                                                    <p class="card-text">Submit and track pickup, destruction, and service requests</p>
                                                    <a href="/my/requests" class="btn btn-success">Manage Requests</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 mb-4">
                                            <div class="card h-100">
                                                <div class="card-body text-center">
                                                    <i class="fa fa-file-text fa-3x text-info mb-3"></i>
                                                    <h4 class="card-title">Documents</h4>
                                                    <p class="card-text">Access invoices, certificates, and important documents</p>
                                                    <a href="/my/documents" class="btn btn-info">View Documents</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row mt-4">
                                        <div class="col-lg-4 mb-4">
                                            <div class="card h-100">
                                                <div class="card-body text-center">
                                                    <i class="fa fa-credit-card fa-3x text-warning mb-3"></i>
                                                    <h4 class="card-title">Billing</h4>
                                                    <p class="card-text">Review invoices and payment history</p>
                                                    <a href="/my/invoices" class="btn btn-warning">View Billing</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 mb-4">
                                            <div class="card h-100">
                                                <div class="card-body text-center">
                                                    <i class="fa fa-certificate fa-3x text-danger mb-3"></i>
                                                    <h4 class="card-title">Certificates</h4>
                                                    <p class="card-text">Download destruction certificates and compliance documents</p>
                                                    <a href="/my/certificates" class="btn btn-danger">Get Certificates</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 mb-4">
                                            <div class="card h-100">
                                                <div class="card-body text-center">
                                                    <i class="fa fa-question-circle fa-3x text-secondary mb-3"></i>
                                                    <h4 class="card-title">Help &amp; Support</h4>
                                                    <p class="card-text">Get help, submit feedback, or contact support</p>
                                                    <a href="/my/feedback" class="btn btn-secondary">Get Help</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Row 3: Advanced Features -->
                                    <div class="row mt-4">
                                        <div class="col-lg-6 mb-4">
                                            <div class="card h-100 border-success">
                                                <div class="card-body text-center">
                                                    <i class="fa fa-sitemap fa-3x text-success mb-3"></i>
                                                    <h4 class="card-title">Organization Chart</h4>
                                                    <p class="card-text">View your team hierarchy and manage contacts</p>
                                                    <span class="badge badge-warning mb-2">Company Admin Only</span>
                                                    <a href="/my/organization" class="btn btn-success">View Organization</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 mb-4">
                                            <div class="card h-100 border-info">
                                                <div class="card-body text-center">
                                                    <i class="fa fa-search fa-3x text-info mb-3"></i>
                                                    <h4 class="card-title">Advanced Search</h4>
                                                    <p class="card-text">Powerful search across all your records</p>
                                                    <a href="/my/containers?advanced=1" class="btn btn-info">Search Now</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Quick Actions -->
                                    <div class="row mt-5">
                                        <div class="col-12">
                                            <div class="card bg-light">
                                                <div class="card-header">
                                                    <h5 class="mb-0"><i class="fa fa-bolt"></i> Quick Actions</h5>
                                                </div>
                                                <div class="card-body">
                                                    <div class="btn-group-vertical btn-group-toggle w-100" data-toggle="buttons">
                                                        <a href="/my/request/new/pickup" class="btn btn-outline-primary mb-2">
                                                            <i class="fa fa-truck"></i> Request Pickup Service
                                                        </a>
                                                        <a href="/my/request/new/destruction" class="btn btn-outline-danger mb-2">
                                                            <i class="fa fa-trash"></i> Request Destruction Service
                                                        </a>
                                                        <a href="/my/documents/bulk_upload" class="btn btn-outline-info mb-2">
                                                            <i class="fa fa-upload"></i> Bulk Upload Documents
                                                        </a>
                                                        <a href="/contactus" class="btn btn-outline-success">
                                                            <i class="fa fa-phone"></i> Contact Support
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>

        <!-- Portal Hub menu is now defined in website_portal_menus.xml
             to ensure proper hierarchy and avoid duplicates -->

    </data>
</odoo>
