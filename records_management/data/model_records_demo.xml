<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <data>

        <!-- Demo Data for Records Management System -->
        <!-- This file creates sample records for testing and development -->

        <!-- Demo Customer -->
        <record id="demo_customer_abc_corp" model="res.partner">
            <field name="name">ABC Corporation</field>
            <field name="is_company">True</field>
            <field name="email">info@abccorp.com</field>
            <field name="phone">555-123-4567</field>
            <field name="street">123 Business Lane</field>
            <field name="city">Business City</field>
            <field name="zip">12345</field>
            <field name="supplier_rank">0</field>
            <field name="customer_rank">1</field>
        </record>

        <!-- Demo Storage Locations -->
        <record id="demo_location_warehouse_a" model="records.location">
            <field name="name">Warehouse A - Secure Storage</field>
            <field name="code">WHA-SEC</field>
            <field name="description">Secure storage facility with climate control</field>
            <field name="location_type">warehouse</field>
            <field name="building">Building A</field>
            <field name="zone">Zone 1</field>
            <field name="active">True</field>
            <field name="temperature_controlled">True</field>
            <field name="humidity_controlled">True</field>
            <field name="security_level">level_3</field>
            <field name="storage_capacity">10000</field>
        </record>

        <record id="demo_location_warehouse_b" model="records.location">
            <field name="name">Warehouse B - Bulk Storage</field>
            <field name="code">WHB-BLK</field>
            <field name="description">Bulk storage facility for general records</field>
            <field name="location_type">warehouse</field>
            <field name="building">Building B</field>
            <field name="zone">Zone 2</field>
            <field name="active">True</field>
            <field name="temperature_controlled">False</field>
            <field name="humidity_controlled">False</field>
            <field name="security_level">level_2</field>
            <field name="storage_capacity">20000</field>
        </record>

        <!-- Additional Locations for Intelligent Search Demo -->
        <record id="demo_location_warehouse_c" model="records.location">
            <field name="name">Warehouse C - Legal Archives</field>
            <field name="code">WHC-LEGAL</field>
            <field name="description">Legal archives and compliance storage</field>
            <field name="location_type">warehouse</field>
            <field name="building">Building C</field>
            <field name="zone">Zone 3</field>
            <field name="active">True</field>
            <field name="temperature_controlled">True</field>
            <field name="humidity_controlled">True</field>
            <field name="security_level">level_3</field>
            <field name="storage_capacity">15000</field>
        </record>

        <record id="demo_location_warehouse_archive" model="records.location">
            <field name="name">Archive Warehouse</field>
            <field name="code">ARCHIVE-WH</field>
            <field name="description">Long-term archive storage facility</field>
            <field name="location_type">archive</field>
            <field name="building">Archive Building</field>
            <field name="zone">Archive Zone</field>
            <field name="active">True</field>
            <field name="temperature_controlled">True</field>
            <field name="humidity_controlled">True</field>
            <field name="security_level">level_3</field>
            <field name="storage_capacity">50000</field>
        </record>

        <record id="demo_location_vault" model="records.location">
            <field name="name">Secure Vault</field>
            <field name="code">SECURE-VAULT</field>
            <field name="description">High-security vault for confidential documents</field>
            <field name="location_type">vault</field>
            <field name="building">Main Building</field>
            <field name="zone">Vault Zone</field>
            <field name="active">True</field>
            <field name="temperature_controlled">True</field>
            <field name="humidity_controlled">True</field>
            <field name="security_level">level_4</field>
            <field name="storage_capacity">5000</field>
        </record>

        <record id="demo_location_emergency_access" model="records.location">
            <field name="name">Emergency Access Vault</field>
            <field name="code">EMERGENCY-VAULT</field>
            <field name="description">Emergency access vault for critical documents</field>
            <field name="location_type">vault</field>
            <field name="building">Emergency Wing</field>
            <field name="zone">Emergency Zone</field>
            <field name="active">True</field>
            <field name="temperature_controlled">True</field>
            <field name="humidity_controlled">True</field>
            <field name="security_level">level_4</field>
            <field name="storage_capacity">1000</field>
        </record>

        <!-- Demo Document Types -->
        <record id="demo_document_type_contracts" model="records.document.type">
            <field name="name">Contracts</field>
            <field name="code">CNTR-DATA</field>
            <field name="description">Legal contracts and agreements</field>
            <field name="state">active</field>
        </record>

        <record id="demo_document_type_invoices" model="records.document.type">
            <field name="name">Invoices</field>
            <field name="code">INV-DATA</field>
            <field name="description">Financial invoices and receipts</field>
            <field name="state">active</field>
        </record>

        <record id="demo_document_type_hr_files" model="records.document.type">
            <field name="name">HR Personnel Files</field>
            <field name="code">HR-DATA</field>
            <field name="description">Human resources and employee records</field>
            <field name="state">active</field>
        </record>

        <!-- Demo Retention Policies -->
        <record id="demo_retention_policy_standard" model="records.retention.policy">
            <field name="name">Standard Business Records</field>
            <field name="code">STD-7Y</field>
            <field name="retention_years">7</field>
            <field name="description">Standard 7-year retention for business documents</field>
            <field name="active">True</field>
            <field name="state">active</field>
        </record>

        <record id="demo_retention_policy_hr" model="records.retention.policy">
            <field name="name">Human Resources Records</field>
            <field name="code">HR-10Y</field>
            <field name="retention_years">10</field>
            <field name="description">Extended retention for HR and employment records</field>
            <field name="active">True</field>
            <field name="state">active</field>
        </record>

        <!-- Demo Container Types - Reference actual Type 01-06 classifications -->
        <!-- Note: These reference the standard container types from container_types_base_rates.xml -->
        <!-- Type 01: Standard Box for general office documents -->
        <!-- Type 02: Legal/Banker Box for legal documents -->
        <!-- Type 03: Map Box for blueprints and large format documents -->
        <!-- Type 04: Odd Size/Temp Box for irregular items -->
        <!-- Type 05: Archive Box for long-term preservation -->
        <!-- Type 06: Pathology/Media/Emergency boxes for specialized needs -->

        <!-- Demo Containers - Using actual Type 01-06 container classifications -->
        <record id="demo_container_001" model="records.container">
            <field name="name">Container-001</field>
            <field name="barcode">RM001234567890</field>
            <field name="container_type_id" ref="container_types_base_rates.container_type_01_standard"/>
            <field name="classification">TYPE-01</field>
            <field name="partner_id" ref="demo_customer_abc_corp"/>
            <field name="location_id" ref="demo_location_warehouse_a"/>
            <field name="dimensions">12x15x10</field>
            <field name="content_description">Legal contracts and agreements</field>
            <field name="active">True</field>
        </record>

        <record id="demo_container_002" model="records.container">
            <field name="name">Container-002</field>
            <field name="barcode">RM002234567891</field>
            <field name="container_type_id" ref="container_types_base_rates.container_type_02_legal_banker"/>
            <field name="classification">TYPE-02</field>
            <field name="partner_id" ref="demo_customer_abc_corp"/>
            <field name="location_id" ref="demo_location_warehouse_b"/>
            <field name="dimensions">15x12x10</field>
            <field name="content_description">Financial records and invoices</field>
            <field name="active">True</field>
        </record>

        <record id="demo_container_003" model="records.container">
            <field name="name">Container-003</field>
            <field name="barcode">RM003234567892</field>
            <field name="container_type_id" ref="container_types_base_rates.container_type_03_map"/>
            <field name="classification">TYPE-03</field>
            <field name="partner_id" ref="demo_customer_abc_corp"/>
            <field name="location_id" ref="demo_location_warehouse_c"/>
            <field name="dimensions">14x18x8</field>
            <field name="content_description">Engineering blueprints and architectural drawings</field>
            <field name="active">True</field>
        </record>

        <record id="demo_container_004" model="records.container">
            <field name="name">Container-004</field>
            <field name="barcode">RM004234567893</field>
            <field name="container_type_id" ref="container_types_base_rates.container_type_04_odd_size_temp"/>
            <field name="classification">TYPE-04</field>
            <field name="partner_id" ref="demo_customer_abc_corp"/>
            <field name="location_id" ref="demo_location_warehouse_b"/>
            <field name="dimensions">24x15x12</field>
            <field name="content_description">Irregular items awaiting processing and reboxing</field>
            <field name="active">True</field>
        </record>

        <record id="demo_container_005" model="records.container">
            <field name="name">Container-005</field>
            <field name="barcode">RM005234567894</field>
            <field name="container_type_id" ref="container_types_base_rates.container_type_05_archive_standard"/>
            <field name="classification">TYPE-05</field>
            <field name="partner_id" ref="demo_customer_abc_corp"/>
            <field name="location_id" ref="demo_location_warehouse_archive"/>
            <field name="dimensions">16x12x12</field>
            <field name="content_description">Long-term archive documents with preservation requirements</field>
            <field name="active">True</field>
        </record>

        <record id="demo_container_006" model="records.container">
            <field name="name">Container-006</field>
            <field name="barcode">RM006234567895</field>
            <field name="container_type_id" ref="container_types_base_rates.container_type_06_pathology"/>
            <field name="classification">TYPE-06</field>
            <field name="partner_id" ref="demo_customer_abc_corp"/>
            <field name="location_id" ref="demo_location_vault"/>
            <field name="dimensions">6x6x4</field>
            <field name="content_description">Medical specimens and small specialized items</field>
            <field name="active">True</field>
        </record>

        <!-- Demo Records Boxes (requires customer - will be created by demo customer data) -->
        <!-- These will be created by the demo.xml file after customers are available -->

        <!-- Demo Shredding Service Templates -->
        <record id="demo_shredding_service_template" model="shredding.service">
            <field name="name">Standard Document Shredding</field>
            <field name="partner_id" ref="demo_customer_abc_corp"/>
            <field name="service_type">onsite</field>
            <field name="service_date">2025-08-13</field>
            <field name="state">draft</field>
            <field name="description">Standard on-site document destruction service with NAID AAA compliance</field>
        </record>

        <!-- Demo Paper Bale Recycling -->
        <record id="demo_paper_bale_001" model="paper.bale.recycling">
            <field name="name">Bale-001-Demo</field>
            <field name="bale_weight">500.0</field>
            <field name="state">draft</field>
            <field name="collection_date" eval="(datetime.now() + timedelta(days=30)).strftime('%Y-%m-%d')"/>
        </record>

        <!-- Demo Chain of Custody Log Template -->
        <record id="demo_custody_log_template" model="records.chain.of.custody">
            <field name="name">Template Custody Transfer</field>
            <field name="custody_event">transfer</field>
            <field name="notes">Template for custody transfer procedures</field>
        </record>

        <!-- Demo Portal Request Templates -->
        <record id="demo_portal_request_destruction" model="portal.request">
            <field name="name">Document Destruction Request Template</field>
            <field name="partner_id" ref="demo_customer_abc_corp"/>
            <field name="request_type">destruction</field>
            <field name="state">draft</field>
            <field name="description">Template for customer document destruction requests</field>
            <field name="priority">1</field>
        </record>

        <record id="demo_portal_request_retrieval" model="portal.request">
            <field name="name">Document Retrieval Request Template</field>
            <field name="partner_id" ref="demo_customer_abc_corp"/>
            <field name="request_type">retrieval</field>
            <field name="state">draft</field>
            <field name="description">Template for customer document retrieval requests</field>
            <field name="priority">1</field>
        </record>

        <!-- Demo System Configuration -->
        <record id="demo_system_config" model="ir.config_parameter">
            <field name="key">records_management.demo_mode</field>
            <field name="value">True</field>
        </record>

        <record id="demo_default_retention" model="ir.config_parameter">
            <field name="key">records_management.default_retention_years</field>
            <field name="value">7</field>
        </record>

        <record id="demo_naid_compliance" model="ir.config_parameter">
            <field name="key">records_management.naid_compliance_required</field>
            <field name="value">True</field>
        </record>

    </data>
</odoo>
