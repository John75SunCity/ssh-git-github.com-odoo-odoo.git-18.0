<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!--
      Sequence for Load Number is non-updatable.
      The rest of the data (products) can be updated.
    -->
    <data>
        <!-- Sequence for Load Number -->
        <record id="seq_paper_bale_load" model="ir.sequence">
            <field name="name">Paper Bale Load</field>
            <field name="code">paper.bale.load</field>
            <field name="prefix">LOAD-</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        <!-- Paper Scrap Product Category -->
        <record id="product_category_paper_scrap" model="product.category">
            <field name="name">Paper Scrap</field>
            <field name="parent_id" eval="False"/>
        </record>

        <!--
            Product Definitions for Paper Scrap
            These products are used when creating customer invoices for the loads.
            We use 'service' because we are not tracking stock of these items in the
            traditional sense; their quantity is determined by the weight on the load.
        -->
        <record id="product_paper_wht" model="product.product">
            <field name="name">WHT Paper Scrap</field>
            <field name="type">service</field>
            <field name="invoice_policy">order</field>
            <field name="list_price">0.05</field> <!-- Example price per lb -->
            <field name="standard_price">0.0</field>
            <field name="uom_id" ref="uom.product_uom_lb"/>
            <field name="uom_po_id" ref="uom.product_uom_lb"/>
            <field name="description">Sale of sorted white paper scrap.</field>
            <field name="default_code">SCRAP-WHT</field>
            <field name="categ_id" ref="product_category_paper_scrap"/>
        </record>

        <record id="product_paper_mix" model="product.product">
            <field name="name">MIX Paper Scrap</field>
            <field name="type">service</field>
            <field name="invoice_policy">order</field>
            <field name="list_price">0.03</field> <!-- Example price per lb -->
            <field name="standard_price">0.0</field>
            <field name="uom_id" ref="uom.product_uom_lb"/>
            <field name="uom_po_id" ref="uom.product_uom_lb"/>
            <field name="description">Sale of mixed office paper scrap.</field>
            <field name="default_code">SCRAP-MIX</field>
            <field name="categ_id" ref="product_category_paper_scrap"/>
        </record>

        <record id="product_paper_occ" model="product.product">
            <field name="name">OCC/Cardboard Scrap</field>
            <field name="type">service</field>
            <field name="invoice_policy">order</field>
            <field name="list_price">0.02</field> <!-- Example price per lb -->
            <field name="standard_price">0.0</field>
            <field name="uom_id" ref="uom.product_uom_lb"/>
            <field name="uom_po_id" ref="uom.product_uom_lb"/>
            <field name="description">Sale of old corrugated cardboard scrap.</field>
            <field name="default_code">SCRAP-OCC</field>
            <field name="categ_id" ref="product_category_paper_scrap"/>
        </record>
    </data>
</odoo>
