<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- ================================================================== -->
        <!-- WEBSITE PORTAL MENU CONFIGURATION - FLAT HIERARCHY               -->  
        <!-- Simplified menu structure to avoid Odoo menu hierarchy conflicts -->
        <!-- ================================================================== -->

        <!-- Main Portal Menu Items (Top Level for Maximum Visibility) -->
        <record id="portal_menu_records_inventory" model="website.menu">
            <field name="name">My Inventory</field>
            <field name="url">/my/containers</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">10</field>
        </record>

        <record id="portal_menu_requests" model="website.menu">
            <field name="name">Service Requests</field>
            <field name="url">/my/requests</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">20</field>
        </record>

        <record id="portal_menu_documents" model="website.menu">
            <field name="name">My Documents</field>
            <field name="url">/my/documents</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">30</field>
        </record>

        <record id="portal_menu_invoices" model="website.menu">
            <field name="name">Billing</field>
            <field name="url">/my/invoices</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">40</field>
        </record>

        <record id="portal_menu_certificates" model="website.menu">
            <field name="name">Certificates</field>
            <field name="url">/my/certificates</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">50</field>
        </record>

        <!-- Service Request Submenus (Now under Service Requests) -->
        <record id="portal_submenu_request_pickup" model="website.menu">
            <field name="name">Request Pickup</field>
            <field name="url">/my/request/new/pickup</field>
            <field name="parent_id" ref="portal_menu_requests"/>
            <field name="sequence">10</field>
        </record>

        <record id="portal_submenu_request_destruction" model="website.menu">
            <field name="name">Request Destruction</field>
            <field name="url">/my/request/new/destruction</field>
            <field name="parent_id" ref="portal_menu_requests"/>
            <field name="sequence">20</field>
        </record>

        <!-- Document Submenus (Now under My Documents) -->
        <record id="portal_submenu_bulk_upload" model="website.menu">
            <field name="name">Bulk Upload</field>
            <field name="url">/my/documents/bulk_upload</field>
            <field name="parent_id" ref="portal_menu_documents"/>
            <field name="sequence">10</field>
        </record>

        <!-- Help & Support (Top Level) -->
        <record id="portal_menu_help" model="website.menu">
            <field name="name">Help &amp; Support</field>
            <field name="url">/my/feedback</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">90</field>
        </record>

        <!-- Contact (Top Level) -->
        <record id="portal_menu_contact" model="website.menu">
            <field name="name">Contact Us</field>
            <field name="url">/contactus</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">80</field>
        </record>

    </data>
</odoo>
