<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Core singleton to guarantee direct boolean fields exist on at least one record -->
        <record id="config_rm_core_singleton" model="rm.module.configurator">
            <field name="name">Records Management Core Configuration</field>
            <field name="config_key">rm.core.singleton</field>
            <field name="config_type">parameter</field>
            <field name="category">system</field>
            <field name="sequence">1</field>
            <field name="description">Central configuration record storing core feature flags for Records Management.</field>
            <field name="enable_chain_of_custody">True</field>
            <field name="bin_inventory_enabled">True</field>
            <field name="destruction_certificate_enabled">True</field>
            <field name="enable_fsm_features">True</field>
            <field name="enable_flowchart_visualization">True</field>
            <field name="enable_portal_diagram">True</field>
            <field name="enable_intelligent_search">True</field>
            <field name="enable_management_dashboard">True</field>
            <field name="work_orders_portal_enabled">True</field>
            <field name="portal_feature_pack_enabled">False</field>
            <field name="bulk_user_import_enabled">True</field>
            <field name="retrieval_work_order_enabled">True</field>
            <field name="photo_enabled">True</field>
            <field name="photo_portal_access">False</field>
            <field name="key_restriction_enabled">True</field>
            <field name="unified_work_order_enabled">True</field>
        </record>

        <record id="config_chain_of_custody_toggle" model="rm.module.configurator">
            <field name="name">Chain of Custody Tracking</field>
            <field name="config_key">chain_of_custody_enabled</field>
            <field name="config_type">feature_toggle</field>
            <field name="category">compliance</field>
            <field name="sequence">5</field>
            <field name="description">Enable chain of custody menus, logging, and audit tracking.</field>
            <field name="enable_chain_of_custody">True</field>
        </record>

        <record id="config_bin_inventory_toggle" model="rm.module.configurator">
            <field name="name">Bin Inventory</field>
            <field name="config_key">bin_inventory_enabled</field>
            <field name="config_type">feature_toggle</field>
            <field name="category">fsm</field>
            <field name="sequence">10</field>
            <field name="description">Activate bin inventory menus and barcode scanning workflows.</field>
            <field name="bin_inventory_enabled">True</field>
        </record>

        <record id="config_management_dashboard_toggle" model="rm.module.configurator">
            <field name="name">Management Dashboard</field>
            <field name="config_key">management.dashboard.enabled</field>
            <field name="config_type">feature_toggle</field>
            <field name="category">reporting</field>
            <field name="sequence">15</field>
            <field name="description">Enable the executive management dashboard and KPI analytics.</field>
            <field name="enable_management_dashboard">True</field>
        </record>

        <record id="config_flowchart_visualization_toggle" model="rm.module.configurator">
            <field name="name">System Flowchart Visualization</field>
            <field name="config_key">system.flowchart.enabled</field>
            <field name="config_type">feature_toggle</field>
            <field name="category">workflow</field>
            <field name="sequence">20</field>
            <field name="description">Enable the interactive system flowchart visualization assets.</field>
            <field name="enable_flowchart_visualization">True</field>
        </record>

        <record id="config_portal_org_diagram_toggle" model="rm.module.configurator">
            <field name="name">Portal Organization Diagram</field>
            <field name="config_key">portal.diagram.enabled</field>
            <field name="config_type">feature_toggle</field>
            <field name="category">portal</field>
            <field name="sequence">25</field>
            <field name="description">Expose the organization diagram visualization inside the customer portal.</field>
            <field name="enable_portal_diagram">True</field>
        </record>

        <record id="config_intelligent_search_toggle" model="rm.module.configurator">
            <field name="name">Intelligent Search Widgets</field>
            <field name="config_key">intelligent.search.enabled</field>
            <field name="config_type">feature_toggle</field>
            <field name="category">ui</field>
            <field name="sequence">30</field>
            <field name="description">Enable predictive search widgets for containers, files, and work orders.</field>
            <field name="enable_intelligent_search">True</field>
        </record>

        <record id="config_bulk_user_import_toggle" model="rm.module.configurator">
            <field name="name">Bulk User Import</field>
            <field name="config_key">bulk.user.import.enabled</field>
            <field name="config_type">feature_toggle</field>
            <field name="category">security</field>
            <field name="sequence">35</field>
            <field name="description">Allow bulk invitation and profile assignment for portal users.</field>
            <field name="bulk_user_import_enabled">True</field>
        </record>

        <record id="config_retrieval_work_orders_toggle" model="rm.module.configurator">
            <field name="name">Retrieval Work Orders</field>
            <field name="config_key">retrieval.work.orders.enabled</field>
            <field name="config_type">feature_toggle</field>
            <field name="category">workflow</field>
            <field name="sequence">40</field>
            <field name="description">Enable retrieval work order flows and visibility.</field>
            <field name="retrieval_work_order_enabled">True</field>
        </record>

        <record id="config_photo_capture_toggle" model="rm.module.configurator">
            <field name="name">Photo Capture</field>
            <field name="config_key">photo.capture.enabled</field>
            <field name="config_type">feature_toggle</field>
            <field name="category">workflow</field>
            <field name="sequence">45</field>
            <field name="description">Enable photo capture for work orders and container inspections.</field>
            <field name="photo_enabled">True</field>
        </record>

        <record id="config_photo_portal_access_toggle" model="rm.module.configurator">
            <field name="name">Portal Photo Access</field>
            <field name="config_key">photo.portal.access.enabled</field>
            <field name="config_type">feature_toggle</field>
            <field name="category">portal</field>
            <field name="sequence">50</field>
            <field name="description">Allow customers to download captured photos from the portal.</field>
            <field name="photo_portal_access">False</field>
        </record>

        <record id="config_key_restriction_toggle" model="rm.module.configurator">
            <field name="name">Key Restriction Management</field>
            <field name="config_key">key.restriction.enabled</field>
            <field name="config_type">feature_toggle</field>
            <field name="category">security</field>
            <field name="sequence">55</field>
            <field name="description">Enable key restriction rules and menu entries for secure access management.</field>
            <field name="key_restriction_enabled">True</field>
        </record>

        <record id="config_unified_work_order_toggle" model="rm.module.configurator">
            <field name="name">Unified Work Orders (sale.order)</field>
            <field name="config_key">unified.work.order.enabled</field>
            <field name="config_type">feature_toggle</field>
            <field name="category">workflow</field>
            <field name="sequence">60</field>
            <field name="description">Enable the unified work order system based on Odoo's native sale.order. This leverages Odoo's quotation → sales order → invoice workflow for all work orders (pickup, retrieval, destruction, shredding, etc.).</field>
            <field name="unified_work_order_enabled">True</field>
        </record>
    </data>
</odoo>
