<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduled check for required document expirations
             Placed under noupdate so admin adjustments to timing persist after upgrades. -->
        <record id="ir_cron_required_document_expiration" model="ir.cron">
            <field name="name">Required Documents: Expiration Check</field>
            <field name="model_id" ref="model_required_document"/>
            <field name="state">code</field>
            <field name="code">model._check_expirations()</field>
            <field name="user_id" ref="base.user_admin"/>
            <!-- Run daily at 02:15 -->
            <field name="interval_type">days</field>
            <field name="interval_number">1</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
