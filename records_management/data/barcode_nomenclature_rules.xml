<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- ========================================================================
             BARCODE NOMENCLATURE RULES FOR CONTAINER OPERATIONS
             
             These rules enable barcode-triggered workflows:
             - Temp â†’ Storage container conversion
             - Container status changes
             - Location transfers
             - Automated stock movements
             
             UI buttons emit these barcode values, triggering backend automation
        ======================================================================== -->
        
        <!-- Container Status Change Rules -->
        <record id="barcode_rule_convert_temp_to_storage" model="barcode.nomenclature.rule">
            <field name="name">Convert Temp Container to Storage</field>
            <field name="sequence">10</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">WH/STOCK/NEW-IN</field>
            <field name="alias">Convert to Storage Container</field>
        </record>
        
        <record id="barcode_rule_mark_container_for_pickup" model="barcode.nomenclature.rule">
            <field name="name">Mark Container for Pickup</field>
            <field name="sequence">11</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">WH/STOCK/PICKUP</field>
            <field name="alias">Ready for Pickup</field>
        </record>
        
        <record id="barcode_rule_move_to_shredding" model="barcode.nomenclature.rule">
            <field name="name">Move to Shredding Queue</field>
            <field name="sequence">12</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">WH/SHRED/QUEUE</field>
            <field name="alias">Queue for Destruction</field>
        </record>
        
        <record id="barcode_rule_complete_shredding" model="barcode.nomenclature.rule">
            <field name="name">Complete Shredding Process</field>
            <field name="sequence">13</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">WH/SHRED/COMPLETE</field>
            <field name="alias">Destruction Complete</field>
        </record>
        
        <record id="barcode_rule_archive_container" model="barcode.nomenclature.rule">
            <field name="name">Archive Container</field>
            <field name="sequence">14</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">WH/ARCHIVE/STORE</field>
            <field name="alias">Move to Archive</field>
        </record>
        
        <record id="barcode_rule_return_to_customer" model="barcode.nomenclature.rule">
            <field name="name">Return Container to Customer</field>
            <field name="sequence">15</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">WH/CUSTOMER/RETURN</field>
            <field name="alias">Return to Customer</field>
        </record>
        
        <!-- Inventory Adjustment Rules -->
        <record id="barcode_rule_add_inventory" model="barcode.nomenclature.rule">
            <field name="name">Add to Inventory</field>
            <field name="sequence">20</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">INV/ADD/STOCK</field>
            <field name="alias">Add Inventory</field>
        </record>
        
        <record id="barcode_rule_remove_inventory" model="barcode.nomenclature.rule">
            <field name="name">Remove from Inventory</field>
            <field name="sequence">21</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">INV/REMOVE/STOCK</field>
            <field name="alias">Remove Inventory</field>
        </record>
        
        <!-- Location Transfer Rules -->
        <record id="barcode_rule_transfer_to_warehouse" model="barcode.nomenclature.rule">
            <field name="name">Transfer to Main Warehouse</field>
            <field name="sequence">30</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">WH/MAIN/TRANSFER</field>
            <field name="alias">Transfer to Warehouse</field>
        </record>
        
        <record id="barcode_rule_transfer_to_offsite" model="barcode.nomenclature.rule">
            <field name="name">Transfer to Offsite Storage</field>
            <field name="sequence">31</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">WH/OFFSITE/TRANSFER</field>
            <field name="alias">Transfer to Offsite</field>
        </record>
        
        <!-- Quality Control Rules -->
        <record id="barcode_rule_qc_inspection" model="barcode.nomenclature.rule">
            <field name="name">QC Inspection Required</field>
            <field name="sequence">40</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">QC/INSPECT/QUEUE</field>
            <field name="alias">Quality Check Required</field>
        </record>
        
        <record id="barcode_rule_qc_approved" model="barcode.nomenclature.rule">
            <field name="name">QC Approved</field>
            <field name="sequence">41</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">QC/APPROVED/MOVE</field>
            <field name="alias">QC Approved</field>
        </record>
        
        <!-- Customer Request Rules -->
        <record id="barcode_rule_retrieval_request" model="barcode.nomenclature.rule">
            <field name="name">Retrieval Request Processing</field>
            <field name="sequence">50</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">REQ/RETRIEVE/PROCESS</field>
            <field name="alias">Process Retrieval</field>
        </record>
        
        <record id="barcode_rule_service_request" model="barcode.nomenclature.rule">
            <field name="name">Service Request Processing</field>
            <field name="sequence">51</field>
            <field name="barcode_nomenclature_id" ref="barcodes.default_barcode_nomenclature"/>
            <field name="type">location</field>
            <field name="pattern">REQ/SERVICE/PROCESS</field>
            <field name="alias">Process Service Request</field>
        </record>
        
    </data>
</odoo>
