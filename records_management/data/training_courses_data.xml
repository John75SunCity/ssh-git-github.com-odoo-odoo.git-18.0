<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Slide Channel Tag Groups -->
        <record id="slide_channel_tag_group_training" model="slide.channel.tag.group">
            <field name="name">Training Categories</field>
            <field name="sequence">10</field>
        </record>

        <!-- Slide Channel Tags -->
        <record id="slide_channel_tag_role_training" model="slide.channel.tag">
            <field name="name">Training</field>
            <field name="group_id" ref="slide_channel_tag_group_training"/>
            <field name="sequence">10</field>
        </record>

        <record id="slide_channel_tag_other" model="slide.channel.tag">
            <field name="name">Other</field>
            <field name="group_id" ref="slide_channel_tag_group_training"/>
            <field name="sequence">20</field>
        </record>

        <!-- NAID AAA Compliance Training Course -->
        <record id="slide_channel_naid_aaa_training" model="slide.channel">
            <field name="name">NAID AAA Compliance Training</field>
            <field name="description">Comprehensive training on NAID AAA standards for records management professionals</field>
            <field name="channel_type">training</field>
            <field name="enroll">public</field>
            <field name="visibility">public</field>
            <field name="is_published">true</field>
            <field name="website_published">true</field>
            <field name="allow_comment">true</field>
            <field name="tag_ids" eval="[(6, 0, [ref('slide_channel_tag_role_training')])]"/>
        </record>

        <!-- Customer Records System Setup Course -->
        <record id="slide_channel_customer_records_setup" model="slide.channel">
            <field name="name">Setting Up Your Records Management System</field>
            <field name="description">Essential guide for customers implementing effective records management practices</field>
            <field name="channel_type">training</field>
            <field name="enroll">public</field>
            <field name="visibility">public</field>
            <field name="is_published">true</field>
            <field name="website_published">true</field>
            <field name="allow_comment">true</field>
            <field name="tag_ids" eval="[(6, 0, [ref('slide_channel_tag_other')])]"/>
        </record>

        <!-- HIPAA &amp; Data Privacy Course -->
        <record id="slide_channel_hipaa_privacy_training" model="slide.channel">
            <field name="name">HIPAA Compliance &amp; Data Privacy for Physical Records</field>
            <field name="description">Protecting sensitive information in physical document storage and handling</field>
            <field name="channel_type">training</field>
            <field name="enroll">public</field>
            <field name="visibility">public</field>
            <field name="is_published">true</field>
            <field name="website_published">true</field>
            <field name="allow_comment">true</field>
            <field name="tag_ids" eval="[(6, 0, [ref('slide_channel_tag_role_training')])]"/>
        </record>
    </data>
</odoo>
