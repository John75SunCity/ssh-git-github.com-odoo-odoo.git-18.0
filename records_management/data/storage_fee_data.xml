<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <data>
        <!-- Service product for monthly storage fees -->
        <record id="service_storage_fee" model="product.product">
            <field name="name">Monthly Storage Fee</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-STORAGE</field>
            <field name="list_price">0.32</field>
            <field name="standard_price">0.15</field>
            <field name="description">Monthly fee for storing records and documents - Type 01 standard rate.</field>
        </record>

        <!-- Links to actual business container storage pricing -->
        <record id="container_pricing_model" model="ir.config_parameter">
            <field name="key">CONTAINER_PRICING_MODEL</field>
            <field name="value">{"type_01": {"volume": 1.2, "monthly_fee": "$0.32"}, "type_02": {"volume": 2.4, "monthly_fee": "$0.75"}, "type_03": {"volume": 0.875, "monthly_fee": "$0.75"}, "type_04": {"volume": 5.0, "monthly_fee": "$0.75"}, "type_06": {"volume": 0.042, "monthly_fee": "$0.75"}}</field>
        </record>

        <!-- Links to scheduled_actions_data.xml automated billing -->
        <record id="billing_integration" model="ir.config_parameter">
            <field name="key">BILLING_INTEGRATION</field>
            <field name="value">{"monthly_cron_job": {"function": "ir_cron_compute_monthly_storage_fees", "frequency": "1 month", "product_reference": "records_management.service_storage_fee", "billing_logic": "quantity_based_on_active_containers"}}</field>
        </record>

        <!-- Integration with advanced billing configuration -->
        <record id="billing_workflow" model="ir.config_parameter">
            <field name="key">BILLING_WORKFLOW</field>
            <field name="value">{"1_inventory_scan": "Count active containers per customer", "2_fee_calculation": "Multiply count × $0.32 monthly rate", "3_order_creation": "Create sale order with service_storage_fee product", "4_invoice_generation": "Auto-generate monthly invoices", "5_revenue_tracking": "Track recurring revenue per customer"}</field>
        </record>

        <!-- Monthly recurring revenue calculations -->
        <record id="revenue_analysis" model="ir.config_parameter">
            <field name="key">REVENUE_ANALYSIS</field>
            <field name="value">{"type_01_profit": {"revenue": "$0.32/month", "cost": "$0.15/month", "gross_profit": "$0.17/month", "margin": "53%"}, "type_02_06_profit": {"revenue": "$0.75/month", "cost": "$0.30/month", "gross_profit": "$0.45/month", "margin": "60%"}, "customer_value": {"mixed_containers": "400 Type01 + 100 Type02-06", "monthly_revenue": "$203.00", "monthly_profit": "$113.00", "annual_value": "$2,436.00"}, "large_customer_example": {"containers": "30000 Type01 + 10000 Type02-06", "monthly_revenue": "$17,100.00", "annual_revenue": "$205,200.00"}}</field>
        </record>

        <!-- Storage fee appears on customer compliance documentation -->
        <record id="compliance_integration" model="ir.config_parameter">
            <field name="key">COMPLIANCE_INTEGRATION</field>
            <field name="value">{"monthly_statements": "Storage fees documented for audit", "destruction_certificates": "Final billing before destruction", "retention_compliance": "Fee tracking supports retention policy enforcement", "customer_portal": "Transparent pricing in customer portal"}</field>
        </record>

        <!-- FSM work orders reference storage billing -->
        <record id="fsm_integration" model="ir.config_parameter">
            <field name="key">FSM_INTEGRATION</field>
            <field name="value">{"container_movements": "Movement affects billing start/stop dates", "pickup_scheduling": "Revenue value prioritizes pickup routes", "delivery_tracking": "New containers start billing immediately", "service_requests": "Storage fees factor into service pricing"}</field>
        </record>

        <!-- Predictable revenue forecasting based on container growth -->
        <record id="forecasting_metrics" model="ir.config_parameter">
            <field name="key">FORECASTING_METRICS</field>
            <field name="value">{"monthly_recurring_revenue": "Type 01: $0.32/month, Types 02-06: $0.75/month", "churn_analysis": "Track container removals vs additions by type", "customer_lifetime_value": "Average container tenure × tiered monthly fees", "growth_projections": "New customer acquisition impact on revenue", "large_customer_impact": "40,000 containers mixed types = $17,100+/month depending on type distribution"}</field>
        </record>
    </data>
</odoo>
