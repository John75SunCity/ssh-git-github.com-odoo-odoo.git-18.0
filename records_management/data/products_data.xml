<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <data>
        <!-- Essential Records Management Products -->

        <!-- Document Storage Container - Basic -->
        <record id="product_storage_container" model="product.product">
            <field name="name">Document Storage Container</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-CONTAINER</field>
            <field name="list_price">15.00</field>
            <field name="standard_price">8.50</field>
            <field name="description">Standard archive container setup and initial processing</field>
        </record>

        <!-- Document Storage Service - Basic -->
        <record id="product_storage_service" model="product.product">
            <field name="name">Monthly Storage Service</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-STORAGE</field>
            <field name="list_price">0.95</field>
            <field name="standard_price">0.65</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description">Monthly storage service per container (industry standard rate)</field>
        </record>

        <!-- Document Shredding Service - Basic -->
        <record id="product_shredding_service" model="product.product">
            <field name="name">Document Shredding Service</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-SHRED</field>
            <field name="list_price">12.50</field>
            <field name="standard_price">7.50</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description">NAID-compliant secure destruction per container</field>
        </record>

        <!-- Business Integration Configuration Parameters -->
        <record id="container_service_integration" model="ir.config_parameter">
            <field name="key">records_management.container_service_integration</field>
            <field name="value">Container setup and billing integration with TYPE 01-06 specifications</field>
        </record>

        <record id="storage_service_integration" model="ir.config_parameter">
            <field name="key">records_management.storage_service_integration</field>
            <field name="value">Monthly recurring billing with automated inventory-based pricing</field>
        </record>

        <record id="shredding_service_integration" model="ir.config_parameter">
            <field name="key">records_management.shredding_service_integration</field>
            <field name="value">NAID AAA compliant destruction with certificate generation</field>
        </record>

        <!-- Container Type Specific Services (Actual Business Specifications) -->
        <record id="product_storage_type01" model="product.product">
            <field name="name">TYPE 01 Standard Box Storage</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-TYPE01</field>
            <field name="list_price">0.95</field>
            <field name="standard_price">0.65</field>
            <field name="description">Standard box storage (1.2 CF, 35 lbs max) - Most common container type</field>
        </record>

        <record id="product_storage_type02" model="product.product">
            <field name="name">TYPE 02 Legal/Banker Box Storage</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-TYPE02</field>
            <field name="list_price">1.45</field>
            <field name="standard_price">0.95</field>
            <field name="description">Legal/Banker box storage (2.4 CF, 65 lbs max) - Double capacity premium</field>
        </record>

        <record id="product_storage_type03" model="product.product">
            <field name="name">TYPE 03 Map Box Storage</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-TYPE03</field>
            <field name="list_price">0.85</field>
            <field name="standard_price">0.55</field>
            <field name="description">Map box storage (0.875 CF, 35 lbs max) - Specialized flat storage</field>
        </record>

        <record id="product_storage_type04" model="product.product">
            <field name="name">TYPE 04 Odd Size/Temp Storage</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-TYPE04</field>
            <field name="list_price">2.75</field>
            <field name="standard_price">1.85</field>
            <field name="description">Odd size/temporary storage (5.0 CF, 75 lbs max) - Premium oversized rate</field>
        </record>

        <record id="product_storage_type06" model="product.product">
            <field name="name">TYPE 06 Pathology Box Storage</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-TYPE06</field>
            <field name="list_price">0.45</field>
            <field name="standard_price">0.25</field>
            <field name="description">Pathology box storage (0.042 CF, 40 lbs max) - Micro container rate</field>
        </record>

        <!-- Value-Added Services -->
        <record id="product_pickup_service" model="product.product">
            <field name="name">Pickup and Delivery Service</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-PICKUP</field>
            <field name="list_price">125.00</field>
            <field name="standard_price">85.00</field>
            <field name="description">Professional pickup and delivery service with tracking (per trip)</field>
        </record>

        <record id="product_indexing_service" model="product.product">
            <field name="name">Document Indexing Service</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-INDEX</field>
            <field name="list_price">1.85</field>
            <field name="standard_price">1.15</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description">Professional document cataloging and indexing per document</field>
        </record>

        <record id="product_retrieval_service" model="product.product">
            <field name="name">Document Retrieval Service</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-RETRIEVAL</field>
            <field name="list_price">35.00</field>
            <field name="standard_price">22.00</field>
<field name="description">Individual document retrieval service (per request)</field>
        </record>

        <record id="product_scanning_service" model="product.product">
            <field name="name">Document Scanning Service</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-SCAN</field>
            <field name="list_price">0.65</field>
            <field name="standard_price">0.35</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description">High-quality document scanning per page (300 DPI minimum)</field>
        </record>

        <!-- Compliance and Certification Services -->
        <record id="product_naid_certificate" model="product.product">
            <field name="name">NAID Destruction Certificate</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-CERT</field>
            <field name="list_price">25.00</field>
            <field name="standard_price">12.00</field>
            <field name="description">Official NAID AAA destruction certificate with legal verification</field>
        </record>

        <record id="product_compliance_audit" model="product.product">
            <field name="name">Compliance Audit Service</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-AUDIT</field>
            <field name="list_price">485.00</field>
            <field name="standard_price">285.00</field>
            <field name="description">Comprehensive compliance audit and reporting service (full facility review)</field>
        </record>

        <!-- Emergency and Rush Services -->
        <record id="product_rush_service" model="product.product">
            <field name="name">Rush Service Surcharge</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-RUSH</field>
            <field name="list_price">75.00</field>
            <field name="standard_price">35.00</field>
            <field name="description">Same-day or next-day rush service surcharge (50% premium)</field>
        </record>

        <record id="product_emergency_service" model="product.product">
            <field name="name">Emergency Response Service</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="default_code">REC-EMERGENCY</field>
            <field name="list_price">750.00</field>
            <field name="standard_price">425.00</field>
            <field name="description">24/7 emergency document recovery and protection service (per incident)</field>
        </record>

        <!-- Product Categories for Better Organization -->
        <record id="category_storage_services" model="product.category">
            <field name="name">Storage Services</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>

        <record id="category_destruction_services" model="product.category">
            <field name="name">Destruction Services</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>

        <record id="category_value_added_services" model="product.category">
            <field name="name">Value-Added Services</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>

        <record id="category_compliance_services" model="product.category">
            <field name="name">Compliance Services</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>

        <!-- Post-creation updates: Assign products to their categories after all categories have been created. -->
        <record id="product_storage_container" model="product.product">
            <field name="categ_id" ref="category_storage_services"/>
        </record>

        <record id="product_storage_service" model="product.product">
            <field name="categ_id" ref="category_storage_services"/>
        </record>

        <record id="product_shredding_service" model="product.product">
            <field name="categ_id" ref="category_destruction_services"/>
        </record>

        <record id="product_pickup_service" model="product.product">
            <field name="categ_id" ref="category_value_added_services"/>
        </record>

        <record id="product_indexing_service" model="product.product">
            <field name="categ_id" ref="category_value_added_services"/>
        </record>

        <record id="product_retrieval_service" model="product.product">
            <field name="categ_id" ref="category_value_added_services"/>
        </record>

        <record id="product_scanning_service" model="product.product">
            <field name="categ_id" ref="category_value_added_services"/>
        </record>

        <record id="product_naid_certificate" model="product.product">
            <field name="categ_id" ref="category_compliance_services"/>
        </record>

        <record id="product_compliance_audit" model="product.product">
            <field name="categ_id" ref="category_compliance_services"/>
        </record>

    </data>
</odoo>
