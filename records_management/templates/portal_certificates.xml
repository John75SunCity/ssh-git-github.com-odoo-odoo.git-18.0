<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Portal My Certificates Template -->
        <template id="portal_my_certificates" name="My Certificates">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-set="title">My Certificates</t>

                <div class="o_portal_my_certificates">
                    <div class="card">
                        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                            <h3 class="mb-0">
                                <i class="fa fa-certificate"></i>
                                Destruction Certificates
                            </h3>
                            <div class="btn-group" role="group">
                                <a href="/records/reports/certificates" class="btn btn-light btn-sm">
                                    <i class="fa fa-file-pdf"></i> Generate Report
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <t t-if="not certificates">
                                <div class="alert alert-info text-center py-5">
                                    <i class="fa fa-certificate fa-3x mb-3 text-muted"></i>
                                    <h4>No Certificates Found</h4>
                                    <p class="mb-3">You don't have any destruction certificates yet.</p>
                                    <p class="text-muted">Certificates are generated when containers are destroyed according to retention policies.</p>
                                </div>
                            </t>

                            <t t-if="certificates">
                                <!-- Search and Filter Bar -->
                                <div class="row mb-3">
                                    <div class="col-md-8">
                                        <form action="/my/certificates" method="GET" class="form-inline">
                                            <div class="input-group">
                                                <input type="text" name="search" class="form-control" placeholder="Search certificates..." t-att-value="search or ''"/>
                                                <div class="input-group-append">
                                                    <button type="submit" class="btn btn-outline-secondary">
                                                        <i class="fa fa-search"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col-md-4 text-right">
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown">
                                                <i class="fa fa-sort"></i> Sort by: <t t-esc="searchbar_sortings[sortby]['label']"/>
                                            </button>
                                            <div class="dropdown-menu">
                                                <t t-foreach="searchbar_sortings" t-as="sort_key">
                                                    <t t-set="sort_item" t-value="searchbar_sortings[sort_key]"/>
                                                    <a class="dropdown-item" t-attf-href="/my/certificates?sortby=#{sort_key}">
                                                        <t t-esc="sort_item['label']"/>
                                                    </a>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>Certificate #</th>
                                                <th>Date</th>
                                                <th>Container</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="certificates" t-as="certificate">
                                                <tr>
                                                    <td><strong t-esc="certificate.name"/></td>
                                                    <td t-esc="certificate.certificate_date.strftime(&apos;%Y-%m-%d&apos;) if certificate.certificate_date else &apos;N/A&apos;"/>
                                                    <td>
                                                        <t t-if="certificate.container_id">
                                                            <a t-attf-href="/my/container/#{certificate.container_id.id}" class="text-primary">
                                                                <t t-esc="certificate.container_id.name"/>
                                                            </a>
                                                        </t>
                                                        <t t-else="">
                                                            N/A
                                                        </t>
                                                    </td>
                                                    <td>
                                                        <span t-if="certificate.state == 'draft'" class="badge badge-secondary">Draft</span>
                                                        <span t-if="certificate.state == 'issued'" class="badge badge-success">Issued</span>
                                                        <span t-if="certificate.state == 'cancelled'" class="badge badge-danger">Cancelled</span>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <a t-attf-href="/my/certificate/#{certificate.id}" class="btn btn-sm btn-primary" title="View Details">
                                                                <i class="fa fa-eye"></i>
                                                            </a>
                                                            <a t-attf-href="/my/certificate/#{certificate.id}/download" class="btn btn-sm btn-success" title="Download PDF">
                                                                <i class="fa fa-download"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Pagination -->
                                <t t-if="pager">
                                    <t t-call="portal.pager"/>
                                </t>
                            </t>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Portal Certificate Detail Template -->
        <template id="portal_certificate_detail" name="Certificate Detail">
            <t t-call="portal.portal_layout">
                <t t-set="title">Certificate Details</t>

                <div class="o_portal_certificate_detail">
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <h3 class="mb-0">
                                <i class="fa fa-certificate"></i>
                                Certificate: <span t-esc="certificate.name"/>
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-4">Certificate #:</dt>
                                        <dd class="col-sm-8" t-esc="certificate.name"/>

                                        <dt class="col-sm-4">Date:</dt>
                                        <dd class="col-sm-8" t-esc="certificate.certificate_date.strftime(&apos;%B %d, %Y&apos;) if certificate.certificate_date else &apos;N/A&apos;"/>

                                        <dt class="col-sm-4">Container:</dt>
                                        <dd class="col-sm-8">
                                            <t t-if="certificate.container_id">
                                                <a t-attf-href="/my/container/#{certificate.container_id.id}" class="text-primary">
                                                    <t t-esc="certificate.container_id.name"/>
                                                </a>
                                            </t>
                                            <t t-else="">
                                                N/A
                                            </t>
                                        </dd>

                                        <dt class="col-sm-4">Status:</dt>
                                        <dd class="col-sm-8">
                                            <span t-if="certificate.state == 'draft'" class="badge badge-secondary">Draft</span>
                                            <span t-if="certificate.state == 'issued'" class="badge badge-success">Issued</span>
                                            <span t-if="certificate.state == 'cancelled'" class="badge badge-danger">Cancelled</span>
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <h5>Certificate Details</h5>
                                    <p t-esc="certificate.description or &apos;No additional details available.&apos;"/>

                                    <t t-if="certificate.destruction_date">
                                        <p><strong>Destruction Date:</strong> <span t-esc="certificate.destruction_date.strftime(&apos;%B %d, %Y&apos;)"/></p>
                                    </t>

                                    <t t-if="certificate.witness_name">
                                        <p><strong>Witness:</strong> <span t-esc="certificate.witness_name"/></p>
                                    </t>
                                </div>
                            </div>

                            <div class="mt-3">
                                <div class="btn-group" role="group">
                                    <a t-attf-href="/my/certificate/#{certificate.id}/download" class="btn btn-success">
                                        <i class="fa fa-download"></i> Download PDF Certificate
                                    </a>
                                    <a href="/my/certificates" class="btn btn-secondary">
                                        <i class="fa fa-arrow-left"></i> Back to Certificates
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
