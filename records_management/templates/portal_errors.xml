<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Portal Error Page Template -->
        <template id="portal_error_page" name="Portal Error Page">
            <t t-call="portal.portal_layout">
                <t t-set="title">Error</t>

                <div class="o_portal_error_page">
                    <div class="card">
                        <div class="card-header bg-danger text-white">
                            <h3 class="mb-0">
                                <i class="fa fa-exclamation-triangle"></i>
                                Access Denied
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-danger">
                                <h4 class="alert-heading">You don't have permission to access this resource.</h4>
                                <p class="mb-0">
                                    If you believe this is an error, please contact your administrator or submit a support request.
                                </p>
                            </div>

                            <div class="mt-3">
                                <a href="/records/dashboard" class="btn btn-primary">
                                    <i class="fa fa-home"></i> Return to Dashboard
                                </a>
                                <a href="/records/support" class="btn btn-secondary ml-2">
                                    <i class="fa fa-life-ring"></i> Contact Support
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Portal Not Found Template -->
        <template id="portal_not_found" name="Portal Not Found">
            <t t-call="portal.portal_layout">
                <t t-set="title">Page Not Found</t>

                <div class="o_portal_not_found">
                    <div class="card">
                        <div class="card-header bg-warning text-white">
                            <h3 class="mb-0">
                                <i class="fa fa-search"></i>
                                Page Not Found
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-warning">
                                <h4 class="alert-heading">The requested page could not be found.</h4>
                                <p class="mb-0">
                                    The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
                                </p>
                            </div>

                            <div class="mt-3">
                                <a href="/records/dashboard" class="btn btn-primary">
                                    <i class="fa fa-home"></i> Return to Dashboard
                                </a>
                                <a href="/records/browse" class="btn btn-secondary ml-2">
                                    <i class="fa fa-list"></i> Browse Records
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
