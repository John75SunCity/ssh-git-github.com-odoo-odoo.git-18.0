<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Optimized: Consolidated dynamic card rendering -->
        <template id="portal_home_preconfigured" name="Portal Home Preconfigured">
            <t t-call="portal.portal_layout">
                <div class="container">
                    <div class="row g-4">
                        <t t-foreach="cards" t-as="card">
                            <div class="col-md-4">
                                <div class="card h-100 shadow-sm border-0">
                                    <div class="card-body text-center">
                                        <i t-attf-class="fa #{card.icon} fa-3x mb-3 text-primary"/>
                                        <h5 class="card-title"><t t-esc="card.title"/></h5>
                                        <p class="card-text"><t t-esc="card.description"/></p>
                                        <a t-att-href="card.url" class="btn btn-primary">Go to <t t-esc="card.title"/></a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
