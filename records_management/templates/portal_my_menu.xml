<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add menu items using portal_my_home template extension -->
        <template id="portal_my_home_menu_records" name="Portal My Home Menu - Records Management" inherit_id="portal.portal_my_home" priority="20">

            <!-- Add Records Management Cards to Portal Home -->
            <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
                <div class="container mt-4">
                    <h3 class="mb-4">Records Management</h3>
                    <div class="row">
                        <!-- Physical Inventory -->
                        <div class="col-lg-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header bg-primary text-white">
                                    <i class="fa fa-box me-2"/>
                                    <strong>Physical Inventory</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/inventory" class="text-decoration-none">
                                                <i class="fa fa-th-large me-2 text-primary"/>All Inventory Dashboard</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/containers" class="text-decoration-none">
                                                <i class="fa fa-archive me-2 text-primary"/>Storage Containers</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/inventory/files" class="text-decoration-none">
                                                <i class="fa fa-folder me-2 text-primary"/>File Folders</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/documents" class="text-decoration-none">
                                                <i class="fa fa-file-text me-2 text-primary"/>Documents</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Service Requests -->
                        <div class="col-lg-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header bg-success text-white">
                                    <i class="fa fa-tasks me-2"/>
                                    <strong>Service Requests</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/requests" class="text-decoration-none">
                                                <i class="fa fa-list me-2 text-success"/>All My Requests</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/request/new/retrieval" class="text-decoration-none">
                                                <i class="fa fa-truck me-2 text-success"/>Request Retrieval</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/request/new/destruction" class="text-decoration-none">
                                                <i class="fa fa-fire me-2 text-success"/>Request Destruction</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Destruction Services -->
                        <div class="col-lg-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header bg-danger text-white">
                                    <i class="fa fa-fire me-2"/>
                                    <strong>Destruction Services</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/destruction" class="text-decoration-none">
                                                <i class="fa fa-list-alt me-2 text-danger"/>All Destruction Requests</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/destruction/pending" class="text-decoration-none">
                                                <i class="fa fa-hourglass-half me-2 text-danger"/>Pending Approvals</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/certificates" class="text-decoration-none">
                                                <i class="fa fa-certificate me-2 text-danger"/>Destruction Certificates</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/custody/chain" class="text-decoration-none">
                                                <i class="fa fa-link me-2 text-danger"/>Chain of Custody</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Billing & Reports - Placeholder for future routes -->
                        <div class="col-lg-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header bg-warning text-dark">
                                    <i class="fa fa-dollar me-2"/>
                                    <strong>Billing &amp; Invoices</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/invoices" class="text-decoration-none">
                                                <i class="fa fa-file-invoice-dollar me-2 text-warning"/>Current Invoices</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
