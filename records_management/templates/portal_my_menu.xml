<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add menu items using portal_my_home template extension -->
        <template id="portal_my_home_menu_records" name="Portal My Home Menu - Records Management" inherit_id="portal.portal_my_home" priority="20">

            <!-- Add Records Management Cards to Portal Home -->
            <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
                <div class="container mt-4">
                    <h3 class="mb-4">Records Management</h3>
                    <div class="row">
                        <!-- Physical Inventory -->
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header bg-primary text-white">
                                    <i class="fa fa-box me-2"/>
                                    <strong>Physical Inventory</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/inventory" class="text-decoration-none">
                                                <i class="fa fa-th-large me-2 text-primary"/>All Inventory Dashboard</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/containers" class="text-decoration-none">
                                                <i class="fa fa-archive me-2 text-primary"/>Storage Containers</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/inventory/files" class="text-decoration-none">
                                                <i class="fa fa-folder me-2 text-primary"/>File Folders</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/documents" class="text-decoration-none">
                                                <i class="fa fa-file-text me-2 text-primary"/>Documents</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/inventory/locations" class="text-decoration-none">
                                                <i class="fa fa-map-marker me-2 text-primary"/>Locations</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/inventory/movements" class="text-decoration-none">
                                                <i class="fa fa-exchange me-2 text-primary"/>Movements</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Service Requests -->
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header bg-success text-white">
                                    <i class="fa fa-tasks me-2"/>
                                    <strong>Service Requests</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/requests" class="text-decoration-none">
                                                <i class="fa fa-list me-2 text-success"/>All My Requests</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/request/new/retrieval" class="text-decoration-none">
                                                <i class="fa fa-truck me-2 text-success"/>Request Retrieval</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/request/new/destruction" class="text-decoration-none">
                                                <i class="fa fa-fire me-2 text-success"/>Request Destruction</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/document-retrieval" class="text-decoration-none">
                                                <i class="fa fa-download me-2 text-success"/>Document Retrieval</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Destruction & Compliance -->
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header bg-danger text-white">
                                    <i class="fa fa-fire me-2"/>
                                    <strong>Destruction &amp; Compliance</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/destruction" class="text-decoration-none">
                                                <i class="fa fa-list-alt me-2 text-danger"/>Destruction Requests</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/destruction/pending" class="text-decoration-none">
                                                <i class="fa fa-hourglass-half me-2 text-danger"/>Pending Approvals</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/certificates" class="text-decoration-none">
                                                <i class="fa fa-certificate me-2 text-danger"/>Certificates</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/custody/chain" class="text-decoration-none">
                                                <i class="fa fa-link me-2 text-danger"/>Chain of Custody</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Billing & Invoices -->
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header bg-warning text-dark">
                                    <i class="fa fa-dollar me-2"/>
                                    <strong>Billing &amp; Invoices</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/invoices" class="text-decoration-none">
                                                <i class="fa fa-file-invoice-dollar me-2 text-warning"/>Current Invoices</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/invoices/history" class="text-decoration-none">
                                                <i class="fa fa-history me-2 text-warning"/>Invoice History</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/billing/rates" class="text-decoration-none">
                                                <i class="fa fa-dollar-sign me-2 text-warning"/>Billing Rates</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/billing/statements" class="text-decoration-none">
                                                <i class="fa fa-file-alt me-2 text-warning"/>Statements</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/billing/summary" class="text-decoration-none">
                                                <i class="fa fa-chart-pie me-2 text-warning"/>Billing Summary</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Reports & Analytics -->
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header bg-info text-white">
                                    <i class="fa fa-chart-bar me-2"/>
                                    <strong>Reports &amp; Analytics</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/reports" class="text-decoration-none">
                                                <i class="fa fa-chart-bar me-2 text-info"/>All Reports</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/reports/activity" class="text-decoration-none">
                                                <i class="fa fa-clock me-2 text-info"/>Activity Reports</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/reports/compliance" class="text-decoration-none">
                                                <i class="fa fa-shield-alt me-2 text-info"/>Compliance Reports</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/reports/audit" class="text-decoration-none">
                                                <i class="fa fa-clipboard-check me-2 text-info"/>Audit Logs</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/reports/export" class="text-decoration-none">
                                                <i class="fa fa-download me-2 text-info"/>Export Data</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Tools & Utilities -->
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header bg-secondary text-white">
                                    <i class="fa fa-tools me-2"/>
                                    <strong>Tools &amp; Utilities</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/barcode/main" class="text-decoration-none">
                                                <i class="fa fa-barcode me-2 text-secondary"/>Barcode Scanner</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/feedback" class="text-decoration-none">
                                                <i class="fa fa-comment me-2 text-secondary"/>Feedback</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/notifications" class="text-decoration-none">
                                                <i class="fa fa-bell me-2 text-secondary"/>Notifications</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/certifications" class="text-decoration-none">
                                                <i class="fa fa-graduation-cap me-2 text-secondary"/>Training &amp; Certs</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/access" class="text-decoration-none">
                                                <i class="fa fa-key me-2 text-secondary"/>Access Requests</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Advanced Inventory Features -->
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header" style="background-color: #6f42c1; color: white;">
                                    <i class="fa fa-search-plus me-2"/>
                                    <strong>Advanced Inventory</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/inventory/advanced_search" class="text-decoration-none" style="color: #6f42c1;">
                                                <i class="fa fa-search me-2"/>Advanced Search</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/inventory/counts" class="text-decoration-none" style="color: #6f42c1;">
                                                <i class="fa fa-calculator me-2"/>Inventory Counts</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/inventory/recent_activity" class="text-decoration-none" style="color: #6f42c1;">
                                                <i class="fa fa-history me-2"/>Recent Activity</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/inventory/temp" class="text-decoration-none" style="color: #6f42c1;">
                                                <i class="fa fa-thermometer-half me-2"/>Temp Storage</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/inventory/files/available" class="text-decoration-none" style="color: #6f42c1;">
                                                <i class="fa fa-folder-open me-2"/>Available Files</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Barcode Operations -->
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header" style="background-color: #20c997; color: white;">
                                    <i class="fa fa-qrcode me-2"/>
                                    <strong>Barcode Operations</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/barcode/main" class="text-decoration-none" style="color: #20c997;">
                                                <i class="fa fa-barcode me-2"/>Main Scanner</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/barcode/scan/container" class="text-decoration-none" style="color: #20c997;">
                                                <i class="fa fa-archive me-2"/>Scan Container</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/barcode/scan/file" class="text-decoration-none" style="color: #20c997;">
                                                <i class="fa fa-folder me-2"/>Scan File</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/barcode/scan/document" class="text-decoration-none" style="color: #20c997;">
                                                <i class="fa fa-file me-2"/>Scan Document</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- User Management -->
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header" style="background-color: #e83e8c; color: white;">
                                    <i class="fa fa-users me-2"/>
                                    <strong>User Management</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/users" class="text-decoration-none" style="color: #e83e8c;">
                                                <i class="fa fa-users-cog me-2"/>Manage Users</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/users/create" class="text-decoration-none" style="color: #e83e8c;">
                                                <i class="fa fa-user-plus me-2"/>Add New User</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Feedback & Communication -->
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header" style="background-color: #fd7e14; color: white;">
                                    <i class="fa fa-comments me-2"/>
                                    <strong>Feedback &amp; Communication</strong>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <a href="/my/feedback" class="text-decoration-none" style="color: #fd7e14;">
                                                <i class="fa fa-comment-dots me-2"/>Submit Feedback</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/feedback/history" class="text-decoration-none" style="color: #fd7e14;">
                                                <i class="fa fa-history me-2"/>Feedback History</a>
                                        </li>
                                        <li class="mb-2">
                                            <a href="/my/notifications" class="text-decoration-none" style="color: #fd7e14;">
                                                <i class="fa fa-bell me-2"/>Notifications</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
