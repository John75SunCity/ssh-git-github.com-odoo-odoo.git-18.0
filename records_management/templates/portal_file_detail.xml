<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Portal File Detail View -->
        <template id="portal_file_detail" name="File Detail">
            <t t-call="portal.portal_layout">
                <t t-set="title">File Details</t>

                <div class="container my-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <!-- Success/Error Messages -->
                            <t t-if="request.params.get('created')">
                                <div class="alert alert-success alert-dismissible fade show">
                                    <i class="fa fa-check-circle"></i> File created successfully!
                                    <button type="button" class="close" data-dismiss="alert">&#215;</button>
                                </div>
                            </t>
                            <t t-if="request.params.get('updated')">
                                <div class="alert alert-success alert-dismissible fade show">
                                    <i class="fa fa-check-circle"></i> File updated successfully!
                                    <button type="button" class="close" data-dismiss="alert">&#215;</button>
                                </div>
                            </t>

                            <!-- File Header Card -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-header bg-success text-white">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <h3 class="mb-0">
                                                <i class="fa fa-folder-open"></i> <t t-esc="file.name"/>
                                            </h3>
                                        </div>
                                        <div class="col-md-4 text-right">
                                            <t t-if="can_edit">
                                                <button class="btn btn-light btn-sm" data-toggle="modal" data-target="#editFileModal">
                                                    <i class="fa fa-edit"></i> Edit
                                                </button>
                                            </t>
                                            <t t-if="can_delete">
                                                <button class="btn btn-danger btn-sm" onclick="deleteFile()">
                                                    <i class="fa fa-trash"></i> Delete
                                                </button>
                                            </t>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h5 class="text-muted mb-3">File Information</h5>
                                            <table class="table table-sm">
                                                <tr>
                                                    <th style="width: 40%;">File Name:</th>
                                                    <td><strong><t t-esc="file.name"/></strong></td>
                                                </tr>
                                                <tr>
                                                    <th>Barcode:</th>
                                                    <td>
                                                        <t t-if="file.barcode">
                                                            <span class="badge badge-info"><t t-esc="file.barcode"/></span>
                                                        </t>
                                                        <t t-else="">
                                                            <span class="text-muted">Not assigned</span>
                                                        </t>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>File Category:</th>
                                                    <td>
                                                        <t t-if="file.file_category">
                                                            <t t-set="file_categories" t-value="dict([('permanent', 'Permanent'), ('temporary', 'Temporary'), ('archived', 'Archived'), ('active', 'Active')])"/>
                                                            <span class="badge badge-primary">
                                                                <t t-esc="file_categories.get(file.file_category, file.file_category)"/>
                                                            </span>
                                                        </t>
                                                        <t t-else="">
                                                            <span class="text-muted">Not specified</span>
                                                        </t>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>State:</th>
                                                    <td>
                                                        <t t-if="file.state">
                                                            <span t-att-class="'badge badge-' + ('success' if file.state == 'in' else 'warning' if file.state == 'pending' else 'info' if file.state == 'out' else 'secondary' if file.state == 'perm_out' else 'danger')">
                                                                <t t-if="file.state == 'pending'">Pending</t>
                                                                <t t-elif="file.state == 'in'">In Storage</t>
                                                                <t t-elif="file.state == 'out'">Out</t>
                                                                <t t-elif="file.state == 'perm_out'">Perm-Out</t>
                                                                <t t-elif="file.state == 'destroyed'">Destroyed</t>
                                                            </span>
                                                        </t>
                                                        <t t-else="">
                                                            <span class="text-muted">Unknown</span>
                                                        </t>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>Department:</th>
                                                    <td><t t-esc="file.department_id.name or 'Not assigned'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Container:</th>
                                                    <td>
                                                        <a t-attf-href="/my/inventory/container/#{file.container_id.id}" t-if="file.container_id">
                                                            <t t-esc="file.container_id.name"/>
                                                        </a>
                                                        <span t-else="">Not assigned</span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>Location:</th>
                                                    <td><t t-esc="file.location_id.name if file.location_id else 'Not assigned'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Description:</th>
                                                    <td><t t-esc="file.description or 'None'"/></td>
                                                </tr>
                                            </table>
                                        </div>

                                        <div class="col-md-6">
                                            <h5 class="text-muted mb-3">Statistics &amp; Dates</h5>
                                            <table class="table table-sm">
                                                <tr>
                                                    <th style="width: 40%;">Documents:</th>
                                                    <td><strong><t t-esc="file.document_count or len(documents or [])"/></strong> documents</td>
                                                </tr>
                                                <tr>
                                                    <th>Date Created:</th>
                                                    <td>
                                                        <t t-if="file.date_created">
                                                            <span class="badge badge-info">
                                                                <t t-esc="file.date_created.strftime('%Y-%m-%d') if isinstance(file.date_created, datetime.datetime) else file.date_created"/>
                                                            </span>
                                                        </t>
                                                        <t t-else="">
                                                            <span class="text-muted">Not set</span>
                                                        </t>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>Date Received:</th>
                                                    <td>
                                                        <t t-if="file.received_date">
                                                            <span class="badge badge-success">
                                                                <t t-esc="file.received_date.strftime('%Y-%m-%d') if isinstance(file.received_date, datetime.datetime) else file.received_date"/>
                                                            </span>
                                                        </t>
                                                        <t t-else="">
                                                            <span class="text-muted">Not set</span>
                                                        </t>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>Record Created:</th>
                                                    <td><t t-esc="file.create_date.strftime('%Y-%m-%d %H:%M') if file.create_date else 'Unknown'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Last Updated:</th>
                                                    <td><t t-esc="file.write_date.strftime('%Y-%m-%d %H:%M') if file.write_date else 'Unknown'"/></td>
                                                </tr>
                                                <tr t-if="file.owner_id">
                                                    <th>Owner:</th>
                                                    <td><t t-esc="file.owner_id.name"/></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Documents in File -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">
                                        <i class="fa fa-file-text"></i> Documents (<t t-esc="len(documents or [])"/>)
                                    </h5>
                                    <!-- Upload Document button -->
                                    <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#uploadDocumentModal">
                                        <i class="fa fa-upload"></i> Upload Document
                                    </button>
                                </div>
                                <div class="card-body">
                                    <t t-if="documents">
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Document Name</th>
                                                        <th>Type</th>
                                                        <th>Created</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="documents" t-as="doc">
                                                        <tr>
                                                            <td><strong><t t-esc="doc.name"/></strong></td>
                                                            <td><t t-esc="doc.document_type_id.name or 'N/A'"/></td>
                                                            <td><t t-esc="doc.create_date.strftime('%Y-%m-%d') if doc.create_date else 'Unknown'"/></td>
                                                            <td>
                                                                <a t-attf-href="/my/inventory/document/#{doc.id}" class="btn btn-sm btn-primary">
                                                                    <i class="fa fa-eye"></i> View
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <div class="alert alert-info">
                                            <i class="fa fa-info-circle"></i> No documents in this file yet.
                                        </div>
                                    </t>
                                </div>
                            </div>

                            <!-- Quick Actions -->
                            <div class="card shadow-sm">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="fa fa-bolt"></i> Quick Actions</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex flex-wrap gap-2">
                                        <!-- Add to Retrieval Cart - only for files in storage -->
                                        <t t-if="file.state == 'in'">
                                            <button type="button" class="btn btn-primary" onclick="addToRetrievalCart()">
                                                <i class="fa fa-shopping-cart"></i> Add to Retrieval Cart
                                            </button>
                                        </t>
                                        <t t-elif="file.state == 'out'">
                                            <span class="btn btn-outline-secondary disabled" title="This file is already checked out">
                                                <i class="fa fa-check-circle"></i> Already Out
                                            </span>
                                        </t>
                                        <t t-elif="file.state == 'pending'">
                                            <span class="btn btn-outline-warning disabled" title="This file hasn't been received into storage yet">
                                                <i class="fa fa-clock-o"></i> Pending Receipt
                                            </span>
                                        </t>
                                        
                                        <!-- View Retrieval Cart -->
                                        <a href="/my/retrieval-cart" class="btn btn-outline-primary">
                                            <i class="fa fa-shopping-cart"></i> View Cart
                                            <t t-if="retrieval_cart_count">
                                                <span class="badge bg-danger ms-1"><t t-esc="retrieval_cart_count"/></span>
                                            </t>
                                        </a>
                                        
                                        <a href="/my/inventory/files" class="btn btn-secondary">
                                            <i class="fa fa-arrow-left"></i> Back to Files
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Edit File Modal -->
                <t t-if="can_edit">
                    <div class="modal fade" id="editFileModal" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Edit File</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <form t-attf-action="/my/inventory/file/#{file.id}/edit" method="POST">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="modal-body">
                                        <div class="form-group mb-3">
                                            <label>File Name *</label>
                                            <input type="text" class="form-control" name="name" t-att-value="file.name" required="required"/>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label>Barcode</label>
                                            <input type="text" class="form-control" name="barcode" t-att-value="file.barcode"/>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label>Description</label>
                                            <textarea class="form-control" name="description" rows="3"><t t-esc="file.description"/></textarea>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label>Container</label>
                                            <select class="form-control" name="container_id">
                                                <option value="">-- Select Container --</option>
                                                <t t-foreach="containers" t-as="cont">
                                                    <option t-att-value="cont.id" t-att-selected="'selected' if cont.id == file.container_id.id else None">
                                                        <t t-esc="cont.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label>Department</label>
                                            <select class="form-control" name="department_id">
                                                <option value="">-- Select Department --</option>
                                                <t t-foreach="departments" t-as="dept">
                                                    <option t-att-value="dept.id" t-att-selected="'selected' if dept.id == file.department_id.id else None">
                                                        <t t-esc="dept.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </t>
                
                <!-- Upload Document Modal -->
                <div class="modal fade" id="uploadDocumentModal" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title"><i class="fa fa-upload"></i> Upload Document</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <form t-attf-action="/my/inventory/file/#{file.id}/upload" method="POST" enctype="multipart/form-data">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label class="form-label">Document Name *</label>
                                        <input type="text" class="form-control" name="document_name" required="required" 
                                               placeholder="e.g., Employment Contract, Tax Form W-2"/>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">File Attachment *</label>
                                        <input type="file" class="form-control" name="attachment" required="required"
                                               accept=".pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.tiff,.tif"/>
                                        <small class="text-muted">Accepted formats: PDF, Word, Excel, Images (max 25MB)</small>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Description</label>
                                        <textarea class="form-control" name="description" rows="2" 
                                                  placeholder="Optional description of document contents"></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fa fa-upload"></i> Upload Document
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- JavaScript for File Actions -->
                <script type="text/javascript">
                    function deleteFile() {
                        if (confirm('Are you sure you want to archive this file? This action can be reversed by an administrator.')) {
                            fetch('/my/inventory/file/<t t-esc="file.id"/>/delete', {
                                method: 'POST',
                                headers: {'Content-Type': 'application/json'},
                                body: JSON.stringify({jsonrpc: '2.0', method: 'call', params: {}})
                            })
                            .then(response => response.json())
                            .then(data => {
                                if (data.result &amp;&amp; data.result.success) {
                                    window.location.href = '/my/inventory/files?deleted=success';
                                } else {
                                    alert('Error: ' + (data.result ? data.result.error : 'Unknown error'));
                                }
                            })
                            .catch(error => alert('Error deleting file: ' + error));
                        }
                    }
                    
                    function addToRetrievalCart() {
                        fetch('/my/retrieval-cart/add', {
                            method: 'POST',
                            headers: {'Content-Type': 'application/json'},
                            body: JSON.stringify({
                                jsonrpc: '2.0',
                                method: 'call',
                                params: {file_id: <t t-esc="file.id"/>}
                            })
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.result &amp;&amp; data.result.success) {
                                // Show success message
                                var alertDiv = document.createElement('div');
                                alertDiv.className = 'alert alert-success alert-dismissible fade show';
                                alertDiv.innerHTML = '<i class="fa fa-check-circle"></i> ' + data.result.message + 
                                    ' <a href="/my/retrieval-cart" class="alert-link">View Cart (' + data.result.cart_count + ')</a>' +
                                    '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>';
                                document.querySelector('.container.my-4').insertBefore(alertDiv, document.querySelector('.container.my-4').firstChild);
                                
                                // Update cart badge if exists
                                var badge = document.querySelector('.btn-outline-primary .badge');
                                if (badge) {
                                    badge.textContent = data.result.cart_count;
                                }
                            } else {
                                alert('Error: ' + (data.result ? data.result.error : 'Could not add to cart'));
                            }
                        })
                        .catch(error => alert('Network error. Please try again.'));
                    }
                </script>
            </t>
        </template>
    </data>
</odoo>
