<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Portal Certifications Page -->
        <template id="portal_certifications" name="Portal Certifications">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_searchbar">
                    <t t-set="title">NAID Operator Certifications</t>
                </t>

                <div class="oe_structure">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">
                                            <i class="fa fa-certificate"></i>
                                            NAID Operator Certifications
                                        </h3>
                                    </div>
                                    <div class="panel-body">
                                        <p class="text-muted">
                                            View certified NAID operators and their training status.
                                            All technicians performing records destruction services are properly certified.
                                        </p>

                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Operator</th>
                                                        <th>Certification Number</th>
                                                        <th>Certification Date</th>
                                                        <th>Expiry Date</th>
                                                        <th>Training Status</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="certifications" t-as="certification">
                                                        <tr>
                                                            <td>
                                                                <strong t-esc="certification.employee_id.name"/>
                                                                <br/>
                                                                <small class="text-muted" t-esc="certification.employee_id.job_title"/>
                                                            </td>
                                                            <td>
                                                                <span class="label label-info" t-esc="certification.certification_number"/>
                                                            </td>
                                                            <td t-esc="certification.certification_date.strftime('%B %d, %Y') if certification.certification_date else 'N/A'"/>
                                                            <td>
                                                                <t t-if="certification.expiry_date">
                                                                    <span t-att-class="'text-danger' if certification.expired else 'text-success'">
                                                                        <t t-esc="certification.expiry_date.strftime('%B %d, %Y')"/>
                                                                    </span>
                                                                </t>
                                                                <t t-else="">
                                                                    <span class="text-muted">No Expiry</span>
                                                                </t>
                                                            </td>
                                                            <td>
                                                                <t t-if="certification.training_progress == 100">
                                                                    <span class="label label-success">
                                                                        <i class="fa fa-check"></i> Complete
                                                                    </span>
                                                                </t>
                                                                <t t-elif="certification.training_progress > 0">
                                                                    <span class="label label-warning">
                                                                        <i class="fa fa-clock-o"></i>
                                                                        <t t-esc="certification.training_progress"/>% Complete
                                                                    </span>
                                                                </t>
                                                                <t t-else="">
                                                                    <span class="label label-default">
                                                                        <i class="fa fa-exclamation-triangle"></i> Not Started
                                                                    </span>
                                                                </t>
                                                            </td>
                                                            <td>
                                                                <a t-att-href="'/my/certifications/' + str(certification.id)" class="btn btn-xs btn-primary">
                                                                    <i class="fa fa-eye"></i> View Details
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>

                                        <t t-if="not certifications">
                                            <div class="alert alert-info">
                                                <i class="fa fa-info-circle"></i>
                                                No NAID operator certifications found.
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Portal Certification Detail Page -->
        <template id="portal_certification_detail" name="Portal Certification Detail">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_searchbar">
                    <t t-set="title">Certification Details</t>
                </t>

                <div class="oe_structure">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">
                                            <i class="fa fa-certificate"></i>
                                            NAID Operator Certification Details
                                        </h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h4>Operator Information</h4>
                                                <dl class="dl-horizontal">
                                                    <dt>Name:</dt>
                                                    <dd t-esc="certification.employee_id.name"/>
                                                    <dt>Job Title:</dt>
                                                    <dd t-esc="certification.employee_id.job_title or 'N/A'"/>
                                                    <dt>Department:</dt>
                                                    <dd t-esc="certification.employee_id.department_id.name or 'N/A'"/>
                                                </dl>
                                            </div>
                                            <div class="col-md-6">
                                                <h4>Certification Information</h4>
                                                <dl class="dl-horizontal">
                                                    <dt>Certification Number:</dt>
                                                    <dd>
                                                        <span class="label label-info" t-esc="certification.certification_number"/>
                                                    </dd>
                                                    <dt>Certification Date:</dt>
                                                    <dd t-esc="certification.certification_date.strftime('%B %d, %Y') if certification.certification_date else 'N/A'"/>
                                                    <dt>Expiry Date:</dt>
                                                    <dd>
                                                        <t t-if="certification.expiry_date">
                                                            <span t-att-class="'text-danger' if certification.expired else 'text-success'">
                                                                <t t-esc="certification.expiry_date.strftime('%B %d, %Y')"/>
                                                            </span>
                                                        </t>
                                                        <t t-else="">
                                                            <span class="text-muted">No Expiry</span>
                                                        </t>
                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-12">
                                                <h4>Training Information</h4>
                                                <div class="progress" style="margin-bottom: 20px;">
                                                    <div class="progress-bar"
                                                         t-att-style="'width: ' + str(certification.training_progress) + '%'"
                                                         t-att-class="'progress-bar-' + ('success' if certification.training_progress == 100 else ('warning' if certification.training_progress > 0 else 'danger'))">
                                                        <t t-esc="certification.training_progress"/>% Complete
                                                    </div>
                                                </div>

                                                <t t-if="certification.training_courses">
                                                    <h5>Completed Training Courses</h5>
                                                    <ul class="list-group">
                                                        <t t-foreach="certification.training_courses" t-as="course">
                                                            <li class="list-group-item">
                                                                <i class="fa fa-graduation-cap text-success"></i>
                                                                <strong t-esc="course.name"/>
                                                                <br/>
                                                                <small class="text-muted" t-esc="course.description"/>
                                                            </li>
                                                        </t>
                                                    </ul>
                                                </t>

                                                <t t-if="certification.refresher_training_required">
                                                    <div class="alert alert-info">
                                                        <i class="fa fa-refresh"></i>
                                                        <strong>Recurring Training Required</strong>
                                                        <br/>
                                                        Next refresher due:
                                                        <strong t-esc="certification.next_refresher_date.strftime('%B %d, %Y') if certification.next_refresher_date else 'Not scheduled'"/>
                                                        <t t-if="certification.refresher_overdue">
                                                            <span class="text-danger"> (Overdue)</span>
                                                        </t>
                                                    </div>
                                                </t>
                                            </div>
                                        </div>

                                        <t t-if="certification.destruction_certificate_ids">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <h4>Related Destruction Certificates</h4>
                                                    <div class="table-responsive">
                                                        <table class="table table-striped">
                                                            <thead>
                                                                <tr>
                                                                    <th>Certificate Number</th>
                                                                    <th>Destruction Date</th>
                                                                    <th>Status</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <t t-foreach="certification.destruction_certificate_ids" t-as="cert">
                                                                    <tr>
                                                                        <td t-esc="cert.certificate_number"/>
                                                                        <td t-esc="cert.destruction_date.strftime('%B %d, %Y') if cert.destruction_date else 'N/A'"/>
                                                                        <td>
                                                                            <span class="label label-success" t-if="cert.state == 'completed'">Completed</span>
                                                                            <span class="label label-warning" t-elif="cert.state == 'in_progress'">In Progress</span>
                                                                            <span class="label label-default" t-else="">Draft</span>
                                                                        </td>
                                                                    </tr>
                                                                </t>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>

                                        <div class="row">
                                            <div class="col-md-12">
                                                <a href="/my/certifications" class="btn btn-default">
                                                    <i class="fa fa-arrow-left"></i> Back to Certifications
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
    </odoo>
