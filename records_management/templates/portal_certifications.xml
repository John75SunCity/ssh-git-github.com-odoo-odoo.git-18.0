<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Portal Certifications Page - Destruction Certificates & Training -->
        <template id="portal_certifications" name="Portal Certifications">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_searchbar">
                    <t t-set="title">Certificates &amp; Training</t>
                </t>

                <div class="oe_structure">
                    <div class="container mt-4">
                        <!-- Destruction Certificates Section -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="card shadow">
                                    <div class="card-header bg-success text-white">
                                        <h3 class="mb-0">
                                            <i class="fa fa-certificate"></i>
                                            Destruction Certificates (NAID AAA Compliant)
                                        </h3>
                                    </div>
                                    <div class="card-body">
                                        <p class="text-muted">
                                            Official certificates of destruction for completed shredding services.
                                            All destruction is performed in compliance with NAID AAA standards.
                                        </p>

                                        <t t-if="destruction_certificates">
                                            <div class="table-responsive">
                                                <table class="table table-striped table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>Certificate #</th>
                                                            <th>Date</th>
                                                            <th>Containers Destroyed</th>
                                                            <th>Method</th>
                                                            <th>Status</th>
                                                            <th>Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <t t-foreach="destruction_certificates" t-as="cert">
                                                            <tr>
                                                                <td>
                                                                    <strong t-esc="cert.certificate_number or cert.name"/>
                                                                </td>
                                                                <td t-esc="cert.certificate_date.strftime('%B %d, %Y') if cert.certificate_date else 'N/A'"/>
                                                                <td>
                                                                    <span class="badge badge-info">
                                                                        <t t-esc="len(cert.item_ids)"/> items
                                                                    </span>
                                                                </td>
                                                                <td t-esc="cert.destruction_method or 'Shredding'"/>
                                                                <td>
                                                                    <span class="badge badge-success">
                                                                        <i class="fa fa-check-circle"></i> Completed
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    <a t-att-href="'/my/certifications/' + str(cert.id)" class="btn btn-sm btn-primary">
                                                                        <i class="fa fa-eye"></i> View
                                                                    </a>
                                                                    <a t-att-href="'/my/certificate/%s/download' % cert.id" class="btn btn-sm btn-success">
                                                                        <i class="fa fa-download"></i> PDF
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </t>
                                        <t t-else="">
                                            <div class="alert alert-info">
                                                <i class="fa fa-info-circle"></i>
                                                No destruction certificates yet. Certificates will appear here after shredding services are completed.
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Training Courses Section -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card shadow">
                                    <div class="card-header bg-primary text-white">
                                        <h3 class="mb-0">
                                            <i class="fa fa-graduation-cap"></i>
                                            Training Materials &amp; eLearning
                                        </h3>
                                    </div>
                                    <div class="card-body">
                                        <p class="text-muted">
                                            Access training courses, tutorials, and educational materials about records management best practices.
                                        </p>

                                        <t t-if="training_courses">
                                            <div class="row">
                                                <t t-foreach="training_courses" t-as="course">
                                                    <div class="col-md-6 col-lg-4 mb-3">
                                                        <div class="card h-100">
                                                            <div class="card-body">
                                                                <h5 class="card-title">
                                                                    <i class="fa fa-book text-primary"></i>
                                                                    <t t-esc="course.name"/>
                                                                </h5>
                                                                <p class="card-text text-muted" t-esc="course.description or 'Training course'"/>
                                                                <div class="mt-3">
                                                                    <a t-att-href="'/slides/%s' % course.id" class="btn btn-primary btn-sm">
                                                                        <i class="fa fa-play-circle"></i> Start Course
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </t>
                                            </div>
                                        </t>
                                        <t t-else="">
                                            <div class="alert alert-info">
                                                <i class="fa fa-info-circle"></i>
                                                No training courses available at this time. Check back soon!
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Portal Certification Detail Page -->
        <template id="portal_certification_detail" name="Portal Certification Detail">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_searchbar">
                    <t t-set="title">Certification Details</t>
                </t>

                <div class="oe_structure">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">
                                            <i class="fa fa-certificate"></i>
                                            NAID Operator Certification Details
                                        </h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h4>Operator Information</h4>
                                                <dl class="dl-horizontal">
                                                    <dt>Name:</dt>
                                                    <dd t-esc="certification.employee_id.name"/>
                                                    <dt>Job Title:</dt>
                                                    <dd t-esc="certification.employee_id.job_title or 'N/A'"/>
                                                    <dt>Department:</dt>
                                                    <dd t-esc="certification.employee_id.department_id.name or 'N/A'"/>
                                                </dl>
                                            </div>
                                            <div class="col-md-6">
                                                <h4>Certification Information</h4>
                                                <dl class="dl-horizontal">
                                                    <dt>Certification Number:</dt>
                                                    <dd>
                                                        <span class="label label-info" t-esc="certification.certification_number"/>
                                                    </dd>
                                                    <dt>Certification Date:</dt>
                                                    <dd t-esc="certification.certification_date.strftime('%B %d, %Y') if certification.certification_date else 'N/A'"/>
                                                    <dt>Expiry Date:</dt>
                                                    <dd>
                                                        <t t-if="certification.expiry_date">
                                                            <span t-att-class="'text-danger' if certification.expired else 'text-success'">
                                                                <t t-esc="certification.expiry_date.strftime('%B %d, %Y')"/>
                                                            </span>
                                                        </t>
                                                        <t t-else="">
                                                            <span class="text-muted">No Expiry</span>
                                                        </t>
                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-12">
                                                <h4>Training Information</h4>
                                                <div class="progress" style="margin-bottom: 20px;">
                                                    <div class="progress-bar"
                                                         t-att-style="'width: ' + str(certification.training_progress) + '%'"
                                                         t-att-class="'progress-bar-' + ('success' if certification.training_progress == 100 else ('warning' if certification.training_progress > 0 else 'danger'))">
                                                        <t t-esc="certification.training_progress"/>% Complete
                                                    </div>
                                                </div>

                                                <t t-if="certification.training_courses">
                                                    <h5>Completed Training Courses</h5>
                                                    <ul class="list-group">
                                                        <t t-foreach="certification.training_courses" t-as="course">
                                                            <li class="list-group-item">
                                                                <i class="fa fa-graduation-cap text-success"></i>
                                                                <strong t-esc="course.name"/>
                                                                <br/>
                                                                <small class="text-muted" t-esc="course.description"/>
                                                            </li>
                                                        </t>
                                                    </ul>
                                                </t>

                                                <t t-if="certification.refresher_training_required">
                                                    <div class="alert alert-info">
                                                        <i class="fa fa-refresh"></i>
                                                        <strong>Recurring Training Required</strong>
                                                        <br/>
                                                        Next refresher due:
                                                        <strong t-esc="certification.next_refresher_date.strftime('%B %d, %Y') if certification.next_refresher_date else 'Not scheduled'"/>
                                                        <t t-if="certification.refresher_overdue">
                                                            <span class="text-danger"> (Overdue)</span>
                                                        </t>
                                                    </div>
                                                </t>
                                            </div>
                                        </div>

                                        <t t-if="certification.destruction_certificate_ids">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <h4>Related Destruction Certificates</h4>
                                                    <div class="table-responsive">
                                                        <table class="table table-striped">
                                                            <thead>
                                                                <tr>
                                                                    <th>Certificate Number</th>
                                                                    <th>Destruction Date</th>
                                                                    <th>Status</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <t t-foreach="certification.destruction_certificate_ids" t-as="cert">
                                                                    <tr>
                                                                        <td t-esc="cert.certificate_number"/>
                                                                        <td t-esc="cert.destruction_date.strftime('%B %d, %Y') if cert.destruction_date else 'N/A'"/>
                                                                        <td>
                                                                            <span class="label label-success" t-if="cert.state == 'completed'">Completed</span>
                                                                            <span class="label label-warning" t-elif="cert.state == 'in_progress'">In Progress</span>
                                                                            <span class="label label-default" t-else="">Draft</span>
                                                                        </td>
                                                                    </tr>
                                                                </t>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>

                                        <div class="row">
                                            <div class="col-md-12">
                                                <a href="/my/certifications" class="btn btn-default">
                                                    <i class="fa fa-arrow-left"></i> Back to Certifications
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
    </odoo>
