<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Portal Container Creation Form -->
        <template id="portal_container_create_form" name="Create New Container">
            <t t-call="portal.portal_layout">
                <t t-set="title">Add New Container</t>
                
                <div class="container mt-4">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <!-- Permission check - show warning if no create access -->
                            <t t-if="not permissions.get('containers', {}).get('can_create')">
                                <div class="alert alert-danger" role="alert">
                                    <h4 class="alert-heading">
                                        <i class="fa fa-lock"></i> Permission Required
                                    </h4>
                                    <p>You don't have permission to create new containers.</p>
                                    <hr/>
                                    <p class="mb-0">
                                        Your current role: <strong><t t-esc="permissions.get('user_role', 'Unknown')"/></strong>
                                        <br/>
                                        Please contact your company administrator if you need this access.
                                    </p>
                                    <a href="/my/containers" class="btn btn-secondary mt-3">
                                        <i class="fa fa-arrow-left"></i> Back to Containers
                                    </a>
                                </div>
                            </t>
                            
                            <t t-if="permissions.get('containers', {}).get('can_create')">
                            <div class="card shadow">
                                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                    <h3 class="mb-0">
                                        <i class="fa fa-box"></i> Add New Container to Inventory
                                    </h3>
                                    <t t-call="records_management.permission_badge">
                                        <t t-set="perm_key" t-value="'containers'"/>
                                    </t>
                                </div>
                                
                                <div class="card-body">
                                    <t t-if="error">
                                        <div class="alert alert-danger" role="alert">
                                            <i class="fa fa-exclamation-triangle"></i>
                                            <t t-if="error == 'no_permission'">
                                                You don't have permission to create containers. Please contact your administrator.
                                            </t>
                                            <t t-else="">
                                                Error: <t t-esc="error"/>
                                            </t>
                                        </div>
                                    </t>
                                    
                                    <form action="/my/inventory/containers/create" method="POST" class="o_portal_form">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        
                                        <!-- Container Identification -->
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h5 class="border-bottom pb-2 mb-3">Container Identification</h5>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="container_number" class="form-label">Box / Container Number *</label>
                                                <input type="text" class="form-control" id="container_number"
                                                       name="container_number" required="required"
                                                       placeholder="e.g., 0001, B-1234 (minimum 4 characters)"
                                                       minlength="4"/>
                                                <small class="form-text text-muted">
                                                    Enter a unique identifier for this container (4+ characters)
                                                </small>
                                            </div>
                                            
                                            <!-- Smart Department Selection -->
                                            <t t-if="has_departments">
                                                <div class="col-md-6 mb-3">
                                                    <label for="department_id" class="form-label">Department</label>
                                                    
                                                    <!-- Case 1: User has exactly one department - show read-only -->
                                                    <t t-if="default_department and not show_department_selector">
                                                        <input type="text" class="form-control" readonly="readonly"
                                                               t-att-value="default_department.name"/>
                                                        <input type="hidden" name="department_id" t-att-value="default_department.id"/>
                                                        <small class="form-text text-muted">Your assigned department</small>
                                                    </t>
                                                    
                                                    <!-- Case 2: User has multiple departments - show dropdown -->
                                                    <t t-elif="show_department_selector">
                                                        <select class="form-control" id="department_id" name="department_id">
                                                            <option value="">-- Select Department --</option>
                                                            <t t-foreach="departments" t-as="dept">
                                                                <option t-att-value="dept.id" t-esc="dept.name"/>
                                                            </t>
                                                        </select>
                                                    </t>
                                                    
                                                    <!-- Case 3: Company has departments but user has no access -->
                                                    <t t-else="">
                                                        <input type="text" class="form-control text-muted" readonly="readonly"
                                                               value="Company Level"/>
                                                        <input type="hidden" name="department_id" value=""/>
                                                        <small class="form-text text-muted">Container will be at company level</small>
                                                    </t>
                                                </div>
                                            </t>
                                        </div>
                                        
                                        <!-- Staging Location Selection (REQUIRED for tracking) -->
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h5 class="border-bottom pb-2 mb-3 mt-3">
                                                    <i class="fa fa-map-marker-alt text-danger"></i> Pickup Location *
                                                </h5>
                                                <p class="text-muted small">
                                                    <i class="fa fa-info-circle"></i> 
                                                    Where is this container located? This helps our technicians find it during pickup.
                                                    A temporary barcode will be generated for tracking.
                                                </p>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-8 mb-3">
                                                <label for="staging_location_id" class="form-label">
                                                    Staging Location * 
                                                    <span class="badge bg-warning text-dark">Required</span>
                                                </label>
                                                <t t-if="staging_locations">
                                                    <select class="form-control" id="staging_location_id" name="staging_location_id" required="required">
                                                        <option value="">-- Select where this container is located --</option>
                                                        <t t-foreach="staging_locations" t-as="loc">
                                                            <option t-att-value="loc.id" t-esc="loc.complete_name"/>
                                                        </t>
                                                    </select>
                                                    <small class="form-text text-muted">
                                                        Choose the building/room where technicians will find this container
                                                    </small>
                                                </t>
                                                <t t-else="">
                                                    <div class="alert alert-warning">
                                                        <i class="fa fa-exclamation-triangle"></i>
                                                        <strong>No staging locations configured.</strong>
                                                        <br/>
                                                        <a href="/my/staging-locations/create" class="btn btn-sm btn-outline-primary mt-2">
                                                            <i class="fa fa-plus"></i> Create a Staging Location First
                                                        </a>
                                                    </div>
                                                    <input type="hidden" name="staging_location_id" value=""/>
                                                </t>
                                            </div>
                                            <div class="col-md-4 mb-3">
                                                <label class="form-label">&amp;nbsp;</label>
                                                <a href="/my/staging-locations/create" class="btn btn-outline-secondary d-block">
                                                    <i class="fa fa-plus"></i> Add New Location
                                                </a>
                                            </div>
                                        </div>
                                        
                                        <!-- Container Size/Type -->
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h5 class="border-bottom pb-2 mb-3 mt-3">
                                                    <i class="fa fa-cube"></i> Container Size
                                                </h5>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-12 mb-3">
                                                <label class="form-label">Container Type *</label>
                                                <div class="container-type-grid">
                                                    <!-- Type 01 - Standard Box - Default and Selectable -->
                                                    <t t-foreach="container_types or []" t-as="ctype">
                                                        <t t-if="ctype.code == 'TYPE-01-STD'">
                                                            <div class="card mb-2 border-primary">
                                                                <div class="card-body p-2">
                                                                    <div class="form-check">
                                                                        <input class="form-check-input" type="radio" 
                                                                               name="container_type_id" 
                                                                               t-att-id="'type_%s' % ctype.id"
                                                                               t-att-value="ctype.id" 
                                                                               checked="checked"/>
                                                                        <label class="form-check-label w-100" t-att-for="'type_%s' % ctype.id">
                                                                            <strong class="text-primary">
                                                                                <i class="fa fa-check-circle"></i>
                                                                                <t t-esc="ctype.name"/>
                                                                            </strong>
                                                                            <span class="badge bg-success ms-2">Default</span>
                                                                            <br/>
                                                                            <small class="text-muted">
                                                                                <t t-esc="ctype.length"/>″ x <t t-esc="ctype.width"/>″ x <t t-esc="ctype.height"/>″
                                                                            </small>
                                                                        </label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </t>
                                                    </t>
                                                    
                                                    <!-- Type 02 - Legal/Banker Box - Selectable -->
                                                    <t t-foreach="container_types or []" t-as="ctype">
                                                        <t t-if="ctype.code == 'TYPE-02-LEGAL'">
                                                            <div class="card mb-2 border-secondary">
                                                                <div class="card-body p-2">
                                                                    <div class="form-check">
                                                                        <input class="form-check-input" type="radio" 
                                                                               name="container_type_id" 
                                                                               t-att-id="'type_%s' % ctype.id"
                                                                               t-att-value="ctype.id"/>
                                                                        <label class="form-check-label w-100" t-att-for="'type_%s' % ctype.id">
                                                                            <strong>
                                                                                <i class="fa fa-cube"></i>
                                                                                <t t-esc="ctype.name"/>
                                                                            </strong>
                                                                            <br/>
                                                                            <small class="text-muted">
                                                                                <t t-esc="ctype.length"/>″ x <t t-esc="ctype.width"/>″ x <t t-esc="ctype.height"/>″
                                                                            </small>
                                                                        </label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </t>
                                                    </t>
                                                    
                                                    <!-- Types 03-06 - Displayed for reference only (not selectable) -->
                                                    <div class="mt-3">
                                                        <a class="text-muted small" data-bs-toggle="collapse" href="#otherContainerTypes" role="button" aria-expanded="false">
                                                            <i class="fa fa-info-circle"></i> View other container sizes (contact us to use these)
                                                        </a>
                                                        <div class="collapse mt-2" id="otherContainerTypes">
                                                            <div class="card card-body bg-light p-2">
                                                                <small class="text-muted mb-2">
                                                                    <i class="fa fa-lock"></i> These specialty sizes require prior arrangement. Contact us for availability.
                                                                </small>
                                                                <t t-foreach="container_types or []" t-as="ctype">
                                                                    <t t-if="ctype.code in ['TYPE-03-MAP', 'TYPE-04-ODD', 'TYPE-05-TUBE', 'TYPE-06-PATH']">
                                                                        <div class="d-flex justify-content-between align-items-center py-1 border-bottom">
                                                                            <span class="text-muted">
                                                                                <i class="fa fa-cube"></i>
                                                                                <t t-esc="ctype.name"/>
                                                                            </span>
                                                                            <small class="text-muted">
                                                                                <t t-if="ctype.length and ctype.width and ctype.height">
                                                                                    <t t-esc="ctype.length"/>″ x <t t-esc="ctype.width"/>″ x <t t-esc="ctype.height"/>″
                                                                                </t>
                                                                                <t t-else="">Custom</t>
                                                                                <t t-if="ctype.standard_rate">
                                                                                    | $<t t-esc="'%.2f' % ctype.standard_rate"/>/mo
                                                                                </t>
                                                                            </small>
                                                                        </div>
                                                                    </t>
                                                                </t>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <!-- Fallback: If no container types found -->
                                                    <t t-if="not container_types">
                                                        <div class="alert alert-info">
                                                            <i class="fa fa-info-circle"></i>
                                                            Standard Type 01 container will be assigned automatically.
                                                        </div>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Industry Template -->
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h5 class="border-bottom pb-2 mb-3 mt-3">Industry Template</h5>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-12 mb-3">
                                                <label class="form-label">Select Industry Template *</label>
                                                <div class="btn-group btn-group-toggle d-flex flex-wrap" role="group" aria-label="Industry Template">
                                                    <label class="btn btn-outline-primary active">
                                                        <input type="radio" name="industry_template" value="legal" checked="checked"/> Legal
                                                    </label>
                                                    <label class="btn btn-outline-primary">
                                                        <input type="radio" name="industry_template" value="medical"/> Medical
                                                    </label>
                                                    <label class="btn btn-outline-primary">
                                                        <input type="radio" name="industry_template" value="financial"/> Financial
                                                    </label>
                                                    <label class="btn btn-outline-primary">
                                                        <input type="radio" name="industry_template" value="hr"/> HR
                                                    </label>
                                                    <label class="btn btn-outline-primary">
                                                        <input type="radio" name="industry_template" value="government"/> Government
                                                    </label>
                                                    <label class="btn btn-outline-primary">
                                                        <input type="radio" name="industry_template" value="retail"/> Retail
                                                    </label>
                                                    <label class="btn btn-outline-primary">
                                                        <input type="radio" name="industry_template" value="custom"/> Custom
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Container Contents -->
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h5 class="border-bottom pb-2 mb-3 mt-3">Container Contents</h5>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="primary_content_type" class="form-label">Primary Content Type</label>
                                                <select class="form-control" id="primary_content_type" name="primary_content_type">
                                                    <option value="">-- Select Type --</option>
                                                    <option value="documents">Documents</option>
                                                    <option value="files">Files</option>
                                                    <option value="records">Records</option>
                                                    <option value="reports">Reports</option>
                                                    <option value="contracts">Contracts</option>
                                                    <option value="invoices">Invoices</option>
                                                    <option value="personnel">Personnel Records</option>
                                                    <option value="medical">Medical Records</option>
                                                    <option value="legal">Legal Documents</option>
                                                    <option value="financial">Financial Records</option>
                                                    <option value="other">Other</option>
                                                </select>
                                            </div>
                                            
                                            <div class="col-md-6 mb-3">
                                                <label for="contents_type" class="form-label">How are files organized?</label>
                                                <select class="form-control" id="contents_type" name="contents_type">
                                                    <option value="alphabetical">Alphabetical Range (A-Z)</option>
                                                    <option value="numerical">Numerical Range (001-999)</option>
                                                    <option value="date_range">Date Range</option>
                                                    <option value="case_files">Case File Numbers</option>
                                                    <option value="patient_ids">Patient ID Range</option>
                                                    <option value="employee_ids">Employee ID Range</option>
                                                    <option value="custom">Custom Description</option>
                                                </select>
                                            </div>
                                        </div>
                                        
                                        <div class="row" id="range_fields">
                                            <div class="col-md-6 mb-3">
                                                <label for="range_start" class="form-label">Start</label>
                                                <input type="text" class="form-control" id="range_start" 
                                                       name="range_start" placeholder="e.g., A, 001, 2020-01-01"/>
                                            </div>
                                            
                                            <div class="col-md-6 mb-3">
                                                <label for="range_end" class="form-label">End</label>
                                                <input type="text" class="form-control" id="range_end" 
                                                       name="range_end" placeholder="e.g., Z, 999, 2020-12-31"/>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-12 mb-3" id="custom_description" style="display:none;">
                                                <label for="content_description" class="form-label">Content Description</label>
                                                <textarea class="form-control" id="content_description" 
                                                          name="content_description" rows="3"
                                                          placeholder="Describe what's in this container..."></textarea>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-12 mb-3">
                                                <label for="search_keywords" class="form-label">Search Keywords</label>
                                                <input type="text" class="form-control" id="search_keywords" 
                                                       name="search_keywords" 
                                                       placeholder="Enter keywords for easy searching (comma separated)"/>
                                                <small class="form-text text-muted">
                                                    Add keywords to make this container easier to find in searches
                                                </small>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-12 mb-3">
                                                <label for="description" class="form-label">General Description</label>
                                                <textarea class="form-control" id="description" 
                                                          name="description" rows="2"
                                                          placeholder="Additional notes or description..."></textarea>
                                            </div>
                                        </div>
                                        
                                        <!-- Retention Policy & Dates -->
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h5 class="border-bottom pb-2 mb-3 mt-3">Retention Policy &amp; Important Dates</h5>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">Retention Policy</label>
                                                <select class="form-control" id="retention_policy_id" name="retention_policy_id">
                                                    <option value="">-- No Retention Policy --</option>
                                                    <t t-foreach="retention_policies or []" t-as="policy">
                                                        <option t-att-value="policy.id">
                                                            <t t-esc="policy.name"/> (<t t-esc="policy.retention_years"/> years)
                                                        </option>
                                                    </t>
                                                </select>
                                                <small class="form-text text-muted">
                                                    <t t-if="retention_policies">
                                                        How long these records must be retained before destruction
                                                    </t>
                                                    <t t-else="">
                                                        No retention policies configured. Contact your administrator.
                                                    </t>
                                                </small>
                                            </div>
                                            
                                            <div class="col-md-6 mb-3">
                                                <label for="permanent_retention" class="form-label d-block">Permanent Retention?</label>
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="permanent_retention" 
                                                           name="permanent_retention" value="1"/>
                                                    <label class="custom-control-label" for="permanent_retention">
                                                        Check if these records must be kept permanently
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="storage_start_date" class="form-label">Storage Start Date</label>
                                                <input type="date" class="form-control bg-light" id="storage_start_date" 
                                                       name="storage_start_date" 
                                                       t-att-value="today"
                                                       readonly="readonly"/>
                                                <small class="form-text text-muted">
                                                    Automatically set to today's date when container is created
                                                </small>
                                            </div>
                                            
                                            <div class="col-md-6 mb-3">
                                                <label for="destruction_due_date" class="form-label">Destruction Due Date</label>
                                                <!-- Improved date input with text fallback for easier year entry -->
                                                <div class="input-group">
                                                    <input type="date" class="form-control" id="destruction_due_date" 
                                                           name="destruction_due_date"/>
                                                    <span class="input-group-text" title="Format: YYYY-MM-DD">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                </div>
                                                <small class="form-text text-muted">
                                                    Auto-calculated from retention policy, or enter manually (YYYY-MM-DD)
                                                </small>
                                            </div>
                                        </div>
                                        
                                        <!-- Action Buttons -->
                                        <div class="row mt-4">
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-primary btn-lg">
                                                    <i class="fa fa-plus-circle"></i> Create Container
                                                </button>
                                                <a href="/my/containers" class="btn btn-secondary btn-lg ml-2">
                                                    <i class="fa fa-times"></i> Cancel
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                                    
                                    <!-- Help Section -->
                                    <div class="mt-4 pt-3 border-top">
                                        <h6 class="text-muted">
                                            <i class="fa fa-question-circle"></i> Quick Help
                                        </h6>
                                        <ul class="small text-muted">
                                            <li><strong>Container Number:</strong> Enter a unique identifier (4+ characters) for this box</li>
                                            <li><strong>Industry Template:</strong> Choose your industry for pre-configured settings</li>
                                            <li><strong>Contents Type:</strong> Select how files are organized in this container</li>
                                            <li><strong>Range:</strong> Enter starting and ending values for file organization</li>
                                            <li><strong>Retention:</strong> How long these records must be kept before destruction</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            </t><!-- End permission check -->
                        </div>
                    </div>
                </div>
                
                <!-- JavaScript for dynamic form behavior -->
                <script type="text/javascript">
                    (function() {
                        document.addEventListener('DOMContentLoaded', function() {
                            // Industry template radio button toggle (Bootstrap 5 compatible)
                            const industryLabels = document.querySelectorAll('[name="industry_template"]');
                            industryLabels.forEach(function(radio) {
                                radio.addEventListener('change', function() {
                                    // Remove active class from all labels
                                    document.querySelectorAll('.btn-group-toggle .btn').forEach(function(label) {
                                        label.classList.remove('active');
                                    });
                                    // Add active class to the parent label of checked radio
                                    if (this.checked) {
                                        this.parentElement.classList.add('active');
                                    }
                                });
                            });
                            
                            // Toggle range fields vs custom description
                            var contentsType = document.getElementById('contents_type');
                            if (contentsType) {
                                contentsType.addEventListener('change', function() {
                                    var rangeFields = document.getElementById('range_fields');
                                    var customDesc = document.getElementById('custom_description');
                                    if (this.value === 'custom') {
                                        if (rangeFields) rangeFields.style.display = 'none';
                                        if (customDesc) customDesc.style.display = 'block';
                                    } else {
                                        if (rangeFields) rangeFields.style.display = '';
                                        if (customDesc) customDesc.style.display = 'none';
                                    }
                                });
                            }
                            
                            // Toggle custom retention years
                            var retentionRadios = document.querySelectorAll('input[name="retention_period"]');
                            retentionRadios.forEach(function(radio) {
                                radio.addEventListener('change', function() {
                                    var customRetention = document.getElementById('custom_retention');
                                    if (customRetention) {
                                        customRetention.style.display = this.value === 'custom' ? 'block' : 'none';
                                    }
                                });
                            });
                        });
                    })();
                </script>
            </t>
        </template>
        
        <!-- Success message template -->
        <template id="portal_container_created_success" name="Container Created Successfully">
            <t t-call="portal.portal_layout">
                <div class="container mt-5">
                    <div class="alert alert-success text-center" role="alert">
                        <h1><i class="fa fa-check-circle"></i></h1>
                        <h3>Container Created Successfully!</h3>
                        <p class="mb-0">Your container has been added to the system with a temporary barcode.</p>
                        <p class="mt-3">
                            <a href="/my/containers" class="btn btn-primary">
                                <i class="fa fa-list"></i> View My Containers
                            </a>
                        </p>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
