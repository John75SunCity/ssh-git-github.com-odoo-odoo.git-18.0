<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="portal_overview" name="Portal Overview">
        <t t-call="portal.portal_layout">
            <t t-set="title">Welcome to Your Portal</t>
            <div class="o_portal_overview">
                <!-- Hero Section with Welcome Message -->
                <div class="hero-section bg-gradient-primary text-white py-5 mb-5 rounded">
                    <div class="container text-center">
                        <h1 class="display-4 font-weight-bold mb-3">
                            <i class="fa fa-shield text-warning"></i>
                            Welcome to Your Secure Records Portal
                        </h1>
                        <p class="lead mb-4">
                            Experience our modern portal designed for seamless records management and NAID AAA certified shredding services.
                        </p>

                        <!-- Interactive Tour Button -->
                        <div class="tour-controls mb-4">
                            <button type="button" class="btn btn-warning btn-lg mr-3" id="start_portal_tour" onclick="startEnhancedTour()">
                                <i class="fa fa-play-circle"></i> Start Interactive Tour
                            </button>
                            <button type="button" class="btn btn-outline-light btn-lg" id="watch_video_tour">
                                <i class="fa fa-video-camera"></i> Watch Video Tutorial
                            </button>
                        </div>

                        <!-- NAID Compliance Badges -->
                        <div class="compliance-badges">
                            <span class="badge badge-success badge-lg mr-2">
                                <i class="fa fa-certificate"></i> NAID AAA Certified
                            </span>
                            <span class="badge badge-info badge-lg mr-2">
                                <i class="fa fa-lock"></i> SOC 2 Compliant
                            </span>
                            <span class="badge badge-warning badge-lg">
                                <i class="fa fa-shield"></i> HIPAA Secure
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Quick Stats Dashboard -->
                <div class="stats-dashboard mb-5">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-0 shadow-sm stat-card">
                                <div class="card-body text-center">
                                    <i class="fa fa-archive fa-3x text-primary mb-3"></i>
                                    <h3 class="font-weight-bold text-primary" t-esc="total_containers or '0'"/>
                                    <p class="text-muted">Active Storage Containers</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-0 shadow-sm stat-card">
                                <div class="card-body text-center">
                                    <i class="fa fa-file-text-o fa-3x text-success mb-3"></i>
                                    <h3 class="font-weight-bold text-success" t-esc="total_documents or '0'"/>
                                    <p class="text-muted">Documents Managed</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-0 shadow-sm stat-card">
                                <div class="card-body text-center">
                                    <i class="fa fa-tasks fa-3x text-warning mb-3"></i>
                                    <h3 class="font-weight-bold text-warning" t-esc="pending_requests or '0'"/>
                                    <p class="text-muted">Pending Requests</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card border-0 shadow-sm stat-card">
                                <div class="card-body text-center">
                                    <i class="fa fa-certificate fa-3x text-danger mb-3"></i>
                                    <h3 class="font-weight-bold text-danger" t-esc="certificates_issued or '0'"/>
                                    <p class="text-muted">Destruction Certificates</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modern Owl Portal Search Component -->
                <div class="modern-search-section mb-5">
                    <div class="container">
                        <h2 class="text-center mb-4">
                            <i class="fa fa-search text-primary"></i>
                            Smart Document Search
                        </h2>
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                <!-- Owl Component Usage Following Odoo 19 Guidelines -->
                                <owl-component name="records_management.PortalSearchComponent" 
                                               placeholder="Search your records, documents, certificates..."
                                               maxSuggestions="6"
                                               showAdvanced="true" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Feature Highlights Cards -->
                <div class="features-section mb-5">
                    <h2 class="text-center mb-4">
                        <i class="fa fa-star text-warning"></i>
                        Portal Features &amp; Capabilities
                    </h2>
                    <div class="row">
                        <!-- Inventory Management -->
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card feature-card h-100 border-0 shadow-sm hover-lift">
                                <div class="card-header bg-primary text-white text-center">
                                    <i class="fa fa-search fa-2x mb-2"></i>
                                    <h5 class="card-title mb-0">Advanced Inventory Management</h5>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        View, search, and manage your containers/documents with Google-like search, 
                                        advanced filters, bulk operations, and real-time status tracking.
                                    </p>
                                    <ul class="list-unstyled">
                                        <li>
                                            <i class="fa fa-check text-success"></i> Smart Search &amp; Filters</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Bulk Actions</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Real-time Updates</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Export Capabilities</li>
                                    </ul>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a href="/my/inventory" class="btn btn-primary btn-block">
                                        <i class="fa fa-arrow-right"></i> Explore Inventory
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Self-Service Quotes & Billing -->
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card feature-card h-100 border-0 shadow-sm hover-lift">
                                <div class="card-header bg-success text-white text-center">
                                    <i class="fa fa-calculator fa-2x mb-2"></i>
                                    <h5 class="card-title mb-0">Self-Service Quotes &amp; Billing</h5>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        Generate instant quotes, update purchase orders, request billing changes, 
                                        and download invoices with complete transparency.
                                    </p>
                                    <ul class="list-unstyled">
                                        <li>
                                            <i class="fa fa-check text-success"></i> Instant PDF Quotes</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> PO Management</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Billing Transparency</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Change Requests</li>
                                    </ul>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a href="/my/quotes" class="btn btn-success btn-block">
                                        <i class="fa fa-arrow-right"></i> Generate Quote
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Service Requests & FSM -->
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card feature-card h-100 border-0 shadow-sm hover-lift">
                                <div class="card-header bg-warning text-dark text-center">
                                    <i class="fa fa-cogs fa-2x mb-2"></i>
                                    <h5 class="card-title mb-0">Service Requests &amp; Tracking</h5>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        Submit destruction/service requests with electronic signatures, 
                                        real-time FSM tracking, and automated certificate generation.
                                    </p>
                                    <ul class="list-unstyled">
                                        <li>
                                            <i class="fa fa-check text-success"></i> E-Signature Integration</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Real-time Tracking</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Automated Certificates</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> SMS Notifications</li>
                                    </ul>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a href="/my/requests" class="btn btn-warning btn-block">
                                        <i class="fa fa-arrow-right"></i> Create Request
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- User Management -->
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card feature-card h-100 border-0 shadow-sm hover-lift">
                                <div class="card-header bg-info text-white text-center">
                                    <i class="fa fa-users fa-2x mb-2"></i>
                                    <h5 class="card-title mb-0">Enterprise User Management</h5>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        Import users via CSV, assign granular access levels, manage departments, 
                                        and track user activity with comprehensive audit trails.
                                    </p>
                                    <ul class="list-unstyled">
                                        <li>
                                            <i class="fa fa-check text-success"></i> CSV Bulk Import</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Role-based Access</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Department Assignment</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Activity Tracking</li>
                                    </ul>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a href="/my/users" class="btn btn-info btn-block">
                                        <i class="fa fa-arrow-right"></i> Manage Users
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Compliance & Security -->
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card feature-card h-100 border-0 shadow-sm hover-lift">
                                <div class="card-header bg-danger text-white text-center">
                                    <i class="fa fa-shield fa-2x mb-2"></i>
                                    <h5 class="card-title mb-0">Compliance &amp; Security</h5>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        NAID AAA certified processes with comprehensive audit trails, 
                                        timestamps, chain of custody, and regulatory compliance reporting.
                                    </p>
                                    <ul class="list-unstyled">
                                        <li>
                                            <i class="fa fa-check text-success"></i> NAID AAA Certified</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Complete Audit Trails</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Chain of Custody</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Compliance Reports</li>
                                    </ul>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a href="/my/compliance" class="btn btn-danger btn-block">
                                        <i class="fa fa-arrow-right"></i> View Compliance
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- AI-Powered Insights -->
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card feature-card h-100 border-0 shadow-sm hover-lift">
                                <div class="card-header bg-dark text-white text-center">
                                    <i class="fa fa-brain fa-2x mb-2"></i>
                                    <h5 class="card-title mb-0">AI-Powered Insights</h5>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        Get personalized recommendations, predictive analytics, 
                                        usage patterns, and intelligent suggestions based on your activity.
                                    </p>
                                    <ul class="list-unstyled">
                                        <li>
                                            <i class="fa fa-check text-success"></i> Smart Recommendations</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Predictive Analytics</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Usage Patterns</li>
                                        <li>
                                            <i class="fa fa-check text-success"></i> Intelligent Alerts</li>
                                    </ul>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <button class="btn btn-dark btn-block" disabled="disabled">>
                                        <i class="fa fa-rocket"></i> Coming Soon
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity & Suggestions -->
                <div class="activity-section mb-5" t-if="recent_activities or suggestions">
                    <div class="row">
                        <!-- Recent Activity -->
                        <div class="col-md-6" t-if="recent_activities">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">
                                        <i class="fa fa-clock-o text-primary"></i>
                                        Recent Activity
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="activity-timeline">
                                        <div t-foreach="recent_activities[:5]" t-as="activity" class="activity-item mb-3">
                                            <div class="d-flex">
                                                <div class="activity-icon mr-3">
                                                    <i t-att-class="'fa fa-' + activity.icon + ' text-' + activity.color"/>
                                                </div>
                                                <div class="activity-content">
                                                    <p class="mb-1" t-esc="activity.description"/>
                                                    <small class="text-muted" t-esc="activity.date"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- AI Suggestions -->
                        <div class="col-md-6" t-if="suggestions">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">
                                        <i class="fa fa-lightbulb-o text-warning"></i>
                                        Smart Suggestions
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div t-foreach="suggestions[:3]" t-as="suggestion" class="suggestion-item mb-3">
                                        <div class="card border-left-warning">
                                            <div class="card-body py-2">
                                                <h6 class="mb-1" t-esc="suggestion.title"/>
                                                <p class="text-muted mb-2" t-esc="suggestion.description"/>
                                                <a href="#" class="btn btn-sm btn-outline-warning" t-att-onclick="suggestion.action">
                                                    <i class="fa fa-arrow-right"></i> Take Action
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Video Tour Modal -->
                <div class="modal fade" id="videoTourModal" tabindex="-1" role="dialog">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">
                                    <i class="fa fa-play-circle text-primary"></i>
                                    Portal Video Tutorial
                                </h5>
                                <button type="button" class="close" data-dismiss="modal">
                                    <span>&#215;</span>
                                </button>
                            </div>
                            <div class="modal-body text-center">
                                <div class="embed-responsive embed-responsive-16by9">
                                    <iframe class="embed-responsive-item" src="/web/static/src/video/portal_tutorial.mp4" allowfullscreen=""></iframe>
                                </div>
                                <p class="mt-3 text-muted">
                                    Learn how to navigate and use all portal features effectively
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Custom CSS for Portal Overview -->
            <style>
                .hero-section {
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                }
                
                .stat-card:hover {
                    transform: translateY(-5px);
                    transition: all 0.3s ease;
                }
                
                .feature-card.hover-lift:hover {
                    transform: translateY(-10px);
                    box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
                    transition: all 0.3s ease;
                }
                
                .badge-lg {
                    font-size: 0.9em;
                    padding: 0.5rem 1rem;
                }
                
                .activity-timeline {
                    position: relative;
                }
                
                .activity-item {
                    position: relative;
                    padding-left: 20px;
                }
                
                .activity-item:before {
                    content: '';
                    position: absolute;
                    left: 8px;
                    top: 20px;
                    height: calc(100% + 20px);
                    width: 2px;
                    background: #dee2e6;
                }
                
                .activity-item:last-child:before {
                    display: none;
                }
                
                .border-left-warning {
                    border-left: 4px solid #ffc107 !important;
                }
                
                @media (max-width: 768px) {
                    .display-4 {
                        font-size: 2rem;
                    }
                    
                    .hero-section {
                        padding: 2rem 0 !important;
                    }
                }
            </style>
        </t>
    </template>
</odoo>
