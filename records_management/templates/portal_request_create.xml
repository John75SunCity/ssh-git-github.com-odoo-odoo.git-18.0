<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Portal Generic Request Create Form -->
        <template id="portal_request_create" name="Create Service Request">
            <t t-call="portal.portal_layout">
                <t t-set="title">
                    <t t-if="request_type == 'retrieval'">Request Container Retrieval</t>
                    <t t-elif="request_type == 'scanning'">Request Document Scanning</t>
                    <t t-else="">New Service Request</t>
                </t>

                <div class="container my-4">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="card shadow">
                                <div class="card-header bg-primary text-white">
                                    <h3 class="mb-0">
                                        <i class="fa fa-clipboard-list"></i>
                                        <t t-if="request_type == 'retrieval'">Container Retrieval Request</t>
                                        <t t-elif="request_type == 'scanning'">Document Scanning Request</t>
                                        <t t-else="">Service Request</t>
                                    </h3>
                                </div>

                                <div class="card-body">
                                    <form t-attf-action="/my/request/new/#{request_type}" method="POST" enctype="multipart/form-data">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <input type="hidden" name="request_type" t-att-value="request_type"/>

                                        <!-- Request Name -->
                                        <div class="form-group mb-3">
                                            <label for="name" class="form-label">Request Title *</label>
                                            <input type="text"
                                                   class="form-control"
                                                   id="name"
                                                   name="name"
                                                   required="required"
                                                   t-att-placeholder="'Describe your ' + request_type + ' request'"/>
                                        </div>

                                        <!-- Department Selection -->
                                        <div class="form-group mb-3">
                                            <label for="department_id" class="form-label">Department *</label>
                                            <select class="form-control" id="department_id" name="department_id" required="required">
                                                <option value="">-- Select Department --</option>
                                                <t t-foreach="departments" t-as="dept">
                                                    <option t-att-value="dept.id"><t t-esc="dept.name"/></option>
                                                </t>
                                            </select>
                                        </div>

                                        <!-- Container/File Selection -->
                                        <t t-if="request_type == 'retrieval'">
                                            <div class="form-group mb-3">
                                                <label for="container_search" class="form-label">Search Containers</label>
                                                <input type="text"
                                                       class="form-control mb-2"
                                                       id="container_search"
                                                       placeholder="Type to search containers instantly..."/>
                                                <small class="text-muted mb-2 d-block" id="container_search_info">
                                                    Start typing to see instant results
                                                </small>

                                                <label for="container_ids" class="form-label">Select Containers *</label>
                                                <select class="form-control"
                                                        id="container_ids"
                                                        name="container_ids"
                                                        multiple="multiple"
                                                        size="10"
                                                        required="required">
                                                    <t t-foreach="containers[:50]" t-as="container">
                                                        <option t-att-value="container.id">
                                                            <t t-esc="container.name"/><t t-if="container.barcode"> (Barcode: <t t-esc="container.barcode"/>)</t>
                                                            <t t-if="container.location_id"> - <t t-esc="container.location_id.name"/></t>
                                                        </option>
                                                    </t>
                                                </select>
                                                <small class="form-text text-muted">
                                                    Hold Ctrl (Cmd on Mac) to select multiple. Showing first 50 - use search to find more.
                                                </small>
                                            </div>
                                        </t>
                                        
                                        <t t-if="request_type == 'scanning'">
                                            <div class="form-group mb-3">
                                                <label for="file_search" class="form-label">Search Files</label>
                                                <input type="text" 
                                                       class="form-control mb-2" 
                                                       id="file_search" 
                                                       placeholder="Type to search files instantly..."/>
                                                <small class="text-muted mb-2 d-block" id="file_search_info">
                                                    Start typing to see instant results
                                                </small>
                                                
                                                <label for="file_ids" class="form-label">Select Files to Scan *</label>
                                                <select class="form-control" 
                                                        id="file_ids" 
                                                        name="file_ids" 
                                                        multiple="multiple" 
                                                        size="10"
                                                        required="required">
                                                    <t t-foreach="files[:50]" t-as="file">
                                                        <option t-att-value="file.id">
                                                            <t t-esc="file.name"/>
                                                            <t t-if="file.container_id"> (Container: <t t-esc="file.container_id.name"/>)</t>
                                                        </option>
                                                    </t>
                                                </select>
                                                <small class="form-text text-muted">
                                                    Hold Ctrl (Cmd on Mac) to select multiple. Showing first 50 - use search to find more.
                                                </small>
                                            </div>
                                        </t>
                                        
                                        <!-- Requested Date -->
                                        <div class="form-group mb-3">
                                            <label for="requested_date" class="form-label">Needed By Date</label>
                                            <input type="date" 
                                                   class="form-control" 
                                                   id="requested_date" 
                                                   name="requested_date"/>
                                        </div>
                                        
                                        <!-- Special Instructions -->
                                        <div class="form-group mb-3">
                                            <label for="notes" class="form-label">Special Instructions / Notes</label>
                                            <textarea class="form-control" 
                                                      id="notes" 
                                                      name="notes" 
                                                      rows="4"
                                                      placeholder="Any special instructions or notes for this request"></textarea>
                                        </div>
                                        
                                        <!-- Notification Preferences -->
                                        <div class="border rounded p-3 mb-3 bg-light">
                                            <h6 class="text-primary mb-3">
                                                <i class="fa fa-bell"></i> Notification Preferences
                                            </h6>
                                            
                                            <div class="form-group mb-3">
                                                <label for="notification_method" class="form-label">Notification Method</label>
                                                <select class="form-control" id="notification_method" name="notification_method">
                                                    <option value="email" selected="selected">Email Only</option>
                                                    <option value="sms">SMS/Text Only</option>
                                                    <option value="both">Email and SMS</option>
                                                    <option value="none">No Notifications</option>
                                                </select>
                                            </div>
                                            
                                            <div class="form-check mb-2">
                                                <input type="checkbox" 
                                                       class="form-check-input" 
                                                       id="notify_on_ready_for_delivery" 
                                                       name="notify_on_ready_for_delivery"
                                                       value="1"
                                                       checked="checked"/>
                                                <label class="form-check-label" for="notify_on_ready_for_delivery">
                                                    <strong>Notify when ready for delivery</strong>
                                                    <br/>
                                                    <small class="text-muted">
                                                        Get notified when your order is prepped and ready for transit
                                                    </small>
                                                </label>
                                            </div>
                                        </div>
                                        
                                        <!-- Submit Buttons -->
                                        <div class="form-group mt-4">
                                            <button type="submit" class="btn btn-primary btn-lg">
                                                <i class="fa fa-paper-plane"></i> Submit Request
                                            </button>
                                            <a href="/my/containers" class="btn btn-secondary btn-lg ml-2">
                                                <i class="fa fa-times"></i> Cancel
                                            </a>
                                        </div>
                                    </form>
                                    
                                    <!-- Help Section -->
                                    <div class="mt-4 pt-3 border-top">
                                        <h6 class="text-muted">
                                            <i class="fa fa-question-circle"></i> Need Help?
                                        </h6>
                                        <ul class="small text-muted">
                                            <li>Select one or more items using Ctrl+Click (Cmd+Click on Mac)</li>
                                            <li>Provide a clear description of what you need</li>
                                            <li>We'll respond to your request within 1 business day</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Instant Search JavaScript -->
                <script type="text/javascript">
                    document.addEventListener('DOMContentLoaded', function() {
                        let containerSearchTimeout;
                        let fileSearchTimeout;
                        let containerOffset = 0;
                        let fileOffset = 0;
                        
                        // Container instant search
                        const containerSearch = document.getElementById('container_search');
                        const containerSelect = document.getElementById('container_ids');
                        const containerInfo = document.getElementById('container_search_info');
                        
                        if (containerSearch &amp;&amp; containerSelect) {
                            containerSearch.addEventListener('input', function() {
                                clearTimeout(containerSearchTimeout);
                                const query = this.value;
                                
                                if (query.length &lt; 2) {
                                    containerInfo.textContent = 'Type at least 2 characters to search';
                                    return;
                                }
                                
                                containerInfo.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Searching...';
                                
                                containerSearchTimeout = setTimeout(function() {
                                    fetch('/my/containers/search', {
                                        method: 'POST',
                                        headers: {'Content-Type': 'application/json'},
                                        body: JSON.stringify({
                                            jsonrpc: '2.0',
                                            method: 'call',
                                            params: {query: query, offset: 0, limit: 50}
                                        })
                                    })
                                    .then(response => response.json())
                                    .then(data => {
                                        if (data.result &amp;&amp; data.result.success) {
                                            const containers = data.result.containers;
                                            containerSelect.innerHTML = '';
                                            
                                            containers.forEach(function(container) {
                                                const option = document.createElement('option');
                                                option.value = container.id;
                                                option.text = container.name + ' - ' + container.number;
                                                if (container.location) {
                                                    option.text += ' (' + container.location + ')';
                                                }
                                                containerSelect.add(option);
                                            });
                                            
                                            containerInfo.textContent = 'Found ' + data.result.total + ' containers' + 
                                                (data.result.has_more ? ' (showing first 50)' : '');
                                        }
                                    })
                                    .catch(error => {
                                        containerInfo.textContent = 'Search failed: ' + error.message;
                                    });
                                }, 300); // 300ms debounce
                            });
                        }
                        
                        // File instant search
                        const fileSearch = document.getElementById('file_search');
                        const fileSelect = document.getElementById('file_ids');
                        const fileInfo = document.getElementById('file_search_info');
                        
                        if (fileSearch &amp;&amp; fileSelect) {
                            fileSearch.addEventListener('input', function() {
                                clearTimeout(fileSearchTimeout);
                                const query = this.value;
                                
                                if (query.length &lt; 2) {
                                    fileInfo.textContent = 'Type at least 2 characters to search';
                                    return;
                                }
                                
                                fileInfo.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Searching...';
                                
                                fileSearchTimeout = setTimeout(function() {
                                    fetch('/my/files/search', {
                                        method: 'POST',
                                        headers: {'Content-Type': 'application/json'},
                                        body: JSON.stringify({
                                            jsonrpc: '2.0',
                                            method: 'call',
                                            params: {query: query, offset: 0, limit: 50}
                                        })
                                    })
                                    .then(response => response.json())
                                    .then(data => {
                                        if (data.result &amp;&amp; data.result.success) {
                                            const files = data.result.files;
                                            fileSelect.innerHTML = '';
                                            
                                            files.forEach(function(file) {
                                                const option = document.createElement('option');
                                                option.value = file.id;
                                                option.text = file.name;
                                                if (file.container) {
                                                    option.text += ' (Container: ' + file.container + ')';
                                                }
                                                fileSelect.add(option);
                                            });
                                            
                                            fileInfo.textContent = 'Found ' + data.result.total + ' files' + 
                                                (data.result.has_more ? ' (showing first 50)' : '');
                                        }
                                    })
                                    .catch(error => {
                                        fileInfo.textContent = 'Search failed: ' + error.message;
                                    });
                                }, 300); // 300ms debounce
                            });
                        }
                    });
                </script>
            </t>
        </template>
    </data>
</odoo>
