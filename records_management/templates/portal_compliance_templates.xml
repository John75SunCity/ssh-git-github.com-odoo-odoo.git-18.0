<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Compliance Status Dashboard -->
        <template id="portal_compliance_status" name="Portal Compliance Status">
            <t t-call="portal.portal_layout">
                <t t-set="title">Compliance Status</t>
                
                <div class="container mt-4">
                    <div class="row mb-4">
                        <div class="col-12">
                            <h2><i class="fa fa-shield me-2"/>NAID AAA Compliance Dashboard</h2>
                            <p class="text-muted">Monitor your compliance status and certifications</p>
                        </div>
                    </div>
                    
                    <!-- Compliance Summary Cards -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <i class="fa fa-certificate fa-3x mb-2"/>
                                    <h3 t-esc="len(certificates) if certificates else 0"/>
                                    <p class="mb-0">Active Certificates</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <i class="fa fa-link fa-3x mb-2"/>
                                    <h3 t-esc="len(custody_records) if custody_records else 0"/>
                                    <p class="mb-0">Custody Records</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <i class="fa fa-check-circle fa-3x mb-2"/>
                                    <h3>AAA</h3>
                                    <p class="mb-0">NAID Certification</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Recent Certificates -->
                    <div class="card mb-4">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0"><i class="fa fa-certificate me-2"/>Recent Certificates</h5>
                        </div>
                        <div class="card-body">
                            <t t-if="certificates">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Certificate #</th>
                                            <th>Type</th>
                                            <th>Issue Date</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="certificates" t-as="cert">
                                            <tr>
                                                <td><strong t-esc="cert.name"/></td>
                                                <td t-esc="cert.certificate_type if hasattr(cert, 'certificate_type') else 'Destruction'"/>
                                                <td t-esc="cert.create_date" t-options="{'widget': 'date'}"/>
                                                <td>
                                                    <span class="badge bg-success">Active</span>
                                                </td>
                                                <td>
                                                    <a t-attf-href="/my/certificate/#{cert.id}" class="btn btn-sm btn-outline-primary">
                                                        <i class="fa fa-eye"/> View
                                                    </a>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <div class="alert alert-info">
                                    <i class="fa fa-info-circle me-2"/>No certificates found.
                                </div>
                            </t>
                        </div>
                    </div>
                    
                    <!-- Quick Links -->
                    <div class="row">
                        <div class="col-md-4">
                            <a href="/my/compliance/audit-logs" class="btn btn-outline-secondary btn-block w-100">
                                <i class="fa fa-history me-2"/>View Audit Logs
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/my/compliance/custody-log" class="btn btn-outline-secondary btn-block w-100">
                                <i class="fa fa-link me-2"/>Chain of Custody
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/my/certificates" class="btn btn-outline-primary btn-block w-100">
                                <i class="fa fa-certificate me-2"/>All Certificates
                            </a>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Audit Logs -->
        <template id="portal_audit_logs" name="Portal Audit Logs">
            <t t-call="portal.portal_layout">
                <t t-set="title">Audit Logs</t>
                
                <div class="container mt-4">
                    <div class="row mb-4">
                        <div class="col-12">
                            <h2><i class="fa fa-history me-2"/>Audit Logs</h2>
                            <p class="text-muted">Complete audit trail of all actions on your records</p>
                        </div>
                    </div>
                    
                    <div class="card">
                        <div class="card-body">
                            <t t-if="audit_logs">
                                <table class="table table-striped">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Date/Time</th>
                                            <th>Action</th>
                                            <th>User</th>
                                            <th>Details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="audit_logs" t-as="log">
                                            <tr>
                                                <td t-esc="log.create_date" t-options="{'widget': 'datetime'}"/>
                                                <td><span class="badge bg-info" t-esc="log.action_type if hasattr(log, 'action_type') else 'Action'"/></td>
                                                <td t-esc="log.user_id.name if log.user_id else 'System'"/>
                                                <td t-esc="log.description if hasattr(log, 'description') else log.name"/>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <div class="alert alert-info text-center">
                                    <i class="fa fa-info-circle fa-2x mb-2"/><br/>
                                    No audit logs found.
                                </div>
                            </t>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <a href="/my/compliance" class="btn btn-secondary">
                            <i class="fa fa-arrow-left me-2"/>Back to Compliance
                        </a>
                    </div>
                </div>
            </t>
        </template>
        
        <!-- Chain of Custody Log -->
        <template id="portal_custody_log" name="Portal Custody Log">
            <t t-call="portal.portal_layout">
                <t t-set="title">Chain of Custody</t>
                
                <div class="container mt-4">
                    <div class="row mb-4">
                        <div class="col-12">
                            <h2><i class="fa fa-link me-2"/>Chain of Custody Log</h2>
                            <p class="text-muted">Complete custody chain for NAID AAA compliance</p>
                        </div>
                    </div>
                    
                    <div class="card">
                        <div class="card-body">
                            <t t-if="custody_records">
                                <table class="table table-striped">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Date/Time</th>
                                            <th>Container</th>
                                            <th>From</th>
                                            <th>To</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="custody_records" t-as="record">
                                            <tr>
                                                <td t-esc="record.create_date" t-options="{'widget': 'datetime'}"/>
                                                <td t-esc="record.container_id.name if record.container_id else '-'"/>
                                                <td t-esc="record.from_user_id.name if hasattr(record, 'from_user_id') and record.from_user_id else '-'"/>
                                                <td t-esc="record.to_user_id.name if hasattr(record, 'to_user_id') and record.to_user_id else '-'"/>
                                                <td><span class="badge bg-secondary" t-esc="record.action if hasattr(record, 'action') else 'Transfer'"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <div class="alert alert-info text-center">
                                    <i class="fa fa-info-circle fa-2x mb-2"/><br/>
                                    No custody records found.
                                </div>
                            </t>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <a href="/my/compliance" class="btn btn-secondary">
                            <i class="fa fa-arrow-left me-2"/>Back to Compliance
                        </a>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
