<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <template id="portal_certificate_detail" name="Certificate of Destruction">
        <t t-call="portal.portal_layout">
            <t t-set="title">Certificate of Destruction</t>
            <div class="container my-4">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fa fa-certificate text-warning" title="Certificate"></i>
                            <span t-esc="certificate.name or certificate.certificate_number"/>
                        </h4>
                        <div class="btn-group">
                            <a t-attf-href="/my/certificates/#{certificate.id}/download" class="btn btn-outline-primary">
                                <i class="fa fa-download" title="Download PDF"></i> PDF
                            </a>
                            <a href="/my/documents" class="btn btn-outline-secondary">
                                <i class="fa fa-arrow-left" title="Back"></i> Back
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row mb-0">
                                    <dt class="col-sm-5">Certificate Number</dt>
                                    <dd class="col-sm-7" t-esc="certificate.certificate_number"/>

                                    <dt class="col-sm-5">Customer</dt>
                                    <dd class="col-sm-7" t-esc="certificate.partner_id.name"/>

                                    <dt class="col-sm-5">Destruction Date</dt>
                                    <dd class="col-sm-7" t-esc="certificate.destruction_date" t-options="{'widget': 'datetime'}"/>

                                    <dt class="col-sm-5">Issue Date</dt>
                                    <dd class="col-sm-7" t-esc="certificate.issue_date" t-options="{'widget': 'datetime'}"/>

                                    <dt class="col-sm-5">Status</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge" t-att-class="'badge-' + ('warning' if certificate.state == 'draft' else 'success' if certificate.state in ['issued','sent'] else 'secondary')"
                                              t-esc="certificate.state.title()"/>
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row mb-0">
                                    <dt class="col-sm-5">Total Items</dt>
                                    <dd class="col-sm-7" t-esc="certificate.total_items"/>

                                    <dt class="col-sm-5">Total Weight</dt>
                                    <dd class="col-sm-7"><span t-esc="certificate.total_weight"/> kg</dd>

                                    <dt class="col-sm-5">Technician</dt>
                                    <dd class="col-sm-7" t-esc="certificate.technician_user_id.name or '-'"/>

                                    <dt class="col-sm-5">Compliance</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge badge-success"><i class="fa fa-shield"></i> NAID AAA</span>
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <hr/>
                        <h5 class="mt-3">Destroyed Items</h5>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Description</th>
                                        <th class="text-right">Quantity</th>
                                        <th class="text-right">Weight (kg)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-if="certificate.destruction_item_ids">
                                        <tr t-foreach="certificate.destruction_item_ids" t-as="line">
                                            <td t-esc="line.description or line.name or 'Item'"/>
                                            <td class="text-right" t-esc="line.quantity or 0"/>
                                            <td class="text-right" t-esc="line.weight or 0.0"/>
                                        </tr>
                                    </t>
                                    <t t-else="">
                                        <tr>
                                            <td colspan="3" class="text-center text-muted">No items listed</td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    </data>
</odoo>
