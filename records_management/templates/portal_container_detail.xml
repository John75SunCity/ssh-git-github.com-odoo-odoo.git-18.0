<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Portal Container Detail View -->
        <template id="portal_container_detail" name="Container Detail">
            <t t-call="portal.portal_layout">
                <t t-set="title">Container Details</t>

                <div class="container my-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <!-- Success/Error Messages -->
                            <t t-if="request.params.get('created')">
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="fa fa-check-circle"></i> Container created successfully!
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            </t>
                            <t t-if="request.params.get('updated')">
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="fa fa-check-circle"></i> Container updated successfully!
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            </t>
                            <t t-if="request.params.get('error')">
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="fa fa-exclamation-triangle"></i> <t t-esc="request.params.get('error')"/>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            </t>

                            <!-- Container Header Card -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-header bg-primary text-white">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <h3 class="mb-0">
                                                <i class="fa fa-box"></i> <t t-esc="container.name"/>
                                                <t t-call="records_management.permission_badge">
                                                    <t t-set="perm_key" t-value="'containers'"/>
                                                </t>
                                            </h3>
                                        </div>
                                        <div class="col-md-6 text-end">
                                            <!-- Edit button - check permissions -->
                                            <t t-if="permissions.get('containers', {}).get('can_update')">
                                                <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#editModal">
                                                    <i class="fa fa-edit"></i> Edit
                                                </button>
                                            </t>
                                            <t t-else="">
                                                <button class="btn btn-light btn-sm disabled" disabled="disabled"
                                                        title="You don't have permission to edit containers"
                                                        data-bs-toggle="tooltip">
                                                    <i class="fa fa-edit"></i> Edit
                                                </button>
                                            </t>
                                            
                                            <!-- Request Destruction button - check permissions -->
                                            <t t-if="permissions.get('containers', {}).get('can_request_destruction')">
                                                <a t-attf-href="/my/request/new/destruction?container_id={{container.id}}" 
                                                   class="btn btn-warning btn-sm">
                                                    <i class="fa fa-fire"></i> Request Destruction
                                                </a>
                                            </t>
                                            <t t-else="">
                                                <button class="btn btn-warning btn-sm disabled" disabled="disabled"
                                                        title="You don't have permission to request destruction services"
                                                        data-bs-toggle="tooltip">
                                                    <i class="fa fa-fire"></i> Request Destruction
                                                </button>
                                            </t>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h5 class="text-muted mb-3">Basic Information</h5>
                                            <table class="table table-sm">
                                                <tr>
                                                    <th style="width: 40%;"><t t-esc="field_labels.get('name', 'Container Number') if field_labels else 'Container Number'"/>:</th>
                                                    <td><strong><t t-esc="container.name"/></strong></td>
                                                </tr>
                                                <tr>
                                                    <th>Barcode:</th>
                                                    <td><t t-esc="container.barcode or 'Not assigned'"/></td>
                                                </tr>
                                                <tr>
                                                    <th><t t-esc="field_labels.get('department_id', 'Department') if field_labels else 'Department'"/>:</th>
                                                    <td><t t-esc="container.department_id.name or 'Not assigned'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Current Location:</th>
                                                    <td><t t-esc="container.location_id.name or 'Unknown'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Status:</th>
                                                    <td>
                                                        <span t-att-class="'badge badge-' + ('success' if container.active else 'secondary')">
                                                            <t t-if="container.active">Active</t>
                                                            <t t-else="">Archived</t>
                                                        </span>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>

                                        <div class="col-md-6">
                                            <h5 class="text-muted mb-3">Contents &amp; Retention</h5>
                                            <table class="table table-sm">
                                                <tr>
                                                    <th style="width: 40%;"><t t-esc="field_labels.get('primary_content_type', 'Contents Type') if field_labels else 'Contents Type'"/>:</th>
                                                    <td><t t-esc="dict(container._fields['primary_content_type'].selection).get(container.primary_content_type, 'Not specified')"/></td>
                                                </tr>
                                                <tr>
                                                    <th><t t-esc="field_labels.get('content_description', 'Box Contents') if field_labels else 'Box Contents'"/>:</th>
                                                    <td><t t-esc="container.content_description or 'Not specified'"/></td>
                                                </tr>
                                                <tr>
                                                    <th><t t-esc="field_labels.get('description', 'Description') if field_labels else 'Description'"/>:</th>
                                                    <td><t t-esc="container.description or 'None'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Alphabetical Range:</th>
                                                    <td><t t-esc="container.alpha_range_display or 'Not set'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Date Range:</th>
                                                    <td><t t-esc="container.content_date_range_display or 'Not set'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Search Keywords:</th>
                                                    <td><t t-esc="container.search_keywords or 'None'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Retention Policy:</th>
                                                    <td><t t-esc="container.retention_policy_id.name if container.retention_policy_id else 'Not set'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Storage Start Date:</th>
                                                    <td><t t-esc="container.storage_start_date.strftime('%Y-%m-%d') if container.storage_start_date else 'Not set'"/></td>
                                                </tr>
                                                <tr>
                                                    <th><t t-esc="field_labels.get('destruction_due_date', 'Destruction Due') if field_labels else 'Destruction Due'"/>:</th>
                                                    <td>
                                                        <t t-if="container.permanent_retention">
                                                            <span class="badge badge-info">Permanent Retention</span>
                                                        </t>
                                                        <t t-else="">
                                                            <t t-esc="container.destruction_due_date.strftime('%Y-%m-%d') if container.destruction_due_date else 'Not set'"/>
                                                        </t>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th><t t-esc="field_labels.get('file_count', 'Files Count') if field_labels else 'Files Count'"/>:</th>
                                                    <td><strong><t t-esc="len(files or [])"/></strong> files</td>
                                                </tr>
                                                <tr>
                                                    <th>Created Date:</th>
                                                    <td><t t-esc="container.create_date.strftime('%Y-%m-%d') if container.create_date else 'Unknown'"/></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Files in Container -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0"><i class="fa fa-folder"></i> Files in Container (<t t-esc="len(files or [])"/>)</h5>
                                    <!-- Add File button - only show for pending containers (customer physically has the box) -->
                                    <t t-if="permissions.get('files', {}).get('can_create') and container.state == 'pending'">
                                        <a t-attf-href="/my/inventory/files/create?container_id=#{container.id}" class="btn btn-success btn-sm">
                                            <i class="fa fa-plus"></i> Add File to Box
                                        </a>
                                    </t>
                                    <t t-elif="container.state != 'pending' and permissions.get('files', {}).get('can_create')">
                                        <span class="text-muted small" title="Files can only be added when the container is in Pending status (before it's picked up)">
                                            <i class="fa fa-info-circle"></i> Container already in storage
                                        </span>
                                    </t>
                                </div>
                                <div class="card-body">
                                    <t t-if="files">
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>File Name</th>
                                                        <th>Barcode</th>
                                                        <th>Department</th>
                                                        <th>Documents</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="files" t-as="file">
                                                        <tr>
                                                            <td><strong><t t-esc="file.name"/></strong></td>
                                                            <td><t t-esc="file.barcode or 'N/A'"/></td>
                                                            <td><t t-esc="file.department_id.name or 'N/A'"/></td>
                                                            <td><span class="badge badge-info"><t t-esc="file.document_count or 0"/></span></td>
                                                            <td>
                                                                <a t-attf-href="/my/inventory/file/#{file.id}" class="btn btn-sm btn-primary">
                                                                    <i class="fa fa-eye"></i> View
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <div class="text-center py-4">
                                            <i class="fa fa-folder-open fa-3x text-muted mb-3" style="display: block;"></i>
                                            <p class="text-muted">No files in this container yet.</p>
                                            <t t-if="permissions.get('files', {}).get('can_create')">
                                                <a t-attf-href="/my/inventory/files/create?container_id=#{container.id}" class="btn btn-success">
                                                    <i class="fa fa-plus"></i> Add First File
                                                </a>
                                            </t>
                                        </div>
                                    </t>
                                </div>
                            </div>

                            <!-- Quick Actions -->
                            <div class="card shadow-sm">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="fa fa-bolt"></i> Quick Actions</h5>
                                </div>
                                <div class="card-body">
                                    <a t-attf-href="/my/inventory/container/#{container.id}/movements" class="btn btn-info">
                                        <i class="fa fa-history"></i> View Movement History
                                    </a>
                                    <t t-if="can_edit">
                                        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#requestMoveModal">
                                            <i class="fa fa-truck"></i> Request Move
                                        </button>
                                    </t>
                                    <a href="/my/inventory/containers" class="btn btn-secondary">
                                        <i class="fa fa-arrow-left"></i> Back to Containers
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Edit Modal -->
                <t t-if="can_edit">
                    <div class="modal fade" id="editModal" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Edit Container</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form t-attf-action="/my/inventory/container/#{container.id}/edit" method="POST">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label>Container Number</label>
                                            <input type="text" class="form-control" name="name" t-att-value="container.name"/>
                                        </div>
                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea class="form-control" name="description" rows="3"><t t-esc="container.description"/></textarea>
                                        </div>
                                        
                                        <!-- Smart Department Selection -->
                                        <t t-if="has_departments">
                                            <div class="form-group">
                                                <label>Department</label>
                                                
                                                <!-- Case 1: User has exactly one department - show read-only -->
                                                <t t-if="default_department and not show_department_selector">
                                                    <input type="text" class="form-control" readonly="readonly"
                                                           t-att-value="default_department.name"/>
                                                    <input type="hidden" name="department_id" t-att-value="default_department.id"/>
                                                </t>
                                                
                                                <!-- Case 2: User has multiple departments - show dropdown -->
                                                <t t-elif="show_department_selector">
                                                    <select class="form-control" name="department_id">
                                                        <option value="">-- Select Department --</option>
                                                        <t t-foreach="departments" t-as="dept">
                                                            <option t-att-value="dept.id" t-att-selected="'selected' if dept.id == container.department_id.id else None">
                                                                <t t-esc="dept.name"/>
                                                            </option>
                                                        </t>
                                                    </select>
                                                </t>
                                                
                                                <!-- Case 3: Company has departments but user has no access -->
                                                <t t-else="">
                                                    <input type="text" class="form-control text-muted" readonly="readonly"
                                                           t-att-value="container.department_id.name or 'Company Level'"/>
                                                    <input type="hidden" name="department_id" t-att-value="container.department_id.id or ''"/>
                                                </t>
                                            </div>
                                        </t>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </t>

                <!-- Request Move Modal -->
                <t t-if="can_edit">
                    <div class="modal fade" id="requestMoveModal" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Request Container Move</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form t-attf-action="/my/inventory/container/#{container.id}/request-move" method="POST">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label>Target Location</label>
                                            <select class="form-control" name="target_location_id" required="required">
                                                <option value="">-- Select Location --</option>
                                                <t t-foreach="locations" t-as="loc">
                                                    <option t-att-value="loc.id"><t t-esc="loc.name"/></option>
                                                </t>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Reason</label>
                                            <textarea class="form-control" name="reason" rows="3" placeholder="Why do you need to move this container?"></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-warning">Submit Request</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </t>

                <!-- Delete JavaScript -->
                <script type="text/javascript">
                    function deleteContainer() {
                        if (confirm('Are you sure you want to archive this container? This action can be reversed by an administrator.')) {
                            $.ajax({
                                url: '/my/inventory/container/<t t-esc="container.id"/>/delete',
                                type: 'POST',
                                contentType: 'application/json',
                                data: JSON.stringify({}),
                                success: function(result) {
                                    if (result.success) {
                                        window.location.href = '/my/inventory/containers?deleted=success';
                                    } else {
                                        alert('Error: ' + result.error);
                                    }
                                },
                                error: function(xhr) {
                                    alert('Error deleting container: ' + xhr.responseText);
                                }
                            });
                        }
                    }
                </script>
            </t>
        </template>
    </data>
</odoo>
