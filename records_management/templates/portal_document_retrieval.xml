<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- Document Retrieval Portal Templates -->

    <!-- Main Document Retrieval Page -->
    <template id="portal_document_retrieval" name="Document Retrieval">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Document Retrieval</t>
            </t>

            <div class="container-fluid o_portal_document_retrieval">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="mb-0">
                                    <i class="fa fa-file-text-o"></i> Request Document Retrieval
                                </h4>
                            </div>
                            <div class="card-body">
                                <t t-if="error_message">
                                    <div class="alert alert-danger" role="alert">
                                        <span t-esc="error_message"/>
                                    </div>
                                </t>
                                <!-- Pricing Calculator -->
                                <div class="alert alert-info">
                                    <h5>
                                        <i class="fa fa-calculator"></i> Pricing Calculator</h5>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="calc_priority">Priority Level:</label>
                                            <select id="calc_priority" class="form-control">
                                                <option value="standard">Standard (48 Hours) - $25 delivery</option>
                                                <option value="rush_eod">Rush (End of Day) - Additional fees apply</option>
                                                <option value="rush_4h">Rush (4 Hours) - Higher fees</option>
                                                <option value="emergency_1h">Emergency (1 Hour) - Premium fees</option>
                                                <option value="weekend">Weekend Service - Weekend rates</option>
                                                <option value="holiday">Holiday Service - Holiday rates</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="calc_items">Number of Items:</label>
                                            <input type="number" id="calc_items" class="form-control" value="1" min="1"/>
                                        </div>
                                    </div>
                                    <div class="mt-3">
                                        <div id="pricing-breakdown">
                                            <!-- Pricing will be loaded here via JavaScript -->
                                        </div>
                                    </div>
                                </div>

                                <!-- Work Order Form -->
                                <form method="post" action="/my/document-retrieval/create" id="retrieval-form" t-att-data-container-options="json.dumps([(container.id, container.name) for container in containers])" t-att-data-document-options="json.dumps([(doc.id, doc.name) for doc in documents])">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="priority">Priority Level *</label>
                                                <select name="priority" id="priority" class="form-control" required="required">
                                                    <option value="standard">Standard (48 Hours)</option>
                                                    <option value="rush_eod">Rush (End of Day)</option>
                                                    <option value="rush_4h">Rush (4 Hours)</option>
                                                    <option value="emergency_1h">Emergency (1 Hour)</option>
                                                    <option value="weekend">Weekend Service</option>
                                                    <option value="holiday">Holiday Service</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="delivery_date">Requested Delivery Date</label>
                                                <input type="date" name="delivery_date" id="delivery_date" class="form-control"/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="delivery_address">Delivery Address</label>
                                        <textarea name="delivery_address" id="delivery_address" class="form-control" rows="3" placeholder="Where should we deliver the retrieved documents?"></textarea>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="delivery_contact">Delivery Contact</label>
                                                <input type="text" name="delivery_contact" id="delivery_contact" class="form-control" placeholder="Contact person for delivery"/>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="delivery_phone">Delivery Phone</label>
                                                <input type="tel" name="delivery_phone" id="delivery_phone" class="form-control" placeholder="Phone number for delivery coordination"/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="retrieval_notes">Special Instructions</label>
                                        <textarea name="retrieval_notes" id="retrieval_notes" class="form-control" rows="3" placeholder="Any special instructions for retrieval or delivery..."></textarea>
                                    </div>

                                    <!-- Items to Retrieve -->
                                    <div class="card mt-4">
                                        <div class="card-header">
                                            <h5>Items to Retrieve</h5>
                                        </div>
                                        <div class="card-body">
                                            <div id="items-container">
                                                <!-- Items will be added here -->
                                            </div>
                                            <button type="button" class="btn btn-sm btn-secondary" data-action="add-item">
                                                <i class="fa fa-plus"></i> Add Item
                                            </button>
                                        </div>
                                    </div>

                                    <input type="hidden" name="items" id="items-data"/>

                                    <div class="mt-4">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-paper-plane"></i> Submit Retrieval Request
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <!-- Customer Rate Information -->
                        <div class="card">
                            <div class="card-header">
                                <h5>
                                    <i class="fa fa-info-circle"></i> Your Rates</h5>
                            </div>
                            <div class="card-body">
                                <t t-if="has_custom_rates">
                                    <div class="alert alert-success">
                                        <strong>Custom Rates Active</strong>
                                        <br/>
                                        You have special pricing terms that will be applied to your orders.
                                    </div>
                                    <ul class="list-unstyled">
                                        <li t-if="customer_rates.custom_retrieval_rate > 0">
                                            <strong>Retrieval Rate:</strong> $                                            <span t-esc="customer_rates.custom_retrieval_rate"/>
 per item
                                        </li>
                                        <li t-if="customer_rates.custom_delivery_rate > 0">
                                            <strong>Delivery Rate:</strong> $                                            <span t-esc="customer_rates.custom_delivery_rate"/>
 per order
                                        </li>
                                    </ul>
                                </t>
                                <t t-else="">
                                    <ul class="list-unstyled">
                                        <li>
                                            <strong>Base Retrieval:</strong> $                                            <span t-esc="base_rates.base_retrieval_rate"/>
 per item</li>
                                        <li>
                                            <strong>Base Delivery:</strong> $                                            <span t-esc="base_rates.base_delivery_rate"/>
 per order</li>
                                    </ul>
                                </t>

                                <h6 class="mt-3">Priority Fees (Per Item):</h6>
                                <ul class="list-unstyled small">
                                    <li>Rush (EOD): +$<span t-esc="base_rates.rush_end_of_day_item"/>
                                    </li>
                                    <li>Rush (4h): +$<span t-esc="base_rates.rush_4_hours_item"/>
                                    </li>
                                    <li>Emergency: +$<span t-esc="base_rates.emergency_1_hour_item"/>
                                    </li>
                                    <li>Weekend: +$<span t-esc="base_rates.weekend_item"/>
                                    </li>
                                    <li>Holiday: +$<span t-esc="base_rates.holiday_item"/>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!-- Recent Work Orders -->
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5>
                                    <i class="fa fa-history"></i> Recent Orders</h5>
                            </div>
                            <div class="card-body">
                                <t t-if="work_orders">
                                    <t t-foreach="work_orders" t-as="order">
                                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                            <div>
                                                <a t-att-href="'/my/document-retrieval/' + str(order.id)" class="text-decoration-none">
                                                    <strong t-esc="order.name"/>
                                                </a>
                                                <br/>
                                                <small class="text-muted" t-esc="order.request_date"/>
                                            </div>
                                            <div class="text-right">
                                                <span t-att-class="'badge badge-' + ('success' if order.state == 'completed' else 'warning' if order.state in ['in_progress', 'ready_delivery'] else 'secondary')" t-esc="order.state.title()"/>
                                                <br/>
                                                <small>$                                                    <span t-esc="order.total_cost"/>
                                                </small>
                                            </div>
                                        </div>
                                    </t>
                                </t>
                                <t t-else="">
                                    <p class="text-muted">No previous orders found.</p>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Inline script removed: logic migrated to portal_document_retrieval.js -->
        </t>
    </template>

    <!-- Work Order Detail Page -->
    <template id="portal_document_retrieval_detail" name="Document Retrieval Detail">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Work Order <span t-esc="work_order.name"/>
                </t>
            </t>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <h4>
                                    Work Order <span t-esc="work_order.name"/>
                                <span t-att-class="'badge badge-' + ('success' if work_order.state == 'completed' else 'warning' if work_order.state in ['in_progress', 'ready_delivery'] else 'secondary')" t-esc="work_order.state.title()"/>
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <strong>Request Date:</strong>
                                    <span t-esc="work_order.request_date"/>
                                    <br/>
                                    <strong>Priority:</strong>
                                    <span t-esc="work_order.priority"/>
                                    <br/>
                                    <strong>Items:</strong>
                                    <span t-esc="work_order.item_count"/>
                                    <br/>
                                </div>
                                <div class="col-md-6">
                                    <strong>Total Cost:</strong> $                                    <span t-esc="work_order.total_cost"/>
                                    <br/>
                                    <strong>Technician:</strong>
                                    <span t-esc="work_order.technician_id.name if work_order.technician_id else 'Not assigned'"/>
                                    <br/>
                                    <strong>Delivery Date:</strong>
                                    <span t-esc="work_order.delivery_date or 'TBD'"/>
                                    <br/>
                                </div>
                            </div>

                            <t t-if="work_order.retrieval_notes">
                                <h5 class="mt-3">Special Instructions:</h5>
                                <p t-esc="work_order.retrieval_notes"/>
                            </t>

                            <h5 class="mt-3">Items to Retrieve:</h5>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Type</th>
                                            <th>Description</th>
                                            <th>Barcode</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="work_order.retrieval_item_ids" t-as="item">
                                            <tr>
                                                <td t-esc="item.item_type.title()"/>
                                                <td t-esc="item.description"/>
                                                <td t-esc="item.barcode"/>
                                                <td>
                                                    <span t-att-class="'badge badge-' + ('success' if item.status == 'delivered' else 'warning' if item.status == 'retrieved' else 'secondary')" t-esc="item.status.title()"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5>Pricing Breakdown</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <span>Base Retrieval:</span>
                                <span>$                                    <span t-esc="work_order.base_retrieval_cost"/>
                                </span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Base Delivery:</span>
                                <span>$                                    <span t-esc="work_order.base_delivery_cost"/>
                                </span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Priority (Items):</span>
                                <span>$                                    <span t-esc="work_order.priority_item_cost"/>
                                </span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Priority (Order):</span>
                                <span>$                                    <span t-esc="work_order.priority_order_cost"/>
                                </span>
                            </div>
                            <hr/>
                            <div class="d-flex justify-content-between">
                                <strong>Total:</strong>
                                <strong>$                                    <span t-esc="work_order.total_cost"/>
                                </strong>
                            </div>

                            <t t-if="work_order.has_custom_rates">
                                <div class="alert alert-success mt-3">
                                    <small>Custom rates applied</small>
                                </div>
                            </t>
                        </div>
                    </div>

                    <div class="mt-3">
                        <a href="/my/document-retrieval" class="btn btn-secondary">
                            <i class="fa fa-arrow-left"></i> Back to Retrieval
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>

    <!-- Document Retrieval Request Template -->
    <template id="portal_document_retrieval_template" name="Document Retrieval Request">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            
            <div class="o_portal_document_retrieval container mt-4">
                <h2>Document Retrieval Request</h2>
                <p class="text-muted">Request retrieval of documents or files from your containers stored at our warehouse.</p>
                
                <form id="retrieval-form" 
                      action="/my/document-retrieval/submit" 
                      method="POST"
                      t-att-data-container-options="container_options"
                      t-att-data-document-options="document_options">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    
                    <!-- Priority Selection -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="priority">Delivery Priority:</label>
                            <select id="priority" name="priority" class="form-control">
                                <option value="standard">Standard (3-5 business days)</option>
                                <option value="urgent">Urgent (24-48 hours)</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="calc_items">Number of Items:</label>
                            <input type="number" id="calc_items" class="form-control" min="1" value="1"/>
                            <input type="hidden" id="calc_priority" value="standard"/>
                        </div>
                    </div>
                    
                    <!-- Items Container -->
                    <div id="items-container" class="mb-3">
                        <!-- Items will be added dynamically by JavaScript -->
                    </div>
                    
                    <!-- Add Item Button -->
                    <div class="mb-3">
                        <button type="button" class="btn btn-primary" data-action="add-item">
                            <i class="fa fa-plus"></i> Add Another Item
                        </button>
                    </div>
                    
                    <!-- Pricing Breakdown -->
                    <div class="card mb-3">
                        <div class="card-header bg-info text-white">
                            <h5>Pricing Estimate</h5>
                        </div>
                        <div class="card-body" id="pricing-breakdown">
                            <p class="text-center text-muted">Calculating...</p>
                        </div>
                    </div>
                    
                    <!-- Additional Notes -->
                    <div class="mb-3">
                        <label for="notes">Additional Notes:</label>
                        <textarea id="notes" name="notes" class="form-control" rows="3" placeholder="Any special instructions or details..."></textarea>
                    </div>
                    
                    <!-- Hidden field for items data -->
                    <input type="hidden" id="items-data" name="items_data" value="[]"/>
                    
                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fa fa-check"></i> Submit Retrieval Request
                        </button>
                    </div>
                </form>
            </div>
        </t>
    </template>
    
    <!-- Add to portal dashboard menu -->
    <template id="portal_my_home_menu_retrieval" name="Portal My Home Menu - Retrieval" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Document Retrieval</t>
                <t t-set="url" t-value="'/my/document-retrieval'"/>
                <t t-set="icon" t-value="'fa-archive'"/>
            </t>
        </xpath>
    </template>
    </data>
</odoo>
