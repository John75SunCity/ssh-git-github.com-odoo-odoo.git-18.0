<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Retrieval Portal Templates -->

    <!-- Main Document Retrieval Page -->
    <template id="portal_document_retrieval" name="Document Retrieval">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Document Retrieval</t>
            </t>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="mb-0">
                                    <i class="fa fa-file-text-o"></i> Request Document Retrieval
                                </h4>
                            </div>
                            <div class="card-body">
                                <!-- Pricing Calculator -->
                                <div class="alert alert-info">
                                    <h5>
                                        <i class="fa fa-calculator"></i> Pricing Calculator</h5>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="calc_priority">Priority Level:</label>
                                            <select id="calc_priority" class="form-control" onchange="updatePricing()">
                                                <option value="standard">Standard (48 Hours) - $25 delivery</option>
                                                <option value="rush_eod">Rush (End of Day) - Additional fees apply</option>
                                                <option value="rush_4h">Rush (4 Hours) - Higher fees</option>
                                                <option value="emergency_1h">Emergency (1 Hour) - Premium fees</option>
                                                <option value="weekend">Weekend Service - Weekend rates</option>
                                                <option value="holiday">Holiday Service - Holiday rates</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="calc_items">Number of Items:</label>
                                            <input type="number" id="calc_items" class="form-control" value="1" min="1" onchange="updatePricing()"/>
                                        </div>
                                    </div>
                                    <div class="mt-3">
                                        <div id="pricing-breakdown">
                                            <!-- Pricing will be loaded here via JavaScript -->
                                        </div>
                                    </div>
                                </div>

                                <!-- Work Order Form -->
                                <form method="post" action="/my/document-retrieval/create" id="retrieval-form">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="priority">Priority Level *</label>
                                                <select name="priority" id="priority" class="form-control" required="required">
                                                    <option value="standard">Standard (48 Hours)</option>
                                                    <option value="rush_eod">Rush (End of Day)</option>
                                                    <option value="rush_4h">Rush (4 Hours)</option>
                                                    <option value="emergency_1h">Emergency (1 Hour)</option>
                                                    <option value="weekend">Weekend Service</option>
                                                    <option value="holiday">Holiday Service</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="delivery_date">Requested Delivery Date</label>
                                                <input type="date" name="delivery_date" id="delivery_date" class="form-control"/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="delivery_address">Delivery Address</label>
                                        <textarea name="delivery_address" id="delivery_address" class="form-control" rows="3" placeholder="Where should we deliver the retrieved documents?"></textarea>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="delivery_contact">Delivery Contact</label>
                                                <input type="text" name="delivery_contact" id="delivery_contact" class="form-control" placeholder="Contact person for delivery"/>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="delivery_phone">Delivery Phone</label>
                                                <input type="tel" name="delivery_phone" id="delivery_phone" class="form-control" placeholder="Phone number for delivery coordination"/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="retrieval_notes">Special Instructions</label>
                                        <textarea name="retrieval_notes" id="retrieval_notes" class="form-control" rows="3" placeholder="Any special instructions for retrieval or delivery..."></textarea>
                                    </div>

                                    <!-- Items to Retrieve -->
                                    <div class="card mt-4">
                                        <div class="card-header">
                                            <h5>Items to Retrieve</h5>
                                        </div>
                                        <div class="card-body">
                                            <div id="items-container">
                                                <!-- Items will be added here -->
                                            </div>
                                            <button type="button" class="btn btn-sm btn-secondary" onclick="addRetrievalItem()">
                                                <i class="fa fa-plus"></i> Add Item
                                            </button>
                                        </div>
                                    </div>

                                    <input type="hidden" name="items" id="items-data"/>

                                    <div class="mt-4">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-paper-plane"></i> Submit Retrieval Request
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <!-- Customer Rate Information -->
                        <div class="card">
                            <div class="card-header">
                                <h5>
                                    <i class="fa fa-info-circle"></i> Your Rates</h5>
                            </div>
                            <div class="card-body">
                                <t t-if="has_custom_rates">
                                    <div class="alert alert-success">
                                        <strong>Custom Rates Active</strong>
                                        <br/>
                                        You have special pricing terms that will be applied to your orders.
                                    </div>
                                    <ul class="list-unstyled">
                                        <li t-if="customer_rates.custom_retrieval_rate > 0">
                                            <strong>Retrieval Rate:</strong> $                                            <span t-esc="customer_rates.custom_retrieval_rate"/>
 per item
                                        </li>
                                        <li t-if="customer_rates.custom_delivery_rate > 0">
                                            <strong>Delivery Rate:</strong> $                                            <span t-esc="customer_rates.custom_delivery_rate"/>
 per order
                                        </li>
                                    </ul>
                                </t>
                                <t t-else="">
                                    <ul class="list-unstyled">
                                        <li>
                                            <strong>Base Retrieval:</strong> $                                            <span t-esc="base_rates.base_retrieval_rate"/>
 per item</li>
                                        <li>
                                            <strong>Base Delivery:</strong> $                                            <span t-esc="base_rates.base_delivery_rate"/>
 per order</li>
                                    </ul>
                                </t>

                                <h6 class="mt-3">Priority Fees (Per Item):</h6>
                                <ul class="list-unstyled small">
                                    <li>Rush (EOD): +$<span t-esc="base_rates.rush_end_of_day_item"/>
                                    </li>
                                    <li>Rush (4h): +$<span t-esc="base_rates.rush_4_hours_item"/>
                                    </li>
                                    <li>Emergency: +$<span t-esc="base_rates.emergency_1_hour_item"/>
                                    </li>
                                    <li>Weekend: +$<span t-esc="base_rates.weekend_item"/>
                                    </li>
                                    <li>Holiday: +$<span t-esc="base_rates.holiday_item"/>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!-- Recent Work Orders -->
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5>
                                    <i class="fa fa-history"></i> Recent Orders</h5>
                            </div>
                            <div class="card-body">
                                <t t-if="work_orders">
                                    <t t-foreach="work_orders" t-as="order">
                                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                            <div>
                                                <a t-att-href="'/my/document-retrieval/' + str(order.id)" class="text-decoration-none">
                                                    <strong t-esc="order.name"/>
                                                </a>
                                                <br/>
                                                <small class="text-muted" t-esc="order.request_date"/>
                                            </div>
                                            <div class="text-right">
                                                <span t-att-class="'badge badge-' + ('success' if order.state == 'completed' else 'warning' if order.state in ['in_progress', 'ready_delivery'] else 'secondary')" t-esc="order.state.title()"/>
                                                <br/>
                                                <small>$                                                    <span t-esc="order.total_cost"/>
                                                </small>
                                            </div>
                                        </div>
                                    </t>
                                </t>
                                <t t-else="">
                                    <p class="text-muted">No previous orders found.</p>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- JavaScript for dynamic functionality -->
            <script>
                let itemCounter = 0;
                let boxOptions = <t t-esc="json.dumps([(box.id, box.name) for box in boxes])"/>
;
                let documentOptions = <t t-esc="json.dumps([(doc.id, doc.name) for doc in documents])"/>
;
                
                function updatePricing() {
                    const priority = document.getElementById('calc_priority').value;
                    const itemCount = parseInt(document.getElementById('calc_items').value) || 1;
                    
                    fetch('/my/document-retrieval/calculate-price', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            jsonrpc: '2.0',
                            method: 'call',
                            params: {
                                priority: priority,
                                item_count: itemCount
                            }
                        })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.result) {
                            updatePricingDisplay(data.result);
                        }
                    });
                }
                
                function updatePricingDisplay(pricing) {
                    const breakdown = document.getElementById('pricing-breakdown');
                    breakdown.innerHTML = `
        <div class="row">
            <div class="col-md-6">
                <strong>Base Retrieval:</strong> $${pricing.base_retrieval_cost.toFixed(2)}<br/>
            <strong>Priority (Items):</strong> $${pricing.priority_item_cost.toFixed(2)}
        </div>
        <div class="col-md-6">
            <strong>Base Delivery:</strong> $${pricing.base_delivery_cost.toFixed(2)}<br/>
        <strong>Priority (Order):</strong> $${pricing.priority_order_cost.toFixed(2)}
    </div>
</div>
<hr/>
<div class="text-center">
    <h5>
        <strong>Total: $${pricing.total_cost.toFixed(2)}</strong>
    </h5>
                            ${pricing.has_custom_rates ? '<small class="text-success">Custom rates applied</small>' : ''}
</div>
                    `;
                }
                
                function addRetrievalItem() {
                    itemCounter++;
                    const container = document.getElementById('items-container');
                    const itemDiv = document.createElement('div');
                    itemDiv.className = 'border p-3 mb-3';
                    itemDiv.id = `item-${itemCounter}`;
                    
                    itemDiv.innerHTML = `
<div class="row">
    <div class="col-md-3">
        <label>Item Type:</label>
        <select class="form-control" onchange="updateItemOptions(${itemCounter})" id="type-${itemCounter}">
            <option value="box">Box</option>
            <option value="document">Document</option>
            <option value="file">File</option>
        </select>
    </div>
    <div class="col-md-4">
        <label>Select Item:</label>
        <select class="form-control" id="item-select-${itemCounter}">
            <option value="">Select a box...</option>
        </select>
    </div>
    <div class="col-md-3">
        <label>Barcode:</label>
        <input type="text" class="form-control" id="barcode-${itemCounter}" placeholder="Item barcode"/>
    </div>
    <div class="col-md-2">
        <label>&amp;nbsp;</label>
        <button type="button" class="btn btn-danger btn-sm form-control" onclick="removeItem(${itemCounter})">
            <i class="fa fa-trash"></i>
        </button>
    </div>
</div>
<div class="row mt-2">
    <div class="col-md-12">
        <label>Description:</label>
        <input type="text" class="form-control" id="description-${itemCounter}" placeholder="Describe the item to retrieve"/>
    </div>
</div>
                    `;
                    
                    container.appendChild(itemDiv);
                    updateItemOptions(itemCounter);
                    updateItemsData();
                }
                
                function updateItemOptions(itemId) {
                    const type = document.getElementById(`type-${itemId}`).value;
                    const select = document.getElementById(`item-select-${itemId}`);
                    
                    select.innerHTML = '';
                    
                    if (type === 'box') {
                        select.innerHTML = '<option value="">Select a box...</option>';
                        boxOptions.forEach(([id, name]) => {
                            select.innerHTML += `<option value="${id}">${name}</option>`;
                        });
                    } else if (type === 'document') {
                        select.innerHTML = '<option value="">Select a document...</option>';
                        documentOptions.forEach(([id, name]) => {
                            select.innerHTML += `<option value="${id}">${name}</option>`;
                        });
                    } else {
                        select.innerHTML = '<option value="">Not applicable</option>';
                        select.disabled = true;
                    }
                }
                
                function removeItem(itemId) {
                    const item = document.getElementById(`item-${itemId}`);
                    item.remove();
                    updateItemsData();
                }
                
                function updateItemsData() {
                    const items = [];
                    const container = document.getElementById('items-container');
                    const itemDivs = container.querySelectorAll('[id^="item-"]');
                    
                    itemDivs.forEach(div => {
                        const id = div.id.split('-')[1];
                        const type = document.getElementById(`type-${id}`).value;
                        const itemSelect = document.getElementById(`item-select-${id}`);
                        const barcode = document.getElementById(`barcode-${id}`).value;
                        const description = document.getElementById(`description-${id}`).value;
                        
                        if (description || barcode || itemSelect.value) {
                            const item = {
                                type: type,
                                barcode: barcode,
                                description: description
                            };
                            
                            if (type === 'box' && itemSelect.value) {
                                item.box_id = itemSelect.value;
                            } else if (type === 'document' && itemSelect.value) {
                                item.document_id = itemSelect.value;
                            }
                            
                            items.push(item);
                        }
                    });
                    
                    document.getElementById('items-data').value = JSON.stringify(items);
                }
                
                // Initialize with one item and update pricing
                document.addEventListener('DOMContentLoaded', function() {
                    addRetrievalItem();
                    updatePricing();
                });
                
                // Update pricing when priority changes
                document.getElementById('priority').addEventListener('change', function() {
                    document.getElementById('calc_priority').value = this.value;
                    updatePricing();
                });
</script>
</t>
</template>

<!-- Work Order Detail Page -->
<template id="portal_document_retrieval_detail" name="Document Retrieval Detail">
<t t-call="portal.portal_layout">
<t t-set="breadcrumbs_searchbar" t-value="True"/>

<t t-call="portal.portal_searchbar">
<t t-set="title">Work Order <span t-esc="work_order.name"/>
</t>
</t>

<div class="container-fluid">
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4>
                                    Work Order <span t-esc="work_order.name"/>
                <span t-att-class="'badge badge-' + ('success' if work_order.state == 'completed' else 'warning' if work_order.state in ['in_progress', 'ready_delivery'] else 'secondary')" t-esc="work_order.state.title()"/>
            </h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <strong>Request Date:</strong>
                    <span t-esc="work_order.request_date"/>
                    <br/>
                    <strong>Priority:</strong>
                    <span t-esc="work_order.priority"/>
                    <br/>
                    <strong>Items:</strong>
                    <span t-esc="work_order.item_count"/>
                    <br/>
                </div>
                <div class="col-md-6">
                    <strong>Total Cost:</strong> $                    <span t-esc="work_order.total_cost"/>
                    <br/>
                    <strong>Technician:</strong>
                    <span t-esc="work_order.technician_id.name if work_order.technician_id else 'Not assigned'"/>
                    <br/>
                    <strong>Delivery Date:</strong>
                    <span t-esc="work_order.delivery_date or 'TBD'"/>
                    <br/>
                </div>
            </div>

            <t t-if="work_order.retrieval_notes">
                <h5 class="mt-3">Special Instructions:</h5>
                <p t-esc="work_order.retrieval_notes"/>
            </t>

            <h5 class="mt-3">Items to Retrieve:</h5>
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Barcode</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="work_order.retrieval_item_ids" t-as="item">
                            <tr>
                                <td t-esc="item.item_type.title()"/>
                                <td t-esc="item.description"/>
                                <td t-esc="item.barcode"/>
                                <td>
                                    <span t-att-class="'badge badge-' + ('success' if item.status == 'delivered' else 'warning' if item.status == 'retrieved' else 'secondary')" t-esc="item.status.title()"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-4">
    <div class="card">
        <div class="card-header">
            <h5>Pricing Breakdown</h5>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <span>Base Retrieval:</span>
                <span>$                    <span t-esc="work_order.base_retrieval_cost"/>
                </span>
            </div>
            <div class="d-flex justify-content-between">
                <span>Base Delivery:</span>
                <span>$                    <span t-esc="work_order.base_delivery_cost"/>
                </span>
            </div>
            <div class="d-flex justify-content-between">
                <span>Priority (Items):</span>
                <span>$                    <span t-esc="work_order.priority_item_cost"/>
                </span>
            </div>
            <div class="d-flex justify-content-between">
                <span>Priority (Order):</span>
                <span>$                    <span t-esc="work_order.priority_order_cost"/>
                </span>
            </div>
            <hr/>
            <div class="d-flex justify-content-between">
                <strong>Total:</strong>
                <strong>$                    <span t-esc="work_order.total_cost"/>
                </strong>
            </div>

            <t t-if="work_order.has_custom_rates">
                <div class="alert alert-success mt-3">
                    <small>Custom rates applied</small>
                </div>
            </t>
        </div>
    </div>

    <div class="mt-3">
        <a href="/my/document-retrieval" class="btn btn-secondary">
            <i class="fa fa-arrow-left"></i> Back to Retrieval
        </a>
    </div>
</div>
</div>
</div>
</t>
</template>
</odoo>
