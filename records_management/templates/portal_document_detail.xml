<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Portal Document Detail View -->
        <template id="portal_document_detail" name="Document Detail">
            <t t-call="portal.portal_layout">
                <t t-set="title">Document Details</t>
                
                <div class="container my-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <!-- Success/Error Messages -->
                            <t t-if="request.params.get('created')">
                                <div class="alert alert-success alert-dismissible fade show">
                                    <i class="fa fa-check-circle"></i> Document created successfully!
                                    <button type="button" class="close" data-dismiss="alert">&#215;</button>
                                </div>
                            </t>
                            <t t-if="request.params.get('updated')">
                                <div class="alert alert-success alert-dismissible fade show">
                                    <i class="fa fa-check-circle"></i> Document updated successfully!
                                    <button type="button" class="close" data-dismiss="alert">&#215;</button>
                                </div>
                            </t>
                            <t t-if="request.params.get('upload')">
                                <div class="alert alert-success alert-dismissible fade show">
                                    <i class="fa fa-check-circle"></i> File uploaded successfully!
                                    <button type="button" class="close" data-dismiss="alert">&#215;</button>
                                </div>
                            </t>
                            
                            <!-- Document Header Card -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-header bg-warning text-dark">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <h3 class="mb-0">
                                                <i class="fa fa-file-text"></i> <t t-esc="document.name"/>
                                            </h3>
                                        </div>
                                        <div class="col-md-4 text-right">
                                            <t t-if="can_edit">
                                                <button class="btn btn-light btn-sm" data-toggle="modal" data-target="#editDocModal">
                                                    <i class="fa fa-edit"></i> Edit
                                                </button>
                                            </t>
                                            <t t-if="can_delete">
                                                <button class="btn btn-danger btn-sm" onclick="deleteDocument()">
                                                    <i class="fa fa-trash"></i> Delete
                                                </button>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h5 class="text-muted mb-3">Document Information</h5>
                                            <table class="table table-sm">
                                                <tr>
                                                    <th style="width: 40%;">Document Name:</th>
                                                    <td><strong><t t-esc="document.name"/></strong></td>
                                                </tr>
                                                <tr>
                                                    <th>Type:</th>
                                                    <td><t t-esc="document.document_type_id.name or 'Not specified'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Department:</th>
                                                    <td><t t-esc="document.department_id.name or 'Not assigned'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>File Folder:</th>
                                                    <td>
                                                        <a t-attf-href="/my/inventory/file/#{document.file_id.id}" t-if="document.file_id">
                                                            <t t-esc="document.file_id.name"/>
                                                        </a>
                                                        <span t-else="">Not assigned</span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>Container:</th>
                                                    <td>
                                                        <t t-if="document.file_id and document.file_id.container_id">
                                                            <a t-attf-href="/my/inventory/container/#{document.file_id.container_id.id}">
                                                                <t t-esc="document.file_id.container_id.name or document.file_id.container_id.container_number"/>
                                                            </a>
                                                        </t>
                                                        <span t-else="">Not assigned</span>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                        
                                        <div class="col-md-6">
                                            <h5 class="text-muted mb-3">Metadata</h5>
                                            <table class="table table-sm">
                                                <tr>
                                                    <th style="width: 40%;">Description:</th>
                                                    <td><t t-esc="document.description or 'None'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Attachments:</th>
                                                    <td><strong><t t-esc="len(attachments or [])"/></strong> files</td>
                                                </tr>
                                                <tr>
                                                    <th>Created Date:</th>
                                                    <td><t t-esc="document.create_date.strftime('%Y-%m-%d') if document.create_date else 'Unknown'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Last Updated:</th>
                                                    <td><t t-esc="document.write_date.strftime('%Y-%m-%d') if document.write_date else 'Unknown'"/></td>
                                                </tr>
                                                <tr>
                                                    <th>Status:</th>
                                                    <td>
                                                        <span t-att-class="'badge badge-' + ('success' if document.active else 'secondary')">
                                                            <t t-if="document.active">Active</t>
                                                            <t t-else="">Archived</t>
                                                        </span>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Attachments Card -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-header">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <h5 class="mb-0">
                                                <i class="fa fa-paperclip"></i> Attachments (<t t-esc="len(attachments or [])"/>)
                                            </h5>
                                        </div>
                                        <div class="col-md-4 text-right">
                                            <t t-if="can_edit">
                                                <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#uploadModal">
                                                    <i class="fa fa-upload"></i> Upload File
                                                </button>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <t t-if="attachments">
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Filename</th>
                                                        <th>Type</th>
                                                        <th>Size</th>
                                                        <th>Uploaded</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="attachments" t-as="att">
                                                        <tr>
                                                            <td><strong><t t-esc="att.name"/></strong></td>
                                                            <td><t t-esc="att.mimetype or 'Unknown'"/></td>
                                                            <td><t t-esc="'%.2f KB' % (att.file_size / 1024) if att.file_size else 'Unknown'"/></td>
                                                            <td><t t-esc="att.create_date.strftime('%Y-%m-%d') if att.create_date else 'Unknown'"/></td>
                                                            <td>
                                                                <a t-attf-href="/web/content/#{att.id}?download=true" class="btn btn-sm btn-primary">
                                                                    <i class="fa fa-download"></i> Download
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <div class="alert alert-info">
                                            <i class="fa fa-info-circle"></i> No files attached yet. Click "Upload File" to add attachments.
                                        </div>
                                    </t>
                                </div>
                            </div>
                            
                            <!-- Quick Actions -->
                            <div class="card shadow-sm">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="fa fa-bolt"></i> Quick Actions</h5>
                                </div>
                                <div class="card-body">
                                    <a href="/my/inventory/documents" class="btn btn-secondary">
                                        <i class="fa fa-arrow-left"></i> Back to Documents
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Edit Document Modal -->
                <t t-if="can_edit">
                    <div class="modal fade" id="editDocModal" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Edit Document</h5>
                                    <button type="button" class="close" data-dismiss="modal">&#215;</button>
                                </div>
                                <form t-attf-action="/my/inventory/document/#{document.id}/edit" method="POST">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label>Document Name *</label>
                                            <input type="text" class="form-control" name="name" t-att-value="document.name" required="required"/>
                                        </div>
                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea class="form-control" name="description" rows="3"><t t-esc="document.description"/></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>File Folder</label>
                                            <select class="form-control" name="file_id">
                                                <option value="">-- Select File --</option>
                                                <t t-foreach="files" t-as="file">
                                                    <option t-att-value="file.id" t-att-selected="'selected' if file.id == document.file_id.id else None">
                                                        <t t-esc="file.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Department</label>
                                            <select class="form-control" name="department_id">
                                                <option value="">-- Select Department --</option>
                                                <t t-foreach="departments" t-as="dept">
                                                    <option t-att-value="dept.id" t-att-selected="'selected' if dept.id == document.department_id.id else None">
                                                        <t t-esc="dept.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </t>
                
                <!-- Upload File Modal -->
                <t t-if="can_edit">
                    <div class="modal fade" id="uploadModal" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Upload File Attachment</h5>
                                    <button type="button" class="close" data-dismiss="modal">&#215;</button>
                                </div>
                                <form t-attf-action="/my/inventory/document/#{document.id}/upload" method="POST" enctype="multipart/form-data">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label>Select File</label>
                                            <input type="file" class="form-control-file" name="file" required="required"/>
                                            <small class="form-text text-muted">
                                                Upload PDF, images, or other document files
                                            </small>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Upload</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </t>
                
                <!-- Delete JavaScript -->
                <script type="text/javascript">
                    function deleteDocument() {
                        if (confirm('Are you sure you want to archive this document? This action can be reversed by an administrator.')) {
                            $.ajax({
                                url: '/my/inventory/document/<t t-esc="document.id"/>/delete',
                                type: 'POST',
                                contentType: 'application/json',
                                data: JSON.stringify({}),
                                success: function(result) {
                                    if (result.success) {
                                        window.location.href = '/my/inventory/documents?deleted=success';
                                    } else {
                                        alert('Error: ' + result.error);
                                    }
                                },
                                error: function(xhr) {
                                    alert('Error deleting document: ' + xhr.responseText);
                                }
                            });
                        }
                    }
                </script>
            </t>
        </template>
    </data>
</odoo>
