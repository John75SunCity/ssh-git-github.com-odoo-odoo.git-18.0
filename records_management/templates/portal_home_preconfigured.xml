<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- ================================================================== -->
    <!-- PRE-CONFIGURED PORTAL HOME - SHOWS ALL FEATURES                   -->
    <!-- Even when user has no data yet                                     -->
    <!-- ================================================================== -->

    <template id="portal_my_home_preconfigured" name="Records Management Portal Home (Pre-configured)" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <!-- Records Management Portal Features Always Enabled -->

            <div class="o_portal_sidebar_section mb-4">
                <h4 class="mb-3">
                    <i class="fa fa-archive"/> Records Management
                </h4>
                <t t-set="dashboard_cards" t-value="portal_dashboard_cards or []"/>
                <t t-foreach="dashboard_cards" t-as="card">
                    <div class="card mb-3" t-attf-class="card mb-3 #{'border-info' if card.get('key') == 'help' else ''}">
                        <div class="card-body">
                            <h5 class="card-title">
                                <t t-if="card.get('icon_class')">
                                    <i t-att-class="card['icon_class']"/>
                                </t>
                                <t t-esc="card['title']"/>
                            </h5>
                            <p class="card-text text-muted small">
                                <t t-esc="card['description']"/>
                            </p>
                            <t t-if="card['type'] == 'summary'">
                                <t t-set="badge" t-value="card.get('badge')"/>
                                <t t-set="primary_button" t-value="(card.get('buttons') or []) and card.get('buttons')[0]"/>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge badge-info" t-if="badge and badge.get('value')">
                                        <t t-esc="badge['value']"/> <t t-esc="badge['label']"/>
                                    </span>
                                    <span class="badge badge-secondary" t-elif="badge">
                                        <t t-esc="badge['empty_label']"/>
                                    </span>
                                    <a t-if="primary_button" t-att-href="primary_button['url']" t-att-class="primary_button['classes']">
                                        <t t-if="primary_button.get('icon_class')">
                                            <i t-att-class="primary_button['icon_class']"/>
                                        </t>
                                        <t t-esc="primary_button['label']"/>
                                    </a>
                                </div>
                            </t>
                            <t t-if="card['type'] == 'button_group'">
                                <div class="btn-group-vertical w-100 mt-2">
                                    <t t-foreach="card.get('buttons', [])" t-as="button">
                                        <a t-att-href="button['url']" t-att-class="button['classes']">
                                            <t t-if="button.get('icon_class')">
                                                <i t-att-class="button['icon_class']"/>
                                            </t>
                                            <t t-esc="button['label']"/>
                                        </a>
                                    </t>
                                </div>
                            </t>
                        </div>
                    </div>
                </t>

            </div>
        </xpath>
    </template>

    <!-- Empty State Messages for Each Section -->
    <template id="portal_empty_state_inventory" name="Empty Inventory State">
        <div class="alert alert-info text-center">
            <i class="fa fa-inbox fa-3x mb-3"/>
            <h4>No Inventory Yet</h4>
            <p>Your containers and documents will appear here once we start storing them for you.</p>
            <a href="/my/request/new/pickup" class="btn btn-primary">
                <i class="fa fa-truck"/> Schedule a Pickup
            </a>
        </div>
    </template>

    <template id="portal_empty_state_work_orders" name="Empty Work Orders State">
        <div class="alert alert-info text-center">
            <i class="fa fa-tasks fa-3x mb-3"/>
            <h4>No Work Orders</h4>
            <p>Service activities and work orders will be displayed here.</p>
            <a href="/my/home" class="btn btn-primary">
                <i class="fa fa-home"/> Back to Dashboard
            </a>
        </div>
    </template>

    <template id="portal_empty_state_certificates" name="Empty Certificates State">
        <div class="alert alert-info text-center">
            <i class="fa fa-certificate fa-3x mb-3"/>
            <h4>No Certificates Available</h4>
            <p>Destruction certificates will appear here after completed shredding services.</p>
            <a href="/my/request/new/destruction" class="btn btn-danger">
                <i class="fa fa-fire"/> Request Destruction Service
            </a>
        </div>
    </template>

    </data>
</odoo>
