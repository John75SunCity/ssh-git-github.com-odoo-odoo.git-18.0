<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ================================================================== -->
        <!-- CONSOLIDATED PORTAL MENU STRUCTURE                                -->
        <!-- Based on Implementation Roadmap Section 2.2                        -->
        <!-- Groups 55+ routes into logical, customer-friendly categories       -->
        <!-- ================================================================== -->

        <template id="portal_consolidated_navigation" name="Consolidated Portal Navigation" inherit_id="portal.portal_layout">
            <!-- Replace the portal submenu with our consolidated navigation -->
            <xpath expr="//div[@id='o_portal_navbar_content']//ul" position="replace">
                <ul class="navbar-nav flex-row flex-wrap ms-md-auto">

                    <!-- ðŸ  DASHBOARD -->
                    <li class="nav-item">
                        <a t-attf-class="nav-link #{page_name == 'home' and 'active' or ''}"
                           href="/my/home">
                            <i class="fa fa-home me-1"/>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    <!-- ðŸ“¦ PHYSICAL INVENTORY -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false"
                           t-attf-class="nav-link dropdown-toggle #{page_name in ['inventory', 'containers', 'files', 'documents', 'barcode'] and 'active' or ''}">
                            <i class="fa fa-box me-1"/>
                            <span>Physical Inventory</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/my/inventory">
                                    <i class="fa fa-th-large me-2"/>
                                    All Inventory (Dashboard)
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"/></li>
                            <li>
                                <a class="dropdown-item" href="/my/containers">
                                    <i class="fa fa-archive me-2"/>
                                    Storage Containers
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/documents">
                                    <i class="fa fa-folder me-2"/>
                                    File Folders
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/inventory/documents">
                                    <i class="fa fa-file-text me-2"/>
                                    Physical Documents
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"/></li>
                            <li>
                                <a class="dropdown-item" href="/my/inventory/advanced_search">
                                    <i class="fa fa-search me-2"/>
                                    Advanced Search
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/barcode/main">
                                    <i class="fa fa-barcode me-2"/>
                                    Barcode Operations
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- ðŸ”§ SERVICE REQUESTS -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false"
                           t-attf-class="nav-link dropdown-toggle #{page_name in ['requests', 'request_create'] and 'active' or ''}">
                            <i class="fa fa-tasks me-1"/>
                            <span>Service Requests</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/my/requests">
                                    <i class="fa fa-list me-2"/>
                                    My Requests
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"/></li>
                            <li>
                                <a class="dropdown-item" href="/my/request/new/retrieval">
                                    <i class="fa fa-truck me-2"/>
                                    Request Retrieval
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/request/new/destruction">
                                    <i class="fa fa-fire me-2"/>
                                    Request Destruction
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/request/new/pickup">
                                    <i class="fa fa-calendar me-2"/>
                                    Request Pickup
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/request/new/scanning">
                                    <i class="fa fa-scanner me-2"/>
                                    Request Scanning
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- ðŸ”¥ DESTRUCTION SERVICES -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false"
                           t-attf-class="nav-link dropdown-toggle #{page_name in ['destruction', 'certificates', 'custody'] and 'active' or ''}">
                            <i class="fa fa-fire me-1"/>
                            <span>Destruction</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/my/destruction">
                                    <i class="fa fa-list-alt me-2"/>
                                    Destruction Requests
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/destruction/pending">
                                    <i class="fa fa-clock-o me-2"/>
                                    Pending Approvals
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/certificates">
                                    <i class="fa fa-certificate me-2"/>
                                    Destruction Certificates
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/custody/chain">
                                    <i class="fa fa-link me-2"/>
                                    Chain of Custody
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- ðŸ’° BILLING & INVOICES -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false"
                           t-attf-class="nav-link dropdown-toggle #{page_name in ['invoices', 'billing'] and 'active' or ''}">
                            <i class="fa fa-dollar me-1"/>
                            <span>Billing</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/my/invoices">
                                    <i class="fa fa-file-invoice-dollar me-2"/>
                                    Current Invoices
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/invoices/history">
                                    <i class="fa fa-history me-2"/>
                                    Payment History
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/billing/rates">
                                    <i class="fa fa-tags me-2"/>
                                    Rate Information
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/billing/statements">
                                    <i class="fa fa-download me-2"/>
                                    Download Statements
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- ðŸ“Š REPORTS & ANALYTICS -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false"
                           t-attf-class="nav-link dropdown-toggle #{page_name in ['reports', 'analytics'] and 'active' or ''}">
                            <i class="fa fa-chart-bar me-1"/>
                            <span>Reports</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/my/reports">
                                    <i class="fa fa-file-chart-line me-2"/>
                                    Inventory Reports
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/reports/activity">
                                    <i class="fa fa-activity me-2"/>
                                    Activity Reports
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/reports/compliance">
                                    <i class="fa fa-shield-check me-2"/>
                                    Compliance Reports
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/reports/export">
                                    <i class="fa fa-file-export me-2"/>
                                    Export Data
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- ðŸ’¬ FEEDBACK & SUPPORT -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false"
                           t-attf-class="nav-link dropdown-toggle #{page_name in ['feedback', 'support'] and 'active' or ''}">
                            <i class="fa fa-comment me-1"/>
                            <span>Support</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/my/feedback">
                                    <i class="fa fa-comment-dots me-2"/>
                                    Submit Feedback
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/feedback/history">
                                    <i class="fa fa-history me-2"/>
                                    Feedback History
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/help">
                                    <i class="fa fa-question-circle me-2"/>
                                    Help Center
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- âš™ï¸ SETTINGS -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false"
                           t-attf-class="nav-link dropdown-toggle #{page_name in ['settings', 'account'] and 'active' or ''}">
                            <i class="fa fa-cog me-1"/>
                            <span>Settings</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/my/account">
                                    <i class="fa fa-user me-2"/>
                                    My Profile
                                </a>
                            </li>
                            <li t-if="request.env.user.has_group('records_management.group_portal_company_admin')">
                                <a class="dropdown-item" href="/my/users">
                                    <i class="fa fa-users me-2"/>
                                    Department Users
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/my/notifications">
                                    <i class="fa fa-bell me-2"/>
                                    Notification Preferences
                                </a>
                            </li>
                            <li t-if="request.env.user.has_group('records_management.group_portal_department_admin')">
                                <a class="dropdown-item" href="/my/access">
                                    <i class="fa fa-key me-2"/>
                                    Access Management
                                </a>
                            </li>
                        </ul>
                    </li>

                </ul>
            </xpath>
        </template>

        <!-- Mobile-Friendly Bottom Navigation (Optional Enhancement) -->
        <template id="portal_mobile_bottom_nav" name="Mobile Bottom Navigation">
            <div class="d-md-none fixed-bottom bg-white border-top shadow-lg">
                <div class="row g-0 text-center small">
                    <div class="col">
                        <a href="/my/home" class="d-block py-2 text-decoration-none">
                            <i class="fa fa-home d-block mb-1"/>
                            <span>Home</span>
                        </a>
                    </div>
                    <div class="col">
                        <a href="/my/inventory" class="d-block py-2 text-decoration-none">
                            <i class="fa fa-box d-block mb-1"/>
                            <span>Inventory</span>
                        </a>
                    </div>
                    <div class="col">
                        <a href="/my/requests" class="d-block py-2 text-decoration-none">
                            <i class="fa fa-tasks d-block mb-1"/>
                            <span>Requests</span>
                        </a>
                    </div>
                    <div class="col">
                        <a href="/my/certificates" class="d-block py-2 text-decoration-none">
                            <i class="fa fa-certificate d-block mb-1"/>
                            <span>Certs</span>
                        </a>
                    </div>
                    <div class="col">
                        <a href="/my/account" class="d-block py-2 text-decoration-none">
                            <i class="fa fa-cog d-block mb-1"/>
                            <span>Settings</span>
                        </a>
                    </div>
                </div>
            </div>
        </template>

    </data>
</odoo>
