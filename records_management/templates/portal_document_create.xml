<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Portal Document Create Form -->
        <template id="portal_document_create" name="Create New Document">
            <t t-call="portal.portal_layout">
                <t t-set="title">Create New Document</t>
                
                <div class="container my-4">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="card shadow">
                                <div class="card-header bg-warning text-dark">
                                    <h3 class="mb-0">
                                        <i class="fa fa-file-text"></i> Create New Document
                                    </h3>
                                </div>
                                
                                <div class="card-body">
                                    <form action="/my/inventory/documents/create" method="POST">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        
                                        <div class="form-group">
                                            <label for="name">Document Name *</label>
                                            <input type="text" class="form-control" id="name" name="name" required="required" 
                                                   placeholder="Enter document name"/>
                                            <small class="form-text text-muted">
                                                Enter a descriptive name for this document
                                            </small>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="file_id">File Folder *</label>
                                            <select class="form-control" id="file_id" name="file_id" required="required">
                                                <option value="">-- Select File Folder --</option>
                                                <t t-foreach="files" t-as="file">
                                                    <option t-att-value="file.id">
                                                        <t t-esc="file.name"/>
                                                        <t t-if="file.container_id"> (Container: <t t-esc="file.container_id.name or file.container_id.container_number"/>)</t>
                                                    </option>
                                                </t>
                                            </select>
                                            <small class="form-text text-muted">
                                                Select the file folder where this document belongs
                                            </small>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="department_id">Department *</label>
                                            <select class="form-control" id="department_id" name="department_id" required="required">
                                                <option value="">-- Select Department --</option>
                                                <t t-foreach="departments" t-as="dept">
                                                    <option t-att-value="dept.id"><t t-esc="dept.name"/></option>
                                                </t>
                                            </select>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="document_type_id">Document Type</label>
                                            <select class="form-control" id="document_type_id" name="document_type_id">
                                                <option value="">-- Select Type (Optional) --</option>
                                                <t t-foreach="document_types" t-as="doctype">
                                                    <option t-att-value="doctype.id"><t t-esc="doctype.name"/></option>
                                                </t>
                                            </select>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="state">Document State</label>
                                            <select class="form-control" id="state" name="state">
                                                <option value="draft" selected="selected">Draft</option>
                                                <option value="processed">Processed</option>
                                                <option value="approved">Approved</option>
                                                <option value="archived">Archived</option>
                                            </select>
                                        </div>
                                        
                                        <!-- Digital Scan Fields (if applicable) -->
                                        <div class="card mb-3">
                                            <div class="card-header bg-light">
                                                <h6 class="mb-0"><i class="fa fa-scanner"></i> Digital Scan Information (Optional)</h6>
                                            </div>
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="scan_date">Scan Date</label>
                                                            <input type="datetime-local" class="form-control" id="scan_date" name="scan_date"/>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="file_format">File Format</label>
                                                            <select class="form-control" id="file_format" name="file_format">
                                                                <option value="">-- Select Format --</option>
                                                                <option value="pdf" selected="selected">PDF</option>
                                                                <option value="jpg">JPEG</option>
                                                                <option value="png">PNG</option>
                                                                <option value="tiff">TIFF</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label for="resolution">Resolution (DPI)</label>
                                                            <input type="number" class="form-control" id="resolution" name="resolution" 
                                                                   placeholder="300" value="300" min="72" max="1200"/>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label for="file_size">File Size (MB)</label>
                                                            <input type="number" class="form-control" id="file_size" name="file_size" 
                                                                   placeholder="0.00" step="0.01" min="0"/>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label for="scan_quality">Scan Quality</label>
                                                            <select class="form-control" id="scan_quality" name="scan_quality">
                                                                <option value="">-- Select Quality --</option>
                                                                <option value="low">Low</option>
                                                                <option value="medium">Medium</option>
                                                                <option value="high" selected="selected">High</option>
                                                                <option value="premium">Premium</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <div class="form-group">
                                                    <label for="scanner_id">Scanner ID/Name</label>
                                                    <input type="text" class="form-control" id="scanner_id" name="scanner_id" 
                                                           placeholder="Scanner identifier (optional)"/>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="description">Description</label>
                                            <textarea class="form-control" id="description" name="description" rows="3" 
                                                      placeholder="Optional: Describe this document"></textarea>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="notes">Internal Notes</label>
                                            <textarea class="form-control" id="notes" name="notes" rows="2" 
                                                      placeholder="Optional: Additional notes for internal use"></textarea>
                                        </div>
                                        
                                        <div class="form-group mt-4">
                                            <button type="submit" class="btn btn-warning btn-lg text-dark">
                                                <i class="fa fa-plus-circle"></i> Create Document
                                            </button>
                                            <a href="/my/inventory/documents" class="btn btn-secondary btn-lg ml-2">
                                                <i class="fa fa-times"></i> Cancel
                                            </a>
                                        </div>
                                    </form>
                                    
                                    <!-- Help Section -->
                                    <div class="mt-4 pt-3 border-top">
                                        <h6 class="text-muted">
                                            <i class="fa fa-question-circle"></i> Quick Help
                                        </h6>
                                        <ul class="small text-muted">
                                            <li><strong>Document Name:</strong> Enter a clear, descriptive name</li>
                                            <li><strong>File Folder:</strong> Select the file folder this document belongs to</li>
                                            <li><strong>Department:</strong> Assign to appropriate department</li>
                                            <li><strong>Type:</strong> Optional categorization for reporting</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
