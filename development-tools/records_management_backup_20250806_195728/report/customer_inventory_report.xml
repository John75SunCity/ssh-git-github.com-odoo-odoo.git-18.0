<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define the report action for portal users -->
    <record id="action_customer_inventory_report" model="ir.actions.report">
        <field name="name">My Inventory</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">records_management.customer_inventory_report</field>
    </record>

    <!-- Define the QWeb template for the inventory report -->
    <template id="customer_inventory_report">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="partner">
                        <!-- Header with customer details -->
                        <h1>Inventory for <t t-esc="partner.name"/></h1>
                        <p>
                            Address: 
                            <t t-esc="partner.street"/> 
                            <t t-esc="partner.city"/>, 
                            <t t-esc="partner.state_id.name"/> 
                            <t t-esc="partner.zip"/>
                        </p>
                        <!-- Fetch and display inventory data -->
                        <t t-set="quants" t-value="env['stock.quant'].search([('lot_id.customer_id', '=', partner.id)])"/>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Lot/Serial Number</th>
                                    <th>Location</th>
                                    <th>Quantity</th>
                                    <th>Reserved</th>
                                    <th>Available</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="quants" t-as="quant">
                                    <tr>
                                        <td><t t-esc="quant.product_id.name"/></td>
                                        <td><t t-esc="quant.lot_id.name"/></td>
                                        <td><t t-esc="quant.location_id.name"/></td>
                                        <td><t t-esc="quant.quantity"/></td>
                                        <td><t t-esc="quant.reserved_quantity"/></td>
                                        <td><t t-esc="quant.quantity - quant.reserved_quantity"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
