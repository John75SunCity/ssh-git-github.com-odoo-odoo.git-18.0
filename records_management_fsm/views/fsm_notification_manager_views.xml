<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="fsm_notification_manager_view_tree" model="ir.ui.view">
            <field name="name">fsm.notification.manager.view.tree</field>
            <field name="model">fsm.notification.manager</field>
            <field name="type">list</field>
        <field name="arch" type="xml">
                <list string="FSM Notification Manager">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="fsm_notification_manager_view_form" model="ir.ui.view">
            <field name="name">fsm.notification.manager.view.form</field>
            <field name="model">fsm.notification.manager</field>
            <field name="type">form</field>
        <field name="arch" type="xml">
                <form string="FSM Notification Manager">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="fsm_notification_manager_view_search" model="ir.ui.view">
            <field name="name">fsm.notification.manager.view.search</field>
            <field name="model">fsm.notification.manager</field>
            <field name="type">search</field>
        <field name="arch" type="xml">
                <search string="Search FSM Notification Manager">
                    <!-- Add search fields here -->
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_fsm_notification_manager" model="ir.actions.act_window">
            <field name="name">FSM Notification Manager</field>
            <field name="res_model">fsm.notification.manager</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu -->
        <!--
        <menuitem
            id="menu_fsm_notification_manager"
            name="FSM Notification Manager"
            action="action_fsm_notification_manager"
            parent="REPLACE_WITH_PARENT_MENU_ID"
            sequence="10"/>
        -->

    </data>
</odoo>
