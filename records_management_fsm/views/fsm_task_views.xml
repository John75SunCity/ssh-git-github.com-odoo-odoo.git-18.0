<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<!-- Kanban View - FSM Task Dashboard -->
    <record id="fsm_task_view_kanban" model="ir.ui.view">
        <field name="name">fsm.task.view.kanban</field>
        <field name="model">fsm.task</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <kanban default_group_by="task_status" class="o_kanban_fsm_task_dashboard">
                <field name="name"/>
                <field name="task_type"/>
                <field name="task_status"/>
                <field name="assigned_technician"/>
                <field name="scheduled_date"/>
                <field name="priority"/>
                <field name="partner_id"/>
                <field name="location_address"/>
<field name="container_count"/>
<field name="naid_compliant"/>

                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
<strong>üîß    <field name="name"/>
</strong>
                                <span class="float-end">
                                    <field name="priority" widget="priority"/>
<t t-if="record.naid_compliant.raw_value">
    <span class="badge badge-success ms-1">NAID</span>
</t>
                                </span>
<div class="text-muted">üë§    <field name="partner_id"/>
</div>
                            </div>
<div class="o_kanban_card_content" t-att-title="record.display_name.raw_value" t-att-aria-label="record.display_name.raw_value" role="group">
                                <div class="mb-2">
<strong>Type:</strong>
<field name="task_type"/>
<br/>
<strong>Technician:</strong>
<field name="assigned_technician"/>
<br/>
<strong>Scheduled:</strong>
<field name="scheduled_date" widget="datetime"/>
<br/>
<t t-if="record.container_count.raw_value > 0">
    <strong>Containers:</strong>
    <field name="container_count"/>
</t>
                                </div>
                                <div class="text-muted small">
üìç<field name="location_address"/>

                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

<!-- Tree View - FSM Task List -->
        <!-- Tree View -->
    <record id="fsm_task_view_tree" model="ir.ui.view">
        <field name="name">fsm.task.view.tree</field>
        <field name="model">fsm.task</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
<tree decoration-danger="priority=='high'" decoration-warning="priority=='medium'" decoration-success="task_status=='completed'" decoration-info="naid_compliant==True">
                <field name="name"/>
                <field name="task_type"/>
                <field name="partner_id"/>
                <field name="assigned_technician" widget="many2one_avatar_user"/>
                <field name="scheduled_date" widget="datetime"/>
                <field name="priority" widget="priority"/>
                <field name="task_status" widget="badge"/>
<field name="estimated_duration" widget="float_time"/>
<field name="container_count"/>
<field name="naid_compliant" widget="boolean"/>
<field name="total_cubic_feet"/>

            </tree>
        </field>
    </record>

<!-- Form View - FSM Task Details -->
        <!-- Form View -->
    <record id="fsm_task_view_form" model="ir.ui.view">
        <field name="name">fsm.task.view.form</field>
        <field name="model">fsm.task</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <header>
<button name="action_start_task" type="object" string="Start Task" invisible="task_status != 'scheduled'" class="btn-primary"/>

<button name="action_complete_task" type="object" string="Complete" invisible="task_status != 'in_progress'" class="btn-success"/>

<button name="action_reschedule" type="object" string="Reschedule" invisible="task_status not in ['scheduled', 'in_progress']" class="btn-warning"/>

<button name="action_create_naid_audit" type="object" string="Create NAID Audit" invisible="naid_compliant == False" class="btn-info"/>


                    <field name="task_status" widget="statusbar" statusbar_visible="scheduled,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_work_orders" icon="fa-wrench">
                            <div class="o_stat_info">
<field name="work_order_count" string="Work Orders"/>

                                <span class="o_stat_text">Work Orders</span>
                            </div>
                        </button>
<button class="oe_stat_button" type="object" name="action_view_containers" icon="fa-archive" invisible="container_count == 0">
    <div class="o_stat_info">
        <field name="container_count" string="Containers"/>
        <span class="o_stat_text">Containers</span>
    </div>
</button>
                    </div>

                    <div class="oe_title">
                        <h1>
<field name="name" placeholder="Task Name"/>

                        </h1>
                    </div>

                    <group>
<group string="Task Information">
                            <field name="task_type"/>
                            <field name="partner_id"/>
                            <field name="assigned_technician"/>
                            <field name="priority"/>
<field name="company_id" groups="base.group_multi_company"/>

                        </group>
<group string="Scheduling">
                            <field name="scheduled_date"/>
<field name="estimated_duration" widget="float_time"/>
<field name="actual_start_time" readonly="task_status in ['draft', 'scheduled']"/>

<field name="actual_end_time" readonly="task_status != 'completed'"/>


                        </group>
                    </group>

                    <group string="Location Details">
<field name="location_address" nolabel="1" placeholder="Service location address"/>

                        <field name="service_location"/>
<field name="access_instructions" placeholder="Special access instructions or notes"/>
</group>

<!-- Records Management Integration -->
<group string="Records Management" invisible="container_count == 0">
<group>
    <field name="container_count" readonly="1"/>
    <field name="total_cubic_feet" readonly="1"/>
    <field name="total_weight" readonly="1"/>
</group>
<group>
    <field name="naid_compliant"/>
<field name="chain_of_custody_required" invisible="naid_compliant == False"/>

<field name="destruction_certificate_required" invisible="naid_compliant == False"/>

</group>
                    </group>

                    <notebook>
                        <page string="Task Details">
                            <field name="description" nolabel="1" placeholder="Task description and requirements..."/>
                            <group>
<field name="required_skills" widget="many2many_tags" placeholder="Required technician skills"/>
<field name="required_tools" widget="many2many_tags" placeholder="Required tools and equipment"/>
<field name="special_requirements" placeholder="Special requirements or precautions"/>

                            </group>
                        </page>

                        <page string="Work Orders">
<field name="work_order_ids" mode="tree" readonly="0">
    <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="work_order_type"/>
<field name="status" widget="badge"/>

                                    <field name="assigned_date"/>
<field name="completion_date"/>

                                </tree>
                            </field>
                        </page>
<page string="Containers" invisible="container_count == 0">
    <field name="container_ids" mode="tree" readonly="1">
        <list>
            <field name="name"/>
            <field name="container_type"/>
            <field name="partner_id"/>
            <field name="location_id"/>
            <field name="volume_cf"/>
            <field name="weight_lbs"/>
            <field name="naid_compliant" widget="boolean"/>
        </list>
    </field>
</page>

                        <page string="Completion Notes">
                            <group>
<field name="completion_notes" placeholder="Task completion notes and observations..."/>
<field name="customer_satisfaction_rating" widget="priority"/>
<field name="follow_up_required"/>
</group>
<group string="Signatures &amp; Documentation">
                                <field name="customer_signature" widget="signature"/>
<field name="technician_signature" widget="signature"/>

                                <field name="photos" widget="many2many_binary"/>
                            </group>
                        </page>
<page string="NAID Compliance" invisible="naid_compliant == False">
    <group>
        <field name="naid_audit_log_ids" mode="tree" readonly="1">
            <list>
                <field name="event_type"/>
                <field name="event_description"/>
                <field name="event_timestamp"/>
                <field name="user_id"/>
                <field name="compliance_verified" widget="boolean"/>
            </list>
        </field>
    </group>
</page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

<!-- Search View - FSM Task Filters -->
        <!-- Search View -->
    <record id="fsm_task_view_search" model="ir.ui.view">
        <field name="name">fsm.task.view.search</field>
        <field name="model">fsm.task</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
<field name="name" string="Task Name"/>
<field name="partner_id" string="Customer"/>
<field name="assigned_technician" string="Technician"/>
<field name="task_type" string="Task Type"/>
<field name="location_address" string="Location"/>


<!-- Status Filters -->
                <filter string="Scheduled" name="scheduled" domain="[('task_status', '=', 'scheduled')]"/>
                <filter string="In Progress" name="in_progress" domain="[('task_status', '=', 'in_progress')]"/>
<filter string="Completed" name="completed" domain="[('task_status', '=', 'completed')]"/>

<!-- Priority Filters -->
                <filter string="High Priority" name="high_priority" domain="[('priority', '=', 'high')]"/>
<filter string="Medium Priority" name="medium_priority" domain="[('priority', '=', 'medium')]"/>

<!-- Date Filters -->
<filter string="Today" name="today" domain="[('scheduled_date', '&gt;=', context_today().strftime('%Y-%m-%d')), ('scheduled_date', '&lt;', (context_today() + datetime.timedelta(days=1)).strftime('%Y-%m-%d'))]"/>
<filter string="This Week" name="this_week" domain="[('scheduled_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('scheduled_date', '&lt;', (context_today() - datetime.timedelta(days=context_today().weekday()) + datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
<filter string="Overdue" name="overdue" domain="[('scheduled_date', '&lt;', context_today().strftime('%Y-%m-%d')), ('task_status', '!=', 'completed')]"/>

<!-- Records Management Filters -->
<separator/>
<filter string="NAID Compliant" name="naid_compliant" domain="[('naid_compliant', '=', True)]"/>
<filter string="Has Containers" name="has_containers" domain="[('container_count', '>', 0)]"/>
<filter string="Chain of Custody Required" name="custody_required" domain="[('chain_of_custody_required', '=', True)]"/>


<!-- Personal Filters -->
                <separator/>
                <filter string="My Tasks" name="my_tasks" domain="[('assigned_technician', '=', uid)]"/>

                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'task_status'}"/>
                    <filter string="Technician" name="group_technician" context="{'group_by': 'assigned_technician'}"/>
<filter string="Task Type" name="group_type" context="{'group_by': 'task_type'}"/>

                    <filter string="Customer" name="group_customer" context="{'group_by': 'partner_id'}"/>
<filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
<filter string="Scheduled Date" name="group_date" context="{'group_by': 'scheduled_date'}"/>

                </group>
            </search>
        </field>
    </record>

<!-- Calendar View - FSM Task Schedule -->
    <record id="fsm_task_view_calendar" model="ir.ui.view">
        <field name="name">fsm.task.view.calendar</field>
        <field name="model">fsm.task</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
<calendar date_start="scheduled_date" date_stop="actual_end_time" color="assigned_technician" quick_add="false" mode="month">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="assigned_technician"/>
                <field name="task_status"/>
<field name="priority"/>
<field name="estimated_duration"/>

            </calendar>
        </field>
    </record>

<!-- Action Window - FSM Tasks -->
        <!-- Action -->
    <record id="fsm_task_action" model="ir.actions.act_window">
        <field name="name">FSM Tasks</field>
        <field name="res_model">fsm.task</field>
        <field name="view_mode">list,form</field>
<field name="context">{'search_default_scheduled': 1, 'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                üîß Create your first field service task!
            </p>
<p>
                Schedule and manage field service operations with mobile technician support.
    <br/>
                Integrated with Records Management for container handling and NAID compliance.
</p>
        </field>
    </record>
</data>

</odoo>
