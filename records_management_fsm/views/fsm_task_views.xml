<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<!-- Kanban View - FSM Task Dashboard -->
    <record id="fsm_task_view_kanban" model="ir.ui.view">
        <field name="name">fsm.task.view.kanban</field>
        <field name="model">fsm.task</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_fsm_task_dashboard">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="scheduled_date_start"/>
                <field name="priority"/>
                <field name="stage_id"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <strong>ðŸ”§ <field name="name"/></strong>
                                <span class="float-end">
                                    <field name="priority" widget="priority"/>
                                </span>
                                <div class="text-muted">ðŸ‘¤ <field name="partner_id"/></div>
                            </div>
                            <div class="o_kanban_card_content" role="group">
                                <div class="mb-2">
                                    <strong>Technician:</strong>
                                    <field name="user_id"/>
                                    <br/>
                                    <strong>Scheduled:</strong>
                                    <field name="scheduled_date_start" widget="datetime"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

<!-- Tree View - FSM Task List -->
        <!-- Tree View -->
    <record id="fsm_task_view_tree" model="ir.ui.view">
        <field name="name">fsm.task.view.tree</field>
        <field name="model">fsm.task</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="scheduled_date_start" widget="datetime"/>
                <field name="priority" widget="priority"/>
                <field name="stage_id"/>
            </list>
        </field>
    </record>

<!-- Form View - FSM Task Details -->
        <!-- Form View -->
    <record id="fsm_task_view_form" model="ir.ui.view">
        <field name="name">fsm.task.view.form</field>
        <field name="model">fsm.task</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Task Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Task Information">
                            <field name="partner_id"/>
                            <field name="user_id"/>
                            <field name="priority"/>
                        </group>
                        <group string="Scheduling">
                            <field name="scheduled_date_start"/>
                            <field name="scheduled_date_end"/>
                        </group>
                    </group>
                    <group>
                        <field name="stage_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<!-- Search View - FSM Task Filters -->
        <!-- Search View -->
    <record id="fsm_task_view_search" model="ir.ui.view">
        <field name="name">fsm.task.view.search</field>
        <field name="model">fsm.task</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Task Name"/>
                <field name="partner_id" string="Customer"/>
                <field name="user_id" string="Technician"/>
                <group expand="0" string="Group By">
                    <filter string="Stage" name="group_stage" context="{'group_by': 'stage_id'}"/>
                    <filter string="Technician" name="group_technician" context="{'group_by': 'user_id'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Scheduled Start" name="group_date" context="{'group_by': 'scheduled_date_start'}"/>
                </group>
            </search>
        </field>
    </record>

<!-- Calendar View - FSM Task Schedule -->
    <record id="fsm_task_view_calendar" model="ir.ui.view">
        <field name="name">fsm.task.view.calendar</field>
        <field name="model">fsm.task</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar date_start="scheduled_date_start" date_stop="scheduled_date_end" color="user_id" quick_add="false" mode="month">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="priority"/>
            </calendar>
        </field>
    </record>

<!-- Action Window - FSM Tasks -->
        <!-- Action -->
    <record id="fsm_task_action" model="ir.actions.act_window">
        <field name="name">FSM Tasks</field>
        <field name="res_model">fsm.task</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ðŸ”§ Create your first field service task!
            </p>
            <p>
                Schedule and manage field service operations with mobile technician support.
    <br/>
                Integrated with Records Management for container handling and NAID compliance.
            </p>
        </field>
    </record>
</data>

</odoo>
