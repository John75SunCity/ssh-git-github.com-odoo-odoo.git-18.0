<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- FSM Task Service Line Views -->

    <!-- Tree View -->
    <record id="fsm_task_service_line_view_tree" model="ir.ui.view">
        <field name="name">fsm.task.service.line.view.tree</field>
        <field name="model">fsm.task.service.line</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <tree string="Service Lines" default_order="task_id, sequence">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="service_type"/>
                <field name="quantity"/>
                <field name="unit_of_measure"/>
                <field name="duration_hours"/>
                <field name="total_price" sum="Total"/>
                <field name="status"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="fsm_task_service_line_view_form" model="ir.ui.view">
        <field name="name">fsm.task.service.line.view.form</field>
        <field name="model">fsm.task.service.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <form string="Service Line">
                <header>
                    <button name="action_start_service" string="Start Service" type="object" class="btn-primary" attrs="{'invisible': [('status', '!=', 'planned')]}"/>
                    <button name="action_complete_service" string="Complete" type="object" class="btn-success" attrs="{'invisible': [('status', '!=', 'in_progress')]}"/>
                    <button name="action_verify_service" string="Verify" type="object" class="btn-info" attrs="{'invisible': [('status', '!=', 'completed')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="planned,in_progress,completed,verified"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="task_id"/>
                            <field name="service_type"/>
                            <field name="service_date"/>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="unit_of_measure"/>
                            <field name="duration_hours"/>
                            <field name="unit_price"/>
                            <field name="total_price"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Service Details">
                            <group>
                                <group>
                                    <field name="location_id"/>
                                    <field name="completion_percentage"/>
                                </group>
                                <group>
                                    <field name="quality_rating"/>
                                    <field name="product_id"/>
                                </group>
                            </group>
                            <group>
                                <field name="equipment_used"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="service_notes" nolabel="1"/>
                            </group>
                            <group>
                                <field name="customer_feedback" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="fsm_task_service_line_view_search" model="ir.ui.view">
        <field name="name">fsm.task.service.line.view.search</field>
        <field name="model">fsm.task.service.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <search string="Search Service Lines">
                <field name="name"/>
                <field name="task_id"/>
                <field name="service_type"/>
                <field name="employee_id"/>
                <separator/>
                <filter name="filter_in_progress" string="In Progress" domain="[('status', '=', 'in_progress')]"/>
                <filter name="filter_completed" string="Completed" domain="[('status', '=', 'completed')]"/>
                <filter name="filter_today" string="Today" domain="[('service_date', '=', today)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_service_type" string="Service Type" context="{'group_by': 'service_type'}"/>
                    <filter name="group_employee" string="Employee" context="{'group_by': 'employee_id'}"/>
                    <filter name="group_status" string="Status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fsm_task_service_line" model="ir.actions.act_window">
        <field name="name">FSM Service Lines</field>
        <field name="res_model">fsm.task.service.line</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No service lines found!
            </p>
            <p>
                Service lines track individual services performed during FSM tasks.
            </p>
        </field>
    </record>
</data>
</odoo>
