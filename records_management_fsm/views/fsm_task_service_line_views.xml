<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- FSM Task Service Line Views -->

    <!-- Tree View -->
    <record id="fsm_task_service_line_view_tree" model="ir.ui.view">
        <field name="name">fsm.task.service.line.view.tree</field>
        <field name="model">fsm.task.service.line</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Service Lines" default_order="task_id, sequence">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="service_type"/>
                <field name="quantity"/>
                <field name="unit_price"/>
                <field name="total_price" sum="Total"/>
                <field name="state" widget="badge"/>
                <field name="customer_approved"/>
                <!-- Removed always-invisible currency_id (monetary widgets reference it implicitly) -->
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="fsm_task_service_line_view_form" model="ir.ui.view">
        <field name="name">fsm.task.service.line.view.form</field>
        <field name="model">fsm.task.service.line</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Service Line">
                <header>
                    <button name="action_request_approval" string="Request Approval" type="object" class="btn-primary" invisible="state not in ['draft']"/>
                    <button name="action_approve_service" string="Approve" type="object" class="btn-success" invisible="state not in ['pending_approval']"/>
                    <button name="action_reject_service" string="Reject" type="object" class="btn-danger" invisible="state not in ['pending_approval']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending_approval,approved,rejected,done,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="service_name"/>
                            <field name="task_id"/>
                            <field name="service_type"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                            <field name="total_price"/>
                            <!-- Removed always-invisible currency_id (used implicitly by monetary computations) -->
                            <field name="customer_approved"/>
                            <field name="approval_method"/>
                            <field name="added_on_site"/>
                            <field name="added_by_id"/>
                            <field name="added_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <group>
                                <field name="description" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="fsm_task_service_line_view_search" model="ir.ui.view">
        <field name="name">fsm.task.service.line.view.search</field>
        <field name="model">fsm.task.service.line</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Service Lines">
                <field name="service_name"/>
                <field name="task_id"/>
                <field name="service_type"/>
                <separator/>
                <filter name="filter_pending_approval" string="Pending Approval" domain="[('state', '=', 'pending_approval')]"/>
                <filter name="filter_approved" string="Approved" domain="[('state', '=', 'approved')]"/>
                <filter name="filter_rejected" string="Rejected" domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_service_type" string="Service Type" context="{'group_by': 'service_type'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_added_by" string="Added By" context="{'group_by': 'added_by_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="fsm_task_service_line_action" model="ir.actions.act_window">
        <field name="name">FSM Task Service Lines</field>
        <field name="res_model">fsm.task.service.line</field>
        <field name="view_mode">list,form</field>
    </record>
</data>
</odoo>
