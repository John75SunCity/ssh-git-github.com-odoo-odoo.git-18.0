{
  "name": "Odoo Development Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "remoteUser": "odoo",
  "mounts": [
    "source=${localWorkspaceFolder}/records_management,target=/workspace/records_management,type=bind"
  ]
}