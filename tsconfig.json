{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["node", "jest"]
  },
  "include": [
    "*.ts",
    "src/**/*",
    "tests/**/*",
    "records_management/static/**/*.js",
    "records_management/static/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "venv",
    ".devcontainer/odoo",
    "**/*.spec.ts"
  ]
}
