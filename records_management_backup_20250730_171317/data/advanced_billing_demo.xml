<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sample Customer Billing Profiles -->
        
        <!-- Monthly Storage + Monthly Service Customer -->
        <record id="billing_profile_monthly_both" model="records.customer.billing.profile">
            <field name="name">Monthly Storage + Service</field>
            <field name="partner_id" ref="base.res_partner_1"/>
            <field name="storage_billing_cycle">monthly</field>
            <field name="service_billing_cycle">monthly</field>
            <field name="storage_bill_in_advance">True</field>
            <field name="storage_advance_months">1</field>
            <field name="billing_day">1</field>
            <field name="auto_generate_storage_invoices">True</field>
            <field name="auto_generate_service_invoices">True</field>
            <field name="invoice_due_days">30</field>
        </record>
        
        <!-- Quarterly Storage + Monthly Service Customer -->
        <record id="billing_profile_quarterly_storage" model="records.customer.billing.profile">
            <field name="name">Quarterly Storage + Monthly Service</field>
            <field name="partner_id" ref="base.res_partner_2"/>
            <field name="storage_billing_cycle">quarterly</field>
            <field name="service_billing_cycle">monthly</field>
            <field name="storage_bill_in_advance">True</field>
            <field name="storage_advance_months">3</field>
            <field name="billing_day">1</field>
            <field name="auto_generate_storage_invoices">True</field>
            <field name="auto_generate_service_invoices">True</field>
            <field name="invoice_due_days">45</field>
        </record>
        
        <!-- Prepaid Storage Customer -->
        <record id="billing_profile_prepaid" model="records.customer.billing.profile">
            <field name="name">Prepaid Storage</field>
            <field name="partner_id" ref="base.res_partner_3"/>
            <field name="storage_billing_cycle">prepaid</field>
            <field name="service_billing_cycle">monthly</field>
            <field name="prepaid_enabled">True</field>
            <field name="prepaid_months">12</field>
            <field name="prepaid_discount_percent">5.0</field>
            <field name="billing_day">1</field>
            <field name="auto_generate_storage_invoices">False</field>
            <field name="auto_generate_service_invoices">True</field>
            <field name="invoice_due_days">30</field>
        </record>
        
        <!-- Billing Contacts for Monthly Customer -->
        <record id="billing_contact_primary" model="records.billing.contact">
            <field name="name">John Doe - Primary</field>
            <field name="email">john.doe@example.com</field>
            <field name="phone">555-1234</field>
            <field name="billing_profile_id" ref="billing_profile_monthly_both"/>
            <field name="receive_storage_invoices">True</field>
            <field name="receive_service_invoices">True</field>
            <field name="receive_statements">True</field>
            <field name="primary_contact">True</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="billing_contact_accounting" model="records.billing.contact">
            <field name="name">Jane Smith - Accounting</field>
            <field name="email">accounting@example.com</field>
            <field name="phone">555-5678</field>
            <field name="billing_profile_id" ref="billing_profile_monthly_both"/>
            <field name="receive_storage_invoices">True</field>
            <field name="receive_service_invoices">True</field>
            <field name="receive_statements">False</field>
            <field name="primary_contact">False</field>
            <field name="sequence">20</field>
        </record>
        
    </data>
</odoo>
