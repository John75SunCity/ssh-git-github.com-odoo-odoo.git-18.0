<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Shredding Base Rates Views -->
        <record id="view_shredding_base_rates_tree" model="ir.ui.view">
            <field name="name">shredding.base.rates.tree</field>
            <field name="model">shredding.base.rates</field>
            <field name="arch" type="xml">
                <tree string="Shredding Base Rates">
                    <field name="name"/>
                    <field name="effective_date"/>
                    <field name="state"/>
                    <field name="external_per_bin_rate"/>
                    <field name="managed_retrieval_rate"/>
                    <field name="managed_shredding_rate"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="view_shredding_base_rates_form" model="ir.ui.view">
            <field name="name">shredding.base.rates.form</field>
            <field name="model">shredding.base.rates</field>
            <field name="arch" type="xml">
                <form string="Shredding Base Rates">
                    <header>
                        <button name="action_activate" type="object" string="Activate" class="oe_highlight" invisible="state == 'active'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="effective_date"/>
                                <field name="active"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="External Shredding Rates">
                                <group>
                                    <field name="external_per_bin_rate"/>
                                    <field name="external_service_call_rate"/>
                                </group>
                            </page>
                            <page string="Managed Inventory Rates">
                                <group>
                                    <field name="managed_retrieval_rate"/>
                                    <field name="managed_permanent_removal_rate"/>
                                    <field name="managed_shredding_rate"/>
                                    <field name="managed_service_call_rate"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_shredding_base_rates" model="ir.actions.act_window">
            <field name="name">Shredding Base Rates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shredding.base.rates</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Shredding Customer Rates Views -->
        <record id="view_shredding_customer_rates_tree" model="ir.ui.view">
            <field name="name">shredding.customer.rates.tree</field>
            <field name="model">shredding.customer.rates</field>
            <field name="arch" type="xml">
                <tree string="Customer Shredding Rates">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="effective_date"/>
                    <field name="expiry_date"/>
                    <field name="state"/>
                    <field name="discount_percentage"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="view_shredding_customer_rates_form" model="ir.ui.view">
            <field name="name">shredding.customer.rates.form</field>
            <field name="model">shredding.customer.rates</field>
            <field name="arch" type="xml">
                <form string="Customer Shredding Rates">
                    <header>
                        <button name="action_activate" type="object" string="Activate" class="oe_highlight" invisible="state == 'active'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="effective_date"/>
                                <field name="expiry_date"/>
                                <field name="active"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="discount_percentage"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="External Shredding Rates">
                                <group>
                                    <field name="use_custom_external_rates"/>
                                    <field name="external_per_bin_rate" invisible="not use_custom_external_rates"/>
                                    <field name="external_service_call_rate" invisible="not use_custom_external_rates"/>
                                </group>
                            </page>
                            <page string="Managed Inventory Rates">
                                <group>
                                    <field name="use_custom_managed_rates"/>
                                    <field name="managed_retrieval_rate" invisible="not use_custom_managed_rates"/>
                                    <field name="managed_permanent_removal_rate" invisible="not use_custom_managed_rates"/>
                                    <field name="managed_shredding_rate" invisible="not use_custom_managed_rates"/>
                                    <field name="managed_service_call_rate" invisible="not use_custom_managed_rates"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_shredding_customer_rates" model="ir.actions.act_window">
            <field name="name">Customer Shredding Rates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shredding.customer.rates</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_shredding_rates_root" name="Shredding Rates" parent="records_management.menu_records_configuration" sequence="30"/>

        <menuitem id="menu_shredding_base_rates" name="Base Rates" parent="menu_shredding_rates_root" action="action_shredding_base_rates" sequence="10"/>

        <menuitem id="menu_shredding_customer_rates" name="Customer Rates" parent="menu_shredding_rates_root" action="action_shredding_customer_rates" sequence="20"/>

    </data>
</odoo>
