    <record id="group_tsheets_manager" model="res.groups">
        <field name="name">TSheets Sync Manager</field>
        <field name="category_id" ref="qb_tsheet_sync.module_category_tsheets_sync"/>
        <field name="implied_ids" eval="[(4, ref('qb_tsheet_sync.group_tsheets_user')), (4, ref('hr.group_hr_manager'))]"/>
