<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="tsheets_employee_map_view_list" model="ir.ui.view">
    <field name="name">qb.tsheets.employee.map.view.list</field>
    <field name="model">qb.tsheets.employee.map</field>
    <field name="arch" type="xml">
    <list decoration-muted="active == False">
    <field name="config_id"/>
    <field name="employee_id"/>
    <field name="tsheets_user_id"/>
    <field name="last_synced_at"/>
    <field name="active" widget="boolean_toggle"/>
    </list>
    </field>
    </record>
    <record id="tsheets_employee_map_view_form" model="ir.ui.view">
    <field name="name">qb.tsheets.employee.map.view.form</field>
    <field name="model">qb.tsheets.employee.map</field>
    <field name="arch" type="xml">
    <form string="TSheets Employee Mapping">
    <header>
    <field name="active" widget="boolean_button" options="{'terminology': {'string_true': 'Active', 'string_false': 'Inactive'}}"/>
    </header>
    <sheet>
    <group>
    <group>
    <field name="config_id"/>
    <field name="employee_id"/>
    <field name="tsheets_user_id"/>
    </group>
    <group>
    <field name="last_synced_at" readonly="1"/>
    <field name="note"/>
    </group>
    </group>
    </sheet>
    </form>
    </field>
    </record>
    <record id="action_tsheets_employee_map" model="ir.actions.act_window">
    <field name="name">Employee Mappings</field>
    <field name="res_model">qb.tsheets.employee.map</field>
    <field name="view_mode">list,form</field>
    <field name="context">{'search_default_group_by_config_id': 1}</field>
    </record>
    <!-- Place Employee Mapping under TSheets Sync menu -->
    <menuitem id="menu_tsheets_employee_map" 
    name="Employee Mapping" 
    parent="qb_tsheet_sync.menu_tsheets_root" 
    action="action_tsheets_employee_map" 
    sequence="20" 
    groups="qb_tsheet_sync.group_tsheets_manager,hr.group_hr_manager,records_management.group_records_manager"/>
    </data>
</odoo>