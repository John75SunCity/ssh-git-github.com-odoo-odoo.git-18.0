[MASTER]
# Add Odoo addons paths
init-hook='import sys; sys.path.append("./addons"); sys.path.append("./records_management")'

[MESSAGES CONTROL]
# Disable import-related errors for Odoo
disable=
    import-error,
    no-name-in-module,
    no-member,
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    too-many-locals,
    too-many-arguments,
    too-many-branches,
    too-many-statements,
    too-many-instance-attributes,
    too-few-public-methods,
    protected-access,
    unused-argument,
    broad-except,
    invalid-name,
    line-too-long,
    consider-using-f-string,
    unused-import,
    unused-variable,
    redefined-outer-name,
    pointless-statement,
    fixme,
    logging-format-interpolation,
    consider-using-ternary,
    useless-object-inheritance,
    super-with-arguments,
    chained-comparison,
    literal-comparison,
    comparison-with-callable,
    singleton-comparison,
    unidiomatic-typecheck,
    consider-using-in,
    len-as-condition,
    unneeded-not,
    simplifiable-if-expression,
    consider-using-get,
    consider-iterating-dictionary,
    unnecessary-comprehension,
    consider-using-enumerate,
    consider-using-dict-items,
    unnecessary-lambda,
    unnecessary-lambda-assignment,
    wrong-import-position,
    wrong-import-order,
    ungrouped-imports,
    multiple-imports,
    wildcard-import,
    unused-wildcard-import,
    reimported,
    cyclic-import,
    relative-beyond-top-level,
    import-outside-toplevel,
    deprecated-module,
    attribute-defined-outside-init,
    access-member-before-definition,
    method-hidden,
    arguments-differ,
    signature-differs,
    abstract-method,
    useless-super-delegation,
    unnecessary-pass,
    duplicate-code,
    # Odoo-specific translation warnings (false positives for this project)
    odoo-translation-format,
    odoo-translation-interpolation,
    odoo-string-interpolation,
    odoo-translation-pattern,
    odoo-format-string-translation,
    odoo-translation-string-format,
    # Additional Odoo false positives
    odoo-model-field-warning,
    odoo-view-field-warning,
    odoo-security-warning,
    odoo-workflow-warning,
    odoo-method-warning,
    odoo-naming-convention-warning,
    odoo-model-name-warning,
    odoo-underscore-prefix-warning

# Specific modules to ignore for unused-import warnings (not fields!)
ignored-modules=odoo.http.request,json,time,datetime.timedelta

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

[DESIGN]
# Maximum number of arguments for function / method
max-args=10
# Maximum number of locals for function / method body
max-locals=20
# Maximum number of return / yield for function / method body
max-returns=8
# Maximum number of branch for function / method body
max-branches=15
# Maximum number of statements in function / method body
max-statements=60
# Maximum number of parents for a class (see R0901).
max-parents=10
# Maximum number of attributes for a class (see R0902).
max-attributes=15
# Minimum number of public methods for a class (see R0903).
min-public-methods=1
# Maximum number of public methods for a class (see R0904).
max-public-methods=25

[EXCEPTIONS]
# Exceptions that will emit a warning when being caught
overgeneral-exceptions=Exception
