{
    "Odoo.selectedProfile": "default",
    "chat.agent.maxRequests": 300,
    
    // GitHub Copilot Settings - Enhanced for Multi-Extension Odoo Integration
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "python": true,
        "xml": true,
        "json": true
    },
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.chat.localeOverride": "auto",
    
    // Enhanced Copilot workspace context settings with Odoo extension integration
    "github.copilot.chat.welcomeMessage": "always",
    "github.copilot.chat.followUps": "on", 
    "github.copilot.referencesInChat": true,
    "github.copilot.prompt.showPromptHints": true,
    "github.copilot.inlineSuggest.enable": true,
    
    // Enable Copilot for all relevant file types in Records Management with extension context
    "github.copilot.editor.enableCodeActions": true,
    "github.copilot.conversationAdditionalContextEnabled": true,
    
    // Force Copilot to reference workspace instructions + Odoo extensions + training materials
    "github.copilot.conversations.contextEnabled": true,
    "github.copilot.chat.experimentalContext": true,
    "github.copilot.chat.enableOdooPatterns": true,
    "github.copilot.chat.useExtensionContext": true,
    "github.copilot.advanced": {
        "debug.overrideEngine": "copilot-chat",
        "debug.useGitHub": true,
        "length": 8192,
        "temperature": "1",
        "top_p": "1",
        "listCount": 10,
        "odooContextEnabled": true,
        "extensionPackIntegration": true
    },
    
    // Odoo-specific VS Code settings to reduce noise from false positive warnings
    
    // Python language server settings
    "python.analysis.disabled": [
        "reportMissingImports",
        "reportMissingModuleSource",
        "reportAttributeAccessIssue"
    ],
    
    // Python analysis settings
    "python.analysis.autoImportCompletions": false,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.typeCheckingMode": "off",
    
    // Pylint specific ignores for Odoo false positives (basic configuration)
    // NOTE: Enhanced pylint configuration is defined in Records Management section below
    
    // Disable specific error codes for common Odoo patterns
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none",
        "reportUndefinedVariable": "none", 
        "reportAttributeAccessIssue": "none",
        "reportUnknownMemberType": "none",
        "reportGeneralTypeIssues": "none"
    },
    
    // Use custom typings for Odoo + Cybrosys Assista integration
    "python.analysis.stubPath": "./typings",
    "python.analysis.extraPaths": [
        "./typings",
        "./addons",
        "./records_management",
        "./records_management/models",
        "./records_management/views",
        "./records_management/controllers",
        "./records_management/wizards"
    ],
    
    // Configure flake8 if being used
    "python.linting.flake8Args": [
        "--ignore=F401,E501,W503",
        "--max-line-length=120"
    ],
    
    // Odoo extension settings
    "odoo.addonsPath": [
        "./addons",
        "./records_management"
    ],
    "odoo.configuration.addonsPath": [
        "./addons", 
        "./records_management"
    ],
    
    // Odoo LSP specific settings to reduce false positive warnings
    "odoo.diag_missing_imports": "none",  // Completely disable missing import warnings
    "odoo.ac_filter_model_names": true,
    "odoo.refresh_mode": "adaptive",
    "odoo.file_cache": true,
    "odoo.auto_refresh_delay": 1000,
    
    // Additional Odoo extension settings
    "odoo.linting.enable": false,  // Disable Odoo's own linting
    "odoo.hover.enable": true,
    "odoo.completion.enable": true,
    
    // Force override Odoo extension default settings
    "odoo.configuration.diag_missing_imports": "none",
    "odoo.workspace.diag_missing_imports": "none",
    
    // File associations for Odoo
    "files.associations": {
        "*.xml": "xml",
        "*.rng": "xml",
        "*.conf": "properties"
    },
    
    // Exclude patterns to reduce noise
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.*": false
    },
    
    // Problems panel configuration
    "problems.decorations.enabled": true,
    "problems.sortOrder": "severity",
    
    // ============================================
    // PYTHON FORMATTING - ODOO COMPATIBLE SETTINGS
    // ============================================
    
    // Disable automatic formatting to prevent Black/Autopep8 from breaking Odoo patterns
    "python.formatting.provider": "none",
    "python.formatting.autopep8Args": [
        "--ignore=E501,E701,W503", // Allow long lines and single-line if statements (common in Odoo)
        "--max-line-length=120"
    ],
    
    // Editor formatting settings for Python
    "[python]": {
        "editor.formatOnSave": false,  // CRITICAL: Disable auto-formatting on save
        "editor.formatOnPaste": false, // CRITICAL: Disable auto-formatting on paste
        "editor.formatOnType": false,  // CRITICAL: Disable auto-formatting while typing
        "editor.codeActionsOnSave": {
            "source.organizeImports": "never"  // Disable auto-import organization
        },
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.rulers": [80, 120]  // Odoo prefers 80 chars but allows up to 120
    },
    
    // XML formatting for Odoo (preserve existing structure)
    "[xml]": {
        "editor.formatOnSave": false,
        "editor.formatOnPaste": false,
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    
    // Global editor settings to prevent auto-formatting
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    
    // Cybrosys Assista extension settings for Odoo 18.0 - ENHANCED FOR RECORDS MANAGEMENT
    "cybrosys.assista.odooVersion": "18.0",
    "cybrosys.assista.enableCodeCompletion": true,
    "cybrosys.assista.enableDiagnostics": true,
    "cybrosys.assista.enableSnippets": true,
    "cybrosys.assista.enableModelValidation": true,
    "cybrosys.assista.enableFieldValidation": true,
    "cybrosys.assista.enableViewValidation": true,
    "cybrosys.assista.enableInheritanceValidation": true,
    "cybrosys.assista.enableWorkflowValidation": true,
    "cybrosys.assista.validateOnSave": true,
    "cybrosys.assista.showCompatibilityWarnings": true,
    "cybrosys.assista.enableCodeStandardWarnings": true,
    "cybrosys.assista.enableLinting": true,
    "cybrosys.assista.strictOdooCompliance": true,
    "cybrosys.assista.showPerformanceWarnings": true,
    "cybrosys.assista.enableSecurityWarnings": true,
    "cybrosys.assista.recordsManagementPath": "./records_management",
    "cybrosys.assista.customModulePaths": [
        "./records_management",
        "./records_management/models",
        "./records_management/views",
        "./records_management/controllers"
    ],
    
    // ============================================
    // ENHANCED ODOO AI AGENT INTEGRATION SETTINGS
    // ============================================
    
    // AI Assistant Priority Configuration
    // 1. GitHub Copilot: Primary AI development assistant with enhanced Odoo context
    // 2. Cybrosys Assista: Odoo 18.0 compatibility validation
    // 3. Odoo Extension Pack: Professional-grade development patterns
    // 4. Arkademy Training: Advanced learning and pattern recognition
    
    // Odoo Extension Pack Integration
    "odoo.extensionPack.enableAdvancedFeatures": true,
    "odoo.extensionPack.aiIntegration": true,
    "odoo.extensionPack.enhancedIntelliSense": true,
    "odoo.extensionPack.professionalPatterns": true,
    
    // Arkademy Training Integration for AI Learning
    "arkademy.enableTrainingContext": true,
    "arkademy.aiLearningMode": true,
    "arkademy.advancedPatterns": true,
    "arkademy.professionalWorkflows": true,
    
    // Enhanced Python analysis for triple-AI validation
    "python.analysis.exclude": [
        "**/__pycache__",
        "**/.*",
        "development-tools/backups/**",
        "testing-workspace/backups/**"
    ],
    
    // Cybrosys Assista integration paths for Records Management
    // Records Management validation workflow
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--disable=import-error",
        "--disable=no-name-in-module", 
        "--disable=no-member",
        "--disable=missing-function-docstring",
        "--disable=missing-class-docstring",
        "--disable=missing-module-docstring",
        "--disable=line-too-long",
        "--disable=too-few-public-methods",
        "--disable=too-many-arguments",
        "--disable=too-many-instance-attributes",
        "--disable=too-many-locals",
        "--disable=too-many-branches",
        "--disable=too-many-statements",
        "--disable=broad-except",
        "--disable=unused-argument",
        "--disable=redefined-outer-name",
        "--disable=consider-using-f-string",
        "--init-hook=import sys; sys.path.append('./addons'); sys.path.append('./records_management')",
        "--load-plugins=pylint_odoo",
        "--disable=C0103,C0111,R0903,R0913,W0613,W0622",
        "--enable=odoo-addons-relative-import"
    ],
    
    // Search settings for Records Management patterns
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "development-tools/backups/**": true,
        "archive/**": true,
        "**/.git": true
    },
    
    // Code snippets for Odoo Records Management patterns
    "editor.snippetSuggestions": "top",
    "editor.tabCompletion": "on",
    
    // Custom file watchers for Records Management
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/__pycache__/**": true,
        "development-tools/backups/**": true
    },
    
    // ============================================
    // ADDITIONAL ODOO CODING STANDARDS
    // ============================================
    
    // Enforce consistent code style for Odoo patterns
    "editor.rulers": [80, 120], // Odoo prefers 80 chars, allows up to 120
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    
    // Code completion settings for Odoo development
    "python.autoComplete.extraPaths": [
        "./addons",
        "./records_management",
        "./records_management/models",
        "./typings/odoo"
    ],
    
    // Bracket pair colorization for complex Odoo structures
    "editor.bracketPairColorization.enabled": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    
    // ============================================
    // DEVELOPMENT & TESTING SPECIFIC SETTINGS
    // ============================================
    
    // Test discovery settings
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "records_management/tests",
        "testing-workspace"
    ],
    
    // Debug configuration for Odoo development
    "python.defaultInterpreterPath": "/usr/local/bin/python3",
    
    // Git settings optimized for Records Management workflow
    "git.ignoreLimitWarning": true,
    "git.fetchOnPull": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    
    // Terminal settings for development workflow
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "/bin/bash",
            "args": []
        }
    },
    
    // ============================================
    // INTELLIGENT SEARCH AND CODE NAVIGATION
    // ============================================
    
    // Optimized search for large Odoo projects
    "search.smartCase": true,
    "search.globalFindClipboard": false,
    "search.seedWithNearestWord": true,
    
    // Symbol search optimization
    "outline.collapseItems": "alwaysCollapse",
    "breadcrumbs.enabled": true,
    "breadcrumbs.symbolPath": "on",
    
    // ============================================
    // TRANSLATION AND INTERNATIONALIZATION
    // ============================================
    
    // Custom regex patterns for translation validation
    "problems.showCurrentInStatus": true,
    
    // Extension recommendations for Odoo development
    "extensions.ignoreRecommendations": false,
    
    // ============================================
    // PERFORMANCE OPTIMIZATIONS
    // ============================================
    
    // Reduce memory usage for large Records Management codebase
    "typescript.disableAutomaticTypeAcquisition": true,
    "files.hotExit": "onExit",
    "editor.semanticHighlighting.enabled": true,
    
    // Optimize for large file handling
    "editor.largeFileOptimizations": true,
    "diffEditor.maxComputationTime": 0,
    
    // ============================================
    // RECORDS MANAGEMENT WORKSPACE PATHS
    // ============================================
    
    // Quick access to common Records Management directories
    "workbench.quickOpen.includeHistory": true,
    
    // Custom keyboard shortcuts context
    "workbench.commandPalette.history": 50,
    
    // Auto-save for development workflow
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 2000,
    "editor.guides.indentation": true,
    "editor.guides.highlightActiveIndentation": true
}