{
    "github.copilot.advanced.instructionsFile": ".github/copilot-instructions.md",
    "grok.integration.instructionsFile": ".github/copilot-instructions.md",
    "github.copilot.selectedCompletionModel": "Grok Code Fast 1",
    "github.copilot.nextEditSuggestions.enabled": true,
    "github.copilot.chat.codesearch.enabled": true,
    "github.copilot.chat.agent.thinkingTool": true,
    "github.copilot.chat.edits.temporalContext.enabled": true,
    "github.copilot.chat.enableRetryAfterFilteredResponse": true,
    "odoo.selectedProfile": "",
    "odoo.serverLogLevel": "error",
    "odooServer.trace.server": "off",
    "odoo.disablePythonLanguageServerPopup": true,
    "odoo.disablePythonLanguageServerIntegration": true,
    "odoo.addonsPath": "./records_management,./addons",
    "odoo.pythonPath": "/usr/bin/python3",
    "odoo.disableOdooExtensionWarnings": true,
    "odoo.disableTranslationWarnings": true,
    "odoo.ignoreTranslationFalsePositives": true,
    "odoo.enableAdvancedIntelliSense": true,
    "odoo.disableNamingConventionWarnings": true,
    "odoo.disableModelFieldWarnings": true,
    "odoo.disableViewFieldWarnings": true,
    "odoo.disableSecurityWarnings": true,
    "odoo.disableWorkflowWarnings": true,
    "odoo.disableMethodWarnings": true,
    "odoo.disableTranslationPatternWarnings": true,
    "odoo.disableModelNameWarnings": true,
    "odoo.disableStringInterpolationWarnings": true,
    "odoo.disableUnderscorePrefixWarnings": true,
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoSearchPaths": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.stubPath": "./typings",
    "python.analysis.extraPaths": [
        "./records_management",
        "./records_management_fsm",
        "./addons"
    ],
    "ruff.enable": false,
    "ruff.organizeImports": false,
    "ruff.fixAll": false,
    "ruff.lint.run": "onType",
    "ruff.format.args": [],
    "ruff.lint.args": [],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length", "120"],
    "black-formatter.args": ["--line-length", "120"],
    "isort.args": ["--profile", "black", "--line-length", "120"],
    "python.sortImports.args": ["--profile", "black", "--line-length", "120"],
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--config-file",
        "mypy.ini",
        "--python-version",
        "3.9",
        "--ignore-missing-imports",
        "--no-strict-optional",
        "--no-error-summary",
        "--show-error-codes",
        "--warn-unused-ignores"
    ],
    "python.linting.banditEnabled": true,
    "python.linting.banditArgs": ["-c", "pyproject.toml"],
    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "never",
        "source.fixAll.ruff": "explicit",
        "source.fixAll": "never"
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "never",
            "source.fixAll.ruff": "explicit"
        }
    },
    "[xml]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.defaultFormatter": "DotJoshJohnson.xml"
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "files.associations": {
        "*.py": "python",
        "*.xml": "xml",
        "*.csv": "plaintext",
        "*.js": "javascript",
        "*.ts": "typescript",
        "*.json": "json",
        "*.yaml": "yaml",
        "*.yml": "yaml",
        "*.md": "markdown"
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 3000,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "security.workspace.trust.enabled": true,
    "problems.showCurrentInStatus": true,
    "problems.decorations.enabled": true,
    "editor.renderValidationDecorations": "editableOnly",
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.allowForcePush": false,
    "git.autoRepositoryDetection": true,
    "git.autoStash": false,
    "git.enableCommitSigning": false,
    "git.fetchOnPull": true,
    "git.pruneOnFetch": false,
    "git.pullTags": true,
    "git.showInlineOpenFileAction": true,
    "git.showProgress": true,
    "git.supportCancellation": true,
    "git.useCommitInputAsStashMessage": true,
    "git.enabled": true,
    "git.path": "/usr/local/bin/git",
    "git.defaultCloneDirectory": "~/Documents",
    "git.openRepositoryInParentFolders": "always",
    "git.repositoryScanMaxDepth": 1,
    "scm.alwaysShowRepositories": true,
    "scm.autoReveal": true,
    "scm.defaultViewMode": "tree",
    "scm.repositories.visible": 10,
    "scm.showChangesSummary": true,
    "scm.alwaysShowActions": true,
    "scm.inputFontFamily": "default",
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}/records_management:${workspaceFolder}/records_management_fsm:${workspaceFolder}/addons",
        "PYTHONUNBUFFERED": "1"
    },
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "python.pythonPath": "/usr/bin/python3",
    "extensions.ignoreRecommendations": false,
    "odoo-shortcuts.openFiles": true,
    "odoo-shortcuts.sites": [
        {
            "label": "Odoo 18.0 Documentation",
            "url": "https://www.odoo.com/documentation/18.0/"
        },
        {
            "label": "Odoo Developer Documentation",
            "url": "https://www.odoo.com/documentation/18.0/developer.html"
        },
        {
            "label": "Odoo ORM Documentation",
            "url": "https://www.odoo.com/documentation/18.0/developer/reference/backend/orm.html"
        },
        {
            "label": "Odoo Views Documentation",
            "url": "https://www.odoo.com/documentation/18.0/developer/reference/user_interface/view_records.html"
        },
        {
            "label": "Records Management GitHub",
            "url": "https://github.com/John75SunCity/ssh-git-github.com-odoo-odoo.git-18.0"
        }
    ],
    "workbench.colorCustomizations": {
        "editorError.foreground": "#ff6b6b",
        "editorWarning.foreground": "#ffd93d",
        "editorInfo.foreground": "#4ecdc4",
        "editorHint.foreground": "#a8e6cf"
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/venv": true,
        "**/venv312": true,
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/development-tools": true,
        "**/testing-workspace": true,
        "**/backup": true,
        "**/*.pyc": true,
        "**/.git": true,
        "**/.vscode": true
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/*.pyc": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": true,
    "python.testing.pytestArgs": [
        "records_management",
        "-v",
        "--tb=short",
        "--strict-markers"
    ],
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./records_management",
        "-p",
        "*test*.py"
    ],
    "coverage-gutters.showLineRate": true,
    "coverage-gutters.showRuler": true,
    "coverage-gutters.showGutter": true,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "information",
        "reportMissingModuleSource": "information",
        "reportUnknownMemberType": "information",
        "reportUnknownArgumentType": "information",
        "reportUnknownParameterType": "information",
        "reportGeneralTypeIssues": "information",
        "reportOptionalMemberAccess": "information",
        "reportAttributeAccessIssue": "information",
        "reportUnusedImport": "information",
        "reportUnusedVariable": "information",
        "reportUndefinedVariable": "information",
        "reportOptionalSubscript": "information",
        "reportUnknownVariableType": "information",
        "reportIncompatibleMethodOverride": "information",
        "reportInconsistentConstructor": "information",
        "reportUninitializedInstanceVariable": "information",
        "reportSelfClsParameterName": "information",
        "reportImplicitStringConcatenation": "information",
        "reportUnnecessaryIsInstance": "information",
        "reportAssertAlwaysTrue": "information",
        "reportConstantRedefinition": "information",
        "reportFunctionMemberAccess": "information",
        "reportInvalidStringEscapeSequence": "information",
        "reportMissingTypeArgument": "information",
        "reportCallInDefaultInitializer": "information",
        "reportUnnecessaryComparison": "information",
        "reportImplicitOverride": "information",
        "reportUnknownLambdaType": "information",
        "reportMissingSuperCall": "information"
    },
    "notifications.enabled": true,
    "notifications.showWarnings": true,
    "notifications.showErrors": true,
    "editor.largeFileOptimizations": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/__pycache__/**": true,
        "**/.mypy_cache/**": true,
        "**/.pytest_cache/**": true,
        "**/venv/**": true,
        "**/venv312/**": true,
        "**/development-tools/**": true,
        "**/backup/**": true
    },
    "task.allowAutomaticTasks": "on",
    "task.quickOpen.detail": true,
    "task.quickOpen.skip": false,
    "Odoo.selectedProfile": "default",
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": false,
    "editor.wordWrap": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": true,
