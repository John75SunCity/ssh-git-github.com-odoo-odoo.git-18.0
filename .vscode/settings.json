{
    "github.copilot.advanced.instructionsFile": ".github/copilot-instructions.md",
    "grok.integration.instructionsFile": ".github/copilot-instructions.md",
    "odoo.selectedProfile": "",
    "odoo.serverLogLevel": "error",
    "odooServer.trace.server": "off",
    "odoo.disablePythonLanguageServerPopup": true,

    // === PYTHON ANALYSIS SETTINGS ===
    "python.analysis.disabled": [
        "reportMissingImports",
        "reportMissingModuleSource",
        "reportAttributeAccessIssue",
        "reportUnusedImport",
        "reportUnusedVariable",
        "reportUndefinedVariable",
        "reportGeneralTypeIssues",
        "reportOptionalMemberAccess",
        "reportOptionalSubscript",
        "reportUnknownMemberType",
        "reportUnknownArgumentType",
        "reportUnknownParameterType",
        "reportUnknownVariableType",
        "reportUnknownLambdaType",
        "reportIncompatibleMethodOverride",
        "reportIncompatibleVariableOverride",
        "reportInconsistentConstructor",
        "reportOverlappingOverload",
        "reportMissingSuperCall",
        "reportUninitializedInstanceVariable",
        "reportSelfClsParameterName",
        "reportImplicitStringConcatenation",
        "reportUnnecessaryIsInstance",
        "reportUnnecessaryCast",
        "reportAssertAlwaysTrue",
        "reportConstantRedefinition",
        "reportFunctionMemberAccess",
        "reportInvalidStringEscapeSequence",
        "reportUnknownParameterType",
        "reportMissingTypeArgument",
        "reportInvalidTypeVarUse",
        "reportCallInDefaultInitializer",
        "reportUnnecessaryComparison",
        "reportUnnecessaryContains",
        "reportImplicitOverride",
        "reportShadowedImports"
    ],

    // === PYLANCE SPECIFIC SETTINGS ===
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.autoSearchPaths": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.stubPath": "./typings",
    "python.analysis.extraPaths": [
        "./records_management",
        "./addons",
        "./typings"
    ],

    // === ODOO-SPECIFIC PYLSP SETTINGS ===
    "pylsp.plugins.pylint.enabled": false,
    "pylsp.plugins.flake8.enabled": false,
    "pylsp.plugins.pycodestyle.enabled": false,
    "pylsp.plugins.pydocstyle.enabled": false,
    "pylsp.plugins.mccabe.enabled": false,
    "pylsp.plugins.pyflakes.enabled": false,
    "pylsp.configurationSources": [],

    // === PROBLEM MATCHER IGNORE PATTERNS ===
    "problems.showCurrentInStatus": false,

    // === SPECIFIC ODOO ERROR SUPPRESSION ===
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none",
        "reportMissingModuleSource": "none",
        "reportUnknownMemberType": "none",
        "reportUnknownArgumentType": "none",
        "reportUnknownParameterType": "none",
        "reportGeneralTypeIssues": "none",
        "reportOptionalMemberAccess": "none",
        "reportAttributeAccessIssue": "none",
        "reportUnusedImport": "none",
        "reportUnusedVariable": "none",
        "reportUndefinedVariable": "none",
        "reportOptionalSubscript": "none",
        "reportUnknownVariableType": "none",
        "reportIncompatibleMethodOverride": "none",
        "reportInconsistentConstructor": "none",
        "reportUninitializedInstanceVariable": "none",
        "reportSelfClsParameterName": "none",
        "reportImplicitStringConcatenation": "none",
        "reportUnnecessaryIsInstance": "none",
        "reportAssertAlwaysTrue": "none",
        "reportConstantRedefinition": "none",
        "reportFunctionMemberAccess": "none",
        "reportInvalidStringEscapeSequence": "none",
        "reportMissingTypeArgument": "none",
        "reportCallInDefaultInitializer": "none",
        "reportUnnecessaryComparison": "none",
        "reportImplicitOverride": "none"
    },
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.languageServer": "Pylance",

    // === ODOO EXTENSION SETTINGS ===
    "odoo.addonsPath": "./records_management,./addons",
    "odoo.pythonPath": "/workspaces/ssh-git-github.com-odoo-odoo.git-18.0/.venv/bin/python",
    "odoo.disableOdooExtensionWarnings": true,
    "odoo.disableTranslationWarnings": true,
    "odoo.ignoreTranslationFalsePositives": true,
    "odoo.enableAdvancedIntelliSense": true,
    "odoo.disableNamingConventionWarnings": true,
    "odoo.disableModelFieldWarnings": true,
    "odoo.disableViewFieldWarnings": true,
    "odoo.disableSecurityWarnings": true,
    "odoo.disableWorkflowWarnings": true,
    "odoo.disableMethodWarnings": true,

    // === ADDITIONAL WARNING SUPPRESSION ===
    "python.analysis.logLevel": "Error",
    "python.linting.ignorePatterns": [
        "**/models/**/*.py",
        "**/controllers/**/*.py",
        "**/wizards/**/*.py",
        "**/views/**/*.xml"
    ],

    // === PYLINT CONFIGURATION ===
    "python.linting.pylintArgs": [
        "--rcfile=.pylintrc",
        "--disable=import-error,no-name-in-module,no-member,unused-import,unused-variable,missing-docstring,line-too-long,too-many-locals,too-many-arguments,too-few-public-methods,too-many-instance-attributes,consider-using-f-string,consider-using-with,broad-except,unused-argument,redefined-outer-name,invalid-name,pointless-statement,fixme,logging-format-interpolation,consider-using-ternary,useless-object-inheritance,super-with-arguments,chained-comparison,literal-comparison,comparison-with-callable,singleton-comparison,unidiomatic-typecheck,consider-using-in,len-as-condition,unneeded-not,simplifiable-if-expression,consider-using-get,consider-iterating-dictionary,unnecessary-comprehension,consider-using-enumerate,consider-using-dict-items,unnecessary-lambda,unnecessary-lambda-assignment",
        "--extension-pkg-whitelist=odoo",
        "--init-hook=import sys; sys.path.append('./records_management'); sys.path.append('./addons')"
    ],
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./records_management",
        "-p",
        "*test.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,

    // === FORMATTER PROTECTION FOR ODOO ===
    "python.formatting.provider": "none",
    "python.formatting.autopep8Args": [],
    "python.formatting.blackArgs": [],
    "python.formatting.yapfArgs": [],
    "python.defaultInterpreterPath": "/workspaces/ssh-git-github.com-odoo-odoo.git-18.0/.venv/bin/python",

    // === DISABLE ALL AUTO-FORMATTERS ===
    "autopep8.args": ["--disable"],
    "black-formatter.args": ["--check", "--diff"],
    "yapf.args": ["--diff"],
    "ruff.format.args": ["--check", "--diff"],
    "python.analysis.autoFormatStrings": false,
    "python.analysis.autoImportCompletions": false,

    // === AUTO-SAVE AND FORMATTING CONTROL ===
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "never",
        "source.fixAll": "never"
    },

    // === COMPREHENSIVE FORMATTER DISABLE ===
    "editor.defaultFormatter": null,
    "workbench.editor.enablePreview": false,
    "diffEditor.ignoreTrimWhitespace": true,
    "diffEditor.renderSideBySide": true,

    // === DISABLE ALL POSSIBLE AUTO-FORMATTERS ===
    "python.terminal.activateEnvironment": false,
    "python.terminal.executeInFileDir": false,

    // === ADDITIONAL FORMATTER PROTECTION ===
    "python.formatting.blackPath": "",
    "python.formatting.autopep8Path": "",
    "python.formatting.yapfPath": "",
    "python.linting.flake8Enabled": false,
    "python.linting.pycodestyleEnabled": false,
    "python.linting.prospectorEnabled": false,
    "python.linting.pydocstyleEnabled": false,

    // === ODOO-SPECIFIC INDENTATION ===
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.formatOnSave": false,
        "editor.formatOnPaste": false,
        "editor.formatOnType": false,
        "editor.autoIndent": "keep",
        "editor.trimAutoWhitespace": false
    },

    // === XML FORMATTING FOR ODOO VIEWS ===
    "[xml]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.formatOnSave": false,
        "editor.formatOnPaste": false,
        "editor.autoIndent": "keep"
    },

    // === FILE ASSOCIATIONS ===
    "files.associations": {
        "*.py": "python",
        "*.xml": "xml",
        "*.csv": "plaintext"
    },

    // === WORKSPACE SPECIFIC OVERRIDES ===
    "workbench.colorCustomizations": {
        "editorError.foreground": "#ff0000",
        "editorWarning.foreground": "#00000000",
        "editorInfo.foreground": "#00000000"
    },

    // === NOTIFICATION CONTROL ===
    "problems.decorations.enabled": false,
    "editor.renderValidationDecorations": "off",

    // === AUTO-SAVE PROTECTION ===
    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": false,
    "files.trimFinalNewlines": false,
    "files.insertFinalNewline": false,
    "Odoo.selectedProfile": "default"
}
