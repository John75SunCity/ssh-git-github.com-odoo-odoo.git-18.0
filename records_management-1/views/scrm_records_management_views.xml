<record id="view_pickup_request_form" model="ir.ui.view">
    <field name="name">pickup.request.form</field>
    <field name="model">pickup.request</field>
    <field name="arch" type="xml">
        <form string="Pickup Request">
            <sheet>
                <group>
                    <field name="customer_id"/>
                    <field name="request_date"/>
                    <field name="state" readonly="1"/>
                    <field name="item_ids" widget="many2many_tags"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="view_pickup_request_tree" model="ir.ui.view">
    <field name="name">pickup.request.tree</field>
    <field name="model">pickup.request</field>
    <field name="arch" type="xml">
        <tree string="Pickup Requests">
            <field name="customer_id"/>
            <field name="request_date"/>
            <field name="state"/>
        </tree>
    </field>
</record>

<record id="view_shredding_service_form" model="ir.ui.view">
    <field name="name">shredding.service.form</field>
    <field name="model">shredding.service</field>
    <field name="arch" type="xml">
        <form string="Shredding Service">
            <sheet>
                <group>
                    <field name="customer_id"/>
                    <field name="service_date"/>
                    <field name="service_type"/>
                    <field name="bin_ids" widget="many2many_tags"/>
                    <field name="box_quantity"/>
                    <field name="shredded_box_ids" widget="many2many_tags"/>
                    <field name="audit_barcodes"/>
                    <field name="total_charge" readonly="1"/>
                    <field name="timestamp" readonly="1"/>
                    <field name="latitude"/>
                    <field name="longitude"/>
                    <field name="attachment_ids" widget="many2many_list"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="view_shredding_service_tree" model="ir.ui.view">
    <field name="name">shredding.service.tree</field>
    <field name="model">shredding.service</field>
    <field name="arch" type="xml">
        <tree string="Shredding Services">
            <field name="customer_id"/>
            <field name="service_date"/>
            <field name="service_type"/>
            <field name="total_charge"/>
        </tree>
    </field>
</record>

<record id="action_pickup_request" model="ir.actions.act_window">
    <field name="name">Pickup Requests</field>
    <field name="res_model">pickup.request</field>
    <field name="view_mode">tree,form</field>
</record>

<record id="action_shredding_service" model="ir.actions.act_window">
    <field name="name">Shredding Services</field>
    <field name="res_model">shredding.service</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="menu_pickup_request" name="Pickup Requests" action="action_pickup_request" parent="records_management.menu_root"/>
<menuitem id="menu_shredding_service" name="Shredding Services" action="action_shredding_service" parent="records_management.menu_root"/>