<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Location 3D Views - Placeholder -->
    
    <!-- Inherit stock.location form to add 3D view button -->
    <record id="view_location_form_3d_inherit" model="ir.ui.view">
        <field name="name">stock.location.form.3d.inherit</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <header>
                    <button name="action_open_in_3d_view" 
                            type="object" 
                            string="3D View" 
                            class="btn-primary"
                            invisible="not is_records_location"/>
                </header>
            </xpath>
        </field>
    </record>
    
</odoo>
