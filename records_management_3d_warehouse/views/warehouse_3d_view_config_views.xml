<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Warehouse 3D View Config Views - Placeholder -->
    
    <!-- List View -->
    <record id="view_warehouse_3d_view_config_tree" model="ir.ui.view">
        <field name="name">warehouse.3d.view.config.tree</field>
        <field name="model">warehouse.3d.view.config</field>
        <field name="arch" type="xml">
            <list string="3D View Configurations">
                <field name="name"/>
                <field name="blueprint_id"/>
                <field name="view_mode"/>
                <field name="color_scheme"/>
            </list>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_warehouse_3d_view_config_form" model="ir.ui.view">
        <field name="name">warehouse.3d.view.config.form</field>
        <field name="model">warehouse.3d.view.config</field>
        <field name="arch" type="xml">
            <form string="3D View Configuration">
                <header>
                    <button name="action_open_3d_view" 
                            type="object" 
                            string="Open 3D View" 
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="blueprint_id"/>
                            <field name="is_default"/>
                        </group>
                        <group>
                            <field name="view_mode"/>
                            <field name="color_scheme"/>
                            <field name="show_grid"/>
                            <field name="show_legend"/>
                        </group>
                    </group>
                    <group string="Filters">
                        <field name="location_ids" widget="many2many_tags"/>
                        <field name="customer_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Display Options">
                        <field name="show_warehouse_structure"/>
                        <field name="show_empty_locations"/>
                        <field name="camera_angle"/>
                        <field name="camera_distance"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_warehouse_3d_view_config" model="ir.actions.act_window">
        <field name="name">3D View Configurations</field>
        <field name="res_model">warehouse.3d.view.config</field>
        <field name="view_mode">list,form</field>
    </record>
    
</odoo>
