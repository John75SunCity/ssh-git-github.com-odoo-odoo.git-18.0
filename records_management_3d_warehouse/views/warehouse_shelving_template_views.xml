<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Warehouse Shelving Template Views - Placeholder -->

    <!-- Tree View -->
    <record id="view_warehouse_shelving_template_tree" model="ir.ui.view">
        <field name="name">warehouse.shelving.template.tree</field>
        <field name="model">warehouse.shelving.template</field>
        <field name="arch" type="xml">
            <tree string="Shelving Templates">
                <field name="name"/>
                <field name="blueprint_id"/>
                <field name="total_capacity"/>
                <field name="locations_generated"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_warehouse_shelving_template_form" model="ir.ui.view">
        <field name="name">warehouse.shelving.template.form</field>
        <field name="model">warehouse.shelving.template</field>
        <field name="arch" type="xml">
            <form string="Shelving Template">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="blueprint_id"/>
                    </group>
                    <group>
                        <group string="Dimensions">
                            <field name="shelving_width"/>
                            <field name="shelving_depth"/>
                            <field name="shelving_height"/>
                            <field name="shelf_count"/>
                        </group>
                        <group string="Capacity">
                            <field name="total_capacity"/>
                            <field name="positions_per_shelf"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_warehouse_shelving_template" model="ir.actions.act_window">
        <field name="name">Shelving Templates</field>
        <field name="res_model">warehouse.shelving.template</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
